<layout version="1.0.0.0">
<!--
Product view
-->
    <catalog_product_view translate="label">
        <reference name="head">
            <action method="addCss"><file>Social_Facebook::css/facebook.css</file></action>
        </reference>
        <reference name="product.info.extrahint">
            <block type="Social_Facebook_Block_Start" name="social_facebook_start" >
                <block type="Social_Facebook_Block_Action" name="social_facebook_action" as="social_facebook_action" template="action.phtml" />
                <block type="Social_Facebook_Block_Box" name="social_facebook_box" as="social_facebook_box" template="box.phtml" />
            </block>
        </reference>
    </catalog_product_view>

    <review_product_list translate="label">
        <reference name="head">
            <action method="addCss"><file>Social_Facebook::css/facebook.css</file></action>
        </reference>
        <reference name="product.info.extrahint">
            <block type="Social_Facebook_Block_Start" name="social_facebook_start" >
                <block type="Social_Facebook_Block_Action" name="social_facebook_action" as="social_facebook_action" template="action.phtml" />
                <block type="Social_Facebook_Block_Box" name="social_facebook_box" as="social_facebook_box" template="box.phtml" />
            </block>
        </reference>
    </review_product_list>

    <facebook_index_page translate="label" type="page" parent="cms_page_view">
        <label>Facebook Head</label>
        <block type="Social_Facebook_Block_Head" name="social_facebook_head" template="page.phtml" />
    </facebook_index_page>
</layout>
