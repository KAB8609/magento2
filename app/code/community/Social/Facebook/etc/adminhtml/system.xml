<config>
    <system>
        <tab id="social" translate="label" module="Social_Facebook" sortOrder="300">
            <label>Social</label>
        </tab>
        <section id="facebook" translate="label" module="Social_Facebook" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Facebook</label>
            <tab>social</tab>
            <resource>Social_Facebook::facebook</resource>
            <group id="config" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Facebook Config</label>
                <field id="enabled" translate="label" module="Social_Facebook" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Enable Facebook on Frontend</label>
                    <source_model>Mage_Backend_Model_Config_Source_Yesno</source_model>
                </field>
                <field id="name" translate="label" module="Social_Facebook" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>App Namespace</label>
                </field>
                <field id="id" translate="label" module="Social_Facebook" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>App ID</label>
                </field>
                <field id="secret" translate="label" module="Social_Facebook" type="text" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>App Secret</label>
                </field>
                <field id="otype" translate="label" module="Social_Facebook" type="text" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Object Type</label>
                </field>
                <field id="action" translate="comment" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Actions Settings</label>
                    <frontend_model>Social_Facebook_Block_Adminhtml_Facebuttons</frontend_model>
                    <backend_model>Social_Facebook_Model_Facebuttons</backend_model>
                    <comment>Add Actions that You Want.</comment>
                </field>
            </group>
        </section>
    </system>
</config>