<config>
    <modules>
        <Mage_LoadTest>
            <version>0.1.0</version>
            <depends>
                <Mage_Catalog />
                <Mage_Customer />
                <Mage_Sales />
                <Mage_Tag />
                <Mage_Review />
            </depends>
        </Mage_LoadTest>
    </modules>

    <default>
        <dev>
            <loadtest>
                <status>0</status>
                <key>q1W2r3</key>
            </loadtest>
        </dev>
    </default>

    <global>
        <models>
            <loadtest>
                <class>Mage_LoadTest_Model</class>
            </loadtest>
        </models>

        <resource>
            <connection>
                <types>
                    <pdo_mysql>
                        <class>Mage_LoadTest_Model_Resource_Type_Db_Pdo_Mysql</class>
                    </pdo_mysql>
                </types>
            </connection>
        </resource>

        <helpers>
            <loadtest>
                <class>Mage_LoadTest_Helper</class>
            </loadtest>
        </helpers>
    </global>

    <frontend>
        <models>
            <loadtest>
                <class>Mage_LoadTest_Model_LoadTest</class>
            </loadtest>
        </models>

        <routers>
            <loadtest>
                <use>standard</use>
                <args>
                    <module>Mage_LoadTest</module>
                    <frontName>loadtest</frontName>
                </args>
            </loadtest>
        </routers>

        <translate>
            <modules>
                <Mage_LoadTest>
                    <files>
                        <default>Mage_LoadTest.csv</default>
                    </files>
                </Mage_LoadTest>
            </modules>
        </translate>

        <events>
            <controller_action_predispatch>
                <observers>
                    <loadtest>
                        <type>singleton</type>
                        <class>loadtest/observer</class>
                        <method>preDispatch</method>
                    </loadtest>
                </observers>
            </controller_action_predispatch>
            <controller_action_postdispatch>
                <observers>
                    <loadtest>
                        <type>singleton</type>
                        <class>loadtest/observer</class>
                        <method>postDispatch</method>
                    </loadtest>
                </observers>
            </controller_action_postdispatch>
            <core_block_abstract_prepare_layout_before>
                <observers>
                    <loadtest>
                        <type>singleton</type>
                        <class>loadtest/observer</class>
                        <method>prepareLayoutBefore</method>
                    </loadtest>
                </observers>
            </core_block_abstract_prepare_layout_before>
            <core_block_abstract_prepare_layout_after>
                <observers>
                    <loadtest>
                        <type>singleton</type>
                        <class>loadtest/observer</class>
                        <method>prepareLayoutAfter</method>
                    </loadtest>
                </observers>
            </core_block_abstract_prepare_layout_after>
            <core_block_abstract_to_html_before>
                <observers>
                    <loadtest>
                        <type>singleton</type>
                        <class>loadtest/observer</class>
                        <method>toHtmlBefore</method>
                    </loadtest>
                </observers>
            </core_block_abstract_to_html_before>
            <core_block_abstract_to_html_after>
                <observers>
                    <loadtest>
                        <type>singleton</type>
                        <class>loadtest/observer</class>
                        <method>toHtmlAfter</method>
                    </loadtest>
                </observers>
            </core_block_abstract_to_html_after>
        </events>
    </frontend>
</config>