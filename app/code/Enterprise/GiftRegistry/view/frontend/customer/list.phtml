<div class="page-title">
    <h1><?php echo Mage::helper('Enterprise_GiftRegistry_Helper_Data')->__('Gift Registry'); ?></h1>
</div>
<?php $entityCollection = $this->getEntityCollection(); ?>
<?php echo $this->getMessagesBlock()->getGroupedHtml();?>

<?php if ($entityCollection->getSize()):?>
    <?php echo $this->getChildHtml('pager') ?>
    <table class="data-table" id="giftregistry-table">
        <col />
        <col width="1" />
        <col />
        <col width="1" />
        <thead>
            <tr>
                <th><?php echo Mage::helper('Enterprise_GiftRegistry_Helper_Data')->__('Event'); ?></th>
                <th><span class="nobr"><?php echo Mage::helper('Enterprise_GiftRegistry_Helper_Data')->__('Created On'); ?></span></th>
                <th><?php echo Mage::helper('Enterprise_GiftRegistry_Helper_Data')->__('Message'); ?></th>
                <th><?php echo Mage::helper('Enterprise_GiftRegistry_Helper_Data')->__('Action'); ?></th>
            </tr>
        </thead>
        <tbody>
            <?php foreach($entityCollection as $item): ?>
                <tr>
                    <td title="<?php echo $this->getEscapedTitle($item)?>"><?php echo $this->helper('Mage_Core_Helper_String')->truncate($this->getEscapedTitle($item), 70)?></td>
                    <td><span class="nobr"><?php echo $this->getFormattedDate($item) ?></span></td>
                    <td><?php echo $this->getEscapedMessage($item)?></td>
                    <td>
                        <span class="nobr">
                            <a href="<?php echo $this->getItemsUrl($item)?>"><?php echo $this->__('Manage Items') ?></a> <span class="separator">|</span>
                            <a href="<?php echo $this->getShareUrl($item)?>"><?php echo $this->__('Share') ?></a> <span class="separator">|</span>
                            <a href="<?php echo $this->getEditUrl($item)?>"><?php echo $this->__('Edit') ?></a> <span class="separator">|</span>
                            <a href="<?php echo $this->getDeleteUrl($item)?>" onclick="return confirm('<?php echo Mage::helper('Enterprise_GiftRegistry_Helper_Data')->__('Are you sure you want to delete this gift registry?'); ?>');"><?php echo $this->__('Delete') ?></a>
                        </span>
                    </td>
                </tr>
            <?php endforeach; ?>
        </tbody>
    </table>
    <script type="text/javascript">(function($) {$('#giftregistry-table').decorate('table')})(jQuery)</script>
    <?php echo $this->getChildHtml('pager') ?>
<?php else:?>
    <p><?php echo Mage::helper('Enterprise_GiftRegistry_Helper_Data')->__('No gift registries have been created.'); ?></p>
<?php endif;?>

<div class="buttons-set">
    <p class="back-link"><a href="<?php echo $this->escapeUrl($this->getBackUrl()) ?>"><small>&laquo; </small><?php echo $this->__('Back') ?></a></p>
    <?php if ($this->canAddNewEntity()):?>
        <button type="button" onclick="setLocation('<?php echo $this->escapeUrl($this->getAddUrl()) ?>')" class="button"><span><span><?php echo $this->__('Add New') ?></span></span></button>
    <?php endif;?>
</div>
