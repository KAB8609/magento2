<config>
    <global>
        <helpers>
            <core>
                <encryption_model>Enterprise_Pci_Model_Encryption</encryption_model>
            </core>
        </helpers>
        <resources>
            <enterprise_pci_setup>
                <setup>
                    <module>Enterprise_Pci</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
            </enterprise_pci_setup>
        </resources>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <Enterprise_Pci>
                    <files>
                        <default>Enterprise_Pci.csv</default>
                    </files>
                </Enterprise_Pci>
            </modules>
        </translate>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Enterprise_Pci before="Mage_Adminhtml">Enterprise_Pci_Adminhtml</Enterprise_Pci>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <frontend>
        <translate>
            <modules>
                <Enterprise_Pci>
                    <files>
                        <default>Enterprise_Pci.csv</default>
                    </files>
                </Enterprise_Pci>
            </modules>
        </translate>
    </frontend>
    <default>
        <admin>
            <security>
                <session_lifetime>900</session_lifetime>
                <lockout_failures>6</lockout_failures>
                <lockout_threshold>30</lockout_threshold>
                <password_lifetime>90</password_lifetime>
                <password_is_forced>1</password_is_forced>
            </security>
        </admin>
    </default>
</config>