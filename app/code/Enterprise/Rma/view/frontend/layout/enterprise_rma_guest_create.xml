<layout version="0.1.0">
    <enterprise_rma_guest_create translate="label" type="page" parent="enterprise_rma_return_create_handle">
        <label>Guest Order Create Return</label>
        <reference name="root">
            <action method="setTemplate">
                <template>1column.phtml</template>
            </action>
        </reference>
        <update handle="customer_account"/>
        <reference name="content">
            <block type="Enterprise_Rma_Block_Return_Info" as="info" name="sales.order.info"/>
            <block type="Enterprise_Rma_Block_Return_Create" as="create" name="rma.return.create" template="return/create.phtml">
                <action method="setFormCode">
                    <code>default</code>
                </action>
                <action method="setEntityModelClass">
                    <code>Enterprise_Rma_Model_Item</code>
                </action>
            </block>
        </reference>
        <update handle="enterprise_rma_return_create_handle"/>
        <reference name="sales.order.info">
            <action method="addLink" translate="label">
                <name>view</name>
                <path>sales/guest/view</path>
                <label>Order Information</label>
            </action>
            <action method="addLink" translate="label">
                <name>invoice</name>
                <path>sales/guest/invoice</path>
                <label>Invoices</label>
            </action>
            <action method="addLink" translate="label">
                <name>shipment</name>
                <path>sales/guest/shipment</path>
                <label>Shipments</label>
            </action>
            <action method="addLink" translate="label">
                <name>creditmemo</name>
                <path>sales/guest/creditmemo</path>
                <label>Refunds</label>
            </action>
            <action method="addLink" translate="label">
                <name>returns</name>
                <path/>
                <label>Returns</label>
            </action>
        </reference>
    </enterprise_rma_guest_create>
</layout>
