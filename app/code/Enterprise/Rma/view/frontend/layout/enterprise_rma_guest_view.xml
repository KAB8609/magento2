<layout version="0.1.0">
    <enterprise_rma_guest_view translate="label" type="page" parent="enterprise_rma_return_view_handle">
        <label>Guest Order View Return</label>
        <reference name="root">
            <action method="setTemplate">
                <template>1column.phtml</template>
            </action>
        </reference>
        <update handle="customer_account"/>
        <reference name="content">
            <block type="Mage_Sales_Block_Order_Info" as="info" name="sales.order.info">
                <block type="Mage_Sales_Block_Order_Info_Buttons" as="buttons" name="sales.order.info.buttons">
                    <block type="Enterprise_Rma_Block_Order_Button" name="enterprise.rma.info.button" template="order/button.phtml"/>
                </block>
            </block>
            <block type="Enterprise_Rma_Block_Return_View" name="rma.return.history">
                <container name="rma.return.history.info" as="info" label="View Return"/>
            </block>
            <block type="Enterprise_Rma_Block_Return_View" name="customer.account.link.back" template="Mage_Customer::account/link/back.phtml"/>
        </reference>
        <update handle="enterprise_rma_return_view_handle"/>
        <update handle="sales_order_info_rma_guest_links"/>
        <block type="Enterprise_Rma_Block_Return_Tracking" name="rma.return.tracking" as="tracking"/>
    </enterprise_rma_guest_view>
</layout>
