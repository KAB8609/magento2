<layout version="0.1.0">
    <enterprise_rma_guest_returns translate="label" type="page" parent="enterprise_rma_guest_view">
        <label>Guest Order Returns View</label>
        <reference name="root">
            <action method="setTemplate">
                <template>1column.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <block type="Mage_Sales_Block_Order_Info" as="info" name="sales.order.info">
                <block type="Mage_Sales_Block_Order_Info_Buttons" as="buttons" name="sales.order.info.buttons">
                    <block type="Enterprise_Rma_Block_Order_Button" name="enterprise.rma.info.button" template="order/button.phtml"/>
                </block>
            </block>
            <block type="Enterprise_Rma_Block_Return_Returns" name="rma.return.returns"/>
        </reference>
        <update handle="sales_order_info_rma_guest_links"/>
    </enterprise_rma_guest_returns>
</layout>
