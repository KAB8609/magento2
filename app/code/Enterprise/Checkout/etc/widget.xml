<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="../../../Mage/Widget/etc/widget.xsd">
    <widget id="order_by_sku" class="Enterprise_Checkout_Block_Widget_Sku" translate="label description"
            is_email_compatible="true" >
        <label>Order by SKU</label>
        <description>Order by SKU Description</description>
        <parameter name="link_display" xsi:type="select" translate="label description" visible="true"
                   sort_order="10" source_model="Magento_Backend_Model_Config_Source_Yesno">
            <label>Display a Link to Loading a Spreadsheet</label>
            <description>Defines whether a link to My Account &amp;gt; Order by SKU page will be displayed on the widget</description>
        </parameter>
        <parameter name="link_text" xsi:type="text" translate="label description value" required="true"
                   visible="true" sort_order="20">
            <label>Link Text</label>
            <description>The text of the link to the My Account &amp;gt; Order by SKU page</description>
            <depends>
                <parameter name="link_display" value="1" />
            </depends>
            <value>Load a list of SKUs</value>
        </parameter>
        <parameter name="template" xsi:type="select" required="true" visible="true">
            <label>Template</label>
            <option name="default" translate="label" value="widget/sku.phtml" selected="true">
                <label>Order by SKU Template</label>
            </option>
        </parameter>
    </widget>
</widgets>
