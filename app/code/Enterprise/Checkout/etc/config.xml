<config>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <enterprise_checkout before="Magento_Adminhtml">Enterprise_Checkout_Adminhtml</enterprise_checkout>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <events>
            <adminhtml_sales_order_create_process_data_before>
                <observers>
                    <addBySku>
                        <class>Enterprise_Checkout_Model_Observer</class>
                        <method>addBySku</method>
                    </addBySku>
                    <uploadSkuCsv>
                        <class>Enterprise_Checkout_Model_Observer</class>
                        <method>uploadSkuCsv</method>
                    </uploadSkuCsv>
                </observers>
            </adminhtml_sales_order_create_process_data_before>
        </events>
    </adminhtml>
    <frontend>
        <routers>
            <checkout>
                <args>
                    <modules>
                        <enterprise_checkout before="Magento_Checkout">Enterprise_Checkout</enterprise_checkout>
                    </modules>
                </args>
            </checkout>
            <enterprise_checkout>
                <use>standard</use>
                <args>
                    <module>Enterprise_Checkout</module>
                    <frontName>customer_order</frontName>
                </args>
            </enterprise_checkout>
        </routers>
        <events>
            <controller_action_layout_generate_blocks_before>
                <observers>
                    <enterprise_checkout>
                        <class>Enterprise_Checkout_Model_Observer</class>
                        <method>collectTotalsFailedItems</method>
                    </enterprise_checkout>
                </observers>
            </controller_action_layout_generate_blocks_before>
            <core_block_abstract_to_html_before>
                <observers>
                    <enterprise_checkout>
                        <class>Enterprise_Checkout_Model_Observer</class>
                        <method>addCartLink</method>
                    </enterprise_checkout>
                </observers>
            </core_block_abstract_to_html_before>
        </events>
    </frontend>
</config>
