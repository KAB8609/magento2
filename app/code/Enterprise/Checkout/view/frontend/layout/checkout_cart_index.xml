<layout version="0.1.0">
    <checkout_cart_index>
        <reference name="checkout.cart">
            <block type="Enterprise_Checkout_Block_Sku_Products" name="sku.failed.products" template="cart/sku/failed.phtml" as="shopping.cart.table.after">
                <block type="Enterprise_Checkout_Block_Sku_Products_Info" name="additional.product.info" template="cart/sku/failed/info.phtml"/>
                <action method="addItemRender">
                    <type>default</type>
                    <block>Mage_Checkout_Block_Cart_Item_Renderer</block>
                    <template>Enterprise_Checkout::cart/item/failed.phtml</template>
                </action>
                <action method="addItemRender">
                    <type>simple</type>
                    <block>Mage_Checkout_Block_Cart_Item_Renderer</block>
                    <template>cart/item/default.phtml</template>
                </action>
                <action method="addItemRender">
                    <type>grouped</type>
                    <block>Mage_Checkout_Block_Cart_Item_Renderer</block>
                    <template>Enterprise_Checkout::cart/item/failed.phtml</template>
                </action>
                <action method="addItemRender">
                    <type>configurable</type>
                    <block>Mage_Checkout_Block_Cart_Item_Renderer_Configurable</block>
                    <template>cart/item/default.phtml</template>
                </action>
                <action method="addItemRender">
                    <type>bundle</type>
                    <block>Mage_Bundle_Block_Checkout_Cart_Item_Renderer</block>
                    <template>Mage_Checkout::cart/item/default.phtml</template>
                </action>
                <action method="addItemRender">
                    <type>giftcard</type>
                    <block>Enterprise_GiftCard_Block_Checkout_Cart_Item_Renderer</block>
                    <template>Mage_Checkout::cart/item/default.phtml</template>
                </action>
                <action method="addItemRender">
                    <type>downloadable</type>
                    <block>Mage_Downloadable_Block_Checkout_Cart_Item_Renderer</block>
                    <template>Mage_Checkout::cart/item/default.phtml</template>
                </action>
                <action method="addItemRender">
                    <type>virtual</type>
                    <block>Mage_Checkout_Block_Cart_Item_Renderer</block>
                    <template>cart/item/default.phtml</template>
                </action>
                <action method="addItemRender">
                    <type>undefined</type>
                    <block>Mage_Checkout_Block_Cart_Item_Renderer</block>
                    <template>Enterprise_Checkout::cart/item/failed.phtml</template>
                </action>
            </block>
        </reference>
    </checkout_cart_index>
</layout>
