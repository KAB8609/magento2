<layout version="0.1.0">
    <adminhtml_checkout_index>
        <reference name="head">
            <block type="Mage_Page_Block_Html_Head_Script" name="mage-adminhtml-catalog-product-composite-configure-js">
                <arguments>
                    <file>Mage_Adminhtml::catalog/product/composite/configure.js</file>
                </arguments>
            </block>
            <block type="Mage_Page_Block_Html_Head_Script" name="varien-configurable-js">
                <arguments>
                    <file>varien/configurable.js</file>
                </arguments>
            </block>
            <block type="Mage_Page_Block_Html_Head_Script" name="enterprise-checkout-shopping-cart-js">
                <arguments>
                    <file>Enterprise_Checkout::shopping_cart.js</file>
                </arguments>
            </block>
        </reference>
        <reference name="content">
            <update handle="adminhtml_sku_errors_block"/>
            <block type="Mage_Adminhtml_Block_Catalog_Product_Composite_Configure" name="configure.popup"/>
            <block type="Enterprise_Checkout_Block_Adminhtml_Manage" name="ID" template="manage.phtml">
                <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Store_Switcher" name="checkout.store.switcher"/>
                <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Messages" name="checkout.message"/>
                <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Items" name="checkout.items" template="manage/items.phtml"/>
                <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Accordion_Sku_Errors" name="errors"/>
                <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Accordion" name="checkout.accordion">
                    <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Accordion_Products" name="products"/>
                    <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Accordion_Sku" name="sku.accordion"/>
                    <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Accordion_Wishlist" name="wishlist"/>
                    <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Accordion_Compared" name="compared"/>
                    <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Accordion_Rcompared" name="rcompared"/>
                    <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Accordion_Rviewed" name="rviewed"/>
                    <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Accordion_Ordered" name="ordered"/>
                </block>
                <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Form_Coupon" template="form/coupon.phtml" name="checkout.form_coupon"/>
            </block>
            <block type="Mage_Adminhtml_Block_Catalog_Product_Composite_Configure" name="configure.popup"/>
        </reference>
    </adminhtml_checkout_index>
</layout>
