<layout>
    <adminhtml_customer_edit>
        <reference name="customer_edit">
            <block name="checkout.buttons" type="Enterprise_Checkout_Block_Adminhtml_Customer_Edit_Buttons">
                <action method="addButtons"></action>
            </block>
        </reference>
    </adminhtml_customer_edit>

    <adminhtml_checkout_index>
        <reference name="head">
            <action method="addJs"><file>Mage_Adminhtml::catalog/product/composite/configure.js</file></action>
            <action method="addJs"><file>varien/configurable.js</file></action>
            <action method="addJs">
                <file>Enterprise_Checkout::shopping_cart.js</file>
            </action>
        </reference>
        <reference name="content">
            <update handle="adminhtml_sku_errors_block"/>
            <block type="Mage_Adminhtml_Block_Catalog_Product_Composite_Configure" name="configure.popup"/>
            <block type="Enterprise_Checkout_Block_Adminhtml_Manage" name="ID" template="manage.phtml">
                <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Store_Switcher" name="checkout.store.switcher"/>
                <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Messages" name="checkout.message"/>
                <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Items" name="checkout.items" template="manage/items.phtml"/>
                <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Accordion_Sku_Errors" name="errors"/>
                <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Accordion" name="checkout.accordion">
                    <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Accordion_Products" name="products"/>
                    <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Accordion_Sku" name="sku.accordion"/>
                    <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Accordion_Wishlist" name="wishlist"/>
                    <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Accordion_Compared" name="compared"/>
                    <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Accordion_Rcompared" name="rcompared"/>
                    <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Accordion_Rviewed" name="rviewed"/>
                    <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Accordion_Ordered" name="ordered"/>
                </block>
                <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Form_Coupon" template="form/coupon.phtml" name="checkout.form_coupon"/>
            </block>
            <block type="Mage_Adminhtml_Block_Catalog_Product_Composite_Configure" name="configure.popup"/>
        </reference>
    </adminhtml_checkout_index>

    <adminhtml_checkout_cart>
        <remove name="root"/>
        <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Items" name="checkout.items" template="manage/items.phtml" output="1"/>
    </adminhtml_checkout_cart>

    <adminhtml_checkout_applycoupon>
        <remove name="root"/>
        <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Form_Coupon" template="form/coupon.phtml" name="form_coupon" output="1"/>
    </adminhtml_checkout_applycoupon>

    <adminhtml_checkout_coupon>
        <remove name="root"/>
        <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Form_Coupon" template="form/coupon.phtml" name="form_coupon" output="1"/>
    </adminhtml_checkout_coupon>

    <adminhtml_checkout_products>
        <remove name="root"/>
        <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Accordion_Products" name="checkout.accordion.products" output="1"/>
    </adminhtml_checkout_products>

    <adminhtml_checkout_viewwishlist>
        <remove name="root"/>
        <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Accordion_Wishlist" name="checkout.accordion.wishlist" output="1"/>
    </adminhtml_checkout_viewwishlist>

    <adminhtml_checkout_viewcompared>
        <remove name="root"/>
        <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Accordion_Compared" name="checkout.accordion.compared" output="1"/>
    </adminhtml_checkout_viewcompared>

    <adminhtml_checkout_viewrecentlycompared>
        <remove name="root"/>
        <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Accordion_Rcompared" name="checkout.accordion.rcompared" output="1"/>
    </adminhtml_checkout_viewrecentlycompared>

    <adminhtml_checkout_viewrecentlyviewed>
        <remove name="root"/>
        <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Accordion_Rviewed" name="checkout.accordion.rviewed" output="1"/>
    </adminhtml_checkout_viewrecentlyviewed>

    <adminhtml_checkout_viewordered>
        <remove name="root"/>
        <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Accordion_Ordered" name="checkout.accordion.ordered" output="1"/>
    </adminhtml_checkout_viewordered>

    <adminhtml_checkout_manage_load_block_json>
        <reference name="root">
            <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Load" name="content" />
        </reference>
    </adminhtml_checkout_manage_load_block_json>

    <adminhtml_checkout_manage_load_block_plain>
        <reference name="root">
            <container name="content" label="Content"/>
        </reference>
    </adminhtml_checkout_manage_load_block_plain>

    <adminhtml_checkout_manage_load_block_message>
        <reference name="content">
            <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Messages" name="message" />
        </reference>
    </adminhtml_checkout_manage_load_block_message>

    <adminhtml_checkout_manage_load_block_items>
        <reference name="content">
            <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Items" name="items" template="manage/items.phtml"/>
        </reference>
    </adminhtml_checkout_manage_load_block_items>

    <adminhtml_checkout_manage_load_block_errors>
        <update handle="adminhtml_sku_errors_block"/>
        <reference name="content">
            <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Accordion_Sku_Errors" name="errors"/>
        </reference>
    </adminhtml_checkout_manage_load_block_errors>

    <!-- Add by SKU create new order layout updates -->

    <!-- shortcut handles -->

    <sku_layout_update>
        <update handle="adminhtml_sku_errors_block"/>
        <reference name="head">
            <action method="addJs"><file>Mage_Adminhtml::catalog/product/composite/configure.js</file></action>
        </reference>
        <reference name="data">
            <block type="Enterprise_Checkout_Block_Adminhtml_Sales_Order_Create_Sku" name="additional_area" template="Mage_Adminhtml::sales/order/create/abstract.phtml">
                <block type="Enterprise_Checkout_Block_Adminhtml_Sales_Order_Create_Sku_Add"/>
            </block>
            <block type="Enterprise_Checkout_Block_Adminhtml_Sales_Order_Create_Sku_Errors" name="errors"/>
        </reference>
    </sku_layout_update>

    <!-- update real handles -->

    <adminhtml_sales_order_create_index>
        <update handle="sku_layout_update"/>
    </adminhtml_sales_order_create_index>

    <adminhtml_sales_order_create_load_block_data>
        <update handle="sku_layout_update"/>
    </adminhtml_sales_order_create_load_block_data>

    <adminhtml_sales_order_create_load_block_additional_area>
        <reference name="content">
            <update handle="adminhtml_sku_errors_block"/>
            <block type="Enterprise_Checkout_Block_Adminhtml_Sales_Order_Create_Sku" name="additional_area" template="Mage_Adminhtml::sales/order/create/abstract.phtml">
                <block type="Enterprise_Checkout_Block_Adminhtml_Sales_Order_Create_Sku_Add"/>
            </block>
            <block type="Enterprise_Checkout_Block_Adminhtml_Sales_Order_Create_Sku_Errors" name="errors"/>
        </reference>
    </adminhtml_sales_order_create_load_block_additional_area>

    <adminhtml_sales_order_create_load_block_errors>
        <update handle="adminhtml_sku_errors_block"/>
        <reference name="content">
            <block type="Enterprise_Checkout_Block_Adminhtml_Sales_Order_Create_Sku_Errors" name="errors"/>
        </reference>
    </adminhtml_sales_order_create_load_block_errors>

    <adminhtml_sku_errors_block>
        <reference name='errors'>
            <block type="Mage_Backend_Block_Widget_Grid" name='sku_error_grid' as='grid'>
                <arguments>
                    <id>sku_errors</id>
                    <dataSource type="object">Enterprise_Checkout_Model_Resource_Sku_Errors_Grid_Collection</dataSource>
                    <pager_visibility>0</pager_visibility>
                </arguments>
                <block type='Enterprise_Checkout_Block_Adminhtml_Sku_Errors_Grid_ColumnSet_SkuErrors' name='sku_error_grid.columnSet' as='grid.columnSet'>
                    <arguments>
                        <filter_visibility>0</filter_visibility>
                    </arguments>
                    <block type='Mage_Backend_Block_Widget_Grid_Column' as='description'>
                        <arguments>
                            <header translate='true' module='Enterprise_Checkout'>Product</header>
                            <index>description</index>
                            <class>no-link</class>
                            <sortable>0</sortable>
                            <renderer>Enterprise_Checkout_Block_Sku_Column_Renderer_Description</renderer>
                        </arguments>
                    </block>
                    <block type='Mage_Backend_Block_Widget_Grid_Column' as='price'>
                        <arguments>
                            <header translate='true' module='Enterprise_Checkout'>Price</header>
                            <index>price</index>
                            <class>no-link</class>
                            <sortable>0</sortable>
                            <type>text</type>
                            <width>100</width>
                        </arguments>
                    </block>
                    <block type='Mage_Backend_Block_Widget_Grid_Column' as='qty'>
                        <arguments>
                            <header translate='true' module='Enterprise_Checkout'>Quantity</header>
                            <index>qty</index>
                            <class>no-link sku-error-qty</class>
                            <sortable>0</sortable>
                            <type>text</type>
                            <width>40</width>
                            <renderer>Enterprise_Checkout_Block_Adminhtml_Sku_Errors_Grid_Renderer_Qty</renderer>
                        </arguments>
                    </block>
                    <block type='Mage_Backend_Block_Widget_Grid_Column' as='remove'>
                        <arguments>
                            <header translate='true' module='Enterprise_Checkout'>Remove</header>
                            <index>remove_button</index>
                            <class>no-link</class>
                            <sortable>0</sortable>
                            <type>text</type>
                            <width>80</width>
                            <renderer>Enterprise_Checkout_Block_Sku_Column_Renderer_Remove</renderer>
                        </arguments>
                    </block>
                </block>
            </block>
        </reference>
    </adminhtml_sku_errors_block>
</layout>
