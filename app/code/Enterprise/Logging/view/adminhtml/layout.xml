<layout>
    <adminhtml_logging_index>
        <update handle="formkey"/>
        <update handle='adminhtml_logging_block'/>
        <reference name="content">
            <block type="Enterprise_Logging_Block_Adminhtml_Container" name="adminhtml.logging.grid.container" template="Mage_Backend::widget/grid/container.phtml">
                <arguments translate="header_text" module='Enterprise_Logging'>
                    <header_text>Admin Actions Log</header_text>
                </arguments>
            </block>
        </reference>
    </adminhtml_logging_index>

    <adminhtml_logging_grid>
        <update handle="formkey"/>
        <update handle="adminhtml_logging_block"/>
        <container label="Logging Index Block" name="adminhtml.logging.grid.container" output="1"/>
    </adminhtml_logging_grid>

    <adminhtml_logging_block>
        <reference name='adminhtml.logging.grid.container'>
            <block type='Mage_Backend_Block_Widget_Grid' name='logging.grid' as='grid'>
                <arguments>
                    <id>loggingLogGrid</id>
                    <dataSource type='object'>Enterprise_Logging_Model_Resource_Event_Collection</dataSource>
                    <default_sort>time</default_sort>
                    <default_dir>DESC</default_dir>
                    <save_parameters_in_session>1</save_parameters_in_session>
                    <use_ajax>1</use_ajax>
                    <grid_url type="url">
                        <path>*/*/grid</path>
                        <params>
                            <_current>1</_current>
                        </params>
                    </grid_url>
                </arguments>
                <block type="Mage_Backend_Block_Widget_Grid_Export" name="logging.grid.export" as="grid.export">
                    <arguments>
                        <exportTypes>
                            <csv>
                                <urlPath>*/*/exportCsv</urlPath>
                                <label translate="true" module="Mage_Customer">CSV</label>
                            </csv>
                            <excel>
                                <urlPath>*/*/exportXml</urlPath>
                                <label translate="true" module="Mage_Customer">Excel XML</label>
                            </excel>
                        </exportTypes>
                    </arguments>
                </block>
                <block type='Mage_Backend_Block_Widget_Grid_ColumnSet' name='adminhtml.logging.archive.grid.columnSet' as='grid.columnSet'>
                    <arguments>
                        <rowUrl>
                            <path>*/*/details</path>
                            <extraParamsTemplate>
                                <event_id>getId</event_id>
                            </extraParamsTemplate>
                        </rowUrl>
                    </arguments>
                    <block type='Mage_Backend_Block_Widget_Grid_Column' as='time'>
                        <arguments>
                            <header translate='true' module='Enterprise_Logging'>Time</header>
                            <index>time</index>
                            <type>datetime</type>
                            <wwidth>160</wwidth>
                        </arguments>
                    </block>
                    <block type='Mage_Backend_Block_Widget_Grid_Column' as='event'>
                        <arguments>
                            <header translate='true' module='Enterprise_Logging'>Action Group</header>
                            <index>event_code</index>
                            <type>options</type>
                            <sortable>0</sortable>
                            <options type="options">Enterprise_Logging_Model_Resource_Grid_ActionsGroup</options>
                        </arguments>
                    </block>
                    <block type='Mage_Backend_Block_Widget_Grid_Column' as='action'>
                        <arguments>
                            <header translate='true' module='Enterprise_Logging'>Action</header>
                            <index>action</index>
                            <type>options</type>
                            <sortable>0</sortable>
                            <options type="options">Enterprise_Logging_Model_Resource_Grid_Actions</options>
                        </arguments>
                    </block>
                    <block type='Mage_Backend_Block_Widget_Grid_Column' as='ip'>
                        <arguments>
                            <header translate='true' module='Enterprise_Logging'>IP Address</header>
                            <index>ip</index>
                            <type>text</type>
                            <filter>Enterprise_Logging_Block_Adminhtml_Grid_Filter_Ip</filter>
                            <renderer>Mage_Adminhtml_Block_Widget_Grid_Column_Renderer_Ip</renderer>
                            <sortable>0</sortable>
                            <width>125</width>
                        </arguments>
                    </block>
                    <block type='Mage_Backend_Block_Widget_Grid_Column' as='user'>
                        <arguments>
                            <header translate='true' module='Enterprise_Logging'>Username</header>
                            <index>user</index>
                            <type>text</type>
                            <escape>1</escape>
                            <filter>Enterprise_Logging_Block_Adminhtml_Grid_Filter_User</filter>
                            <sortable>0</sortable>
                            <width>150</width>
                        </arguments>
                    </block>
                    <block type='Mage_Backend_Block_Widget_Grid_Column' as='status'>
                        <arguments>
                            <header translate='true' module='Enterprise_Logging'>Result</header>
                            <index>status</index>
                            <type>options</type>
                            <options type="options">Enterprise_Logging_Model_Resource_Grid_Statuses</options>
                            <sortable>0</sortable>
                            <width>100</width>
                        </arguments>
                    </block>
                    <block type='Mage_Backend_Block_Widget_Grid_Column' as='fullaction'>
                        <arguments>
                            <header translate='true' module='Enterprise_Logging'>Full Action Name</header>
                            <index>fullaction</index>
                            <type>text</type>
                            <sortable>0</sortable>
                        </arguments>
                    </block>
                    <block type='Mage_Backend_Block_Widget_Grid_Column' as='info'>
                        <arguments>
                            <header translate='true' module='Enterprise_Logging'>Short Details</header>
                            <index>info</index>
                            <type>text</type>
                            <sortable>0</sortable>
                            <filter>Mage_Adminhtml_Block_Widget_Grid_Column_Filter_Text</filter>
                            <renderer>Enterprise_Logging_Block_Adminhtml_Grid_Renderer_Details</renderer>
                            <width>100</width>
                        </arguments>
                    </block>
                    <block type='Mage_Backend_Block_Widget_Grid_Column' as='view'>
                        <arguments>
                            <header translate='true' module='Enterprise_Logging'>Full Details</header>
                            <index>info</index>
                            <sortable>0</sortable>
                            <width>50</width>
                            <type>action</type>
                            <getter>getId</getter>
                            <actions>
                                <view_action>
                                    <caption translate="true" module="Enterprise_Logging">View</caption>
                                    <url>
                                        <base>*/*/details</base>
                                    </url>
                                    <field>event_id</field>
                                </view_action>
                            </actions>
                            <filter>0</filter>
                        </arguments>
                    </block>
                </block>
            </block>
        </reference>
    </adminhtml_logging_block>

    <adminhtml_logging_exportxml>
        <update handle="adminhtml_logging_block"/>
        <container name="adminhtml.logging.grid.container" label="Logging Grid Container"/>
    </adminhtml_logging_exportxml>

    <adminhtml_logging_exportcsv>
        <update handle="adminhtml_logging_block"/>
        <container name="adminhtml.logging.grid.container" label="Logging Grid Container"/>
    </adminhtml_logging_exportcsv>

    <adminhtml_logging_details>
        <reference name="content">
            <block type="Enterprise_Logging_Block_Adminhtml_Details" name="enterprise.logging.details" template="details.phtml">
                <block type="Enterprise_Logging_Block_Adminhtml_Details_Grid" name="enterprise.logging.details.grid" as="details_grid"/>
            </block>
        </reference>
    </adminhtml_logging_details>

    <adminhtml_logging_archive>
        <update handle="formkey"/>
        <update handle='adminhtml_logging_archive_grid_block' />
        <reference name="content">
            <block type="Enterprise_Logging_Block_Adminhtml_Container" name="adminhtml.logging.archive.grid.container">
                <arguments translate="header_text" module="Enterprise_Logging">
                    <header_text>Admin Actions Log Archive</header_text>
                </arguments>
            </block>
        </reference>
    </adminhtml_logging_archive>

    <adminhtml_logging_archivegrid>
        <update handle="formkey"/>
        <update handle="adminhtml_logging_archive_grid_block"/>
        <container label="Logging Archive Block" name="adminhtml.logging.archive.grid.container" output="1"/>
    </adminhtml_logging_archivegrid>

    <adminhtml_logging_archive_grid_block>
        <reference name='adminhtml.logging.archive.grid.container'>
            <block type='Mage_Backend_Block_Widget_Grid' name='adminhtml.logging.archive.grid' as='grid'>
                <arguments>
                    <id>loggingArchiveGrid</id>
                    <dataSource type='object'>Enterprise_Logging_Model_Archive_Collection</dataSource>
                    <default_sort>basename</default_sort>
                    <default_dir>DESC</default_dir>
                    <save_parameters_in_session>1</save_parameters_in_session>
                    <use_ajax>1</use_ajax>
                    <grid_url type="url">
                        <path>*/*/archiveGrid</path>
                        <params>
                            <_current>1</_current>
                        </params>
                    </grid_url>
                </arguments>
                <block type='Mage_Backend_Block_Widget_Grid_ColumnSet' name='adminhtml.logging.archive.grid.columnSet' as='grid.columnSet'>
                    <block type='Mage_Backend_Block_Widget_Grid_Column' as='download'>
                        <arguments>
                            <header translate='true' module='Enterprise_Logging'>Archive File</header>
                            <index>basename</index>
                            <renderer>Enterprise_Logging_Block_Adminhtml_Grid_Renderer_Download</renderer>
                        </arguments>
                    </block>
                    <block type='Mage_Backend_Block_Widget_Grid_Column' as='date'>
                        <arguments>
                            <header translate='true' module='Enterprise_Logging'>Date</header>
                            <index>time</index>
                            <type>date</type>
                            <filter>Enterprise_Logging_Block_Adminhtml_Archive_Grid_Filter_Date</filter>
                        </arguments>
                    </block>
                </block>
            </block>
        </reference>
    </adminhtml_logging_archive_grid_block>
</layout>
