<config>
    <global>
        <resources>
            <enterprise_importexport_setup>
                <setup>
                    <module>Enterprise_ImportExport</module>
                </setup>
            </enterprise_importexport_setup>
        </resources>
        <template>
            <email>
                <enterprise_importexport_import_failed translate="label" module="Enterprise_ImportExport">
                    <label>Import Failed</label>
                    <file>email/import_failed.html</file>
                    <type>html</type>
                </enterprise_importexport_import_failed>
                <enterprise_importexport_export_failed translate="label" module="Enterprise_ImportExport">
                    <label>Export Failed</label>
                    <file>email/export_failed.html</file>
                    <type>html</type>
                </enterprise_importexport_export_failed>
                <system_enterprise_import_export_log_error_email_template translate="label" module="Enterprise_ImportExport">
                    <label>File History Clean Failed</label>
                    <file>email/file_history_clean_failed.html</file>
                    <type>html</type>
                </system_enterprise_import_export_log_error_email_template>
            </email>
        </template>
        <importexport>
            <export_entities>
                <customer_finance translate="label" module="Enterprise_ImportExport">
                    <model_token>Enterprise_ImportExport_Model_Export_Entity_Customer_Finance</model_token>
                    <label>Customer Finances</label>
                </customer_finance>
            </export_entities>
            <import_entities>
                <customer_finance translate="label" module="Enterprise_ImportExport">
                    <model_token>Enterprise_ImportExport_Model_Import_Entity_Eav_Customer_Finance</model_token>
                    <label>Customer Finances</label>
                    <behavior_token>Mage_ImportExport_Model_Source_Import_Behavior_Custom</behavior_token>
                </customer_finance>
            </import_entities>
        </importexport>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <Enterprise_ImportExport>
                    <files>
                        <default>Enterprise_ImportExport.csv</default>
                    </files>
                </Enterprise_ImportExport>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <system>
            <enterprise_import_export_log>
                <save_days>5</save_days>
                <error_email_template>system_enterprise_import_export_log_error_email_template</error_email_template>
            </enterprise_import_export_log>
        </system>
        <crontab>
            <jobs>
                <enterprise_import_export_log_clean>
                    <run>
                        <model>Enterprise_ImportExport_Model_Observer::scheduledLogClean</model>
                    </run>
                </enterprise_import_export_log_clean>
            </jobs>
        </crontab>
        <export>
            <customer_page_size>
                <finance>10000</finance>
            </customer_page_size>
        </export>
    </default>
</config>