<layout version="0.1.0">
    <adminhtml_reminder_grid_block>
        <reference name="adminhtml.reminder.grid.container">
            <block type="Mage_Backend_Block_Widget_Grid" name="adminhtml.reminder.grid" as="grid">
                <arguments>
                    <id>reminderGrid</id>
                    <dataSource type="object">Enterprise_Reminder_Model_Resource_Reminder_Collection</dataSource>
                    <default_sort>rule_id</default_sort>
                    <default_dir>ASC</default_dir>
                </arguments>
                <block type="Mage_Backend_Block_Widget_Grid_ColumnSet" name="adminhtml.reminder.grid.columnSet" as="grid.columnSet">
                    <arguments>
                        <rowUrl>
                            <path>*/*/edit</path>
                            <extraParamsTemplate>
                                <id>getId</id>
                            </extraParamsTemplate>
                        </rowUrl>
                    </arguments>
                    <block type="Mage_Backend_Block_Widget_Grid_Column" as="rule_id">
                        <arguments>
                            <header translate="true">ID</header>
                            <align>right</align>
                            <width>50px</width>
                            <index>rule_id</index>
                        </arguments>
                    </block>
                    <block type="Mage_Backend_Block_Widget_Grid_Column" as="name">
                        <arguments>
                            <header translate="true">Rule</header>
                            <align>left</align>
                            <index>name</index>
                        </arguments>
                    </block>
                    <block type="Mage_Backend_Block_Widget_Grid_Column" as="from_date">
                        <arguments>
                            <header translate="true">Start on</header>
                            <align>left</align>
                            <width>120px</width>
                            <type>date</type>
                            <default>--</default>
                            <index>from_date</index>
                        </arguments>
                    </block>
                    <block type="Mage_Backend_Block_Widget_Grid_Column" as="to_date">
                        <arguments>
                            <header translate="true">End on</header>
                            <align>left</align>
                            <width>120px</width>
                            <type>date</type>
                            <default>--</default>
                            <index>to_date</index>
                        </arguments>
                    </block>
                    <block type="Mage_Backend_Block_Widget_Grid_Column" as="is_active">
                        <arguments>
                            <header translate="true">Status</header>
                            <align>left</align>
                            <width>80px</width>
                            <type>options</type>
                            <options>
                                <active>
                                    <value>1</value>
                                    <label translate="true" module="Enterprise_Reminder">Active</label>
                                </active>
                                <inactive>
                                    <value>0</value>
                                    <label translate="true" module="Enterprise_Reminder">Inactive</label>
                                </inactive>
                            </options>
                            <index>is_active</index>
                        </arguments>
                    </block>
                    <block type="Mage_Backend_Block_Widget_Grid_Column_Multistore" as="rule_website">
                        <arguments>
                            <header translate="true">Website</header>
                            <align>left</align>
                            <index>website_ids</index>
                            <type>options</type>
                            <sortable>0</sortable>
                            <options type="options">Mage_Backend_Model_Config_Source_Website_OptionHash</options>
                            <width>200px</width>
                        </arguments>
                    </block>
                </block>
            </block>
        </reference>
    </adminhtml_reminder_grid_block>
</layout>
