<layout>
    <!-- reminder grid page -->
    <adminhtml_reminder_index>
        <update handle='adminhtml_reminder_grid_block' />
        <reference name="content">
            <block type="Enterprise_Reminder_Block_Adminhtml_Reminder" name="adminhtml.reminder.grid.container"/>
        </reference>
    </adminhtml_reminder_index>

    <adminhtml_reminder_grid_block>
        <reference name='adminhtml.reminder.grid.container'>
            <block type='Mage_Backend_Block_Widget_Grid' name='adminhtml.reminder.grid' as='grid'>
                <arguments>
                    <id>reminderGrid</id>
                    <dataSource type='object'>Enterprise_Reminder_Model_Resource_Reminder_Collection</dataSource>
                    <default_sort>rule_id</default_sort>
                    <default_dir>ASC</default_dir>
                </arguments>
                <block type='Mage_Backend_Block_Widget_Grid_ColumnSet' name='adminhtml.reminder.grid.columnSet' as='grid.columnSet'>
                    <arguments>
                        <rowUrl>
                            <path>*/*/edit</path>
                            <extraParamsTemplate>
                                <id>getId</id>
                            </extraParamsTemplate>
                        </rowUrl>
                    </arguments>
                    <block type='Mage_Backend_Block_Widget_Grid_Column' as='rule_id'>
                        <arguments>
                            <header translate='true' module='Enterprise_Reminder'>ID</header>
                            <align>right</align>
                            <width>50px</width>
                            <index>rule_id</index>
                        </arguments>
                    </block>
                    <block type='Mage_Backend_Block_Widget_Grid_Column' as='name'>
                        <arguments>
                            <header translate='true' module='Enterprise_Reminder'>Rule</header>
                            <align>left</align>
                            <index>name</index>
                        </arguments>
                    </block>
                    <block type='Mage_Backend_Block_Widget_Grid_Column' as='from_date'>
                        <arguments>
                            <header translate='true' module='Enterprise_Reminder'>Start on</header>
                            <align>left</align>
                            <width>120px</width>
                            <type>date</type>
                            <default>--</default>
                            <index>from_date</index>
                        </arguments>
                    </block>
                    <block type='Mage_Backend_Block_Widget_Grid_Column' as='to_date'>
                        <arguments>
                            <header translate='true' module='Enterprise_Reminder'>End on</header>
                            <align>left</align>
                            <width>120px</width>
                            <type>date</type>
                            <default>--</default>
                            <index>to_date</index>
                        </arguments>
                    </block>
                    <block type='Mage_Backend_Block_Widget_Grid_Column' as='is_active'>
                        <arguments>
                            <header translate='true' module='Enterprise_Reminder'>Status</header>
                            <align>left</align>
                            <width>80px</width>
                            <type>options</type>
                            <options type='options'>Enterprise_Reminder_Model_Reminder_Options_Status</options>
                            <index>is_active</index>
                        </arguments>
                    </block>
                    <block type="Mage_Backend_Block_Widget_Grid_Column_Multistore" as="rule_website">
                        <arguments>
                            <header translate="true" module="Enterprise_Reminder">Website</header>
                            <align>left</align>
                            <index>website_ids</index>
                            <type>options</type>
                            <sortable>0</sortable>
                            <options type='options'>Enterprise_Reminder_Model_Reminder_Options_Website</options>
                            <width>200px</width>
                        </arguments>
                    </block>
                </block>
            </block>
        </reference>
    </adminhtml_reminder_grid_block>

    <adminhtml_reminder_edit>
        <reference name="head">
            <action method="addJs"><file>mage/adminhtml/wysiwyg/widget.js</file></action>
            <action method="addCss"><file>prototype/windows/themes/default.css</file></action>
            <action method="addCss"><file>Mage_Core::prototype/magento.css</file></action>
         </reference>
        <reference name="content">
            <block type="Enterprise_Reminder_Block_Adminhtml_Reminder_Edit" name="adminhtml_reminder_edit"/>
        </reference>
        <reference name="left">
            <block type="Enterprise_Reminder_Block_Adminhtml_Reminder_Edit_Tabs" name="adminhtml_reminder_edit_tabs"/>
        </reference>
    </adminhtml_reminder_edit>

    <adminhtml_promo_quote_edit>
        <reference name="content">
            <block type="Enterprise_Reminder_Block_Adminhtml_Promo_Notice" name="promo_edit_notice"/>
        </reference>
    </adminhtml_promo_quote_edit>
</layout>
