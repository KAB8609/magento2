<layout>
    <!-- segments grid page -->
    <adminhtml_customersegment_index>
        <update handle="formkey"/>
        <update handle="adminhtml_customersegment_block"/>
        <reference name="content">
            <block type="Enterprise_CustomerSegment_Block_Adminhtml_Customersegment" name="customersegment.container"/>
        </reference>
    </adminhtml_customersegment_index>

    <!-- segment ajax grid -->
    <adminhtml_customersegment_grid>
        <update handle="formkey"/>
        <update handle="adminhtml_customersegment_block"/>
        <container name="customersegment.container" label="Customer Segment Container" output="1"/>
    </adminhtml_customersegment_grid>

    <adminhtml_customersegment_block>
        <reference name="customersegment.container">
            <block type="Mage_Backend_Block_Widget_Grid" name="customer.segment.grid" as="grid">
                <arguments>
                    <id>customersegmentGrid</id>
                    <dataSource type="object">Enterprise_CustomerSegment_Model_Resource_Grid_Collection</dataSource>
                    <use_ajax>1</use_ajax>
                    <default_sort>name</default_sort>
                    <default_dir>ASC</default_dir>
                    <save_parameters_in_session>1</save_parameters_in_session>
                    <grid_url type="url">
                        <path>adminhtml/customersegment/grid</path>
                        <params>
                            <_current>1</_current>
                        </params>
                    </grid_url>
                </arguments>
                <block type="Mage_Backend_Block_Widget_Grid_ColumnSet" as="grid.columnSet" name="customer.segment.grid.columnSet">
                    <arguments>
                        <id>customersegmentGrid</id>
                        <rowUrl>
                            <path>*/*/edit</path>
                            <extraParamsTemplate>
                                <id>getSegmentId</id>
                            </extraParamsTemplate>
                        </rowUrl>
                    </arguments>
                    <block type="Mage_Backend_Block_Widget_Grid_Column" as="grid_segment_id">
                        <arguments>
                            <header translate="true" module="Enterprise_CustomerSegment">ID</header>
                            <align>right</align>
                            <width>50</width>
                            <index>segment_id</index>
                        </arguments>
                    </block>
                    <block type="Mage_Backend_Block_Widget_Grid_Column" as="grid_segment_name">
                        <arguments>
                            <header translate="true" module="Enterprise_CustomerSegment">Segment</header>
                            <align>left</align>
                            <index>name</index>
                        </arguments>
                    </block>
                    <block type="Mage_Backend_Block_Widget_Grid_Column" as="grid_segment_is_active">
                        <arguments>
                            <header translate="true" module="Enterprise_CustomerSegment">Status</header>
                            <align>left</align>
                            <width>80</width>
                            <index>is_active</index>
                            <type>options</type>
                            <options type="options">Enterprise_CustomerSegment_Model_Resource_Grid_Statuses</options>
                        </arguments>
                    </block>
                    <block type="Mage_Backend_Block_Widget_Grid_Column_Multistore" as="grid_segment_website">
                        <arguments>
                            <header translate="true" module="Enterprise_CustomerSegment">Website</header>
                            <align>left</align>
                            <index>website_ids</index>
                            <type>options</type>
                            <options type="options">Enterprise_CustomerSegment_Model_Resource_Grid_Website</options>
                            <sortable>0</sortable>
                            <width>200</width>
                        </arguments>
                    </block>
                </block>
            </block>
        </reference>
    </adminhtml_customersegment_block>

    <!-- segment chooser ajax grid -->
    <adminhtml_customersegment_choosergrid>
        <block type="Enterprise_CustomerSegment_Block_Adminhtml_Customersegment_Grid_Chooser" name="root" output="1"/>
    </adminhtml_customersegment_choosergrid>

    <adminhtml_report_customer_customersegment_detail>
        <reference name="content">
            <block type="Enterprise_CustomerSegment_Block_Adminhtml_Report_Customer_Segment_Detail" name="report.customersegment.detail.grid.container" template="report/detail/grid/container.phtml" />
        </reference>
    </adminhtml_report_customer_customersegment_detail>
</layout>
