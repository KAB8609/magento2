<config>
    <global>
        <resources>
            <enterprise_customersegment_setup>
                <setup>
                    <module>Enterprise_CustomerSegment</module>
                    <class>Enterprise_CustomerSegment_Model_Resource_Setup</class>
                </setup>
            </enterprise_customersegment_setup>
        </resources>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <enterprise_customersegment before="Mage_Adminhtml">Enterprise_CustomerSegment_Adminhtml</enterprise_customersegment>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <translate>
            <modules>
                <Enterprise_CustomerSegment>
                    <files>
                        <default>Enterprise_CustomerSegment.csv</default>
                    </files>
                </Enterprise_CustomerSegment>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <customer>
            <enterprise_customersegment>
                <is_enabled>1</is_enabled>
            </enterprise_customersegment>
        </customer>
    </default>
</config>