<config>
    <modules>
        <Enterprise_CustomerSegment>
            <version>1.11.0.0.4</version>
            <active>false</active>
            <depends>
                <Mage_Customer/>
                <Enterprise_Customer/>
                <Mage_Adminhtml/>
                <Mage_Catalog/>
                <Mage_CatalogRule/>
                <Mage_Rule/>
                <Mage_Log/>
            </depends>
        </Enterprise_CustomerSegment>
    </modules>
    <global>
        <resources>
            <enterprise_customersegment_setup>
                <setup>
                    <module>Enterprise_CustomerSegment</module>
                    <class>Enterprise_CustomerSegment_Model_Resource_Setup</class>
                </setup>
            </enterprise_customersegment_setup>
        </resources>
        <events>
            <customer_save_commit_after>
                <observers>
                    <enterprise_customersegment>
                        <class>Enterprise_CustomerSegment_Model_Observer</class>
                        <method>processCustomerEvent</method>
                    </enterprise_customersegment>
                </observers>
            </customer_save_commit_after>
            <customer_address_save_commit_after>
                <observers>
                    <enterprise_customersegment>
                        <class>Enterprise_CustomerSegment_Model_Observer</class>
                        <method>processCustomerEvent</method>
                    </enterprise_customersegment>
                </observers>
            </customer_address_save_commit_after>
            <customer_address_delete_commit_after>
                <observers>
                    <enterprise_customersegment>
                        <class>Enterprise_CustomerSegment_Model_Observer</class>
                        <method>processCustomerEvent</method>
                    </enterprise_customersegment>
                </observers>
            </customer_address_delete_commit_after>
            <customer_balance_save_commit_after>
                <observers>
                    <enterprise_customersegment>
                        <class>Enterprise_CustomerSegment_Model_Observer</class>
                        <method>processCustomerEvent</method>
                    </enterprise_customersegment>
                </observers>
            </customer_balance_save_commit_after>
        </events>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <enterprise_customersegment before="Mage_Adminhtml">Enterprise_CustomerSegment_Adminhtml</enterprise_customersegment>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <enterprise_customersegment module="Enterprise_CustomerSegment">
                    <file>layout.xml</file>
                </enterprise_customersegment>
            </updates>
        </layout>
        <events>
            <salesrule_rule_condition_combine>
                <observers>
                    <enterprise_customersegment>
                        <class>Enterprise_CustomerSegment_Model_Observer</class>
                        <method>addSegmentsToSalesRuleCombine</method>
                    </enterprise_customersegment>
                </observers>
            </salesrule_rule_condition_combine>
            <sales_quote_collect_totals_before>
                <observers>
                    <enterprise_customersegment>
                        <class>Enterprise_CustomerSegment_Model_Observer</class>
                        <method>processQuote</method>
                    </enterprise_customersegment>
                </observers>
            </sales_quote_collect_totals_before>
            <enterprise_customer_address_attribute_edit_tab_general_prepare_form>
                <observers>
                    <enterprise_customersegment>
                        <class>Enterprise_CustomerSegment_Model_Observer</class>
                        <method>enterpiseCustomerAttributeEditPrepareForm</method>
                    </enterprise_customersegment>
                </observers>
            </enterprise_customer_address_attribute_edit_tab_general_prepare_form>
            <enterprise_customer_attribute_edit_tab_general_prepare_form>
                <observers>
                    <enterprise_customersegment>
                        <class>Enterprise_CustomerSegment_Model_Observer</class>
                        <method>enterpiseCustomerAttributeEditPrepareForm</method>
                    </enterprise_customersegment>
                </observers>
            </enterprise_customer_attribute_edit_tab_general_prepare_form>
            <targetrule_edit_tab_main_after_prepare_form>
                <observers>
                    <enterprise_customersegment>
                        <class>Enterprise_CustomerSegment_Model_Observer</class>
                        <method>addFieldsToTargetRuleForm</method>
                    </enterprise_customersegment>
                </observers>
            </targetrule_edit_tab_main_after_prepare_form>
        </events>
        <translate>
            <modules>
                <Enterprise_CustomerSegment>
                    <files>
                        <default>Enterprise_CustomerSegment.csv</default>
                    </files>
                </Enterprise_CustomerSegment>
            </modules>
        </translate>
    </adminhtml>
    <frontend>
        <events>
            <sales_quote_save_commit_after>
                <observers>
                    <enterprise_customersegment>
                        <class>Enterprise_CustomerSegment_Model_Observer</class>
                        <method>processEvent</method>
                    </enterprise_customersegment>
                </observers>
            </sales_quote_save_commit_after>
            <sales_order_save_commit_after>
                <observers>
                    <enterprise_customersegment>
                        <class>Enterprise_CustomerSegment_Model_Observer</class>
                        <method>processEvent</method>
                    </enterprise_customersegment>
                </observers>
            </sales_order_save_commit_after>
            <catalog_controller_product_view>
                <observers>
                    <enterprise_customersegment>
                        <class>Enterprise_CustomerSegment_Model_Observer</class>
                        <method>processEvent</method>
                    </enterprise_customersegment>
                </observers>
            </catalog_controller_product_view>
            <checkout_cart_save_after>
                <observers>
                    <enterprise_customersegment>
                        <class>Enterprise_CustomerSegment_Model_Observer</class>
                        <method>processEvent</method>
                    </enterprise_customersegment>
                </observers>
            </checkout_cart_save_after>
            <wishlist_items_renewed>
                <observers>
                    <enterprise_customersegment>
                        <class>Enterprise_CustomerSegment_Model_Observer</class>
                        <method>processEvent</method>
                    </enterprise_customersegment>
                </observers>
            </wishlist_items_renewed>
            <customer_login>
                <observers>
                    <enterprise_customersegment>
                        <class>Enterprise_CustomerSegment_Model_Observer</class>
                        <method>processEvent</method>
                    </enterprise_customersegment>
                </observers>
            </customer_login>
            <newsletter_subscriber_save_commit_after>
                <observers>
                    <enterprise_customersegment>
                        <class>Enterprise_CustomerSegment_Model_Observer</class>
                        <method>processEvent</method>
                    </enterprise_customersegment>
                </observers>
            </newsletter_subscriber_save_commit_after>
            <visitor_init>
                <observers>
                    <enterprise_customersegment>
                        <class>Enterprise_CustomerSegment_Model_Observer</class>
                        <method>processEvent</method>
                    </enterprise_customersegment>
                </observers>
            </visitor_init>
        </events>
    </frontend>
    <default>
        <customer>
            <enterprise_customersegment>
                <is_enabled>1</is_enabled>
            </enterprise_customersegment>
        </customer>
    </default>
</config>
