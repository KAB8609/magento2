<config>
    <modules>
        <Enterprise_Queue>
            <version>2.0.0.0</version>
            <active>false</active>
            <depends>
                <Mage_Core/>
            </depends>
            <system_requirements>
                <php>
                    <extensions>
                        <gearman/>
                    </extensions>
                </php>
            </system_requirements>
        </Enterprise_Queue>
    </modules>
    <global>
        <queue>
            <adapter>
                <gearman>
                    <title>Gearman</title>
                    <servers>127.0.0.1:4730</servers>
                </gearman>
            </adapter>
        </queue>
        <resources>
            <enterprise_queue_setup>
                <setup>
                    <module>Enterprise_Queue</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
            </enterprise_queue_setup>
        </resources>
        <di>
            <preferences>
                <Mage_Core_Model_Event_InvokerInterface>Enterprise_Queue_Model_Event_Invoker_Asynchronous</Mage_Core_Model_Event_InvokerInterface>
                <Enterprise_Queue_Model_QueueInterface>Enterprise_Queue_Model_Queue</Enterprise_Queue_Model_QueueInterface>
                <Magento_JobQueue_ClientInterface>Magento_JobQueue_Client_Gearman</Magento_JobQueue_ClientInterface>
                <Magento_JobQueue_Client_ConfigInterface>Enterprise_Queue_Model_Config_Gearman</Magento_JobQueue_Client_ConfigInterface>
            </preferences>
        </di>
    </global>
</config>
