<widgets>
    <widget id="enterprise_banner" class="Enterprise_Banner_Block_Widget_Banner" translate="label description"
            module="Enterprise_Banner" placeholder_image="Enterprise_Banner::widget_banner.gif">
        <label>Banner Rotator</label>
        <description>Displays Specified or Promotion Banners</description>
        <parameter name="display_mode" translate="label" required="true" visible="true" xsi:type="select">
            <label>Banners to Display</label>
            <option name="fixed" translate="label" value="fixed" selected="true">
                <label>Banners to Display</label>
            </option>
            <option name="salesrule" translate="label" value="salesrule">
                <label>Shopping Cart Promotions Related</label>
            </option>
            <option name="catalogrule" translate="label" value="catalogrule">
                <label>Catalog Promotions Related</label>
            </option>
        </parameter>
        <parameter name="display_mode" translate="label" required="true" visible="true" xsi:type="multiselect"
                   source_model="Enterprise_Banner_Model_Config">
            <label>Restrict by Banner Types</label>
        </parameter>
        <parameter name="rotate" translate="label" visible="true" xsi:type="select">
            <label>Rotation Mode</label>
            <option name="none" translate="label" value="" selected="true">
                <label>Display all instead of rotating.</label>
            </option>
            <option name="random" translate="label" value="random">
                <label>One at the time, Random</label>
            </option>
            <option name="series" translate="label" value="series">
                <label>One at the time, Series</label>
            </option>
            <option name="shuffle" translate="label" value="shuffle">
                <label>One at the time, Shuffle</label>
            </option>
        </parameter>
        <parameter name="banner_ids" translate="label" visible="true" xsi:type="value_renderer">
            <label>Specify Banners</label>
            <renderer class="Enterprise_Banner_Block_Adminhtml_Widget_Chooser" />
            <depends>
                <parameter name="display_mode" value="fixed" />
            </depends>
        </parameter>
        <parameter name="template" required="true" xsi:type="select">
            <option name="block" translate="label" value="widget/block.phtml" selected="true">
                <label>Banner Block Template</label>
            </option>
            <option name="inline" translate="label" value="widget/inline.phtml">
                <label>Banner Inline Template</label>
            </option>
        </parameter>
        <parameter name="unique_id" required="true" xsi:type="text" visible="false" />
    </widget>
</widgets>
