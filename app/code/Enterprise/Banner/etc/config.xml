<config>
    <modules>
        <Enterprise_Banner>
            <version>1.11.0.1</version>
            <active>false</active>
            <depends>
                <Mage_Adminhtml/>
                <Mage_CatalogRule/>
                <Mage_SalesRule/>
                <Enterprise_Cms/>
                <Enterprise_CustomerSegment/>
            </depends>
        </Enterprise_Banner>
    </modules>
    <global>
        <resources>
            <enterprise_banner_setup>
                <setup>
                    <module>Enterprise_Banner</module>
                    <class>Enterprise_Banner_Model_Resource_Setup</class>
                </setup>
            </enterprise_banner_setup>
        </resources>
        <enterprise>
            <banner>
                <types translate="content footer header leftcol rightcol">
                    <content>Content Area</content>
                    <footer>Footer</footer>
                    <header>Header</header>
                    <leftcol>Left Column</leftcol>
                    <rightcol>Right Column</rightcol>
                </types>
            </banner>
        </enterprise>
    </global>
    <frontend>
        <layout>
            <updates>
                <enterprise_banner module="Enterprise_Banner">
                    <file>layout.xml</file>
                </enterprise_banner>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <enterprise_banner before="Mage_Adminhtml">Enterprise_Banner_Adminhtml</enterprise_banner>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <enterprise_banner module="Enterprise_Banner">
                    <file>layout.xml</file>
                </enterprise_banner>
            </updates>
        </layout>
        <translate>
            <modules>
                <Enterprise_Banner>
                    <files>
                        <default>Enterprise_Banner.csv</default>
                    </files>
                </Enterprise_Banner>
            </modules>
        </translate>
        <events>
            <adminhtml_controller_catalogrule_prepare_save>
                <observers>
                    <enterprise_banner>
                        <class>Enterprise_Banner_Model_Observer</class>
                        <method>prepareCatalogRuleSave</method>
                    </enterprise_banner>
                </observers>
            </adminhtml_controller_catalogrule_prepare_save>
            <catalogrule_rule_save_after>
                <observers>
                    <enterprise_banner>
                        <class>Enterprise_Banner_Model_Observer</class>
                        <method>bindRelatedBannersToCatalogRule</method>
                    </enterprise_banner>
                </observers>
            </catalogrule_rule_save_after>
            <adminhtml_controller_salesrule_prepare_save>
                <observers>
                    <enterprise_banner>
                        <class>Enterprise_Banner_Model_Observer</class>
                        <method>prepareSalesRuleSave</method>
                    </enterprise_banner>
                </observers>
            </adminhtml_controller_salesrule_prepare_save>
            <salesrule_rule_save_after>
                <observers>
                    <enterprise_banner>
                        <class>Enterprise_Banner_Model_Observer</class>
                        <method>bindRelatedBannersToSalesRule</method>
                    </enterprise_banner>
                </observers>
            </salesrule_rule_save_after>
        </events>
    </adminhtml>
</config>
