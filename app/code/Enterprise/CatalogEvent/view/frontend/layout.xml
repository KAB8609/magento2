<layout version="0.1.0">

    <default>
        <reference name="head">

            <action method="addJs" ifconfig="catalog/enterprise_catalogevent/enabled">
                <file>Enterprise_CatalogEvent::js/ticker.js</file>
            </action>

            <action method="addCss" ifconfig="catalog/enterprise_catalogevent/enabled">
                <file>Enterprise_CatalogEvent::widgets.css</file>
            </action>

            <action method="addJs" ifconfig="catalog/enterprise_catalogevent/enabled">
                <file>Enterprise_CatalogEvent::js/carousel.js</file>
            </action>

        </reference>
    </default>

    <print>
        <reference name="head">
            <action method="addCss"><file>Enterprise_CatalogEvent::widgets.css</file></action>
        </reference>
    </print>

    <catalog_category_view>
        <reference name="top.container">
            <block after="-" name="catalog_category_event" type="Enterprise_CatalogEvent_Block_Catalog_Category_Event" template="catalog/category/event.phtml"/>
        </reference>
    </catalog_category_view>

    <catalog_product_view>
        <reference name="top.container">
            <block after="-" name="product_category_event" type="Enterprise_CatalogEvent_Block_Catalog_Product_Event" template="catalog/product/event.phtml"/>
        </reference>
    </catalog_product_view>

    <review_product_list>
        <reference name="top.container">
            <block after="-" name="product_category_event" type="Enterprise_CatalogEvent_Block_Catalog_Product_Event" template="catalog/product/event.phtml"/>
        </reference>
    </review_product_list>

    <review_product_view>
        <reference name="top.container">
            <block after="-" name="product_category_event" type="Enterprise_CatalogEvent_Block_Catalog_Product_Event" template="catalog/product/event.phtml"/>
        </reference>
    </review_product_view>

</layout>
