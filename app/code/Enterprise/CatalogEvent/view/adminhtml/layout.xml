<layout version="0.1.0">
    <adminhtml_catalog_event_index>
        <update handle="formkey"/>
        <update handle="adminhtml_catalog_event_block"/>
        <reference name="content">
            <block name="adminhtml.catalog.event.grid.container" type="Enterprise_CatalogEvent_Block_Adminhtml_Event" />
        </reference>
    </adminhtml_catalog_event_index>

    <adminhtml_catalog_event_block>
        <reference name='adminhtml.catalog.event.grid.container'>
            <block type='Mage_Backend_Block_Widget_Grid' name='adminhtml.catalog.event.grid' as='grid'>
                <arguments>
                    <id>catalogEventGrid</id>
                    <dataSource type='object'>Enterprise_CatalogEvent_Model_Resource_Event_Grid_Collection</dataSource>
                    <default_sort>event_id</default_sort>
                    <default_dir>ASC</default_dir>
                    <save_parameters_in_session>1</save_parameters_in_session>
                </arguments>
                <block type='Mage_Backend_Block_Widget_Grid_ColumnSet' name='adminhtml.catalog.event.grid.columnSet' as='grid.columnSet'>
                    <arguments>
                        <rowUrl>
                            <path>*/*/edit</path>
                            <extraParamsTemplate>
                                <id>getId</id>
                            </extraParamsTemplate>
                        </rowUrl>
                    </arguments>
                    <block type='Mage_Backend_Block_Widget_Grid_Column' as='event_id'>
                        <arguments>
                            <header translate='true' module='Enterprise_CatalogEvent'>ID</header>
                            <width>80px</width>
                            <type>text</type>
                            <index>event_id</index>
                        </arguments>
                    </block>
                    <block type='Mage_Backend_Block_Widget_Grid_Column' as='category_id'>
                        <arguments>
                            <header translate='true' module='Enterprise_CatalogEvent'>Category ID</header>
                            <width>70</width>
                            <type>text</type>
                            <index>category_id</index>
                        </arguments>
                    </block>
                    <block type='Mage_Backend_Block_Widget_Grid_Column' as='category'>
                        <arguments>
                            <header translate='true' module='Enterprise_CatalogEvent'>Category</header>
                            <type>text</type>
                            <index>category_name</index>
                        </arguments>
                    </block>
                    <block type='Mage_Backend_Block_Widget_Grid_Column' as='date_start'>
                        <arguments>
                            <header translate='true' module='Enterprise_CatalogEvent'>Start On</header>
                            <type>datetime</type>
                            <index>date_start</index>
                            <filter_time>1</filter_time>
                            <width>150</width>
                        </arguments>
                    </block>
                    <block type='Mage_Backend_Block_Widget_Grid_Column' as='date_end'>
                        <arguments>
                            <header translate='true' module='Enterprise_CatalogEvent'>End On</header>
                            <type>datetime</type>
                            <index>date_end</index>
                            <filter_time>1</filter_time>
                            <width>150</width>
                        </arguments>
                    </block>
                    <block type='Mage_Backend_Block_Widget_Grid_Column' as='status'>
                        <arguments>
                            <header translate='true' module='Enterprise_CatalogEvent'>Status</header>
                            <type>options</type>
                            <index>status</index>
                            <width>140</width>
                            <options type="options">Enterprise_CatalogEvent_Model_Resource_Event_Grid_Statuses</options>
                        </arguments>
                    </block>
                    <block type='Mage_Backend_Block_Widget_Grid_Column' as='display_state'>
                        <arguments>
                            <header translate='true' module='Enterprise_CatalogEvent'>Countdown Ticker</header>
                            <type>options</type>
                            <index>display_state</index>
                            <renderer>Enterprise_CatalogEvent_Block_Adminhtml_Event_Grid_Column_Renderer_Bitmask</renderer>
                            <options type="options">Enterprise_CatalogEvent_Model_Resource_Event_Grid_State</options>
                        </arguments>
                    </block>
                    <block type='Mage_Backend_Block_Widget_Grid_Column' as='sort_order'>
                        <arguments>
                            <header translate='true' module='Enterprise_CatalogEvent'>Sort Order</header>
                            <type>text</type>
                            <index>sort_order</index>
                            <width>70</width>
                        </arguments>
                    </block>
                    <block type='Mage_Backend_Block_Widget_Grid_Column' as='actions'>
                        <arguments>
                            <header translate='true' module='Enterprise_CatalogEvent'>Action</header>
                            <width>15</width>
                            <sortable>0</sortable>
                            <filter>0</filter>
                            <type>action</type>
                            <index>event_id</index>
                            <actions>
                                <edit>
                                    <caption translate="true" module="Enterprise_CatalogEvent">Edit</caption>
                                    <url>
                                        <base>*/*/edit</base>
                                    </url>
                                    <field>id</field>
                                </edit>
                            </actions>
                        </arguments>
                    </block>
                </block>
            </block>
        </reference>
    </adminhtml_catalog_event_block>
    
    <adminhtml_catalog_event_edit>
        <reference name="content">
            <block name="event_edit_page" type="Enterprise_CatalogEvent_Block_Adminhtml_Event_Edit" />
        </reference>
        <reference name="left">
            <block before="-" type="Mage_Backend_Block_Store_Switcher" name="store_switcher" template="store/switcher.phtml"></block>
        </reference>
    </adminhtml_catalog_event_edit>
    
    <adminhtml_catalog_category_edit>
        <reference name="category.edit">
            <block name="event.buttons" type="Enterprise_CatalogEvent_Block_Adminhtml_Catalog_Category_Edit_Buttons">
                <action method="addButtons"></action>
            </block>
        </reference>
    </adminhtml_catalog_category_edit>
</layout>
