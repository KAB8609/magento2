<config>
    <modules>
        <Enterprise_CatalogEvent>
            <version>1.11.0.0</version>
            <active>false</active>
            <depends>
                <Magento_Adminhtml />
                <Magento_Catalog />
                <Mage_Cms />
                <Mage_Sales />
                <Mage_Checkout />
            </depends>
        </Enterprise_CatalogEvent>
    </modules>
    <global>
        <resources>
            <enterprise_catalogevent_setup>
                <setup>
                    <module>Enterprise_CatalogEvent</module>
                    <class>Enterprise_CatalogEvent_Model_Resource_Setup</class>
                </setup>
            </enterprise_catalogevent_setup>
        </resources>
    </global>
    <default>
        <catalog>
            <enterprise_catalogevent>
                <enabled>1</enabled>
                <lister_output>1</lister_output>
                <lister_widget_limit>5</lister_widget_limit>
                <lister_widget_scroll>2</lister_widget_scroll>
            </enterprise_catalogevent>
        </catalog>
    </default>
    <frontend>
        <events>
            <catalog_category_load_after>
                <observers>
                    <enterprise_catalogevent>
                        <class>Enterprise_CatalogEvent_Model_Observer</class>
                        <method>applyEventToCategory</method>
                    </enterprise_catalogevent>
                </observers>
            </catalog_category_load_after>
            <catalog_controller_product_init_after>
                <observers>
                    <enterprise_catalogevent>
                        <class>Enterprise_CatalogEvent_Model_Observer</class>
                        <method>applyEventToProduct</method>
                    </enterprise_catalogevent>
                </observers>
            </catalog_controller_product_init_after>
            <review_controller_product_init_after>
                <observers>
                    <enterprise_catalogevent>
                        <class>Enterprise_CatalogEvent_Model_Observer</class>
                        <method>applyEventToProduct</method>
                    </enterprise_catalogevent>
                </observers>
            </review_controller_product_init_after>
            <catalog_category_collection_load_after>
                <observers>
                    <enterprise_catalogevent>
                        <class>Enterprise_CatalogEvent_Model_Observer</class>
                        <method>applyEventToCategoryCollection</method>
                    </enterprise_catalogevent>
                </observers>
            </catalog_category_collection_load_after>
            <catalog_product_collection_load_after>
                <observers>
                    <enterprise_catalogevent>
                        <class>Enterprise_CatalogEvent_Model_Observer</class>
                        <method>applyEventToProductCollection</method>
                    </enterprise_catalogevent>
                </observers>
            </catalog_product_collection_load_after>
            <catalog_product_is_salable_after>
                <observers>
                    <enterprise_catalogevent>
                        <class>Enterprise_CatalogEvent_Model_Observer</class>
                        <method>applyIsSalableToProduct</method>
                    </enterprise_catalogevent>
                </observers>
            </catalog_product_is_salable_after>
            <checkout_cart_product_add_after>
                <observers>
                    <enterprise_catalogevent>
                        <class>Enterprise_CatalogEvent_Model_Observer</class>
                        <method>applyEventOnQuoteItemSetProduct</method>
                    </enterprise_catalogevent>
                </observers>
            </checkout_cart_product_add_after>
            <sales_quote_item_qty_set_after>
                <observers>
                    <enterprise_catalogevent>
                        <class>Enterprise_CatalogEvent_Model_Observer</class>
                        <method>applyEventOnQuoteItemSetQty</method>
                    </enterprise_catalogevent>
                </observers>
            </sales_quote_item_qty_set_after>
        </events>
        <translate>
            <modules>
                <Enterprise_CatalogEvent>
                    <files>
                        <default>Enterprise_CatalogEvent.csv</default>
                    </files>
                </Enterprise_CatalogEvent>
            </modules>
        </translate>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <enterprise_catalogevent before="Magento_Adminhtml">Enterprise_CatalogEvent_Adminhtml</enterprise_catalogevent>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <translate>
            <modules>
                <Enterprise_CatalogEvent>
                    <files>
                        <default>Enterprise_CatalogEvent.csv</default>
                    </files>
                </Enterprise_CatalogEvent>
            </modules>
        </translate>
    </adminhtml>
</config>
