<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="../../../Mage/Widget/etc/widget.xsd">
    <widget id="event_lister" class="Enterprise_CatalogEvent_Block_Widget_Lister"
            translate="label description" placeholder_image="Enterprise_CatalogEvent::widget_lister.gif">
        <label>Catalog Events Carousel</label>
        <description>List all open Catalog Events as a Paginated Carousel</description>
        <parameter name="limit" xsi:type="text" required="true" visible="true" translate="label description">
            <label>Frame Size</label>
            <description>Number of Items to display at once</description>
            <value>5</value>
        </parameter>
        <parameter name="scroll" xsi:type="text" required="true" visible="true" translate="label description">
            <label>Scroll</label>
            <description>Number of Items to scroll per click</description>
            <value>2</value>
        </parameter>
        <parameter name="width" xsi:type="text" visible="true" translate="label description">
            <label>Block Custom Width</label>
            <description>The width in pixels will be set automatically if this value is empty.</description>
        </parameter>
        <parameter name="template" xsi:type="select" visible="false" required="true">
            <option name="default" value="widget/lister.phtml" selected="true" translate="label">
                <label>Catalog Events Carousel Default Template</label>
            </option>
        </parameter>
        <container name="left">
            <template name="lister" value="default"/>
        </container>
        <container name="content">
            <template name="lister" value="default"/>
        </container>
        <container name="right">
            <template name="lister" value="default"/>
        </container>
    </widget>
</widgets>
