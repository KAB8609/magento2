<widgets>
    <widget id="event_lister" class="Enterprise_CatalogEvent_Block_Widget_Lister" translate="name description"
            module="Enterprise_CatalogEvent">
        <name>Catalog Events Carousel</name>
        <description>List all open Catalog Events as a Paginated Carousel</description>
        <placeholder_image>Enterprise_CatalogEvent::widget_lister.gif</placeholder_image>
        <parameter name="limit" translate="label description" required="true" visible="true" value="5" xsi:type="text">
            <label>Frame Size</label>
            <description>Number of Items to display at once</description>
        </parameter>
        <parameter name="scroll" translate="label description" required="true" visible="true" value="5" xsi:type="text">
            <label>Scroll</label>
            <description>Number of Items to scroll per click</description>
        </parameter>
        <parameter name="width" translate="label description" visible="true" xsi:type="text">
            <label>Block Custom Width</label>
            <description>The width in pixels will be set automatically if this value is empty.</description>
        </parameter>
        <parameter name="template" required="true" xsi:type="select">
            <option name="default" translate="label" value="widget/lister.phtml" selected="true">
                Catalog Events Carousel Default Template
            </option>
        </parameter>
        <container section="left_column">
            <template name="lister" value="default"/>
        </container>
        <container section="main_content" name="content">
            <template name="lister" value="default"/>
        </container>
        <container section="right_column" name="right">
            <template name="lister" value="default"/>
        </container>
    </widget>
</widgets>
