<layout>
   <adminhtml_targetrule_index>
       <update handle="formkey"/>
       <update handle='adminhtml_targetrule_grid_block' />
       <reference name='content'>
           <block type='Enterprise_TargetRule_Block_Adminhtml_Targetrule' name='adminhtml.targetrule.grid.container' />
       </reference>
   </adminhtml_targetrule_index>

    <adminhtml_targetrule_grid_block>
        <reference name='adminhtml.targetrule.grid.container'>
            <block type='Mage_Backend_Block_Widget_Grid' name='adminhtml.targetrule.grid' as='grid'>
                <arguments>
                    <id>TargetRuleGrid</id>
                    <dataSource type='object'>Enterprise_TargetRule_Model_Resource_Rule_Collection</dataSource>
                    <default_sort>sort_order</default_sort>
                    <default_dir>ASC</default_dir>
                    <save_parameters_in_session>1</save_parameters_in_session>
                    <use_ajax>1</use_ajax>
                    <grid_url type="url">
                        <path>*/*/grid</path>
                        <params>
                            <_current>1</_current>
                        </params>
                    </grid_url>
                </arguments>
                <block type='Mage_Backend_Block_Widget_Grid_ColumnSet' name='adminhtml.targetrule.grid.columnSet' as='grid.columnSet'>
                    <arguments>
                        <rowUrl>
                            <path>*/*/edit</path>
                            <extraParamsTemplate>
                                <id>getId</id>
                            </extraParamsTemplate>
                        </rowUrl>
                    </arguments>
                    <block type='Mage_Backend_Block_Widget_Grid_Column' as='rule_id'>
                        <arguments>
                            <header translate='true' module='Enterprise_TargetRule'>ID</header>
                            <index>rule_id</index>
                            <type>text</type>
                            <width>20px</width>
                        </arguments>
                    </block>
                    <block type='Mage_Backend_Block_Widget_Grid_Column' as='name'>
                        <arguments>
                            <header translate='true' module='Enterprise_TargetRule'>Rule</header>
                            <index>name</index>
                            <type>text</type>
                            <escape>1</escape>
                        </arguments>
                    </block>
                    <block type='Mage_Backend_Block_Widget_Grid_Column' as='from_date'>
                        <arguments>
                            <header translate='true' module='Enterprise_TargetRule'>Start on</header>
                            <index>from_date</index>
                            <type>date</type>
                            <default>--</default>
                            <width>160px</width>
                        </arguments>
                    </block>
                    <block type='Mage_Backend_Block_Widget_Grid_Column' as='to_date'>
                        <arguments>
                            <header translate='true' module='Enterprise_TargetRule'>End on</header>
                            <index>to_date</index>
                            <type>date</type>
                            <default>--</default>
                            <width>160px</width>
                        </arguments>
                    </block>
                    <block type='Mage_Backend_Block_Widget_Grid_Column' as='sort_order'>
                        <arguments>
                            <header translate='true' module='Enterprise_TargetRule'>Priority</header>
                            <index>sort_order</index>
                            <type>text</type>
                            <width>1px</width>
                        </arguments>
                    </block>
                    <block type='Mage_Backend_Block_Widget_Grid_Column' as='apply_to'>
                        <arguments>
                            <header translate='true' module='Enterprise_TargetRule'>Applies To</header>
                            <index>apply_to</index>
                            <align>left</align>
                            <type>options</type>
                            <options type='options'>Enterprise_TargetRule_Model_Rule_Options_Applies</options>
                            <width>150px</width>
                        </arguments>
                    </block>
                    <block type='Mage_Backend_Block_Widget_Grid_Column' as='is_active'>
                        <arguments>
                            <header translate='true' module='Enterprise_TargetRule'>Status</header>
                            <index>is_active</index>
                            <align>left</align>
                            <type>options</type>
                            <options type='options'>Enterprise_TargetRule_Model_Rule_Options_Status</options>
                            <width>1px</width>
                        </arguments>
                    </block>
                </block>
            </block>
        </reference>
    </adminhtml_targetrule_grid_block>

    <adminhtml_targetrule_new>
        <update handle="adminhtml_targetrule_edit"/>
    </adminhtml_targetrule_new>

    <adminhtml_targetrule_edit>
        <reference name="head">
            <action method="setCanLoadExtJs">
                <flag>1</flag>
            </action>
            <action method="setCanLoadRulesJs">
                <flag>1</flag>
            </action>
        </reference>
        <reference name="content">
            <block type="Enterprise_TargetRule_Block_Adminhtml_Targetrule_Edit"
                   name="enterprise_targetrule_edit"/>
        </reference>
        <reference name="left">
            <block type="Enterprise_TargetRule_Block_Adminhtml_Targetrule_Edit_Tabs"
                   name="enterprise_targetrule_edit_tabs">
                <block type="Enterprise_TargetRule_Block_Adminhtml_Targetrule_Edit_Tab_Main"
                       name="enterprise_targetrule_edit_tab_main"></block>
                <block type="Enterprise_TargetRule_Block_Adminhtml_Targetrule_Edit_Tab_Conditions"
                       name="enterprise_targetrule_edit_tab_conditions"></block>
                <block type="Enterprise_TargetRule_Block_Adminhtml_Targetrule_Edit_Tab_Actions"
                       name="enterprise_targetrule_edit_tab_actions"></block>

                <action method="addTab">
                    <name>enterprise_targetrule_edit_tab_main</name>
                    <block>enterprise_targetrule_edit_tab_main</block>
                </action>
                <action method="addTab">
                    <name>enterprise_targetrule_edit_tab_conditions</name>
                    <block>enterprise_targetrule_edit_tab_conditions</block>
                </action>
                <action method="addTab">
                    <name>enterprise_targetrule_edit_tab_actions</name>
                    <block>enterprise_targetrule_edit_tab_actions</block>
                </action>
            </block>
        </reference>
    </adminhtml_targetrule_edit>

    <adminhtml_targetrule_grid>
        <update handle="formkey"/>
        <update handle="adminhtml_targetrule_grid_block"/>
        <container label="TargetRule Grid Container" name="adminhtml.targetrule.grid.container" output='1'/>
    </adminhtml_targetrule_grid>

    <adminhtml_catalog_product_related>
        <reference name="adminhtml.targetrule.grid.container">
            <block type="Enterprise_TargetRule_Block_Adminhtml_Product" name="targetrule.adminhtml.product" template="product.phtml" before="catalog.product.edit.tab.related">
                <action method="setFormPrefix"><params>related</params></action>
            </block>
        </reference>
    </adminhtml_catalog_product_related>

    <adminhtml_catalog_product_upsell>
        <reference name="adminhtml.targetrule.grid.container">
            <block type="Enterprise_TargetRule_Block_Adminhtml_Product" name="targetrule.adminhtml.product" template="product.phtml" before="catalog.product.edit.tab.upsell">
                <action method="setFormPrefix"><params>upsell</params></action>
            </block>
        </reference>
    </adminhtml_catalog_product_upsell>
</layout>
