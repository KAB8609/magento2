                <active>1</active>
            </pbridge_eway_direct>
            <psigate_basic>
                <active>0</active>
                <cctypes>AE,VI,MC,DI</cctypes>
                <cctypes_all>VI,MC,AE,DI,OT</cctypes_all>
                <storeid backend_model="Mage_Backend_Model_Config_Backend_Encrypted"/>
                <passphrase backend_model="Mage_Backend_Model_Config_Backend_Encrypted"/>
