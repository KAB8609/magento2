                <payment_action>authorize</payment_action>
                <allowspecific>0</allowspecific>
                <using_pbridge>1</using_pbridge>
            </psigate_basic>
            <pbridge_psigate_basic>
                <model>Enterprise_Pbridge_Model_Payment_Method_Psigate_Basic</model>
                <active>1</active>
            </pbridge_psigate_basic>
