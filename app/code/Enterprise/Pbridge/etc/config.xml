            <pbridge_ogone_direct translate="title">
                <model>Enterprise_Pbridge_Model_Payment_Method_Ogone</model>
                <title>Ogone Direct Link</title>
                <userid backend_model="Mage_Backend_Model_Config_Backend_Encrypted"/>
                <password backend_model="Mage_Backend_Model_Config_Backend_Encrypted"/>
                <passphrase backend_model="Mage_Backend_Model_Config_Backend_Encrypted"/>
                <payment_action>authorize</payment_action>
                <cctypes>VI</cctypes>
                <cctypes_all>VI,MC,AE,JCB,SM,SO,DI,DICL,CBCB,MSE,ECB,AURORE,OT</cctypes_all>
                <useccv>1</useccv>
                <using_pbridge>1</using_pbridge>
            </pbridge_ogone_direct>
            <pbridge_ogone_direct_debit translate="title">
                <model>Enterprise_Pbridge_Model_Payment_Method_Ogone_Direct_Debit</model>
                <title>Ogone Direct Debit</title>
                <payment_action>authorize</payment_action>
                <allowspecific>1</allowspecific>
                <specificcountry>AT,DE,NL</specificcountry>
                <using_pbridge>1</using_pbridge>
            </pbridge_ogone_direct_debit>
            <paybox_direct>
                <pbx_site backend_model="Mage_Backend_Model_Config_Backend_Encrypted"/>
                <pbx_rang backend_model="Mage_Backend_Model_Config_Backend_Encrypted"/>
                <pbx_cle backend_model="Mage_Backend_Model_Config_Backend_Encrypted"/>
                <payment_action>authorize</payment_action>
                <title>Paybox Direct</title>
                <useccv>1</useccv>
                <cctypes>AE,VI,MC,DI</cctypes>
                <cctypes_all>VI,MC,AE,OT</cctypes_all>
