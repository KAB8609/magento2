            </paybox_direct>
            <pbridge_paybox_direct>
                <model>Enterprise_Pbridge_Model_Payment_Method_Paybox_Direct</model>
                <active>1</active>
            </pbridge_paybox_direct>
            <worldpay_direct>
                <active>0</active>
                <cctypes>AE,VI,MC,JCB,DI</cctypes>
                <cctypes_all>VI,MC,AE,JCB,DI,DICL,MAES</cctypes_all>
                <merchant_code backend_model="Mage_Backend_Model_Config_Backend_Encrypted"/>
                <xml_password backend_model="Mage_Backend_Model_Config_Backend_Encrypted"/>
                <account_type>business</account_type>
                <title>Worldpay</title>
                <payment_action>authorize</payment_action>
                <useccv>1</useccv>
                <using_pbridge>1</using_pbridge>
            </worldpay_direct>
            <pbridge_worldpay_direct>
                <model>Enterprise_Pbridge_Model_Payment_Method_Worldpay_Direct</model>
                <active>1</active>
            </pbridge_worldpay_direct>
            <pbridge_payone_debit>
                <title>Direct Debit (Payone)</title>
                <merchantid backend_model="Mage_Backend_Model_Config_Backend_Encrypted"/>
                <portalid backend_model="Mage_Backend_Model_Config_Backend_Encrypted"/>
                <trans_key backend_model="Mage_Backend_Model_Config_Backend_Encrypted"/>
                <sub_account backend_model="Mage_Backend_Model_Config_Backend_Encrypted"/>
                <merchantid backend_model="Mage_Backend_Model_Config_Backend_Encrypted"/>
                <currency>EUR</currency>
                <using_pbridge>1</using_pbridge>
                <model>Enterprise_Pbridge_Model_Payment_Method_Payone_Debit</model>
                <active>0</active>
            </pbridge_payone_debit>
            <payone_gate>
                <title>Credit Card (Payone.de)</title>
                <cctypes>VI,MC,AE,JCB,SM,DI</cctypes>
                <cctypes_all>VI,MC,AE,JCB,MSI,SM,DICL,DI,CB</cctypes_all>
                <merchantid backend_model="Mage_Backend_Model_Config_Backend_Encrypted"/>
                <portalid backend_model="Mage_Backend_Model_Config_Backend_Encrypted"/>
                <trans_key backend_model="Mage_Backend_Model_Config_Backend_Encrypted"/>
