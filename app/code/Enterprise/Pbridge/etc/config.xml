<config>
    <modules>
        <Enterprise_Pbridge>
            <version>1.8.0.0.1</version>
            <active>false</active>
            <depends>
                <Enterprise_Enterprise/>
            </depends>
        </Enterprise_Pbridge>
    </modules>
    <global>
        <events>
            <controller_action_predispatch>
                <observers>
                    <enterprise_pbridge>
                        <class>Enterprise_Pbridge_Model_Observer</class>
                        <method>addPrivacyHeader</method>
                    </enterprise_pbridge>
                </observers>
            </controller_action_predispatch>
            <payment_method_is_active>
                <observers>
                    <enterprise_pbridge>
                        <class>Enterprise_Pbridge_Model_Observer</class>
                        <method>isPaymentMethodAvailable</method>
                    </enterprise_pbridge>
                </observers>
            </payment_method_is_active>
        </events>
        <payment>
            <cc>
                <types>
                    <UKE translate="name">
                        <code>UKE</code>
                        <name>Visa Electron</name>
                        <order>100</order>
                    </UKE>
                    <DELTA translate="name">
                        <code>DELTA</code>
                        <name>Visa Debit (Delta)</name>
                        <order>101</order>
                    </DELTA>
                    <DICL translate="name">
                        <code>DICL</code>
                        <name>Diners Club</name>
                        <order>102</order>
                    </DICL>
                    <LASER translate="name">
                        <code>LASER</code>
                        <name>Laser</name>
                        <order>103</order>
                    </LASER>
                    <CBCB translate="name">
                        <code>CBCB</code>
                        <name>Carte Bancaire CB</name>
                        <order>103</order>
                    </CBCB>
                    <MSE translate="name">
                        <code>MSE</code>
                        <name>Maestro</name>
                        <order>104</order>
                    </MSE>
                    <ECB translate="name">
                        <code>ECB</code>
                        <name>e-Carte Bleue</name>
                        <order>105</order>
                    </ECB>
                    <AURORE translate="name">
                        <code>AURORE</code>
                        <name>Aurore</name>
                        <order>106</order>
                    </AURORE>
                    <UATP translate="name">
                        <code>UATP</code>
                        <name>UATP</name>
                        <order>53</order>
                    </UATP>
                    <UFJNH translate="name">
                        <code>UFJNH</code>
                        <name>UFJ Nicos House Card</name>
                        <order>54</order>
                    </UFJNH>
                    <MAES translate="name">
                        <code>MAES</code>
                        <name>Maestro</name>
                        <order>104</order>
                    </MAES>
                    <MSI translate="name">
                        <code>MSI</code>
                        <name>Maestro International</name>
                        <order>104</order>
                    </MSI>
                    <CB translate="name">
                        <code>CB</code>
                        <name>Carte Bleue</name>
                        <order>105</order>
                    </CB>
                </types>
            </cc>
        </payment>
    </global>
    <frontend>
        <secure_url>
            <enterprise_pbridge_pbridge>/enterprise_pbridge/pbridge/</enterprise_pbridge_pbridge>
            <enterprise_pbridge_payment_profile>/enterprise_pbridge/payment_profile/</enterprise_pbridge_payment_profile>
        </secure_url>
        <routers>
            <enterprise_pbridge>
                <use>standard</use>
                <args>
                    <module>Enterprise_Pbridge</module>
                    <frontName>enterprise_pbridge</frontName>
                </args>
            </enterprise_pbridge>
        </routers>
        <translate>
            <modules>
                <Enterprise_Pbridge>
                    <files>
                        <default>Enterprise_Pbridge.csv</default>
                    </files>
                </Enterprise_Pbridge>
            </modules>
        </translate>
        <layout>
            <updates>
                <enterprise_pbridge module="Enterprise_Pbridge">
                    <file>layout.xml</file>
                </enterprise_pbridge>
            </updates>
        </layout>
        <di>
            <Enterprise_Pbridge_Model_Session>
                <parameters>
                    <sessionName>frontend</sessionName>
                </parameters>
            </Enterprise_Pbridge_Model_Session>
        </di>
        <events>
            <checkout_submit_all_after>
                <observers>
                    <pbridge_save_order_after_submit>
                        <class>Enterprise_Pbridge_Model_Observer</class>
                        <method>saveOrderAfterSubmit</method>
                    </pbridge_save_order_after_submit>
                </observers>
            </checkout_submit_all_after>
            <controller_action_postdispatch_checkout_onepage_saveOrder>
                <observers>
                    <pbridge_save_order_onepage>
                        <class>Enterprise_Pbridge_Model_Observer</class>
                        <method>setResponseAfterSaveOrder</method>
                    </pbridge_save_order_onepage>
                </observers>
            </controller_action_postdispatch_checkout_onepage_saveOrder>
        </events>
    </frontend>
    <adminhtml>
        <layout>
            <updates>
                <enterprise_pbridge module="Enterprise_Pbridge">
                    <file>layout.xml</file>
                </enterprise_pbridge>
            </updates>
        </layout>
        <events>
            <admin_system_config_changed_section_payment>
                <observers>
                    <enterprise_pbridge>
                        <class>Enterprise_Pbridge_Model_Observer</class>
                        <method>updatePaymentProfileStatus</method>
                    </enterprise_pbridge>
                </observers>
            </admin_system_config_changed_section_payment>
        </events>
        <di>
            <Enterprise_Pbridge_Model_Session>
                <parameters>
                    <sessionName>adminhtml</sessionName>
                </parameters>
            </Enterprise_Pbridge_Model_Session>
        </di>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Enterprise_Pbridge after="Mage_Adminhtml">Enterprise_Pbridge_Adminhtml</Enterprise_Pbridge>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <default>
        <payment>
            <pbridge translate="title" module="Enterprise_Pbridge">
                <model>Enterprise_Pbridge_Model_Payment_Method_Pbridge</model>
                <title>Payment Bridge</title>
                <debug>0</debug>
            </pbridge>
            <pbridge_paypal_direct>
                <model>Enterprise_Pbridge_Model_Payment_Method_Paypal</model>
                <active>1</active>
            </pbridge_paypal_direct>
            <pbridge_paypaluk_direct>
                <model>Enterprise_Pbridge_Model_Payment_Method_Paypaluk</model>
                <active>1</active>
            </pbridge_paypaluk_direct>
            <pbridge_authorizenet>
                <model>Enterprise_Pbridge_Model_Payment_Method_Authorizenet</model>
                <active>1</active>
            </pbridge_authorizenet>
            <pbridge_verisign>
                <model>Enterprise_Pbridge_Model_Payment_Method_Payflow_Pro</model>
                <active>1</active>
            </pbridge_verisign>
            <sagepay_direct>
                <active>0</active>
                <cctypes>AE,VI,MC,DI</cctypes>
                <cctypes_all>AE,VI,JCB,MC,SM,UKE,DELTA,DICL,LASER</cctypes_all>
                <debug>0</debug>
                <payment_action>authorize</payment_action>
                <mode>test</mode>
                <title>Credit Card (Sage Pay Direct)</title>
                <allowspecific>0</allowspecific>
                <using_pbridge>1</using_pbridge>
            </sagepay_direct>
            <pbridge_sagepay_direct>
                <model>Enterprise_Pbridge_Model_Payment_Method_Sagepay_Direct</model>
            </pbridge_sagepay_direct>
            <firstdata>
                <title>First Data Global Gateway</title>
                <currency>USD</currency>
                <cctypes>VI,MC,AE</cctypes>
                <cctypes_all>VI,MC,AE,JCB,DI</cctypes_all>
                <config_file backend_model="Enterprise_Pbridge_Model_System_Config_Backend_Firstdata_FileEncrypted"/>
                <using_pbridge>1</using_pbridge>
            </firstdata>
            <pbridge_firstdata>
                <model>Enterprise_Pbridge_Model_Payment_Method_Firstdata</model>
                <active>1</active>
            </pbridge_firstdata>
            <braintree_basic>
                <active>0</active>
                <cctypes>AE,VI,MC</cctypes>
                <cctypes_all>VI,MC,AE,JCB,DI</cctypes_all>
                <merchant_id backend_model="Mage_Backend_Model_Config_Backend_Encrypted"/>
                <public_key backend_model="Mage_Backend_Model_Config_Backend_Encrypted"/>
                <private_key backend_model="Mage_Backend_Model_Config_Backend_Encrypted"/>
                <title>Braintree</title>
                <payment_action>authorize</payment_action>
                <useccv>1</useccv>
                <using_pbridge>1</using_pbridge>
            </braintree_basic>
            <pbridge_braintree_basic>
                <model>Enterprise_Pbridge_Model_Payment_Method_Braintree_Basic</model>
                <active>1</active>
            </pbridge_braintree_basic>
            <cybersource_soap>
                <payment_action>authorize</payment_action>
                <title>Credit Card (Cybersource)</title>
                <cctypes>AE,VI,MC,DI</cctypes>
                <cctypes_all>VI,MC,AE,DI,JCB,DICL,LASER,UATP,SM,SO,OT</cctypes_all>
                <merchant_id backend_model="Mage_Backend_Model_Config_Backend_Encrypted"/>
                <security_key backend_model="Mage_Backend_Model_Config_Backend_Encrypted"/>
                <jpo_method>1,2,4,5</jpo_method>
                <jpo_installment_number>32</jpo_installment_number>
                <using_pbridge>1</using_pbridge>
            </cybersource_soap>
            <pbridge_cybersource_soap>
                <model>Enterprise_Pbridge_Model_Payment_Method_Cybersource_Soap</model>
                <active>1</active>
            </pbridge_cybersource_soap>
            <dibs>
                <title>Credit Card (DIBS)</title>
                <cctypes>VI, MC, AE, DI, OT</cctypes>
                <cctypes_all>AE,VI,JCB,MC,SM,OT</cctypes_all>
                <merchantid backend_model="Mage_Backend_Model_Config_Backend_Encrypted"/>
                <login backend_model="Mage_Backend_Model_Config_Backend_Encrypted"/>
                <password backend_model="Mage_Backend_Model_Config_Backend_Encrypted"/>
