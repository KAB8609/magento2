                <using_pbridge>1</using_pbridge>
            </payone_gate>
            <pbridge_payone_gate>
                <model>Enterprise_Pbridge_Model_Payment_Method_Payone_Gate</model>
                <active>1</active>
            </pbridge_payone_gate>
            <eway_direct>
                <using_pbridge>1</using_pbridge>
                <customer_id backend_model="Mage_Backend_Model_Config_Backend_Encrypted"/>
                <refunds_password backend_model="Mage_Backend_Model_Config_Backend_Encrypted"/>
