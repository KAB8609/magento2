<?php $_source  = $this->getSource() ?>
<?php $this->setPriceDataObject($_source) ?>

<?php if ((float) $_source->getGiftCardsAmount()): ?>
    <?php $_giftCards = $this->helper('Enterprise_GiftCardAccount_Helper_Data')->getCards($_source); ?>
    <?php foreach ($_giftCards as $_card): ?>
        <?php $_baseAmount = $_card['ba']; ?>
        <?php $_amount = $_card['a']; ?>
        <?php $_code = $_card['c']; ?>

        <tr>
            <td class="label"><?php echo $this->helper('Enterprise_GiftCardAccount_Helper_Data')->__('Gift Card (%s)', $_code) ?></td>
            <td>
                <?php echo $this->displayPrices(-$_baseAmount, -$_amount); ?>
            </td>
        </tr>
    <?php endforeach; ?>
<?php endif; ?>
