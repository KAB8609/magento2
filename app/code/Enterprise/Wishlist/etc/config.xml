<config>
    <modules>
        <Enterprise_Wishlist>
            <version>1.12.0.0</version>
            <active>false</active>
            <depends>
                <Mage_Wishlist />
            </depends>
        </Enterprise_Wishlist>
    </modules>
    <global>
        <resources>
            <enterprise_wishlist_setup>
                <setup>
                    <module>Enterprise_Wishlist</module>
                    <class>Enterprise_Wishlist_Model_Resource_Setup</class>
                </setup>
            </enterprise_wishlist_setup>
        </resources>
        <di>
            <Enterprise_Wishlist_Model_Item_Collection>
                <parameters>
                    <resource>
                        <instance type="Enterprise_Wishlist_Model_Resource_Item" />
                    </resource>
                </parameters>
            </Enterprise_Wishlist_Model_Item_Collection>
        </di>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <enterprise_wishlist before="Mage_Adminhtml">Enterprise_Wishlist_Adminhtml</enterprise_wishlist>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <enterprise_wishlist module="Enterprise_Wishlist">
                    <file>layout.xml</file>
                </enterprise_wishlist>
            </updates>
        </layout>
        <translate>
            <modules>
                <Enterprise_Wishlist>
                    <files>
                        <default>Enterprise_Wishlist.csv</default>
                    </files>
                </Enterprise_Wishlist>
            </modules>
        </translate>
    </adminhtml>
    <frontend>
        <routers>
            <wishlist>
                <args>
                    <modules>
                        <enterprise_wishlist before="Mage_Wishlist">Enterprise_Wishlist</enterprise_wishlist>
                    </modules>
                </args>
            </wishlist>
            <enterprise_wishlist>
                <use>standard</use>
                <args>
                    <module>Enterprise_Wishlist</module>
                    <frontName>wishlists</frontName>
                </args>
            </enterprise_wishlist>
        </routers>
        <layout>
            <updates>
                <enterprise_wishlist module="Enterprise_Wishlist">
                    <file>layout.xml</file>
                </enterprise_wishlist>
            </updates>
        </layout>
        <translate>
            <modules>
                <Enterprise_Wishlist>
                    <files>
                        <default>Enterprise_Wishlist.csv</default>
                    </files>
                </Enterprise_Wishlist>
            </modules>
        </translate>
        <events>
            <wishlist_delete_commit_after>
                <observers>
                    <enterprise_pagecache>
                        <class>Enterprise_PageCache_Model_Observer</class>
                        <method>registerWishlistChange</method>
                    </enterprise_pagecache>
                    <enterprise_pagecache>
                        <class>Enterprise_PageCache_Model_Observer</class>
                        <method>registerWishlistListChange</method>
                    </enterprise_pagecache>
                </observers>
            </wishlist_delete_commit_after>
            <wishlist_save_commit_after>
                <observers>
                    <enterprise_pagecache>
                        <class>Enterprise_PageCache_Model_Observer</class>
                        <method>registerWishlistListChange</method>
                    </enterprise_pagecache>
                </observers>
            </wishlist_save_commit_after>
        </events>
    </frontend>
    <default>
        <wishlist>
            <general>
                <multiple_wishlist_number>5</multiple_wishlist_number>
            </general>
        </wishlist>
    </default>
</config>