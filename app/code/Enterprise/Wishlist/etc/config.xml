<config>
    <global>
        <resources>
            <enterprise_wishlist_setup>
                <setup>
                    <module>Enterprise_Wishlist</module>
                    <class>Enterprise_Wishlist_Model_Resource_Setup</class>
                </setup>
            </enterprise_wishlist_setup>
        </resources>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <enterprise_wishlist before="Mage_Adminhtml">Enterprise_Wishlist_Adminhtml</enterprise_wishlist>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <translate>
            <modules>
                <Enterprise_Wishlist>
                    <files>
                        <default>Enterprise_Wishlist.csv</default>
                    </files>
                </Enterprise_Wishlist>
            </modules>
        </translate>
    </adminhtml>
    <frontend>
        <routers>
            <wishlist>
                <args>
                    <modules>
                        <enterprise_wishlist before="Mage_Wishlist">Enterprise_Wishlist</enterprise_wishlist>
                    </modules>
                </args>
            </wishlist>
            <enterprise_wishlist>
                <use>standard</use>
                <args>
                    <module>Enterprise_Wishlist</module>
                    <frontName>wishlists</frontName>
                </args>
            </enterprise_wishlist>
        </routers>
        <translate>
            <modules>
                <Enterprise_Wishlist>
                    <files>
                        <default>Enterprise_Wishlist.csv</default>
                    </files>
                </Enterprise_Wishlist>
            </modules>
        </translate>
    </frontend>
    <default>
        <wishlist>
            <general>
                <multiple_wishlist_number>5</multiple_wishlist_number>
            </general>
        </wishlist>
    </default>
</config>