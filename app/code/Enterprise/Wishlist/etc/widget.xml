<widgets>
    <widget id="wishlist_search" class="Enterprise_Wishlist_Block_Widget_Search"
            translate="name description" module="Enterprise_Wishlist" is_email_compatible="false">
        <name>Wishlist Search</name>
        <description>Wish List Search Description</description>
        <parameter name="types" translate="label description" required="true" visible="true"
                xsi:type="multiselect" sort_order="10">
            <label>Quick Search Form Types</label>
            <source_model>Enterprise_Wishlist_Model_Config_Source_Search</source_model>
        </parameter>
        <parameter name="template" translate="label" required="true" visible="true" xsi:type="select">
            <label>Template</label>
            <option name="default_template" translate="label" value="widget/search.phtml" selected="true">
                <label>Wish List Search Template</label>
            </option>
        </parameter>
        <container section="left_column" name="left">
            <template name="default" value="default_template" />
        </container>
        <container section="right_column" name="right">
            <template name="default" value="default_template" />
        </container>
    </widget>
</widgets>
