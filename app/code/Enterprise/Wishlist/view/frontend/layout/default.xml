<layout version="0.1.0">
    <default>
        <reference name="top.links">
            <action method="removeLinkBlock">
                <blockName>wishlist_link</blockName>
            </action>
            <block type="Enterprise_Wishlist_Block_Links" name="wishlist_link"/>
            <action method="addLinkBlock">
                <blockName>wishlist_link</blockName>
            </action>
        </reference>
        <block type="Enterprise_Wishlist_Block_Customer_Sidebar" name="wishlist_sidebar" template="Mage_Wishlist::sidebar.phtml"/>
        <reference name="before_body_end">
            <block type="Enterprise_Wishlist_Block_Behaviour" name="wishlist_behaviour" as="wishlist_behaviour" template="behaviour.phtml"/>
        </reference>
    </default>
</layout>
