<layout version="0.1.0">
    <adminhtml_report_customer_wishlist_block>
        <reference name="adminhtml.block.report.customer.wishlist.container">
            <block type="Enterprise_Wishlist_Block_Adminhtml_Report_Customer_Wishlist_Grid" name="adminhtml.block.report.customer.wishlist.grid" as="grid">
                <arguments>
                    <id>gridReportWishlists</id>
                    <dataSource type="object">Enterprise_Wishlist_Model_Resource_Item_Report_Collection</dataSource>
                </arguments>
                <block type="Magento_Backend_Block_Widget_Grid_Export" name="adminhtml.block.report.customer.wishlist.grid.export" as="grid.export">
                    <arguments>
                        <exportTypes>
                            <csv>
                                <urlPath>*/*/exportCsv</urlPath>
                                <label translate="true" module="Magento_Adminhtml">CSV</label>
                            </csv>
                            <excel>
                                <urlPath>*/*/exportExcel</urlPath>
                                <label translate="true" module="Magento_Adminhtml">Excel XML</label>
                            </excel>
                        </exportTypes>
                    </arguments>
                </block>
                <block type="Magento_Backend_Block_Widget_Grid_ColumnSet" name="adminhtml.block.report.customer.wishlist.columnSet" as="grid.columnSet">
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="added_at">
                        <arguments>
                            <header translate='true' module='Enterprise_Wishlist'>Added</header>
                            <index>added_at</index>
                            <type>datetime</type>
                            <header_css_class>col-period</header_css_class>
                            <column_css_class>col-period</column_css_class>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="customer_name">
                        <arguments>
                            <header translate='true' module='Enterprise_Wishlist'>Customer</header>
                            <index>customer_name</index>
                            <filter>0</filter>
                            <header_css_class>col-name</header_css_class>
                            <column_css_class>col-name</column_css_class>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="wishlist_name">
                        <arguments>
                            <header translate='true' module='Enterprise_Wishlist'>Wish List</header>
                            <index>wishlist_name</index>
                            <header_css_class>col-whishlist-name</header_css_class>
                            <column_css_class>col-whishlist-name</column_css_class>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="visibility">
                        <arguments>
                            <header translate='true' module='Enterprise_Wishlist'>Status</header>
                            <type>options</type>
                            <index>visibility</index>
                            <options>
                                <public>
                                    <value>1</value>
                                    <label translate="true" module="Enterprise_Wishlist">Public</label>
                                </public>
                                <private>
                                    <value>0</value>
                                    <label translate="true" module="Enterprise_Wishlist">Private</label>
                                </private>
                            </options>
                            <header_css_class>col-whishlist-status</header_css_class>
                            <column_css_class>col-whishlist-status</column_css_class>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="product_name">
                        <arguments>
                            <header translate='true' module='Enterprise_Wishlist'>Product</header>
                            <index>product_name</index>
                            <filter>0</filter>
                            <sortable>0</sortable>
                            <header_css_class>col-product</header_css_class>
                            <column_css_class>col-product</column_css_class>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="product_sku">
                        <arguments>
                            <header translate='true' module='Enterprise_Wishlist'>SKU</header>
                            <index>product_sku</index>
                            <filter>0</filter>
                            <sortable>0</sortable>
                            <header_css_class>col-sku</header_css_class>
                            <column_css_class>col-sku</column_css_class>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="item_comment">
                        <arguments>
                            <header translate='true' module='Enterprise_Wishlist'>Comment</header>
                            <index>description</index>
                            <header_css_class>col-comment</header_css_class>
                            <column_css_class>col-comment</column_css_class>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column"  ifconfig="modules/CatalogInventory/active" as="item_qty" >
                        <arguments>
                            <header translate='true' module='Enterprise_Wishlist'>Wish List Quantity</header>
                            <index>item_qty</index>
                            <type>number</type>
                            <header_css_class>col-whishlist-qty</header_css_class>
                            <column_css_class>col-whishlist-qty</column_css_class>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" ifconfig="modules/CatalogInventory/active" as="product_qty">
                        <arguments>
                            <header translate='true' module='Enterprise_Wishlist'>Store Quantity</header>
                            <index>product_qty</index>
                            <type>number</type>
                            <header_css_class>col-available-qty</header_css_class>
                            <column_css_class>col-available-qty</column_css_class>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" ifconfig="modules/CatalogInventory/active" as="qty_diff">
                        <arguments>
                            <header translate='true' module='Enterprise_Wishlist'>Surplus / Deficit</header>
                            <index>qty_diff</index>
                            <type>number</type>
                            <header_css_class>col-qty-diff</header_css_class>
                            <column_css_class>col-qty-diff</column_css_class>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" ifconfig="modules/CatalogInventory/active" as="product_price">
                        <arguments>
                            <header translate='true' module='Enterprise_Wishlist'>Price</header>
                            <index>product_price</index>
                            <filter>0</filter>
                            <sortable>0</sortable>
                            <type>price</type>
                            <renderer>Magento_Adminhtml_Block_Report_Grid_Column_Renderer_Currency</renderer>
                            <header_css_class>col-price</header_css_class>
                            <column_css_class>col-price</column_css_class>
                        </arguments>
                    </block>
                </block>
            </block>
        </reference>
    </adminhtml_report_customer_wishlist_block>
</layout>
