<layout version="0.1.0">
    <checkout_cart_index>
        <reference name="checkout.cart.crosssell">
            <action method="addPriceBlockType">
                <type>giftcard</type>
                <block>Enterprise_GiftCard_Block_Catalog_Product_Price</block>
                <template>catalog/product/price.phtml</template>
            </action>
        </reference>
        <reference name="checkout.cart">
            <action method="addItemRender">
                <type>giftcard</type>
                <block>Enterprise_GiftCard_Block_Checkout_Cart_Item_Renderer</block>
                <template>Magento_Checkout::cart/item/default.phtml</template>
            </action>
        </reference>
    </checkout_cart_index>
</layout>
