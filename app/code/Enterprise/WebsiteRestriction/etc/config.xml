<config>
    <modules>
        <Enterprise_WebsiteRestriction>
            <version>1.11.0.0.1</version>
            <active>false</active>
            <depends>
                <Magento_Core/>
                <Mage_Customer/>
                <Mage_Cms />
            </depends>
        </Enterprise_WebsiteRestriction>
    </modules>
    <global>
        <resources>
            <enterprise_websiterestriction_setup>
                <setup>
                    <module>Enterprise_WebsiteRestriction</module>
                    <class>Enterprise_WebsiteRestriction_Model_Resource_Setup</class>
                </setup>
            </enterprise_websiterestriction_setup>
        </resources>
    </global>
    <frontend>
        <events>
            <controller_action_predispatch>
                <observers>
                    <enterprise_websiterestriction>
                        <class>Enterprise_WebsiteRestriction_Model_Observer</class>
                        <method>restrictWebsite</method>
                    </enterprise_websiterestriction>
                </observers>
            </controller_action_predispatch>
            <customer_registration_is_allowed>
                <observers>
                    <enterprise_websiterestriction>
                        <class>Enterprise_WebsiteRestriction_Model_Observer</class>
                        <method>restrictCustomersRegistration</method>
                    </enterprise_websiterestriction>
                </observers>
            </customer_registration_is_allowed>
            <controller_action_layout_load_before>
                <observers>
                    <enterprise_websiterestriction>
                        <class>Enterprise_WebsiteRestriction_Model_Observer</class>
                        <method>addPrivateSalesLayoutUpdate</method>
                    </enterprise_websiterestriction>
                </observers>
            </controller_action_layout_load_before>
        </events>
        <routers>
            <restriction>
                <use>standard</use>
                <args>
                    <module>Enterprise_WebsiteRestriction</module>
                    <frontName>restriction</frontName>
                </args>
            </restriction>
        </routers>
        <enterprise>
            <websiterestriction>
                <full_action_names>
                    <generic>
                        <captcha_refresh_index/>
                        <customer_account_login/>
                        <customer_account_loginPost/>
                        <customer_account_forgotpassword/>
                        <customer_account_forgotpasswordpost/>
                        <customer_account_confirm/>
                        <customer_account_confirmation/>
                        <customer_account_resetpassword/>
                        <customer_account_createpassword/>
                        <customer_account_resetpasswordpost/>
                        <core_index_noCookies/>
                        <paypal_ipn_standard/>
                        <paypal_ipn_express/>
                        <paypal_ipn_direct/>
                        <paypal_ipn_index/>
                        <paypaluk_ipn_express/>
                        <paypaluk_ipn_direct/>
                        <paypal_payflow_silentPost/>
                        <paypal_payflowadvanced_silentPost/>
                        <googlecheckout_api_index/>
                        <googlecheckout_api_beacon/>
                        <authorizenet_directpost_payment_response/>
                        <enterprise_pbridge_PbridgeIpn_index/>
                        <authorizenet_directpost_payment_response/>
                        <enterprise_pbridge_PbridgeIpn_index/>
                    </generic>
                    <register>
                        <customer_account_create/>
                        <customer_account_createpost/>
                    </register>
                </full_action_names>
            </websiterestriction>
        </enterprise>
        <translate>
            <modules>
                <Enterprise_WebsiteRestriction>
                    <files>
                        <default>Enterprise_WebsiteRestriction.csv</default>
                    </files>
                </Enterprise_WebsiteRestriction>
            </modules>
        </translate>
    </frontend>
    <default>
        <general>
            <restriction>
                <cms_page>service-unavialable</cms_page>
            </restriction>
        </general>
    </default>
</config>
