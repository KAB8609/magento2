<config>
    <api2>
        <resources>
            <reviews>
                <group>catalog_product</group>
                <type>reviews</type>
                <model>review/api2_reviews</model>
                <working_model>review/review</working_model>
                <title>Product Reviews</title>
                <sort_order>110</sort_order>
                <privileges>
                    <!-- For collection only CREATE and retrieve -->
                    <create>1</create>
                    <retrieve>1</retrieve>
                </privileges>
                <routes>
                    <route_main>
                        <mask>/reviews</mask>
                    </route_main>
                </routes>
                <instance>review</instance>
                <versions>1</versions>
            </reviews>
            <review>
                <group>catalog_product</group>
                <type>review</type>
                <model>review/api2_review</model>
                <working_model>review/review</working_model>
                <title>Product Review</title>
                <sort_order>100</sort_order>
                <privileges>
                    <retrieve>1</retrieve>
                    <update>1</update>
                    <delete>1</delete>
                </privileges>
                <attributes>
                    <review_id>ID</review_id>
                    <product_id>Product ID</product_id>
                    <status_id>Review Status</status_id>
                    <stores>Assigned Stores</stores>
                    <store_id>Store ID</store_id>
                    <nickname>Nickname</nickname>
                    <title>Review Summary</title>
                    <detail>Review Text</detail>
                </attributes>
                <routes>
                    <route_main>
                        <mask>/review/:id</mask>
                    </route_main>
                </routes>
                <collection>reviews</collection>
                <versions>1</versions>
            </review>
        </resources>
    </api2>
</config>
