<config>
    <api2>
        <resources>
            <reviews>
                <group>catalog_product</group>
                <type>reviews</type>
                <model>review/api2_reviews</model>
                <title>Product Reviews</title>
                <sort_order>110</sort_order>
                <privileges>
                    <!-- For collection only CREATE and retrieve-->
                    <create>1</create>
                    <retrieve>1</retrieve>
                </privileges>
                <attributes>
                    <!-- Source model with available attributes -->
                    <model>review/api2_review_rest</model>
                </attributes>
                <routes>
                    <route_main>
                        <mask>/reviews</mask>
                    </route_main>
                </routes>
            </reviews>
            <review>
                <group>catalog_product</group>
                <type>review</type>
                <model>review/api2_review</model>
                <title>Product Review</title>
                <sort_order>100</sort_order>
                <privileges>
                    <create>1</create>
                    <retrieve>1</retrieve>
                    <update>1</update>
                    <delete>1</delete>
                </privileges>
                <attributes>
                    <!-- Source model with available attributes -->
                    <model>review/api2_review_rest</model>
                </attributes>
                <routes>
                    <route_main>
                        <mask>/review/:id</mask>
                    </route_main>
                </routes>
            </review>
        </resources>
    </api2>
</config>
