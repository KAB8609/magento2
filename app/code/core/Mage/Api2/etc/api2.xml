<?xml version="1.0"?>
<config>
    <api2>
       <resources>
            <products><!-- this not used but must be unique -->
                <type>products</type><!-- used in ACL -->
                <model>Mage_Catalog_Model_Products_Apia</model><!-- used in dispatching -->
                <title>Catalog Products</title><!-- not used now, probably useful in frontend -->
                <routes>
                    <route_1>
                        <mask>/products</mask>
                    </route_1>
                </routes>
            </products>
            <product><!-- this not used but must be unique -->
                <type>product</type><!-- used in ACL -->
                <model>Mage_Catalog_Model_Product_Api2</model><!-- used in dispatching -->
                <title>Catalog Product</title><!-- not used now, probably useful in frontend -->
                <routes>
                    <route_1>
                        <mask>/products/:id</mask>
                    </route_1>
                </routes>
            </product>
           <!--
            <api_login>
                <routes>
                    <route1>
                        <mask>login</mask>
                    </route1>
                    <route>
                        <mask>login2</mask>
                    </route>
                </routes>
            </api_login>
            -->
        </resources>
        <interpreters>
            <text_plain>
                <type>text/plain</type>
                <model>api2/request_interpreter_query</model>
            </text_plain>
            <text_html>
                <type>text/html</type>
                <model>api2/request_interpreter_html</model>
            </text_html>
            <application_json>
                <type>application/json</type>
                <model>api2/request_interpreter_json</model>
            </application_json>
            <application_xml>
                <type>application/xml</type>
                <model>api2/request_interpreter_xml</model>
            </application_xml>
            <application_xhtml_xml>
                <type>application/xhtml+xml</type>
                <model>api2/request_interpreter_xml</model>
            </application_xhtml_xml>
            <text_xml>
                <type>text/xml</type>
                <model>api2/request_interpreter_xml</model>
            </text_xml>
        </interpreters>
        <renderers>
        </renderers>
    </api2>
</config>
