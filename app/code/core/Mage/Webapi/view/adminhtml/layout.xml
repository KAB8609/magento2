<layout>
    <adminhtml_webapi_user_index>
        <reference name="content">
            <block type="Mage_Webapi_Block_Adminhtml_User" name="webapi.user" />
        </reference>
    </adminhtml_webapi_user_index>

    <adminhtml_webapi_user_edit>
        <reference name="content">
            <block type="Mage_Webapi_Block_Adminhtml_User_Edit" name="webapi.user.edit" />
        </reference>
    </adminhtml_webapi_user_edit>

    <adminhtml_webapi_user_grid>
        <block type="Mage_Webapi_Block_Adminhtml_User_Grid" name="root" output="toHtml" />
    </adminhtml_webapi_user_grid>

    <adminhtml_webapi_role_index>
        <reference name="content">
            <block type="Mage_Webapi_Block_Adminhtml_Role" name="webapi.role" />
        </reference>
    </adminhtml_webapi_role_index>

    <adminhtml_webapi_role_rolegrid>
        <block type="Mage_Webapi_Block_Adminhtml_Role_Grid" name="root" output="toHtml" />
    </adminhtml_webapi_role_rolegrid>

    <adminhtml_webapi_role_edit>
        <reference name="content">
            <block type="Mage_Webapi_Block_Adminhtml_Role_Edit" name="webapi.role.edit" />
        </reference>
        <reference name="left">
            <block type="Mage_Webapi_Block_Adminhtml_Role_Edit_Tabs" name="webapi.role.edit.tabs">
                <block type="Mage_Webapi_Block_Adminhtml_Role_Edit_Tab_Main" name="webapi.role.edit.tab.main" />
                <block type="Mage_Webapi_Block_Adminhtml_Role_Edit_Tab_Resource" name="webapi.role.edit.tab.resource"
                    template="Mage_Webapi::rolesedit.phtml" />
                <block type="Mage_Webapi_Block_Adminhtml_Role_Edit_Tab_User" name="webapi.role.edit.tab.user"
                    template="Mage_Webapi::rolesusers.phtml" />
            </block>
        </reference>
        <reference name="head">
            <action method="setCanLoadExtJs"><flag>1</flag></action>
        </reference>
        <reference name="js">
            <block type="Mage_Core_Block_Template" name="roles-users-grid-js"
                template="Mage_Webapi::rolesusersgridjs.phtml" />
        </reference>
    </adminhtml_webapi_role_edit>
</layout>
