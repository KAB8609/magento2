<config>
    <modules>
        <Mage_Launcher>
            <version>2.0.0.0</version>
            <active>true</active>
            <codePool>core</codePool>
        </Mage_Launcher>
    </modules>
    <adminhtml>
        <layout>
            <updates>
                <launcher module="Mage_Launcher">
                    <file>layout.xml</file>
                </launcher>
            </updates>
        </layout>
    </adminhtml>
    <admin>
        <routers>
            <launcher>
                <use>admin</use>
                <args>
                    <module>Mage_Launcher</module>
                    <frontName>launcher</frontName>
                </args>
            </launcher>
        </routers>
    </admin>
    <global>
        <resources>
            <launcher_setup>
                <setup>
                    <module>Mage_Launcher</module>
                    <class>Mage_Launcher_Model_Resource_Setup</class>
                </setup>
            </launcher_setup>
        </resources>
    </global>
    <adminhtml>
        <events>
            <admin_system_config_section_save_after>
                <observers>
                    <launcher_system_config_observer>
                        <class>Mage_Launcher_Model_SystemConfigObserver</class>
                        <method>handleSystemConfigChange</method>
                    </launcher_system_config_observer>
                </observers>
            </admin_system_config_section_save_after>
        </events>
        <launcher>
            <tiles>
                <business_info>
                    <state_resolver>Mage_Launcher_Model_Storelauncher_Businessinfo_StateResolver</state_resolver>
                    <save_handler>Mage_Launcher_Model_Storelauncher_Businessinfo_SaveHandler</save_handler>
                </business_info>
                <content_pages>
                    <state_resolver>Mage_Launcher_Model_Promotestore_StateResolver</state_resolver>
                    <save_handler>Mage_Launcher_Model_Promotestore_SaveHandler</save_handler>
                </content_pages>
                <reports>
                    <state_resolver>Mage_Launcher_Model_Promotestore_StateResolver</state_resolver>
                    <save_handler>Mage_Launcher_Model_Promotestore_SaveHandler</save_handler>
                </reports>
            </tiles>
        </launcher>
    </adminhtml>
</config>
