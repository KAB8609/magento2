<config>
    <widgets>
        <cms_page_link type="cms/widget_page_link" translate="name description" module="cms">
            <name>CMS Page Link</name>
            <description type="desc">Widget generates link to specified cms page</description>
            <parameters>
                <href type="complex" translate="label">
                    <visible />
                    <required />
                    <label>Page</label>
                    <type>
                        <element_type>label</element_type>
                        <element_helper>adminhtml/cms_page_widget_chooser</element_helper>
                    </type>
                </href>
                <anchor_text translate="label">
                    <visible />
                    <label>Anchor Text</label>
                    <type>text</type>
                </anchor_text>
                <title translate="label">
                    <visible />
                    <label>Anchor Title</label>
                    <type>text</type>
                </title>
            </parameters>
        </cms_page_link>
    </widgets>
</config>
