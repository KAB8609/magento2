<?xml version="1.0"?>
<config>
    <modules>
        <Mage_Cms>
            <version>0.5.0</version>
        </Mage_Cms>
    </modules>
    <frontend>
        <routers>
         <cms>
            <use>standard</use>
            <args>
               <module>Mage_Cms</module>
               <frontName>cms</frontName>
            </args>
         </cms>
        </routers>
        <events>
            <action_noRoute>
                <observers>
                    <cms>
                        <type>singleton</type>
                        <class>cms/observer</class>
                        <method>noRoute</method>
                    </cms>
                </observers>
            </action_noRoute>
        </events>
    </frontend>
    <global>
        <models>
            <cms>
                <class>Mage_Cms_Model</class>
                <resourceModel>cms_mysql4</resourceModel>
            </cms>
            <cms_mysql4>
                <class>Mage_Cms_Model_Mysql4</class>
                <entities>
                    <page>
                        <table>cms_page</table>
                    </page>
                </entities>
            </cms_mysql4>
        </models>
        <resources>
            <cms_setup>
                <setup>
                    <module>Mage_Cms</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </cms_setup>
            <cms_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </cms_write>
            <cms_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </cms_read>
        </resources>
    </global>
</config>
