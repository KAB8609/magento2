<?xml version="1.0"?>
<config>
   <modules>
      <Mage_Tag>
         <version>0.5.0</version>
         <depends>
            <Mage_Core />
         </depends>
      </Mage_Tag>
   </modules>
   <global>
      <models>
         <tag>
            <class>Mage_Tag_Model</class>
            <resourceModel>tag_mysql4</resourceModel>
         </tag>
                 <tag_customer>
            <class>Mage_Tag_Model_Customer</class>
            <resourceModel>tag_entity_customer</resourceModel>
                 </tag_customer>
                 <tag_entity_customer>
            <class>Mage_Tag_Model_Entity_Customer</class>
                 </tag_entity_customer>
         <tag_mysql4>
            <class>Mage_Tag_Model_Mysql4</class>
            <entities>
               <tag>
                  <table>tag</table>
               </tag>
               <tag_relation>
                  <table>tag_relation</table>
               </tag_relation>
            </entities>
         </tag_mysql4>
      </models>
      <resources>
         <tag_setup>
            <setup>
               <module>Mage_Tag</module>
            </setup>
            <connection>
               <use>core_setup</use>
            </connection>
         </tag_setup>
         <tag_write>
            <connection>
               <use>core_write</use>
            </connection>
         </tag_write>
         <tag_read>
            <connection>
               <use>core_read</use>
            </connection>
         </tag_read>
      </resources>
      <block>
         <groups><tag><class>Mage_Tag_Block</class></tag></groups>
      </block>
   </global>
   <frontend>
      <routers>
         <tag>
            <default>true</default>
            <class>Mage_Core_Controller_Front_Router</class>
            <args>
               <module>Mage_Tag</module>
               <frontName>catalog</frontName>
            </args>
         </tag>
      </routers>
   </frontend>
</config>
