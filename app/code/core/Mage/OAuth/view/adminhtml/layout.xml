<layout>
    <!-- Consumers -->
    <adminhtml_oauth_consumer_index>
        <reference name="content">
            <block type="Mage_OAuth_Block_Adminhtml_OAuth_Consumer" name="oauth_consumer"/>
        </reference>
    </adminhtml_oauth_consumer_index>

    <adminhtml_oauth_consumer_grid>
        <remove name="root"/>
        <block type="Mage_OAuth_Block_Adminhtml_OAuth_Consumer_Grid" name="oauth_consumer.grid" output="toHtml"/>
    </adminhtml_oauth_consumer_grid>

    <adminhtml_oauth_consumer_new>
        <reference name="content">
            <block type="Mage_OAuth_Block_Adminhtml_OAuth_Consumer_Edit" name="oauth_consumer.edit">
                <block type="Mage_OAuth_Block_Adminhtml_OAuth_Consumer_Edit_Form" name="form"/>
            </block>
        </reference>
    </adminhtml_oauth_consumer_new>

    <adminhtml_oauth_consumer_edit>
        <reference name="content">
            <block type="Mage_OAuth_Block_Adminhtml_OAuth_Consumer_Edit" name="oauth_consumer.edit">
                <block type="Mage_OAuth_Block_Adminhtml_OAuth_Consumer_Edit_Form" name="form"/>
            </block>
        </reference>
    </adminhtml_oauth_consumer_edit>
    <!-- EOF Consumers -->

    <!-- My Applications -->
    <adminhtml_oauth_admin_token_index>
        <reference name="content">
            <block type="Mage_OAuth_Block_Adminhtml_OAuth_Admin_Token" name="oauth_admin_token"/>
        </reference>
    </adminhtml_oauth_admin_token_index>

    <adminhtml_oauth_admin_token_grid>
        <remove name="root"/>
        <block type="Mage_OAuth_Block_Adminhtml_OAuth_Admin_Token_Grid" name="oauth_admin_token.grid" output="toHtml"/>
    </adminhtml_oauth_admin_token_grid>
    <!-- EOF My Applications -->

    <!-- Authorize -->
    <!--Handle for simple pages-->
    <oauth_authorize_head_simple>
        <remove name="js_cookie" />
        <reference name="head">
            <action method="setTemplate">
                <template>Mage_OAuth::authorize/head-simple.phtml</template>
            </action>
            <block type="Mage_OAuth_Block_Authorize_Style" name="oauth.authorize.style" template="authorize/simple-css.phtml" />
        </reference>
    </oauth_authorize_head_simple>

    <adminhtml_oauth_authorize_index translate="label">
        <label>OAuth authorization for admin</label>
        <reference name="root">
            <action method="setTemplate"><template>Mage_Page::empty.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="Mage_OAuth_Block_Adminhtml_OAuth_Authorize" name="oauth.authorize.form" template="authorize/form/login.phtml"/>
            <block type="Mage_OAuth_Block_Adminhtml_OAuth_Authorize_Button" name="oauth.authorize.button" template="authorize/button.phtml" />
        </reference>
    </adminhtml_oauth_authorize_index>

    <adminhtml_oauth_authorize_simple translate="label">
        <label>OAuth authorization simple for admin</label>
        <update handle="adminhtml_oauth_authorize_index"/>
        <update handle="oauth_authorize_head_simple"/>
        <reference name="oauth.authorize.form">
            <action method="setTemplate">
                <template>Mage_OAuth::authorize/form/login-simple.phtml</template>
            </action>
        </reference>
        <reference name="oauth.authorize.button">
            <action method="setTemplate">
                <template>Mage_OAuth::authorize/button-simple.phtml</template>
            </action>
        </reference>
    </adminhtml_oauth_authorize_simple>
    <!-- EOF Authorize -->

    <!-- Confirm Authorization -->
    <adminhtml_oauth_authorize_confirm translate="label">
        <label>Confirm token authorization for admin</label>
        <reference name="root">
            <action method="setTemplate"><template>Mage_Page::empty.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="Mage_Core_Block_Template" name="oauth.authorize.confirm" template="Mage_OAuth::authorize/confirm.phtml" />
        </reference>
    </adminhtml_oauth_authorize_confirm>

    <adminhtml_oauth_authorize_confirmsimple translate="label">
        <update handle="adminhtml_oauth_authorize_confirm"/>
        <update handle="oauth_authorize_head_simple"/>
        <label>Confirm token authorization Pop Up for admin</label>
        <reference name="oauth.authorize.confirm">
            <action method="setTemplate">
                <template>Mage_OAuth::authorize/confirm-simple.phtml</template>
            </action>
        </reference>
    </adminhtml_oauth_authorize_confirmsimple>
    <!-- EOF Confirm Authorization -->

    <!-- Reject Authorization -->
    <adminhtml_oauth_authorize_reject translate="label">
        <label>Reject token authorization for admin</label>
        <reference name="root">
            <action method="setTemplate">
                <template>Mage_Page::empty.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <block type="Mage_Core_Block_Template" name="oauth.authorize.reject" template="Mage_OAuth::authorize/reject.phtml" />
        </reference>
    </adminhtml_oauth_authorize_reject>

    <adminhtml_oauth_authorize_rejectsimple translate="label">
        <update handle="adminhtml_oauth_authorize_reject"/>
        <update handle="oauth_authorize_head_simple"/>
        <label>Reject token authorization Pop Up for admin</label>
        <reference name="oauth.authorize.reject">
            <action method="setTemplate">
                <template>Mage_OAuth::authorize/reject-simple.phtml</template>
            </action>
        </reference>
    </adminhtml_oauth_authorize_rejectsimple>
    <!-- EOF Reject Authorization -->

    <adminhtml_oauth_authorizedtokens_index>
        <reference name="content">
            <block type="Mage_OAuth_Block_Adminhtml_OAuth_AuthorizedTokens" name="oauth_authorizedTokens"/>
        </reference>
    </adminhtml_oauth_authorizedtokens_index>

    <adminhtml_oauth_authorizedtokens_grid>
        <remove name="root"/>
        <block type="Mage_OAuth_Block_Adminhtml_OAuth_AuthorizedTokens_Grid" name="oauth_authorizedTokens.grid" output="toHtml"/>
    </adminhtml_oauth_authorizedtokens_grid>
</layout>
