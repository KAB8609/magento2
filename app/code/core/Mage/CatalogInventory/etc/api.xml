<config>
    <api>
        <resources>
            <cataloginventory translate="title" module="cataloginventory">
                <model>cataloginventory/api</model>
                <title>Category API</title>
                <acl>cataloginventory</acl>
                <methods>
                    <list translate="title" module="cataloginventory">
                        <title>Retrieve inventory data by product ids</title>
                        <method>items</method>
                    </list>
                    <update translate="title" module="cataloginventory">
                        <title>Update product inventory data</title>
                        <acl>cataloginventory/update</acl>
                    </update>
                </methods>
                <faults module="cataloginventory">
                    <not_exists>
                        <code>101</code>
                        <message>Product not exists.</message>
                    </not_exists>
                    <not_updated>
                        <code>102</code>
                        <message>Product inventory not updated. Details in error message.</message>
                    </not_updated>
                </faults>
            </cataloginventory>
        </resources>
        <resources_alias>
            <product_inventory>cataloginventory</product_inventory>
        </resources_alias>
        <acl>
            <resources>
                <all>
                    <cataloginventory translate="title" module="catalog">
                        <title>Catalog Inventory</title>
                        <update translate="title" module="catalog">
                            <title>Update</title>
                        </update>
                    </cataloginventory>
                </all>
            </resources>
        </acl>
    </api>
</config>