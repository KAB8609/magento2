<config>
    <api2>
        <resource_groups>
            <cataloginventory translate="title" module="cataloginventory">
                <title>CatalogInventory</title>
                <sort_order>120</sort_order>
            </cataloginventory>
        </resource_groups>
        <resources>
            <stockitem>
                <group>cataloginventory</group>
                <type>stockitem</type>
                <model>cataloginventory/api2_stock_item</model>
                <working_model>cataloginventory/stock_item</working_model>
                <title>Stock Item</title>
                <privileges>
                    <retrieve>1</retrieve>
                    <update>1</update>
                </privileges>
                <routes>
                    <route_main>
                        <mask>/stockitems/:id</mask>
                    </route_main>
                </routes>
                <instance>stock_item</instance>
                <versions>1</versions>
            </stockitem>
            <stockitems>
                <group>cataloginventory</group>
                <type>stockitems</type>
                <model>cataloginventory/api2_stock_items</model>
                <working_model>cataloginventory/stock_item</working_model>
                <title>Stock Items</title>
                <privileges>
                    <retrieve>1</retrieve>
                    <update>1</update>
                </privileges>
                <routes>
                    <route_main>
                        <mask>/stockitems</mask>
                    </route_main>
                </routes>
                <instance>stock_item</instance>
                <versions>1</versions>
            </stockitems>
        </resources>
    </api2>
</config>
