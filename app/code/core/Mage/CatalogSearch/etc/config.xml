<config>
   <modules>
      <Mage_CatalogSearch>
         <version>0.1.2</version> 
         <depends>
            <Mage_Catalog />
         </depends>
      </Mage_CatalogSearch>
   </modules>
   <global>
      <models>
         <catalogsearch>
            <class>Mage_CatalogSearch_Model</class>
            <resourceModel>catalogsearch_mysql4</resourceModel>
         </catalogsearch>
         
         <catalogsearch_mysql4>
            <class>Mage_CatalogSearch_Model_Mysql4</class>
            <entities>
               <search>
                 <table>catalogsearch</table>
               </search>
            </entities>
         </catalogsearch_mysql4>
      </models>
      <resources>
         <catalogsearch_setup>
            <setup>
               <module>Mage_CatalogSearch</module>
            </setup>
            <connection>
               <use>core_setup</use>
            </connection>
         </catalogsearch_setup>
         <catalogsearch_write>
            <connection>
               <use>core_write</use>
            </connection>
         </catalogsearch_write>
         <catalogsearch_read>
            <connection>
               <use>core_read</use>
            </connection>
         </catalogsearch_read>
      </resources>
      <block>
         <groups><catalogsearch><class>Mage_CatalogSearch_Block</class></catalogsearch></groups>
      </block>
   </global>
   <frontend>
      <layouts>
         <catalogsearch_advanced_form>
            <updates>
                <default>
                    <file>catalogsearch/advanced/form.xml</file>
                </default>
            </updates>
         </catalogsearch_advanced_form>
         <catalogsearch_advanced_result>
            <updates>
                <default>
                    <file>catalogsearch/advanced/result.xml</file>
                </default>
            </updates>
         </catalogsearch_advanced_result>
      </layouts>
      <routers>
         <catalogsearch>
            <use>standard</use>
            <args>
               <module>Mage_CatalogSearch</module>
               <frontName>catalogsearch</frontName>
            </args>
         </catalogsearch>
      </routers>
   </frontend>
</config>