                </titleFont>
            </appliedFilters>
            <itemActions>
                <backgroundImage></backgroundImage>
                <viewGalleryIcon></viewGalleryIcon>
                <tellAFriendIcon></tellAFriendIcon>
                <addToWishlistIcon></addToWishlistIcon>
                <addToCartIcon></addToCartIcon>
                <viewDetailsIcon></viewDetailsIcon>
                <radioEnabledIcon></radioEnabledIcon>
                <radioDisabledIcon></radioDisabledIcon>
                <checkBoxEnabledIcon></checkBoxEnabledIcon>
                <checkBoxDisabledIcon></checkBoxDisabledIcon>
