                </selectFont>
                <relatedProductBackgroundColor></relatedProductBackgroundColor>
                <configHeaderBackgroundColor></configHeaderBackgroundColor>
                <configContentBackgroundColor></configContentBackgroundColor>
            </itemActions>
        </defaultConfiguration>
    </default>
</config>
