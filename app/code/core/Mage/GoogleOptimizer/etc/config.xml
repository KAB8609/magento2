<config>
    <modules>
        <Mage_GoogleOptimizer>
            <version>0.1.0</version>
        </Mage_GoogleOptimizer>
    </modules>
    <global>
        <models>
            <googleoptimizer>
                <class>Mage_GoogleOptimizer_Model</class>
                <resourceModel>googleoptimizer_mysql4</resourceModel>
            </googleoptimizer>

            <googleoptimizer_mysql4>
                <class>Mage_GoogleOptimizer_Model_Mysql4</class>
                <entities>
                    <code>
                        <table>googleoptimizer_code</table>
                    </code>
                </entities>
            </googleoptimizer_mysql4>
        </models>
        <helpers>
            <googleoptimizer>
                <class>Mage_GoogleOptimizer_Helper</class>
            </googleoptimizer>
            <catalog>
                <rewrite>
                    <product>Mage_GoogleOptimizer_Helper_Product</product>
                </rewrite>
            </catalog>
        </helpers>
        <resources>
            <googleoptimizer_setup>
                <setup>
                    <module>Mage_GoogleOptimizer</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </googleoptimizer_setup>
            <googleoptimizer_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </googleoptimizer_write>
            <googleoptimizer_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </googleoptimizer_read>
        </resources>
        <blocks>
            <googleoptimizer><class>Mage_GoogleOptimizer_Block</class></googleoptimizer>
        </blocks>
    </global>
    <frontend>
        <translate>
            <modules>
                <Mage_GoogleOptimizer>
                    <files>
                        <default>Mage_GoogleOptimizer.csv</default>
                    </files>
                </Mage_GoogleOptimizer>
            </modules>
        </translate>
        <layout>
            <updates>
                <googleoptimizer>
                    <file>googleoptimizer.xml</file>
                </googleoptimizer>
            </updates>
        </layout>
    </frontend>

    <adminhtml>
        <translate>
            <modules>
                <Mage_GoogleOptimizer>
                    <files>
                        <default>Mage_GoogleOptimizer.csv</default>
                    </files>
                </Mage_GoogleOptimizer>
            </modules>
        </translate>
        <layout>
            <updates>
                <googleoptimizer>
                    <file>googleoptimizer.xml</file>
                </googleoptimizer>
            </updates>
        </layout>
    </adminhtml>
</config>
