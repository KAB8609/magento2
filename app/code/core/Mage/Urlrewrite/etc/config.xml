    <adminhtml>
        <menu>
             <urlrewrite>
                <title>Url Rewrite</title>
                <action>*/urlrewrite</action>
                <sort_order>60</sort_order>
             </urlrewrite>
        </menu>
        <acl>
        <resources>
            <admin title="Magento Admin" >
            	<urlrewrite title="Url Rewrite" />
            </admin>
        </resources>  
        </acl>
    </adminhtml>
    <global>
        <models>
            <urlrewrite>
                <class>Mage_Urlrewrite_Model</class>
                <resourceModel>urlrewrite_mysql4</resourceModel>
            </urlrewrite>
            <urlrewrite_mysql4>
                <class>Mage_Urlrewrite_Model_Mysql4</class>
                <entities>
                	<urlrewrite>
                		<table>core_url_rewrite</table>
                </entities>
            </urlrewrite_mysql4>
        </models>
        <resources>
            <urlrewrite_setup>
                <setup>
                    <module>Mage_Urlrewrite</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </urlrewrite_setup>
            <urlrewrite_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </urlrewrite_write>
            <urlrewrite_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </urlrewrite_read>
        </resources>
        <blocks>
            <urlrewrite><class>Mage_Urlrewrite_Block</class></urlrewrite>
        </blocks>
        <urlrewrite>
            <layouts>
                <empty><label>Empty</label><template>page/one-column.phtml</template></empty>
                <one_column><label>1 column</label><template>page/1column.phtml</template></one_column>
                <left_column><label>Column on the left</label><template>page/2columns-left.phtml</template></left_column>
                <right_column><label>Column on the right</label><template>page/2columns-right.phtml</template></right_column>
                <three_column><label>3 columns</label><template>page/3columns.phtml</template></three_column>
            </layouts>
        </urlrewrite>
        <events>
            <controller_front_init_routers>
                <observers>
                    <cms>
                        <type>singleton</type>
                        <class>Mage_Urlrewrite_Controller_Router</class>
                        <method>initControllerRouters</method>
                    </cms>
                </observers>
            </controller_front_init_routers>
        </events>
    </global>
</config>
