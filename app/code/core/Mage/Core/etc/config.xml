<?xml version="1.0"?>
<config>
    <modules>
        <Mage_Core>
             <version>0.5.4</version>
        </Mage_Core>
    </modules>

    <global>
        <models>
            <core_mysql4>
                <entities>
                    <config_field>
                        <table>core_config_field</table>
                    </config_field>
                    <resource>
                        <table>core_resource</table>
                    </resource>
                    <language>
                        <table>core_language</table>
                    </language>
                    <session>
                        <table>core_session</table>
                    </session>
                </entities>
            </core_mysql4>
        </models>

        <block>
            <groups><core><class>Mage_Core_Block</class></core></groups>
        </block>
    </global>
    <front>
        <layouts>
            <noRoute>
                <updates>
                    <core>
                        <file>core/noRoute.xml</file>
                    </core>
                </updates>
            </noRoute>
            <default>
                <updates>
                    <page>
                        <file>core/default.xml</file>
                    </page>
                </updates>
            </default>
        </layouts>
        <routers>
         <core>
            <use>standard</use>
            <args>
               <module>Mage_Core</module>
               <frontName>core</frontName>
            </args>
         </core>
        </routers>
    </front>
</config>
