<config>
    <modules>
        <Mage_Core>
             <version>0.6.2</version>
        </Mage_Core>
    </modules>

    <global>
        <models>
            <core_mysql4>
                <entities>
                    <config_field>
                        <table>core_config_field</table>
                    </config_field>
                    <email_template>
                        <table>core_email_template</table>
                    </email_template>
                    <language>
                        <table>core_language</table>
                    </language>
                    <translate>
                        <table>core_translate</table>
                    </translate>
                    <session>
                        <table>core_session</table>
                    </session>
                </entities>
            </core_mysql4>
        </models>

        <block>
            <groups><core><class>Mage_Core_Block</class></core></groups>
        </block>
         <locale>
            <allow>
                <codes>
                    <en_US/>
                    <ru_RU/>
                    <ru_UA/>
                    <de_DE/>
                    <pl_PL/>
                    <ua_UA/>
                </codes>
                <currencies>
                    <USD/>
                    <EUR/>
                    <RUB/>
                    <UAH/>
                </currencies>
            </allow>
         </locale>

    </global>
    <frontend>
        <layouts>
            <noRoute>
                <updates>
                    <core>
                        <file>core/noRoute.xml</file>
                    </core>
                </updates>
            </noRoute>
            <default>
                <updates>
                    <page>
                        <file>core/default.xml</file>
                    </page>
                </updates>
            </default>
            <print>
                <updates>
                    <page>
                        <file>core/print.xml</file>
                    </page>
                </updates>
            </print>
        </layouts>
        <routers>
            <core>
                <use>standard</use>
                <args>
                    <module>Mage_Core</module>
                    <frontName>core</frontName>
                </args>
            </core>
        </routers>
    </frontend>
</config>
