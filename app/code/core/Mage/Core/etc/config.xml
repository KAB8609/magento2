<?xml version="1.0"?>
<config>
   <modules>
      <Mage_Core>
         <version>0.1.8</version>
         <admin>
            <controller>
               <active>true</active>

               <default>true</default>
            </controller>
         </admin>
      </Mage_Core>
   </modules>

   <global>
      <resourceConnectionTypes>
         <pdo_mysql>
            <class>Mage_Core_Resource_Type_Db_Pdo_Mysql</class>
         </pdo_mysql>

         <mysqli>
            <class>Mage_Core_Resource_Type_Db_Mysqli</class>
         </mysqli>
         
         <mysqli_setup>
            <class>Mage_Core_Resource_Type_Db_Mysqli_Setup</class>
         </mysqli_setup>
      </resourceConnectionTypes>
      
      <resources>
         <core_setup>
            <setup>
                <module>Mage_Core</module>
            </setup>
         </core_setup>
      </resources>

      <models>
         <core>
            <class>Mage_Core_Model</class>
         </core>
         
         <core_resource>
            <class>Mage_Core_Model_Mysql4</class>

            <entities>
               <config>
                  <table>core_config</table>
               </config>

               <website>
                  <table>core_website</table>
               </website>

               <language>
                  <table>core_language</table>
               </language>

               <resource>
                  <table>core_resource</table>
               </resource>

               <module>
                  <table>core_module</table>
               </module>

               <table>
                  <table>core_table</table>
               </table>

               <domain>
                  <table>core_domain</table>
               </domain>

               <domain_website>
                  <table>core_domain_website</table>
               </domain_website>

               <setting>
                  <table>core_setting</table>
               </setting>

               <domain_setting>
                  <table>core_domain_setting</table>
               </domain_setting>

               <data_change>
                  <table>core_data_change</table>
               </data_change>

               <data_change_type>
                  <table>core_data_change_type</table>
               </data_change_type>

               <data_change_info>
                  <table>core_data_change_info</table>
               </data_change_info>
            </entities>
         </core_resource>
      </models>

      <blockTypes>
         <text>
            <class>Mage_Core_Block_Text</class>
         </text>

         <tag>
            <class>Mage_Core_Block_Text_Tag</class>
         </tag>

         <tag_css>
            <class>Mage_Core_Block_Text_Tag_Css</class>
         </tag_css>

         <tag_js>
            <class>Mage_Core_Block_Text_Tag_Js</class>
         </tag_js>

         <debug>
            <class>Mage_Core_Block_Text_Tag_Debug</class>
         </debug>

         <tpl>
            <class>Mage_Core_Block_Template</class>
         </tpl>

         <tpl_zend>
            <class>Mage_Core_Block_Template_Zend</class>
         </tpl_zend>

         <list>
            <class>Mage_Core_Block_Text_List</class>
         </list>

         <list_link>
            <class>Mage_Core_Block_Text_List_Link</class>
         </list_link>

         <form>
            <class>Mage_Core_Block_Form</class>
         </form>

         <message>
            <class>Mage_Core_Block_Message</class>
         </message>

         <toolbar>
            <class>Mage_Core_Block_Admin_Js_Toolbar</class>
         </toolbar>

         <menu>
            <class>Mage_Core_Block_Admin_Js_Menu</class>
         </menu>

         <tag_css_theme>
            <class>Mage_Core_Block_Text_Tag_Css_Admin</class>
         </tag_css_theme>

         <layout_border>
            <class>Mage_Core_Block_Admin_Js_Layout_Border</class>
         </layout_border>

         <layout_panel>
            <class>Mage_Core_Block_Admin_Js_Layout_Panel</class>
         </layout_panel>

         <layout_panel_grid>
            <class>Mage_Core_Block_Admin_Js_Layout_Panel_Grid</class>
         </layout_panel_grid>

         <layout_panel_nested>
            <class>Mage_Core_Block_Admin_Js_Layout_Panel_Nested</class>
         </layout_panel_nested>

         <tree>
            <class>Mage_Core_Block_Admin_Js_Tree</class>
         </tree>
      </blockTypes>
   </global>

   <admin>
      <acl>
         <resources>
            <system>
               <modules />

               <websites />
            </system>
         </resources>
      </acl>

      <layouts>
         <default>
            <updates>
               <core>
                  <file>core/initLayout.xml</file>
               </core>
            </updates>
         </default>
      </layouts>

      <translate>
        
      </translate>
   </admin>

   <front>
      <layouts>
         <noRoute>
            <updates>
               <core>
                  <file>core/noRoute.xml</file>
               </core>
            </updates>
         </noRoute>
      </layouts>
      
      <translate>
        
      </translate>
   </front>
</config>

