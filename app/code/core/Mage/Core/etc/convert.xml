<?xml version="1.0" encoding="utf-8"?>
<collection>
    <container name="catalog_file" type="Varien_Convert_Adapter_Io">
        <var name="type">file</var>
        <var name="path">{{export_path}}</var>
        <var name="filename">test.xml</var>
    </container>
    
    <container name="default_container" type="Varien_Convert_Container"/>
    
    <profile name="import_catalog">
        <action method="import" use="catalog_file"/>
        
        <action method="parse" type="Varien_Convert_Parser_Xml_Excel"/>
        
        <action method="export" type="catalog/convert_catalog"/>
    </profile>
    
    <profile name="export_catalog">
        <action method="import" type="catalog/convert_catalog"/>
        
        <action method="unparse" type="Varien_Convert_Adapter_Xml_Excel"/>
        
        <action method="export" use="catalog_file"/>
    </profile>
    
    <profile name="import_simple_products">
        <action method="import" type="Varien_Convert_Adapter_Io">
            <var name="type">file</var>
            <var name="filename">products.csv</var>
        </action>
        
        <action method="parse" type="Varien_Convert_Parser_Csv"/>
        
        <action method="map" type="Varien_Convert_Mapper_Columns">
            <input name="some_field">another_field</input>
        </action>
        
        <action method="export" type="catalog/convert_catalog_product"/>
    </profile>
    
    <profile name="import_csv_to_table">
        <action method="import" type="Varien_Convert_Adapter_Io">
            <var name="type">file</var>
            <var name="filename">data.csv</var>
        </action>
        
        <action method="parse" type="Varien_Convert_Parser_Csv"/>
        
        <action method="map" type="Varien_Convert_Mapper_Column">
            <input name="field_in_result">field_in_source</input>
        </action>
        
        <action method="validate" type="Varien_Convert_Validator_Column">
            <var name="field_in_table">!=''</var>
        </action>
        
        <action method="export" type="core/convert_adapter_db_table">
            <var name="resource">module_write</var>
            <var name="table">module/table_name</var>
        </action>
    </profile>
    
    <profile name="export_pending_orders_to_ftp">
        <action method="import" type="sales/convert_orders">
            <var name="status">pending</var>
        </action>
        
        <action method="unparse" type="Varien_Convert_Parser_Csv"/>
        
        <action method="export" type="Varien_Convert_Adapter_Io">
            <var name="type">ftp</var>
            <var name="host">some.host.com</var>
            <var name="path">upload</var>
        </action>
    </profile>
</collection>