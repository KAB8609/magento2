<?xml version="1.0" encoding="UTF-8"?>
<validation>
    <entity name="customer">
        <rules>
            <rule name="check_password">
                <entity_constraints>
                    <constraint class="Mage_Customer_Model_Customer_Validation_Password" />
                </entity_constraints>
            </rule>
            <rule name="check_eav">
                <entity_constraints>
                    <constraint alias="eav_validator" class="Mage_Eav_Model_Validator_Attribute_Data">
                        <!--
                            @todo Remove store_id from black list when conflict of responsibilities between
                            backend models and validation mechanism will be resolved
                        -->
                        <method name="setAttributesBlackList">
                            <argument>
                                <option>store_id</option>
                            </argument>
                        </method>
                    </constraint>
                </entity_constraints>
            </rule>
            <rule name="read_only_properties_for_create">
                <entity_constraints>
                    <constraint class="Magento_Validator_Entity_Properties">
                        <method name="setReadOnlyProperties">
                            <argument>
                                <option>entity_id</option>
                                <option>entity_type_id</option>
                            </argument>
                        </method>
                    </constraint>
                </entity_constraints>
            </rule>
            <rule name="read_only_properties_for_update">
                <entity_constraints>
                    <constraint class="Magento_Validator_Entity_Properties">
                        <method name="setReadOnlyProperties">
                            <argument>
                                <option>entity_id</option>
                                <option>entity_type_id</option>
                                <option>created_in</option>
                                <option>website_id</option>
                                <option>created_at</option>
                            </argument>
                        </method>
                    </constraint>
                </entity_constraints>
            </rule>
        </rules>
        <groups>
            <group name="adminhtml_password_check">
                <uses>
                    <use rule="check_password"/>
                </uses>
            </group>
            <group name="create">
                <uses>
                    <use rule="check_eav"/>
                    <use rule="read_only_properties_for_create"/>
                </uses>
            </group>
            <group name="update">
                <uses>
                    <use rule="check_eav"/>
                    <use rule="read_only_properties_for_update"/>
                </uses>
            </group>
        </groups>
    </entity>

    <entity name="customer_address">
        <rules>
            <rule name="check_eav">
                <entity_constraints>
                    <constraint alias="eav_data_validator" class="Mage_Eav_Model_Validator_Attribute_Data" />
                    <constraint alias="eav_backend_validator" class="Mage_Eav_Model_Validator_Attribute_Backend" />
                </entity_constraints>
            </rule>
            <rule name="read_only_properties_for_create">
                <entity_constraints>
                    <constraint class="Magento_Validator_Entity_Properties">
                        <method name="setReadOnlyProperties">
                            <argument>
                                <option>attribute_set_id</option>
                                <option>increment_id</option>
                                <option>entity_id</option>
                                <option>entity_type_id</option>
                            </argument>
                        </method>
                    </constraint>
                </entity_constraints>
            </rule>
            <rule name="read_only_properties_for_update">
                <entity_constraints>
                    <constraint class="Magento_Validator_Entity_Properties">
                        <method name="setReadOnlyProperties">
                            <argument>
                                <option>attribute_set_id</option>
                                <option>increment_id</option>
                                <option>entity_id</option>
                                <option>entity_type_id</option>
                                <option>parent_id</option>
                                <option>created_at</option>
                            </argument>
                        </method>
                    </constraint>
                </entity_constraints>
            </rule>
        </rules>
        <groups>
            <group name="create">
                <uses>
                    <use rule="read_only_properties_for_create"/>
                    <use rule="check_eav"/>
                </uses>
            </group>
            <group name="update">
                <uses>
                    <use rule="read_only_properties_for_update"/>
                    <use rule="check_eav"/>
                </uses>
            </group>
        </groups>
    </entity>
</validation>
