<?xml version="1.0"?>
<config>
   <modules>
      <Mage_Customer>
         <version>0.1.8</version>
         <depends>
            <Mage_Page />
         </depends>

         <front>
            <controller>
               <active>true</active>

               <frontName>customer</frontName>
            </controller>
         </front>

         <admin>
            <controller>
               <active>true</active>
            </controller>
         </admin>
      </Mage_Customer>
   </modules>

   <global>
      <blockTypes>
         <customer_login>
            <class>Mage_Customer_Block_Login</class>
         </customer_login>

         <customer_account>
            <class>Mage_Customer_Block_Account</class>
         </customer_account>
      </blockTypes>

      <models>
         <customer>
            <class>Mage_Customer_Model_Mysql4</class>

            <entities>
               <customer>
                  <table>customer</table>
               </customer>

               <customer_type>
                  <table>customer_type</table>
               </customer_type>

               <address>
                  <table>customer_address</table>
               </address>

               <address_type>
                  <table>customer_address_type</table>
               </address_type>

               <address_type_language>
                  <table>customer_address_type_language</table>
               </address_type_language>

               <address_type_link>
                  <table>customer_address_type_link</table>
               </address_type_link>

               <payment>
                  <table>customer_payment</table>
               </payment>

               <payment_method>
                  <table>customer_payment_method</table>
               </payment_method>
            </entities>
            
            <subs>
                <session></session>
            </subs>
         </customer>
         
         <customer_model>
            <class>Mage_Customer_Model</class>
         </customer_model>
      </models>

      <resources>
         <customer_setup>
            <setup>
                <module>Mage_Customer</module>
            </setup>
            <connection><use>core_setup</use></connection>
         </customer_setup>

         <customer_write>
            <connection><use>core_write</use></connection>
         </customer_write>

         <customer_read>
            <connection><use>core_read</use></connection>
         </customer_read>
      </resources>
   </global>

   <front>
      <layouts>
         <default>
            <updates>
               <customer>
                  <module>Mage_Customer</module>

                  <file>initLayout.xml</file>
               </customer>
            </updates>
         </default>
      </layouts>

      <events>
         <action_postDispatch>
            <observers>
               <auth>
                  <class>Mage_Customer_Front</class>

                  <method>action_postDispatch</method>
               </auth>
            </observers>
         </action_postDispatch>
      </events>
   </front>
   <admin>
     <acl>
        <resources>
           <customers>
              <manage />
           </customers>
        </resources>
     </acl>

     <layouts>
        <default>
           <updates>
              <customer>
                 <module>Mage_Customer</module>

                 <file>Admin/initLayout.xml</file>
              </customer>
           </updates>
        </default>
     </layouts>
   </admin>

   <domains>
      <base>
         <defaultCountry>223</defaultCountry>
         <allowCountries>223</allowCountries>
         <currency>1</currency>
      </base>
   </domains>
</config>

