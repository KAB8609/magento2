<?xml version="1.0"?>
<config>
   <modules>
      <Mage_Customer>
         <version>0.1.4</version>

         <depends>
            <Mage_Page />
         </depends>

         <front>
            <controller>
               <active>true</active>

               <frontName>customer</frontName>
            </controller>
         </front>

         <admin>
            <controller>
               <active>true</active>
            </controller>
         </admin>
      </Mage_Customer>
   </modules>

   <global>
      <blockTypes>
         <customer_login>
            <class>Mage_Customer_Block_Login</class>
         </customer_login>

         <customer_account>
            <class>Mage_Customer_Block_Account</class>
         </customer_account>

         <customer_regform>
            <class>Mage_Customer_Block_Regform</class>
         </customer_regform>
      </blockTypes>

      <resourceModels>
         <customer>
            <class>Mage_Customer_Resource_Model_Mysql4</class>

            <entities>
               <customer>
                  <table>customer</table>
               </customer>

               <customer_type>
                  <table>customer_type</table>
               </customer_type>

               <address>
                  <table>customer_address</table>
               </address>

               <address_type>
                  <table>customer_address_type</table>
               </address_type>

               <address_type_language>
                  <table>customer_address_type_language</table>
               </address_type_language>

               <address_type_link>
                  <table>customer_address_type_link</table>
               </address_type_link>

               <payment>
                  <table>customer_payment</table>
               </payment>

               <payment_method>
                  <table>customer_payment_method</table>
               </payment_method>
            </entities>
         </customer>
      </resourceModels>

      <resources>
         <customer_setup>
            <connection use="core_setup" />
         </customer_setup>

         <customer_write>
            <connection use="core_write" />
         </customer_write>

         <customer_read>
            <connection use="core_read" />
         </customer_read>
      </resources>
   </global>

   <front>
      <layouts>
         <default>
            <updates>
               <customer>
                  <module>Mage_Customer</module>

                  <file>initLayout.xml</file>
               </customer>
            </updates>
         </default>
      </layouts>

      <events>
         <action_preDispatch>
            <observers>
               <auth>
                  <class>Mage_Customer_Front</class>

                  <method>load_front_action_preDispatch</method>
               </auth>
            </observers>
         </action_preDispatch>

         <action_postDispatch>
            <observers>
               <auth>
                  <class>Mage_Customer_Front</class>

                  <method>load_front_action_postDispatch</method>
               </auth>
            </observers>
         </action_postDispatch>
      </events>
   </front>

   <admin>
      <admin>
         <acl>
            <resources>
               <customers>
                  <manage />
               </customers>
            </resources>
         </acl>

         <layouts>
            <default>
               <updates>
                  <customer>
                     <module>Mage_Customer</module>

                     <file>Admin/initLayout.xml</file>
                  </customer>
               </updates>
            </default>
         </layouts>
      </admin>
   </admin>
</config>

