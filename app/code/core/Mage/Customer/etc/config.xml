<?xml version="1.0"?>
<config>
    <modules>
        <Mage_Customer>
            <version>0.1.1</version>
            
            <depends>
                <Mage_Page/>
            </depends>

            <load>
                <all>
                    <resources>
                        <customer_setup>
                            <connection extends="//core_write/connection"/>
                        </customer_setup>

                        <customer_write>
                            <connection extends="//core_write/connection"/>
                        </customer_write>

                        <customer_read>
                            <connection extends="//core_write/connection"/>
                        </customer_read>
                    </resources>
                </all>

                <front>
                    <controller>
                        <active>true</active>
                        <frontName>customer</frontName>
                    </controller>

                    <layouts>
                        <default><updates><customer><module>Mage_Customer</module><file>initLayout.xml</file></customer></updates></default>
                    </layouts>
                </front>
            
                <admin>
                    <controller>
                        <active>true</active>
                    </controller>
                    
                    <layouts>
                        <default><updates><customer><module>Mage_Customer</module><file>Admin/initLayout.xml</file></customer></updates></default>
                    </layouts>
                </admin>
            </load>
        </Mage_Customer>
    </modules>
</config>