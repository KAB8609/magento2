<config>
    <api>
        <resources>
            <customer translate="title" module="customer">
                <model>customer/api</model>
                <title>Customer Resource</title>
                <acl>customer</acl>
                <methods>
                    <list translate="title" module="customer">
                        <title>Retrive customers list</title>
                        <method>items</method>
                        <acl>customer/list</acl>
                    </list>
                    <create translate="title" module="customer">
                        <title>Create customer</title>
                        <acl>customer/create</acl>
                    </create>
                    <info translate="title" module="customer">
                        <title>Retrive customer info</title>
                        <acl>customer/info</acl>
                    </info>
                </methods>
                <faults module="customer">
                    <data_invalid>
                        <code>10</code>
                        <message>Invalid customer data. Details in error message.</message>
                    </data_invalid>
                    <filters_invalid>
                        <code>11</code>
                        <message>Invalid filters specified. Details in error message.</message>
                    </filters_invalid>
                    <customer_not_exists>
                        <code>12</code>
                        <message>Customer not exists.</message>
                    </customer_not_exists>
                </faults>
            </customer>
        </resources>
        <acl>
            <resources>
                <all>
                    <customer translate="title" module="customer">
                         <title>Customers</title>
                         <create translate="title" module="customer">
                            <title>Create</title>
                         </create>
                    </customer>
                </all>
            </resources>
        </acl>
    </api>
</config>