<config>
   <modules>
      <Mage_Adminhtml>
         <version>0.2.0</version>
         <depends>
            <Mage_Admin />
         </depends>
      </Mage_Adminhtml>
   </modules>

   <global>
        <models>
            <adminhtml>
                <class>Mage_Adminhtml_Model</class>
                <resourceModel>adminhtml_mysql4</resourceModel>
            </adminhtml>
            <adminhtml_mysql4>
                <class>Mage_Adminhtml_Model_Mysql4</class>
            </adminhtml_mysql4>
        </models>
        <blocks>
            <adminhtml><class>Mage_Adminhtml_Block</class></adminhtml>
        </blocks>
   </global>

   <admin>
      <routers>
         <adminhtml>
            <use>admin</use>
            <args>
               <module>Mage_Adminhtml</module>
               <frontName>admin</frontName>
            </args>
         </adminhtml>
      </routers>
   </admin>

   <frontend>
        <secure_url>
            <admin>/admin</admin>
        </secure_url>
   </frontend>

   <adminhtml>
      <events>
         <controller_action_predispatch_admin>
            <observers>
               <auth>
                  <type>singleton</type>
                  <class>admin/observer</class>
                  <method>actionPreDispatchAdmin</method>
               </auth>
               <store>
                  <type>singleton</type>
                  <class>adminhtml/observer</class>
                  <method>bindStore</method>
               </store>
            </observers>
         </controller_action_predispatch_admin>
         <core_locale_set_locale>
            <observers>
               <bind_locale>
                  <type>singleton</type>
                  <class>adminhtml/observer</class>
                  <method>bindLocale</method>
               </bind_locale>
            </observers>
         </core_locale_set_locale>
      </events>
      <global_search>
           <products>
              <class>adminhtml/search_catalog</class>
           </products>
           <customers>
              <class>adminhtml/search_customer</class>
           </customers>
           <sales>
              <class>adminhtml/search_order</class>
           </sales>
      </global_search>
      <translate>
        <modules>
            <Mage_Adminhtml>
                <files>
                    <default>Mage_Adminhtml.csv</default>
                </files>
            </Mage_Adminhtml>
        </modules>
      </translate>
      <menu>
            <dashboard sort="1">
                <title>Dashboard</title>
                <action>*/dashboard</action>
             </dashboard>

             <system sort="9">
                <title>System</title>
                <sort_order>99</sort_order>
                <!-- action>adminhtml/system</action -->
                <children>
                    <myaccount>
                        <title>My Account</title>
                        <action>*/system_account</action>
                    </myaccount>
                    <tools>
                        <title>Tools</title>
                    </tools>
                    <convert>
                        <title>Import/Export</title>
                        <children>
                            <gui>
                                <title>Profiles</title>
                                <action>*/system_convert_gui</action>
                            </gui>
                            <profiles>
                                <title>Advanced Profiles</title>
                                <action>*/system_convert_profile</action>
                            </profiles>
                        </children>
                    </convert>
                    <currency>
                        <title>Manage Currency</title>
                        <action>*/system_currency</action>
                    </currency>
                    <email_template>
                        <title>Transactional Emails</title>
                        <action>*/system_email_template</action>
                    </email_template>
                    <acl>
                        <title>Permissions</title>
                        <children>
                            <users>
                                <title>Users</title>
                                <action>*/permissions_user</action>
                            </users>
                            <roles>
                                <title>Roles</title>
                                <action>*/permissions_role</action>
                            </roles>
                        </children>
                    </acl>
                    <extensions>
                        <title>Extensions</title>
                        <children>
                            <local>
                                <title>Locally Installed</title>
                                <action>*/extensions_local</action>
                            </local>
                            <remote>
                                <title>Available Remote</title>
                                <action>*/extensions_remote</action>
                            </remote>
                            <custom>
                                <title>Custom Local</title>
                                <action>*/extensions_custom</action>
                            </custom>
                        </children>
                    </extensions>
                    <cache>
                        <title>Cache management</title>
                        <action>*/system_cache</action>
                    </cache>
                    <config>
                        <title>Configuration</title>
                        <action>*/system_config</action>
                    </config>
                </children>
             </system>
             <cms sort="6">
                <title>CMS</title>
                <children>
                    <page>
                        <title>Manage Pages</title>
                        <action>*/cms_page</action>
                    </page>
                    <block>
                        <title>Static Blocks</title>
                        <action>*/cms_block</action>
                    </block>
                    <poll>
                        <title>Poll Manager</title>
                        <action>*/poll</action>
                    </poll>
                    <!--<config>
                        <title>Configuration</title>
                        <action>*/cms_config/</action>
                        <resource>cms/config</resource>
                    </config>-->
                </children>
             </cms>
             <customerCommunication sort="7">
                <title>Customer Communication</title>
                <children>
                     <alert>
		                <title>Product Alerts</title>
		                <depends><module>Mage_CustomerAlert</module></depends>
		                <children>
		                   <!--  <template>
		                        <title>Alerts Templates</title>
		                        <action>*/alert_template/</action>
		                        <resource>admin/alert/template</resource>
		                    </template>
		                    -->
		                    <queue>
		                        <title>Alerts Queue</title>
		                        <action>*/alert_queue/</action>
		                        <resource>admin/alert/queue</resource>
		                    </queue>
		                    <!--  <problem>
		                        <title>Newsletter Problem Reports</title>
		                        <action>*/newsletter_problem/</action>
		                        <resource>admin/newsletter/problem</resource>
		                    </problem>
		                    -->
		                </children>
		             </alert>
                </children>
             </customerCommunication>
        </menu>
   </adminhtml>
</config>
