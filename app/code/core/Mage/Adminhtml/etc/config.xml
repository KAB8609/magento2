<?xml version="1.0"?>
<config>
   <modules>
      <Mage_Adminhtml>
         <version>0.2.0</version>
         <depends>
            <Mage_Core />
         </depends>
      </Mage_Adminhtml>
   </modules>

   <global>
      <models>
         <adminhtml>
            <class>Mage_Adminhtml_Model</class>
         </adminhtml>
         <adminhtml_resource>
            <class>Mage_Adminhtml_Model_Mysql4</class>
            <entities>
               <user><table>admin_user</table></user>
               <role><table>admin_role</table></role>
               <rule><table>admin_rule</table></rule>
               <assert><table>admin_assert</table></assert>
            </entities>
         </adminhtml_resource>
      </models>

      <resources>
         <adminhtml_setup>
            <setup>
               <module>Mage_Adminhtml</module>
            </setup>
            <connection>
               <use>core_setup</use>
            </connection>
         </adminhtml_setup>
         <adminhtml_write>
            <connection><use>core_write</use></connection>
         </adminhtml_write>
         <adminhtml_read>
            <connection><use>core_read</use></connection>
         </adminhtml_read>
      </resources>
        <block>
            <groups><adminhtml><class>Mage_Adminhtml_Block</class></adminhtml></groups>
        </block>
   </global>
   <front>
      <layouts>
         <adminhtml>
            <updates>
               <adminhtml>
                  <file>adminhtml/init.xml</file>
               </adminhtml>
            </updates>
         </adminhtml>
         <baseframe>
            <updates>
               <baseframe>
                  <file>adminhtml/baseframe.xml</file>
               </baseframe>
            </updates>
         </baseframe>
      </layouts>
      <events>
         <action_preDispatch_Mage_Adminhtml>
            <observers>
               <auth>
                  <type>singleton</type>
                  <class>adminhtml/observer</class>
                  <method>actionPreDispatchAdmin</method>
               </auth>
            </observers>
         </action_preDispatch_Mage_Adminhtml>
      </events>
      <routers>
         <adminhtml>
            <class>Mage_Core_Controller_Front_Router</class>
            <args>
               <module>Mage_Adminhtml</module>
               <frontName>adminhtml</frontName>
            </args>
         </adminhtml>
      </routers>
   </front>
</config>
