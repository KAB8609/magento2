<config>
   <modules>
      <Mage_Adminhtml>
         <version>0.2.0</version>
         <depends>
            <Mage_Admin />
         </depends>
      </Mage_Adminhtml>
   </modules>

   <global>
        <models>
            <adminhtml>
                <class>Mage_Adminhtml_Model</class>
                <resourceModel>adminhtml_mysql4</resourceModel>
            </adminhtml>
            <adminhtml_mysql4>
                <class>Mage_Adminhtml_Model_Mysql4</class>
            </adminhtml_mysql4>
        </models>
        <blocks>
            <adminhtml><class>Mage_Adminhtml_Block</class></adminhtml>
        </blocks>
   </global>

   <admin>
      <routers>
         <adminhtml>
            <use>admin</use>
            <args>
               <module>Mage_Adminhtml</module>
               <frontName>admin</frontName>
            </args>
         </adminhtml>
      </routers>
   </admin>

   <frontend>
        <secure_url>
            <admin>/admin</admin>
        </secure_url>
   </frontend>

   <adminhtml>
      <events>
         <controller_action_predispatch_admin>
            <observers>
               <auth>
                  <type>singleton</type>
                  <class>admin/observer</class>
                  <method>actionPreDispatchAdmin</method>
               </auth>
               <store>
                  <type>singleton</type>
                  <class>adminhtml/observer</class>
                  <method>bindStore</method>
               </store>
            </observers>
         </controller_action_predispatch_admin>
         <core_locale_set_locale>
            <observers>
               <bind_locale>
                  <type>singleton</type>
                  <class>adminhtml/observer</class>
                  <method>bindLocale</method>
               </bind_locale>
            </observers>
         </core_locale_set_locale>
      </events>
      <global_search>
           <products>
              <class>adminhtml/search_catalog</class>
           </products>
           <customers>
              <class>adminhtml/search_customer</class>
           </customers>
           <sales>
              <class>adminhtml/search_order</class>
           </sales>
      </global_search>
      <translate>
        <modules>
            <Mage_Adminhtml>
                <files>
                    <default>Mage_Adminhtml.csv</default>
                </files>
            </Mage_Adminhtml>
        </modules>
      </translate>
      <menu>
            <dashboard>
                <title>Dashboard</title>
                <sort_order>10</sort_order>
                <action>*/dashboard</action>
             </dashboard>
             <system>
                <title>System</title>
                <sort_order>90</sort_order>
                <!-- action>adminhtml/system</action -->
                <children>
                    <myaccount>
                        <title>My Account</title>
                        <action>*/system_account</action>
                    </myaccount>
                    <tools>
                        <title>Tools</title>
                    </tools>
                    <convert>
                        <title>Import/Export</title>
                        <children>
                            <gui>
                                <title>Profiles</title>
                                <action>*/system_convert_gui</action>
                            </gui>
                            <profiles>
                                <title>Advanced Profiles</title>
                                <action>*/system_convert_profile</action>
                            </profiles>
                        </children>
                    </convert>
                    <currency>
                        <title>Manage Currency</title>
                        <action>*/system_currency</action>
                    </currency>
                    <email_template>
                        <title>Transactional Emails</title>
                        <action>*/system_email_template</action>
                    </email_template>
                    <acl>
                        <title>Permissions</title>
                        <children>
                            <users>
                                <title>Users</title>
                                <action>*/permissions_user</action>
                            </users>
                            <roles>
                                <title>Roles</title>
                                <action>*/permissions_role</action>
                            </roles>
                        </children>
                    </acl>
                    <extensions>
                        <title>Extensions</title>
                        <children>
                            <local>
                                <title>Locally Installed</title>
                                <action>*/extensions_local</action>
                            </local>
                            <remote>
                                <title>Available Remote</title>
                                <action>*/extensions_remote</action>
                            </remote>
                            <custom>
                                <title>Custom Local</title>
                                <action>*/extensions_custom</action>
                            </custom>
                        </children>
                    </extensions>
                    <cache>
                        <title>Cache management</title>
                        <action>*/system_cache</action>
                    </cache>
                    <config>
                        <title>Configuration</title>
                        <action>*/system_config</action>
                    </config>
                </children>
             </system>
        </menu>
        <acl>
            <resources>
                <admin>
                    <title>Magento Admin</title>
                    <children>
                        <dashboard>
                            <title>Dashboard</title>
                        </dashboard>
                        <system>
                            <title>System</title>
                            <children>
                                <acl>
                                    <title>Permissions</title>
                                    <children>
                                        <roles>
                                            <title>Roles</title>
                                        </roles>
                                        <users>
                                            <title>Users</title>
                                        </users>
                                    </children>
                                </acl>
                                <config>
                                    <title>Configuration</title>
                                    <children>
                                        <website>
                                            <title>Website Section</title>
                                        </website>
                                        <store>
                                            <title>Store Section</title>
                                        </store>
                                        <general>
                                            <title>General Section</title>
                                        </general>
                                        <web>
                                            <title>Web Section</title>
                                        </web>
                                        <design>
                                            <title>Design Section</title>
                                        </design>
                                        <customer>
                                            <title>Customers Section</title>
                                        </customer>
                                        <sales>
                                            <title>Sales Section</title>
                                        </sales>
                                        <web_track>
                                            <title>Web Tracking Section</title>
                                        </web_track>
                                        <system>
                                            <title>System Section</title>
                                        </system>
                                        <advanced>
                                            <title>Advanced Section</title>
                                        </advanced>
                                        <trans_email>
                                            <title>Store Email Addresses Section</title>
                                        </trans_email>

                                        <dev>
                                            <title>Developer Section</title>
                                        </dev>
                                        <currency>
                                            <title>Currency Setup Section</title>
                                        </currency>
                                        <allow>
                                            <title>Allowed Settings</title>
                                        </allow>
                                        <sendfriend>
                                            <title>Email to a Friend</title>
                                        </sendfriend>
                                    </children>
                                </config>
                                <currency>
                                    <title>Manage Currency</title>
                                </currency>   
                                <email_template>
                                    <title>Transactional Emails</title>
                                </email_template>
                                <myaccount>
                                    <title>My Account</title>
                                </myaccount>
                                <tools>
                                    <title>Tools</title>
                                    <children>
                                        <backup>
                                            <title>Backups</title>
                                        </backup>
                                    </children>
                                </tools>
                                <convert>
                                    <title>Import/Export</title>
                                    <children>
                                        <gui>
                                            <title>GUI Profiles</title>
                                            <children>
                                                <edit>
                                                    <title>Create/Edit/Delete profiles</title>
                                                </edit>
                                                <run>
                                                    <title>Run profiles</title>
                                                </run>
                                            </children>   
                                        </gui>
                                        <profiles>
                                            <title>Advanced Profiles</title>
                                            <children>
                                                <edit>
                                                    <title>Create/Edit/Delete profiles</title>
                                                </edit>
                                                <run>
                                                    <title>Run profiles</title>
                                                </run>
                                            </children>
                                        </profiles>
                                    </children>
                                </convert>
                                <cache>
                                    <title>Cache Management</title>
                                </cache>
                                <extensions>
                                    <title>Extensions</title>
                                    <children>
                                        <local>
                                            <title>Locally Installed</title>
                                        </local>
                                        <remote>
                                            <title>Available Remote</title>
                                        </remote>
                                        <custom>
                                            <title>Custom Local</title>
                                        </custom>
                                    </children>
                                </extensions>
                            </children>
                        </system>
                        <global_search>
                            <title>Global Search</title>
                        </global_search>                         
                    </children>
                </admin>
             </resources>
            <privilegeSets>
                <default>
                    <view>
                        <descr>View entity</descr>
                    </view>
                    <edit>
                        <descr>Edit entity</descr>
                    </edit>    
                    <delete>
                        <descr></descr>
                    </delete>
                    <create>
                        <descr></descr>
                    </create>
                </default>
            </privilegeSets>
        </acl>
        <layout>
            <updates>
                <adminhtml>
                    <file>main.xml</file>
                </adminhtml>
            </updates>
        </layout>
   </adminhtml>
</config>
