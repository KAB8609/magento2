<config>
   <modules>
      <Mage_Adminhtml>
         <version>0.2.0</version>
         <depends>
            <Mage_Admin />
         </depends>
      </Mage_Adminhtml>
   </modules>

   <global>
        <models>
            <adminhtml>
            	<class>Mage_Adminhtml_Model</class>
            	<resourceModel>adminhtml_mysql4</resourceModel>
           	</adminhtml>
            <adminhtml_mysql4>
            	<class>Mage_Adminhtml_Model_Mysql4</class>
            </adminhtml_mysql4>
        </models>
        <block>
            <groups><adminhtml><class>Mage_Adminhtml_Block</class></adminhtml></groups>
        </block>
   </global>
   
   <admin>
      <routers>
         <adminhtml>
            <use>admin</use>
            <args>
               <module>Mage_Adminhtml</module>
               <frontName>admin</frontName>
            </args>
         </adminhtml>
      </routers>
   </admin>
   
   <adminhtml>
      <layouts>
         <adminhtml>
            <updates>
               <adminhtml>
                  <file>init.xml</file>
               </adminhtml>
            </updates>
         </adminhtml>
         <baseframe>
            <updates>
               <baseframe>
                  <file>baseframe.xml</file>
               </baseframe>
            </updates>
         </baseframe>
         <admin_noroute>
         	<updates>
               <admin_noroute>
                  <file>noRoute.xml</file>
               </admin_noroute>
            </updates>
         </admin_noroute>
         <admin_denied>
         	<updates>
               <admin_denied>
                  <file>denied.xml</file>
               </admin_denied>
            </updates>
         </admin_denied>
         <preview>
            <updates>
               <baseframe>
                  <file>preview.xml</file>
               </baseframe>
            </updates>
         </preview>
         <systemPreview>
            <updates>
               <baseframe>
                  <file>system/preview.xml</file>
               </baseframe>
            </updates>
         </systemPreview>
      </layouts>
      <events>
         <action_preDispatch_adminhtml>
            <observers>
               <auth>
                  <type>singleton</type>
                  <class>admin/observer</class>
                  <method>actionPreDispatchAdmin</method>
               </auth>
            </observers>
         </action_preDispatch_adminhtml>
      </events>
      <global_search>
		   <products>
		      <class>adminhtml/search_catalog</class>
		   </products>
		   <customers>
		      <class>adminhtml/search_customer</class>
		   </customers>
		   <sales>
		      <class>adminhtml/search_order</class>
		   </sales>
      </global_search>
   </adminhtml>
</config>
