<config>
   <modules>
      <Mage_Adminhtml>
         <version>0.2.0</version>
         <depends>
            <Mage_Admin />
         </depends>
      </Mage_Adminhtml>
   </modules>

   <global>
        <models>
            <adminhtml>
                <class>Mage_Adminhtml_Model</class>
                <resourceModel>adminhtml_mysql4</resourceModel>
            </adminhtml>
            <adminhtml_mysql4>
                <class>Mage_Adminhtml_Model_Mysql4</class>
            </adminhtml_mysql4>
        </models>
        <blocks>
            <adminhtml><class>Mage_Adminhtml_Block</class></adminhtml>
        </blocks>
   </global>

   <admin>
      <routers>
         <adminhtml>
            <use>admin</use>
            <args>
               <module>Mage_Adminhtml</module>
               <frontName>admin</frontName>
            </args>
         </adminhtml>
      </routers>
   </admin>
   
   <frontend>
        <secure_url>
            <admin>/admin</admin>
        </secure_url>
   </frontend>
   
   <adminhtml>
      <events>
         <controller_action_predispatch_admin>
            <observers>
               <auth>
                  <type>singleton</type>
                  <class>admin/observer</class>
                  <method>actionPreDispatchAdmin</method>
               </auth>
               <store>
                  <type>singleton</type>
                  <class>adminhtml/observer</class>
                  <method>bindStore</method>
               </store>
            </observers>
         </controller_action_predispatch_admin>
         <core_locale_set_locale>
            <observers>
               <bind_locale>
                  <type>singleton</type>
                  <class>adminhtml/observer</class>
                  <method>bindLocale</method>
               </bind_locale>
            </observers>
         </core_locale_set_locale>
      </events>
      <global_search>
           <products>
              <class>adminhtml/search_catalog</class>
           </products>
           <customers>
              <class>adminhtml/search_customer</class>
           </customers>
           <sales>
              <class>adminhtml/search_order</class>
           </sales>
      </global_search>
      <translate>
        <modules>
            <Mage_Adminhtml>
                <files>
                    <default>Mage_Adminhtml.csv</default>
                </files>
            </Mage_Adminhtml>
        </modules>
      </translate>
   </adminhtml>
</config>
