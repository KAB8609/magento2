<?xml version="1.0"?>   
<config>
    <admin>
        <configuration>
            <default>
                <field>
                    <frontend>
                        <block>adminhtml/system_config_form_field_default</block>
                    </frontend>
                </field>
            </default>
            <sections>
                <general>
                    <label>General</label>
                    <groups>
                        <country>
                            <label>Country Options</label>
                            <fields>
                                <allow>
                                    <frontend>
                                        <label>Allow Countries</label>
                                    </frontend>
                                </allow>
                                <default>
                                    <frontend>
                                        <type>select</type>
                                        <label>Base Currency</label>
                                    </frontend>
                                    <source>
                                        <model>adminhtml/system_config_source_currency</model>
                                    </source>
                                </default>
                            </fields>
                        </country>
                        <currency>
                            <label>Currency Options</label>
                            <fields>
                                <base>
                                    <frontend>
                                        <type>select</type>
                                        <label>Base Currency</label>
                                    </frontend>
                                    <source>
                                        <model>adminhtml/system_config_source_currency</model>
                                    </source>
                                </base>
                            </fields>
                        </currency>
                    </groups>
                </general>
                
                <customer>
                    <label>Customer</label>
                    <groups>
                        <customer>
                            <label>Customer</label>
                        </customer>
                        <wishlist>
                            <label>Wishlist</label>
                            <fields>
                                <enable>
                                    <frontend>
                                        <type>select</type>
                                        <label>Enabled</label>                                        
                                    </frontend>
                                    <source>
                                        <model>adminhtml/system_config_source_yesno</model>
                                    </source>
                                </enable>
                            </fields>
                        </wishlist>
                    </groups>
                </customer>
                
                <catalog>
                    <label>Catalog</label>
                    <groups>
                        <reviews>
                            <label>Product Reviews/Ratings</label>
                            <fields>
                                <enable>
                                    <frontend>
                                        <type>select</type>
                                        <label>Enabled</label>                                        
                                    </frontend>
                                    <source>
                                        <model>adminhtml/system_config_source_yesno</model>
                                    </source>
                                </enable>
                            </fields>
                        </reviews>
                        <tags>
                            <label>Product Tags</label>
                            <fields>
                                <enable>
                                    <frontend>
                                        <type>select</type>
                                        <label>Enabled</label>                                        
                                    </frontend>
                                    <source>
                                        <model>adminhtml/system_config_source_yesno</model>
                                    </source>
                                </enable>
                            </fields>
                        </tags>
                        <layered_navigation>
                            <label>Layered Navigation</label>
                            <fields>
                                <enable>
                                    <frontend>
                                        <type>select</type>
                                        <label>Enabled</label>                                        
                                    </frontend>
                                    <source>
                                        <model>adminhtml/system_config_source_yesno</model>
                                    </source>
                                </enable>
                                <session_remember>
                                    <frontend>
                                        <type>select</type>
                                        <label>Remember in Session</label>                                        
                                    </frontend>
                                    <source>
                                        <model>adminhtml/system_config_source_yesno</model>
                                    </source>
                                </session_remember>
                            </fields>
                        </layered_navigation>
                    </groups>
                </catalog>
                
                <gift_messages>
                    <label>Gift Messages</label>
                    <groups>
                        <general>
                            <label>General</label>
                            <fields>
                                <enable_per_item>
                                    <frontend>
                                        <type>select</type>
                                        <label>Enable per Item</label>                                        
                                    </frontend>
                                    <source>
                                        <model>adminhtml/system_config_source_yesno</model>
                                    </source>
                                </enable_per_item>
                                <enable_per_address>
                                    <frontend>
                                        <type>select</type>
                                        <label>Enable per Address</label>                                        
                                    </frontend>
                                    <source>
                                        <model>adminhtml/system_config_source_yesno</model>
                                    </source>
                                </enable_per_address>
                            </fields>
                        </general>
                    </groups>
                </gift_messages>

                <cms>
                    <label>CMS</label>
                    <groups>
                        <templates>
                            <label>Templates</label>
                            <fields>
                                
                            </fields>
                        </templates>
                    </groups>
