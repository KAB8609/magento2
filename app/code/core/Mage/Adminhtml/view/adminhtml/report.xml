<layout>
    <adminhtml_report_statistics_index>
        <reference name="content">
            <block type="Mage_Adminhtml_Block_Report_Refresh_Statistics" template="report/refresh/statistics.phtml" name="sales.report.refreshstatistics" />
        </reference>
    </adminhtml_report_statistics_index>
    <adminhtml_report_product_viewed>
        <reference name="messages">
            <action method="addNotice" translate="message">
                <message>This report depends on timezone configuration. Once timezone is changed, the lifetime statistics need to be refreshed.</message>
            </action>
        </reference>
        <reference name="content">
            <block type="Mage_Adminhtml_Block_Report_Product_Viewed" template="report/grid/container.phtml" name="product.report.grid.container">
                <block type="Mage_Backend_Block_Store_Switcher" template="Mage_Reports::store/switcher/enhanced.phtml" name="store.switcher">
                    <action method="setStoreVarName"><var_name>store_ids</var_name></action>
                </block>
                <block type="Mage_Adminhtml_Block_Report_Filter_Form" name="grid.filter.form">
                    <action method="setFieldVisibility">
                        <field>report_type</field>
                        <visibility>0</visibility>
                    </action>
                </block>
            </block>
        </reference>
    </adminhtml_report_product_viewed>

    <adminhtml_report_customer_totals_grid>
        <reference name="report.customer.totals.grid.container">
            <block type="Mage_Reports_Block_Adminhtml_Grid" name="report.customer.totals.grid" as="grid">
                <arguments>
                    <id>gridTotalsCustomer</id>
                    <dataSource type="object">Mage_Reports_Model_Resource_Customer_Totals_Initial</dataSource>
                    <use_ajax>0</use_ajax>
                </arguments>
                <block type="Mage_Backend_Block_Widget_Grid_Export" name="report.customer.totals.grid.export" as="grid.export">
                    <arguments>
                        <exportTypes>
                            <csv>
                                <urlPath>*/*/exportTotalsCsv</urlPath>
                                <label translate="true" module="Mage_Reports">CSV</label>
                            </csv>
                            <excel>
                                <urlPath>*/*/exportTotalsExcel</urlPath>
                                <label translate="true" module="Mage_Reports">Excel XML</label>
                            </excel>
                        </exportTypes>
                    </arguments>
                </block>
                <block type="Mage_Backend_Block_Store_Switcher" template="Mage_Reports::store/switcher/enhanced.phtml"  as="store_switcher">
                    <arguments>
                        <use_confirm>0</use_confirm>
                        <switch_url type='url'>
                            <path>*/*/*</path>
                            <params>
                                <store>null</store>
                            </params>
                        </switch_url>
                    </arguments>
                </block>
                <block type="Mage_Backend_Block_Widget_Grid_ColumnSet" as="grid.columnSet" name="report.customer.totals.grid.columnSet">
                    <arguments>
                        <filter_visibility>0</filter_visibility>
                        <empty_text translate="true" module="Mage_Reports">No records found for this period.</empty_text>
                        <empty_cell_label translate="true" module="Mage_Reports">No records found for this period.</empty_cell_label>
                        <count_totals>1</count_totals>
                        <id>gridTotalsCustomerSet</id>
                    </arguments>
                    <block type="Mage_Backend_Block_Widget_Grid_Column" as="period">
                        <arguments>
                            <header translate="true" module="Mage_Reports">Period</header>
                            <width>100px</width>
                            <index>period</index>
                            <filter>0</filter>
                            <id>period</id>
                            <grouped>1</grouped>
                            <totals_label>Total</totals_label>
                            <sortable>0</sortable>
                        </arguments>
                    </block>
                    <block type="Mage_Backend_Block_Widget_Grid_Column" as="name">
                        <arguments>
                            <header translate="true" module="Mage_Reports">Customer Name</header>
                            <sortable>0</sortable>
                            <index>name</index>
                            <id>name</id>
                        </arguments>
                    </block>
                    <block type="Mage_Backend_Block_Widget_Grid_Column" as="orders_count">
                        <arguments>
                            <header translate="true" module="Mage_Reports">Number of Orders</header>
                            <width>100px</width>
                            <sortable>0</sortable>
                            <index>orders_count</index>
                            <total>sum</total>
                            <type>number</type>
                            <id>orders_count</id>
                        </arguments>
                    </block>
                    <block type="Mage_Backend_Block_Widget_Grid_Column" as="orders_avg_amount">
                        <arguments>
                            <header translate="true" module="Mage_Reports">Average Order Amount</header>
                            <width>200px</width>
                            <align>right</align>
                            <sortable>0</sortable>
                            <type>currency</type>
                            <index>orders_avg_amount</index>
                            <total>orders_sum_amount/orders_count</total>
                            <id>orders_avg_amount</id>
                            <renderer>Mage_Adminhtml_Block_Report_Grid_Column_Renderer_Currency</renderer>
                        </arguments>
                    </block>
                    <block type="Mage_Backend_Block_Widget_Grid_Column" as="orders_sum_amount">
                        <arguments>
                            <header translate="true" module="Mage_Reports">Total Order Amount</header>
                            <width>200px</width>
                            <align>right</align>
                            <sortable>0</sortable>
                            <type>currency</type>
                            <index>orders_sum_amount</index>
                            <total>sum</total>
                            <id>orders_avg_amount</id>
                            <renderer>Mage_Adminhtml_Block_Report_Grid_Column_Renderer_Currency</renderer>
                        </arguments>
                    </block>
                </block>
            </block>
        </reference>
    </adminhtml_report_customer_totals_grid>

    <adminhtml_report_customer_totals>
        <update handle="adminhtml_report_customer_totals_grid" />
        <reference name="content">
            <block name='report.customer.totals.grid.container' type="Mage_Adminhtml_Block_Report_Customer_Totals" />
        </reference>
    </adminhtml_report_customer_totals>

    <adminhtml_report_customer_exporttotalscsv>
        <update handle="adminhtml_report_customer_totals_grid"/>
        <container name="report.customer.totals.grid.container" label="Report Customer Totals Grid Container"/>
    </adminhtml_report_customer_exporttotalscsv>

    <adminhtml_report_customer_exporttotalsexcel>
        <update handle="adminhtml_report_customer_totals_grid"/>
        <container name="report.customer.totals.grid.container" label="Report Customer Totals Grid Container"/>
    </adminhtml_report_customer_exporttotalsexcel>

    <adminhtml_report_customer_accounts_grid>
        <reference name="report.customer.accounts.grid.container">
            <block type="Mage_Reports_Block_Adminhtml_Grid" name="report.customer.accounts.grid" as="grid">
                <arguments>
                    <id>gridAccounts</id>
                    <dataSource type="object">Mage_Reports_Model_Resource_Accounts_Initial</dataSource>
                    <use_ajax>0</use_ajax>
                </arguments>
                <block type="Mage_Backend_Block_Widget_Grid_Export" name="report.customer.accounts.grid.export" as="grid.export">
                    <arguments>
                        <exportTypes>
                            <csv>
                                <urlPath>*/*/exportTotalsCsv</urlPath>
                                <label translate="true" module="Mage_Reports">CSV</label>
                            </csv>
                            <excel>
                                <urlPath>*/*/exportTotalsExcel</urlPath>
                                <label translate="true" module="Mage_Reports">Excel XML</label>
                            </excel>
                        </exportTypes>
                    </arguments>
                </block>
                <block type="Mage_Backend_Block_Store_Switcher" template="Mage_Reports::store/switcher/enhanced.phtml"  as="store_switcher">
                    <arguments>
                        <use_confirm>0</use_confirm>
                        <switch_url type='url'>
                            <path>*/*/*</path>
                            <params>
                                <store>null</store>
                            </params>
                        </switch_url>
                    </arguments>
                </block>
                <block type="Mage_Backend_Block_Widget_Grid_ColumnSet" as="grid.columnSet" name="report.customer.accounts.grid.columnSet">
                    <arguments>
                        <filter_visibility>0</filter_visibility>
                        <empty_text translate="true" module="Mage_Reports">No records found for this period.</empty_text>
                        <empty_cell_label translate="true" module="Mage_Reports">No records found for this period.</empty_cell_label>
                        <id>accounts</id>
                        <count_totals>1</count_totals>
                    </arguments>
                    <block type="Mage_Backend_Block_Widget_Grid_Column" as="period">
                        <arguments>
                            <header translate="true" module="Mage_Reports">Period</header>
                            <index>period</index>
                            <width>100px</width>
                            <filter>0</filter>
                            <id>period</id>
                            <grouped>1</grouped>
                            <sortable>0</sortable>
                            <totals_label>Total</totals_label>
                        </arguments>
                    </block>
                    <block type="Mage_Backend_Block_Widget_Grid_Column" as="accounts">
                        <arguments>
                            <header translate="true" module="Mage_Reports">Number of New Accounts</header>
                            <index>accounts</index>
                            <total>sum</total>
                            <type>number</type>
                            <id>accounts</id>
                        </arguments>
                    </block>
                </block>
            </block>
        </reference>
    </adminhtml_report_customer_accounts_grid>

    <adminhtml_report_customer_accounts>
        <update handle="adminhtml_report_customer_accounts_grid" />
        <reference name="content">
            <block name='report.customer.accounts.grid.container' type="Mage_Adminhtml_Block_Report_Customer_Accounts" />
        </reference>
    </adminhtml_report_customer_accounts>

    <adminhtml_report_customer_exportaccountscsv>
        <update handle="adminhtml_report_customer_accounts_grid"/>
        <container name="report.customer.accounts.grid.container" label="Report Customer Accounts Grid Container"/>
    </adminhtml_report_customer_exportaccountscsv>

    <adminhtml_report_customer_exportaccountsexcel>
        <update handle="adminhtml_report_customer_accounts_grid"/>
        <container name="report.customer.accounts.grid.container" label="Report Customer Accounts Grid Container"/>
    </adminhtml_report_customer_exportaccountsexcel>
</layout>
