            <?php if ($this->canSendCommentEmail()): ?>
                <input name="comment[is_customer_notified]" type="checkbox" id="history_notify" value="1" /><label class="normal" for="history_notify"><?php echo Mage::helper('Mage_Sales_Helper_Data')->__('Notify Customer by Email') ?></label><br />
