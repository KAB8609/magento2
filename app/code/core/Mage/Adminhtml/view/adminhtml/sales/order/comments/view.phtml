        </div>
    </div>
    <ul class="note-list">
    <?php foreach ($_entity->getCommentsCollection(true) as $_comment): ?>
        <li>
            <strong><?php echo $this->helper('Mage_Core_Helper_Data')->formatDate($_comment->getCreatedAtDate(), 'medium') ?></strong>
            <?php echo $this->helper('Mage_Core_Helper_Data')->formatTime($_comment->getCreatedAtDate(), 'medium') ?>
            <div><?php echo $this->helper('Mage_Sales_Helper_Data')->__('Customer') ?>
            <strong>
                <?php if ($_comment->getIsCustomerNotified()): ?>
                <?php echo $this->helper('Mage_Sales_Helper_Data')->__('Notified') ?>
                <img src="<?php echo $this->getViewFileUrl('images/ico_success.gif') ?>" width="16" height="16" alt="" />
