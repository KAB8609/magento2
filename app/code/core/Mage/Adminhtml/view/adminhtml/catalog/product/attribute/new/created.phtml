<script type="text/javascript">
var added = false;
function addAttribute(closeAfter) {
    if (window.opener!=null && !added) {
        var data = <?php echo $this->getAttributesBlockJson() ?>;
        if (data.newAttributeSetId) {
            (function($, window, document) {
                $('#product_edit_form').trigger('product:changeAttributeSet', [data.newAttributeSetId]);
            })(window.opener.jQuery, window.opener, window.opener.document);
        } else {
            window.opener.Product.AttributesBridge.addAttributeRow(data);
            added = true;
        }
    }

    if (closeAfter) {
        closeWindow();
    }
}

function closeWindow()
{
    if (window.opener) {
        window.opener.focus();
    }
    window.close();
}

addAttribute(false);
setTimeout(closeWindow, 3000);
</script>
