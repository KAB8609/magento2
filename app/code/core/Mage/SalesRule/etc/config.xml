<config>
    <modules>
        <Mage_SalesRule>
            <version>0.2.0</version>
        </Mage_SalesRule>
    </modules>
    <global>
        <models>
            <salesrule>
                <class>Mage_SalesRule_Model</class>
                <resourceModel>salesrule_mysql4</resourceModel>
            </salesrule>
            <salesrule_mysql4>
                <class>Mage_SalesRule_Model_Mysql4</class>
                <entities>
                    <rule>
                        <table>salesrule</table>
                    </rule>
                    <rule_customer>
                        <table>salesrule_customer</table>
                    </rule_customer>
                    <rule_product>
                        <table>salesrule_product</table>
                    </rule_product>
                    <rule_product_price>
                        <table>salesrule_product_price</table>
                    </rule_product_price>
                </entities>
            </salesrule_mysql4>
        </models>
        <resources>
            <salesrule_setup>
                <setup>
                    <module>Mage_SalesRule</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </salesrule_setup>
            <salesrule_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </salesrule_write>
            <salesrule_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </salesrule_read>
        </resources>

        <events>
            <sales_quote_save_after>
                <observers>
                    <salesrule>
                        <type>singleton</type>
                        <class>salesrule/observer</class>
                        <method>sales_order_afterSave</method>
                    </salesrule>
                </observers>
            </sales_quote_save_after>
        </events>
    </global>
    <adminhtml>
        <menu>
             <promo>
                <title>Promotions</title>
                <!-- action>adminhtml/promo</action -->
                <children>

                    <quote>
                        <title>Shopping Cart Price Rules</title>
                        <action>*/promo_quote/</action>
                        <resource>promo/quote</resource>
                        <depends><module>Mage_Sales</module></depends>
                    </quote>
                </children>
             </promo>
        </menu>
        <translate>
            <modules>
                <Mage_SalesRule>
                    <files>
                        <default>Mage_SalesRule.csv</default>
                    </files>
                </Mage_SalesRule>
            </modules>
        </translate>
    </adminhtml>
</config>
