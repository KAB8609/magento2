<?xml version="1.0"?>
<config>
    <modules>
        <Mage_SalesRule>
            <version>0.1.0</version>
        </Mage_SalesRule>
    </modules>
    <global>
        <models>
            <salesrule>
                <class>Mage_SalesRule_Model</class>
                <resourceModel>salesrule_mysql4</resourceModel>
            </salesrule>
            <salesrule_mysql4>
                <class>Mage_SalesRule_Model_Mysql4</class>
                <entities>
                    <rule>
                        <table>salesrule</table>
                    </rule>
                    <rule_product>
                        <table>salesrule_product</table>
                    </rule_product>
                    <rule_product_price>
                        <table>salesrule_product_price</table>
                    </rule_product_price>
                </entities>
            </salesrule_mysql4>
        </models>
        <resources>
            <salesrule_setup>
                <setup>
                    <module>Mage_SalesRule</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </salesrule_setup>
            <salesrule_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </salesrule_write>
            <salesrule_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </salesrule_read>
        </resources>
        <sales>
          <product>
            <rule>
              <conditions>
                <combine>
                  <class>salesrule/rule_condition_combine</class>
                </combine>
                <product>
                  <class>salesrule/rule_condition_product</class>
                </product>
              </conditions>
              <actions>
                <product>
                  <class>salesrule/rule_action_product</class>
                </product>
                <stop>
                  <class>rule/action_stop</class>
                </stop>
              </actions>
            </rule>
          </product>
        </sales>
    </global>
</config>
