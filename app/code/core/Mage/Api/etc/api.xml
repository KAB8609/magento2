<config>
    <api>
        <adapters>
            <soap>
                <model>api/server_adapter_soap</model>
                <handler>default</handler>
                <active>1</active>
                <required>
                    <extensions>
                        <soap />
                    </extensions>
                </required>
            </soap>
            <default>
                <use>soap</use>
            </default>
        </adapters>
        <handlers>
            <default>
                <model>api/server_handler</model>
            </default>
        </handlers>
    </api>
</config>