<?xml version="1.0"?>
<config>
   <modules>
      <Mage_Page>
         <version>0.1.1</version>
         <depends>
            <Mage_Auth />
         </depends>

         <admin>
            <controller>
               <active>true</active>
            </controller>
         </admin>
      </Mage_Page>
   </modules>

   <global>
      <resources>
         <page_setup>
            <setup>
               <module>Mage_Page</module>
            </setup>
            <connection>
               <use>core_setup</use>
            </connection>
         </page_setup>

         <page_write>
            <connection>
               <use>core_write</use>
            </connection>
         </page_write>

         <page_read>
            <connection>
               <use>core_read</use>
            </connection>
         </page_read>
      </resources>
   </global>

   <front>
      <layouts>
         <default>
            <updates>
               <page>
                  <file>page/initLayout.xml</file>
               </page>
            </updates>
         </default>
      </layouts>

      <routers>
         <page>
            <class>Mage_Core_Controller_Front_Router</class>
            <args>
               <module>Mage_Page</module>
               <frontName>page</frontName>
            </args>
         </page>
      </routers>
   </front>

   <admin>
      <acl>
         <resources>
            <layouts>
               <manage />
            </layouts>
         </resources>
      </acl>
   </admin>
</config>
