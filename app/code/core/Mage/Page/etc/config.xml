<?xml version="1.0"?>
<config>
    <modules>
        <Mage_Page>
            
            <version>0.1.1</version>
            <depends>
                <Mage_Acl/>
            </depends>

            <load>
                <all>
                    <resources>
                        <page_setup>
                            <connection extends="//core_setup/connection"/>
                        </page_setup>

                        <page_write>
                            <connection extends="//core_write/connection"/>
                        </page_write>

                        <page_read>
                            <connection extends="//core_read/connection"/>
                        </page_read>
                    </resources>
                </all>

                <front>
                    <controller>
                        <active>true</active>
                        <frontName>page</frontName>
                    </controller>

                    <events>
                        <initLayout>
                            <observers>
                                <page>
                                    <class>Mage_Core_Block</class>
                                    <method>loadJsonFile</method>
                                    <args>
                                        <file>Mage/Page/initLayout.json</file>
                                        <module>Mage_Page</module>
                                    </args>
                                </page>
                            </observers>
                        </initLayout>
                    </events>
                </front>
            </load>

        </Mage_Page>
    </modules>
</config>