<?php
/**
 * Template for Mage_Backend_Block_Widget_Button_Split
 */
/** @var $_helper Mage_Core_Helper_Data */
$_helper = $this->helper('Mage_Core_Helper_Data');
?>
<button id="<?php echo $this->getId(); ?>" class="buttons-group widget-button-split <?php echo $this->getButtonClass() ?: '' ?>">
    <div id="<?php echo $this->getId(); ?>_main_control" class="main-control button <?php echo $this->getClass() ?: '' ?>"<?php echo $this->getUiId(); ?>>
        <span><?php echo $this->getLabel(); ?></span>
    </div>
    <div class="button btn-toggle" data-toggle="dropdown" <?php echo $this->getUiId("dropdown"); ?>><span>Select</span></div>
    <ul class="dropdown-menu" <?php echo $this->getUiId("dropdown-menu"); ?>>
        <?php foreach ($this->getOptions() as $key => $option): ?>
        <li>
            <span class="item<?php if (!empty($option['default'])):?> item-default<?php endif; ?>"<?php echo isset($option['onclick']) ? 'onclick="' . $option['onclick'] . '"' : ''?><?php echo $this->getUiId("item", $key)?><?php echo isset($option['data_attr']) ? ' data-widget-button="' . $_helper->escapeHtml($_helper->jsonEncode($option['data_attr'])) . '"' : ''?>">
                <?php echo $option['label']?>
            </span>
            <?php if (isset($option['hint'])): ?>
            <div class="tooltip" <?php echo $this->getUiId("item", $key, "tooltip"); ?>>
                <a href="<?php echo $option['hint']['href'] ?>" class="help"><?php echo $option['hint']['label'] ?></a>
            </div>
            <?php endif; ?>
        </li>
        <?php endforeach; ?>
    </ul>
</button>
<script type="text/javascript">
(function($, window) {
    $(document).on('click.splitButtonToggle', '.widget-button-split .btn-toggle:not(.disabled)', function(e) {
        $(this).toggleClass('active')
            .parent()
            .toggleClass('active');
    });

    $(document).on('click.splitButtonDefault', '.widget-button-split .main-control:not(.disabled)', function(e) {
        $(this)
            .siblings('.dropdown-menu')
            .find('.item-default')
                .trigger('click');
    });
})(jQuery);
</script>
