<config>
    <sections>
        <system translate="label" module="core">
            <groups>
                <cron translate="label">
                    <label>Cron (Scheduled Tasks)</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>15</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <schedule_job>
                            <label>Generate Schedules Job</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </schedule_job>
                        <schedule_ahead_for translate="label">
                            <label>Schedule ahead for (minutes)</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </schedule_ahead_for>
                        <schedule_lifetime translate="label">
                            <label>Maximum schedule latency (minutes)</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </schedule_lifetime>
                        <history_lifetime translate="label">
                            <label>Run history lifetime (minutes)</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </history_lifetime>
                    </fields>
                </cron>
            </groups>
        </system>
    </sections>
</config>