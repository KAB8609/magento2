<config>
    <modules>
        <Mage_Cron>
            <version>0.7.0</version>
        </Mage_Cron>
    </modules>
    <global>
        <resources>
            <cron_setup>
                <setup>
                    <module>Mage_Cron</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </cron_setup>
            <cron_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </cron_write>
            <cron_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </cron_read>
        </resources>
        <models>
            <cron>
                <class>Mage_Cron_Model</class>
                <resourceModel>cron_mysql4</resourceModel>
            </cron>
            <cron_mysql4>
                <class>Mage_Cron_Model_Mysql4</class>
                <entities>
                    <schedule>
                        <table>cron_schedule</table>
                    </schedule>
                </entities>
            </cron_mysql4>
        </models>
    </global>

    <crontab>
        <events>
            <default>
                <observers>
                    <cron_observer>
                        <type>singleton</type>
                        <class>cron/observer</class>
                        <method>dispatch</method>
                    </cron_observer>
                </observers>
            </default>
        </events>

        <jobs>
            <every_15_minutes_during_business_hours_at_winter>
                <schedule>*/15 9-12,14-17 * Nov-Dec,Jan-Feb Mon-Fri</schedule>

            </every_15_minutes_during_business_hours_at_winter>
        </jobs>
    </crontab>

    <default>
        <system>
            <cron>
                <schedule_job>*/15 * * * *</schedule_job>
                <schedule_lifetime>15</schedule_lifetime>
                <schedule_ahead_for>15</schedule_ahead_for>
                <history_lifetime>60</history_lifetime>
            </cron>
        </system>
    </default>
</config>
