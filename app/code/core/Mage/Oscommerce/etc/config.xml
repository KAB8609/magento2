<config>
    <modules>
        <Mage_Oscommerce>
            <version>0.8.1</version>
            <depends>
                <Mage_Core />
            </depends>
        </Mage_Oscommerce>
    </modules>
    <global>
        <models>
            <oscommerce>
                <class>Mage_Oscommerce_Model</class>
                <resourceModel>oscommerce_mysql4</resourceModel>
            </oscommerce>
            <oscommerce_mysql4>
                <class>Mage_Oscommerce_Model_Mysql4</class>
                <entities>
                    <oscommerce>
                        <table>oscommerce_import</table>
                    </oscommerce>
                    <oscommerce_type>
                        <table>oscommerce_import_type</table>
                    </oscommerce_type>
                    <oscommerce_ref>
                        <table>oscommerce_ref</table>
                    </oscommerce_ref>
                    <catalog_product_website>
                        <table>catalog_product_website</table>
                    </catalog_product_website>
                </entities>
            </oscommerce_mysql4>
        </models>
        <blocks>
            <oscommerce>
                <class>Mage_Oscommerce_Block</class>
            </oscommerce>
        </blocks>
        <resources>
            <oscommerce_setup>
                <setup>
                    <module>Mage_Oscommerce</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </oscommerce_setup>
            <oscommerce_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </oscommerce_write>
            <oscommerce_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </oscommerce_read>
            <oscommerce_foreign>
                <connection>
                    <type>pdo_mysql</type>
                    <model>mysql4</model>
                    <active>1</active>
                </connection>
            </oscommerce_foreign>
        </resources>
    </global>
    <admin>
        <routers>
            <oscommerce>
                <use>admin</use>
                <args>
                    <module>Mage_Oscommerce</module>
                    <frontName>oscommerce</frontName>
                </args>
            </oscommerce>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <system translate="title" module="adminhtml">
                <children>
                    <convert translate="title" module="adminhtml">
                        <children>
                            <osc translate="title" module="adminhtml">
                                <title>OsCommerce</title>
                                <action>oscommerce/adminhtml_import</action>
                            </osc>
                        </children>
                    </convert>
                </children>
            </system>
        </menu>
    </adminhtml>
</config>