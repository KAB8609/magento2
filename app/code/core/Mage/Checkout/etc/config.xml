<?xml version="1.0"?>
<config>
    <modules>
        <Mage_Checkout>
            <version>0.1.1</version>
            
            <depends>
                <Mage_Sales/>
            </depends>

            <load>
                <all>
                    <models>
                        <checkout><class>Mage_Checkout_Model_Mysql4</class></checkout>
                    </models>
                    
                    <resources>
                        <checkout_setup>
                            <connection extends="//core_setup/connection"/>
                        </checkout_setup>

                        <checkout_write>
                            <connection extends="//core_write/connection"/>
                        </checkout_write>

                        <checkout_read>
                            <connection extends="//core_read/connection"/>
                        </checkout_read>
                    </resources>
                </all>

                <front>
                    <controller>
                        <active>true</active>
                        <frontName>checkout</frontName>
                    </controller>

                    <layouts>
                        <default><updates><checkout><module>Mage_Checkout</module><file>initLayout.xml</file></checkout></updates></default>
                    </layouts>
                </front>
            </load>

        </Mage_Checkout>
    </modules>
</config>