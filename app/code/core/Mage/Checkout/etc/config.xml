<?xml version="1.0"?>
<config>
    <modules>
        <Mage_Checkout>
            <version>0.1.1</version>
            
            <depends>
                <Mage_Sales/>
            </depends>

            <load>
                <all>
                    <resources>
                        <checkout_setup>
                            <connection extends="//core_setup/connection"/>
                        </checkout_setup>

                        <checkout_write>
                            <connection extends="//core_write/connection"/>
                        </checkout_write>

                        <checkout_read>
                            <connection extends="//core_read/connection"/>
                        </checkout_read>
                    </resources>
                </all>

                <front>
                    <controller>
                        <active>true</active>
                        <frontName>checkout</frontName>
                    </controller>

                    <events>
                        <initLayout>
                            <observers>
                                <checkout>
                                    <class>Mage_Core_Block</class>
                                    <method>loadJsonFile</method>
                                    <args>
                                        <file>Mage/Checkout/initLayout.json</file>
                                        <module>Mage_Checkout</module>
                                    </args>
                                </checkout>
                            </observers>
                        </initLayout>
                    </events>
                </front>
            </load>

        </Mage_Checkout>
    </modules>
</config>