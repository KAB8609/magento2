<?xml version="1.0"?>
<config>
   <modules>
      <Mage_Checkout>
         <version>0.1.1</version>
         <depends>
            <Mage_Sales />
         </depends>
      </Mage_Checkout>
   </modules>

   <global>
   
      <blockTypes>
         <checkout_onepage>
            <class>Mage_Checkout_Block_Onepage</class>
         </checkout_onepage>

         <checkout_onepage_status>
            <class>Mage_Checkout_Block_Onepage_Status</class>
         </checkout_onepage_status>
         
         <checkout_shipping_method>
            <class>Mage_Checkout_Block_Shipping_Method</class>
         </checkout_shipping_method>
      </blockTypes>

      <models>
         <checkout>
            <class>Mage_Checkout_Model</class>
         </checkout>
      </models>

      <resources>
         <checkout_setup>
            <setup>
                <module>Mage_Checkout</module>
            </setup>
            <connection><use>core_setup</use></connection>
         </checkout_setup>

         <checkout_write>
            <connection><use>core_write</use></connection>
         </checkout_write>

         <checkout_read>
            <connection><use>core_read</use></connection>
         </checkout_read>
      </resources>
   </global>

   <front>

      <layouts>
         <default>
            <updates>
               <checkout>
                  <module>Mage_Checkout</module>

                  <file>initLayout.xml</file>
               </checkout>
            </updates>
         </default>
      </layouts>

      <events>
         <customerLogin>
            <observers>
               <loadCustomerQuote>
                  <class>Mage_Checkout_Front</class>

                  <method>loadCustomerQuote</method>
               </loadCustomerQuote>
            </observers>
         </customerLogin>

         <customerLogout>
            <observers>
               <unsetAll>
                  <class>Mage_Checkout_Front</class>

                  <method>unsetAll</method>
               </unsetAll>
            </observers>
         </customerLogout>
      </events>
      
      <urls>
         <cart_view>checkout/cart</cart_view>
         <checkout_start>checkout</checkout_start>
      </urls>
      
      <routers>
         <checkout>
            <class>Mage_Core_Controller_Front_Router</class>
            <args>
                <module>Mage_Checkout</module>
                <frontName>checkout</frontName>
            </args>
         </checkout>
      </routers>
   </front>
</config>

