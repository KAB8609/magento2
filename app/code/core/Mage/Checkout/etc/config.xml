<?xml version="1.0"?>
<config>
   <modules>
      <Mage_Checkout>
         <version>0.1.1</version>
         <depends>
            <Mage_Sales />
         </depends>
         <front>
          <controller>
             <active>true</active>
    
             <frontName>checkout</frontName>
          </controller>
          </front>
      </Mage_Checkout>
   </modules>

   <global>
   
      <blockTypes>
         <checkout_onepage>
            <class>Mage_Checkout_Block_Onepage</class>
         </checkout_onepage>

         <checkout_onepage_status>
            <class>Mage_Checkout_Block_Onepage_Status</class>
         </checkout_onepage_status>
      </blockTypes>

      <models>
         <checkout>
            <class>Mage_Checkout_Model_Mysql4</class>
         </checkout>
      </models>

      <resources>
         <checkout_setup>
            <setup>
                <module>Mage_Checkout</module>
            </setup>
            <connection><use>core_setup</use></connection>
         </checkout_setup>

         <checkout_write>
            <connection><use>core_write</use></connection>
         </checkout_write>

         <checkout_read>
            <connection><use>core_read</use></connection>
         </checkout_read>
      </resources>
   </global>

   <front>

      <layouts>
         <default>
            <updates>
               <checkout>
                  <module>Mage_Checkout</module>

                  <file>initLayout.xml</file>
               </checkout>
            </updates>
         </default>
      </layouts>

      <events>
         <action_preDispatch>
            <observers>
               <construct>
                  <class>Mage_Checkout_Front</class>

                  <method>construct</method>
               </construct>
            </observers>
         </action_preDispatch>

         <customerLogin>
            <observers>
               <clear>
                  <class>Mage_Checkout_Front</class>

                  <method>clear</method>
               </clear>
            </observers>
         </customerLogin>

         <customerLogout>
            <observers>
               <clear>
                  <class>Mage_Checkout_Front</class>

                  <method>clear</method>
               </clear>
            </observers>
         </customerLogout>
      </events>
   </front>
</config>

