<?xml version="1.0"?>
<config>
    <modules>
        <module name="Mage_Checkout">
            
            <depends>
                <module name="Mage_Sales"/>
            </depends>

            <area name="all">
                <resources>
                    <resource name="checkout_setup">
                        <version>0.1.1</version>
                        <connection extends="/config/modules/module/area[@name='all']/resources/resource[@name='core_setup']/connection"/>
                    </resource>

                    <resource name="checkout_write">
                        <connection extends="/config/modules/module/area[@name='all']/resources/resource[@name='core_write']/connection"/>
                    </resource>

                    <resource name="checkout_read">
                        <connection extends="/config/modules/module/area[@name='all']/resources/resource[@name='core_read']/connection"/>
                    </resource>
                </resources>
            </area>

            <area name="front">
                <controller>
                    <active>true</active>
                    <frontName>checkout</frontName>
                </controller>

                <events>
                    <event name="initLayout">
                        <observer name="cart_initLayout">
                            <class>Mage_Core_Block</class>
                            <method>loadJsonFile</method>
                            <arg>Mage/Checkout/initLayout.json</arg>
                            <arg>Mage_Checkout</arg>
                        </observer>
                    </event>
                </events>
            </area>

        </module>
    </modules>
</config>