<config>
    <modules>
    	<Mage_DirectPayment>
        	<version>0.0.1</version>
      	</Mage_DirectPayment>
    </modules>
    <global>
    	<blocks>
            <directpayment><class>Mage_DirectPayment_Block</class></directpayment>
        </blocks>
		<models>
		    <directpayment>
		        <class>Mage_DirectPayment_Model</class>
		        <resourceModel>directpayment_mysql4</resourceModel>
		   </directpayment>
		   <directpayment_mysql4>
		       <class>Mage_DirectPayment_Model_Mysql4</class>
		   </directpayment_mysql4>
		</models>
		<helpers>
		    <directpayment>
			    <class>Mage_DirectPayment_Helper</class>
		    </directpayment>
		</helpers>
		<resources>
		    <directpayment_setup>
		        <setup>
		            <module>Mage_DirectPayment</module>
		        </setup>
		    </directpayment_setup>
		</resources>
		<events>
    		<checkout_submit_all_after>
                <observers>
                    <directpayment_save_order_after_submit>
                        <class>directpayment/observer</class>
                        <method>saveOrderAfterSubmit</method>
                    </directpayment_save_order_after_submit>                    
                </observers>
            </checkout_submit_all_after> 
            <controller_action_postdispatch_checkout_onepage_saveOrder>
            	<observers>
                    <directpayment_save_order_onepage>
                        <class>directpayment/observer</class>
                        <method>addAdditionalFieldsToResponse</method>
                    </directpayment_save_order_onepage>                    
                </observers>
            </controller_action_postdispatch_checkout_onepage_saveOrder>
            <controller_action_postdispatch_adminhtml_sales_order_create_save>
            	<observers>
                    <directpayment_save_order_admin>
                        <class>directpayment/observer</class>
                        <method>addAdditionalFieldsToResponse</method>
                    </directpayment_save_order_admin>                    
                </observers>
            </controller_action_postdispatch_adminhtml_sales_order_create_save>
            <controller_action_postdispatch_adminhtml_sales_order_edit_save>
            	<observers>
                    <directpayment_save_order_admin>
                        <class>directpayment/observer</class>
                        <method>addAdditionalFieldsToResponse</method>
                    </directpayment_save_order_admin>                    
                </observers>
            </controller_action_postdispatch_adminhtml_sales_order_edit_save>          
    	</events>
    </global>

    <adminhtml>
        <translate>
            <modules>
                <Mage_DirectPayment>
                    <files>
                        <default>Mage_DirectPayment.csv</default>
                    </files>
                </Mage_DirectPayment>
            </modules>
        </translate>
        <layout>
            <updates>
                <directpayment>
                    <file>directpayment.xml</file>
                </directpayment>
            </updates>
        </layout>
    </adminhtml>

    <frontend>
        <translate>
            <modules>
                <Mage_DirectPayment>
                    <files>
                        <default>Mage_DirectPayment.csv</default>
                    </files>
                </Mage_DirectPayment>
            </modules>
        </translate>
         <routers>
            <directpayment>
                <use>standard</use>
                <args>
                    <module>Mage_DirectPayment</module>
                    <frontName>directpayment</frontName>
                </args>
            </directpayment>
        </routers>
        <layout>
            <updates>
                <directpayment>
                    <file>directpayment.xml</file>
                </directpayment>
            </updates>
        </layout>
    </frontend>

    <default>
        <payment>
            <directpayment>
                <active>0</active>
                <cctypes>AE,VI,MC,DI</cctypes>
                <cgi_url>https://secure.authorize.net/gateway/transact.dll</cgi_url>
                <debug>0</debug>
                <email_customer>0</email_customer>
                <login backend_model="adminhtml/system_config_backend_encrypted"/>
                <merchant_email></merchant_email>
                <model>directpayment/authorizenet</model>
                <order_status>1</order_status>
                <payment_action>authorize</payment_action>
                <test>1</test>
                <title>Credit Card Direct Payment (Authorize.net)</title>
                <trans_key backend_model="adminhtml/system_config_backend_encrypted"/>
                <allowspecific>0</allowspecific>
                <currency>USD</currency>
            </directpayment>
        </payment>
    </default>
</config>
