<?xml version="1.0"?>
<config>
   <modules>
      <Mage_Shiptable>
         <version>0.2.0</version>
      </Mage_Shiptable>
   </modules>

   <global>
      <models>
         <shiptable>
            <class>Mage_Shiptable_Model</class>
         </shiptable>

         <shiptable_resource>
            <class>Mage_Shiptable_Model_Mysql4</class>

            <entities>
               <shiptable>
                  <table>shiptable_data</table>
               </shiptable>
            </entities>
         </shiptable_resource>
      </models>

      <resources>
         <shiptable_setup>
            <setup>
               <module>Mage_Shiptable</module>
            </setup>
            <connection>
               <use>core_setup</use>
            </connection>
         </shiptable_setup>

         <shiptable_write>
            <connection>
               <use>core_write</use>
            </connection>
         </shiptable_write>

         <shiptable_read>
            <connection>
               <use>core_read</use>
            </connection>
         </shiptable_read>
      </resources>

      <sales>
         <shipping>
            <vendors>
               <shiptable>
                  <active>true</active>

                  <model>shiptable</model>
                  <class>table</class>

                  <title>Table rate</title>
               </shiptable>
            </vendors>
         </shipping>
      </sales>
   </global>
</config>
