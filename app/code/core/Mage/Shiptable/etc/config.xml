<?xml version="1.0"?>
<config>
   <modules>
      <Mage_Shiptable>
         <version>0.1.2</version>
         <admin>
            <controller>
               <active>true</active>
            </controller>
         </admin>
      </Mage_Shiptable>
   </modules>

   <global>
      <models>
         <shiptable>
            <class>Mage_Shiptable_Model_Mysql4</class>

            <entities>
               <shiptable>
                  <table>shiptable_data</table>
               </shiptable>
            </entities>
         </shiptable>
      </models>

      <resources>
         <shiptable_setup>
            <setup>
                <module>Mage_Shiptable</module>
            </setup>
            <connection><use>core_setup</use></connection>
         </shiptable_setup>

         <shiptable_write>
            <connection><use>core_write</use></connection>
         </shiptable_write>

         <shiptable_read>
            <connection><use>core_read</use></connection>
         </shiptable_read>
      </resources>

      <salesShippingVendors>
         <shiptable>
            <active>true</active>

            <model>shiptable</model>
            <class>table</class>

            <defaults>
               <title>Table rate</title>
            </defaults>
         </shiptable>
      </salesShippingVendors>
   </global>
</config>

