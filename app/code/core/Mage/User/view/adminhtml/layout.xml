<layout>
    <adminhtml_index_login>
        <reference name="form.buttons">
            <block type="Mage_Backend_Block_Template" name="adminhtml_index_login_forgotpassword" template="Mage_User::admin/forgotpassword_url.phtml" />
        </reference>
    </adminhtml_index_login>

    <adminhtml_index_forgotpassword>
        <container name="root" label="Root" output="1">
            <block type="Mage_Backend_Block_Template" name="content" template="Mage_User::admin/forgotpassword.phtml">
                <container name="form.additional.info" label="Form Additional Info"/>
            </block>
        </container>
    </adminhtml_index_forgotpassword>

    <!-- admin acl roles grid page -->
    <adminhtml_user_role_index>
        <reference name="content">
            <block type="Mage_User_Block_Roles" name="adminhtml.permission.role.index" template="roles.phtml">
                <block type="Mage_User_Block_Grid_Role" name="adminhtml.permission.role.grid" as="grid"/>
            </block>
        </reference>
    </adminhtml_user_role_index>

    <adminhtml_user_role_rolegrid>
        <remove name="root"/>
        <block type="Mage_User_Block_Grid_Role" name="adminhtml.permission.role.grid"/>
    </adminhtml_user_role_rolegrid>

    <!-- admin acl roles edit page -->
    <adminhtml_user_role_editrole>
        <reference name="left">
            <block type="Mage_User_Block_Editroles" name="adminhtml.permissions.editroles"/>
        </reference>
    </adminhtml_user_role_editrole>
 </layout>
