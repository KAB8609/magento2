<layout>
    <adminhtml_auth_login>
        <reference name="form.buttons">
            <block type="Mage_Backend_Block_Template" name="adminhtml_auth_login_forgotpassword" template="Mage_User::admin/forgotpassword_url.phtml" />
        </reference>
    </adminhtml_auth_login>

    <adminhtml_auth_forgotpassword>
        <container name="root" label="Root" output="1">
            <block type="Mage_Backend_Block_Template" name="content" template="Mage_User::admin/forgotpassword.phtml">
                <container name="form.additional.info" label="Form Additional Info"/>
            </block>
        </container>
    </adminhtml_auth_forgotpassword>

    <adminhtml_auth_resetpassword>
        <container name="root" label="Root" output="1">
            <block type="Mage_Backend_Block_Template" name="content" template="Mage_User::admin/forgotpassword.phtml">
                <container name="form.additional.info" label="Form Additional Info"/>
            </block>
        </container>
    </adminhtml_auth_resetpassword>

    <adminhtml_auth_resetpasswordpost>
        <container name="root" label="Root" output="1">
            <block type="Mage_Backend_Block_Template" name="content" template="Mage_User::admin/forgotpassword.phtml">
                <container name="form.additional.info" label="Form Additional Info"/>
            </block>
        </container>
    </adminhtml_auth_resetpasswordpost>

    <!-- admin acl roles grid page -->
    <adminhtml_user_role_index>
        <reference name="content">
            <block type="Mage_User_Block_Role" name="adminhtml.permission.role.index" />
        </reference>
    </adminhtml_user_role_index>

    <adminhtml_user_role_rolegrid>
        <remove name="root"/>
        <block type="Mage_User_Block_Role_Grid" name="adminhtml.permission.role.grid" output="1"/>
    </adminhtml_user_role_rolegrid>

    <!-- admin acl roles edit page -->
    <adminhtml_user_role_editrole>
        <reference name="left">
            <block type="Mage_User_Block_Role_Edit" name="adminhtml.permissions.editroles"/>
        </reference>

        <reference name="content">
            <block type="Mage_Backend_Block_Template" name="adminhtml.permission.roles.users.grid.js" template="Mage_User::role/users_grid_js.phtml"/>
            <block type="Mage_User_Block_Buttons" name="adminhtml.permission.role.buttons" template="role/info.phtml"/>
        </reference>
    </adminhtml_user_role_editrole>

    <adminhtml_user_role_editrolegrid>
        <remove name="root"/>
        <block type="Mage_User_Block_Role_Grid_User" name="adminhtml.permission.role.grid.user" output="1"/>
    </adminhtml_user_role_editrolegrid>

    <adminhtml_user_index>
        <reference name="content">
            <block type="Mage_User_Block_User" name="adminhtml.permission.user.index"/>
        </reference>
    </adminhtml_user_index>

    <adminhtml_user_edit>
        <reference name="left">
            <block type="Mage_User_Block_User_Edit_Tabs" name="adminhtml.permission.user.edit.tabs"/>
        </reference>

        <reference name="content">
            <block type="Mage_Backend_Block_Template" name="adminhtml.permission.user.roles.grid.js" template="Mage_User::user/roles_grid_js.phtml"/>
            <block type="Mage_User_Block_User_Edit" name="adminhtml.permission.user.edit"/>
        </reference>
    </adminhtml_user_edit>

    <adminhtml_user_rolegrid>
        <remove name="root"/>
        <block type="Mage_User_Block_User_Grid" name="adminhtml.permission.user.rolegrid" output="1"/>
    </adminhtml_user_rolegrid>

    <adminhtml_user_rolesgrid>
        <remove name="root"/>
        <block type="Mage_User_Block_User_Edit_Tab_Roles" name="adminhtml.permission.user.rolesgrid" output="1"/>
    </adminhtml_user_rolesgrid>
 </layout>
