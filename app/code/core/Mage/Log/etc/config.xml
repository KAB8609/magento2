<?xml version="1.0"?>
<config>
    <modules>
    <Mage_Log>
        <version>0.1.2</version>
        <depends>
            <Mage_Core />
            <Mage_Customer />
        </depends>
    </Mage_Log>
    </modules>
    <global>
        <models>
            <log>
                <class>Mage_Log_Model</class>
            </log>
            <log_resource>
                <class>Mage_Log_Model_Mysql4</class>
                <entities>
                    <visitor>
                        <table>log_visitor</table>
                    </visitor>
                    <url_table>
                        <table>log_url_history</table>
                    </url_table>
                </entities>
            </log_resource>
        </models>
        <resources>
            <log_setup>
                <setup>
                    <module>Mage_Log</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </log_setup>
            <log_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </log_write>
            <log_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </log_read>
        </resources>
    </global>
    <front>
        <events>
            <action_preDispatch>
                <observers>
                    <log>
                        <type>singleton</type>
                        <class>log/visitor</class>
                        <method>loadByAction</method>
                    </log>
                </observers>
            </action_preDispatch>
            <initCheckoutSession>
                <observers>
                    <log>
                        <type>singleton</type>
                        <class>log/visitor</class>
                        <method>bindCheckoutSession</method>
                    </log>
                </observers>
            </initCheckoutSession>
            <initCustomerSession>
                <observers>
                    <log>
                        <type>singleton</type>
                        <class>log/visitor</class>
                        <method>bindCustomer</method>
                    </log>
                </observers>
            </initCustomerSession>
            <setWebsiteCode>
                <observers>
                    <log>
                        <type>singleton</type>
                        <class>log/visitor</class>
                        <method>bindWebsite</method>
                    </log>
                </observers>
            </setWebsiteCode>            
            <action_postDispatch>
                <observers>
                    <log>
                        <type>singleton</type>
                        <class>log/visitor</class>
                        <method>save</method>
                    </log>
                </observers>
            </action_postDispatch>
        </events>
    </front>
</config>
