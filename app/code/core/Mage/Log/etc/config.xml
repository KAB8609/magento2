<?xml version="1.0"?>
<config>
    <modules>
    <Mage_Log>
        <version>0.1.5</version>
        <depends>
            <Mage_Core />
            <Mage_Customer />
        </depends>
    </Mage_Log>
    </modules>
    <global>
        <models>
            <log>
                <class>Mage_Log_Model</class>
                <resourceModel>log_mysql4</resourceModel>
            </log>
            <log_mysql4>
                <class>Mage_Log_Model_Mysql4</class>
                <entities>
                    <customer>
                        <table>log_customer</table>
                    </customer>
                    <visitor>
                        <table>log_visitor</table>
                    </visitor>
                    <visitor_info>
                        <table>log_visitor_info</table>
                    </visitor_info>
                    <url_table>
                        <table>log_url</table>
                    </url_table>
                    <url_info_table>
                        <table>log_url_info</table>
                    </url_info_table>
                    <summary_table>
                        <table>log_summary</table>
                    </summary_table>
                    <summary_type_table>
                        <table>log_summary_type</table>
                    </summary_type_table>
                </entities>
            </log_mysql4>
        </models>
        <resources>
            <log_setup>
                <setup>
                    <module>Mage_Log</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </log_setup>
            <log_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </log_write>
            <log_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </log_read>
        </resources>
    </global>
    <front>
        <events>
            <customerLogin>
                <observers>
                    <log>
                        <type>singleton</type>
                        <class>log/visitor</class>
                        <method>bindCustomerLogin</method>
                    </log>
                </observers>
            </customerLogin>
            <customerLogout>
                <observers>
                    <log>
                        <type>singleton</type>
                        <class>log/visitor</class>
                        <method>bindCustomerLogout</method>
                    </log>
                </observers>
            </customerLogout>
            <action_preDispatch>
                <observers>
                    <log>
                        <type>singleton</type>
                        <class>log/visitor</class>
                        <method>loadByAction</method>
                    </log>
                </observers>
            </action_preDispatch>
            <initCheckoutSession>
                <observers>
                    <log>
                        <type>singleton</type>
                        <class>log/visitor</class>
                        <method>bindCheckoutSession</method>
                    </log>
                </observers>
            </initCheckoutSession>
            <initCustomerSession>
                <observers>
                    <log>
                        <type>singleton</type>
                        <class>log/visitor</class>
                        <method>bindCustomer</method>
                    </log>
                </observers>
            </initCustomerSession>
            <setStoreCode>
                <observers>
                    <log>
                        <type>singleton</type>
                        <class>log/visitor</class>
                        <method>bindStore</method>
                    </log>
                </observers>
            </setStoreCode>
            <action_postDispatch>
                <observers>
                    <log>
                        <type>singleton</type>
                        <class>log/visitor</class>
                        <method>save</method>
                    </log>
                </observers>
            </action_postDispatch>
        </events>
    </front>
</config>