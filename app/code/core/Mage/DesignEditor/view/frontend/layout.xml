<layout>
    <designeditor_page_type>
        <reference name="root">
            <reference name="head">
                <action method="setVdeDesignMode"><flag>1</flag></action>
                <action method="addJs"><file>jquery/jquery.min.js</file><params/><if/><flag>vde_design_mode</flag></action>
                <action method="addJs"><file>jquery/jquery-ui.js</file><params/><if/><flag>vde_design_mode</flag></action>
                <action method="addJs"><file>mage/jquery-no-conflict.js</file><params/><if/><flag>vde_design_mode</flag></action>
                <action method="addJs"><file>head.load.min.js</file><params/><if/><flag>vde_design_mode</flag></action>
                <action method="addJs"><file>mage/mage.js</file><params/><if/><flag>vde_design_mode</flag></action>
                <action method="addJs"><file>mage/decorate.js</file><params/><if/><flag>vde_design_mode</flag></action>
                <action method="addJs"><file>mage/translate.js</file><params/><if/><flag>vde_design_mode</flag></action>
                <action method="addJs"><file>jquery/jquery.tmpl.min.js</file><params/><if/><flag>vde_design_mode</flag></action>
                <action method="addJs"><file>Mage_DesignEditor::js/design_editor.js</file><params/><if/><flag>vde_design_mode</flag></action>
                <action method="addJs"><file>Mage_DesignEditor::js/form_deactivation.js</file><params/><if/><flag>vde_design_mode</flag></action>
                <action method="addJs"><file>Mage_DesignEditor::js/change/layout.js</file><params/><if/><flag>vde_design_mode</flag></action>
                <action method="addCss"><file>Mage_DesignEditor::css/design.css</file><params/><if/><flag>vde_design_mode</flag></action>
            </reference>
        </reference>

        <reference name="before_body_end">
            <block type="Mage_DesignEditor_Block_Toolbar_History" name="design_editor_toolbar_history" template="toolbar/history.phtml"/>
        </reference>
    </designeditor_page_type>
</layout>
