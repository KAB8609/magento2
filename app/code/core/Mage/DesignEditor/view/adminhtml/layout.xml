<layout>
    <adminhtml_system_design_editor_index>
        <reference name="content">
            <block type="Mage_DesignEditor_Block_Adminhtml_Theme_Selector_Tabs" name="theme_selector_tabs">
                <action method="addTab"><name>available_themes</name><block>Mage_DesignEditor_Block_Adminhtml_Theme_Selector_Tab_Available</block></action>
                <action method="addTab"><name>customizations</name><block>Mage_DesignEditor_Block_Adminhtml_Theme_Selector_Tab_Customizations</block></action>
            </block>
        </reference>
    </adminhtml_system_design_editor_index>

    <adminhtml_system_design_editor_firstentrance>
        <reference name="content">
            <block type="Mage_Backend_Block_Template" name="firstentrance_selector" template="Mage_DesignEditor::theme/selector/firstEntrance.phtml">
                <block type="Mage_DesignEditor_Block_Adminhtml_Theme_Selector_Tab_Available" name="available_themes"/>
            </block>
        </reference>
    </adminhtml_system_design_editor_firstentrance>

    <adminhtml_system_design_editor_availablethemes>
        <container name="root" label="Root" output="1">
            <block type="Mage_DesignEditor_Block_Adminhtml_Theme_Selector_Tab_Available" name="available_themes"/>
        </container>
    </adminhtml_system_design_editor_availablethemes>

    <adminhtml_system_design_editor_exit>
        <reference name="content">
            <block type="Mage_Adminhtml_Block_Template" name="design_editor_exit" as="exit" template="Mage_DesignEditor::exit.phtml"/>
        </reference>
    </adminhtml_system_design_editor_exit>
</layout>
