<config>
    <widgets>
        <new_products translate="name description">
            <name>New Products</name>
            <description>Widget shows for customer products from catalog that are marked as new </description>
            <type>catalog/product_widget_new</type>
            <parameters>
                <products_count translate="label">
                    <required />
                    <visible />
                    <value>1</value>
                    <label>Product's Number to display</label>
                    <type>text</type>
                </products_count>
                <template>
                    <required />
                    <visible />
                    <value>catalog/product/new.phtml</value>
                    <label>Template</label>
                    <type>text</type>
                </template>
            </parameters>
        </new_products>
    </widgets>
</config>
