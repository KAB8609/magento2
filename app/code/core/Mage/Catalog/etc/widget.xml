<config>
    <widgets>
        <new_products translate="name description">
            <name>New Products</name>
            <description>Widget shows for customer products from catalog that are marked as new </description>
            <type>catalog/product_widget_new</type>
            <parameters>
                <products_count translate="label">
                    <required />
                    <visible />
                    <value>1</value>
                    <label>Product's Number to display</label>
                    <type>text</type>
                </products_count>
                <template>
                    <required />
                    <visible />
                    <value>catalog/product/new.phtml</value>
                    <label>Template</label>
                    <type>text</type>
                </template>
            </parameters>
        </new_products>

        <catalog_product_link translate="name description">
            <name>Product Link</name>
            <description>Widget generates link to specified product</description>
            <type>catalog/product_widget_link</type>
            <parameters>
                <id_path translate="label">
                    <visible />
                    <required />
                    <label>Product</label>
                    <type>
                        <element_type>label</element_type>
                        <helper>adminhtml/catalog_product_widget_chooser</helper>
                    </type>
                </id_path>
                <anchor_text translate="label">
                    <visible />
                    <required />
                    <label>Anchor Text</label>
                    <type>text</type>
                </anchor_text>
                <title translate="label">
                    <visible />
                    <label>Anchor Title</label>
                    <type>text</type>
                </title>
            </parameters>
        </catalog_product_link>

        <catalog_category_link translate="name description">
            <name>Category Link</name>
            <description>Widget generates link to specified category</description>
            <type>catalog/category_widget_link</type>
            <parameters>
                <id_path translate="label">
                    <visible />
                    <required />
                    <label>Category</label>
                    <type>
                        <element_type>label</element_type>
                        <helper>adminhtml/catalog_category_widget_chooser</helper>
                    </type>
                </id_path>
                <anchor_text translate="label">
                    <visible />
                    <required />
                    <label>Anchor Text</label>
                    <type>text</type>
                </anchor_text>
                <title translate="label">
                    <visible />
                    <label>Anchor Title</label>
                    <type>text</type>
                </title>
            </parameters>
        </catalog_category_link>
    </widgets>
</config>
