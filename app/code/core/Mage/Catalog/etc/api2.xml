<config>
    <api2>
        <resource_groups>
            <catalog translate="title" module="api2">
                <title>Catalog</title>
                <sort_order>30</sort_order>
                <children>
                    <catalog_product translate="title" module="api2">
                        <title>Product</title>
                        <sort_order>50</sort_order>
                    </catalog_product>
                </children>
            </catalog>
        </resource_groups>
        <resources>
            <products>
                <group>catalog_product</group>
                <type>products</type>
                <model>catalog/api2_products</model>
                <working_model>catalog/product</working_model>
                <title>Catalog Products</title>
                <sort_order>10</sort_order>
                <privileges>
                    <!-- For collection only CREATE and retrieve -->
                    <create>1</create>
                    <retrieve>1</retrieve>
                </privileges>
                <routes>
                    <route_main>
                        <mask>/products</mask>
                    </route_main>
                </routes>
                <instance>product</instance>
                <versions>1</versions>
                <subresources>
                    <products_grouped>
                        <name>products_grouped</name>
                        <request_param_name>products_grouped</request_param_name>
                        <type>collection</type>
                        <create_resource_name>products</create_resource_name>
                        <id_param_name>simple_product_id</id_param_name>
                        <parent_resource_id_field_name>id</parent_resource_id_field_name>
                    </products_grouped>
                </subresources>
            </products>
            <product>
                <group>catalog_product</group>
                <type>product</type>
                <model>catalog/api2_product</model>
                <working_model>catalog/product</working_model>
                <title>Catalog Product</title>
                <sort_order>20</sort_order>
                <privileges>
                    <retrieve>1</retrieve>
                    <update>1</update>
                    <delete>1</delete>
                </privileges>
                <attributes>
                    <product_id>Product ID</product_id>
                    <sku>SKU</sku>
                    <type>Product Type</type>
                    <set>Attribute Set</set>
                    <store>Store</store>
                    <stock_data>Product Inventory</stock_data>
                    <use_config_gift_message_available>Use Config Settings for Allow Gift Message</use_config_gift_message_available>
                    <use_config_gift_wrapping_available>Use Config Settings for Allow Gift Wrapping</use_config_gift_wrapping_available>
                </attributes>
                <routes>
                    <route_main>
                        <mask>/products/:id</mask>
                    </route_main>
                    <route_with_store>
                        <mask>/products/:id/store/:store</mask>
                    </route_with_store>
                </routes>
                <versions>1</versions>
                <collection>products</collection>
            </product>
            <products_grouped>
                <group>catalog_product</group>
                <type>products_grouped</type>
                <model>catalog/api2_products_grouped</model>
                <working_model>catalog/product</working_model>
                <title>Grouped Products</title>
                <sort_order>30</sort_order>
                <privileges>
                    <!-- For collection only CREATE and retrieve -->
                    <create>1</create>
                    <retrieve>1</retrieve>
                </privileges>
                <attributes>
                    <simple_product_id>Simple Product ID</simple_product_id>
                    <qty>Default Quantity</qty>
                    <position>Position</position>
                </attributes>
                <routes>
                    <route_main>
                        <mask>/products/grouped/:id</mask>
                    </route_main>
                </routes>
                <versions>1</versions>
            </products_grouped>
        </resources>
    </api2>
</config>
