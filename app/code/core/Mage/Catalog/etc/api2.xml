<config>
    <api2>
        <resource_groups>
            <catalog translate="title" module="api2">
                <title>Catalog</title>
                <sort_order>30</sort_order>
                <children>
                    <catalog_category translate="title" module="api2">
                        <title>Category</title>
                        <sort_order>30</sort_order>
                    </catalog_category>
                    <catalog_product translate="title" module="api2">
                        <title>Product</title>
                        <sort_order>50</sort_order>
                    </catalog_product>
                </children>
            </catalog>
        </resource_groups>
        <resources>
            <products translate="title" module="api2">
                <group>catalog_product</group>
                <!-- Resource ID -->
                <type>products</type>
                <!-- Resource model which process data -->
                <model>catalog/api2_products</model>
                <title>Products</title>
                <sort_order>20</sort_order>
                <privileges>
                    <!-- For collection only CREATE and READ-->
                    <create>1</create>
                    <read>1</read>
                </privileges>
                <routes>
                    <route_main>
                        <mask>/products</mask>
                    </route_main>
                </routes>
            </products>
            <product translate="title" module="api2">
                <group>catalog_product</group>
                <type>product</type>
                <model>catalog/api2_product</model>
                <title>Product</title>
                <sort_order>10</sort_order>
                <privileges>
                    <create>1</create>
                    <read>1</read>
                    <update>1</update>
                    <delete>1</delete>
                </privileges>
                <routes>
                    <route_main>
                        <mask>/products/:id</mask>
                    </route_main>
                </routes>
            </product>
            <categories translate="title" module="api2">
                <group>catalog_category</group>
                <!-- Resource ID -->
                <type>categories</type>
                <!-- Resource model which process data -->
                <model>catalog/api2_categories</model>
                <title>Categories</title>
                <privileges>
                    <!-- For collection only CREATE and READ -->
                    <create>1</create>
                    <read>1</read>
                </privileges>
                <routes>
                    <route_main>
                        <mask>/categories</mask>
                    </route_main>
                </routes>
            </categories>
            <category translate="title" module="api2">
                <group>catalog_category</group>
                <type>category</type>
                <model>catalog/api2_category</model>
                <title>Category</title>
                <privileges>
                    <create>1</create>
                    <read>1</read>
                    <update>1</update>
                    <delete>1</delete>
                </privileges>
                <routes>
                    <route_main>
                        <mask>/categories/:id</mask>
                    </route_main>
                </routes>
            </category>
        </resources>
    </api2>
</config>
