<config>
   <sections>
        <catalog translate="label">
            <label>Catalog</label>
            <frontend_type>text</frontend_type>
            <sort_order>40</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <category translate="label">
                    <label>Category</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <root_id translate="label">
                            <label>Root category</label>
                            <frontend_type>select</frontend_type>
                            <frontend_class>required-entry</frontend_class>
                            <backend_model>adminhtml/system_config_backend_category</backend_model>
                            <source_model>adminhtml/system_config_source_category</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <default_value><![CDATA[3]]></default_value>
                        </root_id>
                    </fields>
                </category>
                <frontend translate="label">
                    <label>Frontend</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <list_mode translate="label">
                            <label>List Mode</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_catalog_listMode</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <default_value><![CDATA[grid-list]]></default_value>
                        </list_mode>
                    </fields>
                </frontend>
                <images translate="label">
                    <label>Images Configuration</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>3</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <category_upload_path translate="label">
                            <label>Category upload directory</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <default_value><![CDATA[{{root_dir}}/media/catalog/category/]]></default_value>
                        </category_upload_path>
                        <category_upload_url translate="label">
                            <label>Category upload url</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <default_value><![CDATA[/media/catalog/category/]]></default_value>
                        </category_upload_url>
                        <product_upload_path translate="label">
                            <label>Product upload directory</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <default_value><![CDATA[{{root_dir}}/media/catalog/product/]]></default_value>
                        </product_upload_path>
                        <product_upload_url translate="label">
                            <label>Product upload url</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <default_value><![CDATA[/media/catalog/product/]]></default_value>
                        </product_upload_url>
                    </fields>
                </images>
                <product translate="label">
                    <label>Product options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>5</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <default_tax_group translate="label">
                            <label>Default tax class</label>
                            <frontend_type>select</frontend_type>
                            <source_model>tax/class_source_product</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <default_value><![CDATA[2]]></default_value>
                        </default_tax_group>
                    </fields>
                </product>
            </groups>
        </catalog>
        <sendfriend translate="label">
            <label>Email to a Friend</label>
            <frontend_type>text</frontend_type>
            <sort_order>31</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <email translate="label">
                    <label>Email templates</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <template translate="label">
                            <label>Select email template</label>
                            <frontend_type>select</frontend_type>
                            <source_model>catalog/sendToFriend</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <default_value><![CDATA[10]]></default_value>
                        </template>
                    </fields>
                </email>
            </groups>
        </sendfriend>
    </sections>
</config>