<config>
   <modules>
      <Mage_Rss>
         <version>0.8.0</version>
         <depends>
            <Mage_Catalog />
            <Mage_Sales />
         </depends>
      </Mage_Rss>
   </modules>
   <global>
      <models>
         <rss>
            <class>Mage_Rss_Model</class>
         </rss>
      </models>
      <resources>
         <rss_setup>
            <setup>
               <module>Mage_Rss</module>
            </setup>
            <connection>
               <use>core_setup</use>
            </connection>
         </rss_setup>
         <rss_write>
            <connection>
               <use>core_write</use>
            </connection>
         </rss_write>
         <rss_read>
            <connection>
               <use>core_read</use>
            </connection>
         </rss_read>
      </resources>
      <blocks>
         <rss><class>Mage_Rss_Block</class></rss>
      </blocks>
   </global>

   <frontend>
      <routers>
         <rss>
            <use>standard</use>
            <args>
               <module>Mage_Rss</module>
               <frontName>rss</frontName>
            </args>
         </rss>
      </routers>
      <layout>
              <updates>
                  <rss>
                      <file>rss.xml</file>
                  </rss>
              </updates>
          </layout>
   </frontend>
</config>
