<?php
    $columns = $this->getColumns();
?>
<table class="data-table" id="wishlist-table">
    <thead>
        <tr>
            <?php foreach ($columns as $column): ?>
                <th><?php echo $column->getTitle();?></th>
            <?php endforeach; ?>
        </tr>
    </thead>
    <tbody>
        <?php if (count($this->getItems())): ?>
            <?php foreach ($this->getItems() as $item): ?>
                <tr id="item_<?php echo $item->getId();?>">
                    <?php foreach ($columns as $column): ?>
                        <td><?php $column->setItem($item); echo $column->toHtml($item);?></td>
                    <?php endforeach; ?>
                </tr>
            <?php endforeach ?>
        <?php else: ?>
            <td colspan="<?php echo count($columns);?>" class="wishlist-empty"><?php echo $this->__('This Wishlist has no Items');?></td>
        <?php endif; ?>
    </tbody>
</table>
<?php foreach ($columns as $column): ?>
    <?php echo $column->getAdditionalHtml();?>
<?php endforeach; ?>
<script type="text/javascript">
    (function($) {
        $('#wishlist-table').decorate('table');

        $('#select-all').on('click', function() {
            if ($(this).is(':checked')) {
                $(this).parents('#wishlist-table').find('input:checkbox').attr('checked', true);
            } else {
                $(this).parents('#wishlist-table').find('input:checkbox').removeAttr('checked');
            }
        });
        var checkboxCount = $('#select-all').parents('#wishlist-table').find('input:checkbox:not(#select-all)').length;
        $('#select-all').parents('#wishlist-table').on('click', 'input:checkbox:not(#select-all)', function() {
            var checkedCount = $('#select-all').parents('#wishlist-table').find('input:checkbox:checked:not(#select-all)').length;
            if (checkboxCount === checkedCount) {
                $('#select-all').attr('checked', true);
            } else {
                $('#select-all').removeAttr('checked');
            }
        });
    })(jQuery);
</script>