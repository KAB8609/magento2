<?xml version="1.0"?>
<config>
   <modules>
      <Mage_Payment>
         <version>0.1.0</version>
      </Mage_Payment>
   </modules>

   <global>
      <models>
         <payment>
            <class>Mage_Payment_Model</class>
         </payment>
      </models>
      
      <block>
        <groups>
            <payment>
                <class>Mage_Payment_Block</class>
            </payment>
        </groups>
      </block>

      <payment>
        <methods>
          <checkmo>
            <class>Mage_Payment_Model_Checkmo</class>
          </checkmo>
          <ccsave>
            <class>Mage_Payment_Model_Ccsave</class>
          </ccsave>
          <purchaseorder>
            <class>Mage_Payment_Model_Purchaseorder</class>
          </purchaseorder>
        </methods>
      </payment>
   </global>

</config>
