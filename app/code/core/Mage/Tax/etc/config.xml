<config>
    <modules>
        <Mage_Tax>
            <version>0.6.1</version>
            <depends>
                <Mage_Catalog />
                <Mage_Customer />
            </depends>
        </Mage_Tax>
    </modules>
    <global>
        <models>
            <tax>
                <class>Mage_Tax_Model</class>
                <resourceModel>tax_mysql4</resourceModel>
            </tax>
            <tax_mysql4>
                <class>Mage_Tax_Model_Mysql4</class>
                <entities>
                    <tax_class>
                        <table>tax_class</table>
                    </tax_class>
                    <tax_class_group>
                        <table>tax_class_group</table>
                    </tax_class_group>
                    <tax_rate>
                        <table>tax_rate</table>
                    </tax_rate>
                    <tax_rate_type>
                        <table>tax_rate_type</table>
                    </tax_rate_type>
                    <tax_rate_data>
                        <table>tax_rate_data</table>
                    </tax_rate_data>
                    <tax_rule>
                        <table>tax_rule</table>
                    </tax_rule>
                </entities>
            </tax_mysql4>
        </models>
        <resources>
            <tax_setup>
                <setup>
                    <module>Mage_Tax</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </tax_setup>
            <tax_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </tax_write>
            <tax_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </tax_read>
        </resources>
    </global>
    <adminhtml>
        <menu>
            <sales>
                <children>
                    <tax>
                        <title>Tax</title>
                        <children>
                            <rules>
                                <title>Manage Tax Rules</title>
                                <action>*/tax_rule</action>
                            </rules>
                            <rates>
                                <title>Manage Tax Rates</title>
                                <action>*/tax_rate</action>
                            </rates>
                            <import_export>
                                <title>Import / Export Tax Rates</title>
                                <action>*/tax_rate/importExport</action>
                            </import_export>
                            <classes_customer>
                                <title>Customer Tax Classes</title>
                                <action>*/tax_class_customer</action>
                            </classes_customer>
                            <classes_product>
                                <title>Product Tax Classes</title>
                                <action>*/tax_class_product</action>
                            </classes_product>
                        </children>
                    </tax>
                </children>
            </sales>
        </menu>
    </adminhtml>
</config>
