<config>
    <modules>
        <Mage_Widget>
            <version>1.6.0.0</version>
        </Mage_Widget>
    </modules>
    <global>
        <resources>
            <widget_setup>
                <setup>
                    <module>Mage_Widget</module>
                </setup>
            </widget_setup>
        </resources>
        <cms>
            <page>
                <tempate_filter>Mage_Widget_Model_Template_Filter</tempate_filter>
            </page>
            <block>
                <tempate_filter>Mage_Widget_Model_Template_Filter</tempate_filter>
            </block>
        </cms>
        <widget>
            <related_cache_types>
                <block_html/>
                <layout/>
            </related_cache_types>
        </widget>
    </global>
    <frontend>
        <layout>
            <updates>
                <widget module="Mage_Widget">
                    <file>layout.xml</file>
                </widget>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <widget before="Mage_Adminhtml">Mage_Widget_Adminhtml</widget>
                    </modules>
                </args>
            </adminhtml>
        </routers>
        <translate>
            <modules>
                <Mage_Widget>
                    <files>
                        <default>Mage_Widget.csv</default>
                    </files>
                </Mage_Widget>
            </modules>
        </translate>
        <layout>
            <updates>
                <widget module="Mage_Widget">
                    <file>layout.xml</file>
                </widget>
            </updates>
        </layout>
        <events>
            <cms_wysiwyg_config_prepare>
                <observers>
                    <widget_observer>
                        <class>Mage_Widget_Model_Observer</class>
                        <method>prepareWidgetsPluginConfig</method>
                    </widget_observer>
                </observers>
            </cms_wysiwyg_config_prepare>
        </events>
    </adminhtml>
</config>
