<config>
    <modules>
        <Mage_Newsletter>
            <version>0.6.0</version>
            <depends>
                <Mage_Core />
                <Mage_Customer />
                <Mage_Eav />
            </depends>
        </Mage_Newsletter>
    </modules>
    <global>
        <block>
            <groups><newsletter><class>Mage_Newsletter_Block</class></newsletter></groups>
        </block>
        <models>
            <newsletter>
                <class>Mage_Newsletter_Model</class>
                <resourceModel>newsletter_mysql4</resourceModel>
            </newsletter>
            <newsletter_mysql4>
                <class>Mage_Newsletter_Model_Mysql4</class>
                <entities>
                    <subscriber>
                        <table>newsletter_subscriber</table>
                    </subscriber>
                    <queue>
                        <table>newsletter_queue</table>
                    </queue>
                    <queue_link>
                        <table>newsletter_queue_link</table>
                    </queue_link>
                    <queue_store_link>
                        <table>newsletter_queue_store_link</table>
                    </queue_store_link>
                    <template>
                        <table>newsletter_template</table>
                    </template>
                    <problem>
                        <table>newsletter_problem</table>
                    </problem>
                </entities>
            </newsletter_mysql4>
        </models>
        <resources>
            <newsletter_setup>
                <setup>
                    <module>Mage_Newsletter</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </newsletter_setup>
            <newsletter_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </newsletter_write>
            <newsletter_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </newsletter_read>
        </resources>
    </global>
    <frontend>
        <layouts>
            <default>
                <updates>
                    <newsletter>
                        <file>newsletter/initLayout.xml</file>
                    </newsletter>
                </updates>
            </default>
            <customer_account>
                <updates>
                    <newsletter_account>
                        <file>newsletter/account.xml</file>
                    </newsletter_account>
                </updates>
            </customer_account>
        </layouts>
        <routers>
            <newsletter>
                <use>standard</use>
                <args>
                    <module>Mage_Newsletter</module>
                    <frontName>newsletter</frontName>
                </args>
            </newsletter>
        </routers>
    </frontend>
</config>