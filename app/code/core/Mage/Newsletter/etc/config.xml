<?xml version="1.0"?>
<config>
    <modules>
        <Mage_Newsletter>
            <version>0.1.1</version>
            <depends>
                <Mage_Core />
                <Mage_Customer />
            </depends>
        </Mage_Newsletter>
    </modules>
    <global>
        <models>
            <newsletter>
                <class>Mage_Newsletter_Model</class>
                <resourceModel>newsletter_mysql4</resourceModel>
            </newsletter>
            <newsletter_mysql4>
                <class>Mage_Newsletter_Model_Mysql4</class>
                <entities>
                    <subscriber>
                        <table>newsletter_customer</table>
                    </subscriber>
                    <queue>
                        <table>newsletter_queue</table>
                    </queue>
                    <queue_link>
                        <table>newsletter_queue_link</table>
                    </queue_link>
                    <template>
                        <table>newsletter_template</table>
                    </template>
                    <problem>
                        <table>newsletter_problem</table>
                    </problem>
                </entities>
            </newsletter_mysql4>
        </models>
        <resources>
            <newsletter_setup>
                <setup>
                    <module>Mage_Newsletter</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </newsletter_setup>
            <newsletter_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </newsletter_write>
            <newsletter_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </newsletter_read>
        </resources>
    </global>
</config>