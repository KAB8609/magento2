<config>
    <modules>
        <Mage_CustomerAlert>
            <version>0.1.2</version>
            <depends>
                <Mage_Catalog />
                <Mage_Customer />
            </depends>
        </Mage_CustomerAlert>
    </modules>
    <global>
        <models>
            <customeralert>
                <class>Mage_CustomerAlert_Model</class>
                <resourceModel>customeralert_mysql4</resourceModel>
            </customeralert>
            <customeralert_mysql4>
                <class>Mage_CustomerAlert_Model_Mysql4</class>
                <entities>
                    <alert>
                        <table>customer_product_alert</table>
                    </alert>
                    <check>
                        <table>customer_product_alert_check</table>
                    </check>
                </entities>
            </customeralert_mysql4>
        </models>
        <resources>
            <customeralert_setup>
                <setup>
                    <module>Mage_CustomerAlert</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </customeralert_setup>
            <customeralert_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </customeralert_write>
            <customeralert_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </customeralert_read>
        </resources>
        <blocks>
            <customeralert><class>Mage_CustomerAlert_Block</class></customeralert>
        </blocks>
        <customeralert>
            <types>
                <special_price translate="label">
                    <model>customeralert/type_specialPrice</model>
                    <label>Get an alert sent to them when a product receives a special price.</label>
                </special_price>
                <price_is_lowered translate="label">
                    <model>customeralert/type_priceLowered</model>
                    <label>Get an alerts sent to them when a productâ€™s price is lowered.</label>
                </price_is_lowered>
                <product_back_stock translate="label">
                    <model>customeralert/type_backStock</model>
                    <label>The customer can sign up to get an alert when an out of stock product comes back into stock.</label>
                </product_back_stock>
            </types>
        </customeralert>
    </global>
    <adminhtml>
        <events>
            <catalog_product_save_before>
                <observers>
                    <customeralert_observer_before>
                        <type>singleton</type>
                        <class>customeralert/observer</class>
                        <method>catalogProductSaveBefore</method>
                    </customeralert_observer_before>
                </observers>
            </catalog_product_save_before>
            <catalog_product_save_after>
                <observers>
                    <customeralert_observer_after>
                        <type>singleton</type>
                        <class>customeralert/observer</class>
                        <method>catalogProductSaveAfter</method>
                    </customeralert_observer_after>
                </observers>
            </catalog_product_save_after>
        </events>
    </adminhtml>
    <frontend>
        <secure_url>
            <sales>/customeralert/</sales>
        </secure_url>
        <routers>
            <sales>
                <use>standard</use>
                <args>
                    <module>Mage_CustomerAlert</module>
                    <frontName>customeralert</frontName>
                </args>
            </sales>
        </routers>
        <translate>
            <modules>
                <Mage_CustomerAlert>
                    <files>
                        <default>Mage_CustomerAlert.csv</default>
                    </files>
                </Mage_CustomerAlert>
            </modules>
        </translate>
    </frontend>
</config>