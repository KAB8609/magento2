<config>
    <modules>
        <Mage_CustomerAlert>
            <version>0.1.7</version>
            <depends>
                <Mage_Catalog />
                <Mage_Customer />
            </depends>
        </Mage_CustomerAlert>
    </modules>
    <global>
        <models>
            <customeralert>
                <class>Mage_CustomerAlert_Model</class>
                <resourceModel>customeralert_mysql4</resourceModel>
            </customeralert>
            <customeralert_mysql4>
                <class>Mage_CustomerAlert_Model_Mysql4</class>
                <entities>
                    <alert>
                        <table>customer_product_alert</table>
                    </alert>
                    <check>
                        <table>customer_product_alert_check</table>
                    </check>
                    <queue>
                        <table>customer_product_alert_queue</table>
                    </queue>
                    <queue_link>
                        <table>customer_product_alert_queue_link</table>
                    </queue_link>
                </entities>
            </customeralert_mysql4>
        </models>
		<helpers>
            <customeralert>
                <class>Mage_CustomerAlert_Helper</class>
            </customeralert>
        </helpers>
        <resources>
            <customeralert_setup>
                <setup>
                    <module>Mage_CustomerAlert</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </customeralert_setup>
            <customeralert_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </customeralert_write>
            <customeralert_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </customeralert_read>
        </resources>
        <blocks>
            <customeralert><class>Mage_CustomerAlert_Block</class></customeralert>
        </blocks>
        <customeralert>
            <types>
                <price_is_changed translate="label title">
                    <model>customeralert/type_priceChanged</model>
                    <label>Sign up for an alert when the product price changes.</label>
                    <default_email_template>Product alert for changed price</default_email_template>
                    <template>priceIsChanged</template>
                    <title>price changed</title>
                </price_is_changed>
                <product_back_stock translate="label title">
                    <model>customeralert/type_backStock</model>
                    <label>Sign up to alert when product comes back in stock.</label>
                    <default_email_template>Product alert for back in stock</default_email_template>
                    <template>backInStock</template>
                    <title>back in stock</title>
                </product_back_stock>
            </types>
        </customeralert>
        <events>
            <cataloginventory_stock_item_save_before>
                <observers>
                    <customeralert_observer_before>
                        <type>singleton</type>
                        <class>customeralert/observer</class>
                        <method>catalogInventorySaveBefore</method>
                    </customeralert_observer_before>
                </observers>
            </cataloginventory_stock_item_save_before>
        </events>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <Mage_CustomerAlert>
                    <files>
                        <default>Mage_CustomerAlert.csv</default>
                    </files>
                </Mage_CustomerAlert>
            </modules>
        </translate>
        <menu>
             <customer_communication translate="title" module="customeralert">
                <title>Customer Communication</title>
                <sort_order>70</sort_order>
                <children>
                     <alert translate="title" module="customeralert">
                        <title>Product Alerts</title>
                        <children>
                           <!--  <template>
                                <title>Alerts Templates</title>
                                <action>*/alert_template/</action>
                                <resource>admin/alert/template</resource>
                            </template>
                            -->
                            <queue translate="title" module="customeralert">
                                <title>Alerts Queue</title>
                                <action>*/alert_queue/</action>
                                <resource>admin/alert/queue</resource>
                            </queue>
                            <!--  <problem>
                                <title>Newsletter Problem Reports</title>
                                <action>*/newsletter_problem/</action>
                                <resource>admin/newsletter/problem</resource>
                            </problem>
                            -->
                        </children>
                     </alert>
                </children>
             </customer_communication>
        </menu>
        <events>
            <catalog_product_save_before>
                <observers>
                    <customeralert_observer_before>
                        <type>singleton</type>
                        <class>customeralert/observer</class>
                        <method>catalogProductSaveBefore</method>
                    </customeralert_observer_before>
                </observers>
            </catalog_product_save_before>
            <catalog_product_save_after>
                <observers>
                    <customeralert_observer_after>
                        <type>singleton</type>
                        <class>customeralert/observer</class>
                        <method>catalogProductSaveAfter</method>
                    </customeralert_observer_after>
                </observers>
            </catalog_product_save_after>
            <catalog_rule_save_before>
                <observers>
                    <customeralert_observer_before>
                        <type>singleton</type>
                        <class>customeralert/observer</class>
                        <method>catalogRuleSaveBefore</method>
                    </customeralert_observer_before>
                </observers>
            </catalog_rule_save_before>
        </events>
    </adminhtml>
    <frontend>
        <secure_url>
            <sales>/customeralert/</sales>
        </secure_url>
        <routers>
            <customeralert>
                <use>standard</use>
                <args>
                    <module>Mage_CustomerAlert</module>
                    <frontName>customeralert</frontName>
                </args>
            </customeralert>
        </routers>
        <translate>
            <modules>
                <Mage_CustomerAlert>
                    <files>
                        <default>Mage_CustomerAlert.csv</default>
                    </files>
                </Mage_CustomerAlert>
            </modules>
        </translate>
        <layout>
            <updates>
                <customeralert>
                    <file>customeralert.xml</file>
                </customeralert>
            </updates>
        </layout>
    </frontend>
</config>