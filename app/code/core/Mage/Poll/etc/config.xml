<?xml version="1.0"?>
<config>
    <modules>
        <Mage_Poll>
            <version>0.1.0</version>
        </Mage_Poll>
    </modules>
    <front>
        <routers>
            <poll>
                <args>
                    <module>Mage_Poll</module>
                    <frontName>poll</frontName>
                </args>
            </poll>
        </routers>
    </front> 
    <global>
        <models>
            <poll>
                <class>Mage_Poll_Model</class>
            </poll>
            <poll_resource>
                <class>Mage_Poll_Model_Mysql4</class>
                <entities>
                    <polls>
                        <table>polls</table>
                    </polls>
                    <poll_answers>
                        <table>poll_answers</table>
                    </poll_answers>
                    <poll_votes>
                        <table>poll_votes</table>
                    </poll_votes>
                </entities>
            </poll_resource>
        </models>
        <resources>
            <poll_setup>
                <setup>
                    <module>Mage_Poll</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </poll_setup>
            <poll_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </poll_write>
            <poll_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </poll_read>
        </resources>
    </global>
</config>
