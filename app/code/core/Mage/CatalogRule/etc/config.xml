<?xml version="1.0"?>
<config>
    <modules>
        <Mage_CatalogRule>
            <version>0.1.3</version>
        </Mage_CatalogRule>
    </modules>
    <global>
        <models>
            <catalogrule>
                <class>Mage_CatalogRule_Model</class>
                <resourceModel>catalogrule_mysql4</resourceModel>
            </catalogrule>
            <catalogrule_mysql4>
                <class>Mage_CatalogRule_Model_Mysql4</class>
                <entities>
                    <rule>
                        <table>catalogrule</table>
                    </rule>
                    <rule_product>
                        <table>catalogrule_product</table>
                    </rule_product>
                    <rule_product_price>
                        <table>catalogrule_product_price</table>
                    </rule_product_price>
                </entities>
            </catalogrule_mysql4>
        </models>
        <resources>
            <catalogrule_setup>
                <setup>
                    <module>Mage_CatalogRule</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </catalogrule_setup>
            <catalogrule_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </catalogrule_write>
            <catalogrule_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </catalogrule_read>
        </resources>
        <catalog>
          <product>
            <rule>
              <conditions>
                <combine>
                  <class>catalogrule/rule_condition_combine</class>
                </combine>
                <product>
                  <class>catalogrule/rule_condition_product</class>
                </product>
              </conditions>
              <actions>
                <product>
                  <class>catalogrule/rule_action_product</class>
                </product>
                <stop>
                  <class>rule/action_stop</class>
                </stop>
              </actions>
            </rule>
          </product>
        </catalog>
    </global>
    <crontab>
        <events>
            <crontab>
                <observers>
                    <catalogrule_daily>
                        <observer_class>Varien_Event_Observer_Cron</observer_class>
                        <type>singleton</type>
                        <class>catalogrule/observer</class>
                        <method>dailyCatalogUpdate</method>
                        <args><cron_expr>* * * * *</cron_expr></args>
                    </catalogrule_daily>
                </observers>
            </crontab>
        </events>
    </crontab>
</config>
