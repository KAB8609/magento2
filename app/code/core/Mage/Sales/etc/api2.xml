<config>
    <api2>
        <resource_groups>
            <sales translate="title" module="api2">
                <title>Sales</title>
                <sort_order>130</sort_order>
            </sales>
        </resource_groups>
        <resources>
            <orders>
                <group>sales</group>
                <model>sales/api2_orders</model>
                <working_model>sales/order</working_model>
                <title>Orders</title>
                <privileges>
                    <admin>
                        <retrieve>1</retrieve>
                    </admin>
                    <customer>
                        <retrieve>1</retrieve>
                    </customer>
                </privileges>
                <routes>
                    <route_main>
                        <mask>/orders</mask>
                    </route_main>
                </routes>
                <instance>order</instance>
                <versions>1</versions>
                <include_attributes>
                    <customer>
                        <read>
                            <entity_id>1</entity_id>
                            <increment_id>1</increment_id>
                            <created_at>1</created_at>
                            <status>1</status>
                            <shipping_description>1</shipping_description>
                            <base_currency_code>1</base_currency_code>
                            <store_currency_code>1</store_currency_code>
                            <subtotal>1</subtotal>
                            <subtotal_incl_tax>1</subtotal_incl_tax>
                            <discount_amount>1</discount_amount>
                            <base_grand_total>1</base_grand_total>
                            <grand_total>1</grand_total>
                            <shipping_amount>1</shipping_amount>
                            <shipping_incl_tax>1</shipping_incl_tax>
                            <tax_amount>1</tax_amount>
                        </read>
                    </customer>
                </include_attributes>
            </orders>
            <order>
                <group>sales</group>
                <model>sales/api2_order</model>
                <working_model>sales/order</working_model>
                <title>Order</title>
                <privileges>
                    <admin>
                        <retrieve>1</retrieve>
                    </admin>
                    <customer>
                        <retrieve>1</retrieve>
                    </customer>
                </privileges>
                <routes>
                    <route_main>
                        <mask>/orders/:id</mask>
                    </route_main>
                </routes>
                <collection>orders</collection>
                <versions>1</versions>
            </order>
            <order_items>
                <group>order</group>
                <sort_order>110</sort_order>
                <model>sales/api2_order_items</model>
                <working_model>sales/order_item</working_model>
                <title>Order Items</title>
                <privileges>
                    <admin>
                        <retrieve>1</retrieve>
                    </admin>
                    <customer>
                        <retrieve>1</retrieve>
                    </customer>
                </privileges>
                <routes>
                    <route_main>
                        <mask>/orders/:id/items</mask>
                    </route_main>
                </routes>
                <versions>1</versions>
            </order_items>
            <address>
                <group>sales</group>
                <model>sales/api2_order_address</model>
                <working_model>sales/order_address</working_model>
                <title>Order Address</title>
                <privileges>
                    <admin>
                        <retrieve>1</retrieve>
                    </admin>
                    <customer>
                        <retrieve>1</retrieve>
                    </customer>
                </privileges>
                <routes>
                    <route_main>
                        <mask>/orders/:order_id/addresses/:address_type</mask>
                    </route_main>
                </routes>
                <collection>addresses</collection>
                <versions>1</versions>
                <exclude_attributes>
                    <customer>
                        <read>
                            <entity_id />
                            <parent_id />
                            <customer_address_id />
                            <quote_address_id />
                            <region_id />
                            <customer_id />
                            <vat_id />
                            <vat_is_valid />
                            <vat_request_id />
                            <vat_request_date />
                            <vat_request_success />
                            <fax />
                            <giftregistry_item_id />
                            <!--
                            <address_type />
                            <region />
                            <postcode />
                            <company />
                            <street />
                            <city />
                            <email />
                            <telephone />
                            <country_id />
                            <firstname />
                            <middlename />
                            <lastname />
                            <prefix />
                            <suffix />
                            -->
                        </read>
                    </customer>
                </exclude_attributes>
            </address>
            <addresses>
                <group>sales</group>
                <model>sales/api2_order_addresses</model>
                <working_model>sales/order_address</working_model>
                <title>Order Addresses</title>
                <privileges>
                    <admin>
                        <retrieve>1</retrieve>
                    </admin>
                    <customer>
                        <retrieve>1</retrieve>
                    </customer>
                </privileges>
                <routes>
                    <route_main>
                        <mask>/orders/:order_id/addresses</mask>
                    </route_main>
                </routes>
                <instance>address</instance>
                <versions>1</versions>
            </addresses>
        </resources>
    </api2>
</config>
