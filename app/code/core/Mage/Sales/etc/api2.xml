<config>
    <api2>
        <resource_groups>
            <sales translate="title" module="api2">
                <title>Sales</title>
                <sort_order>130</sort_order>
            </sales>
        </resource_groups>
        <resources>
            <orders>
                <group>sales</group>
                <type>orders</type>
                <model>sales/api2_orders</model>
                <working_model>sales/order</working_model>
                <title>Orders</title>
                <privileges>
                    <admin>
                        <retrieve>1</retrieve>
                    </admin>
                    <customer>
                        <retrieve>1</retrieve>
                    </customer>
                </privileges>
                <routes>
                    <route_main>
                        <mask>/orders</mask>
                    </route_main>
                </routes>
                <instance>order</instance>
                <versions>1</versions>
            </orders>
            <order>
                <group>sales</group>
                <type>order</type>
                <model>sales/api2_order</model>
                <working_model>sales/order</working_model>
                <title>Order</title>
                <privileges>
                    <admin>
                        <retrieve>1</retrieve>
                    </admin>
                    <customer>
                        <retrieve>1</retrieve>
                    </customer>
                </privileges>
                <routes>
                    <route_main>
                        <mask>/orders/:id</mask>
                    </route_main>
                </routes>
                <collection>orders</collection>
                <versions>1</versions>
            </order>
            <order_items>
                <group>order</group>
                <sort_order>110</sort_order>
                <type>order_items</type>
                <model>sales/api2_order_items</model>
                <working_model>sales/order_item</working_model>
                <title>Order Items</title>
                <privileges>
                    <admin>
                        <retrieve>1</retrieve>
                    </admin>
                    <customer>
                        <retrieve>1</retrieve>
                    </customer>
                </privileges>
                <routes>
                    <route_main>
                        <mask>/orders/:id/items</mask>
                    </route_main>
                </routes>
                <instance>orders_item</instance>
                <versions>1</versions>
            </order_items>
            <address>
                <group>sales</group>
                <type>address</type>
                <model>sales/api2_order_address</model>
                <working_model>sales/order_address</working_model>
                <title>Order Address</title>
                <privileges>
                    <admin>
                        <retrieve>1</retrieve>
                    </admin>
                    <customer>
                        <retrieve>1</retrieve>
                    </customer>
                </privileges>
                <routes>
                    <route_main>
                        <mask>/orders/:order_id/addresses/:address_type</mask>
                    </route_main>
                </routes>
                <collection>addresses</collection>
                <versions>1</versions>
            </address>
            <addresses>
                <group>sales</group>
                <type>addresses</type>
                <model>sales/api2_order_addresses</model>
                <working_model>sales/order_address</working_model>
                <title>Order Addresses</title>
                <privileges>
                    <admin>
                        <retrieve>1</retrieve>
                    </admin>
                    <customer>
                        <retrieve>1</retrieve>
                    </customer>
                </privileges>
                <routes>
                    <route_main>
                        <mask>/orders/:order_id/addresses</mask>
                    </route_main>
                </routes>
                <instance>address</instance>
                <versions>1</versions>
            </addresses>
        </resources>
    </api2>
</config>
