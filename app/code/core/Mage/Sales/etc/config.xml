<?xml version="1.0"?>
<config>
   <modules>
      <Mage_Sales>
         <version>0.1.3</version>
         <depends>
            <Mage_Catalog />

            <Mage_Customer />
         </depends>

         <admin>
            <controller>
               <active>true</active>
            </controller>
         </admin>
      </Mage_Sales>
   </modules>

   <global>
      <models>
         <sales>
            <class>Mage_Sales_Model</class>
         </sales>
         
         <sales_resource>
            <class>Mage_Sales_Model_Mysql4</class>

            <entities>
               <quote>
                  <table>sales_quote</table>
               </quote>
               <quote_attribute>
                  <table>sales_quote_attribute</table>
               </quote_attribute>
               <quote_entity>
                  <table>sales_quote_entity</table>
               </quote_entity>
               
               <order>
                  <table>sales_order</table>
               </order>
               <order_attribute>
                  <table>sales_order_attribute</table>
               </order_attribute>
               <order_entity>
                  <table>sales_order_entity</table>
               </order_entity>
                              
               <invoice>
                  <table>sales_invoice</table>
               </invoice>
               <invoice_attribute>
                  <table>sales_invoice_attribute</table>
               </invoice_attribute>
               <invoice_entity>
                  <table>sales_invoice_entity</table>
               </invoice_entity>
               
            </entities>
         </sales_resource>
      </models>

      <resources>
         <sales_setup>
            <setup>
                <module>Mage_Sales</module>
            </setup>
            <connection><use>core_setup</use></connection>
         </sales_setup>

         <sales_write>
            <connection><use>core_write</use></connection>
         </sales_write>

         <sales_read>
            <connection><use>core_read</use></connection>
         </sales_read>
      </resources>

      <salesShippingRuleConditions>
         <dest_country>
            <class>Mage_Sales_Model_Shipping_Rule_Condition_Dest_Country</class>
         </dest_country>

         <dest_region>
            <class>Mage_Sales_Model_Shipping_Rule_Condition_Dest_Region</class>
         </dest_region>

         <dest_zip>
            <class>Mage_Sales_Model_Shipping_Rule_Condition_Dest_Zip</class>
         </dest_zip>

         <package_weight>
            <class>Mage_Sales_Model_Shipping_Rule_Condition_Package_Weight</class>
         </package_weight>

         <order_subtotal>
            <class>Mage_Sales_Model_Shipping_Rule_Condition_Order_Subtotal</class>
         </order_subtotal>

         <order_totalqty>
            <class>Mage_Sales_Model_Shipping_Rule_Condition_Order_Totalqty</class>
         </order_totalqty>
      </salesShippingRuleConditions>

      <salesShippingRuleActions>
         <vendor>
            <class>Mage_Sales_Model_Shipping_Rule_Action_Vendor</class>
         </vendor>

         <method>
            <class>Mage_Sales_Model_Shipping_Rule_Action_Method</class>
         </method>
      </salesShippingRuleActions>

      <salesPayment>
         <checkmo>
            <class>Mage_Sales_Model_Payment_Checkmo</class>
         </checkmo>

         <ccsave>
            <class>Mage_Sales_Model_Payment_Ccsave</class>
         </ccsave>

         <custbalance>
            <class>Mage_Sales_Model_Payment_Custbalance</class>
         </custbalance>

         <purchaseorder>
            <class>Mage_Sales_Model_Payment_Purchaseorder</class>
         </purchaseorder>

      </salesPayment>

      <salesDiscount>
         <coupon>
            <class>Mage_Sales_Model_Discount_Coupon</class>
         </coupon>
      </salesDiscount>

      <salesTax>
         <rule>
            <class>Mage_Sales_Model_Tax_Rule</class>
         </rule>
      </salesTax>
      
      <salesAttributes>
         <quote>
            <self>
                <customer_id><type>int</type></customer_id>
                <created_at><type>datetime</type></created_at>
                <updated_at><type>datetime</type></updated_at>
                <status><type>int</type></status>

                <weight><type>decimal</type></weight>
                <subtotal><type>decimal</type><class>Mage_Sales_Model_Quote_Attribute_Subtotal</class><sortOrder>10</sortOrder></subtotal>
                <discount><type>decimal</type><class>Mage_Sales_Model_Quote_Attribute_Discount</class><sortOrder>20</sortOrder></discount>
                <shipping><type>decimal</type><class>Mage_Sales_Model_Quote_Attribute_Shipping</class><sortOrder>30</sortOrder></shipping>
                <tax><type>decimal</type><class>Mage_Sales_Model_Quote_Attribute_Tax</class><sortOrder>40</sortOrder></tax>
                <grand_total><type>decimal</type><class>Mage_Sales_Model_Quote_Attribute_Grand</class><sortOrder>100</sortOrder></grand_total>
           </self>
           <address>
                <address_id><type>int</type></address_id>
                <firstname><type>varchar</type></firstname> 
                <lastname><type>varchar</type></lastname> 
                <company><type>varchar</type></company> 
                <street><type>text</type></street> 
                <city><type>varchar</type></city> 
                <region><type>varchar</type></region> 
                <region_id><type>int</type></region_id> 
                <postcode><type>varchar</type></postcode> 
                <country_id><type>int</type></country_id> 
                <telephone><type>varchar</type></telephone> 
                <fax><type>varchar</type></fax>
                
                <address_type><type>varchar</type></address_type>
                
                <subtotal><type>decimal</type></subtotal>
                <weight><type>decimal</type></weight>
                <shipping_method><type>varchar</type></shipping_method>
                <shipping_description><type>text</type></shipping_description>
                <shipping_price><type>decimal</type></shipping_price>
            </address>
            <item>
                <add_date><type>datetime</type></add_date>
                <product_id><type>int</type></product_id>
                <model><type>varchar</type></model>
                <image><type>text</type></image>
                <name><type>text</type></name>
                <weight><type>decimal</type></weight>

                <qty><type>decimal</type></qty>
                <price><type>decimal</type></price>
                <tier_price><type>decimal</type></tier_price>
                <discount><type>decimal</type></discount>
                <tax><type>decimal</type></tax>
                <cost><type>decimal</type></cost>
                <row_total><type>decimal</type></row_total>
                <row_weight><type>decimal</type></row_weight>
                
                <address_entity_id><type>int</type></address_entity_id>
            </item>
            <payment>
                <method><type>varchar</type></method>

                <po_number><type>varchar</type></po_number>
                
                <cc_type><type>varchar</type></cc_type>
                <cc_number><type>varchar</type></cc_number>
                <cc_owner><type>varchar</type></cc_owner>
                <cc_exp_month><type>int</type></cc_exp_month>
                <cc_exp_year><type>int</type></cc_exp_year>
                <cc_cvv2><type>int</type></cc_cvv2>
            </payment>
         </quote>
      </salesAttributes>
   </global>

   <admin>
      <acl>
         <resources>
            <sales>
               <orders />
            </sales>
         </resources>
      </acl>

      <layouts>
         <default>
            <updates>
               <sales>
                  <module>Mage_Sales</module>

                  <file>Admin/initLayout.xml</file>
               </sales>
            </updates>
         </default>
      </layouts>
   </admin>
</config>

