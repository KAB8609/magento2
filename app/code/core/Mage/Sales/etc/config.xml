<?xml version="1.0"?>
<config>
   <modules>
      <Mage_Sales>
         <version>0.1.1</version>
         <depends>
            <Mage_Catalog />

            <Mage_Customer />
         </depends>

         <admin>
            <controller>
               <active>true</active>
            </controller>
         </admin>
      </Mage_Sales>
   </modules>

   <global>
      <resourceModels>
         <sales>
            <class>Mage_Sales_Model_Mysql4</class>

            <entities>
               <quote>
                  <table>sales_quote</table>
               </quote>
               <quote_attribute>
                  <table>sales_quote_attribute</table>
               </quote_attribute>
               <quote_address>
                  <table>sales_quote_address</table>
               </quote_address>
               <quote_address>
                  <table>sales_quote_address_type</table>
               </quote_address>
               <quote_item>
                  <table>sales_quote_item</table>
               </quote_item>
               <quote_payment>
                  <table>sales_quote_payment</table>
               </quote_payment>
               
               <order>
                  <table>sales_order</table>
               </order>
               <order_attribute>
                  <table>sales_order_attribute</table>
               </order_attribute>
               <order_address>
                  <table>sales_order_address</table>
               </order_address>
               <order_address>
                  <table>sales_order_address_type</table>
               </order_address>
               <order_item>
                  <table>sales_order_item</table>
               </order_item>
               <order_item_attribute>
                  <table>sales_order_item_attribute</table>
               </order_item_attribute>
               <order_item_status>
                  <table>sales_order_item_status</table>
               </order_item_status>
               <order_status>
                  <table>sales_order_status</table>
               </order_status>
               <order_status_history>
                  <table>sales_order_status_history</table>
               </order_status_history>
               
            </entities>
         </sales>
      </resourceModels>

      <resources>
         <sales_setup>
            <setup>
                <module>Mage_Sales</module>
            </setup>
            <connection><use>core_setup</use></connection>
         </sales_setup>

         <sales_write>
            <connection><use>core_write</use></connection>
         </sales_write>

         <sales_read>
            <connection><use>core_read</use></connection>
         </sales_read>
      </resources>

      <salesShippingRuleConditions>
         <dest_country>
            <class>Mage_Sales_Shipping_Rule_Condition_Dest_Country</class>
         </dest_country>

         <dest_region>
            <class>Mage_Sales_Shipping_Rule_Condition_Dest_Region</class>
         </dest_region>

         <dest_zip>
            <class>Mage_Sales_Shipping_Rule_Condition_Dest_Zip</class>
         </dest_zip>

         <package_weight>
            <class>Mage_Sales_Shipping_Rule_Condition_Package_Weight</class>
         </package_weight>

         <order_subtotal>
            <class>Mage_Sales_Shipping_Rule_Condition_Order_Subtotal</class>
         </order_subtotal>

         <order_totalqty>
            <class>Mage_Sales_Shipping_Rule_Condition_Order_Totalqty</class>
         </order_totalqty>
      </salesShippingRuleConditions>

      <salesShippingRuleActions>
         <vendor>
            <class>Mage_Sales_Shipping_Rule_Action_Vendor</class>
         </vendor>

         <method>
            <class>Mage_Sales_Shipping_Rule_Action_Method</class>
         </method>
      </salesShippingRuleActions>

      <salesPayment>
         <checkmo>
            <class>Mage_Sales_Payment_Checkmo</class>
         </checkmo>

         <ccsave>
            <class>Mage_Sales_Payment_Ccsave</class>
         </ccsave>

         <custbalance>
            <class>Mage_Sales_Payment_Custbalance</class>
         </custbalance>
      </salesPayment>

      <salesDiscount>
         <coupon>
            <class>Mage_Sales_Discount_Coupon</class>
         </coupon>
      </salesDiscount>

      <salesTax>
         <rule>
            <class>Mage_Sales_Tax_Rule</class>
         </rule>
      </salesTax>
      
      <salesQuoteAttributes>
         <subtotal>
            <class>Mage_Sales_Quote_Total_Subtotal</class>

            <sortOrder>10</sortOrder>
         </subtotal>

         <discount>
            <class>Mage_Sales_Quote_Total_Discount</class>

            <sortOrder>20</sortOrder>
         </discount>

         <shipping>
            <class>Mage_Sales_Quote_Total_Shipping</class>

            <sortOrder>30</sortOrder>
         </shipping>

         <tax>
            <class>Mage_Sales_Quote_Total_Tax</class>

            <sortOrder>40</sortOrder>
         </tax>

         <grand>
            <class>Mage_Sales_Quote_Total_Grand</class>

            <sortOrder>100</sortOrder>
         </grand>
      </salesQuoteAttributes>
      
      
      <salesOrderAttributes>
         <subtotal>
            <class>Mage_Sales_Order_Total_Subtotal</class>

            <sortOrder>10</sortOrder>
         </subtotal>

         <discount>
            <class>Mage_Sales_Order_Total_Discount</class>

            <sortOrder>20</sortOrder>
         </discount>

         <shipping>
            <class>Mage_Sales_Order_Total_Shipping</class>

            <sortOrder>30</sortOrder>
         </shipping>

         <tax>
            <class>Mage_Sales_Order_Total_Tax</class>

            <sortOrder>40</sortOrder>
         </tax>

         <grand>
            <class>Mage_Sales_Order_Total_Grand</class>

            <sortOrder>100</sortOrder>
         </grand>
      </salesOrderAttributes>
      
   </global>

   <admin>
      <acl>
         <resources>
            <sales>
               <orders />
            </sales>
         </resources>
      </acl>

      <layouts>
         <default>
            <updates>
               <sales>
                  <module>Mage_Sales</module>

                  <file>Admin/initLayout.xml</file>
               </sales>
            </updates>
         </default>
      </layouts>
   </admin>
</config>

