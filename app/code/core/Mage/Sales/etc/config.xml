<?xml version="1.0"?>
<config>
    <modules>
        <Mage_Sales>
            
            <version>0.1.1</version>
            <depends>
                <Mage_Catalog/>
                <Mage_Customer/>
            </depends>

            <load>
                <all>
                    <resources>
                        <sales_setup>
                            <connection extends="//core_setup/connection"/>
                        </sales_setup>

                        <sales_write>
                            <connection extends="//core_write/connection"/>
                        </sales_write>

                        <sales_read>
                            <connection extends="//core_read/connection"/>
                        </sales_read>
                    </resources>
                    
                    <shipping>
                        <table><class>Mage_Sales_Shipping_Table</class></table>
                    </shipping>
                    
                    <payment>
                        <checkmo><class>Mage_Sales_Payment_Checkmo</class></checkmo>
                        <ccsave><class>Mage_Sales_Payment_Ccsave</class></ccsave>
                        <custbalance><class>Mage_Sales_Payment_Custbalance</class></custbalance>
                    </payment>
                    
                    <discount>
                        <coupon><class>Mage_Sales_Discount_Coupon</class></coupon>
                    </discount>
                    
                    <tax>
                        <rule><class>Mage_Sales_Tax_Rule</class></rule>
                    </tax>
                </all>
            
                <admin>
                    <controller>
                        <active>true</active>
                    </controller>
                    
                    <acl>
                        <resources>
                            <sales>
                                <orders/>
                            </sales>
                        </resources>
                    </acl>
                                        
                    <layouts>
                        <default><updates><sales><module>Mage_Sales</module><file>Admin/initLayout.xml</file></sales></updates></default>
                    </layouts>
                </admin>
            </load>
        </Mage_Sales>
    </modules>
    
    <global>
        <discount extends="/config/modules/*/load/all/discount"/>
        <shipping extends="/config/modules/*/load/all/shipping"/>
        <payment extends="/config/modules/*/load/all/payment"/>
        <tax extends="/config/modules/*/load/all/tax"/>
    </global>
</config>