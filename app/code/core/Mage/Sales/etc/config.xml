<config>
    <modules>
        <Mage_Sales>
            <version>0.7.0</version>
            <depends>
                <Mage_Catalog />
                <Mage_Customer />
            </depends>
        </Mage_Sales>
    </modules>
    <global>
        <models>
            <sales>
                <class>Mage_Sales_Model</class>
                <resourceModel>sales_entity</resourceModel>
            </sales>
            <sales_entity>
                <class>Mage_Sales_Model_Entity</class>
                <entities>
                    <quote>
                        <table>sales_quote_entity</table>
                    </quote>
                    <quote_temp>
                        <table>sales_quote_temp</table>
                    </quote_temp>
                    <order>
                        <table>sales_order_entity</table>
                    </order>
                    <invoice>
                        <table>sales_invoice_entity</table>
                    </invoice>
                    <order_status>
                        <table>sales_order_status</table>
                    </order_status>
                </entities>
            </sales_entity>
        </models>
        <resources>
            <sales_setup>
                <setup>
                    <module>Mage_Sales</module>
                    <class>Mage_Sales_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </sales_setup>
            <sales_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </sales_write>
            <sales_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </sales_read>
        </resources>
        <blocks>
            <sales><class>Mage_Sales_Block</class></sales>
        </blocks>
        <order>
            <status>
            </status>
        </order>
        <sales>
            <quote>
                <totals>
                    <subtotal>
                        <class>sales/quote_address_total_subtotal</class>
                        <before>grand_total</before>
                    </subtotal>
                    <discount>
                        <class>sales/quote_address_total_discount</class>
                        <after>subtotal</after>
                        <before>grand_total,shipping</before>
                    </discount>
                    <shipping>
                        <class>sales/quote_address_total_shipping</class>
                        <after>subtotal,discount</after>
                        <before>grand_total</before>
                    </shipping>
                    <tax>
                        <class>sales/quote_address_total_tax</class>
                        <after>subtotal</after>
                        <before>grand_total</before>
                    </tax>
                    <grand_total>
                        <class>sales/quote_address_total_grand</class>
                        <after>subtotal</after>
                    </grand_total>
                </totals>
            </quote>
        </sales>
    </global>

    <frontend>
        <secure_url>
            <sales>/sales/</sales>
        </secure_url>
        <routers>
            <sales>
                <use>standard</use>
                <args>
                    <module>Mage_Sales</module>
                    <frontName>sales</frontName>
                </args>
            </sales>
        </routers>
        <translate>
            <modules>
                <Mage_Sales>
                    <files>
                        <default>Mage_Sales.csv</default>
                    </files>
                </Mage_Sales>
            </modules>
        </translate>
          <layout>
              <updates>
                  <sales>
                      <file>sales.xml</file>
                  </sales>
              </updates>
          </layout>
    </frontend>
    <adminhtml>
        <menu>
        <!--
            <sales>
                <title>Sales</title>
                <sort_order>20</sort_order>
                <depends><module>Mage_Sales</module></depends>
                <children>
                    <order>
                        <title>Orders</title>
                        <action>*/sales_order</action>
                    </order>
                </children>
             </sales>
             -->
             <sales>
                <title>Sales</title>
                <sort_order>20</sort_order>
                <depends><module>Mage_Sales</module></depends>
                <children>
                    <order>
                        <title>Orders</title>
                        <action>*/sales_order</action>
                        <sort_order>20</sort_order>
                    </order>
                </children>
             </sales>
        </menu>
        <acl>
            <resources>
                <admin>
                    <children>
                        <sales>
                            <title>Sales</title>
                            <sort_order>20</sort_order>
                            <children>
                                <order>
                                    <title>Orders</title>
                                </order>
                            </children>
                        </sales>
                        <report>
                            <children>
                                <sales>
                                    <title>Sales Report</title>
                                </sales>
                            </children>
                        </report>
                    </children>
                </admin>
            </resources>  
        </acl>
        <translate>
            <modules>
                <Mage_Sales>
                    <files>
                        <default>Mage_Sales.csv</default>
                    </files>
                </Mage_Sales>
            </modules>
        </translate>
    </adminhtml>
    
</config>