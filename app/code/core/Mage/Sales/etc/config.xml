<?xml version="1.0" encoding="utf-8"?>
<config>
    <modules>
        <Mage_Sales>
            <version>0.5.10</version>
            <depends>
                <Mage_Catalog />
                <Mage_Customer />
            </depends>
        </Mage_Sales>
    </modules>
    <global>
        <models>
            <sales>
                <class>Mage_Sales_Model</class>
                <resourceModel>sales_entity</resourceModel>
            </sales>
            <sales_entity>
                <class>Mage_Sales_Model_Entity</class>
                <entities>
                    <quote>
                        <table>sales_quote_entity</table>
                    </quote>
                    <quote_temp>
                        <table>sales_quote_temp</table>
                    </quote_temp>
                    <order>
                        <table>sales_order_entity</table>
                    </order>
                    <invoice>
                        <table>sales_invoice_entity</table>
                    </invoice>
                    <order_status>
                        <table>sales_order_status</table>
                    </order_status>
                </entities>
            </sales_entity>
        </models>
        <resources>
            <sales_setup>
                <setup>
                    <module>Mage_Sales</module>
                    <class>Mage_Sales_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </sales_setup>
            <sales_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </sales_write>
            <sales_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </sales_read>
        </resources>
        <block>
            <groups><sales><class>Mage_Sales_Block</class></sales></groups>
        </block>
        <sales>
            <quote>
                <rule>
                    <conditions>
                        <combine>
                            <class>rule/condition_combine</class>
                        </combine>
                        <system>
                            <class>rule/condition_system</class>
                        </system>
                        <customer>
                            <class>sales/quote_rule_condition_customer</class>
                        </customer>
                        <quote>
                            <class>sales/quote_rule_condition_quote</class>
                        </quote>
                        <quote_item>
                            <class>sales/quote_rule_condition_quote_item</class>
                        </quote_item>
                        <quote_item_combine>
                            <class>sales/quote_rule_condition_quote_item_combine</class>
                        </quote_item_combine>
                        <quote_address>
                            <class>sales/quote_rule_condition_quote_address</class>
                        </quote_address>
                        <quote_address_combine>
                            <class>sales/quote_rule_condition_quote_address_combine</class>
                        </quote_address_combine>
                    </conditions>
                    <actions>
                        <quote>
                            <class>sales/quote_rule_action_quote</class>
                        </quote>
                        <quote_item>
                            <class>sales/quote_rule_action_quote_item</class>
                        </quote_item>
                        <quote_item_add>
                            <class>sales/quote_rule_action_quote_item_add</class>
                        </quote_item_add>
                        <quote_address>
                            <class>sales/quote_rule_action_quote_address</class>
                        </quote_address>
                        <stop>
                            <class>rule/action_stop</class>
                        </stop>
                    </actions>
                </rule>
            </quote>
        </sales>
    </global>
    <frontend>
        <layouts>
            <customer_account>
                <updates>
                    <sales_account>
                        <file>sales/account.xml</file>
                    </sales_account>
                </updates>
            </customer_account>
            <customer_dashboard>
                <updates>
                    <sales_dashboard>
                        <file>sales/dashboard.xml</file>
                    </sales_dashboard>
                </updates>
            </customer_dashboard>
        </layouts>
        <routers>
            <sales>
                <use>standard</use>
                <args>
                    <module>Mage_Sales</module>
                    <frontName>sales</frontName>
                </args>
            </sales>
        </routers>
    </frontend>
</config>