<?xml version="1.0"?>
<config>
    <modules>
        <Mage_Sales>
            
            <depends>
                <Mage_Catalog/>
                <Mage_Customer/>
            </depends>

            <load>
                <all>
                    <resources>
                        <sales_setup>
                            <connection extends="//core_setup/connection"/>
                            <version>0.1.1</version>
                        </sales_setup>

                        <sales_write>
                            <connection extends="//core_write/connection"/>
                        </sales_write>

                        <sales_read>
                            <connection extends="//core_read/connection"/>
                        </sales_read>
                    </resources>
                </all>

                <admin>
                    <events>
                        <action_preDispatch_default_index_index>
                            <resources>
                                <sales>
                                    <class>Mage_Core_Block</class>
                                    <method>loadJsonFile</method>
                                    <args>
                                        <file>Mage/Sales/Admin/initLayout.json</file>
                                    </args>
                                </sales>
                            </resources>
                        </action_preDispatch_default_index_index>
                    </events>
                </admin>
            </load>
        </Mage_Sales>
    </modules>
</config>