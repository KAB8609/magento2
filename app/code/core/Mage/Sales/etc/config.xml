<?xml version="1.0"?>
<config>
    <modules>
        <Mage_Sales>
            
            <version>0.1.1</version>
            <depends>
                <Mage_Catalog/>
                <Mage_Customer/>
            </depends>

            <load>
                <all>
                    <resources>
                        <sales_setup>
                            <connection use="core_setup"/>
                        </sales_setup>

                        <sales_write>
                            <connection use="core_write"/>
                        </sales_write>

                        <sales_read>
                            <connection use="core_read"/>
                        </sales_read>
                    </resources>
                    
                    <salesShipping>
                        <table><class>Mage_Sales_Shipping_Table</class></table>
                    </salesShipping>
                    
                    <salesPayment>
                        <checkmo><class>Mage_Sales_Payment_Checkmo</class></checkmo>
                        <ccsave><class>Mage_Sales_Payment_Ccsave</class></ccsave>
                        <custbalance><class>Mage_Sales_Payment_Custbalance</class></custbalance>
                    </salesPayment>
                    
                    <salesDiscount>
                        <coupon><class>Mage_Sales_Discount_Coupon</class></coupon>
                    </salesDiscount>
                    
                    <salesTax>
                        <rule><class>Mage_Sales_Tax_Rule</class></rule>
                    </salesTax>
                </all>
            
                <admin>
                    <controller>
                        <active>true</active>
                    </controller>
                    
                    <acl>
                        <resources>
                            <sales>
                                <orders/>
                            </sales>
                        </resources>
                    </acl>
                                        
                    <layouts>
                        <default><updates><sales><module>Mage_Sales</module><file>Admin/initLayout.xml</file></sales></updates></default>
                    </layouts>
                </admin>
            </load>
        </Mage_Sales>
    </modules>
    
    <global>
        <salesDiscount extends="/config/modules/*/load/all/salesDiscount"/>
        <salesShipping extends="/config/modules/*/load/all/salesShipping"/>
        <salesPayment extends="/config/modules/*/load/all/salesPayment"/>
        <salesTax extends="/config/modules/*/load/all/salesTax"/>
    </global>
</config>