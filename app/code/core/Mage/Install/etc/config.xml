<?xml version="1.0"?>
<config>
   <modules>
      <Mage_Install>
         <version>0.1.1</version>
         <depends>
            <Mage_Core />
         </depends>
      </Mage_Install>
   </modules>

   <global>
      <models>
         <install>
            <class>Mage_Install_Model</class>
            <resourceModel>install_mysql4</resourceModel>
         </install>

         <install_mysql4>
            <class>Mage_Install_Model_Mysql4</class>
         </install_mysql4>
      </models>

      <resources>
         <install_write>
            <connection><use>core_write</use></connection>
         </install_write>

         <install_read>
            <connection><use>core_read</use></connection>
         </install_read>
      </resources>
      
      <block>
	    <groups><install><class>Mage_Install_Block</class></install></groups>
      </block>
   </global>
   
   <front>
      <layouts>
         <install_wizard>
            <updates>
               <install>
                  <file>install/initLayout.xml</file>
               </install>
            </updates>
         </install_wizard>
      </layouts>

      <events>
         <action_preDispatch>
            <observers>
               <checkConnection>
                  <type>singleton</type>
                  <class>core/resource</class>
                  <method>checkDbConnection</method>
               </checkConnection>
            </observers>
         </action_preDispatch>
         <mageRunException>
            <observers>
               <checkConnection>
                  <type>singleton</type>
                  <class>core/resource</class>
                  <method>checkDbConnection</method>
               </checkConnection>
            </observers>
         </mageRunException>
      </events>

      <routers>
         <install>
            <use>standard</use>
            <args>
                <module>Mage_Install</module>
                <frontName>install</frontName>
            </args>
         </install>
      </routers>
   </front>
</config>