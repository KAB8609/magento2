<?xml version="1.0"?>
<config>
    <wizard>
        <steps>
            <begin>
                <code>begin</code>
                <controller>wizard</controller>
                <action>begin</action>
            </begin>    
            <config>
                <code>configuration</code>
                <controller>wizard</controller>
                <action>config</action>
            </config>
            <administrator>
                <code>administrator installation</code>
                <controller>wizard</controller>
                <action>administrator</action>
            </administrator>
            <end>
                <code>end installation</code>
                <controller>wizard</controller>
                <action>end</action>
            </end>
        </steps>
    </wizard>
    <check>
        <filesystem>
            <writeable>
                <items>
                    <path>/var</path>
                    <recursive>1</recursive>
                </items>
                <items>
                    <path>/app/etc</path>
                    <recursive>1</recursive>
                </items>
            </writeable>
        </filesystem>
        <php>
            <extensions>
                <mysqli/>
                <pdo_mysql/>
                <mcrypt/>
                <gd/>
            </extensions>
        </php>
    </check>
    <vars></vars>
</config>