<?xml version="1.0"?>
<config>
   <modules>
      <Mage_Admin>
         <version>0.2.1</version>
         <depends>
            <Mage_Core />
         </depends>
      </Mage_Admin>
   </modules>

   <global>
      <models>
         <admin>
            <class>Mage_Admin_Model</class>
            <resourceModel>admin_mysql4</resourceModel>
         </admin>
         <admin_mysql4>
            <class>Mage_Admin_Model_Mysql4</class>
            <entities>
               <user><table>admin_user</table></user>
               <role><table>admin_role</table></role>
               <rule><table>admin_rule</table></rule>
               <assert><table>admin_assert</table></assert>
            </entities>
         </admin_mysql4>
      </models>

      <resources>
         <admin_setup>
            <setup>
               <module>Mage_Admin</module>
            </setup>
            <connection>
               <use>core_setup</use>
            </connection>
         </admin_setup>
         <admin_write>
            <connection><use>core_write</use></connection>
         </admin_write>
         <admin_read>
            <connection><use>core_read</use></connection>
         </admin_read>
      </resources>
        <block>
			<groups><admin><class>Mage_Admin_Block</class></admin></groups>
        </block>
   </global>
   <front>
      <layouts>
         <admin>
            <updates>
               <admin>
                  <file>admin/init.xml</file>
               </admin>
            </updates>
         </admin>
      </layouts>
      <events>
         <action_preDispatch_Mage_Admin>
            <observers>
               <auth>
                  <type>singleton</type>
                  <class>admin/observer</class>
                  <method>actionPreDispatchAdmin</method>
               </auth>
            </observers>
         </action_preDispatch_Mage_Admin>
      </events>
      <routers>
         <admin>
            <class>Mage_Core_Controller_Front_Router</class>
            <args>
               <module>Mage_Admin</module>
               <frontName>admin</frontName>
            </args>
         </admin>
      </routers>
   </front>
</config>
