<?xml version="1.0"?>
<config>
    <modules>
        <Mage_Admin>
            <version>0.1.1</version>
            
            <depends>
                <Mage_Core/>
            </depends>

            <load>
                <all>
                    <resources>
                        <admin_setup>
                            <connection extends="//core_setup/connection"/>
                        </admin_setup>

                        <admin_write>
                            <connection extends="//core_write/connection"/>
                        </admin_write>

                        <admin_read>
                            <connection extends="//core_read/connection"/>
                        </admin_read>
                    </resources>
                </all>

                <admin>
                    <layouts>
                        <default><updates><admin><module>Mage_Admin</module><file>initLayout.xml</file></admin></updates></default>
                    </layouts>
                </admin>
            </load>

        </Mage_Admin>
    </modules>
</config>