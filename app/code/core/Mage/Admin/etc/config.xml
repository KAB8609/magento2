<?xml version="1.0"?>
<config>
   <modules>
      <Mage_Admin>
         <version>0.1.1</version>
         <depends>
            <Mage_Core />
         </depends>
      </Mage_Admin>
   </modules>

   <global>
      <models>
         <admin>
            <class>Mage_Admin_Model</class>
         </admin>
         <admin_resource>
            <class>Mage_Admin_Model_Mysql4</class>
         </admin_resource>
      </models>

      <resources>
         <admin_write>
            <connection><use>core_write</use></connection>
         </admin_write>
         <admin_read>
            <connection><use>core_read</use></connection>
         </admin_read>
      </resources>
   </global>
   <front>
      <layouts>
         <admin>
            <updates>
               <admin>
                  <file>customer/initLayout.xml</file>
               </admin>
            </updates>
         </admin>
      </layouts>
      <!--events>
         <beforeRenderLayout>
            <observers>
               <auth>
                  <class>Mage_Customer_Front</class>
                  <method>beforeRenderLayout</method>
               </auth>
            </observers>
         </beforeRenderLayout>
      </events-->
      <routers>
         <customer>
            <class>Mage_Core_Controller_Front_Router</class>
            <args>
               <module>Mage_Admin</module>
               <frontName>admin</frontName>
            </args>
         </customer>
      </routers>
   </front>
</config>
