<?xml version="1.0"?>
<config>
   <modules>
      <Mage_Admin>
         <version>0.2.1</version>
         <depends>
            <Mage_Core />
         </depends>
      </Mage_Admin>
   </modules>

   <global>
      <models>
         <admin>
            <class>Mage_Admin_Model</class>
         </admin>
         <admin_resource>
            <class>Mage_Admin_Model_Mysql4</class>
            <entities>
               <user><table>admin_user</table></user>
               <role><table>admin_role</table></role>
               <rule><table>admin_rule</table></rule>
               <assert><table>admin_assert</table></assert>
            </entities>
         </admin_resource>
      </models>

      <resources>
         <admin_setup>
            <setup>
               <module>Mage_Admin</module>
            </setup>
            <connection>
               <use>core_setup</use>
            </connection>
         </admin_setup>
         <admin_write>
            <connection><use>core_write</use></connection>
         </admin_write>
         <admin_read>
            <connection><use>core_read</use></connection>
         </admin_read>
      </resources>
        <block>
            <types>
                <admin_category_form>
                    <class>Mage_Admin_Block_Catalog_Category_Form</class>
                </admin_category_form>
                <admin_product_create_dialog>
                    <class>Mage_Admin_Block_Catalog_Product_CreateOption</class>
                </admin_product_create_dialog>
                <admin_product_form>
                    <class>Mage_Admin_Block_Catalog_Product_Form</class>
                </admin_product_form>
                <admin_product_card>
                    <class>Mage_Admin_Block_Catalog_Product_Card</class>
                </admin_product_card>
                <tag_css_theme>
                    <class>Mage_Core_Block_Text_Tag_Css_Admin</class>
                </tag_css_theme>
            </types>
        </block>
   </global>
   <front>
      <layouts>
         <admin>
            <updates>
               <admin>
                  <file>admin/init.xml</file>
               </admin>
            </updates>
         </admin>
      </layouts>
      <events>
         <action_preDispatch_Mage_Admin>
            <observers>
               <auth>
                  <type>singleton</type>
                  <model>admin</model>
                  <class>observer</class>
                  <method>actionPreDispatchAdmin</method>
               </auth>
            </observers>
         </action_preDispatch_Mage_Admin>
      </events>
      <routers>
         <admin>
            <class>Mage_Core_Controller_Front_Router</class>
            <args>
               <module>Mage_Admin</module>
               <frontName>admin</frontName>
            </args>
         </admin>
      </routers>
   </front>
</config>
