        <resources>
            <amazoncheckout_setup>
                <setup>
                    <module>Mage_AmazonCheckout</module>
                    <class>Mage_AmazonCheckout_Model_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </amazoncheckout_setup>
            <amazoncheckout_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </amazoncheckout_write>
            <amazoncheckout_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </amazoncheckout_read>
        </resources>
        <blocks>
            <amazoncheckout><class>Mage_AmazonCheckout_Block</class></amazoncheckout>
        </blocks>
    </global>
