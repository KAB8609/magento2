<config>
    <modules>
        <Mage_GiftMessage>
            <version>0.1.1</version>
        </Mage_GiftMessage>
    </modules>
    <global>
        <blocks>
            <gift_message><class>Mage_GiftMessage_Block</class></gift_message>
        </blocks>
        <models>
            <gift_message>
                <class>Mage_GiftMessage_Model</class>
                <resourceModel>gift_message_mysql4</resourceModel>
            </gift_message>
            <gift_message_mysq4>
                <class>Mage_GiftMessage_Model_Mysql4</class>
                <entities>
                    <message>
                        <table>gift_message</table>
                    </message>
                </entities>
            </gift_message_mysq4>
        </models>
        <resources>
            <giftmessage_setup>
                <setup>
                   <module>Mage_GiftMessage</module>
                   <class>Mage_GiftMessage_Model_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </giftmessage_setup>
            <giftmessage_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </giftmessage_write>
            <giftmessage_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </giftmessage_read>
        </resources>
    </global>
    <frontend>
       <routers>
            <giftmessage>
                <use>standard</use>
                <args>
                    <module>Mage_GiftMessage</module>
                    <frontName>giftmessage</frontName>
                </args>
            </giftmessage>
        </routers>
        <translate>
            <modules>
                <Mage_GiftMessage>
                    <files>
                        <default>Mage_GiftMessage.csv</default>
                    </files>
                </Mage_GiftMessage>
            </modules>
        </translate>
    </frontend>
</config>