<layout version="0.1.0">
    <customer_account_login>
        <reference name="customer_form_login">
            <action method="setTemplate"><template>Mage_Persistent::customer/form/login.phtml</template></action>
            <block type="Mage_Persistent_Block_Form_Remember" name="persistent.remember.me" template="remember_me.phtml" />
            <block type="Mage_Core_Block_Template" name="persistent.remember.me.tooltip" template="Mage_Persistent::remember_me_tooltip.phtml" />
        </reference>
    </customer_account_login>

    <customer_account_create>
        <reference name="customer_form_register">
            <action method="setTemplate"><template>Mage_Persistent::customer/form/register.phtml</template></action>
            <block type="Mage_Persistent_Block_Form_Remember" name="persistent.remember.me" template="remember_me.phtml" />
            <block type="Mage_Core_Block_Template" name="persistent.remember.me.tooltip" template="Mage_Persistent::remember_me_tooltip.phtml" />
        </reference>
    </customer_account_create>

    <checkout_onepage_index>
        <reference name="checkout.onepage.login">
            <action method="setTemplate"><template>Mage_Persistent::checkout/onepage/login.phtml</template></action>
            <block type="Mage_Persistent_Block_Form_Remember" name="persistent.remember.me" template="remember_me.phtml" />
        </reference>
        <reference name="checkout.onepage.billing">
            <action method="setTemplate"><template>Mage_Persistent::checkout/onepage/billing.phtml</template></action>
            <block type="Mage_Persistent_Block_Form_Remember" name="persistent.remember.me" template="remember_me.phtml" />
            <block type="Mage_Core_Block_Template" name="persistent.remember.me.tooltip" template="Mage_Persistent::remember_me_tooltip.phtml" />
        </reference>
    </checkout_onepage_index>
    <customer_logged_out>
        <reference name="right">
            <block type="Mage_Sales_Block_Reorder_Sidebar" name="sale.reorder.sidebar" as="reorder" template="reorder/sidebar.phtml"/>
        </reference>
    </customer_logged_out>

    <customer_logged_out_psc_handle translate="label">
        <label>Customer Logged Out with Persistent Shopping Cart</label>
    </customer_logged_out_psc_handle>
</layout>
