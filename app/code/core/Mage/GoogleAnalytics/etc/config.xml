<config>
   <modules>
      <Mage_GoogleAnalytics>
         <version>0.1.0</version>
         <depends>
            <Mage_Core />
         </depends>
      </Mage_GoogleAnalytics>
   </modules>

   <global>
   	  <models>
   	  	 <google_analytics><class>Mage_GoogleAnalytics_Model</class></google_analytics>
   	  </models>
      <block>
	    <groups><google_analytics><class>Mage_GoogleAnalytics_Block</class></google_analytics></groups>
      </block>
      
        <resources>
            <googleanalytics_setup>
                <setup>
                    <module>Mage_GoogleAnalytics</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </googleanalytics_setup>
        </resources>
   </global>
   
   <frontend>
        <layouts>
            <default>
                <updates>
                    <google_analytics>
                        <file>google/urchin/initLayout.xml</file>
                    </google_analytics>
                </updates>
            </default>
        </layouts>
        
        <events>
        	<order_success_page_view>
        		<observers>
        			<urchin>
        				<type>singleton</type>
        				<class>google_analytics/observer</class>
        				<method>order_success_page_view</method>
        			</urchin>
        		</observers>
        	</order_success_page_view>
        </events>
    </frontend>
</config>