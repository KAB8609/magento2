<config>
   <modules>
      <Mage_GoogleAnalytics>
         <version>0.1.0</version>
         <depends>
            <Mage_Core />
         </depends>
      </Mage_GoogleAnalytics>
   </modules>

   <global>
      <models>
         <google_analytics><class>Mage_GoogleAnalytics_Model</class></google_analytics>
      </models>
      <blocks>
        <google_analytics><class>Mage_GoogleAnalytics_Block</class></google_analytics>
      </blocks>

        <resources>
            <googleanalytics_setup>
                <setup>
                    <module>Mage_GoogleAnalytics</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </googleanalytics_setup>
        </resources>
   </global>

   <frontend>
        <events>
            <checkout_onepage_controller_success_action>
                <observers>
                    <urchin>
                        <type>singleton</type>
                        <class>google_analytics/observer</class>
                        <method>order_success_page_view</method>
                    </urchin>
                </observers>
            </checkout_onepage_controller_success_action>
        </events>
          <layout>
              <updates>
                  <googleanalytics>
                      <file>googleanalytics.xml</file>
                  </googleanalytics>
              </updates>
          </layout>
    </frontend>
</config>