<?xml version="1.0"?>
<config>
    <modules>
        <Mage_Cart>
            <version>0.1.1</version>
            
            <depends>
                <Mage_Catalog/>
                <Mage_Customer/>
            </depends>

            <load>
                <all>
                    <resources>
                        <cart_setup>
                            <connection extends="//core_setup/connection"/>
                        </cart_setup>

                        <cart_write>
                            <connection extends="//core_write/connection"/>
                        </cart_write>

                        <cart_read>
                            <connection extends="//core_read/connection"/>
                        </cart_read>
                    </resources>
                </all>

                <front>
                    <controller>
                        <active>true</active>
                        <frontName>cart</frontName>
                    </controller>

                    <events>
                        <initLayout>
                            <observers>
                                <cart>
                                    <class>Mage_Core_Block</class>
                                    <method>loadJsonFile</method>
                                    <args>
                                        <file>Mage/Cart/initLayout.json</file>
                                        <module>Mage_Cart</module>
                                    </args>
                                </cart>
                            </observers>
                        </initLayout>
                    </events>
                </front>
            </load>

        </Mage_Cart>
    </modules>
</config>