<?php
/**
 * Template for Mage_Backend_Block_Widget_Grid_ColumnSet
 * @var $this Mage_Backend_Block_Widget_Grid_ColumnSet
 */
$numColumns = sizeof($this->getColumns());?>
<?php if($this->getCollection()): ?>
    <?php foreach ($this->getColumns() as $_column): ?>
        <col <?php echo $_column->getHtmlProperty() ?> />
    <?php endforeach; ?>
    <?php if ($this->isHeaderVisible() || $this->isFilterVisible()): ?>
        <thead>
            <?php if ($this->isHeaderVisible()): ?>
                <tr class="headings">
                    <?php foreach ($this->getColumns() as $_column): ?>
                    <th<?php echo $_column->getHeaderHtmlProperty() ?>><span class="nobr"><?php echo $_column->getHeaderHtml() ?></span></th>
                    <?php endforeach; ?>
                </tr>
            <?php endif; ?>
            <?php if ($this->isFilterVisible()): ?>
                <tr class="filter">
                    <?php $i=0;foreach ($this->getColumns() as $_column): ?>
                    <th<?php echo $_column->getHeaderHtmlProperty() ?>><?php echo $_column->getFilterHtml() ?></th>
                    <?php endforeach; ?>
                </tr>
            <?php endif ?>
        </thead>
    <?php endif; ?>
<?php endif ?>

<tbody>
<?php if (count($this->getCollection())): ?>
    <?php foreach ($this->getCollection() as $_item): ?>
    <tr>
        <?php $report=$this->getCollection()->getReport($_item['start'], $_item['end']) ?>
        <?php $rows=count($report) ?>
        <?php if ($rows > 0 ): ?>
            <td rowspan="<?php echo $rows + ($this->getCountTotals() && $this->getSubtotalVisibility()?1:0) ?>"><?php echo $_item['title'] ?></td>
            <?php $isFirst=true;foreach ($report as $_subIndex=>$_subItem): ?>
                <?php if(!$isFirst): ?>
                    <tr>
                <?php endif; ?>
                <?php $isFirst=false;?>
                <?php /** @var $_column Mage_Backend_Block_Widget_Grid_Column*/ ?>
                <?php $j=0; foreach ($this->getColumns() as $_column): ?>
                    <?php if (!$_column->getDataVisibility()) continue; ?>
                    <td class="<?php echo $_column->getCssProperty() ?> <?php echo ++$j==$numColumns?'last':'' ?>">
                        <?php echo (($_html = $_column->getRowField($_subItem)) != '' ? $_html : '&nbsp;') ?>
                    </td>
                <?php endforeach; ?>
                    </tr>
            <?php endforeach; ?>
            <?php if($this->getCountTotals() && $rows > 0 && $this->getSubtotalVisibility()): ?>
            <tr>
                <?php $j=0;foreach ($this->getColumns() as $_column): ?>
                    <td class="<?php echo $_column->getCssProperty() ?> <?php echo ++$j==$numColumns?'last':'' ?> subtotal">
                        <?php echo ($j==1)?$this->getSubtotalText():$_column->getRowField($this->getTotals()) ?>
                    </td>
                <?php endforeach; ?>
            </tr>
            <?php endif; ?>
        <?php else: ?>
            <td><?php echo $_item['title'] ?></td>
            <td colspan="<?php echo $numColumns ?>" class="empty-text <?php echo $this->getEmptyTextClass() ?> last"><?php echo $this->getEmptyText() ?></td>
        <?php endif; ?>
    </tr>
    <?php endforeach; ?>
<?php elseif ($this->getEmptyText()): ?>
    <tr>
        <td class="empty-text <?php echo $this->getEmptyTextClass() ?>" colspan="<?php echo $numColumns + 1 ?>"><?php echo $this->getEmptyText() ?></td>
    </tr>
<?php endif; ?>
</tbody>

<?php if ($this->getCountTotals() && count($this->getCollection())): ?>
<tfoot>
<tr>
    <th><?php echo $this->getTotalText() ?></th>
    <?php $j=0;foreach ($this->getColumns() as $_column): ?>
        <?php if (!$_column->getDataVisibility()) continue; ?>
        <th class="<?php echo $_column->getCssProperty() ?> <?php echo ++$j==$numColumns?'last':'' ?>"><?php echo $_column->getRowField($this->getGrandTotals()) ?></th>
    <?php endforeach; ?>
</tr>
</tfoot>
<?php endif; ?>
