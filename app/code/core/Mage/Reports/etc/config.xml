<config>
   <modules>
      <Mage_Reports>
         <version>0.1.1</version>
         <depends>
            <Mage_Customer />
            <Mage_Catalog />
            <Mage_Sales />
         </depends>
      </Mage_Reports>
   </modules>

   <global>
        <models>
            <reports>
                <class>Mage_Reports_Model</class>
                <resourceModel>reports_mysql4</resourceModel>
            </reports>    
            <reports_mysql4>
                <class>Mage_Reports_Model_Mysql4</class>
                <entities>
                </entities>
            </reports_mysql4>
        </models>
        <resources>
            <reports_write>
                <connection><use>core_write</use></connection>
            </reports_write>
    
            <reports_read>
                <connection><use>core_read</use></connection>
            </reports_read>
        </resources>
   </global>
</config>
