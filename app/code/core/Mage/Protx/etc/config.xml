<config>
    <modules>
        <Mage_Protx>
            <version>0.1.0</version>
        </Mage_Protx>
    </modules>
    <global>
        <models>
            <protx>
                <class>Mage_Protx_Model</class>
            </protx>
        </models>
        <resources>
            <protx_setup>
                <setup>
                    <module>Mage_Protx</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </protx_setup>
        </resources>
    </global>
    <frontend>
        <secure_url>
            <protx_standard>/protx/standard</protx_standard>
            <protx_server>/protx/server</protx_server>
            <protx_direct>/protx/direct</protx_direct>
        </secure_url>
        <routers>
            <protx>
                <use>standard</use>
                <args>
                    <module>Mage_Protx</module>
                    <frontName>protx</frontName>
                </args>
            </protx>
        </routers>
        <translate>
            <modules>
                <Mage_Protx>
                    <files>
                        <default>Mage_Protx.csv</default>
                    </files>
                </Mage_Protx>
            </modules>
        </translate>
        <layout>
            <updates>
                <protx>
                    <file>protx.xml</file>
                </protx>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Mage_Protx>
                    <files>
                        <default>Mage_Protx.csv</default>
                    </files>
                </Mage_Protx>
            </modules>
        </translate>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <protx>
                                            <title>Protx Section</title>
                                        </protx>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>

    <default>
        <payment>
            <protx_standard>
                <payment_action>Authorization</payment_action>
                <model>protx/standard</model>
                <title>Protx Standard</title>
                <allowspecific>0</allowspecific>
            </protx_standard>
            <protx_server>
                <payment_action>Authorization</payment_action>
                <model>protx/server</model>
                <title>Protx Server</title>
                <cctypes>AE,VI,MC,DI</cctypes>
                <allowspecific>0</allowspecific>
            </protx_server>
            <protx_direct>
                  <model>protx/direct</model>
                  <title>Protx Direct</title>
                  <types>IPN</types>
                  <allowspecific>0</allowspecific>
                  <transaction_type>O</transaction_type>
            </protx_direct>
        </payment>
    </default>
</config>
