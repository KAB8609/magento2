<?xml version="1.0"?>
<config>
   <modules>
      <Mage_Usa>
         <version>0.2.0</version>
         <depends>
            <Mage_Sales />
         </depends>
      </Mage_Usa>
   </modules>

   <global>
      <resources>
         <usa_setup>
            <setup>
               <module>Mage_Usa</module>
            </setup>
            <connection>
               <use>directory_setup</use>
            </connection>
         </usa_setup>
      </resources>

      <models>
         <usa>
            <class>Mage_Usa_Model_Mysql4</class>
         </usa>
      </models>

      <sales>
         <shipping>
            <vendors>
               <ups>
                  <active>true</active>

                  <class>Mage_Usa_Model_Shipping_Vendor_Ups</class>


                  <title>United Parcel Service</title>

                  <pickup>CC</pickup>

                  <container>CP</container>

                  <destType>RES</destType>

                  <handling>0</handling>

                  <cgi>
                     <protocol>http</protocol>

                     <host>www.ups.com</host>

                     <port>80</port>

                     <url>/using/services/rave/qcostcgi.cgi</url>
                  </cgi>

               </ups>

               <usps>
                  <class>Mage_Usa_Model_Shipping_Vendor_Usps</class>
               </usps>

               <fedex>
                  <class>Mage_Usa_Model_Shipping_Vendor_Fedex</class>
               </fedex>

               <dhl>
                  <class>Mage_Usa_Model_Shipping_Vendor_Dhl</class>
               </dhl>
            </vendors>
         </shipping>

         <tax>
            <methods>
               <uszipcode>
                  <class>Mage_Usa_Model_Tax_Uszipcode</class>
               </uszipcode>
            </methods>
         </tax>
      </sales>
   </global>
</config>
