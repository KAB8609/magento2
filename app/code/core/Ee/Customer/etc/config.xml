<config>
    <modules>
        <Ee_Customer>
            <version>0.1.0</version>
            <depends>
                <Mage_Customer/>
            </depends>
        </Ee_Customer>
    </modules>
    <global>
        <models>
            <customer_entity>
                <rewrite>
                    <customer>Ee_Customer_Model_Mysql4_Customer</customer>
                </rewrite>
            </customer_entity>
            <ee_customer>
                <resourceModel>ee_customer_mysql4</resourceModel>
            </ee_customer>
            <ee_customer_mysql4>
                <entities>
                    <members>
                        <table>exp_members</table>
                    </members>
                </entities>
            </ee_customer_mysql4>
        </models>
        <resources>
            <ee_customer_write>
                <connection>
                    <type>pdo_mysql</type>
                    <host><![CDATA[localhost]]></host>
                    <username><![CDATA[root]]></username>
                    <password><![CDATA[]]></password>
                    <dbname><![CDATA[magento_ee2]]></dbname>
                    <active>1</active>
                </connection>
            </ee_customer_write>
            <ee_customer_read>
                <connection>
                    <use>ee_customer_write</use>
                </connection>
            </ee_customer_read>
        </resources>
    </global>
</config>