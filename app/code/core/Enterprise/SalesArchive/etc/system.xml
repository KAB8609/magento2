<config>
    <sections>
        <sales>
            <groups>
                <enterprise_salesarchive translate="label" module="Enterprise_SalesArchive">
                    <label>Orders, Invoices, Shipments, Credit Memos Archiving</label>
                    <sort_order>200</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>

                        <active translate="label">
                            <label>Enable Archiving</label>
                            <sort_order>5</sort_order>
                            <frontend_type>select</frontend_type>
                            <source_model>Mage_Backend_Model_Config_Source_Yesno</source_model>
                            <backend_model>Enterprise_SalesArchive_Model_System_Config_Backend_Active</backend_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><model>Enterprise_SalesArchive_Model_System_Config_Backend_Active</model></comment>
                        </active>

                        <age translate="label">
                            <label>Archive Orders Purchased</label>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Days ago.</comment>
                        </age>

                        <order_statuses translate="label">
                            <label>Order Statuses to be Archive</label>
                            <sort_order>15</sort_order>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>Enterprise_SalesArchive_Model_Order_Status_Source</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </order_statuses>

                    </fields>
                </enterprise_salesarchive>
            </groups>
        </sales>
    </sections>
</config>
