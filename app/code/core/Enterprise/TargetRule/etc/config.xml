<config>
    <modules>
        <Enterprise_TargetRule>
             <version>0.0.2</version>
        </Enterprise_TargetRule>
    </modules>
    <global>
        <models>
            <enterprise_targetrule_mysql4>
                <class>Enterprise_TargetRule_Model_Mysql4</class>
                <entities>
                    <rule>
                        <table>enterprise_targetrule</table>
                    </rule>
                </entities>
            </enterprise_targetrule_mysql4>
            <enterprise_targetrule>
                <class>Enterprise_TargetRule_Model</class>
                <resourceModel>enterprise_targetrule_mysql4</resourceModel>
            </enterprise_targetrule>
        </models>
        <resources>
            <enterprise_targetrule_setup>
                <setup>
                    <module>Enterprise_TargetRule</module>
                    <class>Enterprise_TargetRule_Model_Mysql4_Setup</class>
                </setup>
            </enterprise_targetrule_setup>
        </resources>
        <blocks>
            <enterprise_targetrule>
                <class>Enterprise_TargetRule_Block</class>
            </enterprise_targetrule>
        </blocks>
        <helpers>
            <enterprise_targetrule>
                <class>Enterprise_TargetRule_Helper</class>
            </enterprise_targetrule>
        </helpers>
    </global>
    <adminhtml>
        <events>
            <catalog_product_prepare_save>
                <observers>
                    <enterprise_targetrule>
                        <class>enterprise_targetrule/observer</class>
                        <method>prepareTargetRuleSave</method>
                    </enterprise_targetrule>
                </observers>
            </catalog_product_prepare_save>
            <adminhtml_block_eav_attribute_edit_form_init>
                <observers>
                    <enterprise_targetrule>
                        <class>enterprise_targetrule/observer</class>
                        <method>addProductAttributeField</method>
                    </enterprise_targetrule>
                </observers>
            </adminhtml_block_eav_attribute_edit_form_init>
        </events>
        <translate>
            <modules>
                <Enterprise_TargetRule>
                    <files>
                        <default>Enterprise_TargetRule.csv</default>
                    </files>
                </Enterprise_TargetRule>
            </modules>
        </translate>
        <layout>
            <updates>
                <enterprise_targetrule>
                    <file>enterprise/targetrule.xml</file>
                </enterprise_targetrule>
            </updates>
        </layout>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Enterprise_TargetRule before="Mage_Adminhtml">Enterprise_TargetRule_Adminhtml</Enterprise_TargetRule>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
</config>
