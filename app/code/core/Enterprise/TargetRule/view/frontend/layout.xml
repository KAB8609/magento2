<layout version="0.1.0">
    <catalog_product_view>
        <reference name="product.info">
            <!-- remove name="catalog.product.related" / -->
            <block type="Enterprise_TargetRule_Block_Catalog_Product_List_Related" name="catalog.product.related" as="relatedProducts" template="catalog/product/list/related.phtml">
                <action method="setColumnCount"><columns>3</columns></action>
                <block type="Enterprise_TargetRule_Block_Catalog_Product_Item" name="catalog.product.related.item" template="catalog/product/list/related/item.phtml" />
            </block>
            <!-- remove name="product.info.upsell" / -->
            <block type="Enterprise_TargetRule_Block_Catalog_Product_List_Upsell" name="product.info.upsell" as="upsell_products" template="catalog/product/list/upsell.phtml">
                <action method="setColumnCount"><columns>4</columns></action>
                <block type="Enterprise_TargetRule_Block_Catalog_Product_Item" name="catalog.product.upsell.item" template="catalog/product/list/upsell/item.phtml" />
            </block>
        </reference>
    </catalog_product_view>

    <checkout_cart_index>
        <reference name="checkout.cart">
            <!-- remove name="checkout.cart.crosssell" / -->
            <block type="Enterprise_TargetRule_Block_Checkout_Cart_Crosssell" name="checkout.cart.crosssell" as="crosssell" template="checkout/cart/crosssell.phtml">
            </block>
        </reference>
    </checkout_cart_index>
</layout>
