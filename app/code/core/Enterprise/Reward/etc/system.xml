<config>
    <sections>
        <enterprise_reward translate="label" module="enterprise_reward">
            <label>Reward Points</label>
            <class>separator-top</class>
            <tab>customer</tab>
            <sort_order>300</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label" module="enterprise_reward">
                    <label>Reward Points</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <is_enabled translate="label">
                            <label>Enable Reward Points Functionality</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <backend_model>adminhtml/system_config_backend_cache</backend_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </is_enabled>
                        <min_points_balance translate="label comment">
                            <label>Min Reward Points Balance to be able to Redeem</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Empty Value disables this Limitation</comment>
                        </min_points_balance>
                        <max_points_balance translate="label comment">
                            <label>Cap Reward Points Balance to</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Empty Value disables this Limitation</comment>
                        </max_points_balance>
                    </fields>
                </general>
                <points translate="label" module="enterprise_reward">
                    <label>Acquiring Reward Points by Customers</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                    </fields>
                </points>
                <notification translate="label" module="enterprise_reward">
                    <label>Email Notification Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <email_sender>
                        </email_sender>
                        <subscribe_by_default>
                        </subscribe_by_default>
                        <balance_update_email>
                        </balance_update_email>
                        <expiry_warning_email>
                        </expiry_warning_email>
                        <expiry_day_before>
                        </expiry_day_before>
                    </fields>
                </notification>
            </groups>
        </enterprise_reward>
    </sections>
</config>