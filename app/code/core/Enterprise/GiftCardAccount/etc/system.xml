<config>
    <tabs>
        <giftcards translate="label" module="enterprise_giftcardaccount">
            <label>Gift Cards</label>
            <sort_order>220</sort_order>
        </giftcards>
    </tabs>
    <sections>
        <giftcardaccount translate="label" module="enterprise_giftcardaccount">
            <label>Gift Card Accounts</label>
            <tab>giftcards</tab>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <sort_order>100</sort_order>
            <groups>
                <email translate="label" module="enterprise_giftcardaccount">
                    <label>Email Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <identity translate="label">
                            <label>Gift Card Sender</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_identity</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </identity>
                        <template translate="label">
                            <label>Gift Card Template</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </template>
                    </fields>
                </email>
                <general translate="label" module="enterprise_giftcardaccount">
                    <label>General Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>200</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <code_length translate="label comment">
                            <label>Code Length</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Excluding prefix, suffix and separators</comment>
                        </code_length>
                        <code_format translate="label">
                            <label>Code Format</label>
                            <frontend_type>select</frontend_type>
							<source_model>enterprise_giftcardaccount/source_format</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </code_format>
                        <code_prefix translate="label">
                            <label>Code Prefix</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </code_prefix>
                        <code_suffix translate="label">
                            <label>Code Suffix</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </code_suffix>
                        <code_split translate="label comment">
                            <label>Separate X characters with a dash</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
							<comment>0 - no separation</comment>
                        </code_split>
                        <pool_size translate="label comment">
                            <label>Pool Generation Free Size Requirement</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </pool_size>
                    </fields>
                </general>
            </groups>
        </giftcardaccount>
        <sales>
            <groups>
                <totals_sort>
                    <fields>
                        <giftcardaccount module="enterprise_giftcardaccount" translate="label">
                            <label>Gift Cards</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </giftcardaccount>
                    </fields>
                </totals_sort>
            </groups>
        </sales>
    </sections>
</config>