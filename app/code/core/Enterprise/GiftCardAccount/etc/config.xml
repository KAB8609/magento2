<config>
    <modules>
        <Enterprise_GiftCardAccount>
             <version>0.0.11</version>
        </Enterprise_GiftCardAccount>
    </modules>

    <global>
        <models>
            <enterprise_giftcardaccount>
                <class>Enterprise_GiftCardAccount_Model</class>
                <resourceModel>enterprise_giftcardaccount_mysql4</resourceModel>
            </enterprise_giftcardaccount>
            <enterprise_giftcardaccount_mysql4>
                <class>Enterprise_GiftCardAccount_Model_Mysql4</class>
                <entities>
                    <giftcardaccount>
                        <table>enterprise_giftcardaccount</table>
                    </giftcardaccount>
                    <pool>
                        <table>enterprise_giftcardaccount_pool</table>
                    </pool>
                    <history>
                        <table>enterprise_giftcardaccount_history</table>
                    </history>
                </entities>
            </enterprise_giftcardaccount_mysql4>
        </models>

        <resources>
            <enterprise_giftcardaccount_setup>
                <setup>
                    <module>Enterprise_GiftCardAccount</module>
                    <class>Enterprise_GiftCardAccount_Model_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </enterprise_giftcardaccount_setup>
            <enterprise_giftcardaccount_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </enterprise_giftcardaccount_write>
            <enterprise_giftcardaccount_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </enterprise_giftcardaccount_read>
        </resources>
        <blocks>
            <enterprise_giftcardaccount>
                <class>Enterprise_GiftCardAccount_Block</class>
            </enterprise_giftcardaccount>
        </blocks>
        <helpers>
            <enterprise_giftcardaccount>
                <class>Enterprise_GiftCardAccount_Helper</class>
            </enterprise_giftcardaccount>
        </helpers>
        <sales>
            <quote>
                <totals>
                    <giftcardaccount>
                        <class>enterprise_giftcardaccount/total_quote_giftcardaccount</class>
                        <after>subtotal,shipping,tax,discount</after>
                        <before>customerbalance,grand_total</before>
                        <renderer>enterprise_giftcardaccount/checkout_cart_total</renderer>
                    </giftcardaccount>
                </totals>
            </quote>

            <order_invoice>
                <totals>
                    <giftcardaccount>
                        <class>enterprise_giftcardaccount/total_invoice_giftcardaccount</class>
                    </giftcardaccount>
                </totals>
            </order_invoice>

            <!-- order_creditmemo>
                <totals>
                    <giftcardaccount>
                        <class>enterprise_giftcardaccount/total_creditmemo_giftcardaccount</class>
                    </giftcardaccount>
                </totals>
            </order_creditmemo -->
        </sales>
        <enterprise>
            <giftcardaccount>
                <separator>-</separator>
                <charset>
                    <alphanum>ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789</alphanum>
                    <alpha>ABCDEFGHIJKLMNOPQRSTUVWXYZ</alpha>
                    <num>0123456789</num>
                </charset>
            </giftcardaccount>
        </enterprise>
        <events>
            <enterprise_giftcardaccount_save_after>
                <observers>
                    <enterprise_giftcardaccount_save_after>
                        <type>singleton</type>
                        <class>enterprise_giftcardaccount/observer</class>
                        <method>giftcardaccountSaveAfter</method>
                    </enterprise_giftcardaccount_save_after>
                </observers>
            </enterprise_giftcardaccount_save_after>

            <sales_order_place_after>
                <observers>
                    <enterprise_giftcardaccount_sales_order_place_after>
                        <type>singleton</type>
                        <class>enterprise_giftcardaccount/observer</class>
                        <method>processOrderPlace</method>
                    </enterprise_giftcardaccount_sales_order_place_after>
                </observers>
            </sales_order_place_after>

            <sales_order_invoice_save_after>
                <observers>
                    <enterprise_giftcardaccount_sales_order_invoice_save_after>
                        <type>singleton</type>
                        <class>enterprise_giftcardaccount/observer</class>
                        <method>increaseOrderInvoicedAmount</method>
                    </enterprise_giftcardaccount_sales_order_invoice_save_after>
                </observers>
            </sales_order_invoice_save_after>

            <enterprise_giftcardaccount_charge_by_code>
                <observers>
                    <enterprise_giftcardaccount_charge_by_code>
                        <type>singleton</type>
                        <class>enterprise_giftcardaccount/observer</class>
                        <method>chargeByCode</method>
                    </enterprise_giftcardaccount_charge_by_code>
                </observers>
            </enterprise_giftcardaccount_charge_by_code>

            <enterprise_giftcardaccount_charge>
                <observers>
                    <enterprise_giftcardaccount_charge>
                        <type>singleton</type>
                        <class>enterprise_giftcardaccount/observer</class>
                        <method>chargeById</method>
                    </enterprise_giftcardaccount_charge>
                </observers>
            </enterprise_giftcardaccount_charge>

            <enterprise_giftcardaccount_create>
                <observers>
                    <enterprise_giftcardaccount_create>
                        <type>singleton</type>
                        <class>enterprise_giftcardaccount/observer</class>
                        <method>create</method>
                    </enterprise_giftcardaccount_create>
                </observers>
            </enterprise_giftcardaccount_create>
        </events>
        <fieldsets>
            <sales_convert_quote_address>
                <base_gift_cards_amount><to_order>*</to_order></base_gift_cards_amount>
                <gift_cards_amount><to_order>*</to_order></gift_cards_amount>
                <used_gift_cards><to_order>gift_cards</to_order></used_gift_cards>
            </sales_convert_quote_address>
        </fieldsets>

        <template>
            <email>
               <giftcardaccount_email_template translate="label" module="enterprise_giftcardaccount">
                   <label>Gift Card Account Sent From Edit Page</label>
                   <file>enterprise/giftcardaccount.html</file>
                   <type>html</type>
               </giftcardaccount_email_template>
            </email>
        </template>
    </global>

    <frontend>
        <translate>
            <modules>
                <Enterprise_GiftCardAccount>
                    <files>
                        <default>Enterprise_GiftCardAccount.csv</default>
                    </files>
                </Enterprise_GiftCardAccount>
            </modules>
        </translate>
        <routers>
            <enterprise_giftcardaccount>
                <use>standard</use>
                <args>
                    <module>Enterprise_GiftCardAccount</module>
                    <frontName>giftcard</frontName>
                </args>
            </enterprise_giftcardaccount>
        </routers>
        <layout>
            <updates>
                <enterprise_giftcardaccount>
                    <file>giftcardaccount.xml</file>
                </enterprise_giftcardaccount>
            </updates>
        </layout>
    </frontend>

    <admin>
         <routers>
            <adminhtml>
                <args>
                    <modules>
                        <enterprise_giftcardaccount before="Mage_Adminhtml">Enterprise_GiftCardAccount</enterprise_giftcardaccount>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    <adminhtml>
        <layout>
            <updates>
                <enterprise_giftcardaccount>
                    <file>enterprise/giftcardaccount.xml</file>
                </enterprise_giftcardaccount>
            </updates>
        </layout>

        <acl>
          <resources>
            <admin>
              <children>
                <system>
                  <children>
                    <config>
                      <children>
                        <giftcardaccount>
                          <title>Gift Card Accounts</title>
                        </giftcardaccount>
                      </children>
                    </config>
                  </children>
                </system>
              </children>
            </admin>
          </resources>
        </acl>


        <menu>
            <customer>
                <children>
                    <enterprise_giftcardaccount translate="title" module="enterprise_giftcardaccount">
                        <title>Gift Card Accounts</title>
                        <action>adminhtml/manage_giftcardaccount</action>
                        <resource>customer/giftcardaccount</resource>
                        <depends><module>Enterprise_GiftCardAccount</module></depends>
                    </enterprise_giftcardaccount>
                </children>
             </customer>
        </menu>
    </adminhtml>

    <default>
        <giftcardaccount>
            <email>
                <identity>general</identity>
                <template>giftcardaccount_email_template</template>
            </email>
            <general>
                <code_length>12</code_length>
                <code_format>alphanum</code_format>
                <code_split>0</code_split>
                <pool_size>1000</pool_size>
            </general>
        </giftcardaccount>
        <sales>
            <totals_sort>
                <giftcardaccount>90</giftcardaccount>
            </totals_sort>
        </sales>
    </default>
    <crontab>
        <jobs>
            <enterprise_giftcardaccount_update_states>
                <schedule><cron_expr>0 1 * * *</cron_expr></schedule>
                <run><model>enterprise_giftcardaccount/cron::updateStates</model></run>
            </enterprise_giftcardaccount_update_states>
        </jobs>
    </crontab>
</config>