<config>
    <modules>
        <Enterprise_Permissions>
             <version>0.0.1</version>
        </Enterprise_Permissions>
    </modules>
    <global>
        <models>
            <permissions>
                <class>Enterprise_Permissions_Model</class>
                <resourceModel>permissions_mysql4</resourceModel>
            </permissions>
            <permissions_mysql4>
                <class>Enterprise_Permissions_Model_Mysql4</class>
            </permissions_mysql4>
        </models>
        <blocks>
            <permissions>
                <class>Enterprise_Permissions_Block</class>
            </permissions>
        </blocks>
        <helpers>
            <permissions>
                <class>Enterprise_Permissions_Helper</class>
            </permissions>
        </helpers>
        <resources>
            <permissions_setup>
                <setup>
                    <module>Enterprise_Permissions</module>
                    <class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </permissions_setup>
            <permissions_write>
                <use>core_write</use>
            </permissions_write>
            <permissions_read>
                <use>core_read</use>
            </permissions_read>
        </resources>
        <settings>
            <admin_predispatch_observers>
                <adminhtml_system_config_edit>
                    <call>permissions/validator::systemConfigEdit</call>
                </adminhtml_system_config_edit>
                <adminhtml_system_config_save>
                    <call>permissions/validator::systemConfigSave</call>
                </adminhtml_system_config_save>
            </admin_predispatch_observers>
        </settings>
    </global>
    <adminhtml>
        <layout>
            <updates>
                <permissions>
                    <file>permissions.xml</file>
                </permissions>
            </updates>
        </layout>
        <events>
            <admin_roles_load_after>
                <observers>
                    <enterprise_permissions>
                        <type>singleton</type>
                        <class>permissions/observer</class>
                        <method>addDataAfterRoleLoad</method>
                    </enterprise_permissions>
                </observers>
            </admin_roles_load_after>
            <admin_roles_save_before>
                <observers>
                    <enterprise_permissions>
                        <type>singleton</type>
                        <class>permissions/observer</class>
                        <method>setDataBeforeRoleSave</method>
                    </enterprise_permissions>
                </observers>
            </admin_roles_save_before>
            <admin_permissions_role_prepare_save>
                <observers>
                    <enterprise_permissions>
                        <type>singleton</type>
                        <class>permissions/observer</class>
                        <method>prepareRoleSave</method>
                    </enterprise_permissions>
                </observers>
            </admin_permissions_role_prepare_save>
            <controller_action_predispatch_adminhtml>
                <observers>
                    <enterprise_permissions>
                        <type>singleton</type>
                        <class>permissions/observer</class>
                        <method>validateAccess</method>
                    </enterprise_permissions>
                </observers>
            </controller_action_predispatch_adminhtml>
        </events>
    </adminhtml>
</config>
