<config>
    <modules>
        <Enterprise_Permissions>
             <version>0.0.1</version>
        </Enterprise_Permissions>
    </modules>
    <global>
        <models>
            <permissions>
                <class>Enterprise_Permissions_Model</class>
                <resourceModel>permissions_mysql4</resourceModel>
            </permissions>
            <permissions_mysql4>
                <class>Enterprise_Permissions_Model_Mysql4</class>
            </permissions_mysql4>
            <adminhtml>
                <rewrite>
                    <system_store>Enterprise_Permissions_Model_System_Store</system_store>
                    <system_config_source_website>Enterprise_Permissions_Model_System_Config_Source_Website</system_config_source_website>
                </rewrite>
            </adminhtml>
        </models>
        <blocks>
            <permissions>
                <class>Enterprise_Permissions_Block</class>
            </permissions>
            <adminhtml>
                <rewrite>
                    <catalog_category_tree>Enterprise_Permissions_Block_Catalog_Category_Tree</catalog_category_tree>
                    <catalog_product_edit_tabs>Enterprise_Permissions_Block_Catalog_Product_Edit_Tabs</catalog_product_edit_tabs>
                    <catalog_product_edit_tab_websites>Enterprise_Permissions_Block_Catalog_Product_Edit_Tab_Websites</catalog_product_edit_tab_websites>
                    <catalog_product>Enterprise_Permissions_Block_Catalog_Product</catalog_product>
                    <catalog_product_edit_action_attribute_tab_attributes>Enterprise_Permissions_Block_Catalog_Product_Edit_Action_Attribute_Tab_Attributes</catalog_product_edit_action_attribute_tab_attributes>
                </rewrite>
            </adminhtml>
        </blocks>
        <helpers>
            <permissions>
                <class>Enterprise_Permissions_Helper</class>
            </permissions>
        </helpers>
        <resources>
            <permissions_setup>
                <setup>
                    <module>Enterprise_Permissions</module>
                    <class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </permissions_setup>
            <permissions_write>
                <use>core_write</use>
            </permissions_write>
            <permissions_read>
                <use>core_read</use>
            </permissions_read>
        </resources>
    </global>
    <adminhtml>
        <layout>
            <updates>
                <permissions>
                    <file>permissions.xml</file>
                </permissions>
            </updates>
        </layout>
        <events>
            <admin_roles_load_after>
                <observers>
                    <enterprise_permissions>
                        <type>singleton</type>
                        <class>permissions/observer</class>
                        <method>addDataAfterRoleLoad</method>
                    </enterprise_permissions>
                </observers>
            </admin_roles_load_after>
            <admin_roles_save_before>
                <observers>
                    <enterprise_permissions>
                        <type>singleton</type>
                        <class>permissions/observer</class>
                        <method>setDataBeforeRoleSave</method>
                    </enterprise_permissions>
                </observers>
            </admin_roles_save_before>
            <admin_permissions_role_prepare_save>
                <observers>
                    <enterprise_permissions>
                        <type>singleton</type>
                        <class>permissions/observer</class>
                        <method>prepareRoleSave</method>
                    </enterprise_permissions>
                </observers>
            </admin_permissions_role_prepare_save>
            <controller_action_predispatch_adminhtml>
                <observers>
                    <enterprise_permissions>
                        <type>singleton</type>
                        <class>permissions/observer</class>
                        <method>validateAccess</method>
                    </enterprise_permissions>
                </observers>
            </controller_action_predispatch_adminhtml>
        </events>
        <settings>
            <admin_predispatch_observers>
                <adminhtml_system_config_edit>
                    <call>permissions/validator::systemConfigEdit</call>
                </adminhtml_system_config_edit>
                <adminhtml_system_config_save>
                    <call>permissions/validator::systemConfigSave</call>
                </adminhtml_system_config_save>
                <adminhtml_catalog_product_new>
                    <call>permissions/validator::catalogProductNew</call>
                </adminhtml_catalog_product_new>
                <adminhtml_catalog_product_edit>
                    <call>permissions/validator::catalogProductEdit</call>
                </adminhtml_catalog_product_edit>
                <adminhtml_catalog_product_index>
                    <call>permissions/validator::catalogProductList</call>
                </adminhtml_catalog_product_index>
                <adminhtml_catalog_product_save>
                    <call>permissions/validator::catalogProductSave</call>
                </adminhtml_catalog_product_save>
                <adminhtml_catalog_product_action_attribute_edit>
                    <call>permissions/validator::catalogProductAttributesEdit</call>
                </adminhtml_catalog_product_action_attribute_edit>
                <adminhtml_dashboard_index>
                    <call>permissions/validator::dashboardView</call>
                </adminhtml_dashboard_index>
                <adminhtml_catalog_category_edit>
                    <call>permissions/validator::catalogCategoryEdit</call>
                </adminhtml_catalog_category_edit>
                <adminhtml_sales_order_index>
                    <call>permissions/validator::salesOrderList</call>
                </adminhtml_sales_order_index>
            </admin_predispatch_observers>
            <catalog_form_renderer_fieldset_element>
                <adminhtml_catalog_product_edit>permissions/catalog_form_renderer_fieldset_element</adminhtml_catalog_product_edit>
            </catalog_form_renderer_fieldset_element>
            <adminhtml_widget_grid>
                <filters>
                    <adminhtml_catalog_product_crosssell>
                        <website_filter>permissions/validator::filterCatalogProductGrid</website_filter>
                    </adminhtml_catalog_product_crosssell>
                    <adminhtml_catalog_product_related>
                        <website_filter>permissions/validator::filterCatalogProductGrid</website_filter>
                    </adminhtml_catalog_product_related>
                    <adminhtml_catalog_product_upsell>
                        <website_filter>permissions/validator::filterCatalogProductGrid</website_filter>
                    </adminhtml_catalog_product_upsell>
                    <adminhtml_catalog_product_reviews>
                        <website_filter>permissions/validator::filterCatalogProductReviewGrid</website_filter>
                    </adminhtml_catalog_product_reviews>
                    <adminhtml_catalog_product_review_reviewGrid>
                        <website_filter>permissions/validator::filterCatalogProductReviewGrid</website_filter>
                    </adminhtml_catalog_product_review_reviewGrid>
                    <adminhtml_catalog_product_tagGrid>
                        <website_filter>permissions/validator::filterCatalogProductTagGrid</website_filter>
                    </adminhtml_catalog_product_tagGrid>
                    <adminhtml_catalog_product_gridOnly>
                        <website_filter>permissions/validator::filterCatalogProductGrid</website_filter>
                    </adminhtml_catalog_product_gridOnly>
                    <adminhtml_customer_index>
                        <website_filter>permissions/validator::filterCustomerGrid</website_filter>
                    </adminhtml_customer_index>
                    <adminhtml_customer_exportCsv>
                        <website_filter>permissions/validator::filterCustomerGrid</website_filter>
                    </adminhtml_customer_exportCsv>
                    <adminhtml_customer_exportXml>
                        <website_filter>permissions/validator::filterCustomerGrid</website_filter>
                    </adminhtml_customer_exportXml>
                    <adminhtml_sales_order_index>
                        <website_filter>permissions/validator::filterSalesOrderGrid</website_filter>
                    </adminhtml_sales_order_index>
                    <adminhtml_sales_order_grid>
                        <website_filter>permissions/validator::filterSalesOrderGrid</website_filter>
                    </adminhtml_sales_order_grid>
                    <adminhtml_sales_invoice_index>
                        <website_filter>permissions/validator::filterSalesInvoiceGrid</website_filter>
                    </adminhtml_sales_invoice_index>
                    <adminhtml_sales_shipment_index>
                        <website_filter>permissions/validator::filterSalesShipmentGrid</website_filter>
                    </adminhtml_sales_shipment_index>
                    <adminhtml_sales_creditmemo_index>
                        <website_filter>permissions/validator::filterSalesCreditmemoGrid</website_filter>
                    </adminhtml_sales_creditmemo_index>
                    <adminhtml_urlrewrite_index>
                        <website_filter>permissions/validator::filterUrlrewriteGrid</website_filter>
                    </adminhtml_urlrewrite_index>
                    <adminhtml_catalog_search_index>
                        <website_filter>permissions/validator::filterCatalogSearchGrid</website_filter>
                    </adminhtml_catalog_search_index>
                </filters>
            </adminhtml_widget_grid>
        </settings>
    </adminhtml>
</config>
