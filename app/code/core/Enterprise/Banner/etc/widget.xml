<config>
    <widgets>
        <enterprise_banner type="enterprise_banner/widget_banner" translate="name description" module="enterprise_banner">
            <name>Banner Widget Block</name>
            <description>Widget that output banners that can be related to Shopping Cart Price or Catalog Rules</description>
            <parameters>
                <display_mode translate="label">
                    <required />
                    <visible />
                    <value>fixed</value>
                    <label>Display Mode</label>
                    <type>select</type>
                    <values>enterprise_banner/source_displaymode</values>
                </display_mode>
                <rotate translate="label">
                    <visible />
                    <label>Rotation Mode</label>
                    <type>select</type>
                    <values>enterprise_banner/source_rotationmode</values>
                </rotate >
                <banner_ids translate="label">
                    <required />
                    <visible />
                    <label>Banner IDs</label>
                    <type>text</type>
                </banner_ids>
                <template>
                    <required />
                    <value>banner/widget.phtml</value>
                    <label>Template</label>
                    <type>text</type>
                </template>
            </parameters>
        </enterprise_banner>
    </widgets>
</config>
