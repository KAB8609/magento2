<config>
    <modules>
        <Enterprise_Invitation>
            <version>0.0.1</version>
        </Enterprise_Invitation>
    </modules>
    <global>
        <models>
             <enterprise_invitation>
                <class>Enterprise_Invitation_Model</class>
                <resourceModel>enterprise_invitation_mysql4</resourceModel>
             </enterprise_invitation>
             <enterprise_invitation_mysql4>
                <class>Enterprise_Invitation_Model_Mysql4</class>
                <entities>
                    <invitation><table>enterprise_invitation</table></invitation>
                    <invitation_status_history><table>enterprise_invitation_status_history</table></invitation_status_history>
                </entities>
            </enterprise_invitation_mysql4>
        </models>
        <helpers>
             <enterprise_invitation>
                <class>Enterprise_Invitation_Helper</class>
             </enterprise_invitation>
        </helpers>
        <blocks>
             <enterprise_invitation>
                <class>Enterprise_Invitation_Block</class>
             </enterprise_invitation>
        </blocks>
        <resources>
            <enterprise_invitation_setup>
                <setup>
                    <module>Enterprise_Invitation</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </enterprise_invitation_setup>
            <enterprise_invitation_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </enterprise_invitation_write>
            <enterprise_invitation_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </enterprise_invitation_read>
        </resources>
        <template>
            <email>
               <enterprise_invitation_email_template translate="label" module="enterprise_invitation">
                   <label>Invitation</label>
                   <file>enterprise/invitation.html</file>
                   <type>html</type>
               </enterprise_invitation_email_template>
            </email>
        </template>
    </global>
   <admin>
        <routers>
            <adminhtml>
                <args>
                    <frontName>admin</frontName>
                    <modules>
                        <enterprise_invitation before="Mage_Adminhtml">Enterprise_Invitation_Adminhtml</enterprise_invitation>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <enterprise_invitation>
                    <file>enterprise/invitation.xml</file>
                </enterprise_invitation>
            </updates>
        </layout>
        <acl>
            <resources>
                <admin>
                    <children>
                        <customer>
                            <children>
                                 <enterprise_invitation>
                                    <title>Invitations</title>
                                    <sort_order>40</sort_order>
                                </enterprise_invitation>
                            </children>
                        </customer>
                    </children>
                </admin>
            </resources>
         </acl>
         <menu>
            <customer>
                <children>
                    <enterprise_invitation translate="title" module="enterprise_invitation">
                           <title>Invitations</title>
                           <action>adminhtml/invitation</action>
                           <resource>customer/invitation</resource>
                           <sort_order>30</sort_order>
                           <depends><module>Enterprise_Invitation</module></depends>
                    </enterprise_invitation>
                </children>
            </customer>
            <report>
                <children>
                    <enterprise_invitation translate="title" module="enterprise_invitation">
                           <title>Invitations</title>
                           <resource>customer/invitation</resource>
                           <sort_order>30</sort_order>
                           <depends><module>Enterprise_Invitation</module></depends>
                           <children>
                               <general translate="title" module="enterprise_invitation">
                                   <title>General</title>
                                   <action>adminhtml/report_invitation</action>
                                   <resource>customer/invitation</resource>
                                   <sort_order>10</sort_order>
                               </general>
                               <customer translate="title" module="enterprise_invitation">
                                   <title>Customers</title>
                                   <action>adminhtml/report_invitation/customer</action>
                                   <resource>customer/invitation</resource>
                                   <sort_order>20</sort_order>
                               </customer>
                               <order translate="title" module="enterprise_invitation">
                                   <title>Order Conversion Rate</title>
                                   <action>adminhtml/report_invitation/order</action>
                                   <resource>customer/invitation</resource>
                                   <sort_order>30</sort_order>
                               </order>
                           </children>
                    </enterprise_invitation>
                </children>
            </report>
         </menu>
    </adminhtml>
    <frontend>
        <layout>
            <updates>
                <enterprise_invitation>
                    <file>invitation.xml</file>
                </enterprise_invitation>
            </updates>
        </layout>
        <translate>
            <modules>
                <Enterprise_Invitation>
                    <files>
                        <default>Enterprise_Invitation.csv</default>
                    </files>
                </Enterprise_Invitation>
            </modules>
        </translate>
        <routers>
            <enterprise_invitation>
                <use>standard</use>
                <args>
                    <module>Enterprise_Invitation</module>
                    <frontName>invitation</frontName>
                </args>
            </enterprise_invitation>
        </routers>
        <events>
            <customer_save_after>
                <observers>
                    <enterprise_invitation>
                        <type>singleton</type>
                        <class>enterprise_invitation/observer</class>
                        <method>observeCustomerSaveAfter</method>
                    </enterprise_invitation>
                </observers>
            </customer_save_after>
            <customer_save_before>
                <observers>
                    <enterprise_invitation>
                        <type>singleton</type>
                        <class>enterprise_invitation/observer</class>
                        <method>observeCustomerSaveBefore</method>
                    </enterprise_invitation>
                </observers>
            </customer_save_before>
            <controller_action_predispatch_customer_account_create>
                <observers>
                    <enterprise_invitation>
                        <type>singleton</type>
                        <class>enterprise_invitation/observer</class>
                        <method>observeCustomerRegistration</method>
                    </enterprise_invitation>
                </observers>
            </controller_action_predispatch_customer_account_create>
        </events>
    </frontend>
    <default>
        <enterprise_invitation>
            <email>
                <identity>general</identity>
                <template>invitation_email_template</template>
            </email>
            <general>
                <registration_use_inviter_group>1</registration_use_inviter_group>
                <registration_required_invitation>1</registration_required_invitation>
                <max_invitation_amount_per_send>5</max_invitation_amount_per_send>
                <allow_customer_message>1</allow_customer_message>
            </general>
        </enterprise_invitation>
    </default>
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                           <enterprise_invitation />
                                    </children>
                                </config>
                            </children>
                        </system>
                       </children>
                </admin>
            </resources>
         </acl>
    </adminhtml>
</config>