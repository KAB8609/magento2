<logging>
    <enterprise_invitation translate="label">
        <label>Customer Invitations</label>
        <events>
            <adminhtml_invitation_view>
                <action>view</action>
            </adminhtml_invitation_view>

            <adminhtml_invitation_save>
                <action>save</action>
                <model>enterprise_invitation/invitation</model>
                <model_save_after>enterprise_invitation/observer::loggingInvitationSaveAfter</model_save_after>
            </adminhtml_invitation_save>

            <adminhtml_invitation_massCancel>
                <action>massCancel</action>
                <post_dispatch>enterprise_invitation/observer::postDispatchLoggingInvitationMassCancel</post_dispatch>
            </adminhtml_invitation_massCancel>
        </events>
    </enterprise_invitation>
</logging>
