<logging>
  <actions>
    <invitation_view>
      <event>invitations</event>
      <action>view</action>
    </invitation_view>

    <invitation_save>
      <event>invitations</event>
      <action>save</action>
      <model>Enterprise_Invitation_Model_Invitation</model>
      <after-save-handler>enterprise_logging/observer::invitationaftersave</after-save-handler>
    </invitation_save>

    <invitation_cancel>
      <event>invitations</event>
      <action>cancel</action>
      <handler>cancelinvitation</handler>
      <skip-action>invitation_view</skip-action>
    </invitation_cancel>
  </actions>

  <labels>
      <list>
          <invitations>Invitations</invitations>
      </list>
  </labels>
</logging>
