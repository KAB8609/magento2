<div class="entry-edit">
    <div class="entry-edit-head">
        <h4 class="icon-head head-shipping-method"><?php echo Mage::helper('Enterprise_Rma_Helper_Data')->__('Create Shipping Label') ?></h4>
    </div>
    <div class="fieldset">
        <div class="hor-scroll" style="min-height: 300px; height: 300px;">
            <div class="entry-edit">
                <div class="entry-edit-head">
                    <h4 class="icon-head head-shipping-method"><?php echo Mage::helper('Enterprise_Rma_Helper_Data')->__('Shipping Information') ?></h4>
                </div>
                <div class="fieldset">
                    <div class="hor-scroll">
                    <?php if ($this->getShippingMethods()): ?>
                        <?php $carrier = false; ?>
                        <div id="checkout-shipping-method-load"><dl class="sp-methods">
                        <?php foreach ($this->getShippingMethods() as $method): ?>
                            <?php if ($method->getCode() == $method->getCarrier().'_error'): ?>
                                <?php continue; ?>
                            <?php endif; ?>
                            <?php if ($carrier != $method->getCarrier()): ?>
                                <?php if ($carrier): ?>
                                    </ul>
                                </dd>
                                <?php endif ;?>
                                <dt class="option-label">
                                    <strong>
                                        <?php echo $method->getCarrierTitle(); ?>
                                    </strong>
                                </dt>
                                <dd>
                                    <ul>
                                    <?php $carrier = $method->getCarrier(); ?>
                            <?php endif; ?>
                            <li>
                                <input name="shipping_method" type="radio" value="<?php echo $method->getCode() ?>" id="s_method_<?php echo $method->getCode() ?>" class="radio" />
                                <div style="display:none;" id="h_method_<?php echo $method->getCode() ?>"><?php echo $this->jsonData($method); ?></div>
                                <label for="s_method_<?php echo $method->getCode() ?>">
                                    <?php echo $method->getMethodTitle() ?>
                                    <strong class="price"><?php echo $this->getShippingPrice($method->getPrice()) ?></strong>
                                </label>
                            </li>
                        <?php endforeach; ?>
                        <?php if ($carrier): ?>
                                </ul>
                            </dd>
                        <?php endif; ?>
                        </dl>
                    </div>
                    <?php else: ?>
                        <?php echo Mage::helper('Enterprise_Rma_Helper_Data')->__('No authorized items or allowed shipping methods') ?>
                    <?php endif; ?>
                    </div>
                </div>
            </div>
        </div>
        <div class="a-right" style="padding-top:10px;">
            <button id="get-shipping-method-cancel-button" class="scalable" type="button"><span><?php echo $this->__('Cancel') ?></span></button>
            <button disabled="disabled" id="get-shipping-method-ok-button" class="scalable disabled" type="button"><span><?php echo $this->__('OK') ?></span></button>
        </div>
    </div>
