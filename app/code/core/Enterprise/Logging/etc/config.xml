<config>
    <modules>
        <Enterprise_Logging>
            <version>1.11.0.0</version>
        </Enterprise_Logging>
    </modules>
    <global>
        <resources>
            <enterprise_logging_setup>
                <setup>
                    <module>Enterprise_Logging</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
            </enterprise_logging_setup>
        </resources>
        <logging_actions>
            <view translate="label">
                <label>View</label>
            </view>
            <save translate="label">
                <label>Save</label>
            </save>
            <delete translate="label">
                <label>Delete</label>
            </delete>
            <massDelete translate="label">
                <label>Mass Delete</label>
            </massDelete>
            <export translate="label">
                <label>Export</label>
            </export>
            <import translate="label">
                <label>Import</label>
            </import>
            <edit translate="label">
                <label>Edit</label>
            </edit>
            <massUpdate translate="label">
                <label>Mass Update</label>
            </massUpdate>
            <move translate="label">
                <label>Move</label>
            </move>
            <edit translate="label">
                <label>Edit</label>
            </edit>
            <new translate="label">
                <label>New</label>
            </new>
            <forgotpassword translate="label">
                <label>Forgot Password</label>
            </forgotpassword>
            <global_search translate="label">
                <label>Global Search</label>
            </global_search>
            <apply translate="label">
                <label>Apply</label>
            </apply>
            <reorder translate="label">
                <label>Reorder</label>
            </reorder>
            <print translate="label">
                <label>Print</label>
            </print>
            <email translate="label">
                <label>Email</label>
            </email>
            <run translate="label">
                <label>Run</label>
            </run>
            <rollback translate="label">
                <label>Rollback</label>
            </rollback>
            <reindex_process translate="label">
                <label>Reindex Process</label>
            </reindex_process>
            <clean translate="label">
                <label>Clean</label>
            </clean>
            <flush translate="label">
                <label>Flush</label>
            </flush>
            <fetch translate="label">
                <label>Fetch</label>
            </fetch>
            <updateProfile translate="label">
                <label>Update Profile</label>
            </updateProfile>
            <updateState translate="label">
                <label>Update State</label>
            </updateState>
            <login translate="label">
                <label>Login</label>
            </login>
        </logging_actions>
    </global>
    <adminhtml>
        <events>
            <controller_action_predispatch>
                <observers>
                    <enterprise_logging>
                        <class>Enterprise_Logging_Model_Observer</class>
                        <method>controllerPredispatch</method>
                    </enterprise_logging>
                </observers>
            </controller_action_predispatch>
            <controller_action_postdispatch_adminhtml>
                <observers>
                    <enterprise_logging>
                        <class>Enterprise_Logging_Model_Observer</class>
                        <method>controllerPostdispatch</method>
                    </enterprise_logging>
                </observers>
            </controller_action_postdispatch_adminhtml>
            <model_save_after>
                <observers>
                    <enterprise_logging>
                        <class>Enterprise_Logging_Model_Observer</class>
                        <method>modelSaveAfter</method>
                    </enterprise_logging>
                </observers>
            </model_save_after>
            <model_delete_after>
                <observers>
                    <enterprise_logging>
                        <class>Enterprise_Logging_Model_Observer</class>
                        <method>modelDeleteAfter</method>
                    </enterprise_logging>
                </observers>
            </model_delete_after>
            <model_load_after>
                <observers>
                    <enterprise_logging>
                        <class>Enterprise_Logging_Model_Observer</class>
                        <method>modelLoadAfter</method>
                    </enterprise_logging>
                </observers>
            </model_load_after>
            <admin_session_user_login_success>
                <observers>
                    <enterprise_logging>
                        <class>Enterprise_Logging_Model_Observer</class>
                        <method>adminSessionLoginSuccess</method>
                    </enterprise_logging>
                </observers>
            </admin_session_user_login_success>
            <admin_session_user_login_failed>
                <observers>
                    <enterprise_logging>
                        <class>Enterprise_Logging_Model_Observer</class>
                        <method>adminSessionLoginFailed</method>
                    </enterprise_logging>
                </observers>
            </admin_session_user_login_failed>
        </events>
        <layout>
            <updates>
                <enterprise_logging module="Enterprise_Logging">
                    <file>layout.xml</file>
                </enterprise_logging>
            </updates>
        </layout>
        <translate>
            <modules>
                <Enterprise_Logging>
                    <files>
                        <default>Enterprise_Logging.csv</default>
                    </files>
                </Enterprise_Logging>
            </modules>
        </translate>
        <enterprise>
            <logging>
                <skip_fields>updated_at,form_key</skip_fields>
            </logging>
        </enterprise>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Enterprise_Logging before="Mage_Adminhtml">Enterprise_Logging_Adminhtml</Enterprise_Logging>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <default>
        <system>
            <rotation translate="frequency">
                <frequency>1</frequency>
                <lifetime>60</lifetime>
            </rotation>
        </system>
    </default>
    <crontab>
        <jobs>
            <enterprise_logging_rotate_logs>
                <schedule>
                    <cron_expr>1 2 * * *</cron_expr>
                </schedule>
                <run>
                    <model>Enterprise_Logging_Model_Observer::rotateLogs</model>
                </run>
            </enterprise_logging_rotate_logs>
        </jobs>
    </crontab>
</config>
