<config>
    <modules>
        <Enterprise_Logging>
            <version>0.1.9</version>
        </Enterprise_Logging>
    </modules>
    <global>
        <models>
            <enterprise_logging_mysql4>
                <class>Enterprise_Logging_Model_Mysql4</class>
                <entities>
                    <event>
                        <table>enterprise_logging_event</table>
                    </event>
                </entities>
            </enterprise_logging_mysql4>
            <enterprise_logging>
                <class>Enterprise_Logging_Model</class>
                <resourceModel>enterprise_logging_mysql4</resourceModel>
            </enterprise_logging>
        </models>
        <blocks>
            <enterprise_logging>
                <class>Enterprise_Logging_Block</class>
            </enterprise_logging>
        </blocks>
        <helpers>
            <enterprise_logging>
                <class>Enterprise_Logging_Helper</class>
            </enterprise_logging>
        </helpers>
        <resources>
            <enterprise_logging_setup>
                <setup>
                    <module>Enterprise_Logging</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </enterprise_logging_setup>
            <enterprise_logging_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </enterprise_logging_write>
            <enterprise_logging_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </enterprise_logging_read>
        </resources>
    </global>
    <adminhtml>
        <events>
            <controller_action_predispatch>
                <observers>
                    <enterprise_logging>
                        <class>enterprise_logging/observer</class>
                        <method>controllerPredispatch</method>
                    </enterprise_logging>
                </observers>
            </controller_action_predispatch>

            <controller_action_postdispatch_adminhtml>
                <observers>
                    <enterprise_logging>
                        <class>enterprise_logging/observer</class>
                        <method>controllerPostdispatch</method>
                    </enterprise_logging>
                </observers>
            </controller_action_postdispatch_adminhtml>

            <model_save_after>
                <observers>
                    <enterprise_logging>
                        <class>enterprise_logging/observer</class>
                        <method>modelSaveAfter</method>
                    </enterprise_logging>
                </observers>
            </model_save_after>

            <admin_session_user_login_success>
                <observers>
                    <enterprise_logging>
                        <class>enterprise_logging/observer</class>
                        <method>adminSessionLoginSuccess</method>
                    </enterprise_logging>
                </observers>
            </admin_session_user_login_success>

            <admin_session_user_login_failed>
                <observers>
                    <enterprise_logging>
                        <class>enterprise_logging/observer</class>
                        <method>adminSessionLoginFailed</method>
                    </enterprise_logging>
                </observers>
            </admin_session_user_login_failed>
        </events>
        <menu>
            <system>
                <children>
                    <enterprise_logging translate="title" module="enterprise_logging">
                        <title>Admin Actions Log</title>
                        <sort_order>71</sort_order>
                        <depends><module>Enterprise_Logging</module></depends>
                        <children>
                            <events>
                                <title>Report</title>
                                <sort_order>1</sort_order>
                                <action>adminhtml/logging</action>
                                <depends><module>Enterprise_Logging</module></depends>
                            </events>
                            <backups translate="title">
                                <title>Archive</title>
                                <sort_order>2</sort_order>
                                <action>adminhtml/logging/archive</action>
                                <depends><module>Enterprise_Logging</module></depends>
                            </backups>
                        </children>
                    </enterprise_logging>
                </children>
            </system>
        </menu>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <logging translate="title" module="enterprise_logging">
                                            <title>Logging</title>
                                        </logging>
                                    </children>
                                </config>
                                <logging translate="title" module="enterprise_logging">
                                    <title>Admin Logging</title>
                                </logging>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <events>
                    <file>enterprise/logging.xml</file>
                </events>
            </updates>
        </layout>
        <translate>
            <modules>
                <Enterprise_Logging>
                    <files>
                        <default>Enterprise_Logging.csv</default>
                    </files>
                </Enterprise_Logging>
            </modules>
        </translate>
    </adminhtml>

    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Enterprise_Logging before="Mage_Adminhtml">Enterprise_Logging_Adminhtml</Enterprise_Logging>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    <default>
        <system>
            <rotation translate="frequency">
                <frequency>1</frequency>
                <lifetime>60</lifetime>
            </rotation>
        </system>
    </default>

    <crontab>
        <jobs>
            <enterprise_logging_rotate_logs>
                <schedule><cron_expr>1 2 * * *</cron_expr></schedule>
                <run><model>enterprise_logging/observer::rotateLogs</model></run>
            </enterprise_logging_rotate_logs>
        </jobs>
    </crontab>

</config>
