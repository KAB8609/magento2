<config>
    <modules>
        <Enterprise_Logging>
             <version>0.0.1</version>
        </Enterprise_Logging>
    </modules>
    <global>
        <models>
        </models>
        <blocks>
          <logging>
            <class>Enterprise_Logging_Block</class>
          </logging>
        </blocks>
        <helpers>
        </helpers>
        <resources>
            <logging_setup>
                <setup>
                    <module>Enterprise_Logging</module>
                    <class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </logging_setup>
            <logging_write>
                <use>core_write</use>
            </logging_write>
            <logging_read>
                <use>core_read</use>
            </logging_read>
        </resources>
    </global>
    <adminhtml>
        <events>
        </events>
        <menu>
          <system>
            <children>
              <logging translate="title">
                 <title>Admin Logging</title>
                 <sort_order>21</sort_order>
                 <children>
                   <logs translate="title">
                     <title>Events</title>
                     <sort_order>10</sort_order>
                     <action>logging/events</action>
                   </logs>
                   <configuration>
                     <title>Configuration</title>
                     <sort_order>20</sort_order>
                     <action>logging/configuration</action>
                   </configuration>
                 </children>
              </logging>
            </children>
          </system>
        </menu>
    </adminhtml>
    <enterprise>
      <logging>
        <events>
          <products>
            <code>10</code>
            <actions>
              <action>view</action>
              <action>delete</action>
              <action>save</action>
            </actions>
          </products>
        </events>
      </logging>
    </enterprise>
    <admin>
        <routers>
            <logging>
                <use>admin</use>
                <args>
                  <modules>
                    <logging>Enterprise_Logging</logging>
                  </modules>
                  <frontName>logging</frontName>
                </args>
            </logging>
        </routers>
    </admin>

</config>
