<config>
    <modules>
        <Enterprise_Logging>
            <version>0.1.7</version>
        </Enterprise_Logging>
    </modules>
    <global>
        <models>
            <enterprise_logging_mysql4>
                <class>Enterprise_Logging_Model_Mysql4</class>
                <entities>
                    <event>
                        <table>enterprise_logging_event</table>
                    </event>
                </entities>
            </enterprise_logging_mysql4>
            <enterprise_logging>
                <class>Enterprise_Logging_Model</class>
                <resourceModel>enterprise_logging_mysql4</resourceModel>
            </enterprise_logging>
        </models>
        <blocks>
            <enterprise_logging>
                <class>Enterprise_Logging_Block</class>
            </enterprise_logging>
        </blocks>
        <helpers>
            <enterprise_logging>
                <class>Enterprise_Logging_Helper</class>
            </enterprise_logging>
        </helpers>
        <resources>
            <enterprise_logging_setup>
                <setup>
                    <module>Enterprise_Logging</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </enterprise_logging_setup>
            <enterprise_logging_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </enterprise_logging_write>
            <enterprise_logging_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </enterprise_logging_read>
        </resources>
    </global>
    <adminhtml>
        <events>
            <controller_action_predispatch>
                <observers>
                    <enterprise_logging>
                        <class>enterprise_logging/observer</class>
                        <method>controllerPredispatch</method>
                    </enterprise_logging>
                </observers>
            </controller_action_predispatch>

            <controller_action_postdispatch_adminhtml>
                <observers>
                    <enterprise_logging>
                        <class>enterprise_logging/observer</class>
                        <method>controllerPostdispatch</method>
                    </enterprise_logging>
                </observers>
            </controller_action_postdispatch_adminhtml>

            <model_save_after>
                <observers>
                    <enterprise_logging>
                        <class>enterprise_logging/observer</class>
                        <method>modelSaveAfter</method>
                    </enterprise_logging>
                </observers>
            </model_save_after>

            <admin_session_user_login_success>
                <observers>
                    <enterprise_logging>
                        <class>enterprise_logging/observer</class>
                        <method>adminSessionLoginSuccess</method>
                    </enterprise_logging>
                </observers>
            </admin_session_user_login_success>

            <admin_session_user_login_failed>
                <observers>
                    <enterprise_logging>
                        <class>enterprise_logging/observer</class>
                        <method>adminSessionLoginFailed</method>
                    </enterprise_logging>
                </observers>
            </admin_session_user_login_failed>
        </events>
        <menu>
            <system>
                <children>
                    <enterprise_logging translate="title" module="enterprise_logging">
                        <title>Admin Actions Log</title>
                        <sort_order>71</sort_order>
                        <depends><module>Enterprise_Logging</module></depends>
                        <children>
                            <events>
                                <title>Report</title>
                                <sort_order>1</sort_order>
                                <action>adminhtml/events</action>
                                <depends><module>Enterprise_Logging</module></depends>
                            </events>
                            <backups translate="title">
                                <title>Archive</title>
                                <sort_order>2</sort_order>
                                <action>adminhtml/events/log</action>
                                <depends><module>Enterprise_Logging</module></depends>
                            </backups>
                        </children>
                    </enterprise_logging>
                </children>
            </system>
        </menu>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <logging translate="title" module="enterprise_logging">
                                            <title>Logging</title>
                                        </logging>
                                    </children>
                                </config>
                                <logging translate="title" module="enterprise_logging">
                                    <title>Admin Logging</title>
                                </logging>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>

        <layout>
            <updates>
                <events>
                    <file>enterprise/logging.xml</file>
                </events>
            </updates>
        </layout>
        <enterprise>
            <logging>
                <frequency>
                    <daily translate="label" module="enterprise_logging">>
                        <label>Daily</label>
                        <value>1</value>
                    </daily>
                    <weekly translate="label" module="enterprise_logging">
                        <label>Weekly</label>
                        <value>7</value>
                    </weekly>
                    <monthly translate="label" module="enterprise_logging">
                        <label>Monthly</label>
                        <value>30</value>
                    </monthly>
                </frequency>
                <lifetime>
                    <oneday translate="label" module="enterprise_logging">
                        <label>One Day</label>
                        <value>1</value>
                    </oneday>
                    <week translate="label" module="enterprise_logging">
                        <label>One Week</label>
                        <value>7</value>
                    </week>
                    <month translate="label" module="enterprise_logging">
                        <label>30 days</label>
                        <value>30</value>
                    </month>
                    <twomonth translate="label" module="enterprise_logging">
                        <label>60 days</label>
                        <value>60</value>
                    </twomonth>
                    <quartal translate="label" module="enterprise_logging">
                        <label>90 days</label>
                        <value>90</value>
                    </quartal>
                </lifetime>
            </logging>
        </enterprise>
        <translate>
            <modules>
                <Enterprise_Logging>
                    <files>
                        <default>Enterprise_Logging.csv</default>
                    </files>
                </Enterprise_Logging>
            </modules>
        </translate>
    </adminhtml>

    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Enterprise_Logging before="Mage_Adminhtml">Enterprise_Logging_Adminhtml</Enterprise_Logging>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    <default>
        <admin>
            <enterprise_logging>
                <admin_login>1</admin_login>
                <adminhtml_permission_roles>1</adminhtml_permission_roles>
                <adminhtml_permission_users>1</adminhtml_permission_users>
                <adminhtml_system_account>1</adminhtml_system_account>
                <adminhtml_system_config>1</adminhtml_system_config>
                <adminhtml_system_store_groups>1</adminhtml_system_store_groups>
                <adminhtml_system_stores>1</adminhtml_system_stores>
                <adminhtml_system_websites>1</adminhtml_system_websites>
                <api_roles>1</api_roles>
                <api_users>1</api_users>
                <catalog_attributes>1</catalog_attributes>
                <catalog_attributesets>1</catalog_attributesets>
                <catalog_categories>1</catalog_categories>
                <catalog_products>1</catalog_products>
                <catalogrule>1</catalogrule>
                <catalogsearch>1</catalogsearch>
                <cms_blocks>1</cms_blocks>
                <cms_pages>1</cms_pages>
                <core_urlrewrites>1</core_urlrewrites>
                <customer_groups>1</customer_groups>
                <customer>1</customer>
                <enterprise_logging>1</enterprise_logging>
                <newsletter_problem>1</newsletter_problem>
                <newsletter_queue>1</newsletter_queue>
                <newsletter_subscribers>1</newsletter_subscribers>
                <newsletter_templates>1</newsletter_templates>
                <poll>1</poll>
                <rating>1</rating>
                <reports>1</reports>
                <review>1</review>
                <sales_creditmemos>1</sales_creditmemos>
                <sales_invoices>1</sales_invoices>
                <sales_order_status>1</sales_order_status>
                <sales_orders>1</sales_orders>
                <sales_shipments>1</sales_shipments>
                <salesrule>1</salesrule>
                <tag>1</tag>
                <tax_customer_tax_classes>1</tax_customer_tax_classes>
                <tax_product_tax_classes>1</tax_product_tax_classes>
                <tax_rates>1</tax_rates>
                <tax_rules>1</tax_rules>
            </enterprise_logging>
        </admin>
        <system>
            <rotation translate="frequency">
                <frequency>Daily</frequency>
                <lifetime>60</lifetime>
            </rotation>
        </system>
    </default>

    <crontab>
        <jobs>
            <enterprise_logging_rotate_logs>
                <schedule><cron_expr>1 2 * * *</cron_expr></schedule>
                <run><model>enterprise_logging/observer::rotateLogs</model></run>
            </enterprise_logging_rotate_logs>
        </jobs>
    </crontab>

</config>
