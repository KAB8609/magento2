<config>
    <modules>
        <Enterprise_CustomerBalance>
             <version>0.0.7</version>
        </Enterprise_CustomerBalance>
    </modules>
    <global>
        <resources>
            <enterprise_customerbalance_setup>
                <setup>
                    <module>Enterprise_CustomerBalance</module>
                    <class>Enterprise_CustomerBalance_Model_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </enterprise_customerbalance_setup>
            <enterprise_customerbalance_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </enterprise_customerbalance_write>
            <enterprise_customerbalance_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </enterprise_customerbalance_read>
        </resources>
        <models>
            <enterprise_customerbalance>
                <class>Enterprise_CustomerBalance_Model</class>
                <resourceModel>enterprise_customerbalance_mysql4</resourceModel>
            </enterprise_customerbalance>
            <enterprise_customerbalance_mysql4>
                <class>Enterprise_CustomerBalance_Model_Mysql4</class>
                <entities>
                    <balance>
                        <table>enterprise_customerbalance</table>
                    </balance>
                    <balance_history>
                        <table>enterprise_customerbalance_history</table>
                    </balance_history>
                </entities>
            </enterprise_customerbalance_mysql4>
        </models>
        <blocks>
            <enterprise_customerbalance>
                <class>Enterprise_CustomerBalance_Block</class>
            </enterprise_customerbalance>
        </blocks>
        <helpers>
            <enterprise_customerbalance>
                <class>Enterprise_CustomerBalance_Helper</class>
            </enterprise_customerbalance>
        </helpers>
        <template>
            <email>
               <customer_enterprise_customerbalance_email_template translate="label" module="enterprise_customerbalance">
                   <label>Store Credit Update</label>
                   <file>enterprise/customerbalance_update.html</file>
                   <type>html</type>
               </customer_enterprise_customerbalance_email_template>
            </email>
        </template>
        <sales>
            <quote>
                <totals>
                    <customerbalance>
                        <class>enterprise_customerbalance/total_quote_customerbalance</class>
                        <after>subtotal,shipping,tax,discount</after>
                        <before>grand_total</before>
                    </customerbalance>
                </totals>
            </quote>

            <order_invoice>
                <totals>
                    <customerbalance>
                        <class>enterprise_customerbalance/total_invoice_customerbalance</class>
                    </customerbalance>
                </totals>
            </order_invoice>

            <order_creditmemo>
                <totals>
                    <customerbalance>
                        <class>enterprise_customerbalance/total_creditmemo_customerbalance</class>
                    </customerbalance>
                </totals>
            </order_creditmemo>
        </sales>
        <fieldsets>
            <sales_convert_quote_address>
                <base_customer_balance_amount><to_order>*</to_order></base_customer_balance_amount>
                <customer_balance_amount><to_order>*</to_order></customer_balance_amount>
            </sales_convert_quote_address>
        </fieldsets>
        <events>
            <adminhtml_customer_save_after>
                <observers>
                    <enterprise_customerbalance>
                        <class>enterprise_customerbalance/observer</class>
                        <method>customerSaveAfter</method>
                    </enterprise_customerbalance>
                </observers>
            </adminhtml_customer_save_after>
            <sales_quote_payment_import_data_before>
                <observers>
                    <enterprise_customerbalance>
                        <class>enterprise_customerbalance/observer</class>
                        <method>paymentDataImport</method>
                    </enterprise_customerbalance>
                </observers>
            </sales_quote_payment_import_data_before>
            <sales_order_place_after>
                <observers>
                    <enterprise_customerbalance_sales_order_place_after>
                        <type>singleton</type>
                        <class>enterprise_customerbalance/observer</class>
                        <method>processOrderPlace</method>
                    </enterprise_customerbalance_sales_order_place_after>
                </observers>
            </sales_order_place_after>
        </events>
    </global>
    <frontend>
        <translate>
            <modules>
                <Enterprise_CustomerBalance>
                    <files>
                        <default>Enterprise_CustomerBalance.csv</default>
                    </files>
                </Enterprise_CustomerBalance>
            </modules>
        </translate>
        <layout>
            <updates>
                <enterprise_customerbalance>
                    <file>customerbalance.xml</file>
                </enterprise_customerbalance>
            </updates>
        </layout>
        <routers>
            <enterprise_customerbalance>
                <use>standard</use>
                <args>
                    <module>Enterprise_CustomerBalance</module>
                    <frontName>storecredit</frontName>
                </args>
            </enterprise_customerbalance>
        </routers>
    </frontend>
    <admin>
         <routers>
            <adminhtml>
                <args>
                    <modules>
                        <customerbalance before="Mage_Adminhtml">Enterprise_CustomerBalance_Adminhtml</customerbalance>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <customerbalance>
                    <file>enterprise/customerbalance.xml</file>
                </customerbalance>
            </updates>
        </layout>
        <events>
            <adminhtml_customer_prepare_save>
                <observers>
                    <enterprise_customerbalance>
                        <class>enterprise_customerbalance/observer</class>
                        <method>prepareCustomerBalanceSave</method>
                    </enterprise_customerbalance>
                </observers>
            </adminhtml_customer_prepare_save>
        </events>
    </adminhtml>
    <default>
        <customer>
            <enterprise_customerbalance>
                <email_template>customer_enterprise_customerbalance_email_template</email_template>
                <email_identity>general</email_identity>
                <show_history>1</show_history>
            </enterprise_customerbalance>
        </customer>
        <sales>
            <totals_sort>
                <customerbalance>95</customerbalance>
            </totals_sort>
        </sales>
    </default>
</config>
