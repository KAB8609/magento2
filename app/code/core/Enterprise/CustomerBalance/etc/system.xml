<config>
    <sections>
        <customer translate="label">
            <groups>
                <enterprise_customerbalance translate="label">
                    <label>Store Credit Options</label>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <sort_order>80</sort_order>
                    <fields>
                        <is_enabled translate="label">
                            <label>Enable Store Credit Functionality</label>
                            <frontend_type>select</frontend_type>
                            <source_model>Mage_Adminhtml_Model_System_Config_Source_Yesno</source_model>
                            <backend_model>Mage_Adminhtml_Model_System_Config_Backend_Cache</backend_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </is_enabled>
                        <show_history translate="label">
                            <label>Show Store Credit History to Customers</label>
                            <frontend_type>select</frontend_type>
                            <source_model>Mage_Adminhtml_Model_System_Config_Source_Yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </show_history>
                        <refund_automatically translate="label">
                            <label>Refund Store Credit Automatically</label>
                            <frontend_type>select</frontend_type>
                            <source_model>Mage_Adminhtml_Model_System_Config_Source_Yesno</source_model>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </refund_automatically>
                        <email_identity translate="label">
                            <label>Store Credit Update Email Sender</label>
                            <frontend_type>select</frontend_type>
                            <source_model>Mage_Adminhtml_Model_System_Config_Source_Email_Identity</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </email_identity>
                        <email_template translate="label">
                            <label>Store Credit Update Email Template</label>
                            <frontend_type>select</frontend_type>
                            <source_model>Mage_Adminhtml_Model_System_Config_Source_Email_Template</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </email_template>
                    </fields>
                </enterprise_customerbalance>
            </groups>
        </customer>
        <sales>
            <groups>
                <totals_sort>
                    <fields>
                        <customerbalance module="Enterprise_CustomerBalance" translate="label">
                            <label>Store Credit</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </customerbalance>
                    </fields>
                </totals_sort>
            </groups>
        </sales>
    </sections>
</config>
