<config>
    <modules>
        <Enterprise_Tag>
            <version>1.0.0.0</version>
            <active>false</active>
            <codePool>core</codePool>
            <depends>
                <Mage_Tag/>
                <Enterprise_Reward/>
            </depends>
        </Enterprise_Tag>
    </modules>
    <frontend>
        <layout>
            <updates>
                <enterprise_tag module="Enterprise_Tag">
                    <file>layout.xml</file>
                </enterprise_tag>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <cache>
            <dependency>
                <change>
                    <tag>Mage_Tag_Model_Tag</tag>
                </change>
                <delete>
                    <tag>Mage_Tag_Model_Tag</tag>
                </delete>
            </dependency>
        </cache>
        <events>
            <tag_save_commit_after>
                <observers>
                    <update_reward_points>
                        <class>Enterprise_Tag_Model_Observer</class>
                        <method>updateRewardPointsWhenTagSubmit</method>
                    </update_reward_points>
                </observers>
            </tag_save_commit_after>
        </events>
    </adminhtml>
</config>
