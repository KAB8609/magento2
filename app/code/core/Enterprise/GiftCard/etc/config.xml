<config>
    <modules>
        <Enterprise_GiftCard>
             <version>0.0.1</version>
        </Enterprise_GiftCard>
    </modules>
    <global>
        <resources>
            <enterprise_giftcard_setup>
                <setup>
                    <module>Enterprise_GiftCard</module>
                    <class>Mage_Eav_Model_Entity_Setup</class>
                </setup>

                <connection>
                    <use>core_setup</use>
                </connection>
            </enterprise_giftcard_setup>

            <enterprise_giftcard_write>
                <use>core_write</use>
            </enterprise_giftcard_write>

            <enterprise_giftcard_read>
                <use>core_read</use>
            </enterprise_giftcard_read>
        </resources>

        <models>
            <enterprise_giftcard>
                <class>Enterprise_GiftCard_Model</class>
                <resourceModel>enterprise_giftcard_mysql4</resourceModel>
            </enterprise_giftcard>

            <enterprise_giftcard_mysql4>
                <class>Enterprise_GiftCard_Model_Mysql4</class>
            </enterprise_giftcard_mysql4>
        </models>

        <blocks>
            <enterprise_giftcard>
                <class>Enterprise_GiftCard_Block</class>
            </enterprise_giftcard>
        </blocks>

        <helpers>
            <enterprise_giftcard>
                <class>Enterprise_GiftCard_Helper</class>
            </enterprise_giftcard>
        </helpers>

        <catalog>
            <product>
                <type>
                    <giftcard translate="label" module="enterprise_giftcard">
                        <label>Gift Card</label>
                        <model>enterprise_giftcard/catalog_product_type_giftcard</model>
                        <composite>0</composite>
                    </giftcard>
                </type>
            </product>
        </catalog>
    </global>
</config>
