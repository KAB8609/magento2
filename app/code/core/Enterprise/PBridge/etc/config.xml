<config>
    <modules>
        <Enterprise_PBridge>
            <version>1.8.0.0.0</version>
        </Enterprise_PBridge>
    </modules>
    <global>
        <models>
            <enterprise_pbridge>
                <class>Enterprise_PBridge_Model</class>
                <!-- <resourceModel>enterprise_pbridge_mysql4</resourceModel> -->
            </enterprise_pbridge>
        </models>
        <blocks>
            <enterprise_pbridge>
                <class>Enterprise_PBridge_Block</class>
            </enterprise_pbridge>
        </blocks>
        <helpers>
            <enterprise_pbridge>
                <class>Enterprise_PBridge_Helper</class>
            </enterprise_pbridge>
        </helpers>
        <events>
            <payment_method_is_active>
                <observers>
                    <enterprise_pbridge>
                        <class>enterprise_pbridge/observer</class>
                        <method>isPaymentMethodAvailable</method>
                    </enterprise_pbridge>
                </observers>
            </payment_method_is_active>
            <sales_quote_payment_import_data_before>
                <observers>
                    <enterprise_pbridge>
                        <class>enterprise_pbridge/observer</class>
                        <method>initPaymentMethod</method>
                    </enterprise_pbridge>
                </observers>
            </sales_quote_payment_import_data_before>
        </events>
    </global>
    <frontend>
        <routers>
            <enterprise_pbridge>
                <use>standard</use>
                <args>
                    <module>Enterprise_PBridge</module>
                    <frontName>enterprise_pbridge</frontName>
                </args>
            </enterprise_pbridge>
        </routers>
        <translate>
            <modules>
                <Enterprise_PBridge>
                    <files>
                        <default>Enterprise_PBridge.csv</default>
                    </files>
                </Enterprise_PBridge>
            </modules>
        </translate>
        <layout>
            <updates>
                <enterprise_pbridge>
                    <file>pbridge.xml</file>
                </enterprise_pbridge>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <layout>
            <updates>
                <enterprise_pbridge>
                    <file>enterprise/pbridge.xml</file>
                </enterprise_pbridge>
            </updates>
        </layout>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Enterprise_PBridge after="Mage_Adminhtml">Enterprise_PBridge_Adminhtml</Enterprise_PBridge>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <default>
        <payment>
            <pbridge translate="title" module="enterprise_pbridge">
                <model>enterprise_pbridge/payment_method_pbridge</model>
                <title>Payment Bridge</title>
                <debug>0</debug>
            </pbridge>
        </payment>
    </default>
</config>
