<config>
    <system>
        <section id="wishlist">
            <group id="general">
                <field id="multiple_enabled" translate="label" module="Enterprise_Wishlist" type="select" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable Multiple Wishlists</label>
                    <source_model>Mage_Backend_Model_Config_Source_Yesno</source_model>
                    <depends>
                        <field id="active">1</field>
                    </depends>
                </field>
                <field id="multiple_wishlist_number" translate="label comment" module="Enterprise_Wishlist" type="text" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Number of Multiple Wishlists</label>
                    <depends>
                        <field id="active">1</field>
                        <field id="multiple_enabled">1</field>
                    </depends>
                    <comment>Note: The number of multiple wishlists should be equal or more than 2.</comment>
                    <frontend_class>required-entry validate-number-range number-range-2-100000</frontend_class>
                </field>
            </group>
            <group id="wishlist_link" translate="label">
                <label>My Wishlists Link</label>
                <field id="use_qty" translate="label">
                    <label>Display Wishlists Summary</label>
                </field>
            </group>
        </section>
    </system>
</config>