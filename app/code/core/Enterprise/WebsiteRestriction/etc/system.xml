<config>
    <sections>
        <general>
            <groups>
                <restriction>
                    <label>Website Restrictions</label>
                    <sort_order>50</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <is_active translate="label">
                            <sort_order>10</sort_order>
                            <label>Access Restriction</label>
                            <frontend_type>select</frontend_type>
                            <source_model>Mage_Backend_Model_Config_Source_Yesno</source_model>
                            <backend_model>Enterprise_WebsiteRestriction_Model_System_Config_Backend_Active</backend_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </is_active>
                        <mode translate="label">
                            <sort_order>20</sort_order>
                            <label>Restriction Mode</label>
                            <frontend_type>select</frontend_type>
                            <source_model>Enterprise_WebsiteRestriction_Model_System_Config_Source_Modes</source_model>
                            <backend_model>Enterprise_WebsiteRestriction_Model_System_Config_Backend_Active</backend_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </mode>
                        <http_redirect translate="label comment">
                            <sort_order>30</sort_order>
                            <label>Startup Page</label>
                            <comment>Applicable only in "Private Sales" mode.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>Enterprise_WebsiteRestriction_Model_System_Config_Source_Redirect</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </http_redirect>
                        <cms_page translate="label">
                            <sort_order>40</sort_order>
                            <label>Landing Page</label>
                            <frontend_type>select</frontend_type>
                            <source_model>Mage_Cms_Model_Config_Source_Page</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </cms_page>
                        <http_status translate="label comment">
                            <sort_order>50</sort_order>
                            <label>HTTP Response</label>
                            <comment>Applicable only if restriction mode is "Website Closed". Landing page is rendered as raw HTML.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>Enterprise_WebsiteRestriction_Model_System_Config_Source_Http</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </http_status>
                    </fields>
                </restriction>
            </groups>
        </general>
    </sections>
</config>
