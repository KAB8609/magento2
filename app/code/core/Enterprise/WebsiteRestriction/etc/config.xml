<config>
    <modules>
        <Enterprise_WebsiteRestriction>
             <version>0.0.1</version>
        </Enterprise_WebsiteRestriction>
    </modules>
    <global>
        <models>
            <enterprise_websiterestriction>
                <class>Enterprise_WebsiteRestriction_Model</class>
                <resourceModel>enterprise_websiterestriction_mysql4</resourceModel>
            </enterprise_websiterestriction>
        </models>
        <blocks>
            <enterprise_websiterestriction>
                <class>Enterprise_WebsiteRestriction_Block</class>
            </enterprise_websiterestriction>
        </blocks>
        <helpers>
            <enterprise_websiterestriction>
                <class>Enterprise_WebsiteRestriction_Helper</class>
            </enterprise_websiterestriction>
        </helpers>
    </global>
    <frontend>
        <events>
            <controller_action_predispatch>
                <observers>
                    <enterprise_websiterestriction>
                        <class>enterprise_websiterestriction/observer</class>
                        <method>restrictWebsite</method>
                    </enterprise_websiterestriction>
                </observers>
            </controller_action_predispatch>
            <customer_registration_is_allowed>
                <observers>
                    <enterprise_websiterestriction>
                        <class>enterprise_websiterestriction/observer</class>
                        <method>restrictCustomersRegistration</method>
                    </enterprise_websiterestriction>
                </observers>
            </customer_registration_is_allowed>
        </events>
        <routers>
            <restriction>
                <use>standard</use>
                <args>
                    <module>Enterprise_WebsiteRestriction</module>
                    <frontName>restriction</frontName>
                </args>
            </restriction>
        </routers>
        <enterprise>
            <websiterestriction>
                <full_action_names>
                    <login>
                        <customer_account_login/>
                        <customer_account_loginPost/>
                        <customer_account_forgotpassword/>
                        <customer_account_forgotpasswordpost/>
                    </login>
                    <register>
                        <customer_account_create/>
                        <customer_account_createpost/>
                    </register>
                </full_action_names>
            </websiterestriction>
        </enterprise>
    </frontend>
    <default>
        <general>
            <restriction>
                <cms_page>no-route</cms_page>
            </restriction>
        </general>
    </default>
</config>
