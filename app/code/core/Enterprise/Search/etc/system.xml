<config>
   <sections>
        <catalog>
            <groups>
                <search_engine translate="label">
                    <label>Catalog Search Engine (Solr)</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <server_hostname translate="label">
                            <label>Server Hostname</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </server_hostname>
                        <server_port translate="label">
                            <label>Server Port</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </server_port>
                        <server_username translate="label">
                            <label>Server Username</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </server_username>
                        <server_password translate="label">
                            <label>Server Password</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </server_password>
                        <server_timeout translate="label">
                            <label>Server Timeout</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </server_timeout>
                        <server_path translate="label">
                            <label>Server Path</label>
                            <frontend_type>text</frontend_type>
                            <comment>without starting and trailing slashes</comment>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </server_path>
                        <use_language_fields translate="label">
                            <label>Enable using language fields</label>
                            <frontend_type>select</frontend_type>
                            <backend_model>enterprise_search/adminhtml_system_config_backend_language</backend_model>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </use_language_fields>
                    </fields>
                </search_engine>
            </groups>
        </catalog>
    </sections>
</config>
