<config>
    <modules>
        <Enterprise_Search>
             <version>1.8.0.0.0</version>
        </Enterprise_Search>
    </modules>

    <global>
        <models>
             <enterprise_search>
                <class>Enterprise_Search_Model</class>
                <resourceModel>enterprise_search_resource</resourceModel>
             </enterprise_search>

             <enterprise_search_resource>
                 <class>Enterprise_Search_Model_Resource</class>
             </enterprise_search_resource>
        </models>
        <helpers>
            <enterprise_search>
                <class>Enterprise_Search_Helper</class>
            </enterprise_search>
        </helpers>
        <blocks>
             <enterprise_search>
                <class>Enterprise_Search_Block</class>
             </enterprise_search>
        </blocks>
        <search>
            <engine>enterprise_search/engine</engine>
        </search>
    </global>

    <default>
        <catalog>
            <search_engine>
                <server_hostname>localhost</server_hostname>
                <server_port>8983</server_port>
                <server_username>admin</server_username>
                <server_timeout>15</server_timeout>
                <server_path>solr</server_path>
                <use_language_fields>0</use_language_fields>
            </search_engine>
        </catalog>
    </default>
</config>
