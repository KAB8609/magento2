<layout>
    <adminhtml_catalog_product_attribute_edit>
        <reference name="js">
            <block type="Enterprise_Search_Block_Adminhtml_Catalog_Attribute_Edit" template="js.phtml" />
        </reference>
    </adminhtml_catalog_product_attribute_edit>
    <adminhtml_catalog_search_edit>
        <reference name="content">
            <block type="Enterprise_Search_Block_Adminhtml_Search_Edit" name="related_grid_edit">
                <reference name="related_grid_edit">
                   <block type="Enterprise_Search_Block_Adminhtml_Search_Grid" name="search.edit.grid"/>
                </reference>
            </block>
            <block type="Mage_Adminhtml_Block_Widget_Grid_Serializer" name="related_grid_serializer">
                <reference name="related_grid_serializer">
                    <action method="initSerializerBlock">
                        <grid_block_name>search.edit.grid</grid_block_name>
                        <data_callback>_getSelectedQueries</data_callback>
                        <hidden_input_name>selected_queries_grid</hidden_input_name>
                        <reload_param_name>selected_queries_grid</reload_param_name>
                    </action>
                    <action method="setFormId"><value>edit_form</value></action>
                </reference>
            </block>
        </reference>
    </adminhtml_catalog_search_edit>
    <adminhtml_catalog_search_relatedgrid>
        <remove name="root" />
        <block type="Enterprise_Search_Block_Adminhtml_Search_Grid" name="relatedGrid" output="1" />
    </adminhtml_catalog_search_relatedgrid>
</layout>
