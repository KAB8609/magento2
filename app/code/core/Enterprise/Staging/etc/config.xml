<config>
    <modules>
        <Enterprise_Staging>
             <version>0.1.9</version>
        </Enterprise_Staging>
    </modules>
    <global>
        <models>
            <enterprise_staging>
                <class>Enterprise_Staging_Model</class>
                <resourceModel>enterprise_staging_mysql4</resourceModel>
            </enterprise_staging>
            <enterprise_staging_mysql4>
                <class>Enterprise_Staging_Model_Mysql4</class>
                <entities>
                    <staging><table>enterprise_staging</table></staging>
                    <staging_item><table>enterprise_staging_item</table></staging_item>
                    <staging_event><table>enterprise_staging_event</table></staging_event>
                    <staging_backup><table>enterprise_staging_backup</table></staging_backup>
                    <staging_rollback><table>enterprise_staging_rollback</table></staging_rollback>
                </entities>
            </enterprise_staging_mysql4>
        </models>
        <resources>
            <enterprise_staging_setup>
                <setup>
                    <module>Enterprise_Staging</module>
                    <class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </enterprise_staging_setup>
            <enterprise_staging_write>
              <connection>
                <use>core_write</use>
              </connection>
            </enterprise_staging_write>
            <enterprise_staging_read>
              <connection>
                <use>core_read</use>
              </connection>
            </enterprise_staging_read>
        </resources>
        <blocks>
            <enterprise_staging>
                <class>Enterprise_Staging_Block</class>
            </enterprise_staging>
        </blocks>
        <helpers>
            <enterprise_staging>
                <class>Enterprise_Staging_Helper</class>
            </enterprise_staging>
        </helpers>
        <enterprise>
            <staging>
                <global_staging_table_prefix>s</global_staging_table_prefix>
                <global_staging_backup_table_prefix>b</global_staging_backup_table_prefix>
                <use_storage_method>table_prefix</use_storage_method>
                <storage_method>
                    <new_db></new_db>
                    <table_prefix></table_prefix>
                </storage_method>
                <type>
                    <website>
                        <code>website</code>
                        <label>Website</label>
                        <models>
                            <mapper>enterprise_staging/staging_mapper_website</mapper>
                        </models>
                    </website>
                </type>
                <staging_items>
                    <config_data>
                        <module>Mage_Core</module>
                        <model>core</model>
                        <label>System Configuration</label>
                        <resource_adapter>enterprise_staging/adapter_item_config</resource_adapter>
                        <entities>
                            <config_data />
                        </entities>
                        <ignore_nodes>
                            <unsecure_urls><path>web/unsecure</path></unsecure_urls>
                            <secure_urls><path>web/secure</path></secure_urls>
                            <paypal_accounts><path>paypal</path></paypal_accounts>
                            <payment_accounts><path>payment</path></payment_accounts>
                            <google_api><path>google</path></google_api>
                            <developer><path>dev</path></developer>
                        </ignore_nodes>
                    </config_data>
                    <category>
                        <module>Mage_Catalog</module>
                        <model>catalog</model>
                        <label>Catalog Categories</label>
                        <resource_adapter>enterprise_staging/adapter_item_category</resource_adapter>
                    </category>
                    <product>
                        <module>Mage_Catalog</module>
                        <model>catalog</model>
                        <label>Catalog Products</label>
                        <extends>
                            <bundle>
                                <module>Mage_Bundle</module>
                                <model>bundle</model>
                                <label>Bundles</label>
                                <entities>
                                    <option_value />
                                </entities>
                            </bundle>
                            <downloadable>
                                <module>Mage_Downloadable</module>
                                <model>downloadable</model>
                                <label>Downloadable</label>
                                <entities>
                                    <link_title />
                                    <sample_title />
                                </entities>
                            </downloadable>
                            <enterprise_giftcard>
                                <module>Enterprise_GiftCard</module>
                                <model>enterprise_giftcard</model>
                                <label>Gift Cards</label>
                                <entities>
                                    <code />
                                </entities>
                            </enterprise_giftcard>
                            <cataloginventory>
                                <module>Mage_CatalogInventory</module>
                                <model>cataloginventory</model>
                                <label>Catalog Inventory</label>
                            </cataloginventory>
                            <catalogindex>
                                <module>Mage_CatalogIndex</module>
                                <model>catalogindex</model>
                                <label>Catalog Index</label>
                            </catalogindex>
                            <catalogsearch>
                                <module>Mage_CatalogSearch</module>
                                <model>catalogsearch</model>
                                <label>Catalog Search</label>
                            </catalogsearch>
                            <core_url_rewrite>
                                <module>Mage_Core</module>
                                <model>core</model>
                                <label>URL Rewrites</label>
                                <entities>
                                    <url_rewrite />
                                </entities>
                            </core_url_rewrite>
                        </extends>
                    </product>
                    <cms_page>
                        <module>Mage_Cms</module>
                        <model>cms</model>
                        <label>CMS Pages</label>
                        <entities>
                            <page_store />
                        </entities>
                    </cms_page>
                    <cms_block>
                        <module>Mage_Cms</module>
                        <model>cms</model>
                        <label>CMS Blocks</label>
                        <entities>
                            <block_store />
                        </entities>
                    </cms_block>
                    <salesrule>
                        <module>Mage_SalesRule</module>
                        <model>salesrule</model>
                        <label>Shopping Cart Price Rules</label>
                    </salesrule>
                    <catalogrule>
                        <module>Mage_CatalogRule</module>
                        <model>catalogrule</model>
                        <label>Catalog Price Rules</label>
                    </catalogrule>
                    <poll>
                        <module>Mage_Poll</module>
                        <model>poll</model>
                        <label>Polls</label>
                        <entities>
                            <poll_store />
                        </entities>
                    </poll>
                    <checkout>
                        <module>Mage_Checkout</module>
                        <model>checkout</model>
                        <label>Terms And Conditions</label>
                        <entities>
                            <agreement_store />
                        </entities>
                    </checkout>
                    <customer>
                        <module>Mage_Customer</module>
                        <model>customer</model>
                        <is_backend>1</is_backend>
                        <label>Customers</label>
                        <ignore_tables>
                            <customer_group />
                        </ignore_tables>
                        <use_storage_method>table_prefix</use_storage_method>
                    </customer>
                    <wishlist>
                        <module>Mage_Wishlist</module>
                        <model>wishlist</model>
                        <is_backend>1</is_backend>
                        <label>Wishlist</label>
                        <use_storage_method>table_prefix</use_storage_method>
                    </wishlist>
                    <tag>
                        <module>Mage_Tag</module>
                        <model>tag</model>
                        <is_backend>1</is_backend>
                        <label>Tags</label>
                        <use_storage_method>table_prefix</use_storage_method>
                    </tag>
                    <sales>
                        <module>Mage_Sales</module>
                        <model>sales</model>
                        <is_backend>1</is_backend>
                        <label>Sales</label>
                        <use_storage_method>table_prefix</use_storage_method>
                    </sales>
                </staging_items>
                <staging_website_code_suffix></staging_website_code_suffix>
                <state>
                    <processing translate="label">
                        <label>Processing</label>
                        <statuses>
                            <processing />
                        </statuses>
                    </processing>
                    <complete translate="label">
                        <label>Complete</label>
                        <statuses>
                            <complete />
                        </statuses>
                    </complete>
                    <created translate="label">
                        <label>Created</label>
                        <statuses>
                            <created />
                        </statuses>
                    </created>
                    <updated translate="label">
                        <label>Updated</label>
                        <statuses>
                            <updated />
                        </statuses>
                    </updated>
                    <backup_created translate="label">
                        <label>Backup Created</label>
                        <statuses>
                            <backup_created />
                        </statuses>
                    </backup_created>
                    <merged translate="label">
                        <label>Merged</label>
                        <statuses>
                            <merged />
                        </statuses>
                    </merged>
                    <holded translate="label">
                        <label>On Hold</label>
                        <statuses>
                            <holded />
                        </statuses>
                    </holded>
                    <restored translate="label">
                        <label>Restored</label>
                        <statuses>
                            <restored />
                        </statuses>
                    </restored>
                    <fail translate="label">
                        <label>Fail</label>
                        <statuses>
                            <fail />
                        </statuses>
                    </fail>
                </state>
                <status>
                    <processing translate="label"><label>Staging Website Processing</label></processing>
                    <complete translate="label"><label>Complete</label></complete>

                    <created translate="label"><label>Staging Website create</label></created>
                    <updated translate="label"><label>Staging Website update</label></updated>
                    <backup_created translate="label"><label>Master Website Backup create</label></backup_created>
                    <merged translate="label"><label>Staging Website merge</label></merged>
                    <holded translate="label"><label>Staging Website Hold for Scheduled Merge</label></holded>
                    <restored translate="label"><label>Master Website restore</label></restored>
                    <fail translate="label"><label>Fail</label></fail>
                </status>
                <visibility>
                    <not_accessible translate="label"><label>Not accessible</label></not_accessible>
                    <accessible translate="label"><label>Accessible</label></accessible>
                    <require_http_auth translate="label"><label>Require Http Auth</label></require_http_auth>
                </visibility>
                <processes>
                    <create translate="label"><label>Create</label></create>
                    <update translate="label"><label>Update</label></update>
                    <merge translate="label"><label>Merge</label></merge>
                    <backup translate="label"><label>Backup</label></backup>
                    <rollback translate="label"><label>Rollback</label></rollback>
                    <checkfrontend translate="label"><label>Check Frontend</label></checkfrontend>
                </processes>
            </staging>
        </enterprise>
        <events>
            <controller_front_init_before>
                <observers>
                    <enterprise_staging>
                        <type>singleton</type>
                        <class>enterprise_staging/observer</class>
                        <method>beforeFrontendInit</method>
                    </enterprise_staging>
                </observers>
            </controller_front_init_before>
        </events>
    </global>
    <adminhtml>
        <menu>
          <system>
            <children>
              <enterprise_staging translate="title">
                 <title>Staging Environments</title>
                 <sort_order>21</sort_order>
                 <action>adminhtml/staging_manage</action>
                 <children>
                    <staging_grid>
                        <title>Staging Websites</title>
                         <sort_order>10</sort_order>
                         <action>adminhtml/staging_manage/index</action>
                    </staging_grid>
                    <staging_backup>
                        <title>Backups</title>
                         <sort_order>20</sort_order>
                         <action>adminhtml/staging_backup/index</action>
                    </staging_backup>
                 </children>
              </enterprise_staging>
            </children>
          </system>
        </menu>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <content_staging>
                                            <title>Content Staging</title>
                                            <sort_order>201</sort_order>
                                        </content_staging>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
          </resources>
        </acl>
        <layout>
            <updates>
                <enterprise_staging>
                    <file>enterprise/staging.xml</file>
                </enterprise_staging>
            </updates>
        </layout>
        <events>
            <website_delete_after>
                <observers>
                    <enterprise_staging_delete_website>
                        <type>singleton</type>
                        <class>enterprise_staging/observer</class>
                        <method>deleteWebsite</method>
                    </enterprise_staging_delete_website>
                </observers>
            </website_delete_after>
        </events>
    </adminhtml>
    <frontend>
        <routers>
            <staging>
                <use>standard</use>
                <args>
                    <module>Enterprise_Staging</module>
                    <frontName>staging</frontName>
                </args>
            </staging>
        </routers>
        <events>
            <resource_get_tablename>
                <observers>
                    <enterprise_staging_get_table_name>
                        <type>singleton</type>
                        <class>enterprise_staging/observer</class>
                        <method>getTableName</method>
                    </enterprise_staging_get_table_name>
                </observers>
            </resource_get_tablename>
            <websiterestriction_frontend>
                <observers>
                    <enterprise_staging>
                        <type>singleton</type>
                        <class>enterprise_staging/observer</class>
                        <method>takeFrontendDown</method>
                    </enterprise_staging>
                </observers>
            </websiterestriction_frontend>
        </events>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Enterprise_Staging before="Mage_Adminhtml">Enterprise_Staging_Adminhtml</Enterprise_Staging>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <crontab>
        <jobs>
            <enterprise_staging_automates>
                <schedule><cron_expr>* * * * *</cron_expr></schedule>
                <run><model>enterprise_staging/observer::automates</model></run>
            </enterprise_staging_automates>
        </jobs>
    </crontab>
    <default>
        <general>
            <content_staging>
                <create_entry_point>1</create_entry_point>
                <entry_points_folder_name>staging</entry_points_folder_name>
                <block_frontend>0</block_frontend>
                <block_frontend_stub>service-unavialable</block_frontend_stub>
            </content_staging>
        </general>
        <admin>
            <logsenabled>
                <staging>1</staging>
            </logsenabled>
        </admin>
    </default>
</config>
