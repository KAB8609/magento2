<config>
    <modules>
        <Enterprise_Staging>
             <version>0.1.4</version>
        </Enterprise_Staging>
    </modules>
    <global>
        <models>
            <enterprise_staging>
                <class>Enterprise_Staging_Model</class>
                <resourceModel>enterprise_staging_mysql4</resourceModel>
            </enterprise_staging>
            <enterprise_staging_mysql4>
                <class>Enterprise_Staging_Model_Mysql4</class>
                <entities>
                    <staging><table>enterprise_staging</table></staging>
                    <staging_item><table>enterprise_staging_item</table></staging_item>
                    <staging_website><table>enterprise_staging_website</table></staging_website>
                    <staging_store_group><table>enterprise_staging_store_group</table></staging_store_group>
                    <staging_store><table>enterprise_staging_store</table></staging_store>
                    <staging_event><table>enterprise_staging_event</table></staging_event>
                    <staging_backup><table>enterprise_staging_backup</table></staging_backup>
                    <staging_rollback><table>enterprise_staging_rollback</table></staging_rollback>
                    <staging_event_history><table>enterprise_staging_event_history</table></staging_event_history>
                    <dataset><table>enterprise_staging_dataset</table></dataset>
                    <dataset_item><table>enterprise_staging_dataset_item</table></dataset_item>
                </entities>
            </enterprise_staging_mysql4>
        </models>
        <resources>
            <enterprise_staging_setup>
                <setup>
                    <module>Enterprise_Staging</module>
                    <class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </enterprise_staging_setup>
            <enterprise_staging_write>
              <connection>
                <use>core_write</use>
              </connection>
            </enterprise_staging_write>
            <enterprise_staging_read>
              <connection>
                <use>core_read</use>
              </connection>
            </enterprise_staging_read>
        </resources>

        <blocks>
            <enterprise_staging>
                <class>Enterprise_Staging_Block</class>
            </enterprise_staging>
        </blocks>

        <helpers>
            <enterprise_staging>
                <class>Enterprise_Staging_Helper</class>
            </enterprise_staging>
        </helpers>

        <enterprise>
            <staging>
                <global_staging_table_prefix>st</global_staging_table_prefix>
                <global_staging_backup_table_prefix>bk</global_staging_backup_table_prefix>
                <use_storage_method>table_prefix</use_storage_method>
                <storage_method>
                    <new_db></new_db>
                    <table_prefix></table_prefix>
                </storage_method>

                <use_backup_method>table_prefix</use_backup_method>
                <backup_method>
                    <new_db></new_db>
                    <table_prefix></table_prefix>
                    <basic></basic>
                </backup_method>

                <type>
                    <website>
                        <code>website</code>
                        <label>Website</label>
                        <models>
                            <type>enterprise_staging/staging_type_website</type>
                            <mapper>enterprise_staging/staging_mapper_website</mapper>
                            <adapter>enterprise_staging/staging_adapter_website</adapter>
                            <state>enterprise_staging/staging_state_website</state>
                        </models>
                        <scenaries>
                            <create>
                                <prepare>
                                    <code>prepare</code>
                                    <label>Prepare Staging for Create</label>
                                    <model>enterprise_staging/staging_state_website_prepare</model>
                                    <next>create</next>
                                </prepare>
                                <create>
                                    <code>create</code>
                                    <label>Staging Website Create</label>
                                    <status>
                                        <new translate="label"><label>Staging Website Created</label></new>
                                        <processing translate="label"><label>Staging Website creating in progress</label></processing>
                                        <complete translate="label"><label>Staging Website create successfuly complete</label></complete>
                                        <holded translate="label"><label>Staging Website create scheduled</label></holded>
                                    </status>
                                    <model>enterprise_staging/staging_state_website_create</model>
                                    <after>
                                        <save_event>
                                            <type>model</type>
                                            <class>enterprise_staging/staging_event</class>
                                            <method>saveFromState</method>
                                        </save_event>
                                    </after>
                                    <next>check</next>
                                </create>
                                <check>
                                    <code>check</code>
                                    <label>Check Staging After Create Process</label>
                                    <model>enterprise_staging/staging_state_website_check</model>
                                    <next>0</next>
                                </check>
                            </create>
                            <backup>
                                <prepare>
                                    <code>prepare</code>
                                    <label>Prepare Database for Backup</label>
                                    <model>enterprise_staging/staging_state_website_prepare</model>
                                    <next>backup</next>
                                </prepare>
                                <backup>
                                    <code>backup</code>
                                    <label>Database Backup</label>
                                    <status>
                                        <processing translate="label"><label>Backup in progress</label></processing>
                                        <complete translate="label"><label>Backup successfuly complete</label></complete>
                                        <holded translate="label"><label>Backup scheduled</label></holded>
                                    </status>
                                    <model>enterprise_staging/staging_state_website_backup</model>
                                    <before>
                                        <save_event>
                                            <type>model</type>
                                            <class>enterprise_staging/staging_event</class>
                                            <method>saveFromState</method>
                                        </save_event>
                                    </before>
                                    <after>
                                        <save_event>
                                            <type>model</type>
                                            <class>enterprise_staging/staging_event</class>
                                            <method>saveFromState</method>
                                        </save_event>
                                        <save_backup>
                                            <type>singleton</type>
                                            <class>enterprise_staging/staging_backup</class>
                                            <method>saveFromState</method>
                                        </save_backup>
                                    </after>
                                    <next>check</next>
                                </backup>
                                <check>
                                    <code>check</code>
                                    <label>Check Staging After Create Process</label>
                                    <model>enterprise_staging/staging_state_website_check</model>
                                    <next>0</next>
                                </check>
                            </backup>
                            <merge>
                                <prepare>
                                    <code>prepare</code>
                                    <label>Prepare Staging for Merge</label>
                                    <model>enterprise_staging/staging_state_website_prepare</model>
                                    <next>merge</next>
                                </prepare>
                                <merge>
                                    <code>merge</code>
                                    <label>Merge</label>
                                    <status>
                                        <processing translate="label"><label>Merge in progress</label></processing>
                                        <complete translate="label"><label>Merge successfuly complete</label></complete>
                                        <holded translate="label"><label>Merge scheduled</label></holded>
                                    </status>
                                    <model>enterprise_staging/staging_state_website_merge</model>
                                    <before>
                                        <save_event>
                                            <type>model</type>
                                            <class>enterprise_staging/staging_event</class>
                                            <method>saveFromState</method>
                                        </save_event>
                                    </before>
                                    <after>
                                        <save_event>
                                            <type>model</type>
                                            <class>enterprise_staging/staging_event</class>
                                            <method>saveFromState</method>
                                        </save_event>
                                    </after>
                                    <next>check</next>
                                </merge>
                                <check>
                                    <code>check</code>
                                    <label>Check Staging After Create Process</label>
                                    <model>enterprise_staging/staging_state_website_check</model>
                                    <next>0</next>
                                </check>
                            </merge>
                            <rollback>
                                <prepare>
                                    <code>prepare</code>
                                    <label>Prepare Staging for Rollback</label>
                                    <model>enterprise_staging/staging_state_website_prepare</model>
                                    <next>rollback</next>
                                </prepare>
                                <rollback translate="label">
                                    <code>rollback</code>
                                    <label>Rollback</label>
                                    <status>
                                        <processing translate="label"><label>Rollback in progress</label></processing>
                                        <complete translate="label"><label>Rollback successfuly complete</label></complete>
                                        <holded translate="label"><label>Rolback scheduled</label></holded>
                                    </status>
                                    <model>enterprise_staging/staging_state_website_rollback</model>
                                    <before>
                                        <save_event>
                                            <type>model</type>
                                            <class>enterprise_staging/staging_event</class>
                                            <method>saveFromState</method>
                                        </save_event>
                                    </before>
                                    <after>
                                        <save_event>
                                            <type>model</type>
                                            <class>enterprise_staging/staging_event</class>
                                            <method>saveFromState</method>
                                        </save_event>
                                        <save_rollback>
                                            <type>singleton</type>
                                            <class>enterprise_staging/staging_rollback</class>
                                            <method>saveFromState</method>
                                        </save_rollback>
                                    </after>
                                    <next>check</next>
                                </rollback>
                                <check>
                                    <code>check</code>
                                    <label>Check Staging After Create Process</label>
                                    <model>enterprise_staging/staging_state_website_check</model>
                                    <next>0</next>
                                </check>
                            </rollback>
                        </scenaries>
                        <scenaries_status>
                            <new translate="label"><label>New</label></new>
                            <processing translate="label"><label>In progress</label></processing>
                            <complete translate="label"><label>successfuly finished</label></complete>
                            <holded translate="label"><label>successfuly scheduled</label></holded>
                        </scenaries_status>
                    </website>
                </type>

                <staging_items>
                    <system_config>
                        <code>system_config</code>
                        <model>core</model>
                        <label>System Configuration</label>
                        <adapter>enterprise_staging/staging_adapter_item_config</adapter>
                        <entities>
                            <config_data />
                        </entities>
                        <ignore_nodes>
                            <unsecure_urls><path>web/unsecure</path></unsecure_urls>
                            <secure_urls><path>web/secure</path></secure_urls>
                            <paypal_accounts><path>paypal</path></paypal_accounts>
                            <payment_accounts><path>payment</path></payment_accounts>
                            <google_api><path>google</path></google_api>
                            <developer><path>dev</path></developer>
                        </ignore_nodes>
                    </system_config>
                    <catalog_category>
                        <code>catalog_category</code>
                        <module>Mage_Catalog</module>
                        <model>catalog</model>
                        <label>Catalog Categories</label>
                        <adapter>enterprise_staging/staging_adapter_item_category</adapter>
                    </catalog_category>
                    <catalog_product>
                        <code>catalog_product</code>
                        <module>Mage_Catalog</module>
                        <model>catalog</model>
                        <is_backend></is_backend>
                        <label>Catalog Products</label>
                        <adapter>enterprise_staging/staging_adapter_item_product</adapter>
                        <extends>
                            <bundle>
                                <code>bundle</code>
                                <module>Mage_Bundle</module>
                                <model>bundle</model>
                                <is_backend></is_backend>
                                <is_extend>1</is_extend>
                                <label>Bundles</label>
                                <adapter>enterprise_staging/staging_adapter_item_product</adapter>
                                <entities>
                                    <option_value />
                                </entities>
                            </bundle>
                            <downloadable>
                                <code>downloadable</code>
                                <module>Mage_Downloadable</module>
                                <model>downloadable</model>
                                <is_backend></is_backend>
                                <is_extend>1</is_extend>
                                <label>Downloadable</label>
                                <adapter>enterprise_staging/staging_adapter_item_product</adapter>
                                <entities>
                                    <link_title />
                                    <sample_title />
                                </entities>
                            </downloadable>
                            <enterprise_giftcard>
                                <code>enterprise_giftcard</code>
                                <module>Enterprise_GiftCard</module>
                                <model>enterprise_giftcard</model>
                                <is_backend></is_backend>
                                <is_extend>1</is_extend>
                                <label>Gift Cards</label>
                                <adapter>enterprise_staging/staging_adapter_item_product</adapter>
                                <entities>
                                    <code />
                                </entities>
                            </enterprise_giftcard>
                        </extends>
                    </catalog_product>
                    <cms_page>
                        <code>cms_page</code>
                        <module>Mage_Cms</module>
                        <model>cms</model>
                        <label>CMS Pages</label>
                        <adapter>enterprise_staging/staging_adapter_item_cms</adapter>
                        <entities>
                            <page_store />
                        </entities>
                    </cms_page>
                    <cms_block>
                        <code>cms_block</code>
                        <module>Mage_Cms</module>
                        <model>cms</model>
                        <label>CMS Blocks</label>
                        <adapter>enterprise_staging/staging_adapter_item_cms</adapter>
                        <entities>
                            <block_store />
                        </entities>
                    </cms_block>
                    <salesrule>
                        <code>salesrule</code>
                        <module>Mage_SalesRule</module>
                        <model>salesrule</model>
                        <label>Shopping Cart Price Rules</label>
                        <adapter>enterprise_staging/staging_adapter_item_salesrule</adapter>
                    </salesrule>
                    <catalogrule>
                        <code>catalogrule</code>
                        <module>Mage_CatalogRule</module>
                        <model>catalogrule</model>
                        <label>Catalog Price Rules</label>
                        <adapter>enterprise_staging/staging_adapter_item_catalogrule</adapter>
                    </catalogrule>
                    <poll>
                        <code>poll</code>
                        <module>Mage_Poll</module>
                        <model>poll</model>
                        <label>Polls</label>
                        <adapter>enterprise_staging/staging_adapter_item_poll</adapter>
                        <entities>
                            <poll_store />
                        </entities>
                    </poll>
                    <checkout>
                        <code>checkout</code>
                        <module>Mage_Checkout</module>
                        <model>checkout</model>
                        <label>Terms And Coditions</label>
                        <adapter>enterprise_staging/staging_adapter_item_checkout</adapter>
                        <entities>
                            <agreement_store />
                        </entities>
                    </checkout>
                    
                    <cataloginventory>
                        <code>cataloginventory</code>
                        <module>Mage_CatalogInventory</module>
                        <model>cataloginventory</model>
                        <is_backend>1</is_backend>
                        <label>Catalog Inventory</label>
                        <adapter>enterprise_staging/staging_adapter_item_cataloginventory</adapter>
                        <entities>
                            <cataloginventory_stock_item>
                                <table>cataloginventory_stock_item</table>
                            </cataloginventory_stock_item>
                        </entities>
                    </cataloginventory>
                    <catalogindex>
                        <code>catalogindex</code>
                        <module>Mage_CatalogIndex</module>
                        <model>catalogindex</model>
                        <is_backend>1</is_backend>
                        <label>Catalog Index</label>
                        <adapter>enterprise_staging/staging_adapter_item_catalogindex</adapter>
                        <use_storage_method>table_prefix</use_storage_method>
                    </catalogindex>
                    <catalogsearch>
                        <code>catalogsearch</code>
                        <module>Mage_CatalogSearch</module>
                        <model>catalogsearch</model>
                        <is_backend>1</is_backend>
                        <label>Catalog Search</label>
                        <adapter>enterprise_staging/staging_adapter_item_catalogsearch</adapter>
                        <use_storage_method>table_prefix</use_storage_method>
                    </catalogsearch>
                    
                    <sales>
                        <code>sales</code>
                        <module>Mage_Sales</module>
                        <model>sales</model>
                        <is_backend>1</is_backend>
                        <label>Sales</label>
                        <adapter>enterprise_staging/staging_adapter_item_sales</adapter>
                        <use_storage_method>table_prefix</use_storage_method>
                    </sales>
                    <customer>
                        <code>customer</code>
                        <module>Mage_Customer</module>
                        <model>customer</model>
                        <is_backend>1</is_backend>
                        <label>Customers</label>
                        <adapter>enterprise_staging/staging_adapter_item_customer</adapter>
                        <use_storage_method>table_prefix</use_storage_method>
                    </customer>
                    <customer_address>
                        <code>customer_address</code>
                        <module>Mage_Customer</module>
                        <model>customer</model>
                        <is_backend>1</is_backend>
                        <label>Customer Adresses</label>
                        <adapter>enterprise_staging/staging_adapter_item_customer</adapter>
                        <use_storage_method>table_prefix</use_storage_method>
                    </customer_address>
                </staging_items>
                <staging_website_code_suffix></staging_website_code_suffix>

                <state>
                    <new translate="label">
                        <label>New</label>
                        <statuses>
                            <new />
                        </statuses>
                    </new>
                    <processing translate="label">
                        <label>Processing</label>
                        <statuses>
                            <processing />
                        </statuses>
                    </processing>
                    <merged translate="label">
                        <label>Merged</label>
                        <statuses>
                            <merged />
                        </statuses>
                    </merged>
                    <complete translate="label">
                        <label>Complete</label>
                        <statuses>
                            <complete />
                        </statuses>
                    </complete>
                    <closed translate="label">
                        <label>Closed</label>
                        <statuses>
                            <closed />
                        </statuses>
                        <visible_on_front/>
                    </closed>
                    <canceled translate="label">
                        <label>Canceled</label>
                        <statuses>
                            <canceled />
                        </statuses>
                    </canceled>
                    <reverted translate="label">
                        <label>Reverted</label>
                        <statuses>
                            <reverted />
                            <posible_errors />
                        </statuses>
                    </reverted>
                    <broken translate="label">
                        <label>Broken</label>
                        <statuses>
                            <broken_while_process />
                            <broken_while_create />
                            <broken_while_merge />
                            <broken_while_restore />
                        </statuses>
                    </broken>
                    <restored translate="label">
                        <label>Restored</label>
                        <statuses>
                            <restored />
                            <restored_whith_errors />
                        </statuses>
                    </restored>
                    <holded translate="label">
                        <label>On Hold</label>
                        <statuses>
                            <holded />
                        </statuses>
                    </holded>
                </state>
                <status>
                    <new translate="label"><label>New</label></new>
                    <processing translate="label"><label>Processing</label></processing>
                    <merged translate="label"><label>Merged</label></merged>
                    <complete translate="label"><label>Complete</label></complete>
                    <closed translate="label"><label>Closed</label></closed>
                    <canceled translate="label"><label>Canceled</label></canceled>
                    <reverted translate="label"><label>Reverted</label></reverted>
                    <broken translate="label"><label>Broken</label></broken>
                    <restored translate="label"><label>Restored</label></restored>
                    <holded translate="label"><label>On Hold</label></holded>
                </status>
                <visibility>
                    <not_accessible translate="label"><label>Not accessible</label></not_accessible>
                    <accessible translate="label"><label>Accessible</label></accessible>
                    <require_http_auth translate="label"><label>Require Http Auth</label></require_http_auth>
                </visibility>
            </staging>
        </enterprise>
    </global>
    <adminhtml>
        <menu>
          <system>
            <children>
              <enterprise_staging translate="title">
                 <title>Staging Environments</title>
                 <sort_order>21</sort_order>
                 <action>adminhtml/staging_manage</action>
                 <children>
                    <staging_grid>
                        <title>Staging Websites</title>
                         <sort_order>10</sort_order>
                         <action>adminhtml/staging_manage/index</action>
                    </staging_grid>
                    <staging_backup>
                        <title>Backups</title>
                         <sort_order>20</sort_order>
                         <action>adminhtml/staging_backup/index</action>
                    </staging_backup>
                 </children>
              </enterprise_staging>
            </children>
          </system>
        </menu>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <content_staging>
                                            <title>Content Staging</title>
                                            <sort_order>201</sort_order>
                                        </content_staging>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
          </resources>
        </acl>

        <layout>
            <updates>
                <enterprise_staging>
                    <file>enterprise/staging.xml</file>
                </enterprise_staging>
            </updates>
        </layout>
        <events>
            <website_delete_after>
                <observers>
                    <enterprise_staging_delete_website>
                        <type>singleton</type>
                        <class>enterprise_staging/observer</class>
                        <method>deleteWebsite</method>
                    </enterprise_staging_delete_website>
                </observers>
            </website_delete_after>
        </events>
    </adminhtml>
    <frontend>
        <routers>
            <staging>
                <use>standard</use>
                <args>
                    <module>Enterprise_Staging</module>
                    <frontName>staging</frontName>
                </args>
            </staging>
        </routers>
        <events>
            <resource_get_tablename>
                <observers>
                    <enterprise_staging_get_table_name>
                        <type>singleton</type>
                        <class>enterprise_staging/observer</class>
                        <method>getTableName</method>
                    </enterprise_staging_get_table_name>
                </observers>
            </resource_get_tablename>
            <websiterestriction_frontend>
                <observers>
                    <enterprise_staging>
                        <class>enterprise_staging/observer</class>
                        <method>takeFrontendDown</method>
                    </enterprise_staging>
                </observers>
            </websiterestriction_frontend>
            <controller_front_init_before>
                <observers>
                    <enterprise_staging_check_staging>
                        <type>singleton</type>
                        <class>enterprise_staging/observer</class>
                        <method>beforeFrontendInit</method>
                    </enterprise_staging_check_staging>
                </observers>
            </controller_front_init_before>
        </events>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Enterprise_Staging before="Mage_Adminhtml">Enterprise_Staging_Adminhtml</Enterprise_Staging>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    <crontab>
        <jobs>
            <enterprise_staging_automates>
                <schedule><cron_expr>* * * * *</cron_expr></schedule>
                <run><model>enterprise_staging/observer::automates</model></run>
            </enterprise_staging_automates>
        </jobs>
    </crontab>

    <default>
        <general>
            <content_staging>
                <entry_points_folder_name>staging</entry_points_folder_name>
                <block_frontend>0</block_frontend>
                <block_frontend_stub>service-unavialable</block_frontend_stub>
            </content_staging>
        </general>
    </default>
</config>
