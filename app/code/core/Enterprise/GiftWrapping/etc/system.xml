                            <frontend_type>select</frontend_type>
                            <source_model>Mage_Adminhtml_Model_System_Config_Source_Tax_Class_Product</source_model>
                            <sort_order>12</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </wrapping_tax_class>
                    </fields>
                </classes>
                <cart_display>
                    <fields>
                        <gift_wrapping translate="label" module="Enterprise_GiftWrapping">
                            <label>Display Gift Wrapping Prices</label>
                            <frontend_type>select</frontend_type>
                            <source_model>Mage_Tax_Model_System_Config_Source_Tax_Display_Type</source_model>
                            <sort_order>35</sort_order>
                            <show_in_default>1</show_in_default>
