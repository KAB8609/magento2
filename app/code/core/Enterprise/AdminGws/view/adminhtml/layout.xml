<layout>
    <!-- add gws multiselect to admin roles edit page -->
    <adminhtml_user_role_editrole>
        <reference name="adminhtml.user.tab.rolesedit">
            <block type="Enterprise_AdminGws_Block_Adminhtml_Permissions_Tab_Rolesedit_Gws" name="adminhtml.user.role.edit.gws" as="gws" template="permissions/rolesedit/gws.phtml"/>
        </reference>
    </adminhtml_user_role_editrole>

    <!-- override roles grid to add website/store columns -->
    <adminhtml_user_role_index>
        <reference name="adminhtml.user.role.index">
            <block type="Enterprise_AdminGws_Block_Adminhtml_Permissions_Grid_Role" name="adminhtml.user.role.grid" as="grid"/>
        </reference>
    </adminhtml_user_role_index>

    <!-- override roles grid to add website/store columns -->
    <adminhtml_user_role_rolegrid>
        <block type="Enterprise_AdminGws_Block_Adminhtml_Permissions_Grid_Role" name="adminhtml.user.role.grid" as="grid" output="1"/>
    </adminhtml_user_role_rolegrid>

    <adminhtml_user_role_editrolegrid>
        <block type="Enterprise_AdminGws_Block_Adminhtml_Permissions_Grid_Role" name="adminhtml.user.role.grid"/>
    </adminhtml_user_role_editrolegrid>
</layout>
