<layout>
    <!-- add gws multiselect to admin roles edit page -->
    <adminhtml_permissions_role_editrole>
        <reference name="adminhtml.permissions.tab.rolesedit">
            <block type="Enterprise_AdminGws_Block_Adminhtml_Permissions_Tab_Rolesedit_Gws" as="gws" template="permissions/rolesedit/gws.phtml"/>
        </reference>
    </adminhtml_permissions_role_editrole>

    <!-- override roles grid to add website/store columns -->
    <adminhtml_permissions_role_index>
        <reference name="adminhtml.permission.role.index">
            <action method="unsetChild"><alias>grid</alias></action>
            <block type="Enterprise_AdminGws_Block_Adminhtml_Permissions_Grid_Role" name="adminhtml.permission.role.grid" as="grid"/>
        </reference>
    </adminhtml_permissions_role_index>
    <adminhtml_permissions_role_rolegrid>
        <block type="Enterprise_AdminGws_Block_Adminhtml_Permissions_Grid_Role" name="adminhtml.permission.role.grid"/>
    </adminhtml_permissions_role_rolegrid>
</layout>
