<layout>
    <adminhtml_customer_formtype_index>
        <reference name="content">
            <block type="Enterprise_Customer_Block_Adminhtml_Customer_Formtype" name="enterprise_customer_formtype" />
        </reference>
    </adminhtml_customer_formtype_index>

    <adminhtml_customer_formtype_new>
        <reference name="content">
            <block type="Enterprise_Customer_Block_Adminhtml_Customer_Formtype_Edit" name="enterprise_customer_formtype_new" />
        </reference>
    </adminhtml_customer_formtype_new>

    <adminhtml_customer_formtype_edit>
        <reference name="head">
            <action method="setCanLoadExtJs"><flag>1</flag></action>
        </reference>
        <reference name="content">
            <block type="Enterprise_Customer_Block_Adminhtml_Customer_Formtype_Edit" name="enterprise_customer_formtype_edit" />
        </reference>
        <reference name="left">
            <block type="Enterprise_Customer_Block_Adminhtml_Customer_Formtype_Edit_Tabs" name="enterprise_customer_formtype_edit_tabs">
                <block type="Enterprise_Customer_Block_Adminhtml_Customer_Formtype_Edit_Tab_General" name="enterprise_customer_formtype_edit_tab_general"></block>
                <action method="addTab">
                    <name>enterprise_customer_formtype_edit_tab_general</name>
                    <block>enterprise_customer_formtype_edit_tab_general</block>
                </action>
                <block type="Enterprise_Customer_Block_Adminhtml_Customer_Formtype_Edit_Tab_Tree" name="enterprise_customer_formtype_edit_tab_tree" template="formtype/edit/tab/tree.phtml"></block>
                <action method="addTab">
                    <name>enterprise_customer_formtype_edit_tab_tree</name>
                    <block>enterprise_customer_formtype_edit_tab_tree</block>
                </action>
            </block>
        </reference>
    </adminhtml_customer_formtype_edit>

    <!-- shared scope (website) switcher -->
    <scope_switcher>
        <block type="Enterprise_Customer_Block_Adminhtml_Form_Renderer_Fieldset_Element" name="fieldset_element_renderer" template="form/renderer/fieldset/element.phtml" />
        <reference name="left">
            <block type="Mage_Adminhtml_Block_Store_Switcher" name="website_switcher" before="-" template="Enterprise_Customer::website/switcher.phtml">
                <action method="setStoreVarName"><value>website</value></action>
                <action method="setDefaultStoreName" translate="name"><name>Default Values</name></action>
            </block>
        </reference>
    </scope_switcher>

    <!-- customer attributes -->
    <adminhtml_customer_attribute_index>
        <reference name="content">
            <block type="Enterprise_Customer_Block_Adminhtml_Customer_Attribute" name="enterprise_customer_attribute" />
        </reference>
    </adminhtml_customer_attribute_index>

    <adminhtml_customer_attribute_edit>
        <update handle="scope_switcher"/>
        <reference name="content">
            <block type="Enterprise_Customer_Block_Adminhtml_Customer_Attribute_Edit" name="enterprise_customer_attribute_edit" />
        </reference>
        <reference name="left">
            <block type="Enterprise_Customer_Block_Adminhtml_Customer_Attribute_Edit_Tabs" name="enterprise_customer_attribute_edit_tabs">
                <block type="Enterprise_Customer_Block_Adminhtml_Customer_Attribute_Edit_Tab_Main" name="enterprise_customer_attribute_edit_tab_general" />
                <action method="addTab"><name>general</name><block>enterprise_customer_attribute_edit_tab_general</block></action>
                <block type="Enterprise_Customer_Block_Adminhtml_Customer_Attribute_Edit_Tab_Options" name="enterprise_customer_attribute_edit_tab_options" />
                <action method="addTab"><name>options</name><block>enterprise_customer_attribute_edit_tab_options</block></action>
            </block>
        </reference>
        <reference name="js">
            <block type="Enterprise_Customer_Block_Adminhtml_Customer_Attribute_Edit_Js" template="attribute/js.phtml" />
        </reference>
    </adminhtml_customer_attribute_edit>

    <adminhtml_customer_attribute_new>
        <remove name="website_switcher" />
    </adminhtml_customer_attribute_new>

    <!-- customer address attributes -->
    <adminhtml_customer_address_attribute_index>
        <reference name="content">
            <block type="Enterprise_Customer_Block_Adminhtml_Customer_Address_Attribute" name="enterprise_customer_address_attribute" />
        </reference>
    </adminhtml_customer_address_attribute_index>

    <adminhtml_customer_address_attribute_edit>
        <update handle="scope_switcher"/>
        <reference name="content">
            <block type="Enterprise_Customer_Block_Adminhtml_Customer_Address_Attribute_Edit" name="enterprise_customer_address_attribute_edit" />
        </reference>
        <reference name="left">
            <block type="Enterprise_Customer_Block_Adminhtml_Customer_Address_Attribute_Edit_Tabs" name="enterprise_customer_address_attribute_edit_tabs">
                <block type="Enterprise_Customer_Block_Adminhtml_Customer_Address_Attribute_Edit_Tab_General" name="enterprise_customer_address_attribute_edit_tab_general" />
                <action method="addTab"><name>general</name><block>enterprise_customer_address_attribute_edit_tab_general</block></action>
                <block type="Enterprise_Customer_Block_Adminhtml_Customer_Address_Attribute_Edit_Tab_Options" name="enterprise_customer_address_attribute_edit_tab_options" />
                <action method="addTab"><name>options</name><block>enterprise_customer_address_attribute_edit_tab_options</block></action>
            </block>
        </reference>
        <reference name="js">
            <block type="Enterprise_Customer_Block_Adminhtml_Customer_Attribute_Edit_Js" template="attribute/js.phtml" />
        </reference>
    </adminhtml_customer_address_attribute_edit>

    <adminhtml_customer_address_attribute_new>
        <remove name="website_switcher" />
    </adminhtml_customer_address_attribute_new>
</layout>
