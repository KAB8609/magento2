<config>
    <modules>
        <Enterprise_Customer>
             <version>0.1.0</version>
        </Enterprise_Customer>
    </modules>
    <global>
        <models>
            <enterprise_customer>
                <class>Enterprise_Customer_Model</class>
                <resourceModel>enterprise_customer_mysql4</resourceModel>
            </enterprise_customer>
            <enterprise_customer_mysql4>
                <class>Enterprise_Customer_Model_Mysql4</class>
                <entities>
                </entities>
            </enterprise_customer_mysql4>
        </models>
        <blocks>
            <enterprise_customer>
                <class>Enterprise_Customer_Block</class>
            </enterprise_customer>
        </blocks>
        <helpers>
            <enterprise_customer>
                <class>Enterprise_Customer_Helper</class>
            </enterprise_customer>
        </helpers>
        <resources>
            <enterprise_customer_setup>
                <setup>
                    <module>Enterprise_Customer</module>
                    <class>Enterprise_Customer_Model_Mysql4_Setup</class>
                </setup>
            </enterprise_customer_setup>
        </resources>
    </global>
    <adminhtml>
        <layout>
            <updates>
                <enterprise_customer>
                    <file>enterprise/customer.xml</file>
                </enterprise_customer>
            </updates>
        </layout>
        <events>
        </events>
        <translate>
            <modules>
                <Enterprise_Customer>
                     <files>
                          <default>Enterprise_Customer.csv</default>
                     </files>
                </Enterprise_Customer>
            </modules>
        </translate>
    </adminhtml>

    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <enterprise_customer before="Mage_Adminhtml">Enterprise_Customer_Adminhtml</enterprise_customer>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    <frontend>
        <layout>
            <updates>
                <enterprise_customer module="Enterprise_Customer">
                    <file>enterprise_customer.xml</file>
                </enterprise_customer>
            </updates>
        </layout>
    </frontend>
</config>
