<config>
    <modules>
        <Enterprise_Pbridge>
            <version>1.8.0.0.0</version>
        </Enterprise_Pbridge>
    </modules>
    <global>
        <events>
            <controller_action_predispatch>
                <observers>
                    <enterprise_pbridge>
                        <class>Enterprise_Pbridge_Model_Observer</class>
                        <method>addPrivacyHeader</method>
                    </enterprise_pbridge>
                </observers>
            </controller_action_predispatch>
            <payment_method_is_active>
                <observers>
                    <enterprise_pbridge>
                        <class>Enterprise_Pbridge_Model_Observer</class>
                        <method>isPaymentMethodAvailable</method>
                    </enterprise_pbridge>
                </observers>
            </payment_method_is_active>
        </events>
    </global>
    <frontend>
        <routers>
            <enterprise_pbridge>
                <use>standard</use>
                <args>
                    <module>Enterprise_Pbridge</module>
                    <frontName>enterprise_pbridge</frontName>
                </args>
            </enterprise_pbridge>
        </routers>
        <translate>
            <modules>
                <Enterprise_Pbridge>
                    <files>
                        <default>Enterprise_Pbridge.csv</default>
                    </files>
                </Enterprise_Pbridge>
            </modules>
        </translate>
        <layout>
            <updates>
                <enterprise_pbridge module="Enterprise_Pbridge">
                    <file>layout.xml</file>
                </enterprise_pbridge>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <layout>
            <updates>
                <enterprise_pbridge module="Enterprise_Pbridge">
                    <file>layout.xml</file>
                </enterprise_pbridge>
            </updates>
        </layout>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Enterprise_Pbridge after="Mage_Adminhtml">Enterprise_Pbridge_Adminhtml</Enterprise_Pbridge>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <default>
        <payment>
            <pbridge translate="title" module="Enterprise_Pbridge">
                <model>Enterprise_Pbridge_Model_Payment_Method_Pbridge</model>
                <title>Payment Bridge</title>
                <debug>0</debug>
            </pbridge>
            <pbridge_paypal_direct>
                <model>Enterprise_Pbridge_Model_Payment_Method_Paypal</model>
                <active>1</active>
            </pbridge_paypal_direct>
            <pbridge_paypaluk_direct>
                <model>Enterprise_Pbridge_Model_Payment_Method_Paypaluk</model>
                <active>1</active>
            </pbridge_paypaluk_direct>
            <pbridge_authorizenet>
                <model>Enterprise_Pbridge_Model_Payment_Method_Authorizenet</model>
                <enabled>1</enabled>
            </pbridge_authorizenet>
            <pbridge_verisign>
                <model>Enterprise_Pbridge_Model_Payment_Method_Payflow_Pro</model>
                <enabled>1</enabled>
            </pbridge_verisign>
            <pbridge_ogone_direct>
                <model>Enterprise_Pbridge_Model_Payment_Method_Ogone</model>
                <title>Ogone Direct Link</title>
                <userid backend_model="Mage_Adminhtml_Model_System_Config_Backend_Encrypted"/>
                <password backend_model="Mage_Adminhtml_Model_System_Config_Backend_Encrypted"/>
                <passphrase backend_model="Mage_Adminhtml_Model_System_Config_Backend_Encrypted"/>
                <payment_action>authorize</payment_action>
                <useccv>1</useccv>
            </pbridge_ogone_direct>
        </payment>
    </default>
</config>
