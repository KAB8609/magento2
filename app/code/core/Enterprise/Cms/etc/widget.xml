<config>
    <widgets>
        <cms_page_link translate="name description">
            <name>CMS Page Link</name>
            <description>Widget generates link to specified cms page</description>
            <type>enterprise_cms/widget_page_link</type>
            <parameters>
                <href translate="label">
                    <visible />
                    <required />
                    <label>Identifier</label>
                    <type>text</type>
                </href>
                <anchor_text translate="label">
                    <visible />
                    <label>Anchor Text</label>
                    <type>text</type>
                </anchor_text>
                <title translate="label">
                    <visible />
                    <label>Anchor Title</label>
                    <type>text</type>
                </title>
            </parameters>
        </cms_page_link>
        <cms_hierarchy_node translate="name description">
            <name>CMS Hierarchy Node</name>
            <description>Widget generates link to specified node in a hierarchy</description>
            <type>enterprise_cms/widget_node</type>
            <parameters>
                <node_id translate="label">
                    <label>CMS hierarchy node</label>
                    <visible />
                    <required />
                    <type>select</type>
                    <values>enterprise_cms/source_hierarchy_tree</values>
                </node_id>
                <anchor_text translate="label">
                    <visible />
                    <label>Anchor Text</label>
                    <type>text</type>
                </anchor_text>
                <title translate="label">
                    <visible />
                    <label>Anchor Title</label>
                    <type>text</type>
                </title>
            </parameters>
        </cms_hierarchy_node>
        <cms_pagination translate="name description">
            <name>Pagination, based on Hierarchy</name>
            <description>Renders paginated-navigation for specified tree</description>
            <type>enterprise_cms/widget_pagination</type>
            <parameters>
                <frame translate="label">
                    <visible />
                    <label>Frame</label>
                    <type>text</type>
                </frame>
                <jump translate="label">
                    <visible />
                    <label>Jump</label>
                    <type>text</type>
                </jump>
            </parameters>
        </cms_pagination>
        <cms_menu translate="name description">
            <name>Menu, based on Hierarchy</name>
            <description>Renders the specified tree, if the page is assigned to it, as a unified or ordered list</description>
            <type>enterprise_cms/widget_menu</type>
            <parameters>
                <up translate="label">
                    <visible />
                    <label>How many levels up</label>
                    <type>text</type>
                </up>
                <down translate="label">
                    <visible />
                    <label>How many levels down</label>
                    <type>text</type>
                </down>
                <ordered translate="label">
                    <visible />
                    <label>Whether to render ordered list instead</label>
                    <type>select</type>
                    <values>adminhtml/system_config_source_yesno</values>
                </ordered>
                <type translate="label">
                    <visible />
                    <label>List type</label>
                    <type>select</type>
                    <values>enterprise_cms/source_listtype</values>
                </type>
            </parameters>
        </cms_menu>
    </widgets>
</config>
