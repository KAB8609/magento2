<config>
    <widgets>
        <cms_hierarchy_node type="enterprise_cms/widget_node" translate="name description" module="enterprise_cms">
            <name>CMS Hierarchy Link</name>
            <description>Widget that generates Link to specified Node in a Hierarchy</description>
            <parameters>
                <node_id translate="label">
                    <label>Hierarchy Node</label>
                    <visible />
                    <required />
                    <type>
                        <element_type>label</element_type>
                        <element_helper>enterprise_cms/adminhtml_cms_hierarchy_widget_chooser</element_helper>
                    </type>
                    <sort_order>10</sort_order>
                </node_id>
                <anchor_text translate="label">
                    <visible />
                    <label>Anchor Text</label>
                    <type>text</type>
                </anchor_text>
                <title translate="label">
                    <visible />
                    <label>Anchor Title</label>
                    <type>text</type>
                </title>
            </parameters>
        </cms_hierarchy_node>
        <cms_pagination type="enterprise_cms/widget_pagination" translate="name description" module="enterprise_cms">
            <is_context>1</is_context>
            <name>Pagination based on Hierarchy</name>
            <description>Widget that generates Navigation for specified Hierarchy Tree</description>
            <parameters>
                <frame translate="label">
                    <visible />
                    <label>Frame</label>
                    <type>text</type>
                </frame>
                <jump translate="label">
                    <visible />
                    <label>Jump</label>
                    <type>text</type>
                </jump>
            </parameters>
        </cms_pagination>
        <cms_menu type="enterprise_cms/widget_menu" translate="name description" module="enterprise_cms">
            <is_context>1</is_context>
            <name>Menu based on Hierarchy</name>
            <description>Widget that generates Menu for Hierarchy as Unified or Ordered List</description>
            <parameters>
                <up translate="label">
                    <visible />
                    <value>0</value>
                    <label>How many levels up</label>
                    <type>text</type>
                </up>
                <down translate="label">
                    <visible />
                    <value>1</value>
                    <label>How many levels down</label>
                    <type>text</type>
                </down>
                <ordered translate="label">
                    <visible />
                    <value>1</value>
                    <label>Whether to render Ordered List instead</label>
                    <type>select</type>
                    <values>adminhtml/system_config_source_yesno</values>
                </ordered>
                <list_type translate="label">
                    <visible />
                    <label>List Type</label>
                    <type>select</type>
                    <values>enterprise_cms/source_listtype</values>
                </list_type>
            </parameters>
        </cms_menu>
    </widgets>
</config>
