<config>
    <sections>
        <cms>
            <groups>
                <hierarchy translate="label">
                    <label>CMS Page Hierarchy</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>200</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enable Hierarchy Functionality</label>
                            <frontend_type>select</frontend_type>
                            <source_model>Mage_Backend_Model_Config_Source_Yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </enabled>
                        <metadata_enabled translate="label">
                            <label>Enable Hierarchy Metadata</label>
                            <frontend_type>select</frontend_type>
                            <source_model>Mage_Backend_Model_Config_Source_Yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </metadata_enabled>
                        <menu_layout translate="label">
                            <label>Default Layout for Hierarchy Menu</label>
                            <frontend_type>select</frontend_type>
                            <source_model>Enterprise_Cms_Model_Source_Hierarchy_Menu_Layout</source_model>
                            <sort_order>25</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </menu_layout>
                    </fields>
                </hierarchy>
                <content translate="label">
