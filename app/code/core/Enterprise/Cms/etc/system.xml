<config>
    <sections>
        <cms>
            <groups>
                <page_revisions translate="label">
                    <label>CMS Page Revisions</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <revision_lifetime translate="label comment">
                            <label>Revision Lifetime (Days)</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>if empty or 0 no expiration</comment>
                        </revision_lifetime>
                        <minimum_number translate="label comment">
                            <label>Minimum Number of Revisions per Page</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>if empty or 0 unlimited</comment>
                        </minimum_number>
                    </fields>
                </page_revisions>
                <hierarchy translate="label">
                    <label>CMS Page Hierarchy</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>200</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enable Hierarchy Functionality</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </enabled>
                        <matadata_enabled translate="label">
                            <label>Enable Hierarchy Metadata</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </matadata_enabled>
                    </fields>
                </hierarchy>
            </groups>
        </cms>
    </sections>
</config>
