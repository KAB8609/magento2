<logging>
    <adminhtml_cms_hierarchy translate="label">
        <label>CMS Hierarchy</label>
        <actions>
            <adminhtml_cms_hierarchy_edit>
                <action>view</action>
            </adminhtml_cms_hierarchy_edit>

            <adminhtml_cms_hierarchy_save>
                <action>save</action>
	            <expected_models>
	                <enterprise_cms__hierarchy/>
	                <enterprise_cms__hierarchy_node/>
	            </expected_models>
            </adminhtml_cms_hierarchy_save>

            <adminhtml_cms_hierarchy_delete>
                <action>delete</action>
                <expected_models>
                    <enterprise_cms__hierarchy/>
                </expected_models>
            </adminhtml_cms_hierarchy_delete>
        </actions>        
    </adminhtml_cms_hierarchy>
    
    <adminhtml_cms_page_revision translate="label"> 
        <label>CMS Revision</label>
        <actions>            
            <adminhtml_cms_page_revision_edit>
                <action>view</action>
            </adminhtml_cms_page_revision_edit>
            
            <adminhtml_cms_page_revision_preview>
                <action>preview</action>
            </adminhtml_cms_page_revision_preview>
            
            <adminhtml_cms_page_revision_save>
                <action>save</action>
                <expected_models>
                    <enterprise_cms__page_revision/>
                </expected_models>
            </adminhtml_cms_page_revision_save>
            
            <adminhtml_cms_page_revision_delete>
                <action>delete</action>
                <expected_models>
                    <enterprise_cms__page_revision/>
                </expected_models>                
            </adminhtml_cms_page_revision_delete>
        </actions>
    </adminhtml_cms_page_revision>            
</logging>
