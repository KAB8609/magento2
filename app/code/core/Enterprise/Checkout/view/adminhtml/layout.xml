<layout>
    <adminhtml_customer_edit>
        <reference name="customer_edit">
            <block name="checkout.buttons" type="Enterprise_Checkout_Block_Adminhtml_Customer_Edit_Buttons">
                <action method="addButtons"></action>
            </block>
        </reference>
    </adminhtml_customer_edit>

    <adminhtml_checkout_index>
        <reference name="head">
            <action method="addItem"><type>skin_js</type><name>Mage_Adminhtml::catalog/product/composite/configure.js</name></action>
            <action method="addJs"><file>varien/configurable.js</file></action>
            <action method="addItem">
                <type>skin_js</type><name>Enterprise_Checkout::shopping_cart.js</name>
            </action>
        </reference>
        <reference name="content">
            <block type="Mage_Adminhtml_Block_Catalog_Product_Composite_Configure" name="configure.popup"/>
            <block type="Enterprise_Checkout_Block_Adminhtml_Manage" name="ID" template="manage.phtml">
                <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Store_Switcher" name="checkout.store.switcher"/>
                <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Messages" name="checkout.message"/>
                <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Items" name="checkout.items" template="manage/items.phtml"/>
                <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Accordion" name="checkout.accordion">
                    <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Accordion_Products" name="products"/>
                    <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Accordion_Wishlist" name="wishlist"/>
                    <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Accordion_Compared" name="compared"/>
                    <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Accordion_Rcompared" name="rcompared"/>
                    <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Accordion_Rviewed" name="rviewed"/>
                    <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Accordion_Ordered" name="ordered"/>
                </block>
                <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Form_Coupon" template="form/coupon.phtml" name="checkout.form_coupon"/>
            </block>
            <block type="Mage_Adminhtml_Block_Catalog_Product_Composite_Configure" name="configure.popup"/>
        </reference>
    </adminhtml_checkout_index>

    <adminhtml_checkout_cart>
        <remove name="root"/>
        <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Items" name="checkout.items" template="manage/items.phtml" output="toHtml"/>
    </adminhtml_checkout_cart>

    <adminhtml_checkout_applycoupon>
        <remove name="root"/>
        <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Form_Coupon" template="form/coupon.phtml" name="form_coupon" output="toHtml"/>
    </adminhtml_checkout_applycoupon>

    <adminhtml_checkout_coupon>
        <remove name="root"/>
        <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Form_Coupon" template="form/coupon.phtml" name="form_coupon" output="toHtml"/>
    </adminhtml_checkout_coupon>

    <adminhtml_checkout_products>
        <remove name="root"/>
        <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Accordion_Products" name="checkout.accordion.products" output="toHtml"/>
    </adminhtml_checkout_products>

    <adminhtml_checkout_viewwishlist>
        <remove name="root"/>
        <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Accordion_Wishlist" name="checkout.accordion.wishlist" output="toHtml"/>
    </adminhtml_checkout_viewwishlist>

    <adminhtml_checkout_viewcompared>
        <remove name="root"/>
        <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Accordion_Compared" name="checkout.accordion.compared" output="toHtml"/>
    </adminhtml_checkout_viewcompared>

    <adminhtml_checkout_viewrecentlycompared>
        <remove name="root"/>
        <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Accordion_Rcompared" name="checkout.accordion.rcompared" output="toHtml"/>
    </adminhtml_checkout_viewrecentlycompared>

    <adminhtml_checkout_viewrecentlyviewed>
        <remove name="root"/>
        <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Accordion_Rviewed" name="checkout.accordion.rviewed" output="toHtml"/>
    </adminhtml_checkout_viewrecentlyviewed>

    <adminhtml_checkout_viewordered>
        <remove name="root"/>
        <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Accordion_Ordered" name="checkout.accordion.ordered" output="toHtml"/>
    </adminhtml_checkout_viewordered>
    
    <adminhtml_checkout_manage_load_block_json>
        <reference name="root">
            <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Load" name="content" />
        </reference>
    </adminhtml_checkout_manage_load_block_json>

    <adminhtml_checkout_manage_load_block_plain>
        <reference name="root">
            <block type="Mage_Core_Block_Text_List" name="content" />
        </reference>
    </adminhtml_checkout_manage_load_block_plain>
    
    <adminhtml_checkout_manage_load_block_message>
        <reference name="content">
            <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Messages" name="message" />
        </reference>
    </adminhtml_checkout_manage_load_block_message>
    
    <adminhtml_checkout_manage_load_block_items>
        <reference name="content">
            <block type="Enterprise_Checkout_Block_Adminhtml_Manage_Items" name="items" template="manage/items.phtml"/>
        </reference>
    </adminhtml_checkout_manage_load_block_items>
</layout>
