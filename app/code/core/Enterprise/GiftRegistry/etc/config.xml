<config>
    <modules>
        <Enterprise_GiftRegistry>
             <version>1.9.0.0.0</version>
        </Enterprise_GiftRegistry>
    </modules>
    <global>
        <models>
             <enterprise_giftregistry>
                <class>Enterprise_GiftRegistry_Model</class>
                <resourceModel>enterprise_giftregistry_mysql4</resourceModel>
             </enterprise_giftregistry>
             <enterprise_giftregistry_mysql4>
                <class>Enterprise_GiftRegistry_Model_Mysql4</class>
                <entities>
                    <registry><table>enterprise_giftregistry_registry</table></registry>
                    <type><table>enterprise_giftregistry_type</table></type>
                    <info><table>enterprise_giftregistry_type_info</table></info>
                    <person><table>enterprise_giftregistry_person</table></person>
                    <label><table>enterprise_giftregistry_label</table></label>
                    <option><table>enterprise_giftregistry_option</table></option>
                </entities>
            </enterprise_giftregistry_mysql4>
        </models>
        <helpers>
            <enterprise_giftregistry>
                <class>Enterprise_GiftRegistry_Helper</class>
            </enterprise_giftregistry>
        </helpers>
        <blocks>
             <enterprise_giftregistry>
                <class>Enterprise_GiftRegistry_Block</class>
             </enterprise_giftregistry>
        </blocks>
        <resources>
            <enterprise_giftregistry_setup>
                <setup>
                    <module>Enterprise_GiftRegistry</module>
                    <class>Enterprise_GiftRegistry_Model_Mysql4_Setup</class>
                </setup>
            </enterprise_giftregistry_setup>
        </resources>
        <attributes>
            <groups>
                <custom translate="label" module="enterprise_giftregistry">
                    <label>Custom types</label>
                    <types>        
                        <text translate="label" module="enterprise_giftregistry">
                            <label>Text</label>
                        </text>
                        <select translate="label" module="enterprise_giftregistry">
                            <label>Select</label>
                            <render>enterprise_giftregistry/adminhtml_giftregistry_edit_attribute_type_select</render>
                        </select>
                        <date translate="label" module="enterprise_giftregistry">
                            <label>Date</label>
                        </date>
                    </types>
                </custom>
                <static translate="label" module="enterprise_giftregistry">
                    <label>Event types</label>
                    <types>
                        <event_date translate="label" module="enterprise_giftregistry">
                            <label>Date</label>
                        </event_date>
                        <event_country translate="label" module="enterprise_giftregistry">
                            <label>Country</label>
                        </event_country>
                        <event_region translate="label" module="enterprise_giftregistry">
                            <label>Region</label>
                         </event_region>
                         <event_location translate="label" module="enterprise_giftregistry">
                             <label>Location</label>
                        </event_location>
                    </types>
                </static>
            </groups>
        </attributes>
        <prototype>
            <registry>
                <attributes>
                    <system>
                        <registry_id/>
                        <type_id/>
                        <customer_id/>
                        <website_id/>
                        <is_public/>
                        <url_key/>
                        <title/>
                        <message/>
                        <shipping_address/>
                        <custom_attributes/>
                    </system>
                    <static>
                        <event_date/>
                        <event_country_code/>
                        <event_region_code/>
                        <event_location/>
                    </static>
                    <custom/>
                </attributes>
                <attribute_groups>
                    <event_information translate="label" module="enterprise_giftregistry">
                        <label>Event Information</label>
                        <sort_order>5</sort_order>
                    </event_information>
                    <registry translate="label" module="enterprise_giftregistry">
                        <label>Gift Registry Properties</label>
                        <sort_order>10</sort_order>
                    </registry>
                    <privacy translate="label" module="enterprise_giftregistry">
                       <label>Privacy Settings</label>
                       <sort_order>15</sort_order>
                     </privacy>
                    <registrants translate="label" module="enterprise_giftregistry">
                        <label>Registrants Information</label>
                        <sort_order>20</sort_order>
                    </registrants>
                    <shipping translate="label" module="enterprise_giftregistry">
                       <label>Shipping Address</label>
                       <sort_order>25</sort_order>
                     </shipping>
                </attribute_groups>
            </registry>
            <registrant>
                <attributes>
                    <system>
                        <person_id/>
                        <registry_id/>
                        <firstname/>
                        <lastname/>
                        <email/>
                    </system>
                    <static>
                        <role/>
                    </static>
                    <custom/>
                </attributes>
            </registrant>
        </prototype>
    </global>

    <admin>
         <routers>
            <adminhtml>
                <args>
                    <modules>
                        <enterprise_giftregistry before="Mage_Adminhtml">Enterprise_GiftRegistry_Adminhtml</enterprise_giftregistry>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    <adminhtml>
        <layout>
            <updates>
                <enterprise_giftregistry>
                    <file>enterprise/giftregistry.xml</file>
                </enterprise_giftregistry>
            </updates>
        </layout>
        <translate>
            <modules>
                <Enterprise_GiftRegistry>
                    <files>
                        <default>Enterprise_GiftRegistry.csv</default>
                    </files>
                </Enterprise_GiftRegistry>
            </modules>
        </translate>
    </adminhtml>

</config>
