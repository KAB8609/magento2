<config>
    <modules>
        <Enterprise_GiftRegistry>
             <version>1.9.0.0.3</version>
        </Enterprise_GiftRegistry>
    </modules>
    <global>
        <models>
             <enterprise_giftregistry>
                <class>Enterprise_GiftRegistry_Model</class>
                <resourceModel>enterprise_giftregistry_mysql4</resourceModel>
             </enterprise_giftregistry>
             <enterprise_giftregistry_mysql4>
                <class>Enterprise_GiftRegistry_Model_Mysql4</class>
                <entities>
                    <type><table>enterprise_giftregistry_type</table></type>
                    <info><table>enterprise_giftregistry_type_info</table></info>
                    <label><table>enterprise_giftregistry_label</table></label>
                    <entity><table>enterprise_giftregistry_entity</table></entity>
                    <item><table>enterprise_giftregistry_item</table></item>
                    <person><table>enterprise_giftregistry_person</table></person>
                    <data><table>enterprise_giftregistry_data</table></data>
                </entities>
            </enterprise_giftregistry_mysql4>
        </models>
        <helpers>
            <enterprise_giftregistry>
                <class>Enterprise_GiftRegistry_Helper</class>
            </enterprise_giftregistry>
        </helpers>
        <blocks>
             <enterprise_giftregistry>
                <class>Enterprise_GiftRegistry_Block</class>
             </enterprise_giftregistry>
        </blocks>
        <resources>
            <enterprise_giftregistry_setup>
                <setup>
                    <module>Enterprise_GiftRegistry</module>
                    <class>Enterprise_GiftRegistry_Model_Mysql4_Setup</class>
                </setup>
            </enterprise_giftregistry_setup>
        </resources>
        <template>
            <email>
                <enterprise_gitregistry_owner_template translate="label" module="enterprise_giftregistry">
                    <label>Gift Registry Owner Notification</label>
                    <file>enterprise/gitregistry_owner.html</file>
                    <type>html</type>
                </enterprise_gitregistry_owner_template>
                <enterprise_gitregistry_sharing_template translate="label" module="enterprise_giftregistry">
                    <label>Gift Registry Sharing</label>
                    <file>enterprise/gitregistry_sharing.html</file>
                    <type>html</type>
                </enterprise_gitregistry_sharing_template>
                <enterprise_gitregistry_update_template translate="label" module="enterprise_giftregistry">
                    <label>Gift Registry Update</label>
                    <file>enterprise/gitregistry_update.html</file>
                    <type>html</type>
                </enterprise_gitregistry_update_template>
            </email>
        </template>
        <events>
            <customer_address_load_before>
                <observers>
                    <enterprise_giftregistry>
                        <class>enterprise_giftregistry/observer</class>
                        <method>addressDataBeforeLoad</method>
                    </enterprise_giftregistry>
                </observers>
            </customer_address_load_before>
            <customer_address_load_after>
                <observers>
                    <enterprise_giftregistry>
                        <class>enterprise_giftregistry/observer</class>
                        <method>addressDataAfterLoad</method>
                    </enterprise_giftregistry>
                </observers>
            </customer_address_load_after>
            <customer_address_format>
                <observers>
                    <enterprise_giftregistry>
                        <class>enterprise_giftregistry/observer</class>
                        <method>addressFormat</method>
                    </enterprise_giftregistry>
                </observers>
            </customer_address_format>
            <sales_convert_quote_item_to_order_item>
                <observers>
                    <enterprise_giftregistry>
                        <class>enterprise_giftregistry/observer</class>
                        <method>convertItems</method>
                    </enterprise_giftregistry>
                </observers>
            </sales_convert_quote_item_to_order_item>
            <sales_order_save_after>
                <observers>
                    <enterprise_giftregistry>
                        <class>enterprise_giftregistry/observer</class>
                        <method>orderPlaced</method>
                    </enterprise_giftregistry>
                </observers>
            </sales_order_save_after>
        </events>
        <fieldsets>
            <customer_address>
                <giftregistry_item_id><to_quote_address>*</to_quote_address></giftregistry_item_id>
            </customer_address>
            <sales_convert_quote_address>
                <giftregistry_item_id><to_order_address>*</to_order_address></giftregistry_item_id>
            </sales_convert_quote_address>
        </fieldsets>
    </global>

    <admin>
         <routers>
            <adminhtml>
                <args>
                    <modules>
                        <enterprise_giftregistry before="Mage_Adminhtml">Enterprise_GiftRegistry_Adminhtml</enterprise_giftregistry>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    <adminhtml>
        <layout>
            <updates>
                <enterprise_giftregistry>
                    <file>enterprise/giftregistry.xml</file>
                </enterprise_giftregistry>
            </updates>
        </layout>
        <translate>
            <modules>
                <Enterprise_GiftRegistry>
                    <files>
                        <default>Enterprise_GiftRegistry.csv</default>
                    </files>
                </Enterprise_GiftRegistry>
            </modules>
        </translate>
    </adminhtml>

    <frontend>
        <layout>
            <updates>
                <enterprise_giftregistry>
                    <file>giftregistry.xml</file>
                </enterprise_giftregistry>
            </updates>
        </layout>
        <translate>
            <modules>
                <Enterprise_GiftRegistry>
                    <files>
                        <default>Enterprise_GiftRegistry.csv</default>
                    </files>
                </Enterprise_GiftRegistry>
            </modules>
        </translate>
        <routers>
            <enterprise_giftregistry>
                <use>standard</use>
                <args>
                    <module>Enterprise_GiftRegistry</module>
                    <frontName>giftregistry</frontName>
                </args>
            </enterprise_giftregistry>
        </routers>
        <events>
            <checkout_cart_product_add_after>
                <observers>
                    <enterprise_giftregistry>
                        <class>enterprise_giftregistry/observer</class>
                        <method>addGiftRegistryQuoteFlag</method>
                    </enterprise_giftregistry>
                </observers>
            </checkout_cart_product_add_after>
        </events>
    </frontend>

    <default>
        <enterprise_giftregistry>
            <general>
                <enabled>1</enabled>
                <max_registrant>5</max_registrant>
            </general>
            <owner_email>
                <identity>general</identity>
                <template>enterprise_gitregistry_owner_template</template>
            </owner_email>
            <sharing_email>
                <identity>general</identity>
                <template>enterprise_gitregistry_sharing_template</template>
                <send_limit>3</send_limit>
            </sharing_email>
            <update_email>
                <identity>general</identity>
                <template>enterprise_gitregistry_update_template</template>
            </update_email>
        </enterprise_giftregistry>
    </default>
</config>
