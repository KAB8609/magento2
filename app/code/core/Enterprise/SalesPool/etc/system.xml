<config>
    <sections>
        <sales>
            <groups>
                <enterprise_salespool translate="label" module="enterprise_salespool">
                    <label>Orders Queue</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>190</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <active translate="label">
                            <label>Enable Orders Queue</label>
                            <sort_order>5</sort_order>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <backend_model>enterprise_salespool/system_config_backend_active</backend_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><model>enterprise_salespool/system_config_backend_active</model></comment>
                        </active>
                        <active_admin translate="label">
                            <label>Enable Admin Orders Queue</label>
                            <sort_order>10</sort_order>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><model>enterprise_salespool/system_config_backend_active</model></comment>
                        </active_admin>
                        <flush_period translate="label comment">
                            <label>Process Queue Every</label>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Minutes.</comment>
                        </flush_period>
                        <allowed_payment_methods_scope translate="label">
                            <label>Queue orders with </label>
                            <sort_order>20</sort_order>
                            <frontend_type>select</frontend_type>
                            <frontend_model>enterprise_salespool/adminhtml_system_config_form_field_allow_method</frontend_model>
                            <source_model>enterprise_salespool/payment_method_source_scope</source_model>
                            <allow_empty>1</allow_empty>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </allowed_payment_methods_scope>
                        <allowed_payment_methods translate="label">
                            <label>Specific Payment Methods</label>
                            <sort_order>25</sort_order>
                            <frontend_type>multiselect</frontend_type>
                            <frontend_class>methods</frontend_class>
                            <source_model>enterprise_salespool/payment_method_source</source_model>
                            <allow_empty>1</allow_empty>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </allowed_payment_methods>
                    </fields>
                </enterprise_salespool>
            </groups>
        </sales>
    </sections>
</config>
