<config>
    <menu>
        <sales>
            
        </sales>
        <sales>
            <children>
                <order>
                    <depends>
                        <config>unexistent/config/path</config>
                   </depends>
                </order>
                <order_action translate="title" module="sales">
                    <title>Orders</title>
                    <resource>sales/order</resource>
                    <sort_order>10</sort_order>
                    <depends>
                        <module>Mage_Sales</module>
                    </depends>
                    <children>
                        <order translate="title" module="enterprise_salespool">
                            <title>Manage Orders</title>
                            <action>adminhtml/sales_order/</action>
                            <resource>sales/order</resource>
                            <sort_order>10</sort_order>
                        </order>
                        <order_pool translate="title" module="enterprise_salespool">
                            <title>Orders Queue</title>
                            <action>adminhtml/sales_order_pool/</action>
                            <resource>sales/order/pool</resource>
                            <depends>
                                <module>Enterprise_SalesPool</module>
                            </depends>
                            <sort_order>20</sort_order>
                        </order_pool>
                    </children>
                </order_action>
            </children>
        </sales>
    </menu>
    <acl>
        <resources>
            <admin>
                <children>
                    <sales>
                        <children>
                            <order>
                                <children>
                                    <pool translate="title" module="enterprise_salespool">
                                    <title>Orders Queue</title>
                                        <children>
                                            <flush  translate="title" module="enterprise_salespool">
                                                <title>Process Orders</title>
                                            </flush>
                                        </children>
                                    </pool>
                                </children>
                            </order>
                        </children>
                    </sales>
                </children>
            </admin>
        </resources>
    </acl>
</config>