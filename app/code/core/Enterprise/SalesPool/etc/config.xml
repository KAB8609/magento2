<config>
    <modules>
        <Enterprise_SalesPool>
            <version>1.4.0</version>
        </Enterprise_SalesPool>
    </modules>
    <global>
        <blocks>
            <enterprise_salespool>
                <class>Enterprise_SalesPool_Block</class>
            </enterprise_salespool>
        </blocks>
        <models>
            <enterprise_salespool>
                <class>Enterprise_SalesPool_Model</class>
                <!-- <resourceModel>enterprise_salespool_mysql4</resourceModel> -->
                <resourceModel>enterprise_salespool_resource</resourceModel>
                <enterprise_salespool_resource>
                    <class>Enterprise_SalesPool_Model_Resource</class>
                    <entities>
                        <order>
                            <table>enterprise_sales_order_pool</table>
                        </order>
                        <order_item>
                            <table>enterprise_sales_order_item_pool</table>
                        </order_item>
                        <order_address>
                            <table>enterprise_sales_order_address_pool</table>
                        </order_address>
                        <order_payment>
                            <table>enterprise_sales_order_payment_pool</table>
                        </order_payment>
                        <order_payment_transaction>
                            <table>enterprise_sales_order_payment_transaction_pool</table>
                        </order_payment_transaction>
                        <order_status_history>
                            <table>enterprise_sales_order_status_history_pool</table>
                        </order_status_history>
                    </entities>
                </enterprise_salespool_resource>
            </enterprise_salespool>
        </models>
        <helpers>
            <enterprise_salespool>
                <class>Enterprise_SalesPool_Helper</class>
            </enterprise_salespool>
        </helpers>
        <resources>
            <enterprise_salespool_setup>
                <setup>
                    <module>Enterprise_SalesPool</module>
                    <class>Enterprise_SalesPool_Model_Mysql4_Setup</class>
                </setup>
            </enterprise_salespool_setup>
        </resources>
        <enterprise>
            <salespool>
                <entities> 
                </entities>
            </salespool>
        </enterprise>
        <events>
            <sales_order_load_before>
                <observers>
                    <enterprise_salespool>
                        <class>enterprise_salespool/observer</class>
                        <method>salesObjectBeforeLoad</method>
                    </enterprise_salespool>
                </observers>
            </sales_order_load_before>
            <sales_order_payment_load_before>
                <observers>
                    <enterprise_salespool>
                        <class>enterprise_salespool/observer</class>
                        <method>salesObjectBeforeLoad</method>
                    </enterprise_salespool>
                </observers>
            </sales_order_payment_load_before>
            <sales_order_payment_transaction_load_before>
                <observers>
                    <enterprise_salespool>
                        <class>enterprise_salespool/observer</class>
                        <method>salesObjectBeforeLoad</method>
                    </enterprise_salespool>
                </observers>
            </sales_order_payment_transaction_load_before>
            <sales_order_payment_transaction_load_by_txn_id_before>
                <observers>
                    <enterprise_salespool>
                        <class>enterprise_salespool/observer</class>
                        <method>salesOrderPaymentTransactionBeforeLoadByTxnId</method>
                    </enterprise_salespool>
                </observers>
            </sales_order_payment_transaction_load_by_txn_id_before>
            <sales_order_payment_collection_set_sales_order>
                <observers>
                    <enterprise_salespool>
                        <class>enterprise_salespool/observer</class>
                        <method>salesCollectionSetSalesOrder</method>
                    </enterprise_salespool>
                </observers>
            </sales_order_payment_collection_set_sales_order>
            <sales_order_payment_transaction_collection_set_sales_order>
                <observers>
                    <enterprise_salespool>
                        <class>enterprise_salespool/observer</class>
                        <method>salesCollectionSetSalesOrder</method>
                    </enterprise_salespool>
                </observers>
            </sales_order_payment_transaction_collection_set_sales_order>
            <sales_order_address_collection_set_sales_order>
                <observers>
                    <enterprise_salespool>
                        <class>enterprise_salespool/observer</class>
                        <method>salesCollectionSetSalesOrder</method>
                    </enterprise_salespool>
                </observers>
            </sales_order_address_collection_set_sales_order>
            <sales_order_item_collection_set_sales_order>
                <observers>
                    <enterprise_salespool>
                        <class>enterprise_salespool/observer</class>
                        <method>salesCollectionSetSalesOrder</method>
                    </enterprise_salespool>
                </observers>
            </sales_order_item_collection_set_sales_order>
            <sales_order_status_history_collection_set_sales_order>
                <observers>
                    <enterprise_salespool>
                        <class>enterprise_salespool/observer</class>
                        <method>salesCollectionSetSalesOrder</method>
                    </enterprise_salespool>
                </observers>
            </sales_order_status_history_collection_set_sales_order>
            <sales_order_resource_update_grid_records>
                <observers>
                    <enterprise_salespool>
                        <class>enterprise_salespool/observer</class>
                        <method>salesOrderUpdateGridRecords</method>
                    </enterprise_salespool>
                </observers>
            </sales_order_resource_update_grid_records>
            <sales_order_resource_save_attribute_before>
                <observers>
                    <enterprise_salespool>
                        <class>enterprise_salespool/observer</class>
                        <method>salesOrderBeforeSaveAttribute</method>
                    </enterprise_salespool>
                </observers>
            </sales_order_resource_save_attribute_before>
            <sales_order_resource_save_attribute_after>
                <observers>
                    <enterprise_salespool>
                        <class>enterprise_salespool/observer</class>
                        <method>salesOrderAfterSaveAttribute</method>
                    </enterprise_salespool>
                </observers>
            </sales_order_resource_save_attribute_after>
            <sales_order_load_after>
                <observers>
                    <enterprise_salespool>
                        <class>enterprise_salespool/observer</class>
                        <method>salesObjectAfterLoad</method>
                    </enterprise_salespool>
                </observers>
            </sales_order_load_after>
            <sales_order_payment_load_after>
                <observers>
                    <enterprise_salespool>
                        <class>enterprise_salespool/observer</class>
                        <method>salesObjectAfterLoad</method>
                    </enterprise_salespool>
                </observers>
            </sales_order_payment_load_after>
            <sales_order_payment_transaction_load_after>
                <observers>
                    <enterprise_salespool>
                        <class>enterprise_salespool/observer</class>
                        <method>salesObjectAfterLoad</method>
                    </enterprise_salespool>
                </observers>
            </sales_order_payment_transaction_load_after>
            <sales_order_payment_transaction_load_by_txn_id_after>
                <observers>
                    <enterprise_salespool>
                        <class>enterprise_salespool/observer</class>
                        <method>salesOrderPaymentTransactionAfterLoadByTxnId</method>
                    </enterprise_salespool>
                </observers>
            </sales_order_payment_transaction_load_by_txn_id_after>
            <sales_order_save_before>
                <observers>
                    <enterprise_salespool>
                        <class>enterprise_salespool/observer</class>
                        <method>salesObjectBeforeSave</method>
                    </enterprise_salespool>
                </observers>
            </sales_order_save_before>
            <sales_order_item_save_before>
                <observers>
                    <enterprise_salespool>
                        <class>enterprise_salespool/observer</class>
                        <method>salesObjectBeforeSave</method>
                    </enterprise_salespool>
                </observers>
            </sales_order_item_save_before>
            <sales_order_address_save_before>
                <observers>
                    <enterprise_salespool>
                        <class>enterprise_salespool/observer</class>
                        <method>salesObjectBeforeSave</method>
                    </enterprise_salespool>
                </observers>
            </sales_order_address_save_before>
            <sales_order_payment_save_before>
                <observers>
                    <enterprise_salespool>
                        <class>enterprise_salespool/observer</class>
                        <method>salesObjectBeforeSave</method>
                    </enterprise_salespool>
                </observers>
            </sales_order_payment_save_before>
            <sales_order_payment_transaction_save_before>
                <observers>
                    <enterprise_salespool>
                        <class>enterprise_salespool/observer</class>
                        <method>salesObjectBeforeSave</method>
                    </enterprise_salespool>
                </observers>
            </sales_order_payment_transaction_save_before>
            <sales_order_status_history_save_before>
                <observers>
                    <enterprise_salespool>
                        <class>enterprise_salespool/observer</class>
                        <method>salesObjectBeforeSave</method>
                    </enterprise_salespool>
                </observers>
            </sales_order_status_history_save_before>
            <sales_order_save_after>
                <observers>
                    <enterprise_salespool>
                        <class>enterprise_salespool/observer</class>
                        <method>salesObjectAfterSave</method>
                    </enterprise_salespool>
                </observers>
            </sales_order_save_after>
            <sales_order_item_save_after>
                <observers>
                    <enterprise_salespool>
                        <class>enterprise_salespool/observer</class>
                        <method>salesObjectAfterSave</method>
                    </enterprise_salespool>
                </observers>
            </sales_order_item_save_after>
            <sales_order_address_save_after>
                <observers>
                    <enterprise_salespool>
                        <class>enterprise_salespool/observer</class>
                        <method>salesObjectAfterSave</method>
                    </enterprise_salespool>
                </observers>
            </sales_order_address_save_after>
            <sales_order_payment_save_after>
                <observers>
                    <enterprise_salespool>
                        <class>enterprise_salespool/observer</class>
                        <method>salesObjectAfterSave</method>
                    </enterprise_salespool>
                </observers>
            </sales_order_payment_save_after>
            <sales_order_payment_transaction_save_after>
                <observers>
                    <enterprise_salespool>
                        <class>enterprise_salespool/observer</class>
                        <method>salesObjectAfterSave</method>
                    </enterprise_salespool>
                </observers>
            </sales_order_payment_transaction_save_after>
            <sales_order_status_history_save_after>
                <observers>
                    <enterprise_salespool>
                        <class>enterprise_salespool/observer</class>
                        <method>salesObjectAfterSave</method>
                    </enterprise_salespool>
                </observers>
            </sales_order_status_history_save_after>
            <sales_order_invoice_save_before>
                <observers>
                    <enterprise_salespool>
                        <class>enterprise_salespool/observer</class>
                        <method>salesOrderInvoiceBeforeSave</method>
                    </enterprise_salespool>
                </observers>
            </sales_order_invoice_save_before>
        </events>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <enterprise_salespool before="Mage_Adminhtml">Enterprise_SalesPool_Adminhtml</enterprise_salespool>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <enterprise_salespool>
                    <file>enterprise/salespool.xml</file>
                </enterprise_salespool>
            </updates>
        </layout>
    </adminhtml>
    <frontend>
        <layout>
            <updates>
                <enterprise_salespool>
                    <file>salespool.xml</file>
                </enterprise_salespool>
            </updates>
        </layout>
    </frontend>
    <default>
        <sales>
            <enterprise_salespool>
                <active>0</active>
                <active_admin>0</active_admin>
                <flush_period>30</flush_period>
                <allowed_payment_methods_scope>0</allowed_payment_methods_scope>
                <allowed_payment_methods/>
            </enterprise_salespool>
        </sales>
    </default>
    <crontab>
        <jobs>
            <enterprise_salespool_flush_orders>
                <schedule>
                    <cron_expr>* * * * *</cron_expr>
                </schedule>
                <run>
                    <model>enterprise_salespool/observer::flushOrdersByCron</model>
                </run>
            </enterprise_salespool_flush_orders>
        </jobs>
    </crontab>
</config>
