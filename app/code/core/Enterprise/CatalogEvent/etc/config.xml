<config>
    <modules>
        <Enterprise_CatalogEvent>
            <version>0.0.4</version>
        </Enterprise_CatalogEvent>
    </modules>
    <global>
        <models>
             <enterprise_catalogevent>
                <class>Enterprise_CatalogEvent_Model</class>
                <resourceModel>enterprise_catalogevent_mysql4</resourceModel>
             </enterprise_catalogevent>
             <enterprise_catalogevent_mysql4>
                <class>Enterprise_CatalogEvent_Model_Mysql4</class>
                <entities>
                    <event><table>enterprise_catalogevent_event</table></event>
                    <event_image><table>enterprise_catalogevent_event_image</table></event_image>
                </entities>
            </enterprise_catalogevent_mysql4>
        </models>
        <helpers>
             <enterprise_catalogevent>
                <class>Enterprise_CatalogEvent_Helper</class>
             </enterprise_catalogevent>
        </helpers>
        <blocks>
             <enterprise_catalogevent>
                <class>Enterprise_CatalogEvent_Block</class>
             </enterprise_catalogevent>
        </blocks>
        <resources>
            <enterprise_catalogevent_setup>
                <setup>
                    <module>Enterprise_CatalogEvent</module>
                    <class>Enterprise_CatalogEvent_Model_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </enterprise_catalogevent_setup>
            <enterprise_catalogevent_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </enterprise_catalogevent_write>
            <enterprise_catalogevent_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </enterprise_catalogevent_read>
        </resources>
        <fieldsets>
            <sales_convert_quote_item>
                <event_id><to_order_item>*</to_order_item></event_id>
                <event_name><to_order_item>*</to_order_item></event_name>
            </sales_convert_quote_item>
        </fieldsets>
    </global>
    <default>
        <admin>
            <logsenabled>
                <catalogevents>1</catalogevents>
            </logsenabled>
        </admin>

        <catalog>
            <enterprise_catalogevent>
                <enabled>1</enabled>
                <lister_output>1</lister_output>
                <lister_items_number_category>5</lister_items_number_category>
                <lister_items_number_cms>5</lister_items_number_cms>
            </enterprise_catalogevent>
        </catalog>
    </default>
    <frontend>
        <events>
            <catalog_category_load_after>
                <observers>
                    <enterprise_catalogevent>
                        <type>singleton</type>
                        <class>enterprise_catalogevent/observer</class>
                        <method>applyEventToCategory</method>
                    </enterprise_catalogevent>
                </observers>
            </catalog_category_load_after>
            <catalog_controller_product_init_after>
                <observers>
                    <enterprise_catalogevent>
                        <type>singleton</type>
                        <class>enterprise_catalogevent/observer</class>
                        <method>applyEventToProduct</method>
                    </enterprise_catalogevent>
                </observers>
            </catalog_controller_product_init_after>
            <review_controller_product_init_after>
                <observers>
                    <enterprise_catalogevent>
                        <type>singleton</type>
                        <class>enterprise_catalogevent/observer</class>
                        <method>applyEventToProduct</method>
                    </enterprise_catalogevent>
                </observers>
            </review_controller_product_init_after>
            <catalog_category_collection_load_after>
                <observers>
                    <enterprise_catalogevent>
                        <type>singleton</type>
                        <class>enterprise_catalogevent/observer</class>
                        <method>applyEventToCategoryCollection</method>
                    </enterprise_catalogevent>
                </observers>
            </catalog_category_collection_load_after>
            <catalog_product_collection_load_after>
                <observers>
                    <enterprise_catalogevent>
                        <type>singleton</type>
                        <class>enterprise_catalogevent/observer</class>
                        <method>applyEventToProductCollection</method>
                    </enterprise_catalogevent>
                </observers>
            </catalog_product_collection_load_after>
            <catalog_product_is_salable_after>
                <observers>
                    <enterprise_catalogevent>
                        <type>singleton</type>
                        <class>enterprise_catalogevent/observer</class>
                        <method>applyIsSalableToProduct</method>
                    </enterprise_catalogevent>
                </observers>
            </catalog_product_is_salable_after>
            <checkout_cart_product_add_after>
                <observers>
                    <enterprise_catalogevent>
                        <type>singleton</type>
                        <class>enterprise_catalogevent/observer</class>
                        <method>applyEventOnQuoteItemSetProduct</method>
                    </enterprise_catalogevent>
                </observers>
            </checkout_cart_product_add_after>
            <sales_quote_item_qty_set_after>
                <observers>
                    <enterprise_catalogevent>
                        <type>singleton</type>
                        <class>enterprise_catalogevent/observer</class>
                        <method>applyEventOnQuoteItemSetQty</method>
                    </enterprise_catalogevent>
                </observers>
            </sales_quote_item_qty_set_after>
        </events>
        <layout>
            <updates>
                <enterprise_catalogevent module="Enterprise_CatalogEvent">
                    <file>catalogevent.xml</file>
                </enterprise_catalogevent>
            </updates>
        </layout>
        <translate>
            <modules>
                <Enterprise_CatalogEvent>
                    <files>
                        <default>Enterprise_CatalogEvent.csv</default>
                    </files>
                </Enterprise_CatalogEvent>
            </modules>
        </translate>
    </frontend>

	<admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <enterprise_catalogevent before="Mage_Adminhtml">Enterprise_CatalogEvent_Adminhtml</enterprise_catalogevent>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <enterprise_catalogevent>
                    <file>enterprise/catalogevent.xml</file>
                </enterprise_catalogevent>
            </updates>
        </layout>
        <menu>
            <catalog>
               <children>
                   <products>
                       <sort_order>0</sort_order>
                   </products>
                   <categories>
                       <sort_order>0</sort_order>
                   </categories>
                   <enterprise_catalogevent translate="title" module="enterprise_catalogevent">
                        <title>Manage Catalog Events</title>
                        <sort_order>1</sort_order>
                        <action>adminhtml/catalog_event</action>
                        <resource>catalog/events</resource>
                        <depends>
                            <module>Enterprise_CatalogEvent</module>
                            <config>catalog/enterprise_catalogevent/enabled</config>
                        </depends>
                   </enterprise_catalogevent>
               </children>
            </catalog>
        </menu>
        <translate>
            <modules>
                <Enterprise_CatalogEvent>
                    <files>
                        <default>Enterprise_CatalogEvent.csv</default>
                    </files>
                </Enterprise_CatalogEvent>
            </modules>
        </translate>
        <acl>
            <resources>
                <admin>
                    <children>
                         <catalog>
                            <children>
                                <events translate="title" module="enterprise_catalogevent">
                                    <title>Manage Events</title>
                                    <sort_order>60</sort_order>
                                </events>
                            </children>
                        </catalog>
                    </children>
                </admin>
            </resources>
         </acl>
    </adminhtml>
    <crontab>
        <jobs>
            <enterprise_catalogevent_apply_event_status>
                <schedule><cron_expr>* * * * *</cron_expr></schedule>
                <run><model>enterprise_catalogevent/observer::applyEventStatus</model></run>
            </enterprise_catalogevent_apply_event_status>
        </jobs>
	</crontab>
</config>
