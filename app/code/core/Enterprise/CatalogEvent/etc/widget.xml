<config>
    <widgets>
        <event_lister type="enterprise_catalogevent/widget_lister" translate="name description" module="enterprise_catalogevent">
            <name>Catalog Events Carousel</name>
            <description>List all non-closed Catalog Events as a Paginated Carousel</description>
            <parameters>
                <limit translate="label description">
                    <required>1</required>
                    <visible>1</visible>
                    <value>5</value>
                    <label>Frame Size</label>
                    <description>Number of Items to display at once</description>
                    <type>text</type>
                </limit>
                <scroll translate="label description">
                    <required>1</required>
                    <visible>1</visible>
                    <value>2</value>
                    <label>Scroll</label>
                    <description>Number of Items to scroll per click</description>
                    <type>text</type>
                </scroll>
                <width translate="label description">
                    <visible>1</visible>
                    <label>Block Width</label>
                    <description>Use CSS-compatible syntax. If empty, will be determined automatically</description>
                    <type>text</type>
                </width>
                <template>
                    <required>1</required>
                    <value>catalogevent/lister.phtml</value>
                </template>
            </parameters>
        </event_lister>
    </widgets>
</config>
