<config>
    <widgets>
        <event_lister type="enterprise_catalogevent/widget_lister" translate="name description" module="enterprise_catalogevent">
            <name>Catalog Events Lister</name>
            <description>Widget that shows Upcoming and Past Catalog Events</description>
            <parameters>
                <limit translate="label">
                    <required />
                    <visible />
                    <value>1</value>
                    <label>Page Size</label>
                    <type>text</type>
                </limit>
                <scroll translate="label">
                    <required />
                    <visible />
                    <value>1</value>
                    <label>Scroll Size</label>
                    <type>text</type>
                </scroll>
                <template>
                    <required />
                    <value>catalogevent/lister.phtml</value>
                    <label>Template</label>
                    <type>text</type>
                </template>
            </parameters>
        </event_lister>
    </widgets>
</config>
