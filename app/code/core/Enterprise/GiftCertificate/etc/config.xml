<config>
    <modules>
        <Enterprise_GiftCertificate>
             <version>0.0.1</version>
        </Enterprise_GiftCertificate>
    </modules>

    <global>
        <resources>
            <giftcertificate_setup>
                <setup>
                    <module>Enterprise_GiftCertificate</module>
                    <class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </giftcertificate_setup>
            <giftcertificate_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </giftcertificate_write>
            <giftcertificate_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </giftcertificate_read>
        </resources>

        <models>
            <giftcertificate>
                <class>Enterprise_GiftCertificate_Model</class>
                <resourceModel>giftcertificate_mysql4</resourceModel>
            </giftcertificate>
            <giftcertificate_mysql4>
                <class>Enterprise_GiftCertificate_Model_Mysql4</class>
                <entities>
                    <giftcertificate>
                        <table>giftcertificate</table>
                    </giftcertificate>
                </entities>
            </giftcertificate_mysql4>
        </models>

        <blocks>
            <giftcertificate>
                <class>Enterprise_GiftCertificate_Block</class>
            </giftcertificate>
        </blocks>

        <helpers>
            <giftcertificate>
                <class>Enterprise_GiftCertificate_Helper</class>
            </giftcertificate>
        </helpers>
    </global>

    <frontend>
        <translate>
            <modules>
                <Enterprise_GiftCertificate>
                    <files>
                        <default>Enterprise_GiftCertificate.csv</default>
                    </files>
                </Enterprise_GiftCertificate>
            </modules>
        </translate>
    </frontend>

    <admin>
         <routers>
            <adminhtml>
                <args>
                    <modules>
                        <giftcertificate before="Mage_Adminhtml">Enterprise_GiftCertificate</giftcertificate>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    <adminhtml>
        <layout>
            <updates>
                <giftcertificate>
                    <file>giftcertificate.xml</file>
                </giftcertificate>
            </updates>
        </layout>

        <events>
        </events>

        <menu>
            <promo>
                <children>
                    <giftcertificate translate="title" module="giftcertificate">
                        <title>Gift Certificate</title>
                        <action>adminhtml/manage_giftcertificate</action>
                        <resource>promo/giftcertificate</resource>
                        <depends><module>Enterprise_GiftCertificate</module></depends>
                    </giftcertificate>
                </children>
             </promo>
        </menu>
    </adminhtml>

</config>