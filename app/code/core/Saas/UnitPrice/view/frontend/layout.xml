<layout version="0.1.0">
    <catalog_product_view>
        <reference name="head">
            <action method="addCss"><file>Saas_UnitPrice::css/unitprice.css</file></action>
        </reference>
    </catalog_product_view>

    <catalog_category_view_type_default>
        <reference name="product_list">
            <action method="addPriceBlockType">
                <type>simple</type>
                <block>Saas_UnitPrice_Block_Catalog_Product_Price</block>
                <template>Mage_Catalog::product/price.phtml</template>
            </action>

            <action method="addPriceBlockType">
                <type>configurable</type>
                <block>Saas_UnitPrice_Block_Catalog_Product_Price</block>
                <template>Mage_Catalog::product/price.phtml</template>
            </action>
        </reference>
    </catalog_category_view_type_default>

    <catalog_category_view_type_layered>
        <reference name="product_list">
            <action method="addPriceBlockType">
                <type>simple</type>
                <block>Saas_UnitPrice_Block_Catalog_Product_Price</block>
                <template>Mage_Catalog::product/price.phtml</template>
            </action>

            <action method="addPriceBlockType">
                <type>configurable</type>
                <block>Saas_UnitPrice_Block_Catalog_Product_Price</block>
                <template>Mage_Catalog::product/price.phtml</template>
            </action>
        </reference>
    </catalog_category_view_type_layered>

    <catalogsearch_result_index>
        <reference name="search_result_list">
            <action method="addPriceBlockType">
                <type>simple</type>
                <block>Saas_UnitPrice_Block_Catalog_Product_Price</block>
                <template>Mage_Catalog::product/price.phtml</template>
            </action>

            <action method="addPriceBlockType">
                <type>configurable</type>
                <block>Saas_UnitPrice_Block_Catalog_Product_Price</block>
                <template>Mage_Catalog::product/price.phtml</template>
            </action>
        </reference>
    </catalogsearch_result_index>

     <catalogsearch_advanced_result>
        <reference name="search_result_list">
            <action method="addPriceBlockType">
                <type>simple</type>
                <block>Saas_UnitPrice_Block_Catalog_Product_Price</block>
                <template>Mage_Catalog::product/price.phtml</template>
            </action>

            <action method="addPriceBlockType">
                <type>configurable</type>
                <block>Saas_UnitPrice_Block_Catalog_Product_Price</block>
                <template>Mage_Catalog::product/price.phtml</template>
            </action>
        </reference>
    </catalogsearch_advanced_result>

    <catalog_product_view_type_simple>
        <reference name="product.info.extrahint">
            <block type="Saas_UnitPrice_Block_Catalog_Product_View_Type_Simple"
                name="unitprice.product.info.simple" as="unitprice_product_type_data" />
        </reference>
    </catalog_product_view_type_simple>

    <catalog_product_view_type_configurable>
        <reference name="product.info.extrahint">
            <block type="Saas_UnitPrice_Block_Catalog_Product_View_Type_Configurable"
                name="unitprice.product.info.configurable" as="unitprice_product_type_data" />
        </reference>
    </catalog_product_view_type_configurable>
</layout>
