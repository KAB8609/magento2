<widgets>
    <widget id="recently_viewed" class="Mage_Reports_Block_Product_Widget_Viewed"
            translate="name description" module="Mage_Reports"
            placeholder_image="Mage_Reports::images/product_widget_viewed.gif">
        <name>Recently Viewed Products</name>
        <description>List of Products Recently Viewed by Visitor</description>
        <parameter name="page_size" translate="label" xsi:type="text" required="true" visible="true"
                   value="5">
            <label>Number of Products to display</label>
        </parameter>
        <parameter name="template" xsi:type="select" required="true" visible="true">
            <label>Template</label>
            <option name="default" translate="label"value="widget/viewed/content/viewed_grid.phtml"
                    selected="true">
                Viewed Products Grid Template
            </option>
            <option name="list" translate="label" value="widget/viewed/content/viewed_list.phtml">
                Viewed Products List Template
            </option>
            <option name="list_default" translate="label"
                    value="widget/viewed/column/viewed_default_list.phtml">
                Viewed Products Images and Names Template
            </option>
            <option name="list_names" translate="label"
                    value="widget/viewed/column/viewed_names_list.phtml">
                Viewed Products Names Only Template
            </option>
            <option name="list_images" translate="label"
                    value="widget/viewed/column/viewed_images_list.phtml">
                Viewed Products Images Only Template
            </option>
        </parameter>
        <container section="left_column" name="left">
            <template name="default" value="list_default" />
            <template name="names_only" value="list_names" />
            <template name="images_only" value="list_images" />
        </container>
        <container section="main_content" name="content">
            <template name="grid" value="default" />
            <template name="list" value="list" />
        </container>
        <container section="right_column" name="right">
            <template name="default" value="list_default" />
            <template name="names_only" value="list_names" />
            <template name="images_only" value="list_images" />
        </container>
    </widget>
    <widget id="recently_compared" class="Mage_Reports_Block_Product_Widget_Compared"
            translate="name description" module="Mage_Reports"
            placeholder_image="Mage_Reports::images/product_widget_compared.gif">
        <name>Recently Compared Products</name>
        <description>List of Products Recently Compared and Removed from the Compare List by Visitor</description>
        <parameter name="page_size" translate="label" required="true" visible="true" value="5"
                   xsi:type="text">
            <label>Number of Products to display</label>
        </parameter>
        <parameter name="template" visible="true" xsi:type="select" required="true">
            <label>Template</label>
            <option name="default" translate="label" selected="true"
                    value="widget/compared/content/compared_grid.phtml">
                <label>Compared Products Grid Template</label>
            </option>
            <option name="list" translate="label" value="widget/compared/content/compared_list.phtml">
                <label>Compared Products List Template</label>
            </option>
            <option name="list_default" translate="label"
                    value="widget/compared/column/compared_default_list.phtml">
                <label>Compared Products Images and Names Template</label>
            </option>
            <option name="list_names" translate="label"
                    value="widget/compared/column/compared_names_list.phtml">
                <label>Compared Product Names Only Template</label>
            </option>
            <option name="list_images" translate="label"
                    value="widget/compared/column/compared_images_list.phtml">
                <label>Compared Product Images Only Template</label>
            </option>
        </parameter>
        <container section="left_column" name="left">
            <template name="default" value="list_default" />
            <template name="names_only" value="list_names" />
            <template name="images_only" value="list_images" />
        </container>
        <container section="main_content" name="content">
            <template name="grid" value="default" />
            <template name="list" value="list" />
        </container>
        <container section="right_column" name="right">
            <template name="default" value="list_default" />
            <template name="names_only" value="list_names" />
            <template name="images_only" value="list_images" />
        </container>
    </widget>
</widgets>
