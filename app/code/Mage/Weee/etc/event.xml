<config>
    <event name="catalog_entity_attribute_save_before">
        <observer name="weee" instance="Mage_Weee_Model_Observer" method="assignBackendModelToAttribute" shared="true" />
    </event>
    <event name="catalogrule_after_apply">
        <observer name="weee" instance="Mage_Weee_Model_Observer" method="updateDiscountPercents" />
    </event>
    <event name="catalog_product_view_config">
        <observer name="weee" instance="Mage_Weee_Model_Observer" method="updateConfigurableProductOptions" />
    </event>
    <event name="bundle_product_view_config">
        <observer name="weee" instance="Mage_Weee_Model_Observer" method="updateBundleProductOptions" />
    </event>
</config>