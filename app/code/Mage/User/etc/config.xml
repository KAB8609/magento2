<config>
    <modules>
        <Mage_User>
            <version>1.6.1.4</version>
            <active>true</active>
            <depends>
                <Mage_Backend />
                <Mage_Core/>
                <Mage_Adminhtml/>
                <Mage_Catalog/>
                <Mage_Cms/>
                <Mage_Newsletter/>
                <Mage_Review/>
                <Mage_Tag/>
                <Mage_AdminNotification/>
                <Mage_Api/>
                <Mage_Backup/>
                <Mage_CatalogInventory/>
                <Mage_CatalogRule/>
                <Mage_CatalogSearch/>
                <Mage_Checkout/>
                <Mage_Contacts/>
                <Mage_CurrencySymbol/>
                <Mage_Customer/>
                <Mage_DesignEditor/>
                <Mage_Downloadable/>
                <Mage_GoogleCheckout/>
                <Mage_GoogleShopping/>
                <Mage_ImportExport/>
                <Mage_Index/>
                <Mage_Oauth/>
                <Mage_Page/>
                <Mage_PageCache/>
                <Mage_Payment/>
                <Mage_Paypal/>
                <Mage_Persistent/>
                <Mage_Poll/>
                <Mage_Rating/>
                <Mage_Reports/>
                <Mage_Rss/>
                <Mage_Sales/>
                <Mage_SalesRule/>
                <Mage_Shipping/>
                <Mage_Sitemap/>
                <Mage_Tax/>
                <Mage_Widget/>
                <Mage_Wishlist/>
                <Find_Feed/>
                <Social_Facebook/>
            </depends>
            <sequence>
                <Mage_Backend />
            </sequence>
        </Mage_User>
    </modules>
    <global>
        <areas>
            <adminhtml>
                <auth>
                    <credential_storage>Mage_User_Model_User</credential_storage>
                </auth>
            </adminhtml>
        </areas>
        <resources>
            <user_setup>
                <setup>
                    <module>Mage_User</module>
                </setup>
            </user_setup>
        </resources>
        <template>
            <email>
                <admin_emails_forgot_email_template translate="label" module="Mage_User">
                    <label>Forgot Admin Password</label>
                    <file>email/password_reset_confirmation.html</file>
                    <type>html</type>
                </admin_emails_forgot_email_template>
                <admin_emails_reset_password_template translate="label" module="Mage_User">
                    <label>Reset Password</label>
                    <file>email/password_reset.html</file>
                    <type>html</type>
                </admin_emails_reset_password_template>
            </email>
        </template>
    </global>
    <default>
        <admin>
            <emails>
                <forgot_email_template>admin_emails_forgot_email_template</forgot_email_template>
                <forgot_email_identity>general</forgot_email_identity>
                <password_reset_link_expiration_period>1</password_reset_link_expiration_period>
                <reset_password_template>admin_emails_reset_password_template</reset_password_template>
            </emails>
        </admin>
    </default>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Mage_User before="Mage_Backend">Mage_User_Adminhtml</Mage_User>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
</config>
