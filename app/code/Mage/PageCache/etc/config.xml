<config>
    <global>
        <external_cache>
            <controls>
                <zend_page_cache translate="label" module="Mage_PageCache">
                    <label>Zend Full Page Cache</label>
                    <class>Mage_PageCache_Model_Control_Zend</class>
                </zend_page_cache>
            </controls>
        </external_cache>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <Mage_PageCache>
                    <files>
                        <default>Mage_PageCache.csv</default>
                    </files>
                </Mage_PageCache>
            </modules>
        </translate>
    </adminhtml>
    <frontend>
        <cache>
            <allowed_requests>
                <cms />
                <catalog>
                    <category>
                        <view />
                    </category>
                </catalog>
                <catalog>
                    <product>
                        <view />
                    </product>
                </catalog>
            </allowed_requests>
        </cache>
    </frontend>
    <default>
        <system>
            <external_page_cache>
                <enabled>0</enabled>
                <control>zend_page_cache</control>
                <cookie_lifetime>3600</cookie_lifetime>
            </external_page_cache>
        </system>
    </default>
</config>