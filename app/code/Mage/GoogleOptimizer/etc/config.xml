<config>
    <modules>
        <Mage_GoogleOptimizer>
            <version>2.0.0.0</version>
            <active>true</active>
            <depends>
                <Mage_GoogleAnalytics/>
                <Mage_Catalog/>
                <Mage_Cms/>
            </depends>
        </Mage_GoogleOptimizer>
    </modules>
    <global>
        <resources>
            <googleoptimizer_setup>
                <setup>
                    <module>Mage_GoogleOptimizer</module>
                </setup>
            </googleoptimizer_setup>
        </resources>
        <events>
            <catalog_product_load_after>
                <observers>
                    <googleoptimizer_observer>
                        <class>Mage_GoogleOptimizer_Model_Observer_Product_Load</class>
                        <method>appendToProductGoogleExperimentScript</method>
                    </googleoptimizer_observer>
                </observers>
            </catalog_product_load_after>
            <catalog_product_save_after>
                <observers>
                    <googleoptimizer_observer>
                        <class>Mage_GoogleOptimizer_Model_Observer_Product_Save</class>
                        <method>saveProductGoogleExperimentScript</method>
                    </googleoptimizer_observer>
                </observers>
            </catalog_product_save_after>
            <catalog_product_delete_after>
                <observers>
                    <googleoptimizer_observer>
                        <class>Mage_GoogleOptimizer_Model_Observer_Product_Delete</class>
                        <method>deleteProductGoogleExperimentScript</method>
                    </googleoptimizer_observer>
                </observers>
            </catalog_product_delete_after>
            <catalog_category_load_after>
                <observers>
                    <googleoptimizer_observer>
                        <class>Mage_GoogleOptimizer_Model_Observer_Category_Load</class>
                        <method>appendToCategoryGoogleExperimentScript</method>
                    </googleoptimizer_observer>
                </observers>
            </catalog_category_load_after>
            <catalog_category_save_after>
                <observers>
                    <googleoptimizer_observer>
                        <class>Mage_GoogleOptimizer_Model_Observer_Category_Save</class>
                        <method>saveCategoryGoogleExperimentScript</method>
                    </googleoptimizer_observer>
                </observers>
            </catalog_category_save_after>
            <catalog_category_delete_after>
                <observers>
                    <googleoptimizer_observer>
                        <class>Mage_GoogleOptimizer_Model_Observer_Category_Delete</class>
                        <method>deleteCategoryGoogleExperimentScript</method>
                    </googleoptimizer_observer>
                </observers>
            </catalog_category_delete_after>
            <cms_page_load_after>
                <observers>
                    <googleoptimizer_observer>
                        <class>Mage_GoogleOptimizer_Model_Observer_CmsPage_Load</class>
                        <method>appendToCmsPageGoogleExperimentScript</method>
                    </googleoptimizer_observer>
                </observers>
            </cms_page_load_after>
            <cms_page_save_after>
                <observers>
                    <googleoptimizer_observer>
                        <class>Mage_GoogleOptimizer_Model_Observer_CmsPage_Save</class>
                        <method>saveCmsGoogleExperimentScript</method>
                    </googleoptimizer_observer>
                </observers>
            </cms_page_save_after>
            <cms_page_delete_after>
                <observers>
                    <googleoptimizer_observer>
                        <class>Mage_GoogleOptimizer_Model_Observer_CmsPage_Delete</class>
                        <method>deleteCmsGoogleExperimentScript</method>
                    </googleoptimizer_observer>
                </observers>
            </cms_page_delete_after>
            <adminhtml_catalog_category_tabs>
                <observers>
                    <googleoptimizer_observer>
                        <class>Mage_GoogleOptimizer_Model_Observer_Block_Category_Tab</class>
                        <method>addGoogleExperimentTab</method>
                    </googleoptimizer_observer>
                </observers>
            </adminhtml_catalog_category_tabs>
        </events>
    </global>
    <frontend>
        <translate>
            <modules>
                <Mage_GoogleOptimizer>
                    <files>
                        <default>Mage_GoogleOptimizer.csv</default>
                    </files>
                </Mage_GoogleOptimizer>
            </modules>
        </translate>
        <layout>
            <updates>
                <googleoptimizer module="Mage_GoogleOptimizer">
                    <file>layout.xml</file>
                </googleoptimizer>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Mage_GoogleOptimizer>
                    <files>
                        <default>Mage_GoogleOptimizer.csv</default>
                    </files>
                </Mage_GoogleOptimizer>
            </modules>
        </translate>
        <layout>
            <updates>
                <googleoptimizer module="Mage_GoogleOptimizer">
                    <file>layout.xml</file>
                </googleoptimizer>
            </updates>
        </layout>
    </adminhtml>
    <default>
        <google>
            <optimizer>
                <active>0</active>
            </optimizer>
        </google>
    </default>
</config>
