<?php /** @var $this Mage_Backend_Block_System_Messages_UnreadMessagePopup */ ?>
<div id="system_messages_list" title="<?php echo $this->escapeHtml($this->getPopupTitle()); ?>">
    <ul class="message-system-list">
        <?php foreach ($this->getUnreadMessages() as $message): ?>
            <li class="error">
                <?php echo $message->getText();?><?php if ($message->getLink()): ?> <a href="<?php echo $this->escapeUrl($message->getLink());?>"><?php echo $this->__('Go there now');?></a><?php endif; ?>
            </li>
        <?php endforeach;?>
    </ul>
</div>
<script type="text/javascript">
    jQuery(function() {
        jQuery( "#system_messages_list" ).dialog({
            autoOpen: true,
            modal: true,
            resizable: false,
            width: 650
        });
    });
</script>
