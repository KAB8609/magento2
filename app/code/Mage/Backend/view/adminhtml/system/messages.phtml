<?php /** @var $this Mage_Backend_Block_System_Messages */ ?>

<script>
    jQuery(function() {
        jQuery( "#system_messages_list" ).dialog({
            autoOpen: false,
            modal: true,
            resizable: false,
            width: 650
        });
    });
</script>

<div id="system_messages" class="message-system<?php if ($lastCritical): ?> message-system-unread<?php endif; ?>">
    <div class="message-system-inner">
        <?php $lastCritical = $this->getLastCritical();?>
        <?php if ($lastCritical): ?>
            <ul class="message-system-list">
                <li class="error"><!--  warning  -->
                    <?php echo $lastCritical->getText();?>
                    <?php if ($lastCritical->getLink()):?> 
                        <a href="<?php echo $lastCritical->getLink();?>"><?php echo $this->__('Go there now');?></a>
                    <?php endif; ?>
                </li>
            </ul>
        <?php endif; ?>
        <div class="message-system-short">
            System Messages:
            <?php if ($this->getCriticalCount()): ?>
                <span class="error"><a href="#" title="Critical System Messages" onclick="jQuery('#system_messages_list').dialog('open')"><?php echo $this->getCriticalCount();?></a></span>
            <?php endif;?>
            <?php if ($this->getMajorCount()): ?>
               <span class="warning"><a href="#" title="Major System Messages" onclick="jQuery('#system_messages_list').dialog('open')"><?php echo $this->getMajorCount();?></a></span>
            <?php endif;?>
        </div>
    </div>
</div>

<div id="system_messages_list" title="You have 3 new system messages">
    <ul class="message-system-list">
    <?php foreach ($this->getMessageList() as $message): ?>
        <li class="error">
            <?php echo $message->getText();?>
            <a href="#">Go there now</a>
        </li>
        <li class="warning">
            <?php echo $message->getText();?>
            <a href="#">Go there now</a>
        </li>
    <?php endforeach;?>
    </ul>
</div>
