<layout version="0.1.0">
    <default>
        <reference name="root">
            <container name="notifications" as="notifications" label="Notifications" after="header">
                <block type="Mage_AdminNotification_Block_System_Messages" name="system_messages" as="system_messages" label="System Messages" before="-" template="Mage_AdminNotification::system/messages.phtml"/>
                <block type="Mage_AdminNotification_Block_System_Messages_UnreadMessagePopup" name="unread_system_messages" as="unread_system_messages" label="Unread System Messages" after="system_messages" template="Mage_AdminNotification::system/messages/popup.phtml"/>
                <block type="Mage_AdminNotification_Block_Window" name="notification_window" as="notification_window" acl="Mage_AdminNotification::show_toolbar" template="notification/window.phtml"/>
            </container>
            <reference name="head">
                <block type="Mage_Page_Block_Html_Head_Script" name="mage-adminnotification-system-notification-js">
                    <arguments>
                        <file>Mage_AdminNotification::system/notification.js</file>
                    </arguments>
                </block>
            </reference>
        </reference>
        <reference name="header">
            <block type="Mage_AdminNotification_Block_ToolbarEntry" template="toolbar_entry.phtml" before="-"/>
        </reference>
        <reference name="head">
            <block type="Mage_Page_Block_Html_Head_Css" name="mage-core-prototype-magento-css">
                <arguments>
                    <file>Mage_Core::prototype/magento.css</file>
                </arguments>
            </block>
            <block type="Mage_Page_Block_Html_Head_Script" name="mage-adminnotification-toolbar-entry-js">
                <arguments>
                    <file>Mage_AdminNotification::toolbar_entry.js</file>
                </arguments>
            </block>
        </reference>
    </default>
</layout>
