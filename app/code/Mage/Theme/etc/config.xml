<config>
    <modules>
        <Mage_Theme>
            <version>1.6.0.0</version>
            <active>true</active>
        </Mage_Theme>
    </modules>
    <global>
        <theme>
            <css>
                <upload_limit>2M</upload_limit>
            </css>
            <js>
                <upload_limit>2M</upload_limit>
            </js>
        </theme>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <use>admin</use>
                <args>
                    <modules>
                        <theme>Mage_Theme_Adminhtml</theme>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <default>
        <theme>
            <customization>
                <custom_css>Mage_Theme_Model_Theme_Customization_File_CustomCss</custom_css>
            </customization>
        </theme>
    </default>
</config>
