<config>
    <acl>
        <resources>

            <resource id="Mage_Adminhtml::admin">
                <resource id="Mage_Adminhtml::system">
                    <resource id="Mage_Webapi::webapi" module="Mage_Webapi" title="Rest" sortOrder="40">
                        <resource id="Mage_Webapi::webapi_users"  module="Mage_Webapi" title="Users" sortOrder="10"/>
                        <resource id="Mage_Webapi::webapi_roles" module="Mage_Webapi"  title="Roles" sortOrder="20"/>
                    </resource>
                </resource>
            </resource>

            <resource id="Old_Mage_Adminhtml::admin">
                <resource id="Old_Mage_Adminhtml::system">
                    <resource id="Old_Mage_Webapi::webapi" module="Mage_Webapi" title="Web Services" sortOrder="0">
                        <resource id="Old_Mage_Webapi::webapi_users" title="API Users" sortOrder="1"/>
                        <resource id="Old_Mage_Webapi::webapi_roles" title="API Roles" sortOrder="2"/>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
