<config>
    <modules>
        <Mage_Webapi>
            <version>1.0.0.3</version>
            <active>true</active>
            <depends>
                <Mage_Core />
                <Mage_Oauth />
                <Mage_Backend />
            </depends>
        </Mage_Webapi>
    </modules>
    <global>
        <areas>
            <webapi>
                <frontName>webapi</frontName>
                <front_controller>Mage_Webapi_Controller_Front</front_controller>
                <!--TODO: Utilize base action controller from config, not constant-->
                <base_controller>Mage_Webapi_Controller_ActionAbstract</base_controller>
            </webapi>
        </areas>
        <resources>
            <webapi_setup>
                <setup>
                    <module>Mage_Webapi</module>
                </setup>
            </webapi_setup>
        </resources>
        <cache>
            <types>
                <config_webservice translate="label,description" module="Mage_Webapi">
                    <label>Web Services Configuration</label>
                    <description>REST and SOAP configurations, generated WSDL file.</description>
                    <class>Mage_Webapi_Model_Cache_Type</class>
                </config_webservice>
            </types>
        </cache>
        <webapi>
            <rest>
                <request>
                    <interpreters>
                        <!-- JSON -->
                        <application_json>
                            <type>application/json</type>
                            <model>Mage_Webapi_Controller_Request_Rest_Interpreter_Json</model>
                        </application_json>
                        <!-- XML -->
                        <application_xml>
                            <type>application/xml</type>
                            <model>Mage_Webapi_Controller_Request_Rest_Interpreter_Xml</model>
                        </application_xml>
                        <application_xhtml_xml>
                            <type>application/xhtml+xml</type>
                            <model>Mage_Webapi_Controller_Request_Rest_Interpreter_Xml</model>
                        </application_xhtml_xml>
                        <text_xml>
                            <type>text/xml</type>
                            <model>Mage_Webapi_Controller_Request_Rest_Interpreter_Xml</model>
                        </text_xml>
                    </interpreters>
                </request>
                <response>
                    <renders>
                        <!-- JSON -->
                        <default>
                            <type>*/*</type>
                            <model>Mage_Webapi_Controller_Response_Rest_Renderer_Json</model>
                        </default>
                        <application_json>
                            <type>application/json</type>
                            <model>Mage_Webapi_Controller_Response_Rest_Renderer_Json</model>
                        </application_json>
                        <!-- XML -->
                        <text_xml>
                            <type>text/xml</type>
                            <model>Mage_Webapi_Controller_Response_Rest_Renderer_Xml</model>
                        </text_xml>
                        <application_xml>
                            <type>application/xml</type>
                            <model>Mage_Webapi_Controller_Response_Rest_Renderer_Xml</model>
                        </application_xml>
                        <application_xhtml_xml>
                            <type>application/xhtml+xml</type>
                            <model>Mage_Webapi_Controller_Response_Rest_Renderer_Xml</model>
                        </application_xhtml_xml>
                    </renders>
                </response>
            </rest>
        </webapi>
        <di>
            <preferences>
                <Magento_Authorization_Policy>Magento_Authorization_Policy_Acl</Magento_Authorization_Policy>
                <Magento_Authorization_RoleLocator>Mage_Webapi_Model_Authorization_RoleLocator</Magento_Authorization_RoleLocator>
                <Magento_Acl_Loader_Resource_ConfigReader_FileListInterface>Mage_Webapi_Model_Acl_Loader_Resource_ConfigReader_FileList</Magento_Acl_Loader_Resource_ConfigReader_FileListInterface>
            </preferences>
            <Magento_Acl_Builder>
                <parameters>
                    <resourceLoader>
                        <instance type="Mage_Webapi_Model_Authorization_Loader_Resource" />
                    </resourceLoader>
                    <roleLoader>
                        <instance type="Mage_Webapi_Model_Authorization_Loader_Role" />
                    </roleLoader>
                    <ruleLoader>
                        <instance type="Mage_Webapi_Model_Authorization_Loader_Rule" />
                    </ruleLoader>
                </parameters>
            </Magento_Acl_Builder>
            <Mage_Core_Model_Acl_Cache>
                <parameters>
                    <cacheKey>api_acl_resources</cacheKey>
                </parameters>
            </Mage_Core_Model_Acl_Cache>
            <Mage_Core_Model_Acl_RootResource>
                <parameters>
                    <identifier>Mage_Webapi</identifier>
                </parameters>
            </Mage_Core_Model_Acl_RootResource>
            <Mage_Webapi_Controller_Router_Route>
                <shared>0</shared>
            </Mage_Webapi_Controller_Router_Route>
            <Mage_Xml_Generator>
                <shared>0</shared>
            </Mage_Xml_Generator>
            <Mage_Xml_Parser>
                <shared>0</shared>
            </Mage_Xml_Parser>
            <Magento_Code_Scanner_DirectoryScanner>
                <shared>0</shared>
            </Magento_Code_Scanner_DirectoryScanner>
            <Magento_Server_Reflection>
                <shared>0</shared>
            </Magento_Server_Reflection>
            <Mage_Webapi_Model_Authorization_Loader_Resource>
                <parameters>
                    <reader>
                        <instance type="Mage_Webapi_Model_Acl_Loader_Resource_ConfigReader" />
                    </reader>
                </parameters>
            </Mage_Webapi_Model_Authorization_Loader_Resource>
        </di>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Mage_Webapi before="Mage_Backend">Mage_Webapi_Adminhtml</Mage_Webapi>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <webapi_permissions module="Mage_Webapi">
                    <file>layout.xml</file>
                </webapi_permissions>
            </updates>
        </layout>
    </adminhtml>
</config>
