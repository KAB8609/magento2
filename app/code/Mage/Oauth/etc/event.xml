<config>
    <event name="before_login_post_redirect">
        <observer name="oauth" instance="Mage_Oauth_Model_Observer" method="afterCustomerLogin" />
    </event>
    <event name="admin_session_user_login_success">
        <observer name="oauth" instance="Mage_Oauth_Model_Observer" method="afterAdminLogin" />
    </event>
    <event name="admin_session_user_login_failed">
        <observer name="oauth" instance="Mage_Oauth_Model_Observer" method="afterAdminLoginFailed" />
    </event>
</config>