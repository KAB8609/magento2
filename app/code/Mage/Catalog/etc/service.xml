<services>
    <service uri="categories" class="Mage_Catalog_Service_CategoryService" title="Catalog Category Service" module="Mage_Catalog" bind="INT,REST,SOAP">
        <operation method="create" title="Create new category" />
        <operation method="item" title="Retrieve a category" />
        <operation method="items" title="Retrieve category collection by filters" />
        <operation method="update" title="Update category" />
        <operation method="delete" title="Delete category" />

        <service uri="products" class="Mage_Catalog_Service_CategoryService">
            <operation method="create" title="Create" />
            <operation method="item" title="Retrieve a link" />
            <operation method="link" title="Link a category to a product" />
        </service>

        <version name="V1" class="Mage_Catalog_Service_CategoryServiceV1" />

        <version name="V2" class="Mage_Catalog_Service_CategoryServiceV2">
            <operation method="move" title="Move category in tree" />
            <operation method="items" title="Retrieve a category" deprecated="1" />
            <service uri="products" deprecated="1" />
        </version>
    </service>

    <service uri="products" class="Mage_Catalog_Service_ProductService" title="Catalog Product Service" module="Mage_Catalog" bind="INT,REST,SOAP">
        <operation method="create" title="Create new product" />
        <operation method="item" title="Retrieve product" />
        <operation method="items" title="Retrieve products collection by filters" />
        <operation method="update" title="Update product" />
        <operation method="delete" title="Delete product" />

        <service uri="categories" class="Mage_Catalog_Service_CategoryService">
            <operation method="create" title="Create" />
            <operation method="item" title="Retrieve a link" />
            <operation method="link" title="Link a category to a product" />
        </service>
    </service>
</services>

