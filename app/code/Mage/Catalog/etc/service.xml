<config>
    <service id="Mage_Catalog_Service_Product" version="1">
        <title>Catalog Product Service</title>
        <class>Mage_Catalog_Service_Product</class>
        <allow_remote>1</allow_remote>
        <call>
            <title>Create new product</title>
            <method>create</method>
            <rest-route>products</rest-route>
            <rest-method>POST</rest-method>
            <annotation>CDATA</annotation>
        </call>
        <call>
            <title>Retrieve a product</title>
            <method>item</method>
            <rest-route>products/:entity_id</rest-route>
            <rest-method>GET</rest-method>
        </call>
        <call>
            <title>Retrieve product collection by filters</title>
            <method>items</method>
            <rest-route>products</rest-route>
            <rest-method>GET</rest-method>
        </call>
    </service>

    <service id="Mage_Catalog_Service_Category" version="1">
        <title>Catalog Category Service</title>
        <class>Mage_Catalog_Service_CategoryV1</class>
        <allow_remote>1</allow_remote>
        <call>
            <title>Create new category</title>
            <method>create</method>
            <rest-route>categories</rest-route>
            <rest-method>POST</rest-method>
            <annotation>CDATA</annotation>
        </call>
        <call>
            <title>Retrieve a category</title>
            <method>item</method>
            <rest-route>categories/:entity_id</rest-route>
            <rest-method>GET</rest-method>
        </call>
        <call>
            <title>Retrieve category collection by filters</title>
            <method>items</method>
            <rest-route>categories</rest-route>
            <rest-method>GET</rest-method>
        </call>
    </service>
    <service id="Mage_Catalog_Service_Category" version="2">
        <title>Catalog Category Service</title>
        <class>Mage_Catalog_Service_CategoryV2</class>
        <allow_remote>1</allow_remote>
        <call>
            <title>Create new category</title>
            <method>create</method>
            <rest-route>categories</rest-route>
            <rest-method>POST</rest-method>
            <annotation>CDATA</annotation>
        </call>
        <call>
            <title>Retrieve a category</title>
            <method>item</method>
            <rest-route>categories/:entity_id</rest-route>
            <rest-method>GET</rest-method>
        </call>
        <call>
            <title>Retrieve category collection by filters</title>
            <method>items</method>
            <rest-route>categories</rest-route>
            <rest-method>GET</rest-method>
        </call>
        <call>
            <title>Move category within the tree</title>
            <method>move</method>
            <rest-route>categories/:pid/:aid</rest-route>
            <rest-method>POST</rest-method>
        </call>
    </service>
</config>

