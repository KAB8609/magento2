<widgets xmlns="http://www.magentocommerce.com/widget"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.magentocommerce.com/widget ../../../Mage/Widget/etc/widget.xsd">
    <widget id="new_products" class="Mage_Catalog_Block_Product_Widget_New" module="Mage_Catalog" is_email_compatible="true"
            placeholder_image="Mage_Catalog::images/product_widget_new.gif" translate="label description">
        <label>Catalog New Products List</label>
        <description>List of Products that are set as New</description>
        <parameter name="display_type" xsi:type="select" required="true" visible="true" translate="label description">
            <label>Display Type</label>
            <description>All products - recently added products, New products - products marked as new</description>
            <option name="default" value="all_products" selected="true" translate="label">
                <label>All products</label>
            </option>
            <option name="item" value="new_products" translate="label">
                <label>New products</label>
            </option>
        </parameter>
        <parameter name="show_pager" xsi:type="select" visible="true" source_model="Mage_Backend_Model_Config_Source_Yesno"
                   translate="label" >
            <label>Display Page Control</label>
        </parameter>
        <parameter name="products_per_page" xsi:type="text" required="true" visible="true" value="5" translate="label">
            <label>Number of Products per Page</label>
            <depends>
                <parameter name="show_pager" value="true"/>
            </depends>
        </parameter>
        <parameter name="products_count" xsi:type="text" required="true" visible="true" value="10" translate="label">
            <label>Number of Products to Display</label>
        </parameter>
        <parameter name="template" xsi:type="select" required="true" visible="true" translate="label">
            <label>Template</label>
            <option name="default" value="product/widget/new/content/new_grid.phtml" selected="true" translate="label">
                <label>New Products Grid Template</label>
            </option>
            <option name="list" value="product/widget/new/content/new_list.phtml" translate="label">
                <label>New Products List Template</label>
            </option>
            <option name="list_default" value="product/widget/new/column/new_default_list.phtml" translate="label">
                <label>New Products Images and Names Template</label>
            </option>
            <option name="list_names" value="product/widget/new/column/new_names_list.phtml" translate="label">
                <label>New Products Names Only Template</label>
            </option>
            <option name="list_images" value="product/widget/new/column/new_images_list.phtml" translate="label">
                <label>New Products Images Only Template</label>
            </option>
        </parameter>
        <parameter name="cache_lifetime" xsi:type="text" visible="true" translate="label description">
            <label>Cache Lifetime (Seconds)</label>
            <description>86400 by default, if not set. To refresh instantly, clear the Blocks HTML Output cache.</description>
        </parameter>

        <container section="left_column" name="left">
            <template name="default" value="list_default"/>
            <template name="names_only" value="list_names"/>
            <template name="images_only" value="list_images"/>
        </container>
        <container section="main_content" name="content">
            <template name="grid" value="default"/>
            <template name="list" value="list"/>
        </container>
        <container section="right_column" name="right">
            <template name="default" value="list_default"/>
            <template name="names_only" value="list_names"/>
            <template name="images_only" value="list_images"/>
        </container>
    </widget>

    <widget id="catalog_product_link" class="Mage_Catalog_Block_Product_Widget_Link" module="Mage_Catalog" is_email_compatible="true"
            placeholder_image="Mage_Catalog::images/product_widget_link.gif" translate="label description">
        <label>Catalog Product Link</label>
        <description>Link to a Specified Product</description>
        <parameter name="id_path" xsi:type="value_renderer" visible="true" required="true" sort_order="10" translate="label">
            <label>Product</label>
            <renderer class="Mage_Adminhtml_Block_Catalog_Product_Widget_Chooser">
                <data>
                    <button translate="open">
                        <open>Select Product...</open>
                    </button>
                </data>
            </renderer>
        </parameter>
        <parameter name="anchor_text" xsi:type="text" visible="true" translate="label description">
            <label>Anchor Custom Text</label>
            <description>If empty, the Product Name will be used</description>
        </parameter>
        <parameter name="title" xsi:type="text" visible="true" translate="label">
            <label>Anchor Custom Title</label>
        </parameter>
        <parameter name="template" xsi:type="select" visible="true" translate="label" >
            <label>Template</label>
            <option name="default" value="product/widget/link/link_block.phtml" selected="true" translate="label">
                <label>Product Link Block Template</label>
            </option>
            <option name="link_inline" value="product/widget/link/link_inline.phtml" translate="label">
                <label>Product Link Inline Template</label>
            </option>
        </parameter>
    </widget>

    <widget id="catalog_category_link" class="Mage_Catalog_Block_Category_Widget_Link" module="Mage_Catalog" is_email_compatible="true"
            placeholder_image="Mage_Catalog::images/category_widget_link.gif" translate="label description">
        <label>Catalog Category Link</label>
        <description>Link to a Specified Category</description>
        <parameter name="id_path" xsi:type="value_renderer" visible="true" required="true" sort_order="10" translate="label">
            <label>Category</label>
            <renderer class="Mage_Adminhtml_Block_Catalog_Category_Widget_Chooser">
                <data>
                    <button translate="open">
                        <open>Select Category...</open>
                    </button>
                </data>
            </renderer>
        </parameter>
        <parameter name="anchor_text" xsi:type="text" visible="true" translate="label description">
            <label>Anchor Custom Text</label>
            <description>If empty, the Category Name will be used</description>
        </parameter>
        <parameter name="title" xsi:type="text" visible="true" translate="label">
            <label>Anchor Custom Title</label>
        </parameter>
        <parameter name="template" xsi:type="select" visible="true" translate="label">
            <label>Template</label>
            <option name="default" value="category/widget/link/link_block.phtml" selected="true" translate="label">
                <label>Category Link Block Template</label>
            </option>
            <option name="link_inline" value="category/widget/link/link_inline.phtml" translate="label">
                <label>Category Link Inline Template</label>
            </option>
        </parameter>
    </widget>
</widgets>
