<layout version="0.1.0">
    <customer_account>
        <reference name="customer-account-navigation">
            <block type="Mage_Page_Block_Link_Current" name="customer-account-navigation-billing-agreements-link">
                <arguments translate="label">
                    <name>billing_agreements</name>
                    <path>sales/billing_agreement</path>
                    <label>Billing Agreements</label>
                </arguments>
            </block>
            <block type="Mage_Page_Block_Link_Current" name="customer-account-navigation-orders-link">
                <arguments translate="label">
                    <name>orders</name>
                    <path>sales/order/history</path>
                    <label>My Orders</label>
                </arguments>
            </block>
            <block type="Mage_Page_Block_Link_Current" name="customer-account-navigation-recurring-profiles-link">
                <arguments translate="label">
                    <name>recurring_profiles</name>
                    <path>sales/recurring_profile</path>
                    <label>Recurring Profiles</label>
                </arguments>
            </block>
        </reference>
        <reference name="left">
            <block type="Mage_Sales_Block_Reorder_Sidebar" name="sale.reorder.sidebar" as="reorder" template="reorder/sidebar.phtml"/>
        </reference>
    </customer_account>
</layout>
