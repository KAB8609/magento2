<layout>
    <adminhtml_system_design_editor_index>
        <reference name="head">
            <action method="addJs"><file>Mage_DesignEditor::js/infinitescroll.js</file></action>
            <action method="addJs"><file>Mage_DesignEditor::js/theme-selector.js</file></action>
            <action method="addJs"><file>Mage_DesignEditor::js/theme-assign.js</file></action>
            <action method="addJs"><file>Mage_DesignEditor::js/dialog.js</file></action>
            <action method="addCss"><file>Mage_DesignEditor::css/styles.css</file></action>
        </reference>
        <reference name="content">
            <block type="Mage_DesignEditor_Block_Adminhtml_Theme_Selector_Tabs" name="theme.selector.tabs">
                <action method="addTab"><name>available_themes</name><block>available.themes.tab</block></action>
                <action method="addTab"><name>customizations</name><block>customizations.themes.tab</block></action>
                <block type="Mage_DesignEditor_Block_Adminhtml_Theme_Selector_Tab_Available" name="available.themes.tab">
                    <block type="Mage_DesignEditor_Block_Adminhtml_Theme_Selector_List_Available" name="available.theme.list" template="Mage_DesignEditor::theme/list/available.phtml">
                        <block type="Mage_DesignEditor_Block_Adminhtml_Theme" name="available.theme.item" as="item" template="Mage_DesignEditor::theme/available.phtml" />
                    </block>
                </block>
                <block type="Mage_DesignEditor_Block_Adminhtml_Theme_Selector_Tab_Customizations" name="customizations.themes.tab" template="Mage_DesignEditor::theme/selector/my_customizations_tab.phtml">
                    <block type="Mage_DesignEditor_Block_Adminhtml_Theme_Selector_List_Assigned" name="assigned.theme.list" template="Mage_DesignEditor::theme/list/customized.phtml">
                        <block type="Mage_DesignEditor_Block_Adminhtml_Theme" name="assigned.theme" as="theme" template="Mage_DesignEditor::theme/customized.phtml" />
                    </block>
                    <block type="Mage_DesignEditor_Block_Adminhtml_Theme_Selector_List_Unassigned" name="unassigned.theme.list" template="Mage_DesignEditor::theme/list/customized.phtml">
                        <block type="Mage_DesignEditor_Block_Adminhtml_Theme" name="unassigned.theme" as="theme" template="Mage_DesignEditor::theme/customized.phtml" />
                    </block>
                </block>
            </block>
            <block type="Mage_DesignEditor_Block_Adminhtml_Theme_Selector_StoreView" name="theme.selector.storeview" template="Mage_DesignEditor::theme/selector/storeview.phtml" />
        </reference>
    </adminhtml_system_design_editor_index>

    <adminhtml_system_design_editor_firstentrance>
        <reference name="head">
            <action method="addJs"><file>Mage_DesignEditor::js/infinitescroll.js</file></action>
            <action method="addJs"><file>Mage_DesignEditor::js/theme-selector.js</file></action>
            <action method="addJs"><file>Mage_DesignEditor::js/theme-assign.js</file></action>
            <action method="addJs"><file>Mage_DesignEditor::js/dialog.js</file></action>
            <action method="addCss"><file>Mage_DesignEditor::css/styles.css</file></action>
        </reference>
        <reference name="content">
            <block type="Mage_Backend_Block_Template" name="available.theme.list.container" as="theme_container" template="Mage_DesignEditor::theme/selector/first_entrance.phtml">
                <block type="Mage_DesignEditor_Block_Adminhtml_Theme_Selector_List_Available" name="available.theme.list" template="Mage_DesignEditor::theme/list/available.phtml">
                    <block type="Mage_DesignEditor_Block_Adminhtml_Theme" name="design.editor.theme" as="theme" template="Mage_DesignEditor::theme/available.phtml" />
                </block>
            </block>
            <block type="Mage_DesignEditor_Block_Adminhtml_Theme_Selector_StoreView" name="theme.selector.storeview" template="Mage_DesignEditor::theme/selector/storeview.phtml" />
        </reference>
    </adminhtml_system_design_editor_firstentrance>

    <adminhtml_system_design_editor_loadthemelist>
        <container name="root" label="Root" output="1">
            <block type="Mage_DesignEditor_Block_Adminhtml_Theme_Selector_List_Available" name="available.theme.list" template="Mage_DesignEditor::theme/list/available_ajax.phtml">
                <block type="Mage_DesignEditor_Block_Adminhtml_Theme" name="design.editor.theme" as="theme" template="Mage_DesignEditor::theme/available.phtml"/>
            </block>
        </container>
    </adminhtml_system_design_editor_loadthemelist>

    <adminhtml_system_design_editor_launch>
        <reference name="root">
            <action method="setTemplate"><file>Mage_DesignEditor::editor.phtml</file></action>
        </reference>
        <reference name="head">
            <action method="setCanLoadExtJs"><flag>1</flag></action>
            <action method="addCss"><file>jquery/fileUploader/css/jquery.fileupload-ui.css</file></action>
            <action method="addJs"><file>jquery/jquery.tabs.js</file></action>
            <action method="addJs"><file>jquery/jstree/jquery.jstree.js</file></action>
            <action method="addJs"><file>jquery/slimScroll/slimScroll.min.js</file></action>
            <action method="addJs"><file>Mage_DesignEditor::js/tools.js</file></action>
            <action method="addJs"><file>Mage_DesignEditor::js/tools-panel.js</file></action>
            <action method="addJs"><file>Mage_DesignEditor::js/custom-css.js</file></action>
            <action method="addJs"><file>Mage_Theme::js/custom-js-list.js</file></action>
            <action method="addJs"><file>Mage_DesignEditor::js/theme-assign.js</file></action>
            <action method="addJs"><file>Mage_DesignEditor::js/dialog.js</file></action>
            <action method="addJs"><file>Mage_DesignEditor::js/vde-frame.js</file></action>
            <action method="addJs"><file>Mage_DesignEditor::js/theme-save.js</file></action>
            <action method="addJs"><file>Mage_DesignEditor::js/image-sizing.js</file></action>
            <action method="addJs"><file>Mage_DesignEditor::js/quick-style-element.js</file></action>
            <action method="addJs"><file>jquery/fileUploader/jquery.iframe-transport.js</file></action>
            <action method="addJs"><file>jquery/fileUploader/jquery.fileupload.js</file></action>
            <action method="addJs"><file>jquery/fileUploader/jquery.fileupload-fp.js</file></action>
            <action method="addJs"><file>Mage_DesignEditor::js/quick-style-uploader.js</file></action>
            <action method="addJs"><file>Mage_DesignEditor::js/theme-init.js</file></action>
            <action method="addCss"><file>Mage_DesignEditor::css/styles.css</file></action>
            <action method="addJs"><file>Mage_DesignEditor::js/message.js</file></action>
            <action method="addJs"><file>Mage_DesignEditor::js/tools-files.js</file></action>
        </reference>
        <reference name="content">
            <block type="Mage_DesignEditor_Block_Adminhtml_Editor_Container" name="design_editor" template="Mage_DesignEditor::editor/container.phtml">
                <block type="Mage_Backend_Block_Template" name="design_editor_toolbar" template="Mage_DesignEditor::editor/toolbar.phtml">
                    <block type="Mage_DesignEditor_Block_Adminhtml_Editor_Toolbar_Buttons" name="design_editor_toolbar_buttons" template="Mage_DesignEditor::editor/toolbar/buttons.phtml">
                        <block type="Mage_DesignEditor_Block_Adminhtml_Editor_Toolbar_Buttons_Edit" name="design_editor_toolbar_buttons_edit" />
                        <block type="Mage_DesignEditor_Block_Adminhtml_Editor_Toolbar_Buttons_Save" name="design_editor_toolbar_buttons_save" />
                    </block>
                </block>
                <block type="Mage_DesignEditor_Block_Adminhtml_Theme_Selector_StoreView" name="theme.selector.storeview" template="Mage_DesignEditor::theme/selector/storeview.phtml" />
                <block type="Mage_DesignEditor_Block_Adminhtml_Editor_Tools" name="design_editor_tools" template="Mage_DesignEditor::editor/tools.phtml">
                    <block type="Mage_Backend_Block_Template" name="design_editor_tools_tab_handle" as="tab_handle" template="Mage_DesignEditor::editor/tools/tabs/super-handle.phtml" />
                    <block type="Mage_DesignEditor_Block_Adminhtml_Editor_Tools_QuickStyles" name="design_editor_tools_quick-styles" template="Mage_DesignEditor::editor/tools/tabs.phtml">
                        <block type="Mage_Backend_Block_Template" name="design_editor_tools_quick-styles_tab_handle" as="tab_handle" template="Mage_DesignEditor::editor/tools/tabs/handle.phtml" />
                        <block type="Mage_DesignEditor_Block_Adminhtml_Editor_Tools_Tabs_Body" name="design_editor_tools_quick-styles_tab_body" as="tab_body" template="Mage_DesignEditor::editor/tools/tabs/body.phtml" />
                        <block type="Mage_DesignEditor_Block_Adminhtml_Editor_Tools_QuickStyles_Header" name="design_editor_tools_quick-styles_header" template="Mage_DesignEditor::editor/tools/quick-styles/form.phtml" />
                        <block type="Mage_DesignEditor_Block_Adminhtml_Editor_Tools_QuickStyles_Backgrounds" name="design_editor_tools_quick-styles_backgrounds" template="Mage_DesignEditor::editor/tools/quick-styles/form.phtml" />
                        <block type="Mage_DesignEditor_Block_Adminhtml_Editor_Tools_QuickStyles_Buttons" name="design_editor_tools_quick-styles_buttons" template="Mage_DesignEditor::editor/tools/quick-styles/form.phtml" />
                        <block type="Mage_DesignEditor_Block_Adminhtml_Editor_Tools_QuickStyles_Tips" name="design_editor_tools_quick-styles_tips" template="Mage_DesignEditor::editor/tools/quick-styles/form.phtml" />
                        <block type="Mage_DesignEditor_Block_Adminhtml_Editor_Tools_QuickStyles_Fonts" name="design_editor_tools_quick-styles_fonts" template="Mage_DesignEditor::editor/tools/quick-styles/form.phtml" />
                    </block>
                    <block type="Mage_DesignEditor_Block_Adminhtml_Editor_Tools_Block" name="design_editor_tools_block" template="Mage_DesignEditor::editor/tools/block.phtml" />
                    <block type="Mage_DesignEditor_Block_Adminhtml_Editor_Tools_Settings" name="design_editor_tools_settings" template="Mage_DesignEditor::editor/tools/settings.phtml" />
                    <block type="Mage_DesignEditor_Block_Adminhtml_Editor_Tools_Code" name="design_editor_tools_code" template="Mage_DesignEditor::editor/tools/tabs.phtml">
                        <block type="Mage_Backend_Block_Template" name="design_editor_tools_code_tab_handle" as="tab_handle" template="Mage_DesignEditor::editor/tools/tabs/handle.phtml" />
                        <block type="Mage_DesignEditor_Block_Adminhtml_Editor_Tools_Tabs_Body" name="design_editor_tools_code_tab_body" as="tab_body" template="Mage_DesignEditor::editor/tools/tabs/body.phtml" />
                        <!-- Tab with CSS list -->
                        <block type="Mage_DesignEditor_Block_Adminhtml_Editor_Tools_Code_Css" name="design_editor_tools_code_css" template="Mage_DesignEditor::editor/tools/code/css.phtml">
                            <block type="Mage_DesignEditor_Block_Adminhtml_Editor_Tools_Code_Css_Group" name="design_editor_tools_code_css_group" template="Mage_DesignEditor::editor/tools/code/css/group.phtml" />
                        </block>
                        <!-- Tab with JavaScript list -->
                        <block type="Mage_DesignEditor_Block_Adminhtml_Editor_Tools_Code_Js" name="design_editor_tools_code_js" template="Mage_DesignEditor::editor/tools/code/js.phtml" />
                        <!-- Tab with Custom CSS -->
                        <block type="Mage_DesignEditor_Block_Adminhtml_Editor_Tools_Code_Custom" name="design_editor_tools_code_custom" template="Mage_DesignEditor::editor/tools/code/custom.phtml"/>
                        <block type="Mage_DesignEditor_Block_Adminhtml_Editor_Tools_Code_ImageSizing" name="design_editor_tools_code_image_sizing" template="Mage_DesignEditor::editor/tools/code/image-sizing.phtml"/>
                    </block>
                </block>
            </block>
        </reference>
    </adminhtml_system_design_editor_launch>

    <adminhtml_system_design_editor_files_index>
        <remove name="footer" />
        <remove name="head" />
        <reference name="left">
            <block name="editor_files.js" type="Mage_DesignEditor_Block_Adminhtml_Editor_Tools_Files_Content" template="Mage_DesignEditor::editor/tools/files/js.phtml" />
            <block name="editor_files.tree" type="Mage_DesignEditor_Block_Adminhtml_Editor_Tools_Files_Tree" template="Mage_DesignEditor::editor/tools/files/tree.phtml" />
        </reference>
        <reference name="content">
            <block name="editor_files.content" type="Mage_DesignEditor_Block_Adminhtml_Editor_Tools_Files_Content" template="Mage_DesignEditor::editor/tools/files/content.phtml">
                <block name="editor_files.uploader" type="Mage_DesignEditor_Block_Adminhtml_Editor_Tools_Files_Content_Uploader" template="Mage_DesignEditor::editor/tools/files/content/uploader.phtml" />
            </block>
        </reference>
    </adminhtml_system_design_editor_files_index>

    <adminhtml_system_design_editor_files_contents>
        <block name="editor_files.files" type="Mage_DesignEditor_Block_Adminhtml_Editor_Tools_Files_Content_Files" template="Mage_DesignEditor::editor/tools/files/content/files.phtml" output="1" />
    </adminhtml_system_design_editor_files_contents>

    <adminhtml_system_design_editor_preview>
        <update handle="adminhtml_system_design_editor_launch"/>
        <reference name="design_editor_toolbar">
                <block type="Mage_DesignEditor_Block_Adminhtml_Editor_Toolbar_Buttons" name="design_editor_toolbar_buttons" template="Mage_DesignEditor::editor/toolbar/preview_buttons.phtml" />
        </reference>
    </adminhtml_system_design_editor_preview>
</layout>
