<?php
/** @var $this Mage_DesignEditor_Block_Adminhtml_Editor_Tools_Files_Content_Files */
?>

<?php if ($this->getFilesCount() > 0): ?>

    <div name="css-editor">
        <?php if ($this->getStorageType() == Mage_Theme_Model_Wysiwyg_Storage::TYPE_FONT): ?>
            <div class="uploader">
                <?php foreach ($this->getFiles() as $file): ?>
                    <div class="clear"></div>
                    <div class="file-row filecnt file-font" id="<?php echo $file['id'] ?>">
                        <span class="file-info-name">
                            <?php echo $file['text'] ?>
                        </span>
                        <span class="file-info-size">
                            <a href="#" class="action-add" title="<?php echo $this->__('Insert file'); ?>" data-insert-file="<?php echo $file['id'] ?>">
                                <span><?php echo $this->__('Insert file'); ?></span>
                            </a>
                        </span>
                        <span class="file-info-cancel">
                            <a href="#" class="action-delete" title="<?php echo $this->__('Delete file'); ?>" data-delete-file="<?php echo $file['id'] ?>">
                                <span><?php echo $this->__('Delete file'); ?></span>
                            </a>
                        </span>
                    </div>
                <?php endforeach; ?>
            </div>
        <?php else: ?>
            <?php foreach ($this->getFiles() as $file): ?>
                <div class="image base-image asset-image css-editor-image filecnt" id="<?php echo $file['id'] ?>">
                    <?php if (isset($file['thumbnailParams'])): ?>
                        <img class="spacer" src="<?php echo Mage::getDesign()->getViewFileUrl('images/spacer.gif') ?>"/>
                        <img src="<?php echo $this->getUrl('*/*/previewImage', $file['thumbnailParams']) ?>">
                    <?php endif; ?>
                    <img class="spacer" src="<?php echo Mage::getDesign()->getViewFileUrl('images/spacer.gif') ?>"/>
                    <div>
                        <?php echo $file['width'] ?>x<?php echo $file['height'] ?> px.
                    </div>
                    <div class="image-text">
                        <?php echo $file['text'] ?>
                    </div>
                    <div class="actions">
                        <a href="#" class="action-delete" title="<?php echo $this->__('Delete file'); ?>" data-delete-file="<?php echo $file['id'] ?>">
                            <span><?php echo $this->__('Delete file'); ?></span>
                        </a>
                        <a href="#" class="action-add" title="<?php echo $this->__('Insert file'); ?>" data-insert-file="<?php echo $file['id'] ?>">
                            <span><?php echo $this->__('Insert file'); ?></span>
                        </a>
                    </div>
                </div>
            <?php endforeach; ?>
        <?php endif; ?>
    </div>

<?php else: ?>
    <?php echo $this->__('No files found') ?>
<?php endif; ?>
