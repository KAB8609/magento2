<script type="text/javascript">
(function($) {
    'use strict';

    $('.vde-tools').toolsPanel();
    $(
        '#vde-tab-quick-styles .element-font-picker select,' +
        '#vde-tab-quick-styles .element-color-picker input,' +
        //'#vde-tab-quick-styles .element-image-uploader' +   // Uploaders are special case
        '#vde-tab-quick-styles .element-background .element-checkbox'
    ).quickStyleElement({
        saveQuickStylesUrl: '<?php echo $this->getSaveUrl(); ?>'
    });

    $('[class^="action-"][href="#vde-tab-custom"]').on('click.activateCustomCodeTab', function() {
        $('.vde-tab-controls a[href="#vde-tab-custom"]').trigger('click');
    });

    $('.action-edit[href="#vde-tab-custom"]').on('click.focusOnCustomCodeTextarea', function() {
        $('#custom_code').focus();
    });

    $.widget("mage.translateInlineToggle", {
        options: {
            frameUrl: null,
            refreshVdeCanvas: false,
            refreshIframeEvent: 'refreshIframe',
            disableInlineTranslation: false
        },

        _create: function() {
            $('body').on(this.options.refreshIframeEvent, $.proxy(this._onIframeRefresh, this));
            this.element.on('click', $.proxy(this.options.onClick, this));
        },

        /**
         * Iframe refresh
         * @protected
         */
        _onIframeRefresh: function() {
            /** todo SDW Add animation when refreshing the iframe. */

            var url = this.options.frameUrl;
            if (!this.options.disableInlineTranslation)
                url = url + "translation_mode/text";

            var container_frame = parent.jQuery('#vde_container_frame');

            container_frame.prop('src', url);

            /** todo SDW Is there a way to get to the content window through jQuery so that this will
             * be supported across all browsers.
             */
            container_frame.get(0).contentWindow.location.href = url;

            /**
             * Since the url is being modified to support inline translation, the window is not reloaded since it
             * is using the url from the cache to display.
             */
        },

        /**
         * This method displays the text editing sub-menus to select from and defaults the currently selected mode.
         */
        toggleTranslationInline: function() {
            // Display the text editing sub-menus.
            <!-- todo SDW  Pull out all styles to css -->
            parent.jQuery('#text-editing-submodes').attr('style', 'background-color:white;width:170px;height:130px;position:absolute;top:-120px;left:-130px;border:1px solid gray; border-radius:4px;');

            /** todo SDW Change the icon in the footer */
        },

        /**
         * This method will only enable editing for the translation mode specified.
         *
         * If this is the first time a mode is selected, the contents of the iframe will be wrapped with the appropriate
         * attributes where applicable (translate-mode, either 'text', 'script' or 'alt').
         *
         * @param mode
         */
        toggleTranslationMode: function(mode) {
            this.options.disableInlineTranslation = false;

            // Hide text editing sub-menus.
            parent.jQuery('#text-editing-submodes').attr('style', 'display:none;');

            // Highlight selected mode.
            if (mode === 'text') {
                // Check to see if turning off (selecting the already highlighted option).
                if (parent.jQuery('#vde-translate-text').hasClass('background-on')) {
                    parent.jQuery('#vde-translate-text').removeClass('background-on').addClass('background-off');
                    parent.jQuery('#vde-translate-text-img').prop('src', '<?php echo $this->getViewFileUrl('Mage_DesignEditor::images/translate-off.png') ?>');

                    // Refresh iframe minus the translation mode on the url.
                    this.options.disableInlineTranslation = true;
                }
                else {
                    // Enable text option
                    parent.jQuery('#vde-translate-text').removeClass('background-off').addClass('background-on');
                    parent.jQuery('#vde-translate-text-img').prop('src', '<?php echo $this->getViewFileUrl('Mage_DesignEditor::images/translate-on.png') ?>');

                    // Disable other options.
                    parent.jQuery('#vde-translate-script').removeClass('background-on').addClass('background-off');
                    parent.jQuery('#vde-translate-script-img').prop('src', '<?php echo $this->getViewFileUrl('Mage_DesignEditor::images/translate-off.png') ?>');
                    parent.jQuery('#vde-translate-alt').removeClass('background-on').addClass('background-off');
                    parent.jQuery('#vde-translate-alt-img').prop('src', '<?php echo $this->getViewFileUrl('Mage_DesignEditor::images/translate-off.png') ?>');
                }

                /** todo SDW Change toolbar button as well */
            }
            else if (mode === 'script') {
                // Check to see if turning off (selecting the already highlighted option).
                if (parent.jQuery('#vde-translate-script').hasClass('background-on')) {
                    parent.jQuery('#vde-translate-script').removeClass('background-on').addClass('background-off');
                    parent.jQuery('#vde-translate-script-img').prop('src', '<?php echo $this->getViewFileUrl('Mage_DesignEditor::images/translate-off.png') ?>');

                    // Refresh iframe minus the translation mode on the url.
                    this.options.disableInlineTranslation = true;
                }
                else {
                    // Enable script option.
                    parent.jQuery('#vde-translate-script').removeClass('background-off').addClass('background-on');
                    parent.jQuery('#vde-translate-script-img').prop('src', '<?php echo $this->getViewFileUrl('Mage_DesignEditor::images/translate-on.png') ?>');

                    // Disable other options.
                    parent.jQuery('#vde-translate-text').removeClass('background-on').addClass('background-off');
                    parent.jQuery('#vde-translate-text-img').prop('src', '<?php echo $this->getViewFileUrl('Mage_DesignEditor::images/translate-off.png') ?>');
                    parent.jQuery('#vde-translate-alt').removeClass('background-on').addClass('background-off');
                    parent.jQuery('#vde-translate-alt-img').prop('src', '<?php echo $this->getViewFileUrl('Mage_DesignEditor::images/translate-off.png') ?>');
                }

                /** todo SDW Change toolbar button as well */
            }
            else {
                // Check to see if turning off (selecting the already highlighted option).
                if (parent.jQuery('#vde-translate-alt').hasClass('background-on')) {
                    parent.jQuery('#vde-translate-alt').removeClass('background-on').addClass('background-off');
                    parent.jQuery('#vde-translate-alt-img').prop('src', '<?php echo $this->getViewFileUrl('Mage_DesignEditor::images/translate-off.png') ?>');

                    // Refresh iframe minus the translation mode on the url.
                    this.options.disableInlineTranslation = true;
                }
                else {
                    // Enable alt option.
                    parent.jQuery('#vde-translate-alt').removeClass('background-off').addClass('background-on');
                    parent.jQuery('#vde-translate-alt-img').prop('src', '<?php echo $this->getViewFileUrl('Mage_DesignEditor::images/translate-on.png') ?>');

                    // Disable other options.
                    parent.jQuery('#vde-translate-text').removeClass('background-on').addClass('background-off');
                    parent.jQuery('#vde-translate-text-img').prop('src', '<?php echo $this->getViewFileUrl('Mage_DesignEditor::images/translate-off.png') ?>');
                    parent.jQuery('#vde-translate-script').removeClass('background-on').addClass('background-off');
                    parent.jQuery('#vde-translate-script-img').prop('src', '<?php echo $this->getViewFileUrl('Mage_DesignEditor::images/translate-off.png') ?>');
                }

                /** todo SDW Change toolbar button as well */
            }

            /** todo SDW Call into translate_inline widget to hide/show appropriate wrapping based on translation mode. */

            // If this is the first time selecting a mode, refresh the iframe to wrap all the applicable content.
            if (this.options.refreshVdeCanvas || this.options.disableInlineTranslation) {
                // Refresh iframe with new url
                this.element.trigger('refreshIframe');
            }
        }
    });

})(window.jQuery);
</script>
