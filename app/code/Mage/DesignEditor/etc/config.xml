<config>
    <global>
        <resources>
            <designeditor_setup>
                <setup>
                    <module>Mage_DesignEditor</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
            </designeditor_setup>
        </resources>
    </global>
    <default>
        <web>
            <routers>
                <vde>
                    <area>frontend</area>
                    <class>Mage_DesignEditor_Controller_Varien_Router_Standard</class>
                    <base_controller>Mage_Core_Controller_Varien_Action</base_controller>
                </vde>
            </routers>
        </web>
        <theme>
            <customization>
                <quick_style_css>Mage_DesignEditor_Model_Theme_Customization_File_QuickStyleCss</quick_style_css>
            </customization>
        </theme>
    </default>
    <frontend>
        <routers>
            <designeditor>
                <use>standard</use>
                <args>
                    <module>Mage_DesignEditor</module>
                    <frontName>design</frontName>
                </args>
            </designeditor>
        </routers>
    </frontend>
    <vde>
        <design_editor>
            <frontName>vde</frontName>
            <disabledCacheTypes>
                <block_html />
                <config />
            </disabledCacheTypes>
        </design_editor>
    </vde>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <mage_designeditor before="Mage_Adminhtml">Mage_DesignEditor_Adminhtml</mage_designeditor>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
</config>