<layout version="0.1.0">
    <adminhtml_extension_custom_edit>
        <reference name="content">
            <block type="Mage_Connect_Block_Adminhtml_Extension_Custom_Edit" name="connect_extension_edit"/>
        </reference>
        <reference name="left">
            <block type="Mage_Connect_Block_Adminhtml_Extension_Custom_Edit_Tabs" name="connect_extension_edit_tabs">
                <block type="Mage_Connect_Block_Adminhtml_Extension_Custom_Edit_Tab_Package" name="tab_package" template="extension/custom/package.phtml"/>
                <block type="Mage_Connect_Block_Adminhtml_Extension_Custom_Edit_Tab_Release" name="tab_release" template="extension/custom/release.phtml"/>
                <block type="Mage_Connect_Block_Adminhtml_Extension_Custom_Edit_Tab_Authors" name="tab_authors" template="extension/custom/authors.phtml"/>
                <block type="Mage_Connect_Block_Adminhtml_Extension_Custom_Edit_Tab_Depends" name="tab_depends" template="extension/custom/depends.phtml"/>
                <block type="Mage_Connect_Block_Adminhtml_Extension_Custom_Edit_Tab_Contents" name="tab_contents" template="extension/custom/contents.phtml"/>
                <block type="Mage_Connect_Block_Adminhtml_Extension_Custom_Edit_Tab_Local" name="tab_local"/>
                <action method="addTab">
                    <name>package_info</name>
                    <block>tab_package</block>
                </action>
                <action method="addTab">
                    <name>release_info</name>
                    <block>tab_release</block>
                </action>
                <action method="addTab">
                    <name>authors</name>
                    <block>tab_authors</block>
                </action>
                <action method="addTab">
                    <name>dependencies</name>
                    <block>tab_depends</block>
                </action>
                <action method="addTab">
                    <name>contents</name>
                    <block>tab_contents</block>
                </action>
                <action method="addTab">
                    <name>load_local_package</name>
                    <block>tab_local</block>
                </action>
            </block>
        </reference>
    </adminhtml_extension_custom_edit>
</layout>
