<layout version="0.1.0">
    <adminhtml_sales_order_view>
        <reference name="head">
            <action method="addCss">
                <file>Magento_Core::prototype/magento.css</file>
            </action>
        </reference>
        <reference name="order_item_extra_info">
            <block type="Mage_GiftMessage_Block_Adminhtml_Sales_Order_View_Giftoptions" name="gift_options_link" template="sales/order/view/giftoptions.phtml">
                <block type="Mage_GiftMessage_Block_Adminhtml_Sales_Order_View_Items" name="gift_options_item_data" template="sales/order/view/items.phtml"/>
            </block>
        </reference>
        <reference name="order_tab_info">
            <block type="Magento_Adminhtml_Block_Template" name="popup_window" template="Mage_GiftMessage::popup.phtml">
                <block type="Mage_GiftMessage_Block_Adminhtml_Sales_Order_View_Form" name="gift_options_form" template="giftoptionsform.phtml"/>
            </block>
        </reference>
    </adminhtml_sales_order_view>
</layout>
