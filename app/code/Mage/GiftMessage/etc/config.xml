<config>
    <global>
        <resources>
            <giftmessage_setup>
                <setup>
                    <module>Mage_GiftMessage</module>
                    <class>Mage_GiftMessage_Model_Resource_Setup</class>
                </setup>
            </giftmessage_setup>
        </resources>
        <sales>
            <quote>
                <item>
                    <product_attributes>
                        <gift_message_available />
                    </product_attributes>
                </item>
            </quote>
        </sales>
    </global>
    <default>
        <sales>
            <gift_messages>
                <allow_items>0</allow_items>
                <allow_order>0</allow_order>
            </gift_messages>
        </sales>
    </default>
    <adminhtml>
        <translate>
            <modules>
                <Mage_GiftMessage>
                    <files>
                        <default>Mage_GiftMessage.csv</default>
                    </files>
                </Mage_GiftMessage>
            </modules>
        </translate>
    </adminhtml>
    <frontend>
        <translate>
            <modules>
                <Mage_GiftMessage>
                    <files>
                        <default>Mage_GiftMessage.csv</default>
                    </files>
                </Mage_GiftMessage>
            </modules>
        </translate>
    </frontend>
</config>