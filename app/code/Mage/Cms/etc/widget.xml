<widgets xmlns="http://www.magentocommerce.com/widget"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://www.magentocommerce.com/widget ../../Widget/etc/widget.xsd ">

    <widget id="cms_page_link" class="Mage_Cms_Block_Widget_Page_Link" translate="label description"
            module="Mage_Cms" is_email_compatible="true"
            placeholder_image="Mage_Cms::images/widget_page_link.gif">
        <label>CMS Page Link</label>
        <description>Link to a CMS Page</description>
        <parameter name="page_id" xsi:type="value_renderer" visible='true' required="true"
                   translate="label">
            <label>CMS Page</label>
            <renderer class="Mage_Adminhtml_Block_Cms_Page_Widget_Chooser">
                <data>
                    <button translate="open">
                        <open>Select Page...</open>
                    </button>
                </data>
            </renderer>
        </parameter>
        <parameter name="anchor_text" xsi:type="text" translate="label description" visible="true">
            <label>Anchor Custom Text</label>
            <description>If empty, the Page Title will be used</description>
        </parameter>
        <parameter name="title" xsi:type="text" translate="label" visible="true">
            <label>Anchor Custom Title</label>
        </parameter>
        <parameter name="template" xsi:type="select" translate="label" visible="true">
            <label>Template</label>
            <option name="default" translate="label" value="widget/link/link_block.phtml"
                    selected="true">
                <label>CMS Page Link Block Template</label>
            </option>
            <option name="link_inline" translate="label" value="widget/link/link_inline.phtml">
                <label>CMS Page Link Inline Template</label>
            </option>
        </parameter>
    </widget>
    <widget id="cms_static_block" class="Mage_Cms_Block_Widget_Block" translate="label description"
            module="Mage_Cms" placeholder_image="Mage_Cms::images/widget_block.gif">
        <label>CMS Static Block</label>
        <description>Contents of a Static Block</description>
        <parameter name="block_id" xsi:type="value_renderer" translate="label" visible="true"
                   required="true" sort_order="20">
            <label>Block</label>
            <renderer class="Mage_Adminhtml_Block_Cms_Block_Widget_Chooser">
                <data>
                    <button translate="open">
                        <open>Select Block...</open>
                    </button>
                </data>
            </renderer>
        </parameter>
        <parameter name="template" xsi:type="select" translate="label" visible="true" required="true"
                   sort_order="10">
            <label>Template</label>
            <option name="default" translate="label" value="widget/static_block/default.phtml"
                    selected="true">
                <label>CMS Static Block Default Template</label>
            </option>
        </parameter>
    </widget>
</widgets>
