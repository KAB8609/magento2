<layout version="0.1.0">
    <checkout_multishipping_overview>
        <reference name="head">
            <block type="Mage_Page_Block_Html_Head_Script" name="mage-centinel-centinel-authenticate-js">
                <arguments>
                    <file>Mage_Centinel::centinel-authenticate.js</file>
                </arguments>
            </block>
        </reference>
        <reference name="checkout.multishipping.overview.items.after">
            <block type="Mage_Centinel_Block_Authentication" name="centinel.frame" template="authentication.phtml">
                <action method="setAuthenticationStartMode">
                    <mode>window</mode>
                </action>
            </block>
        </reference>
    </checkout_multishipping_overview>
</layout>
