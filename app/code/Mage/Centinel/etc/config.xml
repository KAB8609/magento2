<config>
    <frontend>
        <translate>
            <modules>
                <Mage_Centinel>
                    <files>
                        <default>Mage_Centinel.csv</default>
                    </files>
                </Mage_Centinel>
            </modules>
        </translate>
        <routers>
            <centinel>
                <use>standard</use>
                <args>
                    <module>Mage_Centinel</module>
                    <frontName>centinel</frontName>
                </args>
            </centinel>
        </routers>
        <secure_url>
            <centinel>/centinel/</centinel>
        </secure_url>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Mage_Centinel>
                    <files>
                        <default>Mage_Centinel.csv</default>
                    </files>
                </Mage_Centinel>
            </modules>
        </translate>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Mage_Centinel before="Mage_Adminhtml">Mage_Centinel_Adminhtml</Mage_Centinel>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <global>
        <payment>
            <cc>
                <types>
                    <VI>
                        <validator>
                            <centinel>
                                <state>Mage_Centinel_Model_State_Visa</state>
                            </centinel>
                        </validator>
                    </VI>
                    <MC>
                        <validator>
                            <centinel>
                                <state>Mage_Centinel_Model_State_Mastercard</state>
                            </centinel>
                        </validator>
                    </MC>
                    <JCB>
                        <validator>
                            <centinel>
                                <state>Mage_Centinel_Model_State_Jcb</state>
                            </centinel>
                        </validator>
                    </JCB>
                    <SM>
                        <validator>
                            <centinel>
                                <state>Mage_Centinel_Model_State_Mastercard</state>
                            </centinel>
                        </validator>
                    </SM>
                </types>
            </cc>
        </payment>
    </global>
</config>