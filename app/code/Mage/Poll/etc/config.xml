<config>
    <modules>
        <Mage_Poll>
            <version>1.6.0.0</version>
            <active>true</active>
            <depends>
                <Mage_Core/>
                <Mage_Cms/>
            </depends>
        </Mage_Poll>
    </modules>
    <frontend>
        <routers>
            <poll>
                <use>standard</use>
                <args>
                    <module>Mage_Poll</module>
                    <frontName>poll</frontName>
                </args>
            </poll>
        </routers>
        <translate>
            <modules>
                <Mage_Poll>
                    <files>
                        <default>Mage_Poll.csv</default>
                    </files>
                </Mage_Poll>
            </modules>
        </translate>
        <layout>
            <updates>
                <poll module="Mage_Poll">
                    <file>layout.xml</file>
                </poll>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Mage_Poll>
                    <files>
                        <default>Mage_Poll.csv</default>
                    </files>
                </Mage_Poll>
            </modules>
        </translate>
    </adminhtml>
    <global>
        <resources>
            <poll_setup>
                <setup>
                    <module>Mage_Poll</module>
                </setup>
            </poll_setup>
        </resources>
    </global>
</config>
