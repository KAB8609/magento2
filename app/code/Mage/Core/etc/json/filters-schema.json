{
    "$schema": "http://json-schema.org/draft-03/schema#",
    "title": "MongoDB Query Filters Json Schema",
    "description": "A Json Schema for validating Json Filters that use MongoDB query expressions",
    "type": "object",
    "patternProperties": {
        "^[a-zA-z][a-zA-Z0-9\\-_\\.]*$": {"$ref": "unary-expressions.json"},
        "^[\\$](and|or)$": {"$ref": "binary-array-items.json"}
    },
    "additionalProperties": false
}
