<config>
    <service>
        <title>Layout Service</title>
        <class>Mage_Core_Service_LayoutService</class>
        <uri>layout</uri>
        <allow_remote>0</allow_remote>
        <call>
            <title>Retrieve an empty Layout instance</title>
            <method>getLayout</method>
        </call>
        <call>
            <title>Load Layout</title>
            <method>loadLayout</method>
        </call>
        <call>
            <title>Add Layout Handle</title>
            <method>addLayoutHandle</method>
        </call>
        <call>
            <title>Load Layout Updates</title>
            <method>loadLayoutUpdates</method>
        </call>
        <call>
            <title>Generate Layout</title>
            <method>generateLayout</method>
        </call>
        <call>
            <title>Generate Layout XML</title>
            <method>generateLayoutXml</method>
        </call>
        <call>
            <title>Generate Layout Blocks</title>
            <method>generateLayoutBlocks</method>
        </call>
        <call>
            <title>Render Layout</title>
            <method>renderLayout</method>
        </call>
    </service>
</config>
