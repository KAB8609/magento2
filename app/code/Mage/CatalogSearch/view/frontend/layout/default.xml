<layout version="0.1.0">
    <default>
        <reference name="header">
            <block type="Mage_Core_Block_Template" name="top.search" as="topSearch" template="Mage_CatalogSearch::form.mini.phtml"/>
        </reference>
        <reference name="footer_links">
            <block type="Mage_Page_Block_Link_Current" name="catalogsearch-term-popular-link"
                 ifconfig="catalog/seo/search_terms">
                <arguments translate="label">
                    <label>Search Terms</label>
                    <path>catalogsearch/term/popular</path>
                </arguments>
            </block>
            <block type="Mage_Page_Block_Link_Current" name="catalogsearch-advanced-link"
                ifconfig="catalog/seo/search_terms">
                <arguments translate="label">
                    <label>Advanced Search</label>
                    <path>catalogsearch/advanced</path>
                </arguments>
            </block>
        </reference>
    </default>
</layout>
