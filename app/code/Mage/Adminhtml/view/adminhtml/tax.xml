<layout>
    <adminhtml_tax_rule_index>
        <update handle="adminhtml_tax_rule_block"/>
        <reference name="content">
            <block type="Mage_Adminhtml_Block_Tax_Rule" name="adminhtml.block.tax.rule.container"/>
        </reference>
    </adminhtml_tax_rule_index>
     <adminhtml_tax_rule_block>
        <reference name="adminhtml.block.tax.rule.container">
            <block type="Mage_Backend_Block_Widget_Grid" name="adminhtml.block.tax.rule.grid" as="grid">
                <arguments>
                    <id>taxRuleGrid</id>
                    <dataSource type="object">Mage_Tax_Model_Resource_Rule_Grid_Collection</dataSource>
                    <default_sort>tax_rule_id</default_sort>
                    <default_dir>ASC</default_dir>
                    <save_parameters_in_session>1</save_parameters_in_session>
                </arguments>
                <block type="Mage_Backend_Block_Widget_Grid_ColumnSet" name="adminhtml.block.tax.rule.columnSet" as="grid.columnSet">
                    <arguments>
                        <rowUrl>
                            <path>*/*/edit</path>
                            <extraParamsTemplate>
                                <rule>getId</rule>
                            </extraParamsTemplate>
                        </rowUrl>
                    </arguments>
                    <block type="Mage_Backend_Block_Widget_Grid_Column" as="code">
                        <arguments>
                            <header translate='true' module='Mage_Tax'>Name</header>
                            <index>code</index>
                            <align>left</align>
                            <type>text</type>
                            <filter_index>code</filter_index>
                        </arguments>
                    </block>
                    <block type="Mage_Backend_Block_Widget_Grid_Column" as="customer_tax_classes">
                        <arguments>
                            <header translate='true' module='Mage_Tax'>Customer Tax Class</header>
                            <sortable>0</sortable>
                            <align>left</align>
                            <index>customer_tax_classes</index>
                            <filter_index>ctc.customer_tax_class_id</filter_index>
                            <show_missing_option_values>1</show_missing_option_values>
                            <type>options</type>
                            <options type="options">Mage_Tax_Model_Resource_Rule_Grid_Options_CustomerTaxClass</options>
                        </arguments>
                    </block>
                    <block type="Mage_Backend_Block_Widget_Grid_Column" as="product_tax_classes">
                        <arguments>
                            <header translate='true' module='Mage_Tax'>Product Tax Class</header>
                            <sortable>0</sortable>
                            <align>left</align>
                            <index>product_tax_classes</index>
                            <filter_index>ptc.product_tax_class_id</filter_index>
                            <show_missing_option_values>1</show_missing_option_values>
                            <type>options</type>
                            <options type="options">Mage_Tax_Model_Resource_Rule_Grid_Options_ProductTaxClass</options>
                        </arguments>
                    </block>
                    <block type="Mage_Backend_Block_Widget_Grid_Column" as="tax_rates">
                        <arguments>
                            <header translate='true' module='Mage_Tax'>Tax Rate</header>
                            <sortable>0</sortable>
                            <align>left</align>
                            <index>tax_rates</index>
                            <filter_index>rate.tax_calculation_rate_id</filter_index>
                            <show_missing_option_values>1</show_missing_option_values>
                            <type>options</type>
                            <options type="options">Mage_Tax_Model_Resource_Rule_Grid_Options_HashOptimized</options>
                        </arguments>
                    </block>
                    <block type="Mage_Backend_Block_Widget_Grid_Column" as="priority">
                        <arguments>
                            <header translate='true' module='Mage_Tax'>Priority</header>
                            <index>priority</index>
                            <width>50</width>
                            <type>text</type>
                        </arguments>
                    </block>
                    <block type="Mage_Backend_Block_Widget_Grid_Column" as="position">
                        <arguments>
                            <header translate='true' module='Mage_Tax'>Sort Order</header>
                            <index>position</index>
                            <width>50</width>
                            <type>text</type>
                        </arguments>
                    </block>
                </block>
            </block>
        </reference>
    </adminhtml_tax_rule_block>
    <adminhtml_tax_rule_edit>
        <reference name="head">
            <action method="addJs"><file>jquery/editableMultiselect/js/jquery.editable.js</file></action>
            <action method="addJs"><file>jquery/editableMultiselect/js/jquery.multiselect.js</file></action>
            <action method="addJs"><file>mage/backend/editablemultiselect.js</file></action>
            <action method="addCss"><file>jquery/editableMultiselect/css/jquery.multiselect.css</file></action>
            <action method="addCss"><file>Mage_Core::prototype/magento.css</file></action>
        </reference>
        <reference name="content">
            <block type="Mage_Adminhtml_Block_Tax_Rule_Edit"></block>
            <block type="Mage_Adminhtml_Block_Tax_Rule_Edit_Form" name="tax-rule-edit" template="Mage_Adminhtml::tax/rule/edit.phtml"></block>
            <block type="Mage_Adminhtml_Block_Tax_Rate_Form" name="tax-rate-form" template="tax/rule/rate/form.phtml"></block>
            <block type="Mage_Adminhtml_Block_Tax_Rate_ImportExport" name="tax-rate-importExport" template="tax/importExport.phtml"></block>
        </reference>
    </adminhtml_tax_rule_edit>

    <adminhtml_tax_rate_index>
        <update handle="formkey"/>
        <update handle="adminhtml_tax_rate_block"/>
        <reference name="content">
            <block type="Mage_Adminhtml_Block_Tax_Rate_Toolbar_Add" name="adminhtml.tax.rate.container"/>
        </reference>
    </adminhtml_tax_rate_index>
    
    <adminhtml_tax_rate_exportcsv>
        <update handle="adminhtml_tax_rate_block"/>
        <container name="adminhtml.tax.rate.container" label="Tax Rate Container"/>
    </adminhtml_tax_rate_exportcsv>

    <adminhtml_tax_rate_exportxml>
        <update handle="adminhtml_tax_rate_block"/>
        <container name="adminhtml.tax.rate.container" label="Tax Rate Container"/>
    </adminhtml_tax_rate_exportxml>

    <adminhtml_tax_rate_block>
        <reference name='adminhtml.tax.rate.container'>
            <block type="Mage_Backend_Block_Widget_Grid" name='adminhtml.tax.rate.grid' as='grid'>
                <arguments>
                    <id>tax_rate_grid</id>
                    <dataSource type="object">Mage_Tax_Model_Resource_Calculation_Grid_Collection</dataSource>
                    <default_sort>region_name</default_sort>
                    <default_dir>ASC</default_dir>
                    <save_parameters_in_session>1</save_parameters_in_session>
                </arguments>
                <block type="Mage_Backend_Block_Widget_Grid_Export" name="adminhtml.tax.rate.grid.export" as="grid.export">
                    <arguments>
                        <exportTypes>
                            <csv>
                                <urlPath>*/*/exportCsv</urlPath>
                                <label translate="true" module="Mage_Tax">CSV</label>
                            </csv>
                            <excel>
                                <urlPath>*/*/exportXml</urlPath>
                                <label translate="true" module="Mage_Tax">Excel XML</label>
                            </excel>
                        </exportTypes>
                    </arguments>
                </block>
                <block type='Mage_Backend_Block_Widget_Grid_ColumnSet' name='adminhtml.catalog.product.set.grid.columnSet' as='grid.columnSet'>
                    <arguments>
                        <id>tax_rate_grid</id>
                        <rowUrl>
                            <path>*/*/edit</path>
                            <extraParamsTemplate>
                                <rate>getTaxCalculationRateId</rate>
                            </extraParamsTemplate>
                        </rowUrl>
                    </arguments>
                    <block type='Mage_Backend_Block_Widget_Grid_Column' as='code'>
                        <arguments>
                            <header translate='true' module='Mage_Tax'>Tax Identifier</header>
                            <header_export translate='true' module='Mage_Tax'>Code</header_export>
                            <align>left</align>
                            <filter_index>main_table.code</filter_index>
                            <index>code</index>
                        </arguments>
                    </block>
                    <block type='Mage_Backend_Block_Widget_Grid_Column' as='tax_country_id'>
                        <arguments>
                            <header translate='true' module='Mage_Tax'>Country</header>
                            <type>country</type>
                            <align>left</align>
                            <filter_index>main_table.tax_country_id</filter_index>
                            <index>tax_country_id</index>
                            <renderer>Mage_Adminhtml_Block_Tax_Rate_Grid_Renderer_Country</renderer>
                            <sortable>0</sortable>
                        </arguments>
                    </block>
                    <block type='Mage_Backend_Block_Widget_Grid_Column' as='region_name'>
                        <arguments>
                            <header translate='true' module='Mage_Tax'>State/Region</header>
                            <header_export translate='true' module='Mage_Tax'>State</header_export>
                            <align>left</align>
                            <filter_index>region_table.code</filter_index>
                            <index>region_name</index>
                            <default>*</default>
                        </arguments>
                    </block>
                    <block type='Mage_Backend_Block_Widget_Grid_Column' as='tax_postcode'>
                        <arguments>
                            <header translate='true' module='Mage_Tax'>Zip/Post Code</header>
                            <align>left</align>
                            <index>tax_postcode</index>
                            <default>*</default>
                        </arguments>
                    </block>
                    <block type='Mage_Backend_Block_Widget_Grid_Column' as='rate'>
                        <arguments>
                            <header translate='true' module='Mage_Tax'>Rate</header>
                            <align>right</align>
                            <index>rate</index>
                            <type>number</type>
                            <default>0.00</default>
                            <renderer>Mage_Adminhtml_Block_Tax_Rate_Grid_Renderer_Data</renderer>
                        </arguments>
                    </block>
                </block>
            </block>
        </reference>
    </adminhtml_tax_rate_block>
</layout>
