<?php if ($_entity = $this->getEntity()): ?>
<div id="comments_block">
    <div class="field-row">
        <label class="normal" for="history_comment"><?php echo Mage::helper('Mage_Sales_Helper_Data')->__('Comment Text') ?></label>
        <textarea name="comment[comment]" rows="3" cols="5" id="history_comment"></textarea>
    </div>
    <div class="clearfix">
        <div class="actions">
            <?php echo $this->getChildHtml('submit_button') ?>
        </div>
        <div class="order-history-comments-options">
            <?php if ($this->canSendCommentEmail()): ?>
                <input name="comment[is_customer_notified]" type="checkbox" id="history_notify" value="1" /><label class="normal" for="history_notify"><?php echo Mage::helper('Mage_Sales_Helper_Data')->__('Notify Customer by Email') ?></label><br />
            <?php endif; ?>
            <input name="comment[is_visible_on_front]" type="checkbox" id="history_visible" value="1" /><label class="normal" for="history_visible"> <?php echo Mage::helper('Mage_Sales_Helper_Data')->__('Visible on Frontend') ?></label>
        </div>
    </div>
    <ul class="note-list">
    <?php foreach ($_entity->getCommentsCollection(true) as $_comment): ?>
        <li>
            <span class="note-list-date"><?php echo $this->helper('Mage_Core_Helper_Data')->formatDate($_comment->getCreatedAtDate(), 'medium') ?></span>
            <span class="note-list-time"><?php echo $this->helper('Mage_Core_Helper_Data')->formatTime($_comment->getCreatedAtDate(), 'medium') ?></span>
            <span class="note-list-customer">
                <?php echo $this->helper('Mage_Sales_Helper_Data')->__('Customer') ?>
                <?php if ($_comment->getIsCustomerNotified()): ?>
                    <span class="note-list-customer-notified"><?php echo $this->helper('Mage_Sales_Helper_Data')->__('Notified') ?></span>
                <?php else: ?>
                    <span class="note-list-customer-not-notified"><?php echo $this->helper('Mage_Sales_Helper_Data')->__('Not Notified') ?></span>
                <?php endif; ?>
            </span>
            <div class="note-list-comment"><?php echo $this->escapeHtml($_comment->getComment(), array('b','br','strong','i','u')) ?></div>
        </li>
    <?php endforeach; ?>
    </ul>
</div>
<script type="text/javascript">
function submitComment() {
    submitAndReloadArea($('comments_block').parentNode, '<?php echo $this->getSubmitUrl() ?>')
}

if ($('submit_comment_button')) {
    $('submit_comment_button').observe('click', submitComment);
}
</script>
<?php endif; ?>
