<config>
    <global>
        <resources>
            <wishlist_setup>
                <setup>
                    <module>Mage_Wishlist</module>
                </setup>
            </wishlist_setup>
        </resources>
        <template>
            <email>
                <wishlist_email_email_template translate="label" module="Mage_Wishlist">
                    <label>Wishlist Sharing</label>
                    <file>email/share_notification.html</file>
                    <type>html</type>
                </wishlist_email_email_template>
            </email>
        </template>
        <wishlist>
            <item>
                <product_attributes>
                    <visibility />
                    <url_path />
                    <url_key />
                </product_attributes>
            </item>
        </wishlist>
    </global>
    <frontend>
        <translate>
            <modules>
                <Mage_Wishlist>
                    <files>
                        <default>Mage_Wishlist.csv</default>
                    </files>
                </Mage_Wishlist>
            </modules>
        </translate>
        <secure_url>
            <wishlist>/wishlist/</wishlist>
        </secure_url>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Mage_Wishlist>
                    <files>
                        <default>Mage_Wishlist.csv</default>
                    </files>
                </Mage_Wishlist>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <wishlist>
            <general>
                <active>1</active>
            </general>
            <email>
                <email_identity>general</email_identity>
                <email_template>wishlist_email_email_template</email_template>
                <number_limit>10</number_limit>
                <text_limit>255</text_limit>
            </email>
        </wishlist>
    </default>
</config>