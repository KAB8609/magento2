<config>
    <modules>
        <Saas_Backend>
            <version>2.0.0.0</version>
            <active>false</active>
            <depends>
                <Mage_AdminNotification/>
            </depends>
        </Saas_Backend>
    </modules>
    <global>
        <events>
            <adminhtml_controller_action_predispatch_start>
                <observers>
                    <disable_adminhtml_cache_controller>
                        <class>Saas_Backend_Model_Cache_Observer</class>
                        <method>disableAdminhtmlCacheController</method>
                    </disable_adminhtml_cache_controller>
                </observers>
            </adminhtml_controller_action_predispatch_start>
        </events>
    </global>
    <adminhtml>
        <di>
            <preferences>
                <Mage_AdminNotification_Model_System_Message_CacheOutdated>Saas_Backend_Model_System_Message_CacheOutdated</Mage_AdminNotification_Model_System_Message_CacheOutdated>
            </preferences>
            <Saas_Backend_Model_Config_Source_Locale>
                <parameters>
                    <allowedLocaleCodes>
                        <en_US>en_US</en_US>
                    </allowedLocaleCodes>
                </parameters>
            </Saas_Backend_Model_Config_Source_Locale>
            <Saas_Backend_Model_Config_Source_Locale_Translated>
                <parameters>
                    <allowedLocaleCodes>
                        <en_US>en_US</en_US>
                    </allowedLocaleCodes>
                </parameters>
            </Saas_Backend_Model_Config_Source_Locale_Translated>
        </di>
        <layout>
            <updates>
                <saas_system_account module="Saas_Backend">
                    <file>system/account.xml</file>
                </saas_system_account>
            </updates>
        </layout>
    </adminhtml>
</config>
