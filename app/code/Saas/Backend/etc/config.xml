<config>
    <modules>
        <Saas_Backend>
            <version>2.0.0.0</version>
            <active>false</active>
            <depends>
                <Mage_AdminNotification/>
                <Saas_Saas/>
            </depends>
        </Saas_Backend>
    </modules>
    <global>
        <events>
            <adminhtml_controller_action_predispatch_start>
                <observers>
                    <disable_adminhtml_cache_controller>
                        <class>Saas_Backend_Model_Cache_Observer</class>
                        <method>disableAdminhtmlCacheController</method>
                    </disable_adminhtml_cache_controller>
                </observers>
            </adminhtml_controller_action_predispatch_start>
        </events>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Saas_Backend before="Mage_Adminhtml">Saas_Backend_Adminhtml</Saas_Backend>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <di>
            <preferences>
                <Mage_AdminNotification_Model_System_Message_CacheOutdated>Saas_Backend_Model_System_Message_CacheOutdated</Mage_AdminNotification_Model_System_Message_CacheOutdated>
                <Mage_Adminhtml_Block_System_Store_Edit>Saas_Backend_Block_Adminhtml_System_Store_Edit</Mage_Adminhtml_Block_System_Store_Edit>
            </preferences>
            <Saas_Saas_Model_Limitation_Specification_Composite>
                <parameters>
                    <specificationNames>
                        <backend_store_view>Saas_Backend_Model_Limitation_Specification_Backend_Store_View</backend_store_view>
                    </specificationNames>
                </parameters>
            </Saas_Saas_Model_Limitation_Specification_Composite>
        </di>
    </adminhtml>
</config>
