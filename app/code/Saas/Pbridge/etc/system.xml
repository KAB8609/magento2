                                                <frontend_type>select</frontend_type>
                                                <config_path>payment/paypal_direct_boarding/centinel_backend</config_path>
                                                <source_model>adminhtml/system_config_source_yesno</source_model>
                                                <sort_order>61</sort_order>
                                                <show_in_default>1</show_in_default>
                                                <show_in_website>0</show_in_website>
                                                <depends><direct_boarding_centinel>1</direct_boarding_centinel></depends>
                                            </direct_boarding_centinel_backend>
                                        </fields>
                                    </wpp_settings_advanced>
                                </fields>
                            </wpp_settings>
                            <wpp_required_settings>
                                <fields>
                                    <wpp_and_express_checkout>
                                        <fields>
                                            <using_pbridge>
                                                <show_in_default>0</show_in_default>
                                                <show_in_website>0</show_in_website>
                                                <show_in_store>0</show_in_store>
                                            </using_pbridge>
                                        </fields>
                                    </wpp_and_express_checkout>
                                </fields>
                            </wpp_required_settings>
                        </fields>
                    </wpp>
                    <payments_pro_payflow_edition>
                        <fields>
                            <pp_pe_required_settings>
