                                    <wpp_settings_advanced>
                                        <fields>
                                            <centinel translate="label">
                                                <label>Enable 3D Secure Card Validation on Frontend</label>
                                            </centinel>
                                            <centinel_backend translate="label">
                                                <label>Enable 3D Secure Card Validation in Admin</label>
                                                <frontend_type>select</frontend_type>
                                                <config_path>payment/paypal_direct/centinel_backend</config_path>
                                                <source_model>adminhtml/system_config_source_yesno</source_model>
                                                <sort_order>61</sort_order>
                                                <show_in_default>1</show_in_default>
                                                <show_in_website>0</show_in_website>
                                                <depends><centinel>1</centinel></depends>
                                            </centinel_backend>
                                            <direct_boarding_centinel translate="label">
                                                <label>Enable 3D Secure Card Validation on Frontend</label>
                                                <show_in_website>0</show_in_website>
                                            </direct_boarding_centinel>
