<config>
    <modules>
        <Saas_Launcher>
            <version>2.0.0.0</version>
            <active>false</active>
            <depends>
                <Mage_Core/>
                <Saas_Limitation/>
            </depends>
        </Saas_Launcher>
    </modules>
    <adminhtml>
    </adminhtml>
    <admin>
        <routers>
            <launcher>
                <use>admin</use>
                <args>
                    <module>Saas_Launcher</module>
                    <frontName>launcher</frontName>
                </args>
            </launcher>
        </routers>
    </admin>
    <global>
        <di>
            <Saas_Launcher_Block_Adminhtml_Storelauncher_Product_Tile>
                <parameters>
                    <limitation><instance>Saas_Limitation_Model_Catalog_Product_Limitation</instance></limitation>
                </parameters>
            </Saas_Launcher_Block_Adminhtml_Storelauncher_Product_Tile>
        </di>
        <resources>
            <launcher_setup>
                <setup>
                    <module>Saas_Launcher</module>
                    <class>Saas_Launcher_Model_Resource_Setup</class>
                </setup>
            </launcher_setup>
        </resources>
    </global>
    <default>
        <design>
            <head>
                <demonotice>1</demonotice>
            </head>
        </design>
        <launcher>
            <store>
                <phase>store_launcher</phase>
            </store>
        </launcher>
        <general>
            <single_store_mode>
                <enabled>1</enabled>
            </single_store_mode>
        </general>
    </default>
    <adminhtml>
        <events>
            <admin_system_config_section_save_after>
                <observers>
                    <launcher_system_config_observer>
                        <class>Saas_Launcher_Model_SystemConfigObserver</class>
                        <method>handleSystemConfigChange</method>
                    </launcher_system_config_observer>
                </observers>
            </admin_system_config_section_save_after>
            <tax_rule_save_commit_after>
                <observers>
                    <launcher_storelauncher_tax_observer>
                        <class>Saas_Launcher_Model_Storelauncher_Tax_SystemObserver</class>
                        <method>handleTaxRuleSave</method>
                    </launcher_storelauncher_tax_observer>
                </observers>
            </tax_rule_save_commit_after>
        </events>
        <launcher>
            <pages>
                <store_launcher>
                    <tiles>
                        <business_info>
                            <state_resolver>Saas_Launcher_Model_Storelauncher_Businessinfo_StateResolver</state_resolver>
                            <save_handler>Saas_Launcher_Model_Storelauncher_Businessinfo_SaveHandler</save_handler>
                        </business_info>
                        <store_design>
                            <state_resolver>Saas_Launcher_Model_Tile_MinimalStateResolver</state_resolver>
                            <save_handler>Saas_Launcher_Model_Storelauncher_Design_SaveHandler</save_handler>
                        </store_design>
                        <tax>
                            <state_resolver>Saas_Launcher_Model_Tile_MinimalStateResolver</state_resolver>
                            <save_handler>Saas_Launcher_Model_Storelauncher_Tax_SaveHandler</save_handler>
                        </tax>
                        <payments>
                            <state_resolver>Saas_Launcher_Model_Storelauncher_Payments_StateResolver</state_resolver>
                            <save_handler>Saas_Launcher_Model_Storelauncher_Payments_SaveHandler</save_handler>
                        </payments>
                        <shipping>
                            <state_resolver>Saas_Launcher_Model_Storelauncher_Shipping_StateResolver</state_resolver>
                            <save_handler>Saas_Launcher_Model_Storelauncher_Shipping_SaveHandler</save_handler>
                        </shipping>
                        <product>
                            <state_resolver>Saas_Launcher_Model_Storelauncher_Product_StateResolver</state_resolver>
                            <save_handler>Saas_Launcher_Model_Storelauncher_Product_SaveHandler</save_handler>
                        </product>
                    </tiles>
                </store_launcher>
                <promote_store>
                    <tiles>
                        <content_pages>
                            <state_resolver>Saas_Launcher_Model_Tile_MinimalStateResolver</state_resolver>
                            <save_handler>Saas_Launcher_Model_Tile_MinimalSaveHandler</save_handler>
                        </content_pages>
                        <reports>
                            <state_resolver>Saas_Launcher_Model_Tile_MinimalStateResolver</state_resolver>
                            <save_handler>Saas_Launcher_Model_Tile_MinimalSaveHandler</save_handler>
                        </reports>
                        <seo>
                            <state_resolver>Saas_Launcher_Model_Tile_MinimalStateResolver</state_resolver>
                            <save_handler>Saas_Launcher_Model_Tile_MinimalSaveHandler</save_handler>
                        </seo>
                        <home_page>
                            <state_resolver>Saas_Launcher_Model_Tile_MinimalStateResolver</state_resolver>
                            <save_handler>Saas_Launcher_Model_Tile_MinimalSaveHandler</save_handler>
                        </home_page>
                        <promotion>
                            <state_resolver>Saas_Launcher_Model_Tile_MinimalStateResolver</state_resolver>
                            <save_handler>Saas_Launcher_Model_Tile_MinimalSaveHandler</save_handler>
                        </promotion>
                        <catalog_price_rule>
                            <state_resolver>Saas_Launcher_Model_Tile_MinimalStateResolver</state_resolver>
                            <save_handler>Saas_Launcher_Model_Tile_MinimalSaveHandler</save_handler>
                        </catalog_price_rule>
                        <rss>
                            <state_resolver>Saas_Launcher_Model_Tile_MinimalStateResolver</state_resolver>
                            <save_handler>Saas_Launcher_Model_Tile_MinimalSaveHandler</save_handler>
                        </rss>
                        <wishlist>
                            <state_resolver>Saas_Launcher_Model_Tile_MinimalStateResolver</state_resolver>
                            <save_handler>Saas_Launcher_Model_Tile_MinimalSaveHandler</save_handler>
                        </wishlist>
                        <customer_communication>
                            <state_resolver>Saas_Launcher_Model_Tile_MinimalStateResolver</state_resolver>
                            <save_handler>Saas_Launcher_Model_Tile_MinimalSaveHandler</save_handler>
                        </customer_communication>
                        <ebay>
                            <state_resolver>Saas_Launcher_Model_Tile_MinimalStateResolver</state_resolver>
                            <save_handler>Saas_Launcher_Model_Tile_MinimalSaveHandler</save_handler>
                        </ebay>
                        <related_products>
                            <state_resolver>Saas_Launcher_Model_Tile_MinimalStateResolver</state_resolver>
                            <save_handler>Saas_Launcher_Model_Tile_MinimalSaveHandler</save_handler>
                        </related_products>
                        <google_analytics>
                            <state_resolver>Saas_Launcher_Model_Promotestore_Googleanalytics_StateResolver</state_resolver>
                            <save_handler>Saas_Launcher_Model_Promotestore_Googleanalytics_SaveHandler</save_handler>
                        </google_analytics>
                    </tiles>
                </promote_store>
            </pages>
        </launcher>
    </adminhtml>
    <frontend>
        <routers>
            <launcher>
                <use>standard</use>
                <args>
                    <module>Saas_Launcher</module>
                    <frontName>launcher</frontName>
                </args>
            </launcher>
        </routers>
    </frontend>
</config>
