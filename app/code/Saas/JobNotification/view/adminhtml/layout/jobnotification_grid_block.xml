<layout version="0.1.0">
    <jobnotification_grid_block>
        <reference name="jobnotification.grid.container">
            <block type="Magento_Backend_Block_Widget_Grid" name="jobnotification.grid" as="grid">
                <arguments>
                    <id>jobnotification_grid</id>
                    <dataSource type="object">Saas_JobNotification_Model_Resource_Notification_Collection</dataSource>
                    <use_ajax>false</use_ajax>
                    <default_sort>date_added</default_sort>
                    <default_dir>DESC</default_dir>
                    <save_parameters_in_session>1</save_parameters_in_session>
                    <grid_url type="url">
                        <path>*/*/grid</path>
                        <params>
                            <_current>1</_current>
                        </params>
                    </grid_url>
                </arguments>
                <block type="Magento_Backend_Block_Widget_Grid_Massaction" name="jobnotification.grid.massaction" as="grid.massaction">
                    <arguments>
                        <massaction_id_field>notification_id</massaction_id_field>
                        <form_field_name>notification_ids</form_field_name>
                        <use_select_all>0</use_select_all>
                        <options>
                            <updater>Saas_JobNotification_Model_Grid_Massaction_ItemUpdater</updater>
                            <mark_as_read>
                                <label translate="true" module="Saas_JobNotification">Mark as Read</label>
                                <url>*/action/massMarkAsRead</url>
                            </mark_as_read>
                            <remove>
                                <label translate="true" module="Saas_JobNotification">Remove</label>
                                <url>*/action/massRemove</url>
                                <confirm translate="true" module="Saas_JobNotification">Are you sure?</confirm>
                            </remove>
                        </options>
                    </arguments>
                </block>
                <block type="Magento_Backend_Block_Widget_Grid_ColumnSet" as="grid.columnSet" name="jobnotification.grid.columnSet">
                    <arguments>
                        <id>jobnotification_grid</id>
                    </arguments>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="date_added">
                        <arguments>
                            <header translate="true" module="Saas_JobNotification">Date Added</header>
                            <type>datetime</type>
                            <index>date_added</index>
                            <filter>0</filter>
                            <id>date_added</id>
                            <width>150</width>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="title">
                        <arguments>
                            <header translate="true" module="Saas_JobNotification">Message</header>
                            <type>text</type>
                            <index>title</index>
                            <filter>0</filter>
                            <id>title</id>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="actions">
                        <arguments>
                            <header translate="true" module="Saas_JobNotification">Actions</header>
                            <id>actions</id>
                            <filter>0</filter>
                            <index>notification_id</index>
                            <sortable>0</sortable>
                            <renderer>Saas_JobNotification_Block_Adminhtml_Grid_Renderer_Actions</renderer>
                            <actions>
                                <mark_as_read>
                                    <caption translate="true" module="Saas_JobNotification">Mark as Read</caption>
                                    <url>
                                        <base>*/action/markAsRead</base>
                                        <params>
                                            <_current>true</_current>
                                        </params>
                                    </url>
                                    <field>id</field>
                                    <ignore_condition>is_read</ignore_condition>
                                    <acl>Saas_JobNotification::notification_action_markread</acl>
                                </mark_as_read>
                                <remove>
                                    <caption translate="true" module="Saas_JobNotification">Remove</caption>
                                    <url>
                                        <base>*/action/remove</base>
                                        <params>
                                            <_current>true</_current>
                                        </params>
                                    </url>
                                    <field>id</field>
                                    <acl>Saas_JobNotification::notification_action_remove</acl>
                                    <ignore_condition>is_remove</ignore_condition>
                                    <confirm translate="true" module="Saas_JobNotification">Are you sure?</confirm>
                                </remove>
                            </actions>
                        </arguments>
                    </block>
                </block>
            </block>
        </reference>
    </jobnotification_grid_block>
</layout>
