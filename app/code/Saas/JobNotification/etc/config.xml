<config>
    <modules>
        <Saas_JobNotification>
            <version>2.0.0.0</version>
            <active>false</active>
            <depends>
                <Mage_Core />
            </depends>
        </Saas_JobNotification>
    </modules>
    <global>
        <resources>
            <saas_jobnotification_setup>
                <setup>
                    <module>Saas_JobNotification</module>
                </setup>
            </saas_jobnotification_setup>
        </resources>
        <tasks>
            <refresh_catalog>
                <notification>
                    <enabled>true</enabled>
                    <title>Catalog refresh task</title>
                </notification>
            </refresh_catalog>
            <catalogrule_apply_all>
                <notification>
                    <enabled>false</enabled>
                </notification>
            </catalogrule_apply_all>
            <regenerate_config>
                <notification>
                    <enabled>true</enabled>
                    <title>Regenerate config task</title>
                </notification>
            </regenerate_config>
            <refresh_cache>
                <notification>
                    <enabled>true</enabled>
                    <title>Refresh cache task</title>
                </notification>
            </refresh_cache>
        </tasks>
        <events>
            <job_complete>
                <observers>
                    <saas_job_notification>
                        <class>Saas_JobNotification_Model_Inbox</class>
                        <method>addNotification</method>
                    </saas_job_notification>
                </observers>
            </job_complete>
        </events>
        <di>
            <Saas_JobNotification_Model_Config>
                <parameters>
                    <config>Mage_Core_Model_Config</config>
                </parameters>
            </Saas_JobNotification_Model_Config>
        </di>
    </global>
    <admin>
        <routers>
            <jobnotification>
                <use>admin</use>
                <args>
                    <module>Saas_JobNotification_Adminhtml</module>
                    <frontName>jobnotification</frontName>
                </args>
            </jobnotification>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <jobnotification module="Saas_JobNotification">
                    <file>layout.xml</file>
                </jobnotification>
            </updates>
        </layout>
    </adminhtml>
</config>
