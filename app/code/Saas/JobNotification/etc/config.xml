<config>
    <global>
        <resources>
            <saas_jobnotification_setup>
                <setup>
                    <module>Saas_JobNotification</module>
                </setup>
            </saas_jobnotification_setup>
        </resources>
        <tasks>
            <refresh_catalog>
                <notification>
                    <enabled>true</enabled>
                    <title>Catalog refresh task</title>
                </notification>
            </refresh_catalog>
            <catalogrule_apply_all>
                <notification>
                    <enabled>false</enabled>
                </notification>
            </catalogrule_apply_all>
            <regenerate_config>
                <notification>
                    <enabled>true</enabled>
                    <title>Regenerate config task</title>
                </notification>
            </regenerate_config>
            <refresh_cache>
                <notification>
                    <enabled>true</enabled>
                    <title>Refresh cache task</title>
                </notification>
            </refresh_cache>
        </tasks>
    </global>
    <admin>
        <routers>
            <jobnotification>
                <use>admin</use>
                <args>
                    <module>Saas_JobNotification_Adminhtml</module>
                    <frontName>jobnotification</frontName>
                </args>
            </jobnotification>
        </routers>
    </admin>
</config>