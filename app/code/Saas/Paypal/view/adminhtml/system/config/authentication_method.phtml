    Event.observe(window, "load", function() {
        var fields = [
            'row0_<?php echo $htmlIdPrefix ?>express_checkout_required_express_checkout_required_express_checkout_status_us',
            'row_<?php echo $htmlIdPrefix ?>express_checkout_required_payment_express_checkout_required_express_checkout_status_us',
