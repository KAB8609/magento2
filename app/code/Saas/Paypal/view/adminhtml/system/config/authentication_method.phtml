<tr id="row_<?php echo $this->getHtmlId() ?>"<?php echo $this->getIsEcCredentials() && !$this->getIsHidden() ? '' : ' style="display: none;"'?>>
    <?php echo $this->getRender(); ?>
</tr>

<script type="text/javascript">
    /* required for other methods with 'Authentication Method' switcher such as WPP */
    ecAuthenticationMethodField = {
        id : '<?php echo $this->getHtmlId(); ?>'
    }
    document.observe("dom:loaded", function() {
        <?php if ($this->getForceFieldsetHide()): ?>
            $('<?php echo $this->getGrandfatherId() ?>').up().hide();
        <?php endif; ?>

        var paymentsExpressCheckoutEnableChange = function () {
            if ($('<?php echo $htmlIdPrefix ?>express_checkout_required_enable_express_checkout').value == 0) {

                $('<?php echo $htmlIdPrefix ?>settings_ec_settings_ec_advanced_express_checkout_billing_agreement_active').value = 0;
            }
        }
        var ecRequiredEnable = $('<?php echo $htmlIdPrefix ?>express_checkout_required_enable_express_checkout');
        if (ecRequiredEnable != null) {
            Event.observe(ecRequiredEnable, 'change', paymentsExpressCheckoutEnableChange);
        }

        <?php if ($this->getIsEcCredentials()): ?>
        var enableRequiredMethod = function(){
            var newAuthVal = $('<?php echo $this->getHtmlId() ?>').value;
            var methodEnablers = {
                '<?php echo Saas_Paypal_Model_System_Config_Source_AuthenticationMethod::TYPE_API_CREDENTIALS ?>' : '<?php echo $htmlIdPrefix ?>express_checkout_required_enable_express_checkout',
                '<?php echo Saas_Paypal_Model_System_Config_Source_AuthenticationMethod::TYPE_PERMISSIONS ?>' : '<?php echo $htmlIdPrefix ?>express_checkout_required_boarding_enable_express_checkout'
            };
            var oldMethodEnabler, newMethodEnabler;
            for(var authType in methodEnablers) {
                if (authType == newAuthVal) {
                    newMethodEnabler = methodEnablers[authType];
                } else {
                    oldMethodEnabler = methodEnablers[authType];
                }
            }
            $(oldMethodEnabler).enable();
            $(newMethodEnabler).value = $(oldMethodEnabler).value;
            $(oldMethodEnabler).value = 0;

            fireEvent($(newMethodEnabler), 'change');
            fireEvent($(oldMethodEnabler), 'change');
        };
        Event.observe($('<?php echo $this->getHtmlId() ?>'), 'change', enableRequiredMethod);
        <?php endif; ?>
    });
</script>
