<config>
    <global>
        <queue>
            <adapter>
                <gearman>
                    <title>Gearman</title>
                    <servers>127.0.0.1:4730</servers>
                    <task>
                        <params />
                    </task>
                </gearman>
            </adapter>
        </queue>
        <events>
            <application_process_refresh_cache>
                <observers>
                    <saas_queue>
                        <asynchronous>true</asynchronous>
                        <class>Saas_Queue_Model_Observer_Cache</class>
                        <method>processRefreshCache</method>
                        <params>
                            <task_name>refresh_cache</task_name>
                        </params>
                    </saas_queue>
                </observers>
            </application_process_refresh_cache>
            <application_process_refresh_catalog>
                <observers>
                    <saas_queue>
                        <asynchronous>true</asynchronous>
                        <class>Saas_Queue_Model_Observer_Catalog</class>
                        <method>processRefreshCatalog</method>
                        <params>
                            <task_name>refresh_catalog</task_name>
                        </params>
                    </saas_queue>
                </observers>
            </application_process_refresh_catalog>
            <!--<application_process_reinit_config>-->
            <!--<observers>-->
            <!--<reinit_config_observer>-->
            <!--<asynchronous>true</asynchronous>-->
            <!--<priority>10</priority>-->
            <!--<class>Saas_Queue_Model_Observer_Config</class>-->
            <!--<method>processReinitConfig</method>-->
            <!--<params>-->
            <!--<task_name>regenerate_config</task_name>-->
            <!--</params>-->
            <!--</reinit_config_observer>-->
            <!--</observers>-->
            <!--</application_process_reinit_config>-->
        </events>
    </global>
    <workers>
        <events />
    </workers>
</config>
