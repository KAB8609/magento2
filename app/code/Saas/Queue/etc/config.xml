<config>
    <modules>
        <Saas_Queue>
            <version>2.0.0.0</version>
            <active>false</active>
            <codePool>core</codePool>
            <depends>
                <Enterprise_Queue/>
            </depends>
        </Saas_Queue>
    </modules>
    <global>
        <queue>
            <adapter>
                <gearman>
                    <title>Gearman</title>
                    <servers>127.0.0.1:4730</servers>
                    <task>
                        <params>
                        </params>
                    </task>
                </gearman>
            </adapter>
        </queue>
        <di>
            <preferences>
                <Enterprise_Queue_Model_Queue_HandlerInterface>Saas_Queue_Model_Queue_DefaultHandler</Enterprise_Queue_Model_Queue_HandlerInterface>
            </preferences>
            <Saas_Queue_Model_Observer_Config>
                <parameters>
                    <config>Mage_Core_Model_Config</config>
                </parameters>
            </Saas_Queue_Model_Observer_Config>
        </di>
        <events>
            <application_process_refresh_cache>
                <observers>
                    <saas_queue>
                        <asynchronous>true</asynchronous>
                        <class>Saas_Queue_Model_Observer_Cache</class>
                        <method>processRefreshCache</method>
                        <params>
                            <task_name>refresh_cache</task_name>
                        </params>
                    </saas_queue>
                </observers>
            </application_process_refresh_cache>
            <application_process_regenerate_config>
                <observers>
                    <saas_queue>
                        <asynchronous>1</asynchronous>
                        <priority>1</priority>
                        <class>Saas_Queue_Model_Observer_Config</class>
                        <method>processRebuildConfig</method>
                        <params>
                            <task_name>regenerate_config</task_name>
                        </params>
                    </saas_queue>
                </observers>
            </application_process_regenerate_config>
        </events>
    </global>
    <workers>
        <events>
        </events>
    </workers>
</config>
