<config>
    <global>
        <events>
            <controller_action_predispatch>
                <observers>
                    <saas_limit_functionality>
                        <class>Saas_Saas_Model_Limitation_Observer</class>
                        <method>limitFunctionality</method>
                    </saas_limit_functionality>
                </observers>
            </controller_action_predispatch>
        </events>
    </global>
    <adminhtml>
        <events>
            <core_config_data_save_before>
                <observers>
                    <saas_saas>
                        <class>Saas_Saas_Model_DisabledConfiguration_Observer</class>
                        <method>checkConfigSaveAllowed</method>
                    </saas_saas>
                </observers>
            </core_config_data_save_before>
        </events>
    </adminhtml>
    <default>
        <web>
            <forbiddenForRedirectAreas>
                <vde />
            </forbiddenForRedirectAreas>
        </web>
    </default>
</config>
