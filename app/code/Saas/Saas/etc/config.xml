<config>
    <modules>
        <Saas_Saas>
            <version>2.0.0.0</version>
            <active>false</active>
        </Saas_Saas>
    </modules>
    <global>
        <events>
            <controller_action_predispatch>
                <observers>
                    <saas_limit_functionality>
                        <class>Saas_Saas_Model_Limitation_Observer</class>
                        <method>limitFunctionality</method>
                    </saas_limit_functionality>
                </observers>
            </controller_action_predispatch>
        </events>
        <di>
            <preferences>
                <Saas_Saas_Model_Limitation_SpecificationInterface>Saas_Saas_Model_Limitation_Specification_Composite</Saas_Saas_Model_Limitation_SpecificationInterface>
                <Mage_Core_Model_Cache>Saas_Saas_Model_Cache</Mage_Core_Model_Cache>
            </preferences>
            <Saas_Saas_Model_Limitation_Specification_Composite>
                <parameters>
                    <specificationFactory>Saas_Saas_Model_Limitation_Specification_Factory</specificationFactory>
                </parameters>
            </Saas_Saas_Model_Limitation_Specification_Composite>
            <Saas_Saas_Model_Cache>
                <parameters>
                    <config>Mage_Core_Model_Config_Proxy</config>
                </parameters>
            </Saas_Saas_Model_Cache>
        </di>
    </global>
</config>
