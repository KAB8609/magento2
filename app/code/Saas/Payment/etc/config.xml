<?xml version="1.0"?>
<config>
    <modules>
        <Saas_Payment>
            <version>0.1.0</version>
            <active>true</active>
            <codePool>core</codePool>
            <depends>
                <Saas_Saas/>
                <Mage_Payment/>
            </depends>
        </Saas_Payment>
    </modules>
    <global>
        <di>
            <preferences>
                <Mage_Payment_Helper_Data>Saas_Payment_Helper_Data</Mage_Payment_Helper_Data>
            </preferences>
        </di>
        <resources>
            <saas_payment_setup>
                <setup>
                    <module>Saas_Payment</module>
                </setup>
            </saas_payment_setup>
        </resources>
        <events>
            <sales_order_place_before>
                <observers>
                    <saas_saas>
                        <class>Saas_Payment_Model_Statistics_Observer</class>
                        <method>beforeOrderPlace</method>
                    </saas_saas>
                </observers>
            </sales_order_place_before>
        </events>
        <payment>
            <groups>
                <online>Online Payment Methods</online>
            </groups>
        </payment>
    </global>
    <default>
        <payment>
            <ccsave>
                <active>0</active>
                <disabled>1</disabled>
            </ccsave>
            <checkmo>
                <active>0</active>
            </checkmo>
            <pbridge_braintree_basic>
                <group>online</group>
            </pbridge_braintree_basic>
            <cardgate>
                <group>online</group>
            </cardgate>
            <pbridge_authorizenet>
                <group>online</group>
            </pbridge_authorizenet>
            <pbridge_cybersource_soap>
                <group>online</group>
            </pbridge_cybersource_soap>
            <pbridge_dibs>
                <group>online</group>
            </pbridge_dibs>
            <pbridge_payone_gate>
                <group>online</group>
            </pbridge_payone_gate>
            <sagepay_direct>
                <group>online</group>
            </sagepay_direct>
            <pbridge_firstdata>
                <group>online</group>
            </pbridge_firstdata>
            <googlecheckout>
                <group>online</group>
            </googlecheckout>
            <pbridge_ogone_direct>
                <group>online</group>
            </pbridge_ogone_direct>
            <pbridge_paybox_direct>
                <group>online</group>
            </pbridge_paybox_direct>
            <pbridge_psigate_basic>
                <group>online</group>
            </pbridge_psigate_basic>
            <pbridge_worldpay_direct>
                <group>online</group>
            </pbridge_worldpay_direct>
            <pbridge_eway_direct>
                <group>online</group>
            </pbridge_eway_direct>
         </payment>
    </default>
    <frontend>
        <translate>
            <modules>
                <Saas_Payment>
                    <files>
                        <default>Saas_Payment.csv</default>
                    </files>
                </Saas_Payment>
            </modules>
        </translate>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Saas_Payment>
                    <files>
                        <default>Saas_Payment.csv</default>
                    </files>
                </Saas_Payment>
            </modules>
        </translate>
    </adminhtml>
</config>
