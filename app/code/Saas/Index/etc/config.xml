<config>
    <modules>
        <Saas_Index>
            <version>2.0.0.0</version>
            <active>false</active>
            <depends>
                <Mage_Core/>
                <Mage_Index/>
            </depends>
        </Saas_Index>
    </modules>
    <global>
        <events>
            <controller_action_predispatch_adminhtml>
                <observers>
                    <saas_index>
                        <class>Saas_Index_Model_Observer</class>
                        <method>redefineIndex</method>
                    </saas_index>
                </observers>
            </controller_action_predispatch_adminhtml>
        </events>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Saas_Index before="Mage_Adminhtml">Saas_Index_Adminhtml</Saas_Index>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <saas_index module="Saas_Index">
                    <file>layout.xml</file>
                </saas_index>
            </updates>
        </layout>
        <di>
            <Mage_AdminNotification_Model_System_MessageList>
                <parameters>
                    <messages>
                        <refresh_index_finished>Saas_Index_Model_System_Message_IndexRefreshed</refresh_index_finished>
                        <indexer>Saas_Index_Model_System_Message_Decorator_IndexOutdated</indexer>
                    </messages>
                </parameters>
            </Mage_AdminNotification_Model_System_MessageList>
        </di>
    </adminhtml>
</config>
