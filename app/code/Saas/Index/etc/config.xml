<config>
    <global>
        <events>
            <controller_action_predispatch_adminhtml>
                <observers>
                    <saas_index>
                        <class>Saas_Index_Model_Observer</class>
                        <method>redefineIndex</method>
                    </saas_index>
                </observers>
            </controller_action_predispatch_adminhtml>
        </events>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Saas_Index before="Mage_Adminhtml">Saas_Index_Adminhtml</Saas_Index>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
</config>
