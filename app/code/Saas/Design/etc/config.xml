<config>
    <modules>
        <Saas_Design>
            <version>2.0.0.0</version>
            <active>false</active>
            <depends>
                <Mage_Adminhtml/>
                <Saas_Saas/>
                <Mage_Theme/>
            </depends>
        </Saas_Design>
    </modules>
    <global>
        <events>
            <controller_action_predispatch_adminhtml>
                <observers>
                    <saas_limit_themes>
                        <class>Saas_Design_Model_Observer</class>
                        <method>limitThemesFunctionality</method>
                    </saas_limit_themes>
                    <saas_disable_design_schedule>
                        <class>Saas_Design_Model_Observer</class>
                        <method>disableScheduleFunctionality</method>
                    </saas_disable_design_schedule>
                </observers>
            </controller_action_predispatch_adminhtml>
        </events>
    </global>
</config>
