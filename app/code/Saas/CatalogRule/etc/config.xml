<config>
    <modules>
        <Saas_CatalogRule>
            <version>2.0.0.0</version>
            <active>false</active>
            <depends>
                <Saas_Saas />
                <Mage_CatalogRule />
            </depends>
        </Saas_CatalogRule>
    </modules>
    <global>
        <events>
            <catalogrule_apply_all>
                <observers>
                    <catalogrule>
                        <asynchronous>true</asynchronous>
                        <params>
                            <task_name>apply_catalog_price_rules</task_name>
                        </params>
                    </catalogrule>
                </observers>
            </catalogrule_apply_all>
        </events>
    </global>
</config>