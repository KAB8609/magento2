<config>
    <modules>
        <Saas_Sales>
            <version>2.0.0.0</version>
            <active>true</active>
            <depends>
                <Mage_Sales/>
                <Saas_Saas/>
            </depends>
        </Saas_Sales>
    </modules>
    <global>
        <resources>
            <saas_sales_setup>
                <setup>
                    <module>Saas_Sales</module>
                    <class>Mage_Catalog_Model_Resource_Setup</class>
                </setup>
            </saas_sales_setup>
        </resources>
        <events>
            <adminhtml_controller_action_predispatch_start>
                <observers>
                    <saas_sales_disable_adminhtml_recurring_profile_controller>
                        <class>Saas_Sales_Model_Recurring_Profile_Observer</class>
                        <method>disableSalesRecurringProfileBackend</method>
                    </saas_sales_disable_adminhtml_recurring_profile_controller>
                </observers>
            </adminhtml_controller_action_predispatch_start>
            <controller_action_predispatch_sales>
                <observers>
                    <saas_sales_disable_recurring_profile_controller>
                        <class>Saas_Sales_Model_Recurring_Profile_Observer</class>
                        <method>disableSalesRecurringProfileFrontend</method>
                    </saas_sales_disable_recurring_profile_controller>
                </observers>
            </controller_action_predispatch_sales>
        </events>
    </global>
    <frontend>
        <layout>
            <updates>
                <saas_sales module="Saas_Sales">
                    <file>layout.xml</file>
                </saas_sales>
            </updates>
        </layout>
    </frontend>
</config>
