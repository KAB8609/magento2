<config>
    <modules>
        <Saas_Sales>
            <version>2.0.0.0</version>
            <active>false</active>
            <depends>
                <Mage_Backend/>
                <Mage_Sales/>
                <Saas_Saas/>
            </depends>
        </Saas_Sales>
    </modules>
    <global>
        <resources>
            <saas_sales_setup>
                <setup>
                    <module>Saas_Sales</module>
                    <class>Mage_Catalog_Model_Resource_Setup</class>
                </setup>
            </saas_sales_setup>
        </resources>
        <di>
            <Saas_Saas_Model_Limitation_Specification_Chain>
                <parameters>
                    <specificationNames>
                        <backend_recurring>Saas_Sales_Model_Limitation_Specification_Backend_Recurring</backend_recurring>
                        <backend_sales>Saas_Sales_Model_Limitation_Specification_Backend_Sales</backend_sales>
                        <frontend_recurring>Saas_Sales_Model_Limitation_Specification_Frontend_Recurring</frontend_recurring>
                    </specificationNames>
                </parameters>
            </Saas_Saas_Model_Limitation_Specification_Chain>
        </di>
    </global>
    <frontend>
        <layout>
            <updates>
                <saas_sales module="Saas_Sales">
                    <file>layout.xml</file>
                </saas_sales>
            </updates>
        </layout>
    </frontend>
</config>
