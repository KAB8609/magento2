        <tr>
            <?php if ($this->getEnableDiscountTaxes()) : ?>
                <td><?php echo $tax->getTotalAmount() ?></td>
            <?php else : ?>
                <td><?php echo $tax->getTotalAmountWithoutDiscount() ?></td>
            <?php endif; ?>

            <td><?php echo $this->escapeHtml($tax->getCompoundId()) ?></td>

            <?php if ($this->getEnableDiscountTaxes()) : ?>
                <td><?php echo $tax->getTaxAmount() ?></td>
            <?php else : ?>
                <td><?php echo $tax->getTaxAmountWithoutDiscount() ?></td>
            <?php endif; ?>
        </tr>
