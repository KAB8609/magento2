<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="print" label="All Pages (Print Version)" type="page">
        <block class="Magento_Page_Block_Html" name="root" output="1" template="print.phtml">
            <block class="Magento_Page_Block_Html_Head" name="head" as="head"/>
            <container name="after_body_start" as="after_body_start" label="Page Top"/>
            <container name="content" as="content" label="Main Content Area (Print Version)"/>
        </block>
        <reference name="head">
            <block class="Magento_Page_Block_Html_Head_Script" name="magento-translate-js">
                <arguments>
                    <argument name="file" xsi:type="string">mage/translate.js</argument>
                </arguments>
            </block>
        </reference>
    </handle>
</layout>
