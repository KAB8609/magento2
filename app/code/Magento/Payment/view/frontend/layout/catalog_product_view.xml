<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="catalog_product_view">
        <reference name="product.info">
            <block class="Magento_Payment_Block_Catalog_Product_View_Profile" name="product.info.additional.recurring.schedule" as="recurring_info" template="catalog/product/view/profile/schedule.phtml">
                <action method="addToParentGroup">
                    <argument name="group" xsi:type="string">detailed_info</argument>
                </action>
                <action method="setTitle" translate="value">
                    <argument name="value" xsi:type="string">Recurring Profile</argument>
                </action>
            </block>
        </reference>
        <reference name="product.info.options.wrapper">
            <block class="Magento_Payment_Block_Catalog_Product_View_Profile" name="product.info.options.recurring" as="recurring_options" template="catalog/product/view/profile/options.phtml"/>
        </reference>
    </handle>
</layout>
