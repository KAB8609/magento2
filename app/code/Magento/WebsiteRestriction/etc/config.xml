<config>
    <global>
        <resources>
            <websiterestriction_setup>
                <setup>
                    <module>Magento_WebsiteRestriction</module>
                    <class>Magento_WebsiteRestriction_Model_Resource_Setup</class>
                </setup>
            </websiterestriction_setup>
        </resources>
    </global>
    <frontend>
        <translate>
            <modules>
                <Magento_WebsiteRestriction>
                    <files>
                        <default>Magento_WebsiteRestriction.csv</default>
                    </files>
                </Magento_WebsiteRestriction>
            </modules>
        </translate>
    </frontend>
    <default>
        <general>
            <restriction>
                <cms_page>service-unavialable</cms_page>
            </restriction>
        </general>
    </default>
</config>
