<config>
    <global>
        <resources>
            <targetrule_setup>
                <setup>
                    <module>Magento_TargetRule</module>
                    <class>Magento_TargetRule_Model_Resource_Setup</class>
                </setup>
            </targetrule_setup>
        </resources>
        <index>
            <indexer>
                <targetrule>
                    <model>Magento_TargetRule_Model_Index</model>
                </targetrule>
            </indexer>
        </index>
    </global>
    <adminhtml>
        <events>
            <catalog_product_save_after>
                <observers>
                    <magento_targetrule>
                        <class>Magento_TargetRule_Model_Observer</class>
                        <method>catalogProductAfterSave</method>
                    </magento_targetrule>
                </observers>
            </catalog_product_save_after>
            <catalog_product_save_commit_after>
                <observers>
                    <magento_targetrule>
                        <class>Magento_TargetRule_Model_Observer</class>
                        <method>catalogProductSaveCommitAfter</method>
                    </magento_targetrule>
                </observers>
            </catalog_product_save_commit_after>
            <core_config_data_save_commit_after>
                <observers>
                    <magento_targetrule>
                        <class>Magento_TargetRule_Model_Observer</class>
                        <method>coreConfigSaveCommitAfter</method>
                    </magento_targetrule>
                </observers>
            </core_config_data_save_commit_after>
        </events>
        <translate>
            <modules>
                <Magento_TargetRule>
                    <files>
                        <default>Magento_TargetRule.csv</default>
                    </files>
                </Magento_TargetRule>
            </modules>
        </translate>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Magento_TargetRule before="Magento_Adminhtml">Magento_TargetRule_Adminhtml</Magento_TargetRule>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <default>
        <catalog>
            <magento_targetrule>
                <related_position_limit>6</related_position_limit>
                <related_position_behavior>0</related_position_behavior>
                <related_rotation_mode>0</related_rotation_mode>
                <crosssell_position_limit>5</crosssell_position_limit>
                <crosssell_position_behavior>0</crosssell_position_behavior>
                <crosssell_rotation_mode>0</crosssell_rotation_mode>
                <upsell_position_limit>8</upsell_position_limit>
                <upsell_position_behavior>0</upsell_position_behavior>
                <upsell_rotation_mode>0</upsell_rotation_mode>
            </magento_targetrule>
        </catalog>
    </default>
    <crontab>
        <jobs>
            <magento_targetrule_index_reindex>
                <schedule>
                    <cron_expr>0 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>Magento_TargetRule_Model_Index::cron</model>
                </run>
            </magento_targetrule_index_reindex>
        </jobs>
    </crontab>
</config>
