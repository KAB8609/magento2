<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <referenceBlock name="head">
        <action method="setCanLoadExtJs">
            <argument name="flag" xsi:type="string">1</argument>
        </action>
        <action method="setCanLoadRulesJs">
            <argument name="flag" xsi:type="string">1</argument>
        </action>
    </referenceBlock>
    <referenceContainer name="content">
        <block class="Magento_TargetRule_Block_Adminhtml_Targetrule_Edit" name="magento_targetrule_edit"/>
    </referenceContainer>
    <referenceContainer name="left">
        <block class="Magento_TargetRule_Block_Adminhtml_Targetrule_Edit_Tabs" name="magento_targetrule_edit_tabs">
            <block class="Magento_TargetRule_Block_Adminhtml_Targetrule_Edit_Tab_Main" name="magento_targetrule_edit_tab_main"/>
            <block class="Magento_TargetRule_Block_Adminhtml_Targetrule_Edit_Tab_Conditions" name="magento_targetrule_edit_tab_conditions"/>
            <block class="Magento_TargetRule_Block_Adminhtml_Targetrule_Edit_Tab_Actions" name="magento_targetrule_edit_tab_actions"/>
            <action method="addTab">
                <argument name="name" xsi:type="string">magento_targetrule_edit_tab_main</argument>
                <argument name="block" xsi:type="string">magento_targetrule_edit_tab_main</argument>
            </action>
            <action method="addTab">
                <argument name="name" xsi:type="string">magento_targetrule_edit_tab_conditions</argument>
                <argument name="block" xsi:type="string">magento_targetrule_edit_tab_conditions</argument>
            </action>
            <action method="addTab">
                <argument name="name" xsi:type="string">magento_targetrule_edit_tab_actions</argument>
                <argument name="block" xsi:type="string">magento_targetrule_edit_tab_actions</argument>
            </action>
        </block>
    </referenceContainer>
</layout>
