<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="sendfriend_product_send" translate="label" type="page" parent="catalog_product_view">
        <label>Catalog Product Email to a Friend</label>
        <reference name="root">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">1column.phtml</argument>
            </action>
            <action method="setTemplate">
                <argument name="template" xsi:type="string">2columns-right.phtml</argument>
            </action>
        </reference>
        <reference name="content">
            <block class="Magento_Sendfriend_Block_Send" name="sendfriend.send" template="send.phtml"/>
        </reference>
    </handle>
</layout>
