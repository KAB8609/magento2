<config>
    <global>
        <resources>
            <giftwrapping_setup>
                <setup>
                    <module>Magento_GiftWrapping</module>
                    <class>Magento_GiftWrapping_Model_Resource_Setup</class>
                </setup>
            </giftwrapping_setup>
        </resources>
        <sales>
            <quote>
                <item>
                    <product_attributes>
                        <gift_wrapping_available />
                        <gift_wrapping_price />
                    </product_attributes>
                </item>
                <totals>
                    <giftwrapping>
                        <class>Magento_GiftWrapping_Model_Total_Quote_Giftwrapping</class>
                        <after>subtotal</after>
                        <renderer>Magento_GiftWrapping_Block_Checkout_Totals</renderer>
                    </giftwrapping>
                    <tax_giftwrapping>
                        <class>Magento_GiftWrapping_Model_Total_Quote_Tax_Giftwrapping</class>
                        <after>tax</after>
                        <before>grand_total</before>
                    </tax_giftwrapping>
                </totals>
            </quote>
            <order_invoice>
                <totals>
                    <giftwrapping>
                        <class>Magento_GiftWrapping_Model_Total_Invoice_Giftwrapping</class>
                        <after>cost_total</after>
                        <before>giftcardaccount</before>
                    </giftwrapping>
                    <tax_giftwrapping>
                        <class>Magento_GiftWrapping_Model_Total_Invoice_Tax_Giftwrapping</class>
                        <after>tax</after>
                        <before>grand_total</before>
                    </tax_giftwrapping>
                </totals>
            </order_invoice>
            <order_creditmemo>
                <totals>
                    <giftwrapping>
                        <class>Magento_GiftWrapping_Model_Total_Creditmemo_Giftwrapping</class>
                        <after>subtotal</after>
                        <before>giftcardaccount</before>
                    </giftwrapping>
                    <tax_giftwrapping>
                        <class>Magento_GiftWrapping_Model_Total_Creditmemo_Tax_Giftwrapping</class>
                        <after>tax</after>
                        <before>grand_total</before>
                    </tax_giftwrapping>
                </totals>
            </order_creditmemo>
        </sales>
        <events>
            <sales_quote_collect_totals_before>
                <observers>
                    <magento_giftwrapping>
                        <class>Magento_GiftWrapping_Model_Observer</class>
                        <method>quoteCollectTotalsBefore</method>
                    </magento_giftwrapping>
                </observers>
            </sales_quote_collect_totals_before>
            <googlecheckout_checkout_before>
                <observers>
                    <magento_giftwrapping>
                        <class>Magento_GiftWrapping_Model_Observer</class>
                        <method>googlecheckoutCheckoutBefore</method>
                    </magento_giftwrapping>
                </observers>
            </googlecheckout_checkout_before>
            <paypal_prepare_line_items>
                <observers>
                    <magento_giftwrapping>
                        <class>Magento_GiftWrapping_Model_Observer</class>
                        <method>addPaypalGiftWrappingItem</method>
                    </magento_giftwrapping>
                </observers>
            </paypal_prepare_line_items>
        </events>
    </global>
    <frontend>
        <events>
            <checkout_controller_onepage_save_shipping_method>
                <observers>
                    <magento_giftwrapping>
                        <class>Magento_GiftWrapping_Model_Observer</class>
                        <method>checkoutProcessWrappingInfo</method>
                    </magento_giftwrapping>
                </observers>
            </checkout_controller_onepage_save_shipping_method>
            <checkout_controller_multishipping_shipping_post>
                <observers>
                    <magento_giftwrapping>
                        <class>Magento_GiftWrapping_Model_Observer</class>
                        <method>checkoutProcessWrappingInfo</method>
                    </magento_giftwrapping>
                </observers>
            </checkout_controller_multishipping_shipping_post>
            <gift_options_prepare_items>
                <observers>
                    <magento_giftwrapping>
                        <class>Magento_GiftWrapping_Model_Observer</class>
                        <method>prepareGiftOptpionsItems</method>
                    </magento_giftwrapping>
                </observers>
            </gift_options_prepare_items>
        </events>
        <translate>
            <modules>
                <Magento_GiftWrapping>
                    <files>
                        <default>Magento_GiftWrapping.csv</default>
                    </files>
                </Magento_GiftWrapping>
            </modules>
        </translate>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <magento_giftwrapping before="Magento_Adminhtml">Magento_GiftWrapping_Adminhtml</magento_giftwrapping>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <events>
            <adminhtml_sales_order_create_process_data>
                <observers>
                    <magento_giftwrapping>
                        <class>Magento_GiftWrapping_Model_Observer</class>
                        <method>processOrderCreationData</method>
                    </magento_giftwrapping>
                </observers>
            </adminhtml_sales_order_create_process_data>
            <sales_convert_order_to_quote>
                <observers>
                    <magento_giftwrapping>
                        <type>model</type>
                        <class>Magento_GiftWrapping_Model_Observer</class>
                        <method>salesEventOrderToQuote</method>
                    </magento_giftwrapping>
                </observers>
            </sales_convert_order_to_quote>
            <sales_convert_order_item_to_quote_item>
                <observers>
                    <magento_giftwrapping>
                        <type>model</type>
                        <class>Magento_GiftWrapping_Model_Observer</class>
                        <method>salesEventOrderItemToQuoteItem</method>
                    </magento_giftwrapping>
                </observers>
            </sales_convert_order_item_to_quote_item>
        </events>
        <translate>
            <modules>
                <Magento_GiftWrapping>
                    <files>
                        <default>Magento_GiftWrapping.csv</default>
                    </files>
                </Magento_GiftWrapping>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <system>
            <media_storage_configuration>
                <allowed_resources>
                    <giftwrapping_folder>wrapping</giftwrapping_folder>
                </allowed_resources>
            </media_storage_configuration>
        </system>
        <sales>
            <gift_options>
                <wrapping_allow_order>1</wrapping_allow_order>
                <wrapping_allow_items>1</wrapping_allow_items>
                <allow_gift_receipt>1</allow_gift_receipt>
                <allow_printed_card>1</allow_printed_card>
            </gift_options>
        </sales>
        <tax>
            <cart_display>
                <gift_wrapping>1</gift_wrapping>
                <printed_card>1</printed_card>
            </cart_display>
            <sales_display>
                <gift_wrapping>1</gift_wrapping>
                <printed_card>1</printed_card>
            </sales_display>
        </tax>
    </default>
</config>
