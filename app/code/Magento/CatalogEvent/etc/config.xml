<config>
    <global>
        <resources>
            <catalogevent_setup>
                <setup>
                    <module>Magento_CatalogEvent</module>
                    <class>Magento\CatalogEvent\Model\Resource\Setup</class>
                </setup>
            </catalogevent_setup>
        </resources>
    </global>
    <default>
        <catalog>
            <magento_catalogevent>
                <enabled>1</enabled>
                <lister_output>1</lister_output>
                <lister_widget_limit>5</lister_widget_limit>
                <lister_widget_scroll>2</lister_widget_scroll>
            </magento_catalogevent>
        </catalog>
    </default>
    <frontend>
        <translate>
            <modules>
                <Magento_CatalogEvent>
                    <files>
                        <default>Magento_CatalogEvent.csv</default>
                    </files>
                </Magento_CatalogEvent>
            </modules>
        </translate>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Magento_CatalogEvent>
                    <files>
                        <default>Magento_CatalogEvent.csv</default>
                    </files>
                </Magento_CatalogEvent>
            </modules>
        </translate>
    </adminhtml>
</config>
