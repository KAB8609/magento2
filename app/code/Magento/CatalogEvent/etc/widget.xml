<widgets>
    <event_lister type="Magento\CatalogEvent\Block\Widget\Lister" translate="name description">
        <name>Catalog Events Carousel</name>
        <description>List all open Catalog Events as a Paginated Carousel</description>
        <placeholder_image>Magento_CatalogEvent::widget_lister.gif</placeholder_image>
        <parameters>
            <limit translate="label description">
                <required>1</required>
                <visible>1</visible>
                <value>5</value>
                <label>Frame Size</label>
                <description>Number of Items to display at once</description>
                <type>text</type>
            </limit>
            <scroll translate="label description">
                <required>1</required>
                <visible>1</visible>
                <value>2</value>
                <label>Scroll</label>
                <description>Number of Items to scroll per click</description>
                <type>text</type>
            </scroll>
            <width translate="label description">
                <visible>1</visible>
                <label>Block Custom Width</label>
                <description>The width in pixels will be set automatically if this value is empty.</description>
                <type>text</type>
            </width>
            <template>
                <required>1</required>
                <value>widget/lister.phtml</value>
                <values>
                    <default translate="label">
                        <value>widget/lister.phtml</value>
                        <label>Catalog Events Carousel Default Template</label>
                    </default>
                </values>
            </template>
        </parameters>
        <supported_containers>
            <left_column>
                <container_name>left</container_name>
                <template>
                    <lister>default</lister>
                </template>
            </left_column>
            <main_content>
                <container_name>content</container_name>
                <template>
                    <lister>default</lister>
                </template>
            </main_content>
            <right_column>
                <container_name>right</container_name>
                <template>
                    <lister>default</lister>
                </template>
            </right_column>
        </supported_containers>
    </event_lister>
</widgets>
