<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="adminhtml_catalog_event_block">
        <reference name="adminhtml.catalog.event.grid.container">
            <block class="Magento_Backend_Block_Widget_Grid" name="adminhtml.catalog.event.grid" as="grid">
                <arguments>
                    <argument name="id" xsi:type="string">catalogEventGrid</argument>
                    <argument name="dataSource" xsi:type="string">Magento_CatalogEvent_Model_Resource_Event_Grid_Collection</argument>
                    <argument name="default_sort" xsi:type="string">event_id</argument>
                    <argument name="default_dir" xsi:type="string">ASC</argument>
                    <argument name="save_parameters_in_session" xsi:type="string">1</argument>
                </arguments>
                <block class="Magento_Backend_Block_Widget_Grid_ColumnSet" name="adminhtml.catalog.event.grid.columnSet" as="grid.columnSet">
                    <arguments>
                        <argument name="rowUrl" xsi:type="array">
                            <item name="path" xsi:type="string">*/*/edit</item>
                            <item name="extraParamsTemplate" xsi:type="array">
                                <item name="id" xsi:type="string">getId</item>
                            </item>
                        </argument>
                    </arguments>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="event_id">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">ID</argument>
                            <argument name="width" xsi:type="string">80px</argument>
                            <argument name="type" xsi:type="string">text</argument>
                            <argument name="index" xsi:type="string">event_id</argument>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="category_id">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Category ID</argument>
                            <argument name="width" xsi:type="string">70</argument>
                            <argument name="type" xsi:type="string">text</argument>
                            <argument name="index" xsi:type="string">category_id</argument>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="category">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Category</argument>
                            <argument name="type" xsi:type="string">text</argument>
                            <argument name="index" xsi:type="string">category_name</argument>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="date_start">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Start On</argument>
                            <argument name="type" xsi:type="string">datetime</argument>
                            <argument name="index" xsi:type="string">date_start</argument>
                            <argument name="filter_time" xsi:type="string">1</argument>
                            <argument name="width" xsi:type="string">150</argument>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="date_end">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">End On</argument>
                            <argument name="type" xsi:type="string">datetime</argument>
                            <argument name="index" xsi:type="string">date_end</argument>
                            <argument name="filter_time" xsi:type="string">1</argument>
                            <argument name="width" xsi:type="string">150</argument>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="status">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Status</argument>
                            <argument name="type" xsi:type="string">options</argument>
                            <argument name="index" xsi:type="string">status</argument>
                            <argument name="width" xsi:type="string">140</argument>
                            <argument name="options" xsi:type="options" model="Magento_CatalogEvent_Model_Resource_Event_Grid_Statuses"/>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="display_state">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Countdown Ticker</argument>
                            <argument name="type" xsi:type="string">options</argument>
                            <argument name="index" xsi:type="string">display_state</argument>
                            <argument name="renderer" xsi:type="string">Magento_CatalogEvent_Block_Adminhtml_Event_Grid_Column_Renderer_Bitmask</argument>
                            <argument name="options" xsi:type="options" model="Magento_CatalogEvent_Model_Resource_Event_Grid_State"/>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="sort_order">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Sort Order</argument>
                            <argument name="type" xsi:type="string">text</argument>
                            <argument name="index" xsi:type="string">sort_order</argument>
                            <argument name="width" xsi:type="string">70</argument>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="actions">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Action</argument>
                            <argument name="width" xsi:type="string">15</argument>
                            <argument name="sortable" xsi:type="string">0</argument>
                            <argument name="filter" xsi:type="string">0</argument>
                            <argument name="type" xsi:type="string">action</argument>
                            <argument name="index" xsi:type="string">event_id</argument>
                            <argument name="actions" xsi:type="array">
                                <item name="edit" xsi:type="array">
                                    <item name="caption" xsi:type="string" translate="true">Edit</item>
                                    <item name="url" xsi:type="array">
                                        <item name="base" xsi:type="string">*/*/edit</item>
                                    </item>
                                    <item name="field" xsi:type="string">id</item>
                                </item>
                            </argument>
                        </arguments>
                    </block>
                </block>
            </block>
        </reference>
    </handle>
</layout>
