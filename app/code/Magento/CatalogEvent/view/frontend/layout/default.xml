<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="default">
        <reference name="head">
            <action method="addJs" ifconfig="catalog/magento_catalogevent/enabled">
                <argument name="file" xsi:type="string">Magento_CatalogEvent::js/ticker.js</argument>
            </action>
            <action method="addCss" ifconfig="catalog/magento_catalogevent/enabled">
                <argument name="file" xsi:type="string">Magento_CatalogEvent::widgets.css</argument>
            </action>
            <action method="addJs" ifconfig="catalog/magento_catalogevent/enabled">
                <argument name="file" xsi:type="string">Magento_CatalogEvent::js/carousel.js</argument>
            </action>
        </reference>
    </handle>
</layout>
