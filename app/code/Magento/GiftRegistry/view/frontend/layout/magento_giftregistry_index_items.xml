<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="magento_giftregistry_index_items" translate="label" type="page" parent="magento_giftregistry_index_share">
        <label>Customer GiftRegistry Items List</label>
        <update handle="customer_account"/>
        <reference name="customer_account_navigation">
            <action method="setActive">
                <path>magento_giftregistry/index/index</path>
            </action>
        </reference>
        <reference name="my.account.wrapper">
            <block class="Magento_GiftRegistry_Block_Items" name="giftregistry.customer.items" template="customer/items.phtml">
                <action method="addItemRender">
                    <type>default</type>
                    <block>Magento_Checkout_Block_Cart_Item_Renderer</block>
                    <template>Magento_GiftRegistry::customer/items/default.phtml</template>
                </action>
                <action method="addItemRender">
                    <type>simple</type>
                    <block>Magento_Checkout_Block_Cart_Item_Renderer</block>
                    <template>Magento_GiftRegistry::customer/items/default.phtml</template>
                </action>
                <action method="addItemRender">
                    <type>grouped</type>
                    <block>Magento_Checkout_Block_Cart_Item_Renderer_Grouped</block>
                    <template>Magento_GiftRegistry::customer/items/default.phtml</template>
                </action>
                <action method="addItemRender">
                    <type>configurable</type>
                    <block>Magento_Checkout_Block_Cart_Item_Renderer_Configurable</block>
                    <template>Magento_GiftRegistry::customer/items/default.phtml</template>
                </action>
                <action method="addItemRender">
                    <type>bundle</type>
                    <block>Magento_Bundle_Block_Checkout_Cart_Item_Renderer</block>
                    <template>Magento_GiftRegistry::customer/items/default.phtml</template>
                </action>
                <action method="addItemRender">
                    <type>giftcard</type>
                    <block>Magento_GiftCard_Block_Checkout_Cart_Item_Renderer</block>
                    <template>Magento_GiftRegistry::customer/items/default.phtml</template>
                </action>
            </block>
        </reference>
    </handle>
</layout>
