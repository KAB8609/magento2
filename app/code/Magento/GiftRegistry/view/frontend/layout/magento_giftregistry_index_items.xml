<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="magento_giftregistry_index_items" translate="label" type="page" parent="magento_giftregistry_index_share">
        <label>Customer GiftRegistry Items List</label>
        <update handle="customer_account"/>
        <reference name="customer_account_navigation">
            <action method="setActive">
                <argument name="path" xsi:type="string">magento_giftregistry/index/index</argument>
            </action>
        </reference>
        <reference name="my.account.wrapper">
            <block class="Magento_GiftRegistry_Block_Items" name="giftregistry.customer.items" template="customer/items.phtml">
                <action method="addItemRender">
                    <argument name="type" xsi:type="string">default</argument>
                    <argument name="block" xsi:type="string">Magento_Checkout_Block_Cart_Item_Renderer</argument>
                    <argument name="template" xsi:type="string">Magento_GiftRegistry::customer/items/default.phtml</argument>
                </action>
                <action method="addItemRender">
                    <argument name="type" xsi:type="string">simple</argument>
                    <argument name="block" xsi:type="string">Magento_Checkout_Block_Cart_Item_Renderer</argument>
                    <argument name="template" xsi:type="string">Magento_GiftRegistry::customer/items/default.phtml</argument>
                </action>
                <action method="addItemRender">
                    <argument name="type" xsi:type="string">grouped</argument>
                    <argument name="block" xsi:type="string">Magento_Checkout_Block_Cart_Item_Renderer_Grouped</argument>
                    <argument name="template" xsi:type="string">Magento_GiftRegistry::customer/items/default.phtml</argument>
                </action>
                <action method="addItemRender">
                    <argument name="type" xsi:type="string">configurable</argument>
                    <argument name="block" xsi:type="string">Magento_Checkout_Block_Cart_Item_Renderer_Configurable</argument>
                    <argument name="template" xsi:type="string">Magento_GiftRegistry::customer/items/default.phtml</argument>
                </action>
                <action method="addItemRender">
                    <argument name="type" xsi:type="string">bundle</argument>
                    <argument name="block" xsi:type="string">Magento_Bundle_Block_Checkout_Cart_Item_Renderer</argument>
                    <argument name="template" xsi:type="string">Magento_GiftRegistry::customer/items/default.phtml</argument>
                </action>
                <action method="addItemRender">
                    <argument name="type" xsi:type="string">giftcard</argument>
                    <argument name="block" xsi:type="string">Magento_GiftCard_Block_Checkout_Cart_Item_Renderer</argument>
                    <argument name="template" xsi:type="string">Magento_GiftRegistry::customer/items/default.phtml</argument>
                </action>
            </block>
        </reference>
    </handle>
</layout>
