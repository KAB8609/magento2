<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="magento_giftregistry_index_share" translate="label" type="page" parent="magento_giftregistry_index_index">
        <label>Customer GiftRegistry Share</label>
        <update handle="customer_account"/>
        <reference name="customer_account_navigation">
            <action method="setActive">
                <argument name="path" xsi:type="string">magento_giftregistry/index/index</argument>
            </action>
        </reference>
        <reference name="my.account.wrapper">
            <block class="Magento_GiftRegistry_Block_Customer_Share" name="giftregistry.customer.share" template="customer/share.phtml"/>
        </reference>
    </handle>
</layout>
