<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="magento_giftregistry_view_index" translate="label" type="page" parent="magento_giftregistry_index_share">
        <label>Customer GiftRegistry Gift View</label>
        <reference name="root">
            <action method="setTemplate">
                <template>1column.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <block class="Magento_GiftRegistry_Block_View" name="enterprise.giftregistry.view" template="view.phtml">
                <block class="Magento_GiftRegistry_Block_Items" name="giftregistry_items" template="view/items.phtml">
                    <block class="Magento_Catalog_Block_Product_Price" template="product/price_msrp_item.phtml" name="enterprise.giftregistry.item.price"/>
                    <action method="addItemRender">
                        <type>default</type>
                        <block>Magento_Checkout_Block_Cart_Item_Renderer</block>
                        <template>Magento_GiftRegistry::view/items/default.phtml</template>
                    </action>
                    <action method="addItemRender">
                        <type>simple</type>
                        <block>Magento_Checkout_Block_Cart_Item_Renderer</block>
                        <template>Magento_GiftRegistry::view/items/default.phtml</template>
                    </action>
                    <action method="addItemRender">
                        <type>grouped</type>
                        <block>Magento_Checkout_Block_Cart_Item_Renderer_Grouped</block>
                        <template>Magento_GiftRegistry::view/items/default.phtml</template>
                    </action>
                    <action method="addItemRender">
                        <type>configurable</type>
                        <block>Magento_Checkout_Block_Cart_Item_Renderer_Configurable</block>
                        <template>Magento_GiftRegistry::view/items/default.phtml</template>
                    </action>
                    <action method="addItemRender">
                        <type>bundle</type>
                        <block>Magento_Bundle_Block_Checkout_Cart_Item_Renderer</block>
                        <template>Magento_GiftRegistry::view/items/default.phtml</template>
                    </action>
                    <action method="addItemRender">
                        <type>giftcard</type>
                        <block>Magento_GiftCard_Block_Checkout_Cart_Item_Renderer</block>
                        <template>Magento_GiftRegistry::view/items/default.phtml</template>
                    </action>
                </block>
                <block class="Magento_GiftRegistry_Block_Customer_Items" name="giftregistry.view.items" template="view/items.phtml"/>
            </block>
        </reference>
        <update handle="MAP_popup"/>
        <reference name="product.tooltip">
            <container name="product.info.addtocart.paypal.wrapper" label="PayPal Express Checkout Shortcut Wrapper" htmlTag="div">
                <block class="Magento_Paypal_Block_Express_Shortcut" name="product.info.addtocart.paypal" template="express/shortcut.phtml">
                    <action method="setIsInCatalogProduct">
                        <value>1</value>
                    </action>
                    <action method="setShowOrPosition">
                        <value>after</value>
                    </action>
                </block>
            </container>
        </reference>
    </handle>
</layout>
