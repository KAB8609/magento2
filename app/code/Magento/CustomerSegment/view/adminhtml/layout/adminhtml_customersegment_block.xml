<layout version="0.1.0">
    <adminhtml_customersegment_block>
        <reference name="customersegment.container">
            <block type="Magento_Backend_Block_Widget_Grid" name="customer.segment.grid" as="grid">
                <arguments>
                    <id>customersegmentGrid</id>
                    <dataSource type="object">Magento_CustomerSegment_Model_Resource_Grid_Collection</dataSource>
                    <use_ajax>1</use_ajax>
                    <default_sort>name</default_sort>
                    <default_dir>ASC</default_dir>
                    <save_parameters_in_session>1</save_parameters_in_session>
                    <grid_url type="url">
                        <path>adminhtml/customersegment/grid</path>
                        <params>
                            <_current>1</_current>
                        </params>
                    </grid_url>
                </arguments>
                <block type="Magento_Backend_Block_Widget_Grid_ColumnSet" as="grid.columnSet" name="customer.segment.grid.columnSet">
                    <arguments>
                        <id>customersegmentGrid</id>
                        <rowUrl>
                            <path>*/*/edit</path>
                            <extraParamsTemplate>
                                <id>getSegmentId</id>
                            </extraParamsTemplate>
                        </rowUrl>
                    </arguments>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="grid_segment_id">
                        <arguments>
                            <header translate="true" module="Magento_CustomerSegment">ID</header>
                            <align>right</align>
                            <width>50</width>
                            <index>segment_id</index>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="grid_segment_name">
                        <arguments>
                            <header translate="true" module="Magento_CustomerSegment">Segment</header>
                            <align>left</align>
                            <index>name</index>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="grid_segment_is_active">
                        <arguments>
                            <header translate="true" module="Magento_CustomerSegment">Status</header>
                            <align>left</align>
                            <width>80</width>
                            <index>is_active</index>
                            <type>options</type>
                            <options>
                                <active>
                                    <value>0</value>
                                    <label translate="true" module="Magento_CustomerSegment">Active</label>
                                </active>
                                <inactive>
                                    <value>1</value>
                                    <label translate="true" module="Magento_CustomerSegment">Inactive</label>
                                </inactive>
                            </options>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column_Multistore" as="grid_segment_website">
                        <arguments>
                            <header translate="true" module="Magento_CustomerSegment">Website</header>
                            <align>left</align>
                            <index>website_ids</index>
                            <type>options</type>
                            <options type="options">Magento_Backend_Model_Config_Source_Website_OptionHash</options>
                            <sortable>0</sortable>
                            <width>200</width>
                        </arguments>
                    </block>
                </block>
            </block>
        </reference>
    </adminhtml_customersegment_block>
</layout>
