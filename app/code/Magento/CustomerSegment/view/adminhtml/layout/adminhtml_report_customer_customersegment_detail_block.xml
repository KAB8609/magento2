<layout version="0.1.0">
    <adminhtml_report_customer_customersegment_detail_block>
        <reference name="report.customersegment.detail.grid.container">
            <block type="Magento_CustomerSegment_Block_Adminhtml_Report_Customer_Segment_Detail_Grid" name="report.customersegment.detail.grid" as="grid">
                <arguments>
                    <id>segmentGrid</id>
                    <dataSource type="object">Magento_CustomerSegment_Model_Resource_Segment_Report_Detail_Collection</dataSource>
                    <use_ajax>1</use_ajax>
                    <grid_url type="url">
                        <generatorClass>Magento_CustomerSegment_Model_Segment_Report_Detail_Grid_UrlGenerator</generatorClass>
                        <path>*/*/customerGrid</path>
                        <params>
                            <_current>1</_current>
                        </params>
                    </grid_url>
                </arguments>
                <block type="Magento_Backend_Block_Widget_Grid_Export" name="report.customersegment.detail.grid.export" as="grid.export">
                    <arguments>
                        <exportTypes>
                            <csv>
                                <urlPath>*/*/exportCsv</urlPath>
                                <label translate="true" module="Magento_CustomerSegment">CSV</label>
                            </csv>
                            <excel>
                                <urlPath>*/*/exportExcel</urlPath>
                                <label translate="true" module="Magento_CustomerSegment">Excel XML</label>
                            </excel>
                        </exportTypes>
                    </arguments>
                </block>
                <block type="Magento_Backend_Block_Widget_Grid_ColumnSet" as="grid.columnSet" name="customersegment.detail.grid.columnSet">
                    <arguments>
                        <id>segmentGrid</id>
                        <rowUrl>
                            <generatorClass>Magento_CustomerSegment_Model_Segment_Report_Detail_Row_UrlGenerator</generatorClass>
                        </rowUrl>
                    </arguments>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="grid_entity_id">
                        <arguments>
                            <header translate="true" module="Magento_CustomerSegment">ID</header>
                            <index>entity_id</index>
                            <type>number</type>
                            <header_css_class>col-id</header_css_class>
                            <column_css_class>col-id</column_css_class>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="grid_name">
                        <arguments>
                            <header translate="true" module="Magento_CustomerSegment">Name</header>
                            <index>name</index>
                            <header_css_class>col-name</header_css_class>
                            <column_css_class>col-name</column_css_class>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="grid_email">
                        <arguments>
                            <header translate="true" module="Magento_CustomerSegment">Email</header>
                            <index>email</index>
                            <header_css_class>col-mail</header_css_class>
                            <column_css_class>col-mail</column_css_class>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column_Multistore" as="grid_group">
                        <arguments>
                            <header translate="true" module="Magento_CustomerSegment">Group</header>
                            <index>group_id</index>
                            <type>options</type>
                            <options type="options">Magento_CustomerSegment_Model_Resource_Segment_Report_Detail_Group_Option</options>
                            <header_css_class>col-group</header_css_class>
                            <column_css_class>col-group</column_css_class>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="grid_telephone">
                        <arguments>
                            <header translate="true" module="Magento_CustomerSegment">Phone</header>
                            <index>billing_telephone</index>
                            <header_css_class>col-phone</header_css_class>
                            <column_css_class>col-phone</column_css_class>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="grid_billing_postcode">
                        <arguments>
                            <header translate="true" module="Magento_CustomerSegment">ZIP</header>
                            <index>billing_postcode</index>
                            <header_css_class>col-zip</header_css_class>
                            <column_css_class>col-zip</column_css_class>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="grid_billing_country_id">
                        <arguments>
                            <header translate="true" module="Magento_CustomerSegment">Country</header>
                            <index>billing_country_id</index>
                            <type>country</type>
                            <header_css_class>col-country</header_css_class>
                            <column_css_class>col-country</column_css_class>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="grid_billing_region">
                        <arguments>
                            <header translate="true" module="Magento_CustomerSegment">State/Province</header>
                            <index>billing_region</index>
                            <header_css_class>col-state</header_css_class>
                            <column_css_class>col-state</column_css_class>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="grid_customer_since">
                        <arguments>
                            <header translate="true" module="Magento_CustomerSegment">Customer Since</header>
                            <index>created_at</index>
                            <type>datetime</type>
                            <gmtoffset>1</gmtoffset>
                            <header_css_class>col-period</header_css_class>
                            <column_css_class>col-period</column_css_class>
                        </arguments>
                    </block>
                </block>
            </block>
        </reference>
    </adminhtml_report_customer_customersegment_detail_block>
</layout>
