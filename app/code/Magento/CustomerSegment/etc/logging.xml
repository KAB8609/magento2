<logging xsi:noNamespaceSchemaLocation="../../../Magento/Logging/etc/logging.xsd"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" >
    <title action="refresh_data" translate="true" >Refresh Data</title >
    <event id="magento_customersegment" >
        <label translate="true" >Manage Segments</label >
        <expected_model class="Magento_CustomerSegment_Model_Segment" />
        <handle name="adminhtml_customersegment_edit" action="view" />
        <handle name="adminhtml_customersegment_save" action="save" skip_on_back="adminhtml_customersegment_edit " />
        <handle name="adminhtml_customersegment_match" action="refresh_data"
                post_dispatch="Magento_CustomerSegment_Model_Logging::postDispatchCustomerSegmentMatch" />
        <handle name="adminhtml_customersegment_delete" action="delete" />
        <handle name="adminhtml_report_customer_customersegment_exportCsv" action="export"
                post_dispatch="postDispatchSimpleSave" />
        <handle name="adminhtml_report_customer_customersegment_exportExcel" action="export"
                post_dispatch="postDispatchSimpleSave" />
    </event >
</logging >