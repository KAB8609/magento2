<config>
    <global>
        <resources>
            <customersegment_setup>
                <setup>
                    <module>Magento_CustomerSegment</module>
                    <class>Magento_CustomerSegment_Model_Resource_Setup</class>
                </setup>
            </customersegment_setup>
        </resources>
        <events>
            <customer_save_commit_after>
                <observers>
                    <magento_customersegment>
                        <class>Magento_CustomerSegment_Model_Observer</class>
                        <method>processCustomerEvent</method>
                    </magento_customersegment>
                </observers>
            </customer_save_commit_after>
            <customer_address_save_commit_after>
                <observers>
                    <magento_customersegment>
                        <class>Magento_CustomerSegment_Model_Observer</class>
                        <method>processCustomerEvent</method>
                    </magento_customersegment>
                </observers>
            </customer_address_save_commit_after>
            <customer_address_delete_commit_after>
                <observers>
                    <magento_customersegment>
                        <class>Magento_CustomerSegment_Model_Observer</class>
                        <method>processCustomerEvent</method>
                    </magento_customersegment>
                </observers>
            </customer_address_delete_commit_after>
            <customer_balance_save_commit_after>
                <observers>
                    <magento_customersegment>
                        <class>Magento_CustomerSegment_Model_Observer</class>
                        <method>processCustomerEvent</method>
                    </magento_customersegment>
                </observers>
            </customer_balance_save_commit_after>
        </events>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <magento_customersegment before="Magento_Adminhtml">Magento_CustomerSegment_Adminhtml</magento_customersegment>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <events>
            <salesrule_rule_condition_combine>
                <observers>
                    <magento_customersegment>
                        <class>Magento_CustomerSegment_Model_Observer</class>
                        <method>addSegmentsToSalesRuleCombine</method>
                    </magento_customersegment>
                </observers>
            </salesrule_rule_condition_combine>
            <sales_quote_collect_totals_before>
                <observers>
                    <magento_customersegment>
                        <class>Magento_CustomerSegment_Model_Observer</class>
                        <method>processQuote</method>
                    </magento_customersegment>
                </observers>
            </sales_quote_collect_totals_before>
            <magento_customercustomattributes_address_attribute_edit_tab_general_prepare_form>
                <observers>
                    <magento_customersegment>
                        <class>Magento_CustomerSegment_Model_Observer</class>
                        <method>enterpiseCustomerAttributeEditPrepareForm</method>
                    </magento_customersegment>
                </observers>
            </magento_customercustomattributes_address_attribute_edit_tab_general_prepare_form>
            <magento_customercustomattributes_attribute_edit_tab_general_prepare_form>
                <observers>
                    <magento_customersegment>
                        <class>Magento_CustomerSegment_Model_Observer</class>
                        <method>enterpiseCustomerAttributeEditPrepareForm</method>
                    </magento_customersegment>
                </observers>
            </magento_customercustomattributes_attribute_edit_tab_general_prepare_form>
            <targetrule_edit_tab_main_after_prepare_form>
                <observers>
                    <magento_customersegment>
                        <class>Magento_CustomerSegment_Model_Observer</class>
                        <method>addFieldsToTargetRuleForm</method>
                    </magento_customersegment>
                </observers>
            </targetrule_edit_tab_main_after_prepare_form>
        </events>
        <translate>
            <modules>
                <Magento_CustomerSegment>
                    <files>
                        <default>Magento_CustomerSegment.csv</default>
                    </files>
                </Magento_CustomerSegment>
            </modules>
        </translate>
    </adminhtml>
    <frontend>
        <events>
            <sales_quote_save_commit_after>
                <observers>
                    <magento_customersegment>
                        <class>Magento_CustomerSegment_Model_Observer</class>
                        <method>processEvent</method>
                    </magento_customersegment>
                </observers>
            </sales_quote_save_commit_after>
            <sales_order_save_commit_after>
                <observers>
                    <magento_customersegment>
                        <class>Magento_CustomerSegment_Model_Observer</class>
                        <method>processEvent</method>
                    </magento_customersegment>
                </observers>
            </sales_order_save_commit_after>
            <catalog_controller_product_view>
                <observers>
                    <magento_customersegment>
                        <class>Magento_CustomerSegment_Model_Observer</class>
                        <method>processEvent</method>
                    </magento_customersegment>
                </observers>
            </catalog_controller_product_view>
            <checkout_cart_save_after>
                <observers>
                    <magento_customersegment>
                        <class>Magento_CustomerSegment_Model_Observer</class>
                        <method>processEvent</method>
                    </magento_customersegment>
                </observers>
            </checkout_cart_save_after>
            <wishlist_items_renewed>
                <observers>
                    <magento_customersegment>
                        <class>Magento_CustomerSegment_Model_Observer</class>
                        <method>processEvent</method>
                    </magento_customersegment>
                </observers>
            </wishlist_items_renewed>
            <customer_login>
                <observers>
                    <magento_customersegment>
                        <class>Magento_CustomerSegment_Model_Observer</class>
                        <method>processEvent</method>
                    </magento_customersegment>
                </observers>
            </customer_login>
            <newsletter_subscriber_save_commit_after>
                <observers>
                    <magento_customersegment>
                        <class>Magento_CustomerSegment_Model_Observer</class>
                        <method>processEvent</method>
                    </magento_customersegment>
                </observers>
            </newsletter_subscriber_save_commit_after>
            <visitor_init>
                <observers>
                    <magento_customersegment>
                        <class>Magento_CustomerSegment_Model_Observer</class>
                        <method>processEvent</method>
                    </magento_customersegment>
                </observers>
            </visitor_init>
        </events>
    </frontend>
    <default>
        <customer>
            <magento_customersegment>
                <is_enabled>1</is_enabled>
            </magento_customersegment>
        </customer>
    </default>
</config>
