<config>
    <global>
        <resources>
            <customersegment_setup>
                <setup>
                    <module>Magento_CustomerSegment</module>
                    <class>Magento_CustomerSegment_Model_Resource_Setup</class>
                </setup>
            </customersegment_setup>
        </resources>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <Magento_CustomerSegment>
                    <files>
                        <default>Magento_CustomerSegment.csv</default>
                    </files>
                </Magento_CustomerSegment>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <customer>
            <magento_customersegment>
                <is_enabled>1</is_enabled>
            </magento_customersegment>
        </customer>
    </default>
</config>