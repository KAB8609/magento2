<config>
    <global>
        <ignoredModules>
            <entities>
                <api />
            </entities>
        </ignoredModules>
        <resources>
            <api_setup>
                <setup>
                    <module>Magento_Api</module>
                </setup>
            </api_setup>
        </resources>
        <request>
            <direct_front_name>
                <api />
            </direct_front_name>
        </request>
    </global>
    <frontend>
        <routers>
            <api>
                <use>standard</use>
                <args>
                    <module>Magento_Api</module>
                    <frontName>api</frontName>
                </args>
            </api>
        </routers>
    </frontend>
    <default>
        <api>
            <config>
                <charset>UTF-8</charset>
                <session_timeout>3600</session_timeout>
                <wsdl_cache_enabled>0</wsdl_cache_enabled>
            </config>
        </api>
    </default>
</config>
