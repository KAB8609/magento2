<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="adminhtml_reminder_edit">
        <reference name="head">
            <action method="addJs">
                <argument name="file" xsi:type="string">mage/adminhtml/wysiwyg/widget.js</argument>
            </action>
            <action method="addCss">
                <argument name="file" xsi:type="string">prototype/windows/themes/default.css</argument>
            </action>
            <action method="addCss">
                <argument name="file" xsi:type="string">Magento_Core::prototype/magento.css</argument>
            </action>
        </reference>
        <reference name="content">
            <block class="Magento\Reminder\Block\Adminhtml\Reminder\Edit" name="adminhtml_reminder_edit"/>
        </reference>
        <reference name="left">
            <block class="Magento\Reminder\Block\Adminhtml\Reminder\Edit\Tabs" name="adminhtml_reminder_edit_tabs"/>
        </reference>
    </handle>
</layout>
