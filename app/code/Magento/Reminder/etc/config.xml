<config>
    <global>
        <resources>
            <reminder_setup>
                <setup>
                    <module>Magento_Reminder</module>
                    <class>Magento_Reminder_Model_Resource_Setup</class>
                </setup>
            </reminder_setup>
        </resources>
    </global>
    <default>
        <promo>
            <magento_reminder>
                <enabled>1</enabled>
                <frequency>I</frequency>
                <interval>15</interval>
                <minutes>0</minutes>
                <limit>100</limit>
                <threshold>1</threshold>
                <identity>general</identity>
            </magento_reminder>
        </promo>
    </default>
</config>
