<config>
    <global>
        <resources>
            <reminder_setup>
                <setup>
                    <module>Magento_Reminder</module>
                    <class>Magento\Reminder\Model\Resource\Setup</class>
                </setup>
            </reminder_setup>
        </resources>
        <template>
            <email>
                <magento_reminder_email_template translate="label" module="Magento_Reminder">
                    <label>Promotion Notification/Reminder</label>
                    <file>email/promotion.html</file>
                    <type>html</type>
                </magento_reminder_email_template>
            </email>
        </template>
    </global>
    <default>
        <promo>
            <magento_reminder>
                <enabled>1</enabled>
                <frequency>I</frequency>
                <interval>15</interval>
                <minutes>0</minutes>
                <limit>100</limit>
                <threshold>1</threshold>
                <identity>general</identity>
            </magento_reminder>
        </promo>
    </default>
</config>
