<config>
    <global>
        <external_cache>
            <controls>
                <zend_page_cache translate="label" module="Magento_PageCache">
                    <label>Zend Full Page Cache</label>
                    <class>Magento_PageCache_Model_Control_Zend</class>
                </zend_page_cache>
            </controls>
        </external_cache>
        <events>
            <design_editor_activate>
                <observers>
                    <magento_pagecache>
                        <class>Magento_PageCache_Model_Observer</class>
                        <method>setNoCacheCookie</method>
                    </magento_pagecache>
                </observers>
            </design_editor_activate>
            <design_editor_deactivate>
                <observers>
                    <magento_pagecache>
                        <class>Magento_PageCache_Model_Observer</class>
                        <method>deleteNoCacheCookie</method>
                    </magento_pagecache>
                </observers>
            </design_editor_deactivate>
        </events>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <Magento_PageCache>
                    <files>
                        <default>Magento_PageCache.csv</default>
                    </files>
                </Magento_PageCache>
            </modules>
        </translate>
    </adminhtml>
    <frontend>
        <events>
            <controller_action_predispatch>
                <observers>
                    <pagecache>
                        <class>Magento_PageCache_Model_Observer</class>
                        <method>processPreDispatch</method>
                    </pagecache>
                </observers>
            </controller_action_predispatch>
        </events>
        <cache>
            <allowed_requests>
                <cms />
                <catalog>
                    <category>
                        <view />
                    </category>
                </catalog>
                <catalog>
                    <product>
                        <view />
                    </product>
                </catalog>
            </allowed_requests>
        </cache>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Magento_PageCache before="Magento_Adminhtml">Magento_PageCache_Adminhtml</Magento_PageCache>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <default>
        <system>
            <external_page_cache>
                <enabled>0</enabled>
                <control>zend_page_cache</control>
                <cookie_lifetime>3600</cookie_lifetime>
            </external_page_cache>
        </system>
    </default>
</config>
