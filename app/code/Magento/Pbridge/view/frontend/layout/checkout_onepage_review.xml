<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="checkout_onepage_review">
        <reference name="checkout.onepage.review.button">
            <action method="setTemplate">
                <argument name="template" xsi:type="array">
                    <item name="name" xsi:type="string">Magento_Pbridge::checkout/review/button.phtml</item>
                    <item name="block" xsi:type="string">checkout.onepage.review.button</item>
                </argument>
            </action>
        </reference>
        <reference name="checkout.onepage.review.info.items.after">
            <block class="Magento_Pbridge_Block_Checkout_Payment_Review_Container" name="pbridge.checkout.payment.review.iframe" template="Magento_Pbridge::checkout/review/iframe.phtml"/>
        </reference>
    </handle>
</layout>
