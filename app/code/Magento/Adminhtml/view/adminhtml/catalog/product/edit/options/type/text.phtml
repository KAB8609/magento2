<?php /** @var $this Magento_Adminhtml_Block_Catalog_Product_Edit_Tab_Options_Type_Text */ ?>
<script id="custom-option-text-type-template" type="text/x-jquery-tmpl">
    <div id="product_option_${option_id}_type_${group}" class="fieldset">
        <table class="data-table" cellspacing="0">
            <thead>
            <tr>
                <?php if ($this->getCanReadPrice() !== false) : ?>
                <th class="type-price"><?php echo Mage::helper('Magento_Catalog_Helper_Data')->__('Price') ?></th>
                <th class="type-type"><?php echo Mage::helper('Magento_Catalog_Helper_Data')->__('Price Type') ?></th>
                <?php endif; ?>
                <th class="type-sku"><?php echo Mage::helper('Magento_Catalog_Helper_Data')->__('SKU') ?></th>
                <th class="type-last last"><?php echo Mage::helper('Magento_Catalog_Helper_Data')
                    ->__('Max Characters') ?></th>
            </tr>
            </thead>
            <tr>
                <?php if ($this->getCanReadPrice() !== false) : ?>
                <td class="opt-price">
                    <input id="product_option_${option_id}_price"
                           name="product[options][${option_id}][price]"
                           class="input-text validate-number product-option-price"
                           type="text" value="${price}" data-store-label="${price}"
