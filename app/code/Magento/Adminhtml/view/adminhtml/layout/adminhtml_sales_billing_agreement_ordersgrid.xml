<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <update handle="adminhtml_sales_order_grid_block"/>
    <reference name="sales.order.grid">
        <arguments>
            <argument name="dataSource" xsi:type="object">
                <updater>Magento_Sales_Model_Billing_Agreement_OrdersUpdater</updater>
            </argument>
            <argument name="grid_url" xsi:type="url" path="*/*/ordersgrid"/>
        </arguments>
    </reference>
    <remove name="sales.order.grid.export"/>
    <remove name="sales.order.grid.massaction"/>
    <block class="Magento_Backend_Block_Widget_Grid_Container" name="sales_order.grid.container" template="Magento_Backend::widget/grid/container/empty.phtml" output="1"/>
</layout>
