<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="adminhtml_system_email_template_grid_block">
        <reference name="adminhtml.system.email.template.container">
            <block class="Magento_Backend_Block_Widget_Grid" name="adminhtml.system.email.template.grid" as="grid">
                <arguments>
                    <id>systemEmailTemplateGrid</id>
                    <dataSource type="object">Magento_Core_Model_Resource_Email_Template_Collection</dataSource>
                    <use_ajax>1</use_ajax>
                    <save_parameters_in_session>1</save_parameters_in_session>
                    <grid_url type="url">
                        <path>*/*/grid</path>
                        <params>
                            <_current>1</_current>
                        </params>
                    </grid_url>
                </arguments>
                <block class="Magento_Backend_Block_Widget_Grid_ColumnSet" name="adminhtml.system.email.template.grid.columnSet" as="grid.columnSet">
                    <arguments>
                        <rowUrl>
                            <path>*/*/edit</path>
                            <extraParamsTemplate>
                                <id>getId</id>
                            </extraParamsTemplate>
                        </rowUrl>
                        <empty_text translate="true">No Templates Found</empty_text>
                    </arguments>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="template_id">
                        <arguments>
                            <header translate="true">ID</header>
                            <index>template_id</index>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="code">
                        <arguments>
                            <header translate="true">Template</header>
                            <index>template_code</index>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="added_at">
                        <arguments>
                            <header translate="true">Added</header>
                            <index>added_at</index>
                            <gmtoffset>1</gmtoffset>
                            <type>datetime</type>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="modified_at">
                        <arguments>
                            <header translate="true">Updated</header>
                            <index>modified_at</index>
                            <gmtoffset>1</gmtoffset>
                            <type>datetime</type>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="subject">
                        <arguments>
                            <header translate="true">Subject</header>
                            <index>template_subject</index>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="type">
                        <arguments>
                            <header translate="true">Template Type</header>
                            <index>template_type</index>
                            <filter>Magento_Adminhtml_Block_System_Email_Template_Grid_Filter_Type</filter>
                            <renderer>Magento_Adminhtml_Block_System_Email_Template_Grid_Renderer_Type</renderer>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="action">
                        <arguments>
                            <header translate="true">Action</header>
                            <index>template_id</index>
                            <sortable>0</sortable>
                            <filter>0</filter>
                            <width>100px</width>
                            <renderer>Magento_Adminhtml_Block_System_Email_Template_Grid_Renderer_Action</renderer>
                        </arguments>
                    </block>
                </block>
            </block>
        </reference>
    </handle>
</layout>
