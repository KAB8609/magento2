<layout version="0.1.0">
    <adminhtml_catalog_product_action_attribute_edit>
        <reference name="left">
            <block type="Magento_Backend_Block_Store_Switcher" name="store_switcher" template="store/switcher.phtml"/>
            <block type="Magento_Adminhtml_Block_Catalog_Product_Edit_Action_Attribute_Tabs" name="attributes_tabs">
                <block type="Magento_Adminhtml_Block_Catalog_Product_Edit_Action_Attribute_Tab_Attributes" name="tab_attributes"/>
                <block type="Magento_Adminhtml_Block_Catalog_Product_Edit_Action_Attribute_Tab_Inventory" name="tab_inventory" template="catalog/product/edit/action/inventory.phtml"/>
                <block type="Magento_Adminhtml_Block_Catalog_Product_Edit_Action_Attribute_Tab_Websites" name="tab_websites" template="catalog/product/edit/action/websites.phtml"/>
                <action method="addTab">
                    <name>attributes</name>
                    <block>tab_attributes</block>
                </action>
                <action method="addTab">
                    <name>inventory</name>
                    <block>tab_inventory</block>
                </action>
                <action method="addTab">
                    <name>websites</name>
                    <block>tab_websites</block>
                </action>
            </block>
        </reference>
        <reference name="content">
            <block type="Magento_Adminhtml_Block_Catalog_Product_Edit_Action_Attribute" name="attribute" template="catalog/product/edit/action/attribute.phtml"/>
        </reference>
    </adminhtml_catalog_product_action_attribute_edit>
</layout>
