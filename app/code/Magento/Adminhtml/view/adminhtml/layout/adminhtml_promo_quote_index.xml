<layout version="0.1.0">
    <adminhtml_promo_quote_index>
        <reference name="content">
            <block type="Magento_Adminhtml_Block_Promo_Quote" name="adminhtml.block.promo.quote.grid.container">
                <block type="Magento_Backend_Block_Widget_Grid" name="adminhtml.block.promo.quote.grid" as="grid">
                    <arguments>
                        <id>promo_quote_grid</id>
                        <dataSource type="object">Magento_SalesRule_Model_Resource_Rule_Quote_Collection</dataSource>
                        <default_sort>sort_order</default_sort>
                        <default_dir>ASC</default_dir>
                        <save_parameters_in_session>1</save_parameters_in_session>
                    </arguments>
                    <block type="Magento_Backend_Block_Widget_Grid_ColumnSet" as="grid.columnSet" name="adminhtml.promo.quote.grid.columnSet">
                        <arguments>
                            <rowUrl>
                                <path>*/*/edit</path>
                                <extraParamsTemplate>
                                    <id>getRuleId</id>
                                </extraParamsTemplate>
                            </rowUrl>
                        </arguments>
                        <block type="Magento_Backend_Block_Widget_Grid_Column" as="rule_id">
                            <arguments>
                                <header translate="true">ID</header>
                                <width>50px</width>
                                <align>right</align>
                                <index>rule_id</index>
                            </arguments>
                        </block>
                        <block type="Magento_Backend_Block_Widget_Grid_Column" as="name">
                            <arguments>
                                <header translate="true">Rule</header>
                                <align>left</align>
                                <index>name</index>
                            </arguments>
                        </block>
                        <block type="Magento_Backend_Block_Widget_Grid_Column" as="coupon_code">
                            <arguments>
                                <header translate="true">Coupon Code</header>
                                <width>150px</width>
                                <align>left</align>
                                <index>code</index>
                            </arguments>
                        </block>
                        <block type="Magento_Backend_Block_Widget_Grid_Column" as="from_date">
                            <arguments>
                                <header translate="true">Start on</header>
                                <width>120px</width>
                                <align>left</align>
                                <type>date</type>
                                <index>from_date</index>
                            </arguments>
                        </block>
                        <block type="Magento_Backend_Block_Widget_Grid_Column" as="to_date">
                            <arguments>
                                <header translate="true">End on</header>
                                <width>120px</width>
                                <align>left</align>
                                <type>date</type>
                                <default>--</default>
                                <index>to_date</index>
                            </arguments>
                        </block>
                        <block type="Magento_Backend_Block_Widget_Grid_Column" as="is_active">
                            <arguments>
                                <header translate="true">Status</header>
                                <width>80px</width>
                                <align>left</align>
                                <index>is_active</index>
                                <type>options</type>
                                <options>
                                    <active>
                                        <value>1</value>
                                        <label translate="true">Active</label>
                                    </active>
                                    <inactive>
                                        <value>0</value>
                                        <label translate="true">Inactive</label>
                                    </inactive>
                                </options>
                            </arguments>
                        </block>
                        <block type="Magento_Backend_Block_Widget_Grid_Column_Multistore" as="rule_website">
                            <arguments>
                                <header translate="true">Web Site</header>
                                <width>200</width>
                                <align>left</align>
                                <index>website_ids</index>
                                <type>options</type>
                                <sortable>0</sortable>
                                <options type="options">Magento_Backend_Model_Config_Source_Website_OptionHash</options>
                            </arguments>
                        </block>
                        <block type="Magento_Backend_Block_Widget_Grid_Column" as="sort_order">
                            <arguments>
                                <header translate="true">Priority</header>
                                <width>100</width>
                                <align>right</align>
                                <index>sort_order</index>
                            </arguments>
                        </block>
                    </block>
                </block>
            </block>
        </reference>
    </adminhtml_promo_quote_index>
</layout>
