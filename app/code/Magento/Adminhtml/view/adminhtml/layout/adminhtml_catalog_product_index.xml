<layout version="0.1.0">
    <adminhtml_catalog_product_index>
        <reference name="menu">
            <action method="setActive">
                <itemId>Mage_Catalog::catalog_products</itemId>
            </action>
        </reference>
        <reference name="page-title">
            <block type="Mage_Backend_Block_Store_Switcher" name="store_switcher">
                <action method="setUseConfirm">
                    <params>1</params>
                </action>
            </block>
            <action method="setTitleClass">
                <class>complex</class>
            </action>
        </reference>
        <reference name="content">
            <block type="Magento_Adminhtml_Block_Catalog_Product" name="products_list"/>
        </reference>
    </adminhtml_catalog_product_index>
</layout>
