<layout version="0.1.0">
    <adminhtml_promo_catalog_edit>
        <reference name="head">
            <action method="setCanLoadExtJs">
                <flag>1</flag>
            </action>
            <action method="setCanLoadRulesJs">
                <flag>1</flag>
            </action>
        </reference>
        <reference name="left">
            <block type="Magento_Adminhtml_Block_Promo_Catalog_Edit_Tabs" name="promo_catalog_edit_tabs">
                <block type="Magento_Adminhtml_Block_Promo_Catalog_Edit_Tab_Main" name="promo_catalog_edit_tab_main"/>
                <block type="Magento_Adminhtml_Block_Promo_Catalog_Edit_Tab_Conditions" name="promo_catalog_edit_tab_conditions"/>
                <block type="Magento_Adminhtml_Block_Promo_Catalog_Edit_Tab_Actions" name="promo_catalog_edit_tab_actions"/>
                <action method="addTab">
                    <name>main_section</name>
                    <block>promo_catalog_edit_tab_main</block>
                </action>
                <action method="addTab">
                    <name>conditions_section</name>
                    <block>promo_catalog_edit_tab_conditions</block>
                </action>
                <action method="addTab">
                    <name>actions_section</name>
                    <block>promo_catalog_edit_tab_actions</block>
                </action>
            </block>
        </reference>
        <reference name="content">
            <block type="Magento_Adminhtml_Block_Promo_Catalog_Edit" name="promo_catalog_edit"/>
        </reference>
        <reference name="js">
            <block type="Magento_Adminhtml_Block_Promo_Catalog_Edit_Js" template="promo/js.phtml"/>
        </reference>
    </adminhtml_promo_catalog_edit>
</layout>
