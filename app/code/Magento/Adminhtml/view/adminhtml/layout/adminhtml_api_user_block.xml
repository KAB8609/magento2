<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="adminhtml_api_user_block">
        <reference name="adminhtml.api.user.container">
            <block class="Magento_Backend_Block_Widget_Grid" name="adminhtml.api.user.grid" as="grid">
                <arguments>
                    <id>permissionsUserGrid</id>
                    <dataSource type="object">Magento_Api_Model_Resource_User_Collection</dataSource>
                    <default_sort>username</default_sort>
                    <default_dir>asc</default_dir>
                    <use_ajax>1</use_ajax>
                    <grid_url type="url">
                        <path>*/*/roleGrid</path>
                    </grid_url>
                </arguments>
                <block class="Magento_Backend_Block_Widget_Grid_ColumnSet" name="adminhtml.api.user.grid.columnSet" as="grid.columnSet">
                    <arguments>
                        <rowUrl>
                            <path>*/*/edit</path>
                            <extraParamsTemplate>
                                <user_id>getId</user_id>
                            </extraParamsTemplate>
                        </rowUrl>
                    </arguments>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="user_id">
                        <arguments>
                            <header translate="true" module="Magento_Adminhtml">ID</header>
                            <index>user_id</index>
                            <align>right</align>
                            <sortable>1</sortable>
                            <width>5</width>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="username">
                        <arguments>
                            <header translate="true" module="Magento_Adminhtml">User Name</header>
                            <index>username</index>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="firstname">
                        <arguments>
                            <header translate="true" module="Magento_Adminhtml">First Name</header>
                            <index>firstname</index>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="lastname">
                        <arguments>
                            <header translate="true" module="Magento_Adminhtml">Last Name</header>
                            <index>lastname</index>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="email">
                        <arguments>
                            <header translate="true" module="Magento_Adminhtml">Email</header>
                            <index>email</index>
                            <width>40</width>
                            <align>left</align>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="is_active">
                        <arguments>
                            <header translate="true" module="Magento_Adminhtml">Status</header>
                            <index>is_active</index>
                            <type>options</type>
                            <options>
                                <active>
                                    <value>1</value>
                                    <label translate="true">Active</label>
                                </active>
                                <inactive>
                                    <value>0</value>
                                    <label translate="true">Inactive</label>
                                </inactive>
                            </options>
                        </arguments>
                    </block>
                </block>
            </block>
        </reference>
    </handle>
</layout>
