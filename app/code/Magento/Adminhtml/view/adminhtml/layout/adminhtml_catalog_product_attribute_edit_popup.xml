<layout version="0.1.0">
    <adminhtml_catalog_product_attribute_edit_popup>
        <remove name="left"/>
        <reference name="attribute_edit_content">
            <arguments>
                <template>Magento_Adminhtml::catalog/product/attribute/form.phtml</template>
            </arguments>
            <container name="form" label="Form">
                <block type="Magento_Adminhtml_Block_Catalog_Product_Attribute_Edit_Tab_Main" as="main"/>
                <block type="Magento_Eav_Block_Adminhtml_Attribute_Edit_Options_Options" as="advanced-options"/>
                <block type="Magento_Adminhtml_Block_Catalog_Product_Attribute_Edit_Tab_Advanced" as="options"/>
                <block type="Magento_Eav_Block_Adminhtml_Attribute_Edit_Options_Labels" as="labels"/>
                <block type="Magento_Adminhtml_Block_Catalog_Product_Attribute_Edit_Tab_Front" as="front-options"/>
            </container>
        </reference>
    </adminhtml_catalog_product_attribute_edit_popup>
</layout>
