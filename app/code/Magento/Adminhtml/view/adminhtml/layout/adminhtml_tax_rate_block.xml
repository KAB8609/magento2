<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="adminhtml_tax_rate_block">
        <reference name="adminhtml.tax.rate.container">
            <block class="Magento_Backend_Block_Widget_Grid" name="adminhtml.tax.rate.grid" as="grid">
                <arguments>
                    <id>tax_rate_grid</id>
                    <dataSource type="object">Magento_Tax_Model_Resource_Calculation_Grid_Collection</dataSource>
                    <default_sort>region_name</default_sort>
                    <default_dir>ASC</default_dir>
                    <save_parameters_in_session>1</save_parameters_in_session>
                </arguments>
                <block class="Magento_Backend_Block_Widget_Grid_Export" name="adminhtml.tax.rate.grid.export" as="grid.export">
                    <arguments>
                        <exportTypes>
                            <csv>
                                <urlPath>*/*/exportCsv</urlPath>
                                <label translate="true">CSV</label>
                            </csv>
                            <excel>
                                <urlPath>*/*/exportXml</urlPath>
                                <label translate="true">Excel XML</label>
                            </excel>
                        </exportTypes>
                    </arguments>
                </block>
                <block class="Magento_Backend_Block_Widget_Grid_ColumnSet" name="adminhtml.catalog.product.set.grid.columnSet" as="grid.columnSet">
                    <arguments>
                        <id>tax_rate_grid</id>
                        <rowUrl>
                            <path>*/*/edit</path>
                            <extraParamsTemplate>
                                <rate>getTaxCalculationRateId</rate>
                            </extraParamsTemplate>
                        </rowUrl>
                    </arguments>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="code">
                        <arguments>
                            <header translate="true">Tax Identifier</header>
                            <header_export translate="true">Code</header_export>
                            <align>left</align>
                            <filter_index>main_table.code</filter_index>
                            <index>code</index>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="tax_country_id">
                        <arguments>
                            <header translate="true">Country</header>
                            <type>country</type>
                            <align>left</align>
                            <filter_index>main_table.tax_country_id</filter_index>
                            <index>tax_country_id</index>
                            <renderer>Magento_Adminhtml_Block_Tax_Rate_Grid_Renderer_Country</renderer>
                            <sortable>0</sortable>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="region_name">
                        <arguments>
                            <header translate="true">State/Region</header>
                            <header_export translate="true">State</header_export>
                            <align>left</align>
                            <filter_index>region_table.code</filter_index>
                            <index>region_name</index>
                            <default>*</default>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="tax_postcode">
                        <arguments>
                            <header translate="true">Zip/Post Code</header>
                            <align>left</align>
                            <index>tax_postcode</index>
                            <default>*</default>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="rate">
                        <arguments>
                            <header translate="true">Rate</header>
                            <align>right</align>
                            <index>rate</index>
                            <type>number</type>
                            <default>0.00</default>
                            <renderer>Magento_Adminhtml_Block_Tax_Rate_Grid_Renderer_Data</renderer>
                        </arguments>
                    </block>
                </block>
            </block>
        </reference>
    </handle>
</layout>
