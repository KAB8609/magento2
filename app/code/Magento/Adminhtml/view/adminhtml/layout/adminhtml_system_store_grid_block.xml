<layout version="0.1.0">
    <adminhtml_system_store_grid_block>
        <reference name="adminhtml.system.store.container">
            <block type="Magento_Backend_Block_Widget_Grid" name="adminhtml.system.store.grid" as="grid">
                <arguments>
                    <id>storeGrid</id>
                    <save_parameters_in_session>1</save_parameters_in_session>
                    <dataSource type="object">Magento_Core_Model_Resource_Website_Grid_Collection</dataSource>
                </arguments>
                <block type="Magento_Backend_Block_Widget_Grid_ColumnSet" name="adminhtml.system.store.grid.columnSet" as="grid.columnSet">
                    <arguments>
                        <id>storeGrid</id>
                    </arguments>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="website_title">
                        <arguments>
                            <header translate="true">Web Site</header>
                            <align>left</align>
                            <index>name</index>
                            <filter_index>main_table.name</filter_index>
                            <renderer>Magento_Adminhtml_Block_System_Store_Grid_Render_Website</renderer>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="group_title">
                        <arguments>
                            <header translate="true">Store</header>
                            <align>left</align>
                            <index>group_title</index>
                            <filter_index>group_table.name</filter_index>
                            <renderer>Magento_Adminhtml_Block_System_Store_Grid_Render_Group</renderer>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="store_title">
                        <arguments>
                            <header translate="true">Store View</header>
                            <align>left</align>
                            <index>store_title</index>
                            <filter_index>store_table.name</filter_index>
                            <renderer>Magento_Adminhtml_Block_System_Store_Grid_Render_Store</renderer>
                        </arguments>
                    </block>
                </block>
            </block>
        </reference>
    </adminhtml_system_store_grid_block>
</layout>
