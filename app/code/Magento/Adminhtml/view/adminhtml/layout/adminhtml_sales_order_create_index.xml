<layout version="0.1.0">
    <adminhtml_sales_order_create_index>
        <update handle="adminhtml_sales_order_create_customer_block"/>
        <reference name="page-title">
            <action method="setTitleId" translate="id">
                <id>order-header</id>
            </action>
            <!--action method="setTitlePrefix" translate="value"><value>Prefix</value></action-->
            <!--action method="setTitleSuffix" translate="value"><value>suffix</value></action-->
        </reference>
        <reference name="left">
            <action method="setIsCollapsed">
                <value>true</value>
            </action>
        </reference>
        <reference name="head">
            <action method="addJs">
                <file>Magento_Adminhtml::sales/order/create/scripts.js</file>
            </action>
            <action method="addJs">
                <file>Magento_Adminhtml::sales/order/create/giftmessage.js</file>
            </action>
            <action method="addJs">
                <file>Magento_Adminhtml::catalog/product/composite/configure.js</file>
            </action>
            <action method="addJs">
                <file>varien/configurable.js</file>
            </action>
            <action method="addJs">
                <file>Magento_Adminhtml::sales/order/giftoptions_tooltip.js</file>
            </action>
            <block type="Magento_Adminhtml_Block_Template" name="optional_zip_countries" as="optional_zip_countries" template="Magento_Directory::js/optional_zip_countries.phtml"/>
            <action method="addCss">
                <file>Magento_Core::prototype/magento.css</file>
            </action>
        </reference>
        <reference name="js">
            <block type="Magento_Adminhtml_Block_Template" template="sales/order/create/js.phtml" name="create"/>
        </reference>
        <reference name="root">
            <block type="Magento_Adminhtml_Block_Sales_Order_Create" name="content">
                <block type="Magento_Adminhtml_Block_Sales_Order_Create_Form" template="sales/order/create/form.phtml" name="order_create_form" as="form">
                    <block type="Magento_Adminhtml_Block_Sales_Order_Create_Messages" name="message"/>
                    <block type="Magento_Adminhtml_Block_Sales_Order_Create_Customer" template="sales/order/create/abstract.phtml" name='customer.grid.container'/>
                    <block type="Magento_Adminhtml_Block_Sales_Order_Create_Store" template="sales/order/create/abstract.phtml" name="store">
                        <block type="Magento_Adminhtml_Block_Sales_Order_Create_Store_Select" template="sales/order/create/store/select.phtml" name="select"/>
                    </block>
                    <block type="Magento_Adminhtml_Block_Sales_Order_Create_Data" template="sales/order/create/data.phtml" name="data">
                        <block type="Magento_Adminhtml_Block_Sales_Order_Create_Sidebar" template="sales/order/create/sidebar.phtml" name="sidebar">
                            <block type="Magento_Adminhtml_Block_Sales_Order_Create_Sidebar_Cart" template="sales/order/create/sidebar/items.phtml" name="cart"/>
                            <block type="Magento_Adminhtml_Block_Sales_Order_Create_Sidebar_Wishlist" template="sales/order/create/sidebar/items.phtml" name="wishlist"/>
                            <block type="Magento_Adminhtml_Block_Sales_Order_Create_Sidebar_Reorder" template="sales/order/create/sidebar/items.phtml" name="reorder"/>
                            <block type="Magento_Adminhtml_Block_Sales_Order_Create_Sidebar_Viewed" template="sales/order/create/sidebar/items.phtml" name="viewed"/>
                            <block type="Magento_Adminhtml_Block_Sales_Order_Create_Sidebar_Compared" template="sales/order/create/sidebar/items.phtml" name="compared"/>
                            <block type="Magento_Adminhtml_Block_Sales_Order_Create_Sidebar_Pcompared" template="sales/order/create/sidebar/items.phtml" name="pcompared"/>
                            <block type="Magento_Adminhtml_Block_Sales_Order_Create_Sidebar_Pviewed" template="sales/order/create/sidebar/items.phtml" name="pviewed"/>
                        </block>
                        <block type="Magento_Adminhtml_Block_Sales_Order_Create_Form_Account" template="sales/order/create/form/account.phtml" name="form_account"/>
                        <block type="Magento_Adminhtml_Block_Sales_Order_Create_Shipping_Address" template="sales/order/create/form/address.phtml" name="shipping_address"/>
                        <block type="Magento_Adminhtml_Block_Sales_Order_Create_Billing_Address" template="sales/order/create/form/address.phtml" name="billing_address"/>
                        <block type="Magento_Adminhtml_Block_Sales_Order_Create_Shipping_Method" template="sales/order/create/abstract.phtml" name="shipping_method">
                            <block type="Magento_Adminhtml_Block_Sales_Order_Create_Shipping_Method_Form" template="sales/order/create/shipping/method/form.phtml" name="order_create_shipping_form" as="form"/>
                        </block>
                        <block type="Magento_Adminhtml_Block_Sales_Order_Create_Billing_Method" template="sales/order/create/abstract.phtml" name="billing_method">
                            <block type="Magento_Adminhtml_Block_Sales_Order_Create_Billing_Method_Form" template="sales/order/create/billing/method/form.phtml" name="order_create_billing_form" as="form"/>
                        </block>
                        <block type="Magento_Adminhtml_Block_Sales_Order_Create_Newsletter" template="sales/order/create/abstract.phtml" name="newsletter">
                            <block type="Magento_Adminhtml_Block_Sales_Order_Create_Newsletter_Form" template="sales/order/create/newsletter/form.phtml" name="order_create_newsletter_form" as="form"/>
                        </block>
                        <block type="Magento_Adminhtml_Block_Sales_Order_Create_Search" template="sales/order/create/abstract.phtml" name="search">
                            <block type="Magento_Adminhtml_Block_Sales_Order_Create_Search_Grid" name="search_grid" as="grid"/>
                        </block>
                        <block type="Magento_Adminhtml_Block_Sales_Order_Create_Items" template="sales/order/create/items.phtml" name="items">
                            <block type="Magento_Adminhtml_Block_Sales_Order_Create_Items_Grid" template="sales/order/create/items/grid.phtml" name="items_grid">
                                <block type="Magento_Adminhtml_Block_Sales_Order_Create_Coupons" template="sales/order/create/coupons/form.phtml" name="coupons">
                                    <block type="Magento_Adminhtml_Block_Sales_Order_Create_Coupons_Form" template="sales/order/create/coupons/form.phtml" name="order_create_coupons_form" as="form"/>
                                </block>
                            </block>
                        </block>
                        <block type="Magento_Adminhtml_Block_Sales_Order_Create_Comment" template="sales/order/create/comment.phtml" name="comment"/>
                        <block type="Magento_Adminhtml_Block_Sales_Order_Create_Totals" template="sales/order/create/totals.phtml" name="totals"/>
                        <block type="Magento_Adminhtml_Block_Template" name="gift_options" template="sales/order/giftoptions.phtml">
                            <block type="Magento_Adminhtml_Block_Sales_Order_Create_Giftmessage" template="sales/order/create/giftmessage.phtml" name="giftmessage"/>
                        </block>
                        <block type="Magento_Core_Block_Text_List" name="order_item_extra_info"/>
                    </block>
                </block>
            </block>
        </reference>
        <reference name="before_body_end">
            <block type="Magento_Adminhtml_Block_Catalog_Product_Composite_Configure" template="catalog/product/composite/configure.phtml"/>
        </reference>
    </adminhtml_sales_order_create_index>
</layout>
