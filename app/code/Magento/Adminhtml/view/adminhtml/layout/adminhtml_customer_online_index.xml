<layout version="0.1.0">
    <adminhtml_customer_online_index>
        <reference name="content">
            <block type="Magento_Adminhtml_Block_Customer_Online" name="adminhtml.block.customer.online.grid.container">
                <block type="Mage_Backend_Block_Widget_Grid" name="adminhtml.block.customer.online.grid" as="grid">
                    <arguments>
                        <id>onlineGrid</id>
                        <dataSource type="object">Magento_Log_Model_Resource_Visitor_Online_Grid_Collection</dataSource>
                        <default_sort>last_activity</default_sort>
                        <default_dir>DESC</default_dir>
                        <save_parameters_in_session>1</save_parameters_in_session>
                    </arguments>
                    <block type="Mage_Backend_Block_Widget_Grid_ColumnSet" as="grid.columnSet" name="adminhtml.customer.online.grid.columnSet">
                        <arguments>
                            <rowUrl>
                                <generatorClass>Magento_Log_Model_Resource_Visitor_Online_Grid_Row_UrlGenerator</generatorClass>
                                <path>*/customer/edit</path>
                                <extraParamsTemplate>
                                    <id>getCustomerId</id>
                                </extraParamsTemplate>
                            </rowUrl>
                        </arguments>
                        <block type="Mage_Backend_Block_Widget_Grid_Column" as="customer_id">
                            <arguments>
                                <header translate="true" module="Magento_Customer">ID</header>
                                <width>50px</width>
                                <align>right</align>
                                <type>number</type>
                                <default translate="true">n/a</default>
                                <index>customer_id</index>
                            </arguments>
                        </block>
                        <block type="Mage_Backend_Block_Widget_Grid_Column" as="firstname">
                            <arguments>
                                <header translate="true" module="Magento_Customer">First Name</header>
                                <default>Guest</default>
                                <index>customer_firstname</index>
                            </arguments>
                        </block>
                        <block type="Mage_Backend_Block_Widget_Grid_Column" as="lastname">
                            <arguments>
                                <header translate="true" module="Magento_Customer">Last Name</header>
                                <default>n/a</default>
                                <index>customer_lastname</index>
                            </arguments>
                        </block>
                        <block type="Mage_Backend_Block_Widget_Grid_Column" as="email">
                            <arguments>
                                <header translate="true" module="Magento_Customer">Email</header>
                                <default>n/a</default>
                                <index>customer_email</index>
                            </arguments>
                        </block>
                        <block type="Mage_Backend_Block_Widget_Grid_Column" as="ip_address">
                            <arguments>
                                <header translate="true" module="Magento_Customer">IP Address</header>
                                <default>n/a</default>
                                <filter>0</filter>
                                <renderer>Magento_Adminhtml_Block_Customer_Online_Grid_Renderer_Ip</renderer>
                                <index>remote_addr</index>
                            </arguments>
                        </block>
                        <block type="Mage_Backend_Block_Widget_Grid_Column" as="session_start_time">
                            <arguments>
                                <header translate="true" module="Magento_Customer">Session Start Time</header>
                                <default>n/a</default>
                                <align>left</align>
                                <width>200px</width>
                                <type>datetime</type>
                                <index>first_visit_at</index>
                            </arguments>
                        </block>
                        <block type="Mage_Backend_Block_Widget_Grid_Column" as="last_activity">
                            <arguments>
                                <header translate="true" module="Magento_Customer">Last Activity</header>
                                <default>n/a</default>
                                <align>left</align>
                                <width>200px</width>
                                <type>datetime</type>
                                <index>last_visit_at</index>
                            </arguments>
                        </block>
                        <block type="Mage_Backend_Block_Widget_Grid_Column" as="type">
                            <arguments>
                                <header translate="true" module="Magento_Customer">Type</header>
                                <type>options</type>
                                <options type="options">Magento_Customer_Model_Resource_Customer_CustomersTypeOptions</options>
                                <index>visitor_type</index>
                            </arguments>
                        </block>
                        <block type="Mage_Backend_Block_Widget_Grid_Column" as="last_url">
                            <arguments>
                                <header translate="true" module="Magento_Customer">Last URL</header>
                                <default>n/a</default>
                                <linelength>60</linelength>
                                <type>wrapline</type>
                                <index>last_url</index>
                                <renderer>Magento_Adminhtml_Block_Customer_Online_Grid_Renderer_Url</renderer>
                            </arguments>
                        </block>
                    </block>
                </block>
            </block>
        </reference>
    </adminhtml_customer_online_index>
</layout>
