<layout version="0.1.0">
    <adminhtml_cms_block_index>
        <reference name="content">
            <block type="Magento_Adminhtml_Block_Cms_Block" name="cms_block">
                <block type="Magento_Backend_Block_Widget_Grid" name="adminhtml.cms.block.grid" as="grid">
                    <arguments>
                        <id>cmsBlockGrid</id>
                        <dataSource type="object">Magento_Cms_Model_Resource_Block_Grid_Collection</dataSource>
                        <default_sort>block_identifier</default_sort>
                        <default_dir>ASC</default_dir>
                    </arguments>
                    <block type="Magento_Backend_Block_Widget_Grid_ColumnSet" name="adminhtml.cms.block.grid.columnSet" as="grid.columnSet">
                        <arguments>
                            <id>cmsBlockGrid</id>
                            <rowUrl>
                                <path>*/*/edit</path>
                                <extraParamsTemplate>
                                    <block_id>getId</block_id>
                                </extraParamsTemplate>
                            </rowUrl>
                        </arguments>
                        <block type="Magento_Backend_Block_Widget_Grid_Column" as="title">
                            <arguments>
                                <header  translate="true">Title</header>
                                <align>left</align>
                                <index>title</index>
                            </arguments>
                        </block>
                        <block type="Magento_Backend_Block_Widget_Grid_Column" as="identifier">
                            <arguments>
                                <header  translate="true">Identifier</header>
                                <align>left</align>
                                <index>identifier</index>
                            </arguments>
                        </block>
                        <block type="Magento_Backend_Block_Widget_Grid_Column_Multistore" as="store_id">
                            <arguments>
                                <header  translate="true">Store View</header>
                                <index>store_id</index>
                                <type>store</type>
                                <store_all>1</store_all>
                                <store_view>1</store_view>
                                <sortable>0</sortable>
                            </arguments>
                        </block>
                        <block type="Magento_Backend_Block_Widget_Grid_Column" as="is_active">
                            <arguments>
                                <header  translate="true">Status</header>
                                <index>is_active</index>
                                <type>options</type>
                                <options>
                                    <disable>
                                        <value>0</value>
                                        <label translate="true">Disabled</label>
                                    </disable>
                                    <enable>
                                        <value>1</value>
                                        <label translate="true">Enabled</label>
                                    </enable>
                                </options>
                            </arguments>
                        </block>
                        <block type="Magento_Backend_Block_Widget_Grid_Column" as="creation_time">
                            <arguments>
                                <header  translate="true">Created</header>
                                <type>datetime</type>
                                <index>creation_time</index>
                            </arguments>
                        </block>
                        <block type="Magento_Backend_Block_Widget_Grid_Column" as="update_time">
                            <arguments>
                                <header  translate="true">Modified</header>
                                <type>datetime</type>
                                <index>update_time</index>
                            </arguments>
                        </block>
                    </block>
                </block>
            </block>
        </reference>
    </adminhtml_cms_block_index>
</layout>
