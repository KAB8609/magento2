                    <action method="initSerializerBlock">
                        <argument name="grid_block_name" xsi:type="string">catalog.product.edit.tab.related</argument>
                        <argument name="data_callback" xsi:type="string">getSelectedRelatedProducts</argument>
                        <argument name="hidden_input_name" xsi:type="string">links[related]</argument>
