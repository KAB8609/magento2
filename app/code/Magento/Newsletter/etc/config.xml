<config>
    <global>
        <resources>
            <newsletter_setup>
                <setup>
                    <module>Magento_Newsletter</module>
                </setup>
            </newsletter_setup>
        </resources>
        <template>
            <email>
                <newsletter_subscription_confirm_email_template translate="label" module="Magento_Newsletter">
                    <label>Subscription Confirmation</label>
                    <file>email/subscr_confirm.html</file>
                    <type>html</type>
                </newsletter_subscription_confirm_email_template>
                <newsletter_subscription_success_email_template translate="label" module="Magento_Newsletter">
                    <label>Subscription Success</label>
                    <file>email/subscr_success.html</file>
                    <type>html</type>
                </newsletter_subscription_success_email_template>
                <newsletter_subscription_un_email_template translate="label" module="Magento_Newsletter">
                    <label>Unsubscription Success</label>
                    <file>email/unsub_success.html</file>
                    <type>html</type>
                </newsletter_subscription_un_email_template>
            </email>
        </template>
        <newsletter>
            <tempate_filter>Magento_Newsletter_Model_Template_Filter</tempate_filter>
        </newsletter>
    </global>
    <adminhtml>
        <events>
            <customer_save_after>
                <observers>
                    <newsletter_subscribe_observer>
                        <class>Magento_Newsletter_Model_Observer</class>
                        <method>subscribeCustomer</method>
                    </newsletter_subscribe_observer>
                </observers>
            </customer_save_after>
            <customer_delete_after>
                <observers>
                    <newsletter_subscribe_observer>
                        <class>Magento_Newsletter_Model_Observer</class>
                        <method>customerDeleted</method>
                    </newsletter_subscribe_observer>
                </observers>
            </customer_delete_after>
        </events>
        <translate>
            <modules>
                <Magento_Newsletter>
                    <files>
                        <default>Magento_Newsletter.csv</default>
                    </files>
                </Magento_Newsletter>
            </modules>
        </translate>
    </adminhtml>
    <frontend>
        <events>
            <customer_save_after>
                <observers>
                    <newsletter_subscribe_observer>
                        <class>Magento_Newsletter_Model_Observer</class>
                        <method>subscribeCustomer</method>
                    </newsletter_subscribe_observer>
                </observers>
            </customer_save_after>
            <customer_delete_after>
                <observers>
                    <newsletter_subscribe_observer>
                        <class>Magento_Newsletter_Model_Observer</class>
                        <method>customerDeleted</method>
                    </newsletter_subscribe_observer>
                </observers>
            </customer_delete_after>
        </events>
        <routers>
            <newsletter>
                <use>standard</use>
                <args>
                    <module>Magento_Newsletter</module>
                    <frontName>newsletter</frontName>
                </args>
            </newsletter>
        </routers>
        <translate>
            <modules>
                <Magento_Newsletter>
                    <files>
                        <default>Magento_Newsletter.csv</default>
                    </files>
                </Magento_Newsletter>
            </modules>
        </translate>
        <secure_url>
            <newsletter_manage>/newsletter/manage/</newsletter_manage>
        </secure_url>
    </frontend>
    <default>
        <newsletter>
            <subscription>
                <allow_guest_subscribe>1</allow_guest_subscribe>
                <confirm>0</confirm>
                <confirm_email_identity>support</confirm_email_identity>
                <confirm_email_template>newsletter_subscription_confirm_email_template</confirm_email_template>
                <success_email_identity>general</success_email_identity>
                <success_email_template>newsletter_subscription_success_email_template</success_email_template>
                <un_email_identity>support</un_email_identity>
                <un_email_template>newsletter_subscription_un_email_template</un_email_template>
            </subscription>
            <sending>
                <set_return_path>0</set_return_path>
            </sending>
        </newsletter>
    </default>
    <crontab>
        <jobs>
            <newsletter_send_all>
                <schedule>
                    <cron_expr>*/5 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>Magento_Newsletter_Model_Observer::scheduledSend</model>
                </run>
            </newsletter_send_all>
        </jobs>
    </crontab>
</config>
