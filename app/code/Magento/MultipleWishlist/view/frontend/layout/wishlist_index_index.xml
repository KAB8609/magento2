<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="wishlist_index_index">
        <reference name="head">
            <action method="setTitle" translate="title" ifconfig="wishlist/general/multiple_enabled">
                <argument name="title" xsi:type="string">My Wish Lists</argument>
            </action>
        </reference>
        <reference name="customer.wishlist">
            <action method="setTitle" translate="title" ifconfig="wishlist/general/multiple_enabled">
                <argument name="title" xsi:type="string">My Wish Lists</argument>
            </action>
            <block class="Magento_MultipleWishlist_Block_Customer_Wishlist_Management" name="customer.wishlist.management" as="top" template="view/management.phtml">
            </block>
            <reference name="customer.wishlist.items">
                <block class="Magento_MultipleWishlist_Block_Customer_Wishlist_Item_Column_Selector" name="customer.wishlist.item.selector" before="-" template="item/column/selector.phtml"/>
                <reference name="customer.wishlist.item.info">
                    <block class="Magento_MultipleWishlist_Block_Customer_Wishlist_Item_Column_Management" name="customer.wishlist.item.mananagement" before="-" template="item/column/management.phtml"/>
                </reference>
            </reference>
            <reference name="customer.wishlist.buttons">
                <block class="Magento_MultipleWishlist_Block_Customer_Wishlist_Button_Delete" name="customer.wishlist.button.delete" template="button/delete.phtml"/>
            </reference>
        </reference>
    </handle>
</layout>
