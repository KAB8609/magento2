<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="adminhtml_customer_wishlist">
        <reference name="customer.wishlist.edit.tab">
            <arguments>
                <dataSource>
                    <updater>Magento_MultipleWishlist_Model_Resource_Item_Collection_Updater</updater>
                </dataSource>
            </arguments>
            <reference name="customer.wishlist.edit.tab.columnSet">
                <block class="Magento_Backend_Block_Widget_Grid_Column" as="wishlist_name" before="-">
                    <arguments>
                        <header translate="true">Wishlist</header>
                        <index>wishlist_name</index>
                    </arguments>
                </block>
            </reference>
        </reference>
    </handle>
</layout>
