<config>
    <api>
        <resources>
            <directory_country translate="title" module="Magento_Directory">
                <model>Magento\Directory\Model\Country\Api</model>
                <title>Country API</title>
                <acl>directory/country</acl>
                <methods>
                    <list translate="title" module="Magento_Directory">
                        <title>List of countries</title>
                        <method>items</method>
                    </list>
                </methods>
            </directory_country>
            <directory_region translate="title" module="Magento_Directory">
                <model>Magento\Directory\Model\Region\Api</model>
                <title>Region API</title>
                <acl>directory/region</acl>
                <methods>
                    <list translate="title" module="Magento_Directory">
                        <title>List of regions in specified country</title>
                        <method>items</method>
                    </list>
                </methods>
                <faults module="Magento_Directory">
                    <country_not_exists>
                        <code>101</code>
                        <message>Country does not exist.</message>
                    </country_not_exists>
                </faults>
            </directory_region>
        </resources>
        <resources_alias>
            <country>directory_country</country>
            <region>directory_region</region>
        </resources_alias>
        <v2>
            <resources_function_prefix>
                <country>directoryCountry</country>
                <region>directoryRegion</region>
            </resources_function_prefix>
        </v2>
        <acl>
            <resources>
                <directory translate="title" module="Magento_Directory">
                    <title>Directory</title>
                    <sort_order>5</sort_order>
                    <country translate="title" module="Magento_Directory">
                        <title>Country</title>
                    </country>
                    <region translate="title" module="Magento_Directory">
                        <title>Region</title>
                    </region>
                </directory>
            </resources>
        </acl>
    </api>
</config>
