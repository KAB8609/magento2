<config>
    <global>
        <resources>
            <catalog_setup>
                <setup>
                    <module>Magento_Catalog</module>
                    <class>Magento\Catalog\Model\Resource\Setup</class>
                </setup>
            </catalog_setup>
        </resources>
        <index>
            <indexer>
                <catalog_product_attribute>
                    <model>Magento\Catalog\Model\Product\Indexer\Eav</model>
                </catalog_product_attribute>
                <catalog_product_price>
                    <model>Magento\Catalog\Model\Product\Indexer\Price</model>
                </catalog_product_price>
                <catalog_url>
                    <model>Magento\Catalog\Model\Indexer\Url</model>
                </catalog_url>
                <catalog_product_flat>
                    <model>Magento\Catalog\Model\Product\Indexer\Flat</model>
                </catalog_product_flat>
                <catalog_category_flat>
                    <model>Magento\Catalog\Model\Category\Indexer\Flat</model>
                </catalog_category_flat>
                <catalog_category_product>
                    <model>Magento\Catalog\Model\Category\Indexer\Product</model>
                </catalog_category_product>
            </indexer>
        </index>
        <catalog>
            <product>
                <type>
                    <simple translate="label">
                        <label>Simple Product</label>
                        <model>Magento\Catalog\Model\Product\Type\Simple</model>
                        <composite>0</composite>
                        <index_priority>10</index_priority>
                    </simple>
                    <grouped translate="label">
                        <label>Grouped Product</label>
                        <model>Magento\Catalog\Model\Product\Type\Grouped</model>
                        <price_model>Magento\Catalog\Model\Product\Type\Grouped\Price</price_model>
                        <composite>1</composite>
                        <allow_product_types>
                            <simple />
                            <virtual />
                        </allow_product_types>
                        <index_priority>50</index_priority>
                        <price_indexer>\Magento\Catalog\Model\Resource\Product\Indexer\Price\Grouped</price_indexer>
                    </grouped>
                    <configurable translate="label">
                        <label>Configurable Product</label>
                        <model>Magento\Catalog\Model\Product\Type\Configurable</model>
                        <price_model>Magento\Catalog\Model\Product\Type\Configurable\Price</price_model>
                        <composite>1</composite>
                        <allow_product_types>
                            <simple />
                            <virtual />
                        </allow_product_types>
                        <index_priority>30</index_priority>
                        <price_indexer>\Magento\Catalog\Model\Resource\Product\Indexer\Price\Configurable</price_indexer>
                    </configurable>
                    <virtual translate="label">
                        <label>Virtual Product</label>
                        <model>Magento\Catalog\Model\Product\Type\Virtual</model>
                        <composite>0</composite>
                        <index_priority>20</index_priority>
                    </virtual>
                </type>
                <design>
                    <options_container>
                        <option1 translate="label">
                            <value>container1</value>
                            <label>Product Info Column</label>
                        </option1>
                        <option2 translate="label">
                            <value>container2</value>
                            <label>Block after Info Column</label>
                        </option2>
                    </options_container>
                </design>
                <options>
                    <custom>
                        <groups>
                            <text translate="label">
                                <label>Text</label>
                                <render>\Magento\Adminhtml\Block\Catalog\Product\Edit\Tab\Options\Type\Text</render>
                                <types>
                                    <field translate="label">
                                        <label>Field</label>
                                    </field>
                                    <area translate="label">
                                        <label>Area</label>
                                    </area>
                                </types>
                            </text>
                            <file translate="label">
                                <label>File</label>
                                <render>\Magento\Adminhtml\Block\Catalog\Product\Edit\Tab\Options\Type\File</render>
                                <types>
                                    <file translate="label">
                                        <label>File</label>
                                    </file>
                                </types>
                            </file>
                            <select translate="label">
                                <label>Select</label>
                                <render>\Magento\Adminhtml\Block\Catalog\Product\Edit\Tab\Options\Type\Select</render>
                                <types>
                                    <drop_down translate="label">
                                        <label>Drop-down</label>
                                    </drop_down>
                                    <radio translate="label">
                                        <label>Radio Buttons</label>
                                    </radio>
                                    <checkbox translate="label">
                                        <label>Checkbox</label>
                                    </checkbox>
                                    <multiple translate="label">
                                        <label>Multiple Select</label>
                                    </multiple>
                                </types>
                            </select>
                            <date translate="label">
                                <label>Date</label>
                                <render>\Magento\Adminhtml\Block\Catalog\Product\Edit\Tab\Options\Type\Date</render>
                                <types>
                                    <date translate="label">
                                        <label>Date</label>
                                    </date>
                                    <date_time translate="label">
                                        <label>Date &amp; Time</label>
                                    </date_time>
                                    <time translate="label">
                                        <label>Time</label>
                                    </time>
                                </types>
                            </date>
                        </groups>
                    </custom>
                </options>
                <flat>
                    <max_index_count>64</max_index_count>
                    <attribute_nodes>
                        <product_collection>frontend/product/collection/attributes</product_collection>
                    </attribute_nodes>
                    <add_filterable_attributes>0</add_filterable_attributes>
                    <add_child_data>0</add_child_data>
                </flat>
                <attributes>
                    <unassignable>
                        <image />
                        <name />
                        <description />
                        <short_description />
                        <sku />
                        <price />
                        <status />
                        <visibility />
                        <weight />
                        <category_ids />
                        <quantity_and_stock_status />
                        <available_sort_by />
                        <default_sort_by />
                        <filter_price_range />
                        <image />
                        <category_ids />
                        <media_gallery_content />
                        <group_price />
                        <tier_price />
                        <recurring_profileinit_may_fail />
                        <gift_message_available />
                        <inventory_manage_stock />
                    </unassignable>
                    <used_in_autogeneration>
                        <name />
                        <description />
                        <sku />
                    </used_in_autogeneration>
                    <weight>
                        <type_switcher translate="label">
                            <label>Virtual</label>
                        </type_switcher>
                    </weight>
                </attributes>
            </product>
            <content>
                <tempate_filter>\Magento\Catalog\Model\Template\Filter</tempate_filter>
            </content>
        </catalog>
        <eav_attributes>
            <catalog_product>
                <sku>
                    <code>sku</code>
                    <locked_fields>
                        <is_global />
                        <is_unique />
                    </locked_fields>
                </sku>
                <url_key>
                    <code>url_key</code>
                    <locked_fields>
                        <is_unique />
                    </locked_fields>
                </url_key>
                <status>
                    <code>status</code>
                    <locked_fields>
                        <is_configurable />
                        <is_filterable />
                        <is_filterable_in_search />
                    </locked_fields>
                </status>
                <visibility>
                    <code>visibility</code>
                    <locked_fields>
                        <is_configurable />
                        <is_filterable />
                        <is_filterable_in_search />
                    </locked_fields>
                </visibility>
            </catalog_product>
        </eav_attributes>
        <session>
            <catalog>
                <product>
                    <message_models>
                        <catalog>\Magento\Catalog\Model\Session</catalog>
                        <checkout>\Magento\Checkout\Model\Session</checkout>
                    </message_models>
                </product>
            </catalog>
        </session>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <Magento_Catalog>
                    <files>
                        <default>Magento_Catalog.csv</default>
                    </files>
                </Magento_Catalog>
            </modules>
        </translate>
    </adminhtml>
    <frontend>
        <default>
            <router>catalog</router>
        </default>
        <translate>
            <modules>
                <Magento_Catalog>
                    <files>
                        <default>Magento_Catalog.csv</default>
                    </files>
                </Magento_Catalog>
            </modules>
        </translate>
        <catalog>
            <per_page_values>
                <grid>9,15,30</grid>
                <list>5,10,15,20,25</list>
            </per_page_values>
        </catalog>
        <product>
            <collection>
                <attributes>
                    <name />
                    <url_key />
                    <price />
                    <special_price />
                    <special_from_date />
                    <special_to_date />
                    <short_description />
                    <thumbnail />
                    <small_image />
                    <image_label />
                    <thumbnail_label />
                    <small_image_label />
                    <tax_class_id />
                    <status />
                    <news_from_date />
                    <news_to_date />
                    <created_at />
                    <updated_at />
                </attributes>
            </collection>
        </product>
        <category>
            <collection>
                <attributes>
                    <name />
                    <url_key />
                    <is_active />
                </attributes>
            </collection>
        </category>
    </frontend>
    <default>
        <catalog>
            <navigation>
                <max_depth>0</max_depth>
            </navigation>
            <fields_masks>
                <sku>{{name}}</sku>
                <meta_title>{{name}}</meta_title>
                <meta_keyword>{{name}}</meta_keyword>
                <meta_description>{{name}} {{description}}</meta_description>
            </fields_masks>
            <frontend>
                <list_mode>grid-list</list_mode>
                <grid_per_page_values>9,15,30</grid_per_page_values>
                <list_per_page_values>5,10,15,20,25</list_per_page_values>
                <grid_per_page>9</grid_per_page>
                <list_per_page>10</list_per_page>
                <flat_catalog_category>0</flat_catalog_category>
                <default_sort_by>position</default_sort_by>
                <parse_url_directives>1</parse_url_directives>
            </frontend>
            <product>
                <default_tax_group>2</default_tax_group>
            </product>
            <seo>
                <product_url_suffix>.html</product_url_suffix>
                <category_url_suffix>.html</category_url_suffix>
                <product_use_categories>0</product_use_categories>
                <save_rewrites_history>1</save_rewrites_history>
                <title_separator>-</title_separator>
                <category_canonical_tag>0</category_canonical_tag>
                <product_canonical_tag>0</product_canonical_tag>
            </seo>
            <custom_options>
                <date_fields_order>m,d,y</date_fields_order>
                <time_format>12h</time_format>
                <forbidden_extensions>php,exe</forbidden_extensions>
            </custom_options>
            <layered_navigation>
                <price_range_calculation>auto</price_range_calculation>
                <price_range_step>100</price_range_step>
                <price_range_max_intervals>10</price_range_max_intervals>
                <one_price_interval>0</one_price_interval>
                <interval_division_limit>9</interval_division_limit>
                <display_product_count>1</display_product_count>
            </layered_navigation>
        </catalog>
        <system>
            <media_storage_configuration>
                <allowed_resources>
                    <catalog_images_folder>catalog</catalog_images_folder>
                    <product_custom_options_fodler>custom_options</product_custom_options_fodler>
                </allowed_resources>
            </media_storage_configuration>
        </system>
        <sales>
            <msrp>
                <enabled>0</enabled>
                <apply_for_all>0</apply_for_all>
                <display_price_type>1</display_price_type>
                <explanation_message>Our price is lower than the manufacturer's "minimum advertised price." As a result, we cannot show you the price in catalog or the product page. &lt;br /&gt;&lt;br /&gt; You have no obligation to purchase the product once you know the price. You can simply remove the item from your cart.</explanation_message>
                <explanation_message_whats_this>Our price is lower than the manufacturer's "minimum advertised price." As a result, we cannot show you the price in catalog or the product page. &lt;br /&gt;&lt;br /&gt; You have no obligation to purchase the product once you know the price. You can simply remove the item from your cart.</explanation_message_whats_this>
            </msrp>
        </sales>
    </default>
    <crontab>
        <jobs>
            <catalog_product_index_price_reindex_all>
                <schedule>
                    <cron_expr>0 2 * * *</cron_expr>
                </schedule>
                <run>
                    <model>Magento\Catalog\Model\Observer::reindexProductPrices</model>
                </run>
            </catalog_product_index_price_reindex_all>
        </jobs>
    </crontab>
</config>
