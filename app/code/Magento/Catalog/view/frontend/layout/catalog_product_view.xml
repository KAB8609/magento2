<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" label="Catalog Product View (Any)" type="page" parent="default">
    <reference name="root">
        <action method="setTemplate">
            <argument name="template" xsi:type="string">2columns-right.phtml</argument>
        </action>
    </reference>
    <reference name="head">
        <action method="addCss">
            <argument name="file" xsi:type="string">Magento_Catalog::zoom.css</argument>
        </action>
    </reference>
    <update handle="page_calendar"/>
    <reference name="content">
        <block class="Magento_Catalog_Block_Product_View" name="product.info" template="product/view.phtml">
            <!--
            <action method="addReviewSummaryTemplate">
                <argument name="type" xsi:type="string">default</argument>
                <argument name="template" xsi:type="string">helper/summary.phtml</argument>
            </action>
            <action method="addReviewSummaryTemplate">
                <argument name="type" xsi:type="string">short</argument>
                <argument name="template" xsi:type="string">helper/summary_short.phtml</argument>
            </action>
            <action method="addReviewSummaryTemplate">
                <argument name="type" xsi:type="string">...</argument>
                <argument name="template" xsi:type="string">...</argument>
            </action>
            -->
            <block class="Magento_Catalog_Block_Product_View_Media" name="product.info.media" as="media" template="product/view/media.phtml"/>
            <container name="alert.urls" as="alert_urls" label="Alert Urls"/>
            <block class="Magento_Catalog_Block_Product_List_Upsell" name="product.info.upsell" as="upsell_products" template="product/list/upsell.phtml">
                <action method="setColumnCount">
                    <argument name="columns" xsi:type="string">4</argument>
                </action>
                <action method="setItemLimit">
                    <argument name="type" xsi:type="string">upsell</argument>
                    <argument name="limit" xsi:type="string">4</argument>
                </action>
            </block>
            <block class="Magento_Catalog_Block_Product_View_Additional" name="product.info.additional" as="product_additional_data"/>
            <block class="Magento_Catalog_Block_Product_View_Description" name="product.description" as="description" template="product/view/description.phtml">
                <action method="addToParentGroup">
                    <argument name="group" xsi:type="string">detailed_info</argument>
                </action>
                <action method="setTitle">
                    <argument translate="true" name="value" xsi:type="string">Details</argument>
                </action>
            </block>
            <block class="Magento_Catalog_Block_Product_View_Attributes" name="product.attributes" as="additional" template="product/view/attributes.phtml">
                <action method="addToParentGroup">
                    <argument name="group" xsi:type="string">detailed_info</argument>
                </action>
                <action method="setTitle">
                    <argument translate="true" name="value" xsi:type="string">Additional Information</argument>
                </action>
            </block>
            <block class="Magento_Catalog_Block_Product_View" name="product.info.addto" as="addto" template="product/view/addto.phtml"/>
            <block class="Magento_Catalog_Block_Product_View" name="product.info.addtocart" as="addtocart" template="product/view/addtocart.phtml"/>
            <container name="product.info.extrahint" as="extrahint" label="Product View Extra Hint"/>
            <block class="Magento_Core_Block_Template" name="product.info.container" as="options_container">
                <block class="Magento_Catalog_Block_Product_View" name="product.info.options.wrapper" as="product_options_wrapper" template="product/view/options/wrapper.phtml">
                    <block class="Magento_Catalog_Block_Product_View_Options" name="product.info.options" as="product_options" template="product/view/options.phtml">
                        <action method="addOptionRenderer">
                            <argument name="type" xsi:type="string">text</argument>
                            <argument name="block" xsi:type="string">Magento_Catalog_Block_Product_View_Options_Type_Text</argument>
                            <argument name="template" xsi:type="string">product/view/options/type/text.phtml</argument>
                        </action>
                        <action method="addOptionRenderer">
                            <argument name="type" xsi:type="string">file</argument>
                            <argument name="block" xsi:type="string">Magento_Catalog_Block_Product_View_Options_Type_File</argument>
                            <argument name="template" xsi:type="string">product/view/options/type/file.phtml</argument>
                        </action>
                        <action method="addOptionRenderer">
                            <argument name="type" xsi:type="string">select</argument>
                            <argument name="block" xsi:type="string">Magento_Catalog_Block_Product_View_Options_Type_Select</argument>
                            <argument name="template" xsi:type="string">product/view/options/type/select.phtml</argument>
                        </action>
                        <action method="addOptionRenderer">
                            <argument name="type" xsi:type="string">date</argument>
                            <argument name="block" xsi:type="string">Magento_Catalog_Block_Product_View_Options_Type_Date</argument>
                            <argument name="template" xsi:type="string">product/view/options/type/date.phtml</argument>
                        </action>
                    </block>
                    <block class="Magento_Core_Block_Html_Calendar" name="html_calendar" as="html_calendar" template="Magento_Page::js/calendar.phtml"/>
                </block>
                <block class="Magento_Catalog_Block_Product_View" name="product.info.options.wrapper.bottom" as="product_options_wrapper_bottom" template="product/view/options/wrapper/bottom.phtml">
                    <block class="Magento_Catalog_Block_Product_View" name="product.tierprices.additional" as="product.tierprices" template="product/view/tierprices.phtml"/>
                    <block class="Magento_Catalog_Block_Product_View" name="product.clone_prices" as="prices" template="product/view/price_clone.phtml"/>
                    <block class="Magento_Catalog_Block_Product_View" name="product.info.addtocart.additional" as="addtocart" template="product/view/addtocart.phtml"/>
                    <block class="Magento_Catalog_Block_Product_View" name="product.info.addto.additional" as="addto" template="product/view/addto.phtml"/>
                </block>
            </block>
        </block>
    </reference>
    <reference name="right">
        <block class="Magento_Catalog_Block_Product_List_Related" name="catalog.product.related" before="-" template="product/list/related.phtml"/>
    </reference>
    <update handle="MAP_popup"/>
    <update handle="MAP_price_msrp_item"/>
</layout>
