<config>
    <global>
        <resources>
            <invitation_setup>
                <setup>
                    <module>Magento_Invitation</module>
                </setup>
            </invitation_setup>
        </resources>
        <template>
            <email>
                <magento_invitation_email_template translate="label" module="Magento_Invitation">
                    <label>Customer Invitation</label>
                    <file>email/invitation.html</file>
                    <type>html</type>
                </magento_invitation_email_template>
            </email>
        </template>
    </global>
    <default>
        <magento_invitation>
            <email>
                <identity>general</identity>
                <template>magento_invitation_email_template</template>
            </email>
            <general>
                <enabled>1</enabled>
                <enabled_on_front>1</enabled_on_front>
                <registration_use_inviter_group>1</registration_use_inviter_group>
                <registration_required_invitation>0</registration_required_invitation>
                <max_invitation_amount_per_send>5</max_invitation_amount_per_send>
                <allow_customer_message>1</allow_customer_message>
            </general>
        </magento_invitation>
    </default>
</config>
