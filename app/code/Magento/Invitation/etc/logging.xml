<logging xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="../../../Magento/Logging/etc/logging.xsd">
    <group name="magento_invitation">
        <label translate="true">Customer Invitations</label>
        <expected_model class="Magento_Invitation_Model_Invitation" />
        <event controller_action="adminhtml_invitation_view" action_alias="view" />
        <event controller_action="adminhtml_invitation_save" action_alias="save" />
        <event controller_action="adminhtml_invitation_saveInvitation"
               action_alias="save" />
        <event controller_action="adminhtml_invitation_massCancel"
               action_alias="massUpdate" />
        <event controller_action="adminhtml_invitation_massResend"
               action_alias="massUpdate"
               post_dispatch="Magento_Invitation_Model_Observer::postDispatchInvitationMassUpdate" />
    </group>
</logging>
