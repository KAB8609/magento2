<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="adminhtml_report_invitation_order_grid">
        <update handle="adminhtml_report_grid"/>
        <reference name="adminhtml.report.grid">
            <arguments>
                <id>invitation_order_grid</id>
                <dataSource type="object">Magento_Invitation_Model_Resource_Report_Invitation_Order_Initial_Collection</dataSource>
            </arguments>
        </reference>
        <reference name="adminhtml.report.grid.export">
            <arguments>
                <exportTypes>
                    <csv>
                        <urlPath>*/*/exportOrderCsv</urlPath>
                    </csv>
                    <excel>
                        <urlPath>*/*/exportOrderExcel</urlPath>
                    </excel>
                </exportTypes>
            </arguments>
        </reference>
        <reference name="adminhtml.report.grid.columnSet">
            <block class="Magento_Backend_Block_Widget_Grid_Column" as="sent">
                <arguments>
                    <header translate="true">Invitations Sent</header>
                    <type>number</type>
                    <index>sent</index>
                    <id>sent</id>
                    <header_css_class>col-inv-sent</header_css_class>
                    <column_css_class>col-inv-sent</column_css_class>
                </arguments>
            </block>
            <block class="Magento_Backend_Block_Widget_Grid_Column" as="accepted">
                <arguments>
                    <header translate="true">Invitations Accepted</header>
                    <type>number</type>
                    <index>accepted</index>
                    <id>accepted</id>
                    <header_css_class>col-inv-acc</header_css_class>
                    <column_css_class>col-inv-acc</column_css_class>
                </arguments>
            </block>
            <block class="Magento_Backend_Block_Widget_Grid_Column" as="purchased">
                <arguments>
                    <header translate="true">Accepted and Purchased</header>
                    <type>number</type>
                    <index>purchased</index>
                    <id>purchased</id>
                    <header_css_class>col-acc</header_css_class>
                    <column_css_class>col-acc</column_css_class>
                </arguments>
            </block>
            <block class="Magento_Backend_Block_Widget_Grid_Column" as="purchased_rate">
                <arguments>
                    <header translate="true">Conversion Rate</header>
                    <renderer>Magento_Invitation_Block_Adminhtml_Grid_Column_Renderer_Percent</renderer>
                    <type>string</type>
                    <index>purchased_rate</index>
                    <id>purchased_rate</id>
                    <header_css_class>col-rate</header_css_class>
                    <column_css_class>col-rate</column_css_class>
                </arguments>
            </block>
        </reference>
    </handle>
</layout>
