<layout version="0.1.0">
    <adminhtml_report_invitation_customer_grid>
        <update handle="adminhtml_report_grid"/>
        <reference name="adminhtml.report.grid">
            <arguments>
                <id>report_invitation_customer</id>
                <dataSource type="object">Magento_Invitation_Model_Resource_Report_Invitation_Customer_Collection_Initial</dataSource>
            </arguments>
        </reference>
        <reference name="adminhtml.report.grid.export">
            <arguments>
                <exportTypes>
                    <csv>
                        <urlPath>*/*/exportCustomerCsv</urlPath>
                    </csv>
                    <excel>
                        <urlPath>*/*/exportCustomerExcel</urlPath>
                    </excel>
                </exportTypes>
            </arguments>
        </reference>
        <reference name="adminhtml.report.grid.columnSet">
            <block type="Magento_Backend_Block_Widget_Grid_Column" as="id">
                <arguments>
                    <header translate="true">ID</header>
                    <type>number</type>
                    <index>entity_id</index>
                    <id>id</id>
                    <header_css_class>col-id</header_css_class>
                    <column_css_class>col-id</column_css_class>
                </arguments>
            </block>
            <block type="Magento_Backend_Block_Widget_Grid_Column" as="name">
                <arguments>
                    <header translate="true">Name</header>
                    <type>text</type>
                    <index>name</index>
                    <id>name</id>
                    <header_css_class>col-name</header_css_class>
                    <column_css_class>col-name</column_css_class>
                </arguments>
            </block>
            <block type="Magento_Backend_Block_Widget_Grid_Column" as="email">
                <arguments>
                    <header translate="true">Email</header>
                    <index>email</index>
                    <id>email</id>
                    <header_css_class>col-email</header_css_class>
                    <column_css_class>col-email</column_css_class>
                </arguments>
            </block>
            <block type="Magento_Backend_Block_Widget_Grid_Column" as="group">
                <arguments>
                    <header translate="true">Group</header>
                    <index>group_name</index>
                    <id>group</id>
                    <header_css_class>col-group</header_css_class>
                    <column_css_class>col-group</column_css_class>
                </arguments>
            </block>
            <block type="Magento_Backend_Block_Widget_Grid_Column" as="sent">
                <arguments>
                    <header translate="true">Invitations Sent</header>
                    <index>sent</index>
                    <type>number</type>
                    <id>sent</id>
                    <header_css_class>col-inv-sent</header_css_class>
                    <column_css_class>col-inv-sent</column_css_class>
                </arguments>
            </block>
            <block type="Magento_Backend_Block_Widget_Grid_Column" as="accepted">
                <arguments>
                    <header translate="true">Invitations Accepted</header>
                    <index>accepted</index>
                    <type>number</type>
                    <id>accepted</id>
                    <header_css_class>col-inv-acc</header_css_class>
                    <column_css_class>col-inv-acc</column_css_class>
                </arguments>
            </block>
        </reference>
    </adminhtml_report_invitation_customer_grid>
</layout>
