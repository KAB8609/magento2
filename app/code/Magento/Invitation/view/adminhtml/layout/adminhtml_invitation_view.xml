<layout version="0.1.0">
    <adminhtml_invitation_view>
        <reference name="content">
            <block name="invitation_view_page" type="Magento_Invitation_Block_Adminhtml_Invitation_View" template="view.phtml">
                
            </block>
        </reference>
        <reference name="left">
            <block name="invitation_view_tabs" as="tabs" type="Magento_Invitation_Block_Adminhtml_Invitation_View_Tabs">
                <action method="addTab">
                    <tab>general</tab>
                    <content>Magento_Invitation_Block_Adminhtml_Invitation_View_Tab_General</content>
                </action>
                <action method="addTab">
                    <tab>history</tab>
                    <content>Magento_Invitation_Block_Adminhtml_Invitation_View_Tab_History</content>
                </action>
                <action method="setDestElementId">
                    <id>invitation-elements</id>
                </action>
            </block>
        </reference>
    </adminhtml_invitation_view>
</layout>
