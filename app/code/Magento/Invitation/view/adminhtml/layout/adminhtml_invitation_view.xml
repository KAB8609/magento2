<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="adminhtml_invitation_view">
        <reference name="content">
            <block class="Magento_Invitation_Block_Adminhtml_Invitation_View" name="invitation_view_page" template="view.phtml">
                
            </block>
        </reference>
        <reference name="left">
            <block class="Magento_Invitation_Block_Adminhtml_Invitation_View_Tabs" name="invitation_view_tabs" as="tabs">
                <action method="addTab">
                    <tab>general</tab>
                    <content>Magento_Invitation_Block_Adminhtml_Invitation_View_Tab_General</content>
                </action>
                <action method="addTab">
                    <tab>history</tab>
                    <content>Magento_Invitation_Block_Adminhtml_Invitation_View_Tab_History</content>
                </action>
                <action method="setDestElementId">
                    <id>invitation-elements</id>
                </action>
            </block>
        </reference>
    </handle>
</layout>
