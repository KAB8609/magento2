<layout version="0.1.0">
    <magento_invitation_customer_account_create translate="label" type="page" parent="magento_invitation_index_send">
        <label>Customer Account Registration by Invitation Form</label>
        <update handle="customer_account_create"/>
        <reference name="content">
            <block type="Magento_Invitation_Block_Customer_Form_Register" name="customer_form_register_invitation" template="Magento_Customer::form/register.phtml"/>
            <move element="customer.form.register.fields.before" destination="customer_form_register_invitation" as="form_fields_before"/>
            <move element="customer_form_user_attributes" destination="customer_form_register_invitation"/>
            <move element="customer_form_address_user_attributes" destination="customer_form_register_invitation"/>
            <remove name="customer_form_register"/>
        </reference>
    </magento_invitation_customer_account_create>
</layout>
