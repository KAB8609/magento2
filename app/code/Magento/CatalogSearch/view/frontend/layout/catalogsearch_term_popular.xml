<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="catalogsearch_term_popular" translate="label" type="page" parent="default">
        <label>Popular Search Terms</label>
        <reference name="head">
            <action method="setTitle" translate="title">
                <title>Search Terms</title>
            </action>
        </reference>
        <reference name="root">
            <action method="setTemplate">
                <template>1column.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <block class="Magento_CatalogSearch_Block_Term" name="seo.searchterm" template="term.phtml"/>
        </reference>
    </handle>
</layout>
