<layout version="0.1.0">
    <magento_invitation_index_send>
        <reference name="invitations.form.form.before">
            <block type="Magento_Reward_Block_Tooltip" name="reward.tooltip.invitation" template="tooltip.phtml">
                <action method="initRewardType">
                    <type>Magento_Reward_Model_Action_InvitationCustomer</type>
                </action>
                <action method="setWrapperClass">
                    <class>reward-invitation</class>
                </action>
                <action method="setHideBalance">
                    <value>1</value>
                </action>
                <action method="setRewardMessage" translate="message" module="Magento_Reward">
                    <message>Send this invitation now and earn %s when your invitee signs up on our site.</message>
                </action>
                <action method="setRewardQtyLimitationMessage" translate="message" module="Magento_Reward">
                    <message>You can reward up to %s invitee registration(s).</message>
                </action>
            </block>
            <block type="Magento_Reward_Block_Tooltip" name="reward.tooltip.invitation.order" template="tooltip.phtml">
                <action method="initRewardType">
                    <type>Magento_Reward_Model_Action_InvitationOrder</type>
                </action>
                <action method="setWrapperClass">
                    <class>reward-invitation</class>
                </action>
                <action method="setHideLink">
                    <value>1</value>
                </action>
                <action method="setRewardMessage" translate="message" module="Magento_Reward">
                    <message>Earn %s for purchases your invitees make.</message>
                </action>
                <action method="setRewardQtyLimitationMessage" translate="message" module="Magento_Reward">
                    <message>You can reward up to %s invitee purchase(s).</message>
                </action>
            </block>
        </reference>
    </magento_invitation_index_send>
</layout>
