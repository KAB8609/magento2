<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="checkout_cart_index">
        <reference name="checkout.cart.form.before">
            <block class="Magento_Reward_Block_Tooltip_Checkout" name="reward.tooltip.checkout" template="tooltip.phtml">
                <action method="initRewardType">
                    <argument name="type" xsi:type="string">Magento_Reward_Model_Action_OrderExtra</argument>
                </action>
                <action method="setWrapperClass">
                    <argument name="class" xsi:type="string">reward-checkout</argument>
                </action>
                <action method="setRewardMessage" translate="message">
                    <argument name="message" xsi:type="string">Check out now and earn %1 for this order.</argument>
                </action>
                <action method="setIsGuestNote">
                    <argument name="value" xsi:type="string">1</argument>
                </action>
            </block>
        </reference>
        <reference name="checkout.cart.form.before">
            <block class="Magento_Reward_Block_Tooltip_Checkout" name="reward.tooltip.checkout.salesrule" template="tooltip.phtml">
                <action method="initRewardType">
                    <argument name="type" xsi:type="string">Magento_Reward_Model_Action_Salesrule</argument>
                </action>
                <action method="setWrapperClass">
                    <argument name="class" xsi:type="string">reward-checkout</argument>
                </action>
                <action method="setRewardMessage" translate="message">
                    <argument name="message" xsi:type="string">Check out now and earn %1 for this order.</argument>
                </action>
                <action method="setIsGuestNote">
                    <argument name="value" xsi:type="string">1</argument>
                </action>
            </block>
        </reference>
    </handle>
</layout>
