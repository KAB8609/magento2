<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="checkout_cart_index">
        <reference name="checkout.cart.form.before">
            <block class="Magento_Reward_Block_Tooltip_Checkout" name="reward.tooltip.checkout" template="tooltip.phtml">
                <action method="initRewardType">
                    <type>Magento_Reward_Model_Action_OrderExtra</type>
                </action>
                <action method="setWrapperClass">
                    <class>reward-checkout</class>
                </action>
                <action method="setRewardMessage" translate="message">
                    <message>Check out now and earn %1 for this order.</message>
                </action>
                <action method="setIsGuestNote">
                    <value>1</value>
                </action>
            </block>
        </reference>
        <reference name="checkout.cart.form.before">
            <block class="Magento_Reward_Block_Tooltip_Checkout" name="reward.tooltip.checkout.salesrule" template="tooltip.phtml">
                <action method="initRewardType">
                    <type>Magento_Reward_Model_Action_Salesrule</type>
                </action>
                <action method="setWrapperClass">
                    <class>reward-checkout</class>
                </action>
                <action method="setRewardMessage" translate="message">
                    <message>Check out now and earn %1 for this order.</message>
                </action>
                <action method="setIsGuestNote">
                    <value>1</value>
                </action>
            </block>
        </reference>
    </handle>
</layout>
