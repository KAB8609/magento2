<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="review_product_list">
        <reference name="product.review.form.fields.before">
            <block class="Magento_Reward_Block_Tooltip" name="reward.hint.review" template="tooltip.phtml" after="product.info">
                <action method="initRewardType">
                    <type>Magento_Reward_Model_Action_Review</type>
                </action>
                <action method="setWrapperClass">
                    <class>reward-review</class>
                </action>
                <action method="setRewardMessage" translate="message">
                    <message>Submit a review now and earn %1 after the review is approved.</message>
                </action>
                <action method="setRewardQtyLimitationMessage" translate="message">
                    <message>You can reward up to %1 new reviews(s).</message>
                </action>
                <action method="setIsGuestNote">
                    <value>1</value>
                </action>
            </block>
        </reference>
    </handle>
</layout>
