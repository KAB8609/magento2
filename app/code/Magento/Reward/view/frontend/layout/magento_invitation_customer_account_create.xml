<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <reference name="customer.form.register.invitation.fields.before">
        <block class="Magento\Reward\Block\Tooltip" name="reward.tooltip.register" template="tooltip.phtml">
            <arguments>
                <argument name="reward_type" xsi:type="string">Magento\Reward\Model\Action\Register</argument>
            </arguments>
            <action method="setRewardMessage">
                <argument translate="true" name="message" xsi:type="string">Register on our site now and earn %s.</argument>
            </action>
        </block>
        <block class="Magento\Reward\Block\Tooltip" name="reward.tooltip.newsletter" template="tooltip.phtml" after="reward.tooltip.register">
            <arguments>
                <argument name="reward_type" xsi:type="string">Magento\Reward\Model\Action\Newsletter</argument>
            </arguments>
            <action method="setRewardMessage">
                <argument translate="true" name="message" xsi:type="string">Subscribe to our newsletter now and earn %s.</argument>
            </action>
        </block>
    </reference>
</layout>
