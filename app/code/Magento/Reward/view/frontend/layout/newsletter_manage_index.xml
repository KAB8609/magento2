<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="newsletter_manage_index">
        <reference name="customer.newsletter.form.before">
            <block class="Magento_Reward_Block_Tooltip" name="reward.tooltip.newsletter" template="tooltip.phtml">
                <action method="initRewardType">
                    <type>Magento_Reward_Model_Action_Newsletter</type>
                </action>
                <action method="setWrapperClass">
                    <class>reward-newsletter</class>
                </action>
                <action method="setRewardMessage" translate="message">
                    <message>Subscribe to our newsletter now and earn %1.</message>
                </action>
            </block>
        </reference>
    </handle>
</layout>
