<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <reference name="adminhtml.reward.history.customer.edit.tab.container">
        <block class="Magento_Reward_Block_Adminhtml_Customer_Edit_Tab_Reward_History_Grid" name="adminhtml.reward.history.customer.edit.tab.grid" as="grid">
            <arguments>
                <argument name="id" xsi:type="string">rewardPointsHistoryGrid</argument>
                <argument name="dataSource" xsi:type="object">Magento_Reward_Model_Resource_Reward_History_Grid_Collection</argument>
                <argument name="use_ajax" xsi:type="string">1</argument>
                <argument name="grid_url" xsi:type="url" path="*/*/historyGrid">
                    <param name="_current">1</param>
                </argument>
            </arguments>
            <block class="Magento_Backend_Block_Widget_Grid_ColumnSet" name="adminhtml.reward.history.customer.edit.tab.grid.columnSet" as="grid.columnSet">
                <arguments>
                    <argument name="rowUrl" xsi:type="array">
                        <item name="path" xsi:type="string"/>
                    </argument>
                </arguments>
                <block class="Magento_Backend_Block_Widget_Grid_Column" as="points_balance">
                    <arguments>
                        <argument name="header" xsi:type="string" translate="true">Balance</argument>
                        <argument name="type" xsi:type="string">number</argument>
                        <argument name="index" xsi:type="string">points_balance</argument>
                        <argument name="sortable" xsi:type="string">0</argument>
                        <argument name="filter" xsi:type="string">0</argument>
                        <argument name="width" xsi:type="string">1</argument>
                    </arguments>
                </block>
                <block class="Magento_Backend_Block_Widget_Grid_Column" as="currency_amount">
                    <arguments>
                        <argument name="header" xsi:type="string" translate="true">Amount Balance</argument>
                        <argument name="type" xsi:type="string">currency</argument>
                        <argument name="currency" xsi:type="string">base_currency_code</argument>
                        <argument name="rate" xsi:type="string">1</argument>
                        <argument name="index" xsi:type="string">currency_amount</argument>
                        <argument name="sortable" xsi:type="string">0</argument>
                        <argument name="filter" xsi:type="string">0</argument>
                        <argument name="width" xsi:type="string">1</argument>
                    </arguments>
                </block>
                <block class="Magento_Backend_Block_Widget_Grid_Column" as="points_delta">
                    <arguments>
                        <argument name="type" xsi:type="string">number</argument>
                        <argument name="index" xsi:type="string">points_delta</argument>
                        <argument name="header" xsi:type="string" translate="true">Points</argument>
                        <argument name="sortable" xsi:type="string">0</argument>
                        <argument name="filter" xsi:type="string">0</argument>
                        <argument name="show_number_sign" xsi:type="string">1</argument>
                        <argument name="width" xsi:type="string">1</argument>
                    </arguments>
                </block>
                <block class="Magento_Backend_Block_Widget_Grid_Column" as="currency_delta">
                    <arguments>
                        <argument name="type" xsi:type="string">currency</argument>
                        <argument name="currency" xsi:type="string">base_currency_code</argument>
                        <argument name="rate" xsi:type="string">1</argument>
                        <argument name="index" xsi:type="string">currency_delta</argument>
                        <argument name="header" xsi:type="string" translate="true">Amount</argument>
                        <argument name="sortable" xsi:type="string">0</argument>
                        <argument name="filter" xsi:type="string">0</argument>
                        <argument name="show_number_sign" xsi:type="string">1</argument>
                        <argument name="width" xsi:type="string">1</argument>
                    </arguments>
                </block>
                <block class="Magento_Backend_Block_Widget_Grid_Column" as="rate">
                    <arguments>
                        <argument name="getter" xsi:type="string">getRateText</argument>
                        <argument name="header" xsi:type="string" translate="true">Rate</argument>
                        <argument name="sortable" xsi:type="string">0</argument>
                        <argument name="filter" xsi:type="string">0</argument>
                        <argument name="width" xsi:type="string">1</argument>
                    </arguments>
                </block>
                <block class="Magento_Backend_Block_Widget_Grid_Column_Multistore" as="website">
                    <arguments>
                        <argument name="header" xsi:type="string" translate="true">Website</argument>
                        <argument name="type" xsi:type="string">options</argument>
                        <argument name="options" xsi:type="options" model="Magento_Reward_Model_Resource_Reward_History_Grid_Options_Websites"/>
                        <argument name="index" xsi:type="string">website_id</argument>
                        <argument name="sortable" xsi:type="string">0</argument>
                    </arguments>
                </block>
                <block class="Magento_Backend_Block_Widget_Grid_Column" as="message">
                    <arguments>
                        <argument name="index" xsi:type="string">message</argument>
                        <argument name="header" xsi:type="string" translate="true">Reason</argument>
                        <argument name="type" xsi:type="string">text</argument>
                        <argument name="getter" xsi:type="string">getMessage</argument>
                        <argument name="sortable" xsi:type="string">0</argument>
                        <argument name="filter" xsi:type="string">0</argument>
                        <argument name="renderer" xsi:type="string">Magento_Reward_Block_Adminhtml_Customer_Edit_Tab_Reward_History_Grid_Column_Renderer_Reason</argument>
                    </arguments>
                </block>
                <block class="Magento_Backend_Block_Widget_Grid_Column" as="created_at">
                    <arguments>
                        <argument name="type" xsi:type="string">datetime</argument>
                        <argument name="index" xsi:type="string">created_at</argument>
                        <argument name="header" xsi:type="string" translate="true">Created</argument>
                        <argument name="sortable" xsi:type="string">0</argument>
                        <argument name="align" xsi:type="string">left</argument>
                    </arguments>
                </block>
                <block class="Magento_Backend_Block_Widget_Grid_Column" as="expiration_date">
                    <arguments>
                        <argument name="type" xsi:type="string">datetime</argument>
                        <argument name="getter" xsi:type="string">getExpiresAt</argument>
                        <argument name="header" xsi:type="string" translate="true">Expires</argument>
                        <argument name="sortable" xsi:type="string">0</argument>
                        <argument name="filter" xsi:type="string">0</argument>
                        <argument name="align" xsi:type="string">left</argument>
                    </arguments>
                </block>
                <block class="Magento_Backend_Block_Widget_Grid_Column" as="comment">
                    <arguments>
                        <argument name="index" xsi:type="string">comment</argument>
                        <argument name="header" xsi:type="string" translate="true">Comment</argument>
                        <argument name="sortable" xsi:type="string">0</argument>
                        <argument name="filter" xsi:type="string">0</argument>
                        <argument name="align" xsi:type="string">left</argument>
                    </arguments>
                </block>
            </block>
        </block>
    </reference>
</layout>
