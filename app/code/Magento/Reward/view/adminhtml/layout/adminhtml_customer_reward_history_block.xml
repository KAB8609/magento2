<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="adminhtml_customer_reward_history_block">
        <reference name="adminhtml.reward.history.customer.edit.tab.container">
            <block class="Magento_Reward_Block_Adminhtml_Customer_Edit_Tab_Reward_History_Grid" name="adminhtml.reward.history.customer.edit.tab.grid" as="grid">
                <arguments>
                    <id>rewardPointsHistoryGrid</id>
                    <dataSource type="object">Magento_Reward_Model_Resource_Reward_History_Grid_Collection</dataSource>
                    <use_ajax>1</use_ajax>
                    <grid_url type="url">
                        <path>*/*/historyGrid</path>
                        <params>
                            <_current>1</_current>
                        </params>
                    </grid_url>
                </arguments>
                <block class="Magento_Backend_Block_Widget_Grid_ColumnSet" name="adminhtml.reward.history.customer.edit.tab.grid.columnSet" as="grid.columnSet">
                    <arguments>
                        <rowUrl>
                            <path/>
                        </rowUrl>
                    </arguments>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="points_balance">
                        <arguments>
                            <header translate="true">Balance</header>
                            <type>number</type>
                            <index>points_balance</index>
                            <sortable>0</sortable>
                            <filter>0</filter>
                            <width>1</width>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="currency_amount">
                        <arguments>
                            <header translate="true">Amount Balance</header>
                            <type>currency</type>
                            <currency>base_currency_code</currency>
                            <rate>1</rate>
                            <index>currency_amount</index>
                            <sortable>0</sortable>
                            <filter>0</filter>
                            <width>1</width>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="points_delta">
                        <arguments>
                            <type>number</type>
                            <index>points_delta</index>
                            <header translate="true">Points</header>
                            <sortable>0</sortable>
                            <filter>0</filter>
                            <show_number_sign>1</show_number_sign>
                            <width>1</width>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="currency_delta">
                        <arguments>
                            <type>currency</type>
                            <currency>base_currency_code</currency>
                            <rate>1</rate>
                            <index>currency_delta</index>
                            <header translate="true">Amount</header>
                            <sortable>0</sortable>
                            <filter>0</filter>
                            <show_number_sign>1</show_number_sign>
                            <width>1</width>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="rate">
                        <arguments>
                            <getter>getRateText</getter>
                            <header translate="true">Rate</header>
                            <sortable>0</sortable>
                            <filter>0</filter>
                            <width>1</width>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column_Multistore" as="website">
                        <arguments>
                            <header translate="true">Website</header>
                            <type>options</type>
                            <options type="options">Magento_Reward_Model_Resource_Reward_History_Grid_Options_Websites</options>
                            <index>website_id</index>
                            <sortable>0</sortable>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="message">
                        <arguments>
                            <index>message</index>
                            <header translate="true">Reason</header>
                            <type>text</type>
                            <getter>getMessage</getter>
                            <sortable>0</sortable>
                            <filter>0</filter>
                            <renderer>Magento_Reward_Block_Adminhtml_Customer_Edit_Tab_Reward_History_Grid_Column_Renderer_Reason</renderer>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="created_at">
                        <arguments>
                            <type>datetime</type>
                            <index>created_at</index>
                            <header translate="true">Created</header>
                            <sortable>0</sortable>
                            <align>left</align>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="expiration_date">
                        <arguments>
                            <type>datetime</type>
                            <getter>getExpiresAt</getter>
                            <header translate="true">Expires</header>
                            <sortable>0</sortable>
                            <filter>0</filter>
                            <align>left</align>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="comment">
                        <arguments>
                            <index>comment</index>
                            <header translate="true">Comment</header>
                            <sortable>0</sortable>
                            <filter>0</filter>
                            <align>left</align>
                        </arguments>
                    </block>
                </block>
            </block>
        </reference>
    </handle>
</layout>
