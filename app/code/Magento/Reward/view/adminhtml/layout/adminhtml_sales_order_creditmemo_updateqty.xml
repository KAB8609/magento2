<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="adminhtml_sales_order_creditmemo_updateqty">
        <reference name="creditmemo_totals">
            <block class="\Magento\Adminhtml\Block\Sales\Order\Totals\Item" name="reward_points" template="Magento_Reward::sales/order/total.phtml">
                <action method="setBeforeCondition">
                    <argument name="condition" xsi:type="string">customerbalance</argument>
                </action>
            </block>
        </reference>
        <reference name="submit_before">
            <block class="\Magento\Reward\Block\Adminhtml\Sales\Order\Creditmemo\Reward" name="reward_points" template="sales/order/creditmemo/reward.phtml"/>
        </reference>
    </handle>
</layout>
