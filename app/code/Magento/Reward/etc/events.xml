<config>
    <event name="newsletter_subscriber_save_commit_after">
        <observer name="magento_reward" instance="Magento_Reward_Model_Observer" method="customerSubscribed" />
    </event>
    <event name="paypal_prepare_line_items">
        <observer name="magento_reward" instance="Magento_Reward_Model_Observer" method="addPaypalRewardItem" />
    </event>
    <event name="sales_order_save_after">
        <observer name="magento_reward" instance="Magento_Reward_Model_Observer" method="orderCompleted" />
    </event>
    <event name="sales_quote_collect_totals_before">
        <observer name="magento_reward" instance="Magento_Reward_Model_Observer" method="quoteCollectTotalsBefore" />
    </event>
    <event name="sales_quote_merge_after">
        <observer name="magento_reward" instance="Magento_Reward_Model_Observer" method="quoteMergeAfter" />
    </event>
    <event name="sales_order_load_after">
        <observer name="magento_reward" instance="Magento_Reward_Model_Observer" method="orderLoadAfter" />
    </event>
    <event name="sales_order_invoice_register">
        <observer name="magento_reward" instance="Magento_Reward_Model_Observer" method="invoiceRegister" />
    </event>
    <event name="sales_order_invoice_pay">
        <observer name="magento_reward" instance="Magento_Reward_Model_Observer" method="invoicePay" />
    </event>
    <event name="sales_order_invoice_save_commit_after">
        <observer name="magento_reward" instance="Magento_Reward_Model_Observer" method="applyRewardSalesrulePoints" />
    </event>
    <event name="sales_order_creditmemo_refund">
        <observer name="magento_reward" instance="Magento_Reward_Model_Observer" method="creditmemoRefund" />
    </event>
    <event name="sales_order_creditmemo_save_after">
        <observer name="magento_reward" instance="Magento_Reward_Model_Observer" method="creditmemoSaveAfter" />
    </event>
    <event name="sales_model_service_quote_submit_before">
        <observer name="magento_reward" instance="Magento_Reward_Model_Observer_PlaceOrder" method="dispatch" />
    </event>
    <event name="sales_model_service_quote_submit_failure">
        <observer name="magento_reward" instance="Magento_Reward_Model_Observer" method="revertRewardPoints" />
    </event>
    <event name="checkout_type_multishipping_create_orders_single">
        <observer name="magento_reward" instance="Magento_Reward_Model_Observer_PlaceOrder" method="dispatch" />
    </event>
    <event name="checkout_multishipping_refund_all">
        <observer name="magento_reward" instance="Magento_Reward_Model_Observer" method="revertRewardPointsForAllOrders" />
    </event>
</config>