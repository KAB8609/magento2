<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="adminhtml_cms_page_edit_changes">
        <reference name="head">
            <action method="addJs">
                <argument name="file" xsi:type="string">Magento_VersionsCms::cms.js</argument>
            </action>
        </reference>
        <reference name="cms_page_edit_tabs">
            <action method="removeTab">
                <argument name="name" xsi:type="string">content_section</argument>
            </action>
            <action method="removeTab">
                <argument name="name" xsi:type="string">design_section</argument>
            </action>
            <action method="removeTab">
                <argument name="name" xsi:type="string">meta_section</argument>
            </action>
            <block class="Magento_VersionsCms_Block_Adminhtml_Cms_Page_Edit_Tab_Versions" name="cms_page_edit_tab_versions"/>
            <action method="addTab">
                <argument name="name" xsi:type="string">versions</argument>
                <argument name="block" xsi:type="string">cms_page_edit_tab_versions</argument>
            </action>
        </reference>
    </handle>
</layout>
