<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="adminhtml_cms_page_revision_edit">
        <update handle="editor"/>
        <reference name="head">
            <action method="addJs">
                <argument name="file" xsi:type="string">Magento_VersionsCms::cms.js</argument>
            </action>
        </reference>
        <reference name="head.components">
            <block class="Magento_Adminhtml_Block_Page_Js_Components" name="cms_page_head_components" template="Magento_VersionsCms::page/js/components.phtml"/>
        </reference>
        <reference name="content">
            <block class="Magento_VersionsCms_Block_Adminhtml_Cms_Page_Revision_Edit" name="cms_page_revision_edit">
                <block class="Magento_VersionsCms_Block_Adminhtml_Cms_Page_Revision_Edit_Info" name="revision_info" template="page/revision/info.phtml"/>
            </block>
        </reference>
        <reference name="left">
            <block class="Magento_VersionsCms_Block_Adminhtml_Cms_Page_Revision_Edit_Tabs" name="cms_page_revision_edit_tabs">
                <action method="addTab">
                    <argument name="name" xsi:type="string">content_section</argument>
                    <argument name="block" xsi:type="string">Magento_VersionsCms_Block_Adminhtml_Cms_Page_Revision_Edit_Tab_Content</argument>
                </action>
                <action method="addTab">
                    <argument name="name" xsi:type="string">design_section</argument>
                    <argument name="block" xsi:type="string">Magento_VersionsCms_Block_Adminhtml_Cms_Page_Revision_Edit_Tab_Design</argument>
                </action>
                <action method="addTab">
                    <argument name="name" xsi:type="string">meta_section</argument>
                    <argument name="block" xsi:type="string">Magento_VersionsCms_Block_Adminhtml_Cms_Page_Revision_Edit_Tab_Meta</argument>
                </action>
            </block>
        </reference>
    </handle>
</layout>
