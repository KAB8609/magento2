<layout version="0.1.0">
    <adminhtml_cms_page_revision_edit>
        <update handle="editor"/>
        <reference name="head">
            <action method="addJs">
                <file>Magento_VersionsCms::cms.js</file>
            </action>
        </reference>
        <reference name="head.components">
            <block type="Magento_Core_Block_Template" name="cms_page_head_components" template="Magento_VersionsCms::page/js/components.phtml"/>
        </reference>
        <reference name="content">
            <block type="Magento_VersionsCms_Block_Adminhtml_Cms_Page_Revision_Edit" name="cms_page_revision_edit">
                <block type="Magento_VersionsCms_Block_Adminhtml_Cms_Page_Revision_Edit_Info" name="revision_info" template="page/revision/info.phtml"/>
            </block>
        </reference>
        <reference name="left">
            <block type="Magento_VersionsCms_Block_Adminhtml_Cms_Page_Revision_Edit_Tabs" name="cms_page_revision_edit_tabs">
                <action method="addTab">
                    <name>content_section</name>
                    <block>Magento_VersionsCms_Block_Adminhtml_Cms_Page_Revision_Edit_Tab_Content</block>
                </action>
                <action method="addTab">
                    <name>design_section</name>
                    <block>Magento_VersionsCms_Block_Adminhtml_Cms_Page_Revision_Edit_Tab_Design</block>
                </action>
                <action method="addTab">
                    <name>meta_section</name>
                    <block>Magento_VersionsCms_Block_Adminhtml_Cms_Page_Revision_Edit_Tab_Meta</block>
                </action>
            </block>
        </reference>
    </adminhtml_cms_page_revision_edit>
</layout>
