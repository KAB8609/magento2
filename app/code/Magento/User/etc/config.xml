<config>
    <global>
        <areas>
            <adminhtml>
                <auth>
                    <credential_storage>Magento_User_Model_User</credential_storage>
                </auth>
            </adminhtml>
        </areas>
        <resources>
            <user_setup>
                <setup>
                    <module>Magento_User</module>
                    <class>Magento_User_Model_Resource_Setup</class>
                </setup>
            </user_setup>
        </resources>
    </global>
    <default>
        <admin>
            <emails>
                <forgot_email_template>admin_emails_forgot_email_template</forgot_email_template>
                <forgot_email_identity>general</forgot_email_identity>
                <password_reset_link_expiration_period>1</password_reset_link_expiration_period>
                <reset_password_template>admin_emails_reset_password_template</reset_password_template>
            </emails>
        </admin>
    </default>
</config>
