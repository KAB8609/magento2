<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="checkout_cart_index">
        <reference name="checkout.cart">
            <block class="Magento\AdvancedCheckout\Block\Sku\Products" name="sku.failed.products" template="cart/sku/failed.phtml" as="shopping.cart.table.after">
                <block class="Magento\AdvancedCheckout\Block\Sku\Products\Info" name="additional.product.info" template="cart/sku/failed/info.phtml"/>
                <action method="addItemRender">
                    <argument name="type" xsi:type="string">default</argument>
                    <argument name="block" xsi:type="string">\Magento\Checkout\Block\Cart\Item\Renderer</argument>
                    <argument name="template" xsi:type="string">Magento_AdvancedCheckout::cart/item/failed.phtml</argument>
                </action>
                <action method="addItemRender">
                    <argument name="type" xsi:type="string">simple</argument>
                    <argument name="block" xsi:type="string">\Magento\Checkout\Block\Cart\Item\Renderer</argument>
                    <argument name="template" xsi:type="string">cart/item/default.phtml</argument>
                </action>
                <action method="addItemRender">
                    <argument name="type" xsi:type="string">grouped</argument>
                    <argument name="block" xsi:type="string">\Magento\Checkout\Block\Cart\Item\Renderer</argument>
                    <argument name="template" xsi:type="string">Magento_AdvancedCheckout::cart/item/failed.phtml</argument>
                </action>
                <action method="addItemRender">
                    <argument name="type" xsi:type="string">configurable</argument>
                    <argument name="block" xsi:type="string">\Magento\Checkout\Block\Cart\Item\Renderer\Configurable</argument>
                    <argument name="template" xsi:type="string">cart/item/default.phtml</argument>
                </action>
                <action method="addItemRender">
                    <argument name="type" xsi:type="string">bundle</argument>
                    <argument name="block" xsi:type="string">\Magento\Bundle\Block\Checkout\Cart\Item\Renderer</argument>
                    <argument name="template" xsi:type="string">Magento_Checkout::cart/item/default.phtml</argument>
                </action>
                <action method="addItemRender">
                    <argument name="type" xsi:type="string">giftcard</argument>
                    <argument name="block" xsi:type="string">\Magento\GiftCard\Block\Checkout\Cart\Item\Renderer</argument>
                    <argument name="template" xsi:type="string">Magento_Checkout::cart/item/default.phtml</argument>
                </action>
                <action method="addItemRender">
                    <argument name="type" xsi:type="string">downloadable</argument>
                    <argument name="block" xsi:type="string">\Magento\Downloadable\Block\Checkout\Cart\Item\Renderer</argument>
                    <argument name="template" xsi:type="string">Magento_Checkout::cart/item/default.phtml</argument>
                </action>
                <action method="addItemRender">
                    <argument name="type" xsi:type="string">virtual</argument>
                    <argument name="block" xsi:type="string">\Magento\Checkout\Block\Cart\Item\Renderer</argument>
                    <argument name="template" xsi:type="string">cart/item/default.phtml</argument>
                </action>
                <action method="addItemRender">
                    <argument name="type" xsi:type="string">undefined</argument>
                    <argument name="block" xsi:type="string">\Magento\Checkout\Block\Cart\Item\Renderer</argument>
                    <argument name="template" xsi:type="string">Magento_AdvancedCheckout::cart/item/failed.phtml</argument>
                </action>
            </block>
        </reference>
    </handle>
</layout>
