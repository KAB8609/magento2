<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle label="Configure Cart Item Failed" id="checkout_cart_configurefailed" type="page" parent="checkout_cart_configure">
        <update handle="catalog_product_view"/>
        <reference name="product.info">
            <block class="Magento_AdvancedCheckout_Block_Cart_Item_Configure" name="checkout.cart.item.configure.block"/>
        </reference>
        <reference name="product.info.addtocart">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">Magento_Checkout::cart/item/configure/updatecart.phtml</argument>
            </action>
        </reference>
        <reference name="product.info.addtocart.additional">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">Magento_Checkout::cart/item/configure/updatecart.phtml</argument>
            </action>
        </reference>
    </handle>
</layout>
