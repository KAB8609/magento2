<layout version="0.1.0">
    <wishlist_index_share translate="label" type="page" parent="wishlist_index_index">
        <label>Customer My Account Wish List Sharing Form</label>
        <update handle="customer_account"/>
        <reference name="my.account.wrapper">
            <block type="Magento_Wishlist_Block_Customer_Sharing" name="wishlist.sharing" template="sharing.phtml"/>
        </reference>
        <reference name="right">
            <action method="unsetChild">
                <name>wishlist_customer_sidebar</name>
            </action>
        </reference>
    </wishlist_index_share>
</layout>
