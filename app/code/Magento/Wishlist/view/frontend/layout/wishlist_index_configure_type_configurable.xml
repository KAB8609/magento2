<layout version="0.1.0">
    <wishlist_index_configure_type_configurable translate="label" type="page" parent="catalog_product_view">
        <label>Configure Wishlist Item (Configurable)</label>
        <reference name="product.info">
            <block type="Magento_Catalog_Block_Product_View_Type_Configurable" name="product.info.configurable" as="product_type_data" template="product/view/type/default.phtml">
                <container name="product.info.configurable.extra" as="product_type_data_extra" label="Product Extra Info"/>
            </block>
        </reference>
        <reference name="product.info.options.wrapper">
            <block type="Magento_Catalog_Block_Product_View_Type_Configurable" name="product.info.options.configurable" as="options_configurable" before="-" template="product/view/type/options/configurable.phtml"/>
        </reference>
    </wishlist_index_configure_type_configurable>
</layout>
