<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="default">
        <reference name="top.links">
            <block class="\Magento\Wishlist\Block\Links" name="wishlist_link"/>
            <action method="addLinkBlock">
                <argument name="blockName" xsi:type="string">wishlist_link</argument>
            </action>
        </reference>
        <reference name="right">
            <block class="\Magento\Wishlist\Block\Customer\Sidebar" name="wishlist_sidebar" as="wishlist" after="cart_sidebar" template="sidebar.phtml"/>
        </reference>
    </handle>
</layout>
