<layout version="0.1.0">
    <checkout_multishipping_shipping translate="label" type="page" parent="checkout_multishipping">
        <label>Multishipping Checkout Shipping Information Step</label>
        <update handle="checkout_multishipping"/>
        <reference name="content">
            <block type="Magento_Checkout_Block_Multishipping_Shipping" name="checkout_shipping" template="multishipping/shipping.phtml">
                <action method="addItemRender">
                    <type>default</type>
                    <block>Magento_Checkout_Block_Cart_Item_Renderer</block>
                    <template>multishipping/item/default.phtml</template>
                </action>
                <action method="addItemRender">
                    <type>grouped</type>
                    <block>Magento_Checkout_Block_Cart_Item_Renderer_Grouped</block>
                    <template>multishipping/item/default.phtml</template>
                </action>
                <action method="addItemRender">
                    <type>configurable</type>
                    <block>Magento_Checkout_Block_Cart_Item_Renderer_Configurable</block>
                    <template>multishipping/item/default.phtml</template>
                </action>
                <block type="Magento_Checkout_Block_Multishipping_Billing_Items" name="checkout_billing_items" template="multishipping/billing/items.phtml">
                    <action method="addItemRender">
                        <type>default</type>
                        <block>Magento_Checkout_Block_Cart_Item_Renderer</block>
                        <template>multishipping/item/default.phtml</template>
                    </action>
                    <action method="addItemRender">
                        <type>grouped</type>
                        <block>Magento_Checkout_Block_Cart_Item_Renderer_Grouped</block>
                        <template>multishipping/item/default.phtml</template>
                    </action>
                    <action method="addItemRender">
                        <type>configurable</type>
                        <block>Magento_Checkout_Block_Cart_Item_Renderer_Configurable</block>
                        <template>multishipping/item/default.phtml</template>
                    </action>
                </block>
            </block>
        </reference>
    </checkout_multishipping_shipping>
</layout>
