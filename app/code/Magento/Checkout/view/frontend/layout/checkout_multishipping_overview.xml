<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="checkout_multishipping_overview" translate="label" type="page" parent="checkout_multishipping">
        <label>Multishipping Checkout Overview</label>
        <update handle="checkout_multishipping"/>
        <reference name="content">
            <block class="Magento_Checkout_Block_Multishipping_Overview" name="checkout_overview" template="multishipping/overview.phtml">
                <action method="addItemRender">
                    <type>default</type>
                    <block>Magento_Checkout_Block_Cart_Item_Renderer</block>
                    <template>multishipping/item/default.phtml</template>
                </action>
                <action method="addItemRender">
                    <type>grouped</type>
                    <block>Magento_Checkout_Block_Cart_Item_Renderer_Grouped</block>
                    <template>multishipping/item/default.phtml</template>
                </action>
                <action method="addItemRender">
                    <type>configurable</type>
                    <block>Magento_Checkout_Block_Cart_Item_Renderer_Configurable</block>
                    <template>multishipping/item/default.phtml</template>
                </action>
                <action method="addRowItemRender">
                    <type>grouped</type>
                    <block>Magento_Checkout_Block_Cart_Item_Renderer_Grouped</block>
                    <template>multishipping/overview/item.phtml</template>
                </action>
                <action method="addRowItemRender">
                    <type>configurable</type>
                    <block>Magento_Checkout_Block_Cart_Item_Renderer_Configurable</block>
                    <template>multishipping/overview/item.phtml</template>
                </action>
                <block class="Magento_Checkout_Block_Multishipping_Payment_Info" name="payment_info">
                    <action method="setInfoTemplate">
                        <method/>
                        <template/>
                    </action>
                </block>
                <block class="Magento_Checkout_Block_Agreements" name="checkout.multishipping.agreements" as="agreements" template="multishipping/agreements.phtml"/>
                <block class="Magento_Checkout_Block_Cart_Totals" name="totals"/>
                <container name="checkout.multishipping.overview.items.after" as="items_after" label="Overview Items After"/>
            </block>
        </reference>
    </handle>
</layout>
