<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="default">
        <reference name="head.components">
            <block class="Magento\Adminhtml\Block\Page\Js\Components" name="checkout_page_head_components" template="Magento_Checkout::js/components.phtml"/>
        </reference>
        <reference name="top.links">
            <block class="Magento\Checkout\Block\Links" name="checkout_cart_link">
                <action method="addCartLink"/>
                <action method="addCheckoutLink"/>
            </block>
        </reference>
        <reference name="right">
            <block class="Magento\Checkout\Block\Cart\Sidebar" name="cart_sidebar" template="cart/sidebar.phtml" before="-">
                <action method="addItemRender">
                    <argument name="type" xsi:type="string">simple</argument>
                    <argument name="block" xsi:type="string">\Magento\Checkout\Block\Cart\Item\Renderer</argument>
                    <argument name="template" xsi:type="string">cart/sidebar/default.phtml</argument>
                </action>
                <action method="addItemRender">
                    <argument name="type" xsi:type="string">grouped</argument>
                    <argument name="block" xsi:type="string">\Magento\Checkout\Block\Cart\Item\Renderer\Grouped</argument>
                    <argument name="template" xsi:type="string">cart/sidebar/default.phtml</argument>
                </action>
                <action method="addItemRender">
                    <argument name="type" xsi:type="string">configurable</argument>
                    <argument name="block" xsi:type="string">\Magento\Checkout\Block\Cart\Item\Renderer\Configurable</argument>
                    <argument name="template" xsi:type="string">cart/sidebar/default.phtml</argument>
                </action>
                <container name="cart_sidebar.extra_actions" as="extra_actions" label="My Cart Extra Actions"/>
            </block>
        </reference>
    </handle>
</layout>
