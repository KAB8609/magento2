<layout version="0.1.0">
    <checkout_cart_configure translate="label" type="page" parent="catalog_product_view">
        <label>Configure Cart Item (Any)</label>
        <update handle="catalog_product_view"/>
        <reference name="product.info">
            <block type="Magento_Checkout_Block_Cart_Item_Configure" name="checkout.cart.item.configure.block"/>
        </reference>
        <reference name="product.info.addtocart">
            <action method="setTemplate">
                <template>Magento_Checkout::cart/item/configure/updatecart.phtml</template>
            </action>
        </reference>
        <reference name="product.info.addtocart.additional">
            <action method="setTemplate">
                <template>Magento_Checkout::cart/item/configure/updatecart.phtml</template>
            </action>
        </reference>
    </checkout_cart_configure>
</layout>
