<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="checkout_onepage_failure" translate="label" type="page" parent="default">
        <label>One Page Checkout Failure</label>
        <reference name="root">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">2columns-right.phtml</argument>
            </action>
        </reference>
        <reference name="content">
            <block class="Magento_Checkout_Block_Onepage_Failure" name="checkout.failure" template="onepage/failure.phtml"/>
        </reference>
    </handle>
</layout>
