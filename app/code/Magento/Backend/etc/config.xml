<config>
    <modules>
        <Magento_Backend>
            <version>2.0.0.0</version>
            <active>true</active>
            <depends>
                <Magento_Directory />
            </depends>
        </Magento_Backend>
    </modules>
    <global>
        <areas>
            <adminhtml>
                <base_controller>Magento_Backend_Controller_ActionAbstract</base_controller>
                <routers>
                    <admin>
                        <class>Magento_Backend_Controller_Router_Default</class>
                    </admin>
                </routers>
                <frontName>backend</frontName>
                <auth />
            </adminhtml>
        </areas>
        <cache>
            <types>
                <config translate="description" module="Magento_Backend">
                    <description>System(config.xml, local.xml) and modules configuration files(config.xml, menu.xml).</description>
                </config>
            </types>
        </cache>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <use>admin</use>
                <args>
                    <module>Magento_Backend</module>
                    <frontName>admin</frontName>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <events>
            <translate_initialization_before>
                <observers>
                    <initialize_translation>
                        <class>Magento_Backend_Model_Observer</class>
                        <method>initializeTranslation</method>
                    </initialize_translation>
                </observers>
            </translate_initialization_before>
        </events>
    </adminhtml>
</config>
