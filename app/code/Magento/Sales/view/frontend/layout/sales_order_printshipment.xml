<layout version="0.1.0">
    <sales_order_printshipment translate="label" type="page" parent="sales_order_print">
        <label>Sales Shipment Print View</label>
        <reference name="content">
            <block type="Magento_Sales_Block_Order_Print_Shipment" name="sales.order.print.shipment" template="order/print/shipment.phtml">
                <action method="addItemRender">
                    <type>default</type>
                    <block>Magento_Sales_Block_Order_Item_Renderer_Default</block>
                    <template>order/shipment/items/renderer/default.phtml</template>
                </action>
            </block>
        </reference>
        <container name="additional.product.info" label="Additional Product Info"/>
    </sales_order_printshipment>
</layout>
