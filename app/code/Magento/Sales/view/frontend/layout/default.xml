<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="default">
        <reference name="right">
            <block class="Magento\Sales\Block\Reorder\Sidebar" name="sale.reorder.sidebar" as="reorder" template="reorder/sidebar.phtml"/>
        </reference>
        <reference name="footer_links">
            <block class="Magento\Sales\Block\Guest\Links" name="return_link"/>
            <action method="addLinkBlock">
                <argument name="blockName" xsi:type="string">return_link</argument>
            </action>
        </reference>
    </handle>
</layout>
