<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" label="Guest Order Creditmemo View" type="page" parent="sales_guest_view">
    <reference name="root">
        <action method="setTemplate">
            <argument name="template" xsi:type="string">1column.phtml</argument>
        </action>
    </reference>
    <reference name="content">
        <block class="Magento_Sales_Block_Order_Info" as="info" name="sales.order.info">
            <block class="Magento_Sales_Block_Order_Info_Buttons" as="buttons" name="sales.order.info.buttons"/>
        </block>
        <block class="Magento_Sales_Block_Order_Creditmemo" name="sales.order.creditmemo" after="sales.order.info">
            <block class="Magento_Sales_Block_Order_Creditmemo_Items" name="creditmemo_items" template="order/creditmemo/items.phtml">
                <action method="addItemRender">
                    <argument name="type" xsi:type="string">default</argument>
                    <argument name="block" xsi:type="string">Magento_Sales_Block_Order_Item_Renderer_Default</argument>
                    <argument name="template" xsi:type="string">order/creditmemo/items/renderer/default.phtml</argument>
                </action>
                <action method="addItemRender">
                    <argument name="type" xsi:type="string">grouped</argument>
                    <argument name="block" xsi:type="string">Magento_Sales_Block_Order_Item_Renderer_Grouped</argument>
                    <argument name="template" xsi:type="string">order/creditmemo/items/renderer/default.phtml</argument>
                </action>
                <block class="Magento_Sales_Block_Order_Creditmemo_Totals" name="creditmemo_totals" template="order/totals.phtml">
                    <action method="setLabelProperties">
                        <argument name="value" xsi:type="string">colspan="6" class="a-right"</argument>
                    </action>
                    <action method="setValueProperties">
                        <argument name="value" xsi:type="string">class="a-right"</argument>
                    </action>
                    <block class="Magento_Tax_Block_Sales_Order_Tax" name="tax" template="order/tax.phtml"/>
                </block>
                <block class="Magento_Sales_Block_Order_Comments" name="creditmemo_comments" template="order/comments.phtml"/>
            </block>
        </block>
    </reference>
    <reference name="sales.order.info">
        <action method="addLink">
            <argument name="name" xsi:type="string">view</argument>
            <argument name="path" xsi:type="string">*/*/view</argument>
            <argument translate="true" name="label" xsi:type="string">Order Information</argument>
        </action>
        <action method="addLink">
            <argument name="name" xsi:type="string">invoice</argument>
            <argument name="path" xsi:type="string">*/*/invoice</argument>
            <argument translate="true" name="label" xsi:type="string">Invoices</argument>
        </action>
        <action method="addLink">
            <argument name="name" xsi:type="string">shipment</argument>
            <argument name="path" xsi:type="string">*/*/shipment</argument>
            <argument translate="true" name="label" xsi:type="string">Shipments</argument>
        </action>
        <action method="addLink">
            <argument name="name" xsi:type="string">creditmemo</argument>
            <argument name="path" xsi:type="string"/>
            <argument translate="true" name="label" xsi:type="string">Refunds</argument>
        </action>
    </reference>
</layout>
