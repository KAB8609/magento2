<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="customer_account">
        <reference name="customer_account_navigation">
            <action method="addLink" translate="label">
                <name>billing_agreements</name>
                <path>sales/billing_agreement/</path>
                <label>Billing Agreements</label>
            </action>
        </reference>
        <reference name="customer_account_navigation">
            <action method="addLink" translate="label">
                <name>orders</name>
                <path>sales/order/history/</path>
                <label>My Orders</label>
            </action>
        </reference>
        <reference name="left">
            <block class="Magento_Sales_Block_Reorder_Sidebar" name="sale.reorder.sidebar" as="reorder" template="reorder/sidebar.phtml"/>
        </reference>
        <reference name="customer_account_navigation">
            <action method="addLink" translate="label">
                <name>recurring_profiles</name>
                <path>sales/recurring_profile/</path>
                <label>Recurring Profiles</label>
            </action>
        </reference>
    </handle>
</layout>
