<layout version="0.1.0">
    <adminhtml_system_design_editor_firstentrance>
        <reference name="head">
            <action method="addJs">
                <file>Magento_DesignEditor::js/dialog.js</file>
            </action>
            <action method="addJs">
                <file>Magento_DesignEditor::js/infinitescroll.js</file>
            </action>
            <action method="addJs">
                <file>Magento_DesignEditor::js/theme-selector.js</file>
            </action>
            <action method="addJs">
                <file>Magento_DesignEditor::js/theme-assign.js</file>
            </action>
            <action method="addJs">
                <file>Magento_DesignEditor::js/theme-edit.js</file>
            </action>
            <action method="addCss">
                <file>Magento_DesignEditor::css/styles.css</file>
            </action>
        </reference>
        <reference name="content">
            <block type="Magento_Backend_Block_Template" name="available.theme.list.container" as="theme_container" template="Magento_DesignEditor::theme/selector/first_entrance.phtml">
                <block type="Magento_DesignEditor_Block_Adminhtml_Theme_Selector_List_Available" name="available.theme.list" template="Magento_DesignEditor::theme/list/available.phtml">
                    <block type="Magento_DesignEditor_Block_Adminhtml_Theme" name="design.editor.theme" as="theme" template="Magento_DesignEditor::theme/available.phtml"/>
                </block>
            </block>
            <block type="Magento_Backend_Block_Template" name="theme.dialog" template="Magento_DesignEditor::dialog.phtml"/>
            <block type="Magento_Backend_Block_Template" name="theme.dialog.edit" template="Magento_DesignEditor::theme/selector/theme_edit.phtml"/>
            <block type="Magento_DesignEditor_Block_Adminhtml_Theme_Selector_StoreView" name="theme.selector.storeview" template="Magento_DesignEditor::theme/selector/storeview.phtml"/>
        </reference>
    </adminhtml_system_design_editor_firstentrance>
</layout>
