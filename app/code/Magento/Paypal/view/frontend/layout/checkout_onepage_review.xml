<layout version="0.1.0">
    <checkout_onepage_review>
        <reference name="checkout.onepage.review.info.items.after">
            <block type="Magento_Paypal_Block_Iframe" name="paypal.iframe"/>
        </reference>
        <reference name="checkout.onepage.review.button">
            <action method="setTemplate">
                <template helper="Magento_Paypal_Helper_Hss::getReviewButtonTemplate">
                    <name>Magento_Paypal::hss/review/button.phtml</name>
                    <block>checkout.onepage.review.button</block>
                </template>
            </action>
        </reference>
    </checkout_onepage_review>
</layout>
