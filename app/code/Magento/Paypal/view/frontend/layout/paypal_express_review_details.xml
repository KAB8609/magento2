<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle label="Paypal Express Review Details" id="paypal_express_review_details" type="fragment" owner="checkout_onepage_index">
        <block class="Magento\Page\Block\Html" name="root" output="1" template="page_fragment.phtml">
            <block class="Magento\Paypal\Block\Express\Review\Details" name="paypal.express.review.details" template="express/review/details.phtml">
                <action method="addItemRender">
                    <argument name="type" xsi:type="string">default</argument>
                    <argument name="block" xsi:type="string">Magento\Checkout\Block\Cart\Item\Renderer</argument>
                    <argument name="template" xsi:type="string">onepage/review/item.phtml</argument>
                </action>
                <action method="addItemRender">
                    <argument name="type" xsi:type="string">grouped</argument>
                    <argument name="block" xsi:type="string">Magento\Checkout\Block\Cart\Item\Renderer\Grouped</argument>
                    <argument name="template" xsi:type="string">onepage/review/item.phtml</argument>
                </action>
                <action method="addItemRender">
                    <argument name="type" xsi:type="string">configurable</argument>
                    <argument name="block" xsi:type="string">Magento\Checkout\Block\Cart\Item\Renderer\Configurable</argument>
                    <argument name="template" xsi:type="string">onepage/review/item.phtml</argument>
                </action>
                <block class="Magento\Checkout\Block\Cart\Totals" name="paypal.express.review.details.totals" as="totals" template="onepage/review/totals.phtml"/>
            </block>
        </block>
    </handle>
</layout>
