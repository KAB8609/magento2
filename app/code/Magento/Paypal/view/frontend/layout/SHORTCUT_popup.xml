<layout version="0.1.0">
    <SHORTCUT_popup>
        <reference name="product.tooltip">
            <container name="product.info.addtocart.paypal.wrapper" label="PayPal Express Checkout Shortcut Wrapper" htmlTag="div">
                <block type="Magento_Paypal_Block_Express_Shortcut" name="product.info.addtocart.paypal" template="express/shortcut.phtml">
                    <action method="setIsInCatalogProduct">
                        <value>1</value>
                    </action>
                    <action method="setShowOrPosition">
                        <value>after</value>
                    </action>
                </block>
            </container>
        </reference>
    </SHORTCUT_popup>
</layout>
