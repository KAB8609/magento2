<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="adminhtml_paypal_reports_block">
        <reference name="adminhtml.paypal.report.grid.container">
            <block class="Magento_Backend_Block_Widget_Grid" name="paypal.report.grid" as="grid">
                <arguments>
                    <id>settlementGrid</id>
                    <dataSource type="object">Magento_Paypal_Model_Resource_Report_Settlement_Row_Collection</dataSource>
                    <default_sort>row_id</default_sort>
                    <default_dir>DESC</default_dir>
                    <save_parameters_in_session>1</save_parameters_in_session>
                    <use_ajax>1</use_ajax>
                    <grid_url type="url">
                        <path>*/*/grid</path>
                    </grid_url>
                </arguments>
                <block class="Magento_Backend_Block_Widget_Grid_ColumnSet" name="paypal.report.grid.columnSet" as="grid.columnSet">
                    <arguments>
                        <rowUrl>
                            <path>*/*/details</path>
                            <extraParamsTemplate>
                                <id>getId</id>
                            </extraParamsTemplate>
                        </rowUrl>
                    </arguments>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="report_date">
                        <arguments>
                            <header translate="true">Report Date</header>
                            <index>report_date</index>
                            <type>date</type>
                            <header_css_class>col-date</header_css_class>
                            <column_css_class>col-date</column_css_class>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="account_id">
                        <arguments>
                            <header translate="true">Merchant Account</header>
                            <index>account_id</index>
                            <header_css_class>col-merchant</header_css_class>
                            <column_css_class>col-merchant</column_css_class>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="transaction_id">
                        <arguments>
                            <header translate="true">Transaction ID</header>
                            <index>transaction_id</index>
                            <header_css_class>col-transaction</header_css_class>
                            <column_css_class>col-transaction</column_css_class>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="invoice_id">
                        <arguments>
                            <header translate="true">Invoice ID</header>
                            <index>invoice_id</index>
                            <header_css_class>col-invoice</header_css_class>
                            <column_css_class>col-invoice</column_css_class>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="paypal_reference_id">
                        <arguments>
                            <header translate="true">PayPal Reference ID</header>
                            <index>paypal_reference_id</index>
                            <header_css_class>col-reference</header_css_class>
                            <column_css_class>col-reference</column_css_class>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="transaction_event_code">
                        <arguments>
                            <header translate="true">Event</header>
                            <index>transaction_event_code</index>
                            <type>options</type>
                            <options type="options">Magento_Paypal_Model_Resource_Report_Settlement_Options_TransactionEvents</options>
                            <header_css_class>ol-event</header_css_class>
                            <column_css_class>ol-event</column_css_class>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="transaction_initiation_date">
                        <arguments>
                            <header translate="true">Start Date</header>
                            <index>transaction_initiation_date</index>
                            <type>datetime</type>
                            <header_css_class>col-initiation</header_css_class>
                            <column_css_class>col-initiation</column_css_class>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="transaction_completion_date">
                        <arguments>
                            <header translate="true">Finish Date</header>
                            <index>transaction_completion_date</index>
                            <type>datetime</type>
                            <header_css_class>col-completion</header_css_class>
                            <column_css_class>col-completion</column_css_class>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="gross_transaction_amount">
                        <arguments>
                            <header translate="true">Gross Amount</header>
                            <index>gross_transaction_amount</index>
                            <type>currency</type>
                            <currency>gross_transaction_currency</currency>
                            <header_css_class>col-amount</header_css_class>
                            <column_css_class>col-amount</column_css_class>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="fee_amount">
                        <arguments>
                            <header translate="true">Fee Amount</header>
                            <index>fee_amount</index>
                            <type>currency</type>
                            <currency>gross_transaction_currency</currency>
                            <header_css_class>col-fee-amount</header_css_class>
                            <column_css_class>col-fee-amount</column_css_class>
                        </arguments>
                    </block>
                </block>
            </block>
        </reference>
    </handle>
</layout>
