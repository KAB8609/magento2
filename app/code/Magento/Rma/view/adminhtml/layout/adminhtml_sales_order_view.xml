<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="adminhtml_sales_order_view">
        <reference name="sales_order_tabs">
            <block class="Magento_Rma_Block_Adminhtml_Order_View_Tab_Rma" name="magento_rma_order_view_tab_rma" after="order_shipments">
                <block class="Magento_Rma_Block_Adminhtml_Rma" name="magento_rma"/>
            </block>
            <action method="addTabAfter">
                <name>order_rma</name>
                <block>magento_rma_order_view_tab_rma</block>
                <after>order_shipments</after>
            </action>
        </reference>
        <reference name="sales_order_edit">
            <block class="Magento_Rma_Block_Adminhtml_Order_View_Buttons" name="rma_buttons">
                <action method="addButtons"/>
            </block>
        </reference>
    </handle>
</layout>
