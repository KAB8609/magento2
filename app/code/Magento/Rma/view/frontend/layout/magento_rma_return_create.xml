<layout version="0.1.0">
    <magento_rma_return_create translate="label" type="page" parent="magento_rma_return_create_handle">
        <label>Customer My Return Create</label>
        <update handle="customer_account"/>
        <reference name="customer_account_navigation">
            <action method="setActive">
                <path>rma/return/history/</path>
            </action>
        </reference>
        <reference name="my.account.wrapper">
            <block type="Magento_Rma_Block_Return_Create" as="create" name="rma.return.create" template="return/create.phtml">
                <action method="setFormCode">
                    <code>default</code>
                </action>
                <action method="setEntityModelClass">
                    <code>Magento_Rma_Model_Item</code>
                </action>
            </block>
        </reference>
        <update handle="magento_rma_return_create_handle"/>
    </magento_rma_return_create>
</layout>
