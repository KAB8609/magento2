<layout version="0.1.0">
    <magento_rma_return_view translate="label" type="page" parent="magento_rma_return_view_handle">
        <label>Customer My Account Return View</label>
        <reference name="customer_account_navigation">
            <action method="setActive">
                <path>rma/return/history/</path>
            </action>
        </reference>
        <update handle="customer_account"/>
        <reference name="my.account.wrapper">
            <block type="Magento_Rma_Block_Return_View" name="rma.return.history">
                <container name="rma.return.history.info" as="info" label="Customer My Account Return View"/>
            </block>
            <block type="Magento_Rma_Block_Return_View" name="customer.account.link.back" template="Magento_Customer::account/link/back.phtml"/>
        </reference>
        <update handle="magento_rma_return_view_handle"/>
        <block type="Magento_Rma_Block_Return_Tracking" name="rma.return.tracking" as="tracking"/>
    </magento_rma_return_view>
</layout>
