<layout version="0.1.0">
    <magento_rma_guest_view translate="label" type="page" parent="magento_rma_return_view_handle">
        <label>Guest Order View Return</label>
        <reference name="root">
            <action method="setTemplate">
                <template>1column.phtml</template>
            </action>
        </reference>
        <update handle="customer_account"/>
        <reference name="content">
            <block type="Magento_Rma_Block_Return_Info" as="info" name="sales.order.info">
                <block type="Magento_Sales_Block_Order_Info_Buttons" as="buttons" name="sales.order.info.buttons">
                    <block type="Magento_Rma_Block_Order_Button" name="enterprise.rma.info.button" template="order/button.phtml"/>
                </block>
            </block>
            <block type="Magento_Rma_Block_Return_View" name="rma.return.history">
                <container name="rma.return.history.info" as="info" label="View Return"/>
            </block>
            <block type="Magento_Rma_Block_Return_View" name="customer.account.link.back" template="Magento_Customer::account/link/back.phtml"/>
        </reference>
        <update handle="magento_rma_return_view_handle"/>
        <reference name="sales.order.info">
            <action method="addLink" translate="label" module="Magento_Sales">
                <name>view</name>
                <path>sales/guest/view</path>
                <label>Order Information</label>
            </action>
            <action method="addLink" translate="label" module="Magento_Sales">
                <name>invoice</name>
                <path>sales/guest/invoice</path>
                <label>Invoices</label>
            </action>
            <action method="addLink" translate="label" module="Magento_Sales">
                <name>shipment</name>
                <path>sales/guest/shipment</path>
                <label>Shipments</label>
            </action>
            <action method="addLink" translate="label" module="Magento_Sales">
                <name>creditmemo</name>
                <path>sales/guest/creditmemo</path>
                <label>Refunds</label>
            </action>
            <action method="addLink" translate="label" module="Magento_Sales">
                <name>returns</name>
                <path/>
                <label>Returns</label>
            </action>
        </reference>
        <block type="Magento_Rma_Block_Return_Tracking" name="rma.return.tracking" as="tracking"/>
    </magento_rma_guest_view>
</layout>
