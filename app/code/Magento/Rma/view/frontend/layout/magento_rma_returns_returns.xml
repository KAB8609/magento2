<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" label="Customer My Account Order Returns View" type="page">
    <update handle="customer_account"/>
    <referenceContainer name="my.account.wrapper">
        <block class="Magento\Sales\Block\Order\Info" as="info" name="sales.order.info">
            <block class="Magento\Sales\Block\Order\Info\Buttons" as="buttons" name="sales.order.info.buttons">
                <block class="Magento\Rma\Block\Order\Button" name="magento.rma.info.button" template="order/button.phtml"/>
            </block>
        </block>
        <block class="Magento\Rma\Block\Returns\Returns" name="rma.returns.returns"/>
    </referenceContainer>
    <update handle="sales_order_info_rma_links"/>
</layout>
