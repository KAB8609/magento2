<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" label="Guest Order Returns View" type="page" parent="magento_rma_guest_view">
    <reference name="root">
        <action method="setTemplate">
            <argument name="template" xsi:type="string">1column.phtml</argument>
        </action>
    </reference>
    <reference name="content">
        <block class="Magento\Sales\Block\Order\Info" as="info" name="sales.order.info">
            <block class="Magento\Sales\Block\Order\Info\Buttons" as="buttons" name="sales.order.info.buttons">
                <block class="Magento\Rma\Block\Order\Button" name="magento.rma.info.button" template="order/button.phtml"/>
            </block>
        </block>
        <block class="Magento\Rma\Block\Returns\Returns" name="rma.return.returns"/>
    </reference>
    <update handle="sales_order_info_rma_guest_links"/>
</layout>
