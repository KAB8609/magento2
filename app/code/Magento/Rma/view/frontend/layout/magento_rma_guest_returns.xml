<layout version="0.1.0">
    <magento_rma_guest_returns translate="label" type="page" parent="magento_rma_guest_view">
        <label>Guest Order Returns View</label>
        <reference name="root">
            <action method="setTemplate">
                <template>1column.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <block type="Magento_Rma_Block_Return_Info" as="info" name="sales.order.info">
                <block type="Magento_Sales_Block_Order_Info_Buttons" as="buttons" name="sales.order.info.buttons">
                    <block type="Magento_Rma_Block_Order_Button" name="enterprise.rma.info.button" template="order/button.phtml"/>
                </block>
            </block>
            <block type="Magento_Rma_Block_Return_Returns" name="rma.return.returns"/>
        </reference>
        <reference name="sales.order.info">
            <action method="addLink" translate="label">
                <name>view</name>
                <path>sales/guest/view</path>
                <label>Order Information</label>
            </action>
            <action method="addLink" translate="label">
                <name>invoice</name>
                <path>sales/guest/invoice</path>
                <label>Invoices</label>
            </action>
            <action method="addLink" translate="label">
                <name>shipment</name>
                <path>sales/guest/shipment</path>
                <label>Shipments</label>
            </action>
            <action method="addLink" translate="label">
                <name>creditmemo</name>
                <path>sales/guest/creditmemo</path>
                <label>Refunds</label>
            </action>
            <action method="addLink" translate="label">
                <name>returns</name>
                <path/>
                <label>Returns</label>
            </action>
        </reference>
    </magento_rma_guest_returns>
</layout>
