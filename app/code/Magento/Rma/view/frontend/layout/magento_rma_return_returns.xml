<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" label="Customer My Account Order Returns View" type="page" parent="magento_rma_return_view">
    <update handle="customer_account"/>
    <referenceContainer name="my.account.wrapper">
        <block class="Magento_Sales_Block_Order_Info" as="info" name="sales.order.info">
            <block class="Magento_Sales_Block_Order_Info_Buttons" as="buttons" name="sales.order.info.buttons">
                <block class="Magento_Rma_Block_Order_Button" name="magento.rma.info.button" template="order/button.phtml"/>
            </block>
        </block>
        <block class="Magento_Rma_Block_Return_Returns" name="rma.return.returns"/>
    </referenceContainer>
    <update handle="sales_order_info_rma_links"/>
</layout>
