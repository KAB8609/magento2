<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="magento_rma_return_returns" translate="label" type="page" parent="magento_rma_return_view">
        <label>Customer My Account Order Returns View</label>
        <update handle="customer_account"/>
        <reference name="my.account.wrapper">
            <block class="Magento_Sales_Block_Order_Info" as="info" name="sales.order.info">
                <block class="Magento_Sales_Block_Order_Info_Buttons" as="buttons" name="sales.order.info.buttons">
                    <block class="Magento_Rma_Block_Order_Button" name="enterprise.rma.info.button" template="order/button.phtml"/>
                </block>
            </block>
            <block class="Magento_Rma_Block_Return_Returns" name="rma.return.returns"/>
        </reference>
        <reference name="sales.order.info">
            <action method="addLink" translate="label" module="Magento_Sales">
                <argument name="name" xsi:type="string">view</argument>
                <argument name="path" xsi:type="string">sales/order/view</argument>
                <argument name="label" xsi:type="string">Order Information</argument>
            </action>
            <action method="addLink" translate="label" module="Magento_Sales">
                <argument name="name" xsi:type="string">invoice</argument>
                <argument name="path" xsi:type="string">sales/order/invoice</argument>
                <argument name="label" xsi:type="string">Invoices</argument>
            </action>
            <action method="addLink" translate="label" module="Magento_Sales">
                <argument name="name" xsi:type="string">shipment</argument>
                <argument name="path" xsi:type="string">sales/order/shipment</argument>
                <argument name="label" xsi:type="string">Shipments</argument>
            </action>
            <action method="addLink" translate="label" module="Magento_Sales">
                <argument name="name" xsi:type="string">creditmemo</argument>
                <argument name="path" xsi:type="string">sales/order/creditmemo</argument>
                <argument name="label" xsi:type="string">Refunds</argument>
            </action>
            <action method="addLink" translate="label" module="Magento_Sales">
                <argument name="name" xsi:type="string">returns</argument>
                <argument name="path" xsi:type="string"/>
                <argument name="label" xsi:type="string">Returns</argument>
            </action>
        </reference>
    </handle>
</layout>
