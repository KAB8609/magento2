<logging xsi:noNamespaceSchemaLocation="../../../Magento/Logging/etc/logging.xsd"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" >
    <event id="magento_customerbalance" >
        <label translate="true" >Store Credit</label >
        <handle name="adminhtml_customerbalance_form" action="view" >
            <expected_model class="Magento_CustomerBalance_Model_Balance" />
        </handle >
    </event >
    <event id="customer" >
        <label translate="true" />
        <handle name="adminhtml_customer_save" skip_on_back="adminhtml_customerbalance_form adminhtml_customer_edit "
                extends_expected_models="true" >
            <expected_model class="Magento_CustomerBalance_Model_Balance" />
        </handle >
    </event >
</logging >