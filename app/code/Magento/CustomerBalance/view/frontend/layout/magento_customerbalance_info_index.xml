<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="magento_customerbalance_info_index" translate="label" type="page" parent="customer_account_index">
        <label>Customer My Account Store Credit</label>
        <update handle="customer_account"/>
        <reference name="my.account.wrapper">
            <block class="Magento_Core_Block_Template" name="customerbalance.wrapper" template="Magento_CustomerBalance::account/wrapper.phtml" translate="label">
                <label>Store Credit Balance and History Wrapper</label>
                <block class="Magento_CustomerBalance_Block_Account_Balance" name="balance" template="account/balance.phtml" before="-"/>
                <block class="Magento_CustomerBalance_Block_Account_History" name="history" template="account/history.phtml" after="-"/>
            </block>
        </reference>
    </handle>
</layout>
