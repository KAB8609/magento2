    <referenceContainer name="my.account.wrapper">
        <block class="Magento\View\Block\Template" name="customerbalance.wrapper" template="Magento_CustomerBalance::account/wrapper.phtml">
            <block class="Magento\CustomerBalance\Block\Account\Balance" name="balance" template="account/balance.phtml" before="-"/>
            <block class="Magento\CustomerBalance\Block\Account\History" name="history" template="account/history.phtml" after="-"/>
        </block>
    </referenceContainer>
</layout>
