<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="sales_email_order_items">
        <reference name="order_totals">
            <block class="Magento_CustomerBalance_Block_Sales_Order_Customerbalance" name="customerbalance" template="order/customerbalance.phtml"/>
            <block class="Magento_CustomerBalance_Block_Sales_Order_Customerbalance" name="customerbalance_total_refunded" template="order/customerbalance_refunded.phtml" after="-">
                <action method="setAfterTotal">
                    <value>grand_total</value>
                </action>
            </block>
        </reference>
    </handle>
</layout>
