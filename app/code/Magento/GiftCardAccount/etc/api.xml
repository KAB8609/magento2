<config>
    <api>
        <resources>
            <giftcard_account translate="title" module="Magento_GiftCardAccount">
                <model>Magento_GiftCardAccount_Model_Api</model>
                <title>GiftCard Account API</title>
                <acl>giftcard_account</acl>
                <methods>
                    <list translate="title" module="Magento_GiftCard">
                        <title>Retrieve gift card accounts list</title>
                        <method>items</method>
                        <acl>giftcard_account/list</acl>
                    </list>
                    <info translate="title" module="Magento_GiftCard">
                        <title>Retrieve full gift card account info</title>
                        <acl>giftcard_account/info</acl>
                    </info>
                    <create translate="title" module="Magento_GiftCardAccount">
                        <title>Create a gift card account</title>
                        <acl>magento_giftcardaccount/create</acl>
                    </create>
                    <update translate="title" module="Magento_GiftCard">
                        <title>Update gift card account info</title>
                        <acl>giftcard_account/update</acl>
                    </update>
                    <remove translate="title" module="Magento_GiftCardAccount">
                        <title>Remove this gift card account</title>
                        <acl>magento_giftcardaccount/remove</acl>
                    </remove>
                </methods>
                <faults>
                    <not_exists>
                        <code>100</code>
                        <message>Gift card account does not exist.</message>
                    </not_exists>
                    <filters_invalid>
                        <code>101</code>
                        <message>Specified filters are invalid. Details are in error message.</message>
                    </filters_invalid>
                    <unable_to_save>
                        <code>102</code>
                        <message>Unable to save data.</message>
                    </unable_to_save>
                    <invalid_notification_data>
                        <code>104</code>
                        <message>Provided email notification data is invalid.</message>
                    </invalid_notification_data>
                    <invalid_giftcardaccount_data>
                        <code>105</code>
                        <message>Provided gift card account data is invalid.</message>
                    </invalid_giftcardaccount_data>
                    <giftcard_account_not_found_by_id>
                        <code>106</code>
                        <message>Gift card account with requested ID does not exist.</message>
                    </giftcard_account_not_found_by_id>
                    <delete_error>
                        <code>107</code>
                        <message>Error occurred while deleting gift card.</message>
                    </delete_error>
                </faults>
            </giftcard_account>
        </resources>
        <v2>
            <resources_function_prefix>
                <giftcard_account>giftcardAccount</giftcard_account>
            </resources_function_prefix>
        </v2>
        <acl>
            <resources>
                <giftcard_account translate="title" module="Magento_GiftCardAccount">
                    <title>Gift Card Account</title>
                    <sort_order>1</sort_order>
                    <list translate="title" module="Magento_GiftCardAccount">
                        <title>Retrieve gift card accounts list</title>
                    </list>
                    <info translate="title" module="Magento_GiftCardAccount">
                        <title>Retrieve full gift card account info</title>
                    </info>
                    <create translate="title" module="Magento_GiftCardAccount">
                        <title>Create</title>
                    </create>
                    <update translate="title" module="Magento_GiftCardAccount">
                        <title>Update gift card info</title>
                    </update>
                    <remove translate="title" module="Magento_GiftCardAccount">
                        <title>Remove</title>
                    </remove>
                </giftcard_account>
            </resources>
        </acl>
    </api>
</config>
