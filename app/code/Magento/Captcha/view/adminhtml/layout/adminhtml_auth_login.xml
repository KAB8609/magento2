<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="adminhtml_auth_login">
        <reference name="form.additional.info">
            <block class="Magento_Captcha_Block_Captcha" name="captcha">
                <action method="setFormId">
                    <formId>backend_login</formId>
                </action>
                <action method="setImgWidth">
                    <width>226</width>
                </action>
                <action method="setImgHeight">
                    <width>50</width>
                </action>
            </block>
        </reference>
    </handle>
</layout>
