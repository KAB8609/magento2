<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="default">
        <reference name="right">
            <block class="Magento_Poll_Block_ActivePoll" name="right.poll">
                <action method="setPollTemplate">
                    <template>active.phtml</template>
                    <type>poll</type>
                </action>
                <action method="setPollTemplate">
                    <template>result.phtml</template>
                    <type>results</type>
                </action>
            </block>
        </reference>
    </handle>
</layout>
