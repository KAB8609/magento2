<?php if (isset($poll)) : ?>
<div class="block block-poll">
    <div class="block-title">
        <strong><span><?php echo __('Community Poll') ?></span></strong>
    </div>
    <form id="pollForm" action="<?php echo $action ?>" method="post">
        <div class="block-content">
            <p class="block-subtitle"><?php echo $this->escapeHtml($poll->getPollTitle()); ?></p>
            <?php if ($poll_answers): ?>
            <ul id="poll-answers">
                <?php foreach ($poll_answers as $answer): ?>
                <li>
                    <input type="radio" name="vote" class="radio poll_vote" id="vote_<?php echo $answer->getId() ?>"
