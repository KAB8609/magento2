            <script type="text/javascript">
                //<![CDATA[
                (function($) {
                    head.js("<?php echo $this->getViewFileUrl('Magento_Poll::poll.js')?>", function() {
                        $('#pollForm').poll({pollAnswersSelector: '#poll-answers', pollCheckedOption: 'input.poll_vote:checked'});
                    });
                })(jQuery);
                //]]>
            </script>
            <?php endif; ?>
            <div class="actions">
                <button type="submit" title="<?php echo __('Vote') ?>" class="button">
                    <span><span><?php echo __('Vote') ?></span></span></button>
            </div>
        </div>
    </form>
</div>
