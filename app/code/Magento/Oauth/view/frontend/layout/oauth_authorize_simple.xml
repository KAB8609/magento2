<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="oauth_authorize_simple" translate="label" type="page" parent="default">
        <update handle="oauth_root_handle_simple"/>
        <remove name="header"/>
        <label>OAuth authorization Pop Up for customer</label>
        <reference name="content">
            <block class="Magento_Oauth_Block_Authorize" name="oauth.authorize.form" template="authorize/form/login-simple.phtml"/>
            <block class="Magento_Oauth_Block_Authorize_Button" name="oauth.authorize.button" template="authorize/button-simple.phtml"/>
        </reference>
    </handle>
</layout>
