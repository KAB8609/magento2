<layout version="0.1.0">
    <oauth_root_handle_simple>
        <remove name="js_cookie"/>
        <block type="Mage_Page_Block_Html" name="root" output="1" template="empty.phtml">
            <block type="Mage_Page_Block_Html_Head" name="head" as="head" template="Magento_Oauth::authorize/head-simple.phtml">
                <action method="addCss">
                    <stylesheet>Magento_Oauth::css/oauth-simple.css</stylesheet>
                </action>
            </block>
            <container name="content" label="Content"/>
        </block>
    </oauth_root_handle_simple>
</layout>
