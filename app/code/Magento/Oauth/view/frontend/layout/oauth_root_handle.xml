        <reference name="root">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">1column.phtml</argument>
            </action>
        </reference>
        <reference name="head">
            <action method="removeItem">
                <argument name="type" xsi:type="string">js</argument>
                <argument name="name" xsi:type="string">lib/ccard.js</argument>
            </action>
            <action method="removeItem">
                <argument name="type" xsi:type="string">js</argument>
                <argument name="name" xsi:type="string">scriptaculous/controls.js</argument>
            </action>
            <action method="removeItem">
                <argument name="type" xsi:type="string">js</argument>
                <argument name="name" xsi:type="string">scriptaculous/builder.js</argument>
            </action>
            <action method="removeItem">
                <argument name="type" xsi:type="string">js</argument>
                <argument name="name" xsi:type="string">scriptaculous/dragdrop.js</argument>
            </action>
            <action method="removeItem">
                <argument name="type" xsi:type="string">js</argument>
                <argument name="name" xsi:type="string">scriptaculous/controls.js</argument>
            </action>
            <action method="removeItem">
                <argument name="type" xsi:type="string">js</argument>
                <argument name="name" xsi:type="string">scriptaculous/slider.js</argument>
            </action>
            <action method="removeItem">
                <argument name="type" xsi:type="string">js</argument>
                <argument name="name" xsi:type="string">varien/js.js</argument>
            </action>
            <action method="removeItem">
                <argument name="type" xsi:type="string">js</argument>
                <argument name="name" xsi:type="string">varien/menu.js</argument>
            </action>
        </reference>
        <remove name="top.links"/>
        <remove name="top.search"/>
        <remove name="top.menu"/>
        <remove name="footer"/>
    </handle>
</layout>
