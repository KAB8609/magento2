<config>
    <global>
        <resources>
            <widget_setup>
                <setup>
                    <module>Magento_Widget</module>
                </setup>
            </widget_setup>
        </resources>
        <cms>
            <page>
                <tempate_filter>Magento_Widget_Model_Template_Filter</tempate_filter>
            </page>
            <block>
                <tempate_filter>Magento_Widget_Model_Template_Filter</tempate_filter>
            </block>
        </cms>
        <widget>
            <related_cache_types>
                <block_html />
                <layout />
            </related_cache_types>
        </widget>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <Magento_Widget>
                    <files>
                        <default>Magento_Widget.csv</default>
                    </files>
                </Magento_Widget>
            </modules>
        </translate>
        <events>
            <cms_wysiwyg_config_prepare>
                <observers>
                    <widget_observer>
                        <class>Magento_Widget_Model_Observer</class>
                        <method>prepareWidgetsPluginConfig</method>
                    </widget_observer>
                </observers>
            </cms_wysiwyg_config_prepare>
        </events>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <widget before="Magento_Adminhtml">Magento_Widget_Adminhtml</widget>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
</config>
