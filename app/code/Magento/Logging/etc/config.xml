<config>
    <global>
        <resources>
            <logging_setup>
                <setup>
                    <module>Magento_Logging</module>
                    <class>Magento\Core\Model\Resource\Setup</class>
                </setup>
            </logging_setup>
        </resources>
    </global>
    <adminhtml>
        <enterprise>
            <logging>
                <skip_fields>updated_at,form_key</skip_fields>
            </logging>
        </enterprise>
    </adminhtml>
    <default>
        <system>
            <rotation translate="frequency">
                <frequency>1</frequency>
                <lifetime>60</lifetime>
            </rotation>
        </system>
    </default>
    <crontab>
        <jobs>
            <magento_logging_rotate_logs>
                <schedule>
                    <cron_expr>1 2 * * *</cron_expr>
                </schedule>
                <run>
                    <model>Magento\Logging\Model\Observer::rotateLogs</model>
                </run>
            </magento_logging_rotate_logs>
        </jobs>
    </crontab>
</config>
