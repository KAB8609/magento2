<layout version="0.1.0">
    <adminhtml_logging_block>
        <reference name="adminhtml.logging.grid.container">
            <block type="Magento_Backend_Block_Widget_Grid" name="logging.grid" as="grid">
                <arguments>
                    <id>loggingLogGrid</id>
                    <dataSource type="object">Magento_Logging_Model_Resource_Event_Collection</dataSource>
                    <default_sort>time</default_sort>
                    <default_dir>DESC</default_dir>
                    <save_parameters_in_session>1</save_parameters_in_session>
                    <use_ajax>1</use_ajax>
                    <grid_url type="url">
                        <path>*/*/grid</path>
                        <params>
                            <_current>1</_current>
                        </params>
                    </grid_url>
                </arguments>
                <block type="Magento_Backend_Block_Widget_Grid_Export" name="logging.grid.export" as="grid.export">
                    <arguments>
                        <exportTypes>
                            <csv>
                                <urlPath>*/*/exportCsv</urlPath>
                                <label translate="true">CSV</label>
                            </csv>
                            <excel>
                                <urlPath>*/*/exportXml</urlPath>
                                <label translate="true">Excel XML</label>
                            </excel>
                        </exportTypes>
                    </arguments>
                </block>
                <block type="Magento_Backend_Block_Widget_Grid_ColumnSet" name="adminhtml.logging.archive.grid.columnSet" as="grid.columnSet">
                    <arguments>
                        <rowUrl>
                            <path>*/*/details</path>
                            <extraParamsTemplate>
                                <event_id>getId</event_id>
                            </extraParamsTemplate>
                        </rowUrl>
                    </arguments>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="time">
                        <arguments>
                            <header translate="true">Time</header>
                            <index>time</index>
                            <type>datetime</type>
                            <wwidth>160</wwidth>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="event">
                        <arguments>
                            <header translate="true">Action Group</header>
                            <index>event_code</index>
                            <type>options</type>
                            <sortable>0</sortable>
                            <options type="options">Magento_Logging_Model_Resource_Grid_ActionsGroup</options>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="action">
                        <arguments>
                            <header translate="true">Action</header>
                            <index>action</index>
                            <type>options</type>
                            <sortable>0</sortable>
                            <options type="options">Magento_Logging_Model_Resource_Grid_Actions</options>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="ip">
                        <arguments>
                            <header translate="true">IP Address</header>
                            <index>ip</index>
                            <type>text</type>
                            <filter>Magento_Logging_Block_Adminhtml_Grid_Filter_Ip</filter>
                            <renderer>Magento_Adminhtml_Block_Widget_Grid_Column_Renderer_Ip</renderer>
                            <sortable>0</sortable>
                            <width>125</width>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="user">
                        <arguments>
                            <header translate="true">Username</header>
                            <index>user</index>
                            <type>text</type>
                            <escape>1</escape>
                            <filter>Magento_Logging_Block_Adminhtml_Grid_Filter_User</filter>
                            <sortable>0</sortable>
                            <width>150</width>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="status">
                        <arguments>
                            <header translate="true">Result</header>
                            <index>status</index>
                            <type>options</type>
                            <options type="options">Magento_Logging_Model_Resource_Grid_Statuses</options>
                            <sortable>0</sortable>
                            <width>100</width>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="fullaction">
                        <arguments>
                            <header translate="true">Full Action Name</header>
                            <index>fullaction</index>
                            <type>text</type>
                            <sortable>0</sortable>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="info">
                        <arguments>
                            <header translate="true">Short Details</header>
                            <index>info</index>
                            <type>text</type>
                            <sortable>0</sortable>
                            <filter>Magento_Adminhtml_Block_Widget_Grid_Column_Filter_Text</filter>
                            <renderer>Magento_Logging_Block_Adminhtml_Grid_Renderer_Details</renderer>
                            <width>100</width>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="view">
                        <arguments>
                            <header translate="true">Full Details</header>
                            <index>info</index>
                            <sortable>0</sortable>
                            <width>50</width>
                            <type>action</type>
                            <getter>getId</getter>
                            <actions>
                                <view_action>
                                    <caption translate="true">View</caption>
                                    <url>
                                        <base>*/*/details</base>
                                    </url>
                                    <field>event_id</field>
                                </view_action>
                            </actions>
                            <filter>0</filter>
                        </arguments>
                    </block>
                </block>
            </block>
        </reference>
    </adminhtml_logging_block>
</layout>
