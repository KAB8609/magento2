<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="adminhtml_logging_archive_grid_block">
        <reference name="adminhtml.logging.archive.grid.container">
            <block class="Magento_Backend_Block_Widget_Grid" name="adminhtml.logging.archive.grid" as="grid">
                <arguments>
                    <argument name="id" xsi:type="string">loggingArchiveGrid</argument>
                    <argument name="dataSource" xsi:type="string">Magento_Logging_Model_Archive_Collection</argument>
                    <argument name="default_sort" xsi:type="string">basename</argument>
                    <argument name="default_dir" xsi:type="string">DESC</argument>
                    <argument name="save_parameters_in_session" xsi:type="string">1</argument>
                    <argument name="use_ajax" xsi:type="string">1</argument>
                    <argument name="grid_url" xsi:type="url" path="*/*/archiveGrid">
                        <param name="_current">1</param>
                    </argument>
                </arguments>
                <block class="Magento_Backend_Block_Widget_Grid_ColumnSet" name="adminhtml.logging.archive.grid.columnSet" as="grid.columnSet">
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="download">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Archive File</argument>
                            <argument name="index" xsi:type="string">basename</argument>
                            <argument name="renderer" xsi:type="string">Magento_Logging_Block_Adminhtml_Grid_Renderer_Download</argument>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="date">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Date</argument>
                            <argument name="index" xsi:type="string">time</argument>
                            <argument name="type" xsi:type="string">date</argument>
                            <argument name="filter" xsi:type="string">Magento_Logging_Block_Adminhtml_Archive_Grid_Filter_Date</argument>
                        </arguments>
                    </block>
                </block>
            </block>
        </reference>
    </handle>
</layout>
