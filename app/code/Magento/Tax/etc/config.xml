<config>
    <global>
        <resources>
            <tax_setup>
                <setup>
                    <module>Magento_Tax</module>
                    <class>Magento\Tax\Model\Resource\Setup</class>
                </setup>
            </tax_setup>
        </resources>
        <sales>
            <quote>
                <totals>
                    <tax_subtotal>
                        <class>Magento\Tax\Model\Sales\Total\Quote\Subtotal</class>
                        <after>freeshipping</after>
                        <before>tax,discount</before>
                    </tax_subtotal>
                    <tax_shipping>
                        <class>Magento\Tax\Model\Sales\Total\Quote\Shipping</class>
                        <after>shipping</after>
                        <before>tax,discount</before>
                    </tax_shipping>
                    <tax>
                        <class>Magento\Tax\Model\Sales\Total\Quote\Tax</class>
                        <after>subtotal,shipping</after>
                        <before>grand_total</before>
                        <renderer>Magento\Tax\Block\Checkout\Tax</renderer>
                        <admin_renderer>Magento\Adminhtml\Block\Sales\Order\Create\Totals\Tax</admin_renderer>
                    </tax>
                    <subtotal>
                        <renderer>Magento\Tax\Block\Checkout\Subtotal</renderer>
                        <admin_renderer>Magento\Adminhtml\Block\Sales\Order\Create\Totals\Subtotal</admin_renderer>
                    </subtotal>
                    <shipping>
                        <renderer>Magento\Tax\Block\Checkout\Shipping</renderer>
                        <admin_renderer>Magento\Adminhtml\Block\Sales\Order\Create\Totals\Shipping</admin_renderer>
                    </shipping>
                    <discount>
                        <renderer>Magento\Tax\Block\Checkout\Discount</renderer>
                        <admin_renderer>Magento\Adminhtml\Block\Sales\Order\Create\Totals\Discount</admin_renderer>
                    </discount>
                    <grand_total>
                        <renderer>Magento\Tax\Block\Checkout\Grandtotal</renderer>
                        <admin_renderer>Magento\Adminhtml\Block\Sales\Order\Create\Totals\Grandtotal</admin_renderer>
                    </grand_total>
                </totals>
                <nominal_totals>
                    <nominal_tax_subtotal>
                        <class>Magento\Tax\Model\Sales\Total\Quote\Nominal\Subtotal</class>
                        <sort_order>500</sort_order>
                    </nominal_tax_subtotal>
                    <nominal_tax>
                        <class>Magento\Tax\Model\Sales\Total\Quote\Nominal\Tax</class>
                        <sort_order>750</sort_order>
                    </nominal_tax>
                </nominal_totals>
            </quote>
        </sales>
        <pdf>
            <totals>
                <subtotal>
                    <model>Magento\Tax\Model\Sales\Pdf\Subtotal</model>
                </subtotal>
                <shipping>
                    <model>Magento\Tax\Model\Sales\Pdf\Shipping</model>
                </shipping>
                <grand_total>
                    <model>Magento\Tax\Model\Sales\Pdf\Grandtotal</model>
                </grand_total>
                <tax translate="title">
                    <title>Tax</title>
                    <source_field>tax_amount</source_field>
                    <model>Magento\Tax\Model\Sales\Pdf\Tax</model>
                    <font_size>7</font_size>
                    <display_zero>0</display_zero>
                    <sort_order>300</sort_order>
                </tax>
            </totals>
        </pdf>
    </global>
    <default>
        <tax>
            <classes>
                <shipping_tax_class />
            </classes>
            <calculation>
                <algorithm>TOTAL_BASE_CALCULATION</algorithm>
                <apply_after_discount>0</apply_after_discount>
                <discount_tax>0</discount_tax>
                <based_on>shipping</based_on>
                <price_includes_tax>0</price_includes_tax>
                <shipping_includes_tax>0</shipping_includes_tax>
                <discount_tax>0</discount_tax>
                <apply_tax_on>0</apply_tax_on>
            </calculation>
            <defaults>
                <country>US</country>
                <region>0</region>
                <postcode>*</postcode>
            </defaults>
            <display>
                <type>1</type>
                <shipping>1</shipping>
            </display>
            <cart_display>
                <price>1</price>
                <subtotal>1</subtotal>
                <shipping>1</shipping>
                <discount>1</discount>
                <grandtotal>0</grandtotal>
                <full_summary>0</full_summary>
                <zero_tax>0</zero_tax>
            </cart_display>
            <sales_display>
                <price>1</price>
                <subtotal>1</subtotal>
                <shipping>1</shipping>
                <discount>1</discount>
                <grandtotal>0</grandtotal>
                <full_summary>0</full_summary>
                <zero_tax>0</zero_tax>
            </sales_display>
        </tax>
    </default>
</config>
