<config>
    <global>
        <resources>
            <banner_setup>
                <setup>
                    <module>Magento_Banner</module>
                    <class>Magento_Banner_Model_Resource_Setup</class>
                </setup>
            </banner_setup>
        </resources>
        <magento>
            <banner>
                <types translate="content footer header leftcol rightcol">
                    <content>Content Area</content>
                    <footer>Footer</footer>
                    <header>Header</header>
                    <leftcol>Left Column</leftcol>
                    <rightcol>Right Column</rightcol>
                </types>
            </banner>
        </magento>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <magento_banner before="Magento_Adminhtml">Magento_Banner_Adminhtml</magento_banner>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <translate>
            <modules>
                <Magento_Banner>
                    <files>
                        <default>Magento_Banner.csv</default>
                    </files>
                </Magento_Banner>
            </modules>
        </translate>
        <events>
            <adminhtml_controller_catalogrule_prepare_save>
                <observers>
                    <magento_banner>
                        <class>Magento_Banner_Model_Observer</class>
                        <method>prepareCatalogRuleSave</method>
                    </magento_banner>
                </observers>
            </adminhtml_controller_catalogrule_prepare_save>
            <catalogrule_rule_save_after>
                <observers>
                    <magento_banner>
                        <class>Magento_Banner_Model_Observer</class>
                        <method>bindRelatedBannersToCatalogRule</method>
                    </magento_banner>
                </observers>
            </catalogrule_rule_save_after>
            <adminhtml_controller_salesrule_prepare_save>
                <observers>
                    <magento_banner>
                        <class>Magento_Banner_Model_Observer</class>
                        <method>prepareSalesRuleSave</method>
                    </magento_banner>
                </observers>
            </adminhtml_controller_salesrule_prepare_save>
            <salesrule_rule_save_after>
                <observers>
                    <magento_banner>
                        <class>Magento_Banner_Model_Observer</class>
                        <method>bindRelatedBannersToSalesRule</method>
                    </magento_banner>
                </observers>
            </salesrule_rule_save_after>
        </events>
    </adminhtml>
</config>
