<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <referenceBlock name="promo_quote_edit_tabs">
        <block class="Magento_Banner_Block_Adminhtml_Promo_Salesrule_Edit_Tab_Banners" name="salesrule.related.banners">
            <block class="Magento_Banner_Block_Adminhtml_Promo_Salesrule_Edit_Tab_Banners_Grid" name="related_salesrule_banners_grid"/>
            <block class="Magento_Adminhtml_Block_Widget_Grid_Serializer" name="banners_grid_serializer">
                <arguments>
                    <argument name="grid_block" xsi:type="string">related_salesrule_banners_grid</argument>
                    <argument name="callback" xsi:type="string">getRelatedBannersByRule</argument>
                    <argument name="input_element_name" xsi:type="string">related_banners</argument>
                    <argument name="reload_param_name" xsi:type="string">selected_salesrule_banners</argument>
                </arguments>
            </block>
        </block>
        <action method="addTab">
            <argument name="name" xsi:type="string">banners_section</argument>
            <argument name="block" xsi:type="string">salesrule.related.banners</argument>
        </action>
        <block class="Magento_Banner_Block_Adminhtml_Permission_Monitor" name="bannner.permission.monitor"/>
    </referenceBlock>
</layout>
