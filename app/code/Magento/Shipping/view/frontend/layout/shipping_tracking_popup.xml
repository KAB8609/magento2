<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="shipping_tracking_popup" translate="label" type="page" parent="default">
        <label>Shipment Tracking Popup</label>
        <reference name="root">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">popup.phtml</argument>
            </action>
        </reference>
        <reference name="content">
            <block class="Magento_Shipping_Block_Tracking_Popup" name="shipping.tracking.popup" template="tracking/popup.phtml"/>
        </reference>
    </handle>
</layout>
