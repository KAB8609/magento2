<config>
    <global>
        <ignoredModules>
            <entities>
                <install />
                <adminhtml />
                <admin />
            </entities>
        </ignoredModules>
        <resources>
            <log_setup>
                <setup>
                    <module>Magento_Log</module>
                </setup>
            </log_setup>
        </resources>
        <template>
            <email>
                <system_log_error_email_template translate="label" module="Magento_Log">
                    <label>Log Cleanup Warnings</label>
                    <file>email/cleanup_warning.html</file>
                    <type>text</type>
                </system_log_error_email_template>
            </email>
        </template>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <Magento_Log>
                    <files>
                        <default>Magento_Log.csv</default>
                    </files>
                </Magento_Log>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <log>
            <visitor>
                <online_update_frequency>60</online_update_frequency>
            </visitor>
        </log>
        <system>
            <log>
                <clean_after_day>180</clean_after_day>
                <enabled>0</enabled>
                <time />
                <frequency>D</frequency>
                <error_email />
                <error_email_identity>general</error_email_identity>
                <error_email_template>system_log_error_email_template</error_email_template>
            </log>
        </system>
    </default>
    <crontab>
        <jobs>
            <log_clean>
                <run>
                    <model>Magento_Log_Model_Cron::logClean</model>
                </run>
            </log_clean>
        </jobs>
    </crontab>
</config>
