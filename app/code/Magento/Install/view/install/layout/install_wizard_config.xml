<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="install_wizard_config">
        <reference name="database">
            <action method="setTemplate">
                <template>db/main.phtml</template>
            </action>
            <action method="addDatabaseBlock">
                <type>mysql4</type>
                <block>Magento_Install_Block_Db_Type_Mysql4</block>
                <template>db/mysql4.phtml</template>
            </action>
        </reference>
    </handle>
</layout>
