<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="adminhtml_sales_archive_orders_grid_block">
        <update handle="adminhtml_sales_order_grid_block"/>
        <reference name="sales.order.grid">
            <arguments>
                <argument name="id" xsi:type="string">sales_order_grid_archive</argument>
                <argument name="dataSource" xsi:type="string">Magento_SalesArchive_Model_Resource_Order_Collection</argument>
                <argument name="default_sort" xsi:type="string">0</argument>
                <argument name="grid_url" xsi:type="url" path="*/*/ordersgrid"/>
                <argument name="rssList" xsi:type="string">null</argument>
            </arguments>
            <reference name="sales.order.grid.massaction">
                <arguments>
                    <argument name="options" xsi:type="array">
                        <updater>Magento_SalesArchive_Model_Order_Archive_Grid_Massaction_ItemsUpdater</updater>
                        <item name="cancel_order" xsi:type="array">
                            <item name="url" xsi:type="string">*/sales_archive/massCancel</item>
                        </item>
                        <item name="hold_order" xsi:type="array">
                            <item name="url" xsi:type="string">*/sales_archive/massHold</item>
                        </item>
                        <item name="unhold_order" xsi:type="array">
                            <item name="url" xsi:type="string">*/sales_archive/massUnhold</item>
                        </item>
                        <item name="remove_order_from_archive" xsi:type="array">
                            <item name="label" xsi:type="string" translate="true">Move to Orders Management</item>
                            <item name="url" xsi:type="string">*/sales_archive/massRemove</item>
                        </item>
                        <item name="pdfinvoices_order" xsi:type="array">
                            <item name="url" xsi:type="string">*/sales_archive/massPrintInvoices</item>
                        </item>
                        <item name="pdfshipments_order" xsi:type="array">
                            <item name="url" xsi:type="string">*/sales_archive/massPrintPackingSlips</item>
                        </item>
                        <item name="pdfcreditmemos_order" xsi:type="array">
                            <item name="url" xsi:type="string">*/sales_archive/massPrintCreditMemos</item>
                        </item>
                        <item name="pdfdocs_order" xsi:type="array">
                            <item name="url" xsi:type="string">*/sales_archive/massPrintAllDocuments</item>
                        </item>
                        <item name="print_shipping_label" xsi:type="array">
                            <item name="url" xsi:type="string">*/sales_archive/massPrintShippingLabel</item>
                        </item>
                    </argument>
                </arguments>
            </reference>
            <reference name="sales.order.grid.columnSet">
                <arguments>
                    <argument name="id" xsi:type="string">sales_order_grid_archive</argument>
                    <argument name="rowUrl" xsi:type="array">
                        <item name="generatorClass" xsi:type="string">Magento_SalesArchive_Model_Order_Archive_Grid_Row_UrlGenerator</item>
                    </argument>
                </arguments>
            </reference>
        </reference>
    </handle>
</layout>
