<logging xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="../../../Magento/Logging/etc/logging.xsd">
    <action id="massAdd">
        <label translate="true">Mass Add</label>
    </action>
    <action id="add">
        <label translate="true">Add</label>
    </action>
    <log name="magento_salesarchive">
        <label translate="true">Sales Archive</label>
        <expected_model class="Magento_SalesArchive_Model_Archive" />
        <event controller_action="adminhtml_sales_archive_add"
               action_alias="add"
               post_dispatch="postDispatchSalesArchiveManagement">
            <skip_on_back controller_action="adminhtml_sales_order_view" />
        </event>
        <event controller_action="adminhtml_sales_archive_remove"
               action_alias="delete"
               post_dispatch="postDispatchSalesArchiveManagement">
            <skip_on_back controller_action="adminhtml_sales_order_view" />
        </event>
        <event controller_action="adminhtml_sales_archive_massAdd"
               action_alias="massAdd"
               post_dispatch="postDispatchSalesArchiveManagement" />
        <event controller_action="adminhtml_sales_archive_massRemove"
               action_alias="massDelete"
               post_dispatch="postDispatchSalesArchiveManagement" />
    </log>
</logging>
