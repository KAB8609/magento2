<config>
    <global>
        <resources>
            <salesarchive_setup>
                <setup>
                    <module>Magento_SalesArchive</module>
                    <class>Magento_SalesArchive_Model_Resource_Setup</class>
                </setup>
            </salesarchive_setup>
        </resources>
    </global>
    <default>
        <sales>
            <magento_salesarchive>
                <active>0</active>
                <age>30</age>
                <order_statuses>closed,complete</order_statuses>
            </magento_salesarchive>
        </sales>
    </default>
    <crontab>
        <jobs>
            <magento_salesarchive_archive_orders>
                <schedule>
                    <cron_expr>0 0 * * *</cron_expr>
                </schedule>
                <run>
                    <model>Magento_SalesArchive_Model_Observer::archiveOrdersByCron</model>
                </run>
            </magento_salesarchive_archive_orders>
        </jobs>
    </crontab>
</config>
