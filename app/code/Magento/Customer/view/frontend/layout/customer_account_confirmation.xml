<layout version="0.1.0">
    <customer_account_confirmation translate="label" type="page" parent="customer_account">
        <label>Customer Account Confirmation</label>
        <reference name="root">
            <action method="setTemplate">
                <template>1column.phtml</template>
            </action>
            <action method="setHeaderTitle" translate="title">
                <title>Send confirmation link</title>
            </action>
        </reference>
        <reference name="content">
            <block type="Magento_Core_Block_Template" name="accountConfirmation" template="Magento_Customer::form/confirmation.phtml"/>
        </reference>
    </customer_account_confirmation>
</layout>
