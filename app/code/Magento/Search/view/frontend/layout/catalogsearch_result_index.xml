<layout version="0.1.0">
    <catalogsearch_result_index>
        <reference name="left">
            <remove name="catalogsearch.leftnav"/>
            <block type="Magento_Search_Block_Catalogsearch_Layer" name="enterprisesearch.leftnav" before="-" template="Magento_Catalog::layer/view.phtml"/>
        </reference>
        <reference name="search_result_list">
            <container name="additional" label="Additional Info" after="product_list_toolbar">
                <block type="Magento_Search_Block_Suggestions" name="search_suggestions" template="suggestions.phtml"/>
                <block type="Magento_Search_Block_Recommendations" name="search_recommendations" template="recommendations.phtml"/>
            </container>
        </reference>
    </catalogsearch_result_index>
</layout>
