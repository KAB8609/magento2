<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <reference name="cart_sidebar">
        <action method="addItemRender">
            <argument name="type" xsi:type="string">bundle</argument>
            <argument name="block" xsi:type="string">Magento_Bundle_Block_Checkout_Cart_Item_Renderer</argument>
            <argument name="template" xsi:type="string">Magento_Checkout::cart/sidebar/default.phtml</argument>
        </action>
    </reference>
    <reference name="catalog_product_price_template">
        <action method="addPriceBlockType">
            <argument name="type" xsi:type="string">bundle</argument>
            <argument name="block" xsi:type="string">Magento_Bundle_Block_Catalog_Product_Price</argument>
            <argument name="template" xsi:type="string">catalog/product/price.phtml</argument>
        </action>
    </reference>
</layout>
