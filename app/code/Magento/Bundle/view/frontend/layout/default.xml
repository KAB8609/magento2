<layout version="0.1.0">
    <default>
        <reference name="cart_sidebar">
            <action method="addItemRender">
                <type>bundle</type>
                <block>Magento_Bundle_Block_Checkout_Cart_Item_Renderer</block>
                <template>Magento_Checkout::cart/sidebar/default.phtml</template>
            </action>
        </reference>
        <reference name="catalog_product_price_template">
            <action method="addPriceBlockType">
                <type>bundle</type>
                <block>Magento_Bundle_Block_Catalog_Product_Price</block>
                <template>catalog/product/price.phtml</template>
            </action>
        </reference>
    </default>
</layout>
