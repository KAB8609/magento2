<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="adminhtml_catalog_product_bundle">
        <reference name="head">
            <action method="addCss">
                <argument name="file" xsi:type="string">Magento_Bundle::css/bundle-product.css</argument>
            </action>
        </reference>
        <reference name="product_tabs">
            <action method="addTab">
                <argument name="name" xsi:type="string">bundle</argument>
                <argument name="block" xsi:type="string">\Magento\Bundle\Block\Adminhtml\Catalog\Product\Edit\Tab\Bundle</argument>
            </action>
        </reference>
    </handle>
</layout>
