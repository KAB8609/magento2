<config>
    <global>
        <resources>
            <bundle_setup>
                <setup>
                    <module>Magento_Bundle</module>
                    <class>Magento_Catalog_Model_Resource_Setup</class>
                </setup>
            </bundle_setup>
        </resources>
        <catalog>
            <product>
                <attributes>
                    <unassignable>
                        <price_type />
                        <price_view />
                    </unassignable>
                </attributes>
            </product>
        </catalog>
        <sales>
            <quote>
                <item>
                    <product_attributes>
                        <price_view />
                        <price_type />
                        <shipment_type />
                        <weight_type />
                        <sku_type />
                    </product_attributes>
                </item>
            </quote>
        </sales>
        <pdf>
            <invoice>
                <bundle>Magento_Bundle_Model_Sales_Order_Pdf_Items_Invoice</bundle>
            </invoice>
            <shipment>
                <bundle>Magento_Bundle_Model_Sales_Order_Pdf_Items_Shipment</bundle>
            </shipment>
            <creditmemo>
                <bundle>Magento_Bundle_Model_Sales_Order_Pdf_Items_Creditmemo</bundle>
            </creditmemo>
        </pdf>
    </global>
    <frontend>
        <product>
            <collection>
                <attributes>
                    <price_view />
                    <price_type />
                </attributes>
            </collection>
        </product>
    </frontend>
    <adminhtml>
        <sales>
            <order>
                <create>
                    <available_product_types>
                        <bundle />
                    </available_product_types>
                </create>
            </order>
        </sales>
    </adminhtml>
</config>
