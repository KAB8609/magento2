<config>
    <global>
        <resources>
            <bundle_setup>
                <setup>
                    <module>Magento_Bundle</module>
                    <class>Magento_Catalog_Model_Resource_Setup</class>
                </setup>
            </bundle_setup>
        </resources>
        <catalog>
            <product>
                <type>
                    <bundle translate="label" module="Magento_Bundle">
                        <label>Bundle Product</label>
                        <model>Magento_Bundle_Model_Product_Type</model>
                        <composite>1</composite>
                        <allowed_selection_types>
                            <simple />
                            <virtual />
                        </allowed_selection_types>
                        <price_model>Magento_Bundle_Model_Product_Price</price_model>
                        <index_priority>40</index_priority>
                        <price_indexer>Magento_Bundle_Model_Resource_Indexer_Price</price_indexer>
                        <stock_indexer>Magento_Bundle_Model_Resource_Indexer_Stock</stock_indexer>
                    </bundle>
                </type>
                <options>
                    <bundle>
                        <types>
                            <select translate="label" module="Magento_Bundle">
                                <label>Drop-down</label>
                            </select>
                            <radio translate="label" module="Magento_Bundle">
                                <label>Radio Buttons</label>
                            </radio>
                            <checkbox translate="label" module="Magento_Bundle">
                                <label>Checkbox</label>
                            </checkbox>
                            <multi translate="label" module="Magento_Bundle">
                                <label>Multiple Select</label>
                            </multi>
                        </types>
                    </bundle>
                </options>
                <attributes>
                    <unassignable>
                        <price_type />
                        <price_view />
                    </unassignable>
                </attributes>
            </product>
        </catalog>
        <sales>
            <quote>
                <item>
                    <product_attributes>
                        <price_view />
                        <price_type />
                        <shipment_type />
                        <weight_type />
                        <sku_type />
                    </product_attributes>
                </item>
            </quote>
        </sales>
        <pdf>
            <invoice>
                <bundle>Magento_Bundle_Model_Sales_Order_Pdf_Items_Invoice</bundle>
            </invoice>
            <shipment>
                <bundle>Magento_Bundle_Model_Sales_Order_Pdf_Items_Shipment</bundle>
            </shipment>
            <creditmemo>
                <bundle>Magento_Bundle_Model_Sales_Order_Pdf_Items_Creditmemo</bundle>
            </creditmemo>
        </pdf>
    </global>
    <frontend>
        <translate>
            <modules>
                <Magento_Bundle>
                    <files>
                        <default>Magento_Bundle.csv</default>
                    </files>
                </Magento_Bundle>
            </modules>
        </translate>
        <product>
            <collection>
                <attributes>
                    <price_view />
                    <price_type />
                </attributes>
            </collection>
        </product>
        <events>
            <catalog_product_upsell>
                <observers>
                    <bundle_observer>
                        <class>Magento_Bundle_Model_Observer</class>
                        <method>appendUpsellProducts</method>
                    </bundle_observer>
                </observers>
            </catalog_product_upsell>
            <sales_convert_quote_item_to_order_item>
                <observers>
                    <bundle_observer>
                        <class>Magento_Bundle_Model_Observer</class>
                        <method>appendBundleSelectionData</method>
                    </bundle_observer>
                </observers>
            </sales_convert_quote_item_to_order_item>
            <catalog_product_collection_load_after>
                <observers>
                    <bundle_observer>
                        <class>Magento_Bundle_Model_Observer</class>
                        <method>loadProductOptions</method>
                    </bundle_observer>
                </observers>
            </catalog_product_collection_load_after>
            <product_option_renderer_init>
                <observers>
                    <bundle_observer>
                        <class>Magento_Bundle_Model_Observer</class>
                        <method>initOptionRenderer</method>
                    </bundle_observer>
                </observers>
            </product_option_renderer_init>
        </events>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Magento_Bundle before="Magento_Adminhtml">Magento_Bundle_Adminhtml</Magento_Bundle>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <translate>
            <modules>
                <Magento_Bundle>
                    <files>
                        <default>Magento_Bundle.csv</default>
                    </files>
                </Magento_Bundle>
            </modules>
        </translate>
        <sales>
            <order>
                <create>
                    <available_product_types>
                        <bundle />
                    </available_product_types>
                </create>
            </order>
        </sales>
        <events>
            <catalog_product_prepare_save>
                <observers>
                    <bundle_observer>
                        <class>Magento_Bundle_Model_Observer</class>
                        <method>prepareProductSave</method>
                    </bundle_observer>
                </observers>
            </catalog_product_prepare_save>
            <sales_convert_quote_item_to_order_item>
                <observers>
                    <bundle_observer>
                        <class>Magento_Bundle_Model_Observer</class>
                        <method>appendBundleSelectionData</method>
                    </bundle_observer>
                </observers>
            </sales_convert_quote_item_to_order_item>
            <catalog_model_product_duplicate>
                <observers>
                    <bundle_observer>
                        <class>Magento_Bundle_Model_Observer</class>
                        <method>duplicateProduct</method>
                    </bundle_observer>
                </observers>
            </catalog_model_product_duplicate>
            <catalog_product_edit_action>
                <observers>
                    <bundle_observer>
                        <class>Magento_Bundle_Model_Observer</class>
                        <method>setAttributeTabBlock</method>
                    </bundle_observer>
                </observers>
            </catalog_product_edit_action>
            <catalog_product_new_action>
                <observers>
                    <bundle_observer>
                        <class>Magento_Bundle_Model_Observer</class>
                        <method>setAttributeTabBlock</method>
                    </bundle_observer>
                </observers>
            </catalog_product_new_action>
        </events>
    </adminhtml>
</config>
