<widgets>
    <cms_page_link type="Magento_Cms_Block_Widget_Page_Link" translate="name description">
        <name>CMS Page Link</name>
        <description>Link to a CMS Page</description>
        <is_email_compatible>1</is_email_compatible>
        <placeholder_image>Magento_Cms::images/widget_page_link.gif</placeholder_image>
        <parameters>
            <page_id type="complex" translate="label">
                <visible>1</visible>
                <required>1</required>
                <label>CMS Page</label>
                <type>label</type>
                <helper_block>
                    <type>Magento_Adminhtml_Block_Cms_Page_Widget_Chooser</type>
                    <data>
                        <button translate="open">
                            <open>Select Page...</open>
                        </button>
                    </data>
                </helper_block>
                <sort_order>10</sort_order>
            </page_id>
            <anchor_text translate="label description">
                <visible>1</visible>
                <label>Anchor Custom Text</label>
                <description>If empty, the Page Title will be used</description>
                <type>text</type>
            </anchor_text>
            <title translate="label">
                <visible>1</visible>
                <label>Anchor Custom Title</label>
                <type>text</type>
            </title>
            <template translate="label">
                <label>Template</label>
                <visible>1</visible>
                <type>select</type>
                <value>widget/link/link_block.phtml</value>
                <values>
                    <default translate="label">
                        <value>widget/link/link_block.phtml</value>
                        <label>CMS Page Link Block Template</label>
                    </default>
                    <link_inline translate="label">
                        <value>widget/link/link_inline.phtml</value>
                        <label>CMS Page Link Inline Template</label>
                    </link_inline>
                </values>
            </template>
        </parameters>
    </cms_page_link>
    <cms_static_block type="Magento_Cms_Block_Widget_Block" translate="name description">
        <name>CMS Static Block</name>
        <description>Contents of a Static Block</description>
        <placeholder_image>Magento_Cms::images/widget_block.gif</placeholder_image>
        <parameters>
            <block_id type="complex" translate="label">
                <visible>1</visible>
                <required>1</required>
                <label>Block</label>
                <type>label</type>
                <helper_block>
                    <type>Magento_Adminhtml_Block_Cms_Block_Widget_Chooser</type>
                    <data>
                        <button translate="open">
                            <open>Select Block...</open>
                        </button>
                    </data>
                </helper_block>
                <sort_order>20</sort_order>
            </block_id>
            <template translate="label">
                <label>Template</label>
                <visible>1</visible>
                <type>select</type>
                <value>widget/static_block/default.phtml</value>
                <values>
                    <default translate="label">
                        <value>widget/static_block/default.phtml</value>
                        <label>CMS Static Block Default Template</label>
                    </default>
                </values>
                <sort_order>10</sort_order>
            </template>
        </parameters>
    </cms_static_block>
</widgets>
