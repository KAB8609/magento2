<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="cms_index_defaultnoroute" translate="label" type="page" parent="cms_page_view">
        <label>CMS No-Route Default Page</label>
        <reference name="root">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">1column.phtml</argument>
            </action>
        </reference>
        <reference name="content">
            <block class="Magento_Core_Block_Template" name="default_no_route" template="Magento_Cms::default/no-route.phtml"/>
        </reference>
    </handle>
</layout>
