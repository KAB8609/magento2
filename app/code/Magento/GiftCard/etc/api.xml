<config>
    <api>
        <resources>
            <giftcard_customer translate="title" module="Magento_GiftCard">
                <model>Magento_GiftCard_Model_Customer_Api</model>
                <title>Gift Card API</title>
                <acl>giftcard_customer</acl>
                <methods>
                    <info translate="title" module="Magento_GiftCard">
                        <title>Retrieve gift card customer data</title>
                        <acl>giftcard_customer/info</acl>
                    </info>
                    <redeem translate="title" module="Magento_GiftCard">
                        <title>Redeem gift card to customer store credit</title>
                        <acl>giftcard_customer/redeem</acl>
                    </redeem>
                </methods>
                <faults>
                    <not_exists>
                        <code>100</code>
                        <message>Gift card does not exist.</message>
                    </not_exists>
                    <not_valid>
                        <code>101</code>
                        <message>Gift card is not valid.</message>
                    </not_valid>
                    <redemption_disabled>
                        <code>103</code>
                        <message>Redemption functionality is disabled.</message>
                    </redemption_disabled>
                    <unable_redeem>
                        <code>104</code>
                        <message>Unable to redeem gift card.</message>
                    </unable_redeem>
                </faults>
            </giftcard_customer>
            <cart_giftcard translate="title" module="Magento_GiftCard">
                <model>Magento_GiftCard_Model_Checkout_Cart_Api</model>
                <title>Gift Card for Shopping Cart API</title>
                <acl>cart_giftcard</acl>
                <methods>
                    <list translate="title" module="Magento_GiftCard">
                        <title>Retrieve list of gift cards in shopping cart</title>
                        <method>items</method>
                        <acl>cart_giftcard/list</acl>
                    </list>
                    <add translate="title" module="Magento_GiftCard">
                        <title>Add gift card to shopping cart (quote)</title>
                        <acl>cart_giftcard/add</acl>
                    </add>
                    <remove translate="title" module="Magento_GiftCard">
                        <title>Remove gift card from shopping cart (quote)</title>
                        <acl>cart_giftcard/remove</acl>
                    </remove>
                </methods>
                <faults>
                    <store_not_exists>
                        <code>1001</code>
                        <message>Cannot perform operation because store does not exist.</message>
                    </store_not_exists>
                    <quote_not_exists>
                        <code>1002</code>
                        <message>Cannot perform operation because quote does not exist.</message>
                    </quote_not_exists>
                    <invalid_input_data>
                        <code>1003</code>
                        <message>Provided data is invalid.</message>
                    </invalid_input_data>
                    <giftcard_account_not_found_by_code>
                        <code>1004</code>
                        <message>Gift card account with requested code does not exist.</message>
                    </giftcard_account_not_found_by_code>
                    <save_error>
                        <code>1005</code>
                        <message>Error occurred while adding gift card to quote.</message>
                    </save_error>
                </faults>
            </cart_giftcard>
        </resources>
        <v2>
            <resources_function_prefix>
                <giftcard_customer>giftcardCustomer</giftcard_customer>
                <cart_giftcard>shoppingCartGiftcard</cart_giftcard>
            </resources_function_prefix>
        </v2>
        <acl>
            <resources>
                <giftcard_customer translate="title" module="Magento_GiftCard">
                     <title>Gift Card for Customer</title>
                     <sort_order>1</sort_order>
                     <info translate="title" module="Magento_GiftCard">
                        <title>Retrieve gift card customer info</title>
                     </info>
                     <redeem translate="title" module="Magento_GiftCard">
                        <title>Redeem gift card to customer store credit</title>
                     </redeem>
                </giftcard_customer>
                <cart_giftcard translate="title" module="Magento_GiftCard">
                     <title>Gift Card for Shopping Cart</title>
                     <sort_order>1</sort_order>
                     <list translate="title" module="Magento_GiftCard">
                        <title>Retrieve list of gift cards in shopping cart</title>
                     </list>
                     <add translate="title" module="Magento_GiftCard">
                         <title>Add</title>
                     </add>
                     <remove translate="title" module="Magento_GiftCard">
                         <title>Remove</title>
                     </remove>
                </cart_giftcard>
            </resources>
        </acl>
    </api>
</config>
