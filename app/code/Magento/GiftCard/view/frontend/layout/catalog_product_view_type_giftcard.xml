<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="catalog_product_view_type_giftcard" translate="label" type="page" parent="catalog_product_view">
        <label>Catalog Product View (Gift Card)</label>
        <reference name="product.info">
            <block class="Magento_GiftCard_Block_Catalog_Product_View_Type_Giftcard" name="product.info.giftcard" as="product_type_data" template="catalog/product/view/type/giftcard.phtml">
                <action method="addPriceBlockType">
                    <type>giftcard</type>
                    <block>Magento_GiftCard_Block_Catalog_Product_Price</block>
                    <template>catalog/product/price.phtml</template>
                </action>
                <block class="Magento_CatalogInventory_Block_Stockqty_Default" name="product.info.giftcard.extra" as="product_type_data_extra" template="stockqty/default.phtml"/>
            </block>
        </reference>
        <reference name="product.clone_prices">
            <action method="addPriceBlockType">
                <type>giftcard</type>
                <block>Magento_GiftCard_Block_Catalog_Product_Price</block>
                <template>catalog/product/price.phtml</template>
            </action>
        </reference>
    </handle>
</layout>
