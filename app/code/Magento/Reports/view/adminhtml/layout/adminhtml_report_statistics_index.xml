<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="adminhtml_report_statistics_index">
        <reference name="content">
            <block class="Magento_Reports_Block_Adminhtml_Refresh_Statistics" name="adminhtml.block.report.refresh.statistics">
                <block class="Magento_Backend_Block_Widget_Grid" name="adminhtml.block.report.refresh.statistics.grid" as="grid">
                    <arguments>
                        <id>gridRefreshStatistics</id>
                        <use_ajax>0</use_ajax>
                        <sortable>0</sortable>
                        <pager_visibility>0</pager_visibility>
                        <dataSource type="object">Magento_Reports_Model_Resource_Refresh_Collection</dataSource>
                    </arguments>
                    <block class="Magento_Backend_Block_Widget_Grid_Massaction" name="adminhtml.block.refresh.statistics.massactions" as="grid.massaction">
                        <arguments>
                            <massaction_id_field>id</massaction_id_field>
                            <form_field_name>code</form_field_name>
                            <use_select_all>1</use_select_all>
                            <options>
                                <refresh_lifetime>
                                    <label translate="true">Refresh Lifetime Statistics</label>
                                    <url>*/*/refreshLifetime</url>
                                    <confirm translate="true">Are you sure you want to refresh lifetime statistics? There can be performance impact during this operation.</confirm>
                                </refresh_lifetime>
                                <refresh_recent>
                                    <label translate="true">Refresh Statistics for the Last Day</label>
                                    <url>*/*/refreshRecent</url>
                                    <confirm translate="true">Are you sure you want to refresh statistics for last day?</confirm>
                                    <selected>1</selected>
                                </refresh_recent>
                            </options>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_ColumnSet" as="grid.columnSet" name="adminhtml.block.reportrefresh.statistics.columnSet">
                        <arguments>
                            <filter_visibility>0</filter_visibility>
                            <id>gridRefreshStatistics</id>
                        </arguments>
                        <block class="Magento_Backend_Block_Widget_Grid_Column" as="report">
                            <arguments>
                                <header translate="true">Report</header>
                                <type>string</type>
                                <sortable>0</sortable>
                                <id>report</id>
                                <index>report</index>
                                <column_css_class>col-report</column_css_class>
                                <header_css_class>col-report</header_css_class>
                            </arguments>
                        </block>
                        <block class="Magento_Backend_Block_Widget_Grid_Column" as="comment">
                            <arguments>
                                <header translate="true">Description</header>
                                <type>string</type>
                                <sortable>0</sortable>
                                <id>comment</id>
                                <index>comment</index>
                                <column_css_class>col-description</column_css_class>
                                <header_css_class>col-description</header_css_class>
                            </arguments>
                        </block>
                        <block class="Magento_Backend_Block_Widget_Grid_Column" as="updated_at">
                            <arguments>
                                <header translate="true">Updated</header>
                                <type>datetime</type>
                                <sortable>0</sortable>
                                <id>updated_at</id>
                                <index>updated_at</index>
                                <default translate="true">undefined</default>
                                <column_css_class>col-period</column_css_class>
                                <header_css_class>col-period</header_css_class>
                            </arguments>
                        </block>
                    </block>
                </block>
            </block>
        </reference>
    </handle>
</layout>
