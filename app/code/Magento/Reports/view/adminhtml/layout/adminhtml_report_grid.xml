<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="adminhtml_report_grid">
        <reference name="adminhtml.report.grid.container">
            <block class="Magento_Reports_Block_Adminhtml_Grid" name="adminhtml.report.grid" as="grid">
                <arguments>
                    <use_ajax>0</use_ajax>
                    <pager_visibility>0</pager_visibility>
                    <id>gridReport</id>
                    <dataSource type="object">Magento_Reports_Model_Resource_Report_Collection</dataSource>
                </arguments>
                <block class="Magento_Backend_Block_Store_Switcher" name="adminhtml.report.grid.store_switcher" as="store_switcher" template="Magento_Reports::store/switcher.phtml">
                    <arguments>
                        <use_confirm>0</use_confirm>
                        <switch_url type="url">
                            <path>*/*/*</path>
                            <params>
                                <store>null</store>
                            </params>
                        </switch_url>
                    </arguments>
                </block>
                <block class="Magento_Backend_Block_Widget_Grid_Export" name="adminhtml.report.grid.export" as="grid.export">
                    <arguments>
                        <exportTypes>
                            <csv>
                                <urlPath>*/*/exportCsv</urlPath>
                                <label translate="true">CSV</label>
                            </csv>
                            <excel>
                                <urlPath>*/*/exportExcel</urlPath>
                                <label translate="true">Excel XML</label>
                            </excel>
                        </exportTypes>
                    </arguments>
                </block>
                <block class="Magento_Backend_Block_Widget_Grid_ColumnSet" as="grid.columnSet" name="adminhtml.report.grid.columnSet">
                    <arguments>
                        <filter_visibility>0</filter_visibility>
                        <empty_text translate="true">We couldn't find records for this period.</empty_text>
                        <empty_cell_label translate="true">We couldn't find records for this period.</empty_cell_label>
                    </arguments>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="period">
                        <arguments>
                            <header translate="true">Interval</header>
                            <sortable>0</sortable>
                            <type>text</type>
                            <id>period</id>
                            <index>period</index>
                            <grouped>1</grouped>
                            <totals_label translate="true">Total</totals_label>
                            <column_css_class>col-period</column_css_class>
                            <header_css_class>col-period</header_css_class>
                        </arguments>
                    </block>
                </block>
            </block>
        </reference>
    </handle>
</layout>
