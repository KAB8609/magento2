<layout version="0.1.0">
    <adminhtml_report_review_customer_grid>
        <reference name="adminhtml.report.grid.container">
            <block type="Magento_Backend_Block_Widget_Grid" name="adminhtml.block.report.review.customer.grid" as="grid">
                <arguments>
                    <id>customers_grid</id>
                    <default_sort>review_cnt</default_sort>
                    <default_dir>desc</default_dir>
                    <dataSource type="object">Magento_Reports_Model_Resource_Review_Customer_Collection</dataSource>
                </arguments>
                <block type="Magento_Backend_Block_Widget_Grid_Export" name="adminhtml.block.report.review.customer.export" as="grid.export">
                    <arguments>
                        <exportTypes>
                            <csv>
                                <urlPath>*/*/exportCustomerCsv</urlPath>
                                <label translate="true">CSV</label>
                            </csv>
                            <excel>
                                <urlPath>*/*/exportCustomerExcel</urlPath>
                                <label translate="true">Excel XML</label>
                            </excel>
                        </exportTypes>
                    </arguments>
                </block>
                <block type="Magento_Backend_Block_Widget_Grid_ColumnSet" as="grid.columnSet" name="adminhtml.block.report.review.customer.grid.columnSet">
                    <arguments>
                        <filter_visibility>0</filter_visibility>
                        <id>customers_grid</id>
                        <rowUrl>
                            <path>*/catalog_product_review</path>
                            <extraParamsTemplate>
                                <customerid>getCustomerId</customerid>
                            </extraParamsTemplate>
                        </rowUrl>
                    </arguments>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="customer_name">
                        <arguments>
                            <header translate="true">Customer</header>
                            <index>customer_name</index>
                            <type>text</type>
                            <id>customer_name</id>
                            <default translate="true">Guest</default>
                            <column_css_class>col-name</column_css_class>
                            <header_css_class>col-name</header_css_class>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="review_cnt">
                        <arguments>
                            <header translate="true">Reviews</header>
                            <type>text</type>
                            <index>review_cnt</index>
                            <column_css_class>col-qty</column_css_class>
                            <header_css_class>col-qty</header_css_class>
                        </arguments>
                    </block>
                    <block type="Magento_Backend_Block_Widget_Grid_Column" as="action">
                        <arguments>
                            <header translate="true">Action</header>
                            <filter>0</filter>
                            <sortable>0</sortable>
                            <is_system>1</is_system>
                            <renderer>Magento_Adminhtml_Block_Report_Grid_Column_Renderer_Customer</renderer>
                            <id>action</id>
                            <column_css_class>col-actions</column_css_class>
                            <header_css_class>col-actions</header_css_class>
                        </arguments>
                    </block>
                </block>
            </block>
        </reference>
    </adminhtml_report_review_customer_grid>
</layout>
