<config>
    <modules>
        <Magento_PaypalUk>
            <version>1.6.0.0</version>
            <active>true</active>
            <depends>
                <Magento_Paygate />
                <Magento_Checkout />
                <Magento_Sales />
                <Magento_Paypal />
            </depends>
        </Magento_PaypalUk>
    </modules>
    <global>
        <resources>
            <paypaluk_setup>
                <setup>
                    <module>Magento_PaypalUk</module>
                </setup>
            </paypaluk_setup>
        </resources>
    </global>
    <frontend>
        <secure_url>
            <paypaluk_express>/paypaluk/express</paypaluk_express>
        </secure_url>
        <routers>
            <paypaluk>
                <use>standard</use>
                <args>
                    <module>Magento_PaypalUk</module>
                    <frontName>paypaluk</frontName>
                </args>
            </paypaluk>
        </routers>
        <translate>
            <modules>
                <Magento_PaypalUk>
                    <files>
                        <default>Magento_PaypalUk.csv</default>
                    </files>
                </Magento_PaypalUk>
            </modules>
        </translate>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Magento_PaypalUk>
                    <files>
                        <default>Magento_PaypalUk.csv</default>
                    </files>
                </Magento_PaypalUk>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <payment>
            <paypaluk_express>
                <model>Magento_PaypalUk_Model_Express</model>
            </paypaluk_express>
            <paypaluk_direct>
                <model>Magento_PaypalUk_Model_Direct</model>
            </paypaluk_direct>
        </payment>
    </default>
</config>
