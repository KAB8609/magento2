<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="paypal_express_review_details">
        <block class="Magento_Page_Block_Html" name="root" output="1" template="page_fragment.phtml">
            <block class="Magento_Paypal_Block_Express_Review_Details" name="paypal.express.review.details" template="express/review/details.phtml">
                <action method="addItemRender">
                    <argument name="type" xsi:type="string">default</argument>
                    <argument name="block" xsi:type="string">Magento_Checkout_Block_Cart_Item_Renderer</argument>
                    <argument name="template" xsi:type="string">onepage/review/item.phtml</argument>
                </action>
                <action method="addItemRender">
                    <argument name="type" xsi:type="string">grouped</argument>
                    <argument name="block" xsi:type="string">Magento_Checkout_Block_Cart_Item_Renderer_Grouped</argument>
                    <argument name="template" xsi:type="string">onepage/review/item.phtml</argument>
                </action>
                <action method="addItemRender">
                    <argument name="type" xsi:type="string">configurable</argument>
                    <argument name="block" xsi:type="string">Magento_Checkout_Block_Cart_Item_Renderer_Configurable</argument>
                    <argument name="template" xsi:type="string">onepage/review/item.phtml</argument>
                </action>
                <block class="Magento_Checkout_Block_Cart_Totals" name="paypal.express.review.details.totals" as="totals" template="onepage/review/totals.phtml"/>
            </block>
        </block>
    </handle>
</layout>
