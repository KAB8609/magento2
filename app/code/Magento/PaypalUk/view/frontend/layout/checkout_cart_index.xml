<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <reference name="checkout.cart.top_methods">
        <block class="Magento_PaypalUk_Block_Express_Shortcut" name="checkout.cart.methods.paypaluk_express.top" before="-" template="Magento_Paypal::express/shortcut.phtml">
            <action method="setIsQuoteAllowed">
                <argument name="value" xsi:type="string">1</argument>
            </action>
        </block>
    </reference>
    <reference name="checkout.cart.methods">
        <block class="Magento_PaypalUk_Block_Express_Shortcut" name="checkout.cart.methods.paypaluk_express.bottom" before="-" template="Magento_Paypal::express/shortcut.phtml">
            <action method="setIsQuoteAllowed">
                <argument name="value" xsi:type="string">1</argument>
            </action>
        </block>
    </reference>
    <update handle="SHORTCUT_uk_popup"/>
</layout>
