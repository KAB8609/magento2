<config>
    <global>
        <resources>
            <scheduledimportexport_setup>
                <setup>
                    <module>Magento_ScheduledImportExport</module>
                </setup>
            </scheduledimportexport_setup>
        </resources>
        <template>
            <email>
                <magento_scheduledimportexport_import_failed translate="label" module="Magento_ScheduledImportExport">
                    <label>Import Failed</label>
                    <file>email/import_failed.html</file>
                    <type>html</type>
                </magento_scheduledimportexport_import_failed>
                <magento_scheduledimportexport_export_failed translate="label" module="Magento_ScheduledImportExport">
                    <label>Export Failed</label>
                    <file>email/export_failed.html</file>
                    <type>html</type>
                </magento_scheduledimportexport_export_failed>
                <system_magento_scheduled_import_export_log_error_email_template translate="label" module="Magento_ScheduledImportExport">
                    <label>File History Clean Failed</label>
                    <file>email/file_history_clean_failed.html</file>
                    <type>html</type>
                </system_magento_scheduled_import_export_log_error_email_template>
            </email>
        </template>
        <importexport>
            <export_entities>
                <customer_finance translate="label">
                    <model_token>\Magento\ScheduledImportExport\Model\Export\Entity\Customer\Finance</model_token>
                    <label>Customer Finances</label>
                </customer_finance>
            </export_entities>
            <import_entities>
                <customer_finance translate="label">
                    <model_token>\Magento\ScheduledImportExport\Model\Import\Entity\Eav\Customer\Finance</model_token>
                    <label>Customer Finances</label>
                    <behavior_token>\Magento\ImportExport\Model\Source\Import\Behavior\Custom</behavior_token>
                </customer_finance>
            </import_entities>
        </importexport>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <Magento_ScheduledImportExport>
                    <files>
                        <default>Magento_ScheduledImportExport.csv</default>
                    </files>
                </Magento_ScheduledImportExport>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <system>
            <magento_scheduled_import_export_log>
                <save_days>5</save_days>
                <error_email_template>system_magento_scheduled_import_export_log_error_email_template</error_email_template>
            </magento_scheduled_import_export_log>
        </system>
        <crontab>
            <jobs>
                <magento_scheduled_import_export_log_clean>
                    <run>
                        <model>Magento\ScheduledImportExport\Model\Observer::scheduledLogClean</model>
                    </run>
                </magento_scheduled_import_export_log_clean>
            </jobs>
        </crontab>
        <export>
            <customer_page_size>
                <finance>10000</finance>
            </customer_page_size>
        </export>
    </default>
</config>
