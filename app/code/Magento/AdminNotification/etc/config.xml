<config>
    <global>
        <resources>
            <adminnotification_setup>
                <setup>
                    <module>Magento_AdminNotification</module>
                </setup>
            </adminnotification_setup>
        </resources>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <Magento_AdminNotification>
                    <files>
                        <default>Magento_AdminNotification.csv</default>
                    </files>
                </Magento_AdminNotification>
            </modules>
        </translate>
        <events>
            <controller_action_predispatch>
                <observers>
                    <adminnotification>
                        <class>Magento_AdminNotification_Model_Observer</class>
                        <method>preDispatch</method>
                    </adminnotification>
                </observers>
            </controller_action_predispatch>
        </events>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <adminnotification before="Magento_Adminhtml">Magento_AdminNotification_Adminhtml</adminnotification>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <default>
        <system>
            <adminnotification>
                <feed_url>notifications.magentocommerce.com/community/notifications.rss</feed_url>
                <popup_url>widgets.magentocommerce.com/notificationPopup</popup_url>
                <severity_icons_url>widgets.magentocommerce.com/%s/%s.gif</severity_icons_url>
                <use_https>0</use_https>
                <frequency>1</frequency>
                <last_update>0</last_update>
            </adminnotification>
        </system>
    </default>
</config>
