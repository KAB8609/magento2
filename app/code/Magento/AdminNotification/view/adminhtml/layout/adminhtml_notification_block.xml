<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="adminhtml_notification_block">
        <reference name="adminhtml.notification.container">
            <block class="Magento_Backend_Block_Widget_Grid" name="adminhtml.notification.container.grid" as="grid">
                <arguments>
                    <id>notificationGrid</id>
                    <dataSource type="object">Magento_AdminNotification_Model_Resource_Grid_Collection</dataSource>
                    <default_dir>DESC</default_dir>
                    <default_sort>date_added</default_sort>
                    <save_parameters_in_session>1</save_parameters_in_session>
                </arguments>
                <block class="Magento_Backend_Block_Widget_Grid_ColumnSet" name="adminhtml.notification.container.grid.columnSet" as="grid.columnSet">
                    <arguments>
                        <filter_visibility>0</filter_visibility>
                    </arguments>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="severity">
                        <arguments>
                            <header translate="true">Severity</header>
                            <width>60px</width>
                            <index>severity</index>
                            <renderer>Magento_AdminNotification_Block_Grid_Renderer_Severity</renderer>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="date_added">
                        <arguments>
                            <header translate="true">Date Added</header>
                            <id>date_added</id>
                            <index>date_added</index>
                            <width>150px</width>
                            <type>datetime</type>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="title">
                        <arguments>
                            <header translate="true">Message</header>
                            <index>title</index>
                            <renderer>Magento_AdminNotification_Block_Grid_Renderer_Notice</renderer>
                        </arguments>
                    </block>
                    <block class="Magento_Backend_Block_Widget_Grid_Column" as="actions">
                        <arguments>
                            <header translate="true">Actions</header>
                            <width>250px</width>
                            <sortable>0</sortable>
                            <renderer>Magento_AdminNotification_Block_Grid_Renderer_Actions</renderer>
                        </arguments>
                    </block>
                </block>
                <block class="Magento_Backend_Block_Widget_Grid_Massaction" name="adminhtml.block.notification.massactions" as="grid.massaction">
                    <arguments>
                        <massaction_id_field>notification_id</massaction_id_field>
                        <form_field_name>notification</form_field_name>
                        <use_select_all>1</use_select_all>
                        <options>
                            <mark_as_read>
                                <label translate="true">Mark as Read</label>
                                <url>*/*/massMarkAsRead</url>
                            </mark_as_read>
                            <remove>
                                <label translate="true">Remove</label>
                                <url>*/*/massRemove</url>
                                <confirm translate="true">Are you sure?</confirm>
                            </remove>
                        </options>
                    </arguments>
                </block>
            </block>
        </reference>
    </handle>
</layout>
