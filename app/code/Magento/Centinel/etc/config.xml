<config>
    <frontend>
        <translate>
            <modules>
                <Magento_Centinel>
                    <files>
                        <default>Magento_Centinel.csv</default>
                    </files>
                </Magento_Centinel>
            </modules>
        </translate>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Magento_Centinel>
                    <files>
                        <default>Magento_Centinel.csv</default>
                    </files>
                </Magento_Centinel>
            </modules>
        </translate>
    </adminhtml>
    <global>
        <payment>
            <cc>
                <types>
                    <VI>
                        <validator>
                            <centinel>
                                <state>Magento_Centinel_Model_State_Visa</state>
                            </centinel>
                        </validator>
                    </VI>
                    <MC>
                        <validator>
                            <centinel>
                                <state>Magento_Centinel_Model_State_Mastercard</state>
                            </centinel>
                        </validator>
                    </MC>
                    <JCB>
                        <validator>
                            <centinel>
                                <state>Magento_Centinel_Model_State_Jcb</state>
                            </centinel>
                        </validator>
                    </JCB>
                    <SM>
                        <validator>
                            <centinel>
                                <state>Magento_Centinel_Model_State_Mastercard</state>
                            </centinel>
                        </validator>
                    </SM>
                </types>
            </cc>
        </payment>
    </global>
</config>
