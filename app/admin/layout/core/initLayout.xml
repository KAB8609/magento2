<?xml version="1.0"?>
<layoutUpdate> 
    <block type="tpl" name="root" output="toHtml">
        <action method="setTemplate"><template>core/layout.phtml</template></action>
        <action method="assign"><var>baseUrl</var><value>{{baseUrl}}</value></action>
        <action method="assign"><var>baseSkinUrl</var><value>{{baseUrl}}skins/default</value></action>

        <block type="list" name="head" as="head">
            <block type="tag" name="head.title">
                <action method="setTagName"><tag>title</tag></action>
                <action method="setContents"><contents>Magento Admin</contents></action>
            </block>

            <block type="tag" name="head.icon">
                <action method="setTagName"><tagName>link</tagName></action>
                <action method="setTagParam"><name>rel</name><value>icon</value></action>
                <action method="setTagParam"><name>href</name><value>{{baseUrl}}favicon.ico</value></action>
                <action method="setTagParam"><name>type</name><value>image/x-icon</value></action>
            </block>
            <block type="tag" name="head.shortcut_icon">
                <action method="setTagName"><tagName>link</tagName></action>
                <action method="setTagParam"><name>rel</name><value>shortcut icon</value></action>
                <action method="setTagParam"><name>href</name><value>{{baseUrl}}favicon.ico</value></action>
                <action method="setTagParam"><name>type</name><value>image/x-icon</value></action>
            </block>

            <block type="tag_css" name="head.css.styles">
                <action method="setHref"><href>styles.css</href></action>
            </block>

            <block type="tag_css" name="jscripts.css.ext.all">
                <action method="setHref"><href>extjs/resources/css/ext-all.css</href><locate/></action>
            </block>

            <block type="tag_css_theme" name="jscripts.css.ext.theme">
                <action method="setTagParam"><name>id</name><value>theme_stylesheet</value></action>
                <action method="setHref"><href>extjs/resources/css/ytheme-</href><locate/></action>
            </block>
        </block>

        <block type="list" name="jscripts" as="jscripts">
            <!--  BEGIN LOAD EXT-YUI -->
            <block type="tag_js" name="jscripts.js.yui.utilities">
                <action method="setSrc"><src>extjs/adapter/yui/yui-utilities.js</src><locate/></action>
            </block>

            <block type="tag_js" name="jscripts.js.ext.yui.adapter">
                <action method="setSrc"><src>extjs/adapter/yui/ext-yui-adapter.js</src><locate/></action>
            </block>

            <block type="tag_js" name="jscripts.js.ext.all.debug">
                <action method="setSrc"><src>extjs/ext-all.js</src><locate/></action>
            </block>

            <!--  END LOAD EXT-YUI -->

            <block type="tag_js" name="jscripts.js.ext.filteredViewGrid">
                <action method="setSrc"><src>magenta/filteredViewGrid.js</src></action>
            </block>

            <block type="tag_js" name="jscripts.js.magenta.mage">
                <action method="setSrc"><src>magenta/mage.js</src></action>
            </block>

            <block type="tag_js" name="jscripts.js.magenta.form">
                <action method="setSrc"><src>magenta/form.js</src></action>
            </block>

            <block type="tag_js" name="jscripts.js.magenta.core">
                <action method="setSrc"><src>magenta/core.js</src></action>
            </block>

            <block type="tag_js" name="jscripts.js.magenta.core.menu">
                <action method="setSrc"><src>magenta/core/menu.js</src></action>
            </block>

            <block type="tag_js" name="jscripts.js.magenta.core.blocks">
                <action method="setSrc"><src>magenta/core/blocks.js</src></action>
            </block>
            
            <block type="tag_js" name="jscripts.js.magenta.core.config">
                <action method="setSrc"><src>magenta/core/config.js</src></action>
            </block>            
            
            <block type="tag_js" name="jscripts.js.magenta.core.media">
                <action method="setSrc"><src>magenta/core/media.js</src></action>
            </block>
            
            <block type="tag_js" name="jscripts.js.magenta.core.itemcard">
                <action method="setSrc"><src>magenta/core/itemcard.js</src></action>
            </block>
            
            <block type="tag_js" name="jscripts.js.magenta.core.panel">
                <action method="setSrc"><src>magenta/core/panel.js</src></action>
            </block>

            <block type="tag_js" name="jscripts.js.magenta.core.panel.form">
                <action method="setSrc"><src>magenta/core/panel/form.js</src></action>
            </block>
            
            <block type="tag_js" name="jscripts.js.magenta.core.panel.view">
                <action method="setSrc"><src>magenta/core/panel/view.js</src></action>
            </block>

            <block type="tag_js" name="jscripts.js.magenta.core.panel.related">
                <action method="setSrc"><src>magenta/core/panel/related.js</src></action>
            </block>
            
            <block type="tag_js" name="jscripts.js.magenta.core.panel.images">
                <action method="setSrc"><src>magenta/core/panel/images.js</src></action>
            </block>
            
        </block>
    </block>
</layoutUpdate>
