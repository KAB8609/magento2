<?if($productCollection->getSize()):?>
<div class="category-pager">
    <ul>
        <li><strong>Page</strong></li>
        <?if ($productCollection->getCurPage() != 1):?>
        <li>
            <a href="<?=$pageUrl->setParam('p', $productCollection->getCurPage(-1))->buildUrl()?>">«</a>
        </li>
        <?endif?>
        <?for($i=$productCollection->getCurPage(-3); $i <= $productCollection->getCurPage(+3); $i++):?>
        <?if ($i == $productCollection->getCurPage()):?>
            <li><strong><?=$i?></strong>&nbsp;|</li>
        <?else:?>
            <li><a href="<?=$pageUrl->setParam('p', $i)->buildUrl()?>"><?=$i?></a>&nbsp;|</li>
        <?endif?>
        <?endfor?>
        <?if ($productCollection->getCurPage() < $productCollection->getLastPageNumber()):?>
        <li>
            <a href="<?=$pageUrl->setParam('p', $productCollection->getCurPage(1))->buildUrl()?>">»</a>
        </li>
        <?endif?>
        <li>
         Total: <?=$productCollection->getSize()?> items
        </li>
    </ul>
    <span class="sort-by">
        Sort by: 
        <a href="<?=$sortUrl->setParam('order', 'name')->setParam('dir', 'asc')->buildUrl()?>">Name</a> | 
        <a href="<?=$sortUrl->setParam('order', 'price')->buildUrl()?>">Price</a>
    </span>
    <div class="clearfix"></div>
</div>
<?endif?>