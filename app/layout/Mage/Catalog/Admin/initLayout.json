[":catalog_initLayout", {},
    ["#layout",
        [".addMenu",
            ["+menu","#top_menu_catalog",
                [".construct"],
                [".addItem",{
                    "text":"Products and Categories (URL)",
                    "id":"catalog_main_url", 
                    "on":{"click":[["Mage.MenuHandler.loadPanel","Mage.MenuHandler",{"url":"{$baseUrl}/mage_catalog/","title":"Products and Categories","closable":true}]]}
                }],
                [".addItem",{
                        "text":"Products and Categories (Script)",
                        "id":"catalog_main", 
                        "on":{"click":[["Mage.MenuHandler.loadScript",{"url":"{$baseUrl}/mage_catalog/index/loadMainPanel"}]]}
                }],
                [".addItem","-"],
                [".addItem",{
                    "text":"New Product",
                    "id":"catalog_new_product", 
                    "on":{"click":[["Mage.MenuHandler.loadScript",{"url":"{$baseUrl}/mage_catalog/product/new"}]]}
                }],
                [".addItem",{
                    "text":"New Category",
                    "id":"catalog_new_category", 
                    "on":{"click":[["Mage.MenuHandler.loadScript",{"url":"{$baseUrl}/mage_catalog/category/new"}]]}
                }]
            ]
        ]
    ],
    ["#top_menu",[".addItem",{"text":"Catalog","cls":"bmenu","menu":"top_menu_catalog"}]]
]