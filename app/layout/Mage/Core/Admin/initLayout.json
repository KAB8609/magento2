[":admin_core_initLayout",
    ["+tpl","#root",[".setViewName","Mage_Core","Admin/layout"],
        [".assign","baseUrl","{$baseUrl}"],
        [".assign","baseSkinUrl","{$baseUrl}/admin/skins/default"],

        [".setChild","head",["+list","#head",
            [".append",["+tag","#.title",[".setTagName","title"],[".setContents","MagentaCommerce Admin Office"]]],
            [".append",["+tag_css",[".setHref","/../../../js/yui-ext/resources/css/ext-all.css"]]],
            [".append",["+tag_css",[".setHref","/newadmin.css"]]],
            [".append",["+tag_js",[".setSrc","/yui-ext/yui-utilities.js"]]],
            [".append",["+tag_js",[".setSrc","/yui-ext/ext-yui-adapter.js"]]],
            [".append",["+tag_js",[".setSrc","/yui-ext/ext-all-debug.js"]]],
            [".append",["+tag_js",[".setSrc","/varien/yui-ext/magenta.js"]]]
        ]],

        [".setChild","layout",["+admin_layout_border","#layout",
            [".construct","document.body",{
				"hideOnLayout": true,
	            "north":{"split":false,"titlebar":false,"collapsible":false},
	            "center":{"resizeTabs":true,"alwaysShowTabs":true,"tabPosition":"top","titlebar":false,"autoScroll":true,"closeOnTab":true},
		        "south":{"split":false,"initialSize":22,"titlebar":false,"collapsible":false,"animate":false},
		        "east":{"split":true,"initialSize":150,"autoScroll":true,"collapsible":true,"titlebar":true}
            }],
            [".addPanel","north",
                ["+admin_layout_panel","#admin_north",[".construct","",{"title":"North"}]]
            ],
            [".addPanel","center",
                ["+admin_layout_panel","#admin_default",[".construct","",{"title":"Center Content","fitToFrame":true,"closable":true}]]
            ],
            [".addPanel","south",["+admin_layout_panel","#admin_south",[".construct"]]],
            [".addPanel","east",["+admin_layout_panel","#admin_east",[".construct","",{"title":"My Tasks"}]]],

            [".addPanel","center",
                ["+admin_layout_panel_nested","#admin_blocks",[".construct",["+admin_layout_border","#admin_blocks_border",
                    [".construct", "layout", {
                        "west":{"split":true,"autoScroll":true,"collapsible":true,"titlebar":true},
            	        "center":{"autoScroll":true}
                    }],
                    [".addPanel","west",
                        ["+admin_layout_panel_nested","#admin_blocks_west",[".construct",["+admin_layout_border", "#admin_blocks_west_border",
                            [".construct","layout",{
                                "center":{"autoScroll":true,"titlebar":false},
                                "south":{"split":true,"initialSize":200,"minSize":50,"maxSize":400,"autoScroll":true,"collapsible":true}
                            }],
                            [".addPanel","center",["+admin_layout_panel","#admin_blocks_west_center",[".construct"]]],
                            [".addPanel","south",["+admin_layout_panel","#admin_blocks_west_south",[".construct"]]]
                        ]]]
                    ],
                    [".addPanel","center",["+admin_layout_panel","#admin_blocks_center",[".construct"]]]
                ],{"title":"Blocks and Layouts"}]]
            ]
        ]]
    ],
    ["#layout",
        [".addToolbar","north",["+admin_toolbar","#top_menu",[".construct","layout",[
            {"text":"Catalog","cls":"bmenu","menu":{"items":[
                {"text":"View Products","on":{"click":[{"function":"Ext.Mage.MenuHandler","params":{"url":"test","param1":"paramval"}}]}},
                "-",
                {"text":"New Product"}
            ]}},
            {"text":"Customers","cls":"bmenu","menu":{"items":[
                {"text":"View Customers and Orders"},
                "-",
                {"text":"New Customer"}
            ]}},
            {"text":"System","cls":"bmenu","menu":{"items":[
                {"text":"Manage Blocks and Layouts"}
            ]}},
            {"text":"User"}
        ]]]]
    ]
]