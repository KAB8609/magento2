[":core_initLayout",
    ["+tpl","#root",[".setViewName","Mage_Core","Admin/layout"],
        [".assign","baseUrl","{$baseUrl}"],
        [".assign","baseSkinUrl","{$baseUrl}/admin/skins/default"],

        [".setChild","head",["+list","#head",
            [".append",["+tag","#.title",[".setTagName","title"],[".setContents","MagentaCommerce Admin Office"]]],
            [".append",["+tag_css",[".setHref","/../../../js/yui-ext/resources/css/ext-all.css"]]],
            [".append",["+tag_css",[".setHref","/newadmin.css"]]],
            [".append",["+tag_js",[".setSrc","/yui-ext/yui-utilities.js"]]],
            [".append",["+tag_js",[".setSrc","/yui-ext/ext-yui-adapter.js"]]],
            [".append",["+tag_js",[".setSrc","/yui-ext/ext-all-debug.js"]]],
            [".append",["+tag_js",[".setSrc","/varien/yui-ext/magenta.js"]]]
        ]],

        [".setChild","layout",["+layout_border","#layout",
            [".construct","document.body",{
                "hideOnLayout": true,
                "north":{"split":false,"titlebar":false,"collapsible":false},
                "center":{"resizeTabs":true,"alwaysShowTabs":true,"tabPosition":"top","titlebar":false,"autoScroll":true,"closeOnTab":true},
                "south":{"split":false,"initialSize":22,"titlebar":false,"collapsible":false,"animate":false},
                "east":{"split":true,"initialSize":150,"autoScroll":true,"collapsible":true,"titlebar":true,"animate":false}
            }],
            [".addPanel","north",
                ["+layout_panel","#north",[".construct","",{"title":"North"}]]
            ],
            [".addPanel","center",
                ["+layout_panel","#default",[".construct","",{"title":"Center Content","fitToFrame":true,"closable":true}]]
            ],
            [".addPanel","south",["+layout_panel","#south",[".construct"]]],
            [".addPanel","east",["+layout_panel","#east",[".construct","",{"title":"My Tasks"}]]],

            [".addToolbar","north",["+toolbar","#top_menu",[".construct","layout"]]]
        ]]
    ]
]