<?xml version="1.0"?>
<layoutUpdate>
    <block type="tpl" name="root" output="toString">
        <action method="setViewName"><module>Mage_Core</module><view>Admin/layout</view></action>
        <action method="assign" process="value"><var>baseUrl</var><value>{$baseUrl}</value></action>
        <action method="assign" process="value"><var>baseSkinUrl</var><value>{$baseUrl}/skins/default</value></action>
        
        <block type="list" name="head" as="head">
            <block type="tag" name="head.title">
                <action method="setTagName"><tag>title</tag></action>
                <action method="setContents"><contents>MagentaCommerce Admin Office</contents></action>
            </block>
            
            <block type="tag_css" name="head.css.ext.all">
                <action method="setHref"><href>/yui-ext/resources/css/ext-all.css</href><locate/></action>
            </block>
            
            <block type="tag_css_theme" name="head.css.ext.theme">
                <action method="setHref"><href>/yui-ext/resources/css/ytheme-</href><locate/></action>
            </block>
            
            <block type="tag_css" name="head.css.styles">
                <action method="setHref"><href>/styles.css</href></action>
            </block>
            
            <block type="tag_js" name="head.js.yui.utilities">
                <action method="setSrc"><src>/yui-ext/yui-utilities.js</src><locate/></action>
            </block>
            
            <block type="tag_js" name="head.js.ext.yui.adapter">
                <action method="setSrc"><src>/yui-ext/ext-yui-adapter.js</src><locate/></action>
            </block>
            
            <block type="tag_js" name="head.js.ext.all.debug">
                <action method="setSrc"><src>/yui-ext/ext-all-debug.js</src><locate/></action>
            </block>
            
            <block type="tag_js" name="head.js.magenta.mage">
                <action method="setSrc"><src>/magenta/mage.js</src></action>
            </block>
            
            <block type="tag_js" name="head.js.magenta.form">
                <action method="setSrc"><src>/magenta/form.js</src></action>
            </block>
            
            <block type="tag_js" name="head.js.magenta.core">
                <action method="setSrc"><src>/magenta/core.js</src></action>
            </block>
            
            <block type="tag_js" name="head.js.magenta.menu">
                <action method="setSrc"><src>/magenta/menu.js</src></action>
            </block>
        </block>
    </block>
</layoutUpdate>
