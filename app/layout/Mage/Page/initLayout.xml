<?xml version="1.0"?>
<layoutUpdate>
    <block type="tpl" name="root" output="toString">
        <action method="setViewName"><module>Mage_Page</module><view>layout.2column.phtml</view></action>
        <action method="assign" process="value"><var>imagesUrl</var><value>{$baseSkinUrl}/default/page/images</value></action>
        
        <block type="list" name="head" as="head">
            <block type="tag" name="head.title">
                <action method="setTagName"><tagName>title</tagName></action>
                <action method="setContents"><contents>Magenta Commerce</contents></action>
            </block>
            <block type="tag_js" name="head.js.prototype">
                <action method="setSrc"><src>/prototype/prototype.js</src></action>
            </block>
            <block type="tag_js" name="head.js.prototype.validation">
                <action method="setSrc"><src>/prototype/validation.js</src></action>
            </block>
            <block type="tag_js" name="head.js.prototype.effects">
                <action method="setSrc"><src>/scriptaculous/effects.js</src></action>
            </block>
            <block type="tag_js" name="head.js.varien">
                <action method="setSrc"><src>/varien/js.js</src></action>
            </block>
            <block type="tag_css" name="head.css.main">
                <action method="setHref"><href>/page/style.css</href></action>
            </block>
        </block>
        
        <block type="list" name="top.links" as="topLinks">
            <block type="list_link" name="top.links.help">
                <action method="setLink" process="a"><li/><a>href="{$baseModuleUrl}/article/help"</a><label>Help</label></action>
            </block>
        </block>
        
        <block type="list" name="top.menu" as="topMenu">
            <block type="list_link" name="top.menu.home">
                <action method="setLink" process="a"><li>id="nav-home"</li><a>href="{$baseUrl}"</a><label><![CDATA[<span>Home</span>]]></label></action>
            </block>
            <block type="list_link" name="top.menu.preventcrime">
                <action method="setLink" process="a"><li>id="nav-help-prevent"</li><a>href="{$baseUrl}"</a><label><![CDATA[<span>Help Prevent Crime</span>]]></label></action>
            </block>
            <block type="list_link" name="top.menu.contact">
                <action method="setLink" process="a"><li>id="nav-contact"</li><a>href="{$baseUrl}"</a><label><![CDATA[<span>Contact Us</span>]]></label></action>
            </block>
        </block>
        
        <block type="list" name="top.forms" as="topForms"/>
        
        <block type="list" name="left" as="left"/>
        
        <block type="list" name="content" as="content"/>
        
        <block type="list" name="botom.links" as="bottomLinks">
            <block type="list_link" name="bottom.links.home">
                <action method="setLink" process="a"><li/><a>href="{$baseUrl}"</a><label>Home</label></action>
            </block>
            <block type="list_link" name="bottom.links.sitemap">
                <action method="setLink" process="a"><li/><a>href="{$baseModuleUrl}/sitemap"</a><label>Site Map</label></action>
            </block>
            <block type="list_link" name="bottom.links.privacy">
                <action method="setLink" process="a"><li/><a>href="{$baseModuleUrl}/article/privacy"</a><label>Privacy Policy</label></action>
            </block>
        </block>
    </block>
</layoutUpdate>