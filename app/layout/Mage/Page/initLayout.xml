<?xml version="1.0"?>
<layoutUpdate>
    <block type="tpl" name="root" output="toString">
        <action method="setViewName"><module>Mage_Page</module><view>layout.2column.phtml</view></action>
        <action method="assign"><var>imagesUrl</var><value>{baseSkinUrl}/default/images</value></action>
        
        <block type="list" name="head" as="head">
            <block type="tag" name="head.title">
                <action method="setTagName"><tagName>title</tagName></action>
                <action method="setContents"><contents>Magento Commerce</contents></action>
            </block>
            <block type="tag" name="head.icon">
                <action method="setTagName"><tagName>link</tagName></action>
                <action method="setTagParam"><name>rel</name><value>icon</value></action>
                <action method="setTagParam"><name>href</name><value>{baseUrl}/favicon.ico</value></action>
                <action method="setTagParam"><name>type</name><value>image/x-icon</value></action>
            </block>            
            <block type="tag" name="head.shortcut_icon">
                <action method="setTagName"><tagName>link</tagName></action>
                <action method="setTagParam"><name>rel</name><value>shortcut icon</value></action>
                <action method="setTagParam"><name>href</name><value>{baseUrl}/favicon.ico</value></action>
                <action method="setTagParam"><name>type</name><value>image/x-icon</value></action>
            </block>            
            <block type="tag_js" name="head.js.prototype">
                <action method="setSrc"><src>/prototype/prototype.js</src></action>
            </block>
            <block type="tag_js" name="head.js.prototype.validation">
                <action method="setSrc"><src>/prototype/validation.js</src></action>
            </block>
            <block type="tag_js" name="head.js.prototype.effects">
                <action method="setSrc"><src>/scriptaculous/effects.js</src></action>
            </block>
            <block type="tag_js" name="head.js.varien">
                <action method="setSrc"><src>/varien/js.js</src></action>
            </block>
            <block type="tag_js" name="head.js.varien.form">
                <action method="setSrc"><src>/varien/form.js</src></action>
            </block>
            <block type="tag_css" name="head.css.main">
                <action method="setHref"><href>/css/styles.css</href></action>
            </block>
        </block>
        
        <block type="list" name="top.links" as="topLinks"/>
        
        <block type="list" name="top.menu" as="topMenu">
            <block type="list_link" name="top.menu.locations">
                <action method="setLink"><li></li><a>href="{baseUrl}"</a><label><![CDATA[<span>Store Locations</span>]]></label></action>
            </block>
            <block type="list_link" name="top.menu.guide">
                <action method="setLink"><li></li><a>href="{baseUrl}"</a><label><![CDATA[<span>Fit Guide</span>]]></label></action>
            </block>
            <block type="list_link" name="top.menu.tips">
                <action method="setLink"><li></li><a>href="{baseUrl}"</a><label><![CDATA[<span>Care tips</span>]]></label></action>
            </block>
        </block>
        
        <block type="list" name="top.forms" as="topForms"/>
        
        <block type="list" name="left" as="left"/>
        
        <block type="list" name="content" as="content"/>
        
        <block type="list" name="botom.links" as="bottomLinks">
            <block type="list_link" name="bottom.links.about">
                <action method="setLink"><li/><a>href="{baseUrl}"</a><label>About Us</label></action>
            </block>
            <block type="list_link" name="bottom.links.contact">
                <action method="setLink"><li/><a>href="{baseUrl}"</a><label>Contact Us</label></action>
            </block>
            <block type="list_link" name="bottom.links.exchange">
                <action method="setLink"><li/><a>href="{baseUrl}"</a><label>Exchange and Returns</label></action>
            </block>
            <block type="list_link" name="bottom.links.sitemap">
                <action method="setLink"><li/><a>href="{baseUrl}/sitemap"</a><label>Site Map</label></action>
            </block>
        </block>
    </block>
</layoutUpdate>