[":page.initLayout",
    ["+tpl","#root",[".setViewName","Ecom_Page","layout.2column"],[".assign","imagesUrl","{$baseSkinUrl}/default/page/images"],
        [".setChild","head",["+list","#head",
            [".append",["+tag","#.title",[".setTagName","title"],[".setContents","Pepper Commerce"]]],
            [".append",["+tag_js",[".setSrc","/prototype.js"]]],
            [".append",["+tag_css",[".setHref","/page/style.css"]]]
        ]],
        [".setChild","topLinks",["+list","#top.links",
            [".append",["+list_link","#.help",[".setLink","","href=\"{$baseModuleUrl}/article/help\"","Help"]]]
        ]],
        [".setChild","topMenu",["+list","#top.menu",
            [".append",["+list_link","#.home",[".setLink","id=\"nav-home\"","href=\"{$baseUrl}\" title=\"Home\"","<span>Home</span>"]]],
            [".append",["+list_link","#.preventcrime",[".setLink","id=\"nav-help-prevent\"","href=\"{$baseUrl}\" title=\"Help Prevent Crime\"","<span>Help Prevent Crime</span>"]]],
            [".append",["+list_link","#.contactus",[".setLink","id=\"nav-contact\"","href=\"{$baseUrl}\" title=\"Contact Us\"","<span>Contact Us</span>"]]]
        ]],
        [".setChild","topForms",["+list","#top.forms"]],
        [".setChild","left",["+list","#left"]],
        [".setChild","content",["+list","#content"]],
        [".setChild","bottomLinks",["+list","#bottom.links",
            [".append",["+list_link","#.home",[".setLink","","href=\"{$baseUrl}\" title=\"Help\"","Help"]]],
            [".append",["+list_link","#.sitemap",[".setLink","","href=\"{$baseModuleUrl}/sitemap\" title=\"Site Map\"","Site Map"]]],
            [".append",["+list_link","#.privacy",[".setLink","","href=\"{$baseModuleUrl}/article/privacy\" title=\"Privacy Policy\"","Privacy Policy"]]]
        ]]
    ]
]