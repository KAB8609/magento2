<div class="content">
<h1 class="page-heading">Shopping Cart</h1>
<form action="<?=Mage::getUrl('checkout', array('controller'=>'cart', 'action'=>'updatePost'))?>" method="post">
    <table cellspacing="6" width="100%" class="data-table">
        <tr>
            <th class="align-left">Product Name</th>
            <th style="width:68px;" class="align-center">Remove</th>
            <th style="width:88px;" class="align-center">Unit Price</th>
            <th style="width:45px;" class="align-center">Qty</th>
            <th style="width:70px;" class="align-center">Total</th>
        </tr>
        <?foreach($data['cart']['items'] as $item):?>
        <tr>
            <td><a href="<?=Mage::getUrl('catalog', array('controller'=>'product', 'action'=>'view', 'id'=>$item['product_id']))?>"><?=$item['name']?></a></td>
            <td class="align-center"><input type="checkbox" value="1" name="cart[<?=$item['entity_id']?>][remove]"/></td>
            <td class="align-center"><?=$item['price']?></td>
            <td class="align-center"><input name="cart[<?=$item['entity_id']?>][qty]" value="<?=$item['qty']?>" size="2" class="input-text qty"/></td>
            <td class="align-right"><?=$item['row_total']?></td>
        </tr>
        <?endforeach?>
