                <input class="input-text" id="giftcert_code" name="giftcert_code" value="<?=$data['cart']['giftcert_code']?>"/> <input type="submit" value="Apply" class="input-button" name="do"/> <input type="submit" value="Clear" class="input-button" name="do"/>
            </form>
        </div>
        <div class="clearfix"></div>
    </li>
</ul>
</div>