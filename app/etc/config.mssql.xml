<config>
    <global>
        <resource>
            <connection>
                <types>
                    <pdo_mssql>
                        <adapter>Varien_Db_Adapter_Pdo_Mssql</adapter>
                        <compatibleMode>0</compatibleMode>
                    </pdo_mssql>
                </types>
            </connection>
        </resource>
    </global>

    <install>
        <databases>
            <mssql>
                <type>pdo_mssql</type>
                <pdo_types>
                    <dblib>pdo_dblib</dblib>
                    <sqlsrv>pdo_sqlsrv</sqlsrv>
                </pdo_types>
                <min_version>10.0.0000.00</min_version>
                <extensions>
                    <pdo_mysql/>
                </extensions>
            </mssql>
        </databases>

        <layout>
            <updates>
                <install_mssql>
                    <file>mssql.xml</file>
                </install_mssql>
            </updates>
        </layout>
    </install>
</config>
