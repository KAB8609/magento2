<?xml version="1.0"?>
<config>
   <global>
      <default>
         <website>base</website>
         <filesystem>
            <etc>{root_dir}/app/etc</etc>
            <code>{root_dir}/app/code</code>
            <var>{root_dir}/var</var>
            <session>{root_dir}/var/session</session>
            <cache_config>{root_dir}/var/cache/config</cache_config>
            <cache_layout>{root_dir}/var/cache/layout</cache_layout>
         </filesystem>
      </default>
      
      <websites>
         <base>
            <id>1</id>
            <language>en</language>
            <group>default</group>
            
            <filesystem>
                <layout>{root_dir}/app/view/front/layout</layout>
                <template>{root_dir}/app/view/front/template</template>
                <translate>{root_dir}/app/view/front/translate</translate>
                <base>{root_dir}</base>
                <media>{root_dir}/media</media>
                <skin>{root_dir}/skins/default</skin>
            </filesystem>
            
            <unsecure>
               <protocol>{protocol}</protocol>
               <host>{host}</host>
               <port>{port}</port>
               <basePath>{base_path}</basePath>
            </unsecure>
            
            <secure>
               <protocol>{protocol}</protocol>
               <host>{host}</host>
               <port>{port}</port>
               <basePath>{base_path}</basePath>
            </secure>
            
            <url>
                <media>{base_path}media/</media>
                <skin>{base_path}skins/default/</skin>
                <js>{base_path}js/</js>
            </url>
         </base>
         
         <admin extends="//global/websites/base">
            <filesystem>
                <layout>{root_dir}/app/view/admin/layout</layout>
                <template>{root_dir}/app/view/admin/template</template>
                <translate>{root_dir}/app/view/admin/translate</translate>
                <base>{root_dir}/admin</base>
                <skin>{root_dir}/admin/skins/default</skin>
            </filesystem>   
         
            <unsecure>
                <basePath>{base_path}admin/</basePath>
            </unsecure>
            
            <secure>
                <basePath>{base_path}admin/</basePath>            
            </secure>
         </admin>
      </websites>
      
      <resources>
         <dev_setup>
            <connection>
               <model>mysql4</model>
               <type>mysqli_setup</type>
               <host>{db_host}</host>
               <username>{db_user}</username>
               <password>{db_pass}</password>
               <dbname>{db_name}</dbname>
            </connection>
         </dev_setup>
         <dev_write>
            <connection extends="//dev_setup/connection">
               <type>pdo_mysql</type>
            </connection>
         </dev_write>
         <dev_read>
            <connection>
               <use>dev_write</use>
            </connection>
         </dev_read>
         <core_setup>
            <connection>
               <use>dev_setup</use>
            </connection>
         </core_setup>
         <core_write>
            <connection>
               <use>dev_write</use>
            </connection>
         </core_write>
         <core_read>
            <connection>
               <use>dev_read</use>
            </connection>
         </core_read>
      </resources>
   </global>
</config>
