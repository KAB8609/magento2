<?xml version="1.0"?>
<config>
   <global>
      <default>
         <website>base</website>
         <filesystem>
            <etc>{app_root_dir}/etc</etc>
            <code>{app_root_dir}/code</code>
            <var>{app_root_dir}/../var</var>
         </filesystem>
      </default>
      
      <websites>
         <base>
            <id>1</id>
            <language>en</language>
            <group>default</group>
            
            <filesystem>
                <layout>{app_root_dir}/view/front/layout</layout>
                <template>{app_root_dir}/view/front/template</template>
                <translate>{app_root_dir}/view/front/translate</translate>
                <base>{app_root_dir}/../www</base>
                <media>{app_root_dir}/../www/media</media>
                <skin>{app_root_dir}/../www/skins/default</skin>
            </filesystem>
            
            <unsecure>
               <protocol>{protocol}</protocol>
               <host>{host}</host>
               <port>{port}</port>
               <basePath>{base_path}</basePath>
            </unsecure>
            
            <secure>
               <protocol>{secure_protocol}</protocol>
               <host>{secure_host}</host>
               <port>{secure_port}</port>
               <basePath>{secure_base_path}</basePath>
            </secure>
            
            <url>
                <media>{base_path}media/</media>
                <skin>{base_path}skins/default/</skin>
                <js>{base_path}js/</js>
            </url>
         </base>
         
         <admin extends="//global/websites/base">
            <filesystem>
                <layout>{app_root_dir}/view/admin/layout</layout>
                <template>{app_root_dir}/view/admin/template</template>
                <translate>{app_root_dir}/view/admin/translate</translate>
                <base>{app_root_dir}/../www/admin</base>
                <skin>{app_root_dir}/../www/admin/skins/default</skin>
            </filesystem>   
         
            <unsecure>
                <basePath>{base_path}admin/</basePath>
            </unsecure>
            
            <secure>
                <basePath>{secure_base_path}admin/</basePath>            
            </secure>
         </admin>
      </websites>
      
      <resources>
         <dev_setup>
            <connection>
               <model>mysql4</model>
               <type>mysqli_setup</type>
               <host>{db_host}</host>
               <username>{db_user}</username>
               <password>{db_pass}</password>
               <dbname>{db_name}</dbname>
            </connection>
         </dev_setup>
         <dev_write>
            <connection extends="//dev_setup/connection">
               <type>pdo_mysql</type>
            </connection>
         </dev_write>
         <dev_read>
            <connection>
               <use>dev_write</use>
            </connection>
         </dev_read>
         <core_setup>
            <connection>
               <use>dev_setup</use>
            </connection>
         </core_setup>
         <core_write>
            <connection>
               <use>dev_write</use>
            </connection>
         </core_write>
         <core_read>
            <connection>
               <use>dev_read</use>
            </connection>
         </core_read>
      </resources>
   </global>
</config>
