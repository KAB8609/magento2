<?xml version="1.0"?>
<config>
   <global>
      <install>
        <date>{{date}}</date>
      </install>
      <default>
         <store>base</store>
         <currency>USD</currency>
         <filesystem>
            <etc>{{root_dir}}/app/etc</etc>
            <code>{{root_dir}}/app/code</code>
            <upload>{{root_dir}}/media/upload</upload>
            <var>{{var_dir}}</var>
            <session>{{var_dir}}/session</session>
            <cache_config>{{var_dir}}/cache/config</cache_config>
            <cache_layout>{{var_dir}}/cache/layout</cache_layout>
         </filesystem>
      </default>
      
      <stores>
         <base>
            <id>1</id>
            <language>en</language>
            <website>default</website>
            <currency>
                <default>USD</default>
                <available>
                    <USD />
                    <CAD />
                    <UAH />
                    <RUB />
                </available>
            </currency>
            
            <filesystem>
                <layout>{{root_dir}}/app/view/layout</layout>
                <template>{{root_dir}}/app/view/template</template>
                <translate>{{root_dir}}/app/view/translate</translate>
                <base>{{root_dir}}</base>
                <media>{{root_dir}}/media</media>
                <skin>{{root_dir}}/skins/default</skin>
            </filesystem>
            
            <unsecure>
               <protocol>{{protocol}}</protocol>
               <host>{{host}}</host>
               <port>{{port}}</port>
               <base_path>{{base_path}}</base_path>
            </unsecure>
            
            <secure>
               <protocol>{{protocol}}</protocol>
               <host>{{host}}</host>
               <port>{{port}}</port>
               <base_path>{{base_path}}</base_path>
            </secure>
            
            <url>
                <media>{{base_path}}media/</media>
                <skin>{{base_path}}skins/default/</skin>
                <js>{{base_path}}js/</js>
            </url>
         </base>
         
         <russian>
            <id>2</id>
            <language>ru</language>
            <website>default</website>
            <currency>
                <default>UAH</default>
                <available>
                    <UAH />
                    <RUB />
                </available>
            </currency>
            
            <filesystem>
                <layout>{{root_dir}}/app/view/layout</layout>
                <template>{{root_dir}}/app/view/template</template>
                <translate>{{root_dir}}/app/view/translate</translate>
                <base>{{root_dir}}</base>
                <media>{{root_dir}}/media</media>
                <skin>{{root_dir}}/skins/default</skin>
            </filesystem>
            
            <unsecure>
               <protocol>{{protocol}}</protocol>
               <host>{{host}}</host>
               <port>{{port}}</port>
               <base_path>{{base_path}}ru/</base_path>
            </unsecure>
            
            <secure>
               <protocol>{{protocol}}</protocol>
               <host>{{host}}</host>
               <port>{{port}}</port>
               <base_path>{{base_path}}ru/</base_path>
            </secure>
            
            <url>
                <media>{{base_path}}media/</media>
                <skin>{{base_path}}skins/default/</skin>
                <js>{{base_path}}js/</js>
            </url>
         </russian>

         <admin extends="//global/stores/base">
            <filesystem>
                <layout>{{root_dir}}/app/view/admin/layout</layout>
                <template>{{root_dir}}/app/view/admin/template</template>
                <translate>{{root_dir}}/app/view/admin/translate</translate>
                <base>{{root_dir}}/admin</base>
                <skin>{{root_dir}}/admin/skins/default</skin>
            </filesystem>   
         
            <unsecure>
                <base_path>{{base_path}}admin/</base_path>
            </unsecure>
            
            <secure>
                <base_path>{{base_path}}admin/</base_path>            
            </secure>
         </admin>
      </websites>
      
      <resources>
         <dev_setup>
            <connection>
               <model>mysql4</model>
               <initStatements>SET NAMES utf8</initStatements>
               <type>mysqli_setup</type>
               <active>{{db_active}}</active>
               <host>{{db_host}}</host>
               <username>{{db_user}}</username>
               <password>{{db_pass}}</password>
               <dbname>{{db_name}}</dbname>
            </connection>
         </dev_setup>
         <dev_write>
            <connection extends="//dev_setup/connection">
               <type>pdo_mysql</type>
            </connection>
         </dev_write>
         <dev_read>
            <connection>
               <use>dev_write</use>
            </connection>
         </dev_read>
         <core_setup>
            <connection>
               <use>dev_setup</use>
            </connection>
         </core_setup>
         <core_write>
            <connection>
               <use>dev_write</use>
            </connection>
         </core_write>
         <core_read>
            <connection>
               <use>dev_read</use>
            </connection>
         </core_read>
      </resources>
   </global>
</config>
