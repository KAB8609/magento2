<?xml version="1.0"?>
<config>
   <global>
      <resources>
         <dev_setup>
            <connection>
               <model>mysql4</model>
               <type>mysqli_setup</type>
               <host>{db_host}</host>
               <username>{db_user}</username>
               <password>{db_pass}</password>
               <dbname>{db_name}</dbname>
            </connection>
         </dev_setup>
         <dev_write>
            <connection extends="//dev_setup/connection">
               <type>pdo_mysql</type>
            </connection>
         </dev_write>
         <dev_read>
            <connection>
               <use>dev_write</use>
            </connection>
         </dev_read>
         <core_setup>
            <connection>
               <use>dev_setup</use>
            </connection>
         </core_setup>
         <core_write>
            <connection>
               <use>dev_write</use>
            </connection>
         </core_write>
         <core_read>
            <connection>
               <use>dev_read</use>
            </connection>
         </core_read>
      </resources>
      <websites>
         <default>
            <code>base</code>
         </default>
         <base>
            <id>1</id>
            <language>en</language>
            <unsecure>
               <protocol>{protocol}</protocol>
               <host>{host}</host>
               <port>{port}</port>
               <basePath>{base_path}</basePath>
            </unsecure>
            <secure extends="//websites/base/unsecure">
               <protocol>{secure_protocol}</protocol>
               <host>{secure_host}</host>
               <port>{secure_port}</port>
               <basePath>{secure_base_path}</basePath>
            </secure>
            <group>default</group>
         </base>
      </websites>
   </global>
</config>
