<?xml version="1.0"?>
<config>
   <global>
      <resources>
         <dev_setup>
            <connection>
               <type>mysqli</type>

               <host>localhost</host>

               <username>root</username>

               <password></password>

               <dbname>magenta</dbname>
            </connection>
         </dev_setup>

         <dev_write>
            <connection extends="//dev_setup/connection">
               <type>mysql</type>
            </connection>
         </dev_write>

         <dev_read>
            <connection use="dev_write" />
         </dev_read>

         <core_setup>
            <connection use="dev_setup" />
         </core_setup>

         <core_write>
            <connection use="dev_write" />
         </core_write>

         <core_read>
            <connection use="dev_read" />
         </core_read>
      </resources>
   </global>
</config>

