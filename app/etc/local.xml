<?xml version="1.0"?>
<config>
    <modules>
        <Mage_Core>
            <load>
                <all>
                    <resources>
                        <dev_setup>
                            <connection>
                                <type>mysqli</type>
                                <host>localhost</host>
                                <username>root</username>
                                <password></password>
                                <dbname>magenta</dbname>
                            </connection>
                        </dev_setup>

                        <dev_write>
                            <connection extends="//dev_setup/connection">
                                <type>mysql</type>
                            </connection>
                        </dev_write>

                        <dev_read>
                            <connection extends="//dev_write/connection"/>
                        </dev_read>

                        <core_setup>
                            <connection extends="//dev_setup/connection"/>
                        </core_setup>

                        <core_write>
                            <connection extends="//dev_write/connection"/>
                        </core_write>

                        <core_read>
                            <connection extends="//dev_read/connection"/>
                        </core_read>
                    </resources>
                </all>
            </load>
        </Mage_Core>
    </modules>
</config>