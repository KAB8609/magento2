<?xml version="1.0"?>
<config>
   <global>
      <resources>
         <dev_setup>
            <connection>
               <model>mysql4</model>

               <type>mysqli_setup</type>
               <host>localhost</host>
               <username>root</username>
               <password/>
               <dbname>magenta</dbname>
            </connection>
         </dev_setup>

         <dev_write>
            <connection extends="//dev_setup/connection">
               <type>pdo_mysql</type>
            </connection>
         </dev_write>

         <dev_read>
            <connection><use>dev_write</use></connection>
         </dev_read>

         <core_setup>
            <connection><use>dev_setup</use></connection>
         </core_setup>

         <core_write>
            <connection><use>dev_write</use></connection>
         </core_write>

         <core_read>
            <connection><use>dev_read</use></connection>
         </core_read>
       </resources>
         
       <websites>
          <default>
            <code>base</code>
          </default>
          
            <base>
                <id>1</id>
                <language>en</language>
                <unsecure>
                    <protocol>http</protocol>
                    <host>var-dev.varien.com</host>
                    <port>81</port>
                    <basePath>/dev/moshe/magenta/www/</basePath>
                </unsecure>
                <secure extends="//websites/base/unsecure">
                    <protocol>https</protocol>
                    <port>444</port>
                </secure>
                <group>default</group>
            </base>
            
       </websites>
   </global>

</config>

