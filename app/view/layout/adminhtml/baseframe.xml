<?xml version="1.0"?>
<layoutUpdate> 
    <block type="core/template" name="root" output="toHtml">
        <action method="setTemplate"><template>adminhtml/page.phtml</template></action>
        <action method="assign"><var>baseUrl</var><value>{{baseUrl}}</value></action>
        <action method="assign"><var>baseSkinUrl</var><value>{{baseUrl}}skins/admin</value></action>
        <block type="adminhtml/page_header" name="header" as="header"></block>
        <block type="adminhtml/page_menu" name="menu" as="menu"></block>
        <block type="adminhtml/widget_breadcrumbs" name="breadcrumbs" as="breadcrumbs"></block>
        <block type="core/text_list" name="left" as="left"/>
        <block type="core/text_list" name="content" as="content"/>
        <block type="adminhtml/page_footer" name="footer" as="footer"></block>
    </block>
</layoutUpdate>