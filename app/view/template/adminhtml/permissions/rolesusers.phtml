			<ul>
			<?php foreach ($role->getUsers() as $user) { ?>
				<li><?=$user->getFirstname();?> <span id="u<?=$user->getUserId();?>" class="link" onclick="role.deleteFromRole(this)">-</span></li>
			<?php } ?>
			</ul>
		</li>
		<?php } ?>
	</ul>
