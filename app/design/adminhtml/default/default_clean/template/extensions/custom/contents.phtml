<div class="entry-edit">
    <?php echo $this->getFormHtml() ?>

    <h4 class="icon-head head-edit-form"><?php echo $this->__("Contents") ?></h4>
    <fieldset id="contents_fieldset">
        <legend><?php echo $this->__("Contents") ?></legend>
        <table class="table-editable" cellspacing="0">
            <thead class="table-editable">
                <tr>
                    <th><?php echo $this->__("Role") ?></th>
                    <th><?php echo $this->__("Path") ?></th>
                    <th><?php echo $this->__("Type") ?></th>
                    <th><?php echo $this->__("Include") ?></th>
                    <th><?php echo $this->__("Ignore") ?></th>
                    <th>&nbsp;</th>
                </tr>
                <tr id="contents_template" style="display:none">
<?php function showContentsTemplate($self, $_i=0) { ?>
                    <td class="field-row">
                        <select name="contents[role][]">
                            <optgroup label="Magento">
                            <?php foreach ($self->getMageRoles() as $_value=>$_label): ?>
                                <option value="<?php echo $_value ?>" <?php echo $self->getSelected('contents/role/'.$_i, $_value) ?>><?php echo $_label ?></option>
                            <?php endforeach ?>
                            </optgroup>
                            <optgroup label="PEAR">
                            <?php foreach ($self->getPearRoles() as $_value=>$_label): ?>
                                <option value="<?php echo $_value ?>" <?php echo $self->getSelected('contents/role/'.$_i, $_value) ?>><?php echo $_label ?></option>
                            <?php endforeach ?>
                            </optgroup>
                        </select>
                     </td><td class="field-row">
                        <input class="input-text" style="width:150px" name="contents[path][]" value="<?php echo $self->getValue('contents/path/'.$_i) ?>"/>
                     </td><td class="field-row">
                        <select name="contents[type][]">
                            <option value="file" <?php echo $self->getSelected('contents/type/'.$_i, 'file') ?>><?php echo $self->__("File") ?></option>
                            <option value="dir" <?php echo $self->getSelected('contents/type/'.$_i, 'dir') ?>><?php echo $self->__("Recursive Dir") ?></option>
                        </select>
                     </td><td class="field-row">
                        <input class="input-text" style="width:100px" name="contents[include][]" value="<?php echo $self->getValue('contents/include/'.$_i) ?>"/>
                     </td><td class="field-row">
                        <input class="input-text" style="width:100px"  name="contents[ignore][]" value="<?php echo $self->getValue('contents/ignore/'.$_i) ?>"/>
                     </td><td class="field-row">
                        <?php echo $self->getRemoveRowButtonHtml('tr') ?>
                     </td>
<?php } ?>
<?php showContentsTemplate($this) ?>
                </tr>
            </thead>
            <tbody id="contents_container">
            <?php if ($this->getData('contents/role')): ?>
                <?php foreach ($this->getData('contents/role') as $_i=>$_dbField): ?>
                    <?php if (0===$_i) continue; ?>
                <tr>
<?php showContentsTemplate($this, $_i) ?>
                </tr>
                <?php endforeach ?>
            <?php endif ?>
            </tbody>
        </table>
        <?php echo $this->getAddRowButtonHtml('contents_container', 'contents_template', 'Add Contents Path') ?>
    </fieldset>
</div>
