<?php if($this->getType()!== 'main' && !$this->getScriptIncluded() && $this->getCanDisplayContainer()): ?>
<script type="text/javascript" src="<?php echo $this->getSkinUrl('js/giftmessage.js') ?>"></script>
<?php $this->setScriptIncluded(true); ?>
<?php endif; ?>
<?php if($this->getCanDisplayContainer()): ?>
<div id="<?php echo $this->getId() ?>">
<?php endif; ?>
<?php switch ($this->getType()): ?>
<?php case 'item': ?>
    <a class="listen-for-click" href="#">
        <?php if($this->hasGiftMessage()): ?>
        <?php echo Mage::helper('giftmessage')->__('Edit') ?>
        <?php else: ?>
        <?php echo Mage::helper('giftmessage')->__('Add') ?>
        <?php endif; ?>
    </a>
    <?php break; ?>
<?php case 'order_item': ?>
    <a class="listen-for-click" href="#">
        <?php if($this->hasGiftMessage()): ?>
        <?php echo Mage::helper('giftmessage')->__('Edit') ?>
        <?php else: ?>
        <?php echo Mage::helper('giftmessage')->__('Add') ?>
        <?php endif; ?>
    </a>
    <?php break; ?>
<?php case 'main': ?>
        <?php if($this->hasGiftMessage()): ?>
            <?php if($_giftMessage=$this->getMessage()): ?>
           <table cellspacing="0" class="form-list">
            <tr>
                <td class="label"><label><?php echo Mage::helper('giftmessage')->__('From') ?></label></td>
                <td class="input-ele"><?php echo $this->htmlEscape($_giftMessage->getSender()) ?></td>
            </tr>
            <tr>
                <td class="label"><label><?php echo Mage::helper('giftmessage')->__('To') ?></label></td>
                <td class="input-ele"><?php echo $this->htmlEscape($_giftMessage->getRecipient()) ?></td>
            </tr>
            <tr>
                <td class="label"><label><?php echo Mage::helper('giftmessage')->__('Message') ?></label></td>
                <td class="input-ele"><?php echo $this->prepareAsIs($_giftMessage->getMessage()) ?></td>
            </tr>
           </table>
            <?php endif; ?>
        <?php echo $this->getWidgetButtonHtml(Mage::helper('giftmessage')->__('Edit'), 'edit') ?>
        <?php else: ?>
        <?php echo $this->getWidgetButtonHtml(Mage::helper('giftmessage')->__('Add'), 'add') ?>
        <?php endif; ?>
    <?php break; ?>
<?php case 'order': ?>
        <?php if($this->hasGiftMessage()): ?>
            <?php if($_giftMessage=$this->getMessage()): ?>

           <table cellspacing="0" class="form-list">
            <tr>
                <td class="label"><label><?php echo Mage::helper('giftmessage')->__('From') ?></label></td>
                <td class="input-ele"><?php echo $this->htmlEscape($_giftMessage->getSender()) ?></td>
            </tr>
            <tr>
                <td class="label"><label><?php echo Mage::helper('giftmessage')->__('To') ?></label></td>
                <td class="input-ele"><?php echo $this->htmlEscape($_giftMessage->getRecipient()) ?></td>
            </tr>
            <tr>
                <td class="label"><label><?php echo Mage::helper('giftmessage')->__('Message') ?></label></td>
                <td class="input-ele"><?php echo $this->prepareAsIs($_giftMessage->getMessage()) ?></td>
            </tr>
            </table>

            <?php endif; ?>
        <?php echo $this->getWidgetButtonHtml(Mage::helper('giftmessage')->__('Edit'), 'edit') ?>
        <?php else: ?>
        <?php echo $this->getWidgetButtonHtml(Mage::helper('giftmessage')->__('Add'), 'add') ?>
        <?php endif; ?>
    <?php break; ?>
<?php endswitch ?>
<?php if($this->getCanDisplayContainer()): ?>
</div>
<script type="text/javascript">
var <?php echo $this->getJsObjectName() ?> = new GiftMessage('<?php echo $this->getId() ?>');
<?php echo $this->getJsObjectName() ?>.url = '<?php echo $this->getEditUrl() ?>';
</script>
<?php endif; ?>