<div class="entry-edit">
    <h4 class="icon-head head-edit-form"><?php echo Mage::helper('catalog')->__('Product In Stores') ?></h4>
    <fieldset id="grop_fields">
    <?php if($this->getProductId()): ?>
<ul class="messages">
    <li class="notice-msg">
        <ul>
            <li><?php echo Mage::helper('catalog')->__("Items that you don't want to show in the catalog or search results should have status 'Disabled' in the desired store.") ?></li>
        </ul>
    </li>
</ul>
    <?php endif; ?>
    <?php if($this->getStoreId()): ?>
        <p><input name="stores[<?php echo $this->getStoreId() ?>]" type="checkbox" value="<?php echo $this->getStoreId() ?>" id="store_<?php echo $this->getStoreId() ?>" checked/>
            <label for="store_<?php echo $this->getStoreId() ?>" class="normal"><?php echo $this->getStoreName($this->getStoreId()) ?></label>
        </p>
    <?php else: ?>
        <?php foreach ($this->getWebsiteCollection() as $_website): ?>
            <h3><?php echo $_website->getName() ?></h3>
            <?php $_storesCollection=$_website->getStoreCollection()->load() ?>
            <?php foreach ($_storesCollection as $_store): ?>
                <?php if($this->isProductInStore($_store->getId())): ?>
                <p>
                    <input name="stores[<?php echo $_store->getId() ?>]" type="checkbox" value="<?php echo $_store->getId() ?>" id="store_<?php echo $_store->getId() ?>" checked="true"/>
                    <label for="store_<?php echo $_store->getId() ?>" class="normal"><?php echo $_store->getName() ?></label>
                </p>
                <?php else: ?>
                <p>
                    <input name="stores[<?php echo $_store->getId() ?>]" type="checkbox" value="0" id="store_<?php echo $_store->getId() ?>" class="new-store"/>
                    <label for="store_<?php echo $_store->getId() ?>" class="normal"><?php echo $_store->getName() ?></label>
                    <span id="store_<?php echo $_store->getId() ?>_from" style="display:none">
                        <?php echo Mage::helper('catalog')->__('(Copy data from: %s)', $this->getChooseFromStoreHtml()) ?>
                    </span>
                </p>
                <?php endif; ?>
            <?php endforeach; ?>
        <?php endforeach; ?>
    <?php endif; ?>
    </fieldset>
</div>
<script type="text/javascript">
    var newStoreCheckboxes = $$('.new-store');

    for(var i=0;i<newStoreCheckboxes.length;i++){
        Event.observe(newStoreCheckboxes[i], 'change', toggleStoreFromChooser);
        if($(newStoreCheckboxes[i].id+'_from')){
            var selects = $(newStoreCheckboxes[i].id+'_from').getElementsBySelector('select');
            if(selects[0]){
                selects[0].checkboxElement = newStoreCheckboxes[i];
                Event.observe(selects[0], 'change', chooseStoreFrom);
            }
        }
    }

    function toggleStoreFromChooser(event){
        var element = Event.element(event);
        if(!$(element.id+'_from')){
            return;
        }

        if(element.checked) {
            $(element.id+'_from').show();
        }
        else {
            $(element.id+'_from').hide();
        }
    }

    function chooseStoreFrom(event){
        var element = Event.element(event);
        if(element && element.checkboxElement){
            element.checkboxElement.value = element.value;
        }
    }
</script>
