<div class="entry-edit" id="order_history_block">
    <h4 class=""><?php echo Mage::helper('sales')->__('Order History') ?></h4>
    <fieldset>
        <ul>
        <?php foreach ($this->getOrder()->getAllStatusHistory() as $_history): ?>
            <li>
                <strong><?php echo $this->helper('core')->formatDate($_history->getCreatedAt(), 'medium') ?></strong>
                <?php echo $this->helper('core')->formatTime($_history->getCreatedAt(), 'medium') ?><span class="pipe"></span><?php echo $_history->getStatusLabel() ?>
                <?php if($_history->getComment()): ?>
                    <br/><?php echo $_history->getComment() ?>
                <?php endif; ?>
            </li>
        <?php endforeach; ?>
        </ul>
        <a href="#" onclick="$('history_form').show();this.hide();return false;"><?php echo Mage::helper('sales')->__('Add Comment') ?></a>
        <div id="history_form" class="order-history-form" style="display:none">
            <table cellspacing="0" class="form-list">
                <tr>
                    <td class="label"><?php echo Mage::helper('sales')->__('Status') ?></td>
                    <td class="input-ele">
                <select name="history[status]" class="select" id="history_status">
                <?php foreach ($this->getStatuses() as $_code=>$_label): ?>
                    <option value="<?php echo $_code ?>"<?php if($_code==$this->getOrder()->getStatus()): ?> selected<?php endif; ?>><?php echo $_label ?></option>
                <?php endforeach; ?>
                </select>
            </td>
            </tr>
            <tr>
                <td class="label"><?php echo Mage::helper('sales')->__('Comment') ?></td>
                <td><textarea name="history[comment]" class="input-text" id="history_comment"></textarea></td>
            </tr>
            <tr>
                <td class="label">&nbsp;</td>
                <td><input name="history[is_customer_notified]" type="checkbox" id="history_notify" value="1"/>
                <label class="normal" for="history_notify"><?php echo Mage::helper('sales')->__('Notify Customer') ?></label></td>
            </tr>
            <tr>
                <td class="label">&nbsp;</td>
                <td><?php echo $this->getChildHtml('submit_button') ?></td>
            </tr>
          </table>
        </div>
        <div>
        </div>
    </fieldset>
    <script type="text/javascript">
    if($('order_status'))$('order_status').update('<?php echo $this->getOrder()->getStatusLabel() ?>');
    </script>
</div>