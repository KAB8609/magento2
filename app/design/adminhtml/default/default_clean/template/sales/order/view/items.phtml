<div class="grid">
    <table cellspacing="0" id="invoice_items_grid_table">
        <col width="80"/>
        <col/>
        <col width="100"/>
        <col width="60"/>
        <col width="60"/>
        <col width="60"/>
        <col width="60"/>
        <col width="60"/>
        <col width="70"/>
        <col width="90"/>
        <col width="100"/>
        <thead>
            <tr class="headings">
                <th><?php echo Mage::helper('sales')->__('SKU') ?></th>
                <th><?php echo Mage::helper('sales')->__('Product Name') ?></th>
                <th><?php echo Mage::helper('sales')->__('Price') ?></th>
                <th><?php echo Mage::helper('sales')->__('Qty Ordered') ?></th>
                <th><?php echo Mage::helper('sales')->__('Qty Canceled') ?></th>
                <th><?php echo Mage::helper('sales')->__('Qty Returned') ?></th>
                <th><?php echo Mage::helper('sales')->__('Qty Shipped') ?></th>
                <th><?php echo Mage::helper('sales')->__('Qty Invoiced') ?></th>
                <th><?php echo Mage::helper('sales')->__('Item Status') ?></th>
                <th><?php echo Mage::helper('sales')->__('Tax Amount') ?></th>
                <th class="last"><?php echo Mage::helper('sales')->__('Subtotal') ?></th>
            </tr>
        </thead>
        <tbody>
            <?php $_items = $this->getItemsCollection() ?>
            <?php $i=0;foreach ($_items as $_item):$i++ ?>
                <tr class="<?php echo ($i%2==0)?'even':'odd' ?>">
                    <td><?php echo $_item->getSku() ?></td>
                    <td><?php echo $this->renderInfoColumn($_item) ?></td>
                    <td><?php echo $this->getOrder()->formatPrice($_item->getPrice()) ?></td>
                    <td><?php echo $_item->getQtyOrdered()*1 ?></td>
                    <td><?php echo $_item->getQtyCanceled()*1 ?></td>
                    <td><?php echo $_item->getQtyRefunded()*1 ?></td>
                    <td><?php echo $_item->getQtyShipped()*1 ?></td>
                    <td><?php echo $_item->getQtyInvoiced()*1 ?></td>
                    <td><?php echo $_item->getStatus() ?></td>
                    <td><?php echo $this->getOrder()->formatPrice($_item->getTaxAmount()) ?></td>
                    <td class="last"><?php echo $this->getOrder()->formatPrice($_item->getRowTotal()) ?></td>
                </tr>
            <?php endforeach; ?>
        </tbody>
    </table>
</div>