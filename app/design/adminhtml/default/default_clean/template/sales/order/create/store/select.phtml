<!--// Order/Create/Store -->
<?php foreach ($this->getWebsiteCollection() as $_website): ?>
    <?php $_storesCollection=$_website->getStoreCollection()->load() ?>
    <?php if($_storesCollection->getSize()): ?>
    <h3><?php echo $_website->getName() ?></h3>
    <table cellspacing="0" class="form-list">
    <?php foreach ($_storesCollection as $_store): ?>
    <tr>
        <td>
            <input type="radio" id="store_<?php echo $_store->getId() ?>" class="new-store" onclick="order.setStoreId('<?php echo $_store->getId() ?>')"/>
            <label for="store_<?php echo $_store->getId() ?>" class="normal"><?php echo $_store->getName() ?></label>
        </td>
    </tr>
    <?php endforeach; ?>
    </table>
    <?php endif; ?>
<?php endforeach; ?>
