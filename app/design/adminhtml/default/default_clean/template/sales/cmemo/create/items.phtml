<div id="invoice_items_grid">
    <div class="grid">
        <table cellspacing="0" id="invoice_items_grid_table">
            <thead>
                <tr class="headings">
                    <th class="no-link"><span class="nobr"><?=Mage::helper('sales')->__('Product ID')?></span></th>
                    <th class="no-link"><span class="nobr"><?=Mage::helper('sales')->__('SKU')?></span></th>
                    <th class="no-link"><span class="nobr"><?=Mage::helper('sales')->__('Product Name')?></span></th>
                    <th class="no-link"><span class="nobr"><?=Mage::helper('sales')->__('Qty Shipped')?></span></th>
                    <th class="no-link" colspan="2"><span class="nobr"><?=Mage::helper('sales')->__('Qty To Return')?></span></th>
                </tr>
            </thead>
            <tbody>
                <?$_items = $this->getInvoice()->getItemsCollection()?>
                <?foreach ($_items as $_item):?>
                    <tr>
                        <td class="a-center"><?=$_item->getProductId()?></td>
                        <td><?=$_item->getSku()?></td>
                        <td><?=$_item->getName()?></td>
                        <td><?=$_item->getQty()?></td>
                        <td><input type="text" class="input-text validate-number" name="items[<?=$_item->getId()?>]" value="<?=(!is_null($this->getItemData($_item->getId())) ? $this->getItemData($_item->getId()) : $_item->getQtyToReturn())?>" style="width: 40px;"/></td>
                    </tr>
                <?endforeach;?>
            </tbody>
        </table>
    </div>
</div>