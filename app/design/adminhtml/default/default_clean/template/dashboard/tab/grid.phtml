<?php if($this->getCount()): ?>
<div class="graph-table col3">
	<div class="tab-right">
	<div class="tab-head">
		<?php foreach ($this->getColumns() as $yKey => $_column): ?>
		<div class="header" style="<?php echo ($yKey % 2 ? 'background:none;' : '') ?> <?php echo ( $_column->getWidth() ? 'width:' . ($_column->getWidth()+6) . 'px' : '') ?>"><?php echo $_column->getHeader() ?></div>
		<?php endforeach; ?>
	</div><div class="clear"></div>
	<?php $_scrollIndex = $this->getScrollIndex() ?>
		
		<div class="tab-body">
		<?php if($this->getCount()>10): ?>
		<div class="scroll">
		<?php endif; ?>
		<?php foreach ($this->getCollection() as $gKey => $row): ?>
			<div class="row<?php echo ( $gKey % 2 ? '2': '') ?>">
			<?php foreach ($this->getColumns() as $k => $_column) : ?>
				<div class="tab-item" <?php echo ( $k=='1' ? ' style="text-align:right;"' : '') ?>><?php echo $this->getRowValue($_column, $row) ?></div>
			<?php endforeach; ?>
			</div>
		<?php endforeach; ?>
		<?php if($this->getCount()>10): ?>
		</div>
		<?php endif; ?>
		</div>
	<div class="clear"></div>
	<div class="tab-footer">
	<?php if($this->getCount()): ?>
	  <table cellpadding="0" cellspacing="0" border="0" class="totals" align="right">
         <?php foreach ($this->getTotals() as $_total): ?>
	  	<tr>
         		<td class="label"><?php echo $_total['label'] ?>:</td>
			<td class="value"><div><?php echo $_total['value'] ?></div></td>
         	</tr>
	  <?php endforeach; ?>
         </table><div class="clear"></div>
     <?php endif; ?>
	</div><div class="clear"></div>
</div></div>
<div class="tab-footer-bottom"><div class="tab-footer-right"></div><div class="tab-footer-left"></div></div>
<div class="clear"></div><br/>
<?php else: ?>
<div align="center" style="margin-top:180px;"><?php echo $this->__('No Data Found') ?></div>
<?php endif; ?>