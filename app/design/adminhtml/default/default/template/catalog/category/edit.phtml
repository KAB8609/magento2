<script type="text/javascript">
//<![CDATA[
    var categoryForm = new varienForm('category_edit_form');

    function updateContent(url, params, loader){
        var categoryContainer = $('category-edit-container');
        if (!params) {
            var params = {active_tab_id:category_info_tabsJsTabs.activeTab.id};
        }

        new Ajax.Updater(
            categoryContainer,
            url + (url.match(new RegExp('\\?')) ? '&isAjax=true' : '?isAjax=true' ),
            {
               parameters:  params || {},
               method:      'post',
               loaderArea:  loader?categoryContainer:false,
               onComplete:  refreshEditArea.bind(this),
               evalScripts: true
            }
        );
    }

    function refreshEditArea(transport){
        setTimeout(function() {
            category_info_tabsJsTabs.moveTabContentInDest();
        }, 1000);
    }
//]]>
</script>