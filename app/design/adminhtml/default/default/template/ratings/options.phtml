<h4 class="icon-head head-edit-form fieldset-legend"><?=__('Assigned options')?></h4>
<fieldset id="options_form">
<?if( !$options ):?>
    <?for( $_i=1;$_i<=5;$_i++ ):?>
        <span class="field-row">
            <label for="option_<?=$_i?>">Option Title:</label>
            <input id="option_<?=$_i?>" name="option[<?=$_i?>][code]" value="<?=$_i?>" class="input-text" type="text" />
        </span>
    <?endfor;?>
<?elseif( $options->getSize() > 0 ):?>
    <?foreach($options->getItems() as $_item):?>
        <span class="field-row">
            <label for="option_<?=$_item->getId()?>">Option Title:</label>
            <input id="option_<?=$_item->getId()?>" name="option[<?=$_item->getId()?>][code]" value="<?=$_item->getCode()?>" class="input-text" type="text" />
        </span>
    <?endforeach;?>
<?endif;?>
</fieldset>