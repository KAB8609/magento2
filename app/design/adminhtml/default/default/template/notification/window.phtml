        minorText=<?php echo $this->getMinorText(); ?><br>
        majorText=<?php echo $this->getMajorText(); ?><br>
        criticalText=<?php echo $this->getCriticalText(); ?><br>
        messageText=<?php echo $this->getNoticeMessageText(); ?><br>
        detailsUrl=<?php echo $this->getNoticeMessageUrl(); ?><br>
        swfObjectUrl=<?php echo $this->getObjectUrl(); ?><br>
        link to image = <?php echo $this->getSeverityIconsUrl() ?>
        <br>
        <button type="button" onclick="closeMessagePopup();return false;"><?php echo $this->getCloseText(); ?></button>
    </div>
</div>
