<script type="text/javascript">
// <![CDATA[

// tabNumber:
//  * 0, 1, 2  main tabs
//  * 3, ...  active tabs

// disabledTabNumber â€” another numbers

enabledTabs = <?php echo json_encode($this->getTabs()->getEnabledTabs()); ?>


disabledTabs = <?php echo json_encode($this->getTabs()->getDisabledTabs()); ?>

function XmlconnectTabUpdate() {
    for(i=0; i<8; i++) {
        tab=document.getElementsByClassName('mm_tab'+i)
        for(j=0; j<tab.length; j++) {
            if(i<enabledTabs.length) {
                // Enabled tabs
                if(tab[j].className.indexOf('mm_img')>0) {
                    tab[j].innerHTML = '<img src="<?php echo Mage::getBaseUrl('skin') ?>xmlconnect/'+enabledTabs[i].image+'" alt="" />'
                }
                if(tab[j].className.indexOf('mm_name')>0) {
                    tab[j].innerHTML = '<span>'+enabledTabs[i].label+'</span>'
                }
                if(tab[j].className.indexOf('mm_ctrl')>0) {
                    tab[j].style.visibility = 'visible'
                }
            } else {
                // Empty places
                if(tab[j].className.indexOf('mm_img')>0) {
                    tab[j].innerHTML = '<img src="<?php echo Mage::getBaseUrl('skin') ?>xmlconnect/tab_empty.png" alt="" />'
                }
                if(tab[j].className.indexOf('mm_name')>0) {
                    tab[j].innerHTML = ''
                }
                if(tab[j].className.indexOf('mm_ctrl')>0) {
                    tab[j].style.visibility = 'hidden';
                }
            }
        }
    }
    for(i=0; i<5; i++) {
        tab=document.getElementsByClassName('mmd_tab'+i)
        for(j=0; j<tab.length; j++) {
            if(i<disabledTabs.length) {
                // Disabled tabs
                if(tab[j].className.indexOf('mm_img')>0) {
                    tab[j].innerHTML = '<img src="<?php echo Mage::getBaseUrl('skin') ?>xmlconnect/'+disabledTabs[i].image+'" alt="" />'
                }
                if(tab[j].className.indexOf('mm_name')>0) {
                    tab[j].innerHTML = disabledTabs[i].label
                }
                if(tab[j].className.indexOf('mm_ctrl')>0) {
                    tab[j].style.visibility = 'visible'
                }
            } else {
                // Empty places
                if(tab[j].className.indexOf('mm_img')>0) {
                    tab[j].innerHTML = '<img src="<?php echo Mage::getBaseUrl('skin') ?>xmlconnect/tab_empty.png" alt="" />'
                }
                if(tab[j].className.indexOf('mm_name')>0) {
                    tab[j].innerHTML = ''
                }
                if(tab[j].className.indexOf('mm_ctrl')>0) {
                    tab[j].style.visibility = 'hidden'
                }
            }
        }
    }
    document.getElementById('<?php echo htmlspecialchars($this->getName()); ?>').value = Object.toJSON({"enabledTabs": enabledTabs, "disabledTabs": disabledTabs})
}

if(window.addEventListener) {
    window.addEventListener('load', XmlconnectTabUpdate, false)
} else if(window.attachEvent) {
    window.attachEvent('onload', XmlconnectTabUpdate)
}

function XmlconnectTabMoveLeft(tabNumber) {
    if(tabNumber<=0) return
    tab = enabledTabs[tabNumber]
    enabledTabs[tabNumber] = enabledTabs[tabNumber-1]
    enabledTabs[tabNumber-1] = tab
    XmlconnectTabUpdate()
}

function XmlconnectTabMoveRight(tabNumber) {
    if(tabNumber+1>=enabledTabs.length) return
    tab = enabledTabs[tabNumber]
    enabledTabs[tabNumber] = enabledTabs[tabNumber+1]
    enabledTabs[tabNumber+1] = tab
    XmlconnectTabUpdate()
}

function XmlconnectTabEnable(disabledTabNumber) {
    tab = disabledTabs[disabledTabNumber]
    disabledTabs.splice(disabledTabNumber,1)
    enabledTabs.push(tab)
    XmlconnectTabUpdate()
    return false
}

function XmlconnectTabDisable(tabNumber) {
    if(disabledTabs.length>=5) return false
    tab = enabledTabs[tabNumber]
    enabledTabs.splice(tabNumber,1)
    disabledTabs.push(tab)
    XmlconnectTabUpdate()
    return false
}

