<script type="text/javascript">

// tabNumber:
//  * 0, 1, 2 — main tabs
//  * 3, ... — active tabs

// disabledTabNumber — another numbers

tabNames = [ 'Search', 'Cart', 'Account', 'Browse', 'About Us', 'Contact Us']

tabImages = [
'<?php echo Mage::getBaseUrl('skin') ?>xmlconnect/tab_search.png',
'<?php echo Mage::getBaseUrl('skin') ?>xmlconnect/tab_cart.png',
'<?php echo Mage::getBaseUrl('skin') ?>xmlconnect/tab_account.png',
'<?php echo Mage::getBaseUrl('skin') ?>xmlconnect/tab_home.png',
'<?php echo Mage::getBaseUrl('skin') ?>xmlconnect/tab_page.png',
'<?php echo Mage::getBaseUrl('skin') ?>xmlconnect/tab_page.png' ]

disabledTabNames = []
disabledTabImages = []

function XmlconnectTabUpdate() {
    for(i=0; i<tabImages.length; i++) {
        tab=document.getElementsByClassName('mm_tab'+i)
        for(j=0; j<tab.length; j++) {
            if(tab[j].className.indexOf('mm_img')>0) {
                tab[j].innerHTML = '<img src="'+tabImages[i]+'" alt="" />'
            }
            if(tab[j].className.indexOf('mm_name')>0) {
                tab[j].innerHTML = tabNames[i]
            }
            if(tab[j].className.indexOf('mm_ctrl')>0) {
                tab[j].style.visibility = 'visible'
            }
        }
    }
    for(i=tabImages.length; i<8; i++) {
        tab=document.getElementsByClassName('mm_tab'+i)
        for(j=0; j<tab.length; j++) {
            if(tab[j].className.indexOf('mm_img')>0) {
                tab[j].innerHTML = '<img src="<?php echo Mage::getBaseUrl('skin') ?>xmlconnect/tab_empty.png" alt="" />'
            }
            if(tab[j].className.indexOf('mm_name')>0) {
                tab[j].innerHTML = ''
            }
            if(tab[j].className.indexOf('mm_ctrl')>0) {
                tab[j].style.visibility = 'hidden'
            }
        }
    }
    for(i=0; i<disabledTabImages.length; i++) {
        tab=document.getElementsByClassName('mmd_tab'+i)
        for(j=0; j<tab.length; j++) {
            if(tab[j].className.indexOf('mm_img')>0) {
                tab[j].innerHTML = '<img src="'+disabledTabImages[i]+'" alt="" />'
            }
            if(tab[j].className.indexOf('mm_name')>0) {
                tab[j].innerHTML = disabledTabNames[i]
            }
            if(tab[j].className.indexOf('mm_ctrl')>0) {
                tab[j].style.visibility = 'visible'
            }
        }
    }
    for(i=disabledTabImages.length; i<5; i++) {
        tab=document.getElementsByClassName('mmd_tab'+i)
        for(j=0; j<tab.length; j++) {
            if(tab[j].className.indexOf('mm_img')>0) {
                tab[j].innerHTML = '<img src="<?php echo Mage::getBaseUrl('skin') ?>xmlconnect/tab_empty.png" alt="" />'
            }
            if(tab[j].className.indexOf('mm_name')>0) {
                tab[j].innerHTML = ''
            }
            if(tab[j].className.indexOf('mm_ctrl')>0) {
                tab[j].style.visibility = 'hidden'
            }
        }
    }
}

if(window.addEventListener) {
    window.addEventListener('load', XmlconnectTabUpdate, false)
} else if(window.attachEvent) {
    window.attachEvent('onload', XmlconnectTabUpdate)
}

function XmlconnectTabMoveLeft(tabNumber) {
    if(tabNumber==0) return
    // name
    tab = tabNames[tabNumber]
    tabNames[tabNumber] = tabNames[tabNumber-1]
    tabNames[tabNumber-1] = tab
    // image
    tab = tabImages[tabNumber]
    tabImages[tabNumber] = tabImages[tabNumber-1]
    tabImages[tabNumber-1] = tab
    // update
    XmlconnectTabUpdate()
}

function XmlconnectTabMoveRight(tabNumber) {
    if(tabNumber+1>=tabImages.length) return
    // name
    tab = tabNames[tabNumber]
    tabNames[tabNumber] = tabNames[tabNumber+1]
    tabNames[tabNumber+1] = tab
    // image
    tab = tabImages[tabNumber]
    tabImages[tabNumber] = tabImages[tabNumber+1]
    tabImages[tabNumber+1] = tab
    // update
    XmlconnectTabUpdate()
}

function XmlconnectTabEnable(disabledTabNumber) {
    tabNames.push(disabledTabNames.splice(disabledTabNumber,1))
    tabImages.push(disabledTabImages.splice(disabledTabNumber,1))
    // update
    XmlconnectTabUpdate()
    return false
}

function XmlconnectTabDisable(tabNumber) {
    if(disabledTabImages.length>=5) return
    disabledTabNames.push(tabNames.splice(tabNumber,1))
    disabledTabImages.push(tabImages.splice(tabNumber,1))
    // update
    XmlconnectTabUpdate()
    return false
}

