enabledTabs = <?php echo json_encode($this->getTabs()->getEnabledTabs()); ?>


disabledTabs = <?php echo json_encode($this->getTabs()->getDisabledTabs()); ?>

function XmlconnectTabUpdate() {
    for(i=0; i<10; i++) {
        tags=document.getElementsByClassName('mm_tab'+i)
        for(j=0; j<tags.length; j++) {
            isActive = i<enabledTabs.length
            isMore = false
            if(isActive) {
                if(enabledTabs[i].action=='More') {
                    isMore = true
                    isActive = (i==4)
                }
            }
            if(isActive) {
                // Enabled tabs
                if(tags[j].className.indexOf('mm_img')>0) {
                    tags[j].innerHTML = '<img src="<?php echo $this->getImageUrl(); ?>'+enabledTabs[i].image+'" alt="" />'
                    tags[j].style.visibility = 'visible'
                }
                if(tags[j].className.indexOf('mm_name')>0) {
                    tags[j].innerHTML = '<span>'+enabledTabs[i].label+'</span>'
                }
                if(tags[j].className.indexOf('mm_ctrl')>0) {
                    tags[j].style.visibility = isMore? 'hidden': 'visible'
                }
            } else {
                // Empty places
                if(tags[j].className.indexOf('mm_img')>0) {
                    tags[j].innerHTML = '<img src="<?php echo $this->getImageUrl('tab_empty.png'); ?>" alt="" />'
                    tags[j].style.visibility = 'hidden'
                }
                if(tags[j].className.indexOf('mm_name')>0) {
                    tags[j].innerHTML = ''
                }
                if(tags[j].className.indexOf('mm_ctrl')>0) {
                    tags[j].style.visibility = 'hidden';
                }
            }
        }
    }
    for(i=0; i<5; i++) {
        tags=document.getElementsByClassName('mmd_tab'+i)
        for(j=0; j<tags.length; j++) {
            if(i<disabledTabs.length) {
                // Disabled tabs
                if(tags[j].className.indexOf('mm_img')>0) {
                    tags[j].innerHTML = '<img src="<?php echo $this->getImageUrl(); ?>'+disabledTabs[i].image+'" alt="" />'
                    tags[j].style.visibility = 'visible'
                }
                if(tags[j].className.indexOf('mm_name')>0) {
                    tags[j].innerHTML = disabledTabs[i].label
                }
                if(tags[j].className.indexOf('mm_ctrl')>0) {
                    tags[j].style.visibility = 'visible'
                }
            } else {
                // Empty places
                if(tags[j].className.indexOf('mm_img')>0) {
                    tags[j].innerHTML = '<img src="<?php echo $this->getImageUrl('tab_empty.png'); ?>" alt="" />'
                    tags[j].style.visibility = 'hidden'
                }
                if(tags[j].className.indexOf('mm_name')>0) {
                    tags[j].innerHTML = ''
                }
                if(tags[j].className.indexOf('mm_ctrl')>0) {
                    tags[j].style.visibility = 'hidden'
                }
            }
        }
    }
    document.getElementById('<?php echo htmlspecialchars($this->getName()); ?>').value = Object.toJSON({"enabledTabs": enabledTabs, "disabledTabs": disabledTabs})
}

if(window.addEventListener) {
    window.addEventListener('load', XmlconnectTabUpdate, false)
} else if(window.attachEvent) {
    window.attachEvent('onload', XmlconnectTabUpdate)
}

function XmlconnectTabMove(tab1, tab2) {
    if(tab1>=enabledTabs.length) return
    if(tab2>=enabledTabs.length) return
    tmp = enabledTabs[tab1]
    enabledTabs[tab1] = enabledTabs[tab2]
    enabledTabs[tab2] = tmp
    XmlconnectTabUpdate()
}

function XmlconnectTabEnable(disabledTabNumber) {
    tab = disabledTabs[disabledTabNumber]
    tabMore = false
    if(enabledTabs.length<5) {
        tabMore = enabledTabs[enabledTabs.length-1]
        enabledTabs.splice(enabledTabs.length-1, 1)
    }
    disabledTabs.splice(disabledTabNumber, 1)
    enabledTabs.push(tab)
    if(tabMore) {
        enabledTabs.push(tabMore)
    }
    XmlconnectTabUpdate()
    return false
}

function XmlconnectTabDisable(tabNumber) {
    if(disabledTabs.length>=5) return false
    tab = enabledTabs[tabNumber]
    enabledTabs.splice(tabNumber, 1)
    disabledTabs.push(tab)
    if(tabNumber<5 && enabledTabs.length>=5) {
        XmlconnectTabMove(3, 4)
    }
    XmlconnectTabUpdate()
    return false
}

