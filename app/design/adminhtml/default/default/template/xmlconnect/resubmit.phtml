<script type="text/javascript">
// <![CDATA[
form_text = '<form id="resubmit_form" class="loader" action="<?php echo $this->getActionUrl() ?>">'
    +'<?php echo $this->__('Activation Key'); ?>:<br>'
    +'<input type="text" id="activation_key" value="<?php echo $this->getActivationKey()?>" disabled="disabled" /><br><br>'
    +'<?php echo $this->__('Please check data before resubmit.'); ?><br><br>'
    +'<?php echo $this->__('Resubmission Key'); ?>:<br><input type="text" id="resubmission_key" /><br><br>'
    +'<input type="submit" id="resubmit" name="resubmit" value="<?php echo $this->__('Resubmit'); ?>" onclick="resubmitOk();return false"/>'
+'</form>';

function resubmit() {
    if (!$('resubmit_div')) {
        var div = new Element('div', {id:'resubmit_div'});
        div.innerHTML = form_text;
        mask = $('loading-mask');
        mask.appendChild(div);
        mask.show();
    }
    return false;
}

function resubmitOk() {
    var inp = new Element('input', {
        'type' : 'hidden',
        'name' : '<?php echo $this->getResubmissionName()?>',
        'value': $('resubmission_key').getValue()
    });
    $('submit').onclick = '';
    $('submit_form').appendChild(inp);
    $('submit').click();
    return false;

};

// ]]>
</script>
