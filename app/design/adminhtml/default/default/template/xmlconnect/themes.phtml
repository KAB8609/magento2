<script type="text/javascript">
// <![CDATA[

mmColorUpdate = false

mmColorThemes = <?php echo json_encode($this->getAllThemes()); ?>


function mmSetTheme(theme) {
    if (mmColorThemes[theme]) {
        mmColorUpdate = true
        for (var key in mmColorThemes[theme]) {
            $(key).color.fromString(mmColorThemes[theme][key])
        }
        mmColorUpdate = false
    }
}

function mmSetColor() {
    if (!mmColorUpdate) {
        $('mmThemeCustom').checked='checked'
    }
}

Event.observe(window, 'load', function() { 
    $$('.color').each(function(t){
        t.onchange=mmSetColor
    })
})

// ]]>
</script>

<?php foreach ($this->getThemes() as $theme): ?>
    <div style="line-height: 3em">
        <button type="button" class="scalable" style="margin: 0 2em 0 0"
        onclick="editForm.submit($('edit_form').action + 'saveTheme/<?php echo $theme->getName(); ?>/')">
            <span>Save</span>
        </button>
        <label>
            <input type="radio" style="margin-right: 2em;"
                onclick="mmSetTheme('<?php echo $theme->getName(); ?>')"
                <?php if ($theme->getName() == $this->getValue()) echo 'checked="checked"'; ?>
                name="<?php echo htmlspecialchars($this->getName()); ?>"
                value="<?php echo htmlspecialchars($theme->getName()); ?>" />
            <?php echo $theme->getLabel(); ?>
        </label>
    </div>
<?php endforeach; ?>

<div style="line-height: 3em">
<label>
    <input type="radio" id="mmThemeCustom"
        <?php if (!$this->getValue()) echo 'checked="checked"'; ?>
        name="<?php echo htmlspecialchars($this->getName()); ?>"
        value="" style="margin-right: 2em;" />
    Custom Colors
</label>
</div>

