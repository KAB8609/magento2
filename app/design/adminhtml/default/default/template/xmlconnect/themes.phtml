<script type="text/javascript">
    function XmlconnectPreviewImage(url) {
        document.getElementById('XmlconnectThemePreview').src=url
    }
</script>

<?php foreach ($this->getThemes() as $theme): ?>
    <div style="line-height: 3em">
    <label>
        <input type="radio"
            onclick="XmlconnectPreviewImage('<?php echo $theme->getPreviewUrl(); ?>')"
            <?php if ($theme->getName() == $this->getValue()) echo 'checked="checked"'; ?>
            name="<?php echo htmlspecialchars($this->getName()); ?>"
            value="<?php echo htmlspecialchars($theme->getName()); ?>" />
        <img src="<?php echo $theme->getColorbarUrl(); ?>" alt=""
            style="margin: 0 2em; vertical-align: middle" />
        <?php echo $theme->getLabel(); ?>
    </label>
    </div>
<?php endforeach; ?>

<div style="line-height: 3em">
<label>
    <input type="radio"
        onclick="XmlconnectPreviewImage('<?php echo Mage::getBaseUrl('skin') ?>xmlconnect/empty.png')"
        <?php if (!$this->getValue()) echo 'checked="checked"'; ?>
        name="<?php echo htmlspecialchars($this->getName()); ?>"
        value="" style="margin-right: 2em;" />
