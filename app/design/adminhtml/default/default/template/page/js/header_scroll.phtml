</script>
<![endif]-->

<script type="text/javascript">
if (typeof IE6=='undefined' || !IE6) {
    var header = $$('.content-header')[0];
    var header_offset = Position.cumulativeOffset(header)[1];
    var header_copy = header.cloneNode(true);
    document.body.appendChild(header_copy);
    $(header_copy).addClassName('content-header-floating');

    Event.observe(window, 'scroll', function () {
        var s;
        // scrolling offset calculation via www.quirksmode.org
        if (self.pageYOffset){
            s = self.pageYOffset;
        }else if (document.documentElement && document.documentElement.scrollTop) {
            s = document.documentElement.scrollTop;
        }else if (document.body) {
            s = document.body.scrollTop;
        }
        if (s > header_offset) {
            header_copy.style.display = 'block';
        } else {
            header_copy.style.display = 'none';
        }
    });
}
</script>