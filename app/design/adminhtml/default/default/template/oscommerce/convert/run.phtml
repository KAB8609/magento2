<script type="text/javascript">
Event.observe($('run_import'), 'click', function(){

    var url     = '<?php echo $this->getUrl('*/*/run', array('id'=>$this->getOscId())) ?>';
    var store   = $('store_list');
    var sel     = store.getElementsBySelector('select');
    var locale  = '';
    var error   = '';
    var params  = '';
    var websiteCode         = $('website_code').value;
//    var imagesPath         = $('images_path').value;
    var underDefaultWebsite = $('under_default_website').checked;
    var importCategories    = $('import_categories').checked;
    var importProducts      = $('import_products').checked;
    var importCustomers     = $('import_customers').checked;
    var importOrders        = $('import_orders').checked;
    var importArray         = ['categories','products','customers', 'orders'];
    var checkedImport       = [];
    var isCheckedImportOptions = false;
    
    // Data validation
    if (underDefaultWebsite == false
        && (websiteCode == null || websiteCode.length < 2)) {
        error += "Please check default website or input website code in General Information\n";
    } else {
        if (underDefaultWebsite == true) {
            params = 'under_default_website='+underDefaultWebsite;
        } else {
            params = 'website_code='+websiteCode;
        }
    }

//    if (imagesPath) {
//        params += '&images_path='+imagesPath;
//    }
    
    for (var i = 0; i < importArray.length; i++) {        
        if ($('import_'+importArray[i]).checked) {
            isCheckedImportOptions = true;
            params += (params?'&':'')+'import['+importArray[i]+']='+$('import_'+importArray[i]).checked;
            checkedImport.push(importArray[i]);
        }
    }
    
    
    if (isCheckedImportOptions == false) {
        error += "Please check at least an option in Import Options\n";
    } else {
        if (importOrders == true && importCustomers == false) {
            error += "Need to check Customers for Orders"
        }
    }
    
    if (error) {
        alert(error);
        return false;
    }
    // End data validation
 
    if (sel.length > 0) for (var i = 0; i < sel.length; i++) {
        locale += (locale?'|':'') + sel[i].id.replace('store_locale_', '') + ':' + sel[i].value;
    }
    
    params += (params?'&':'')+'store_locale='+locale;
    
    Element.hide($('required_information'));
    Element.toggle($('import_processing'));
    Element.toggle($('run_import').parentNode);
    new Ajax.Request(url,
        {
            method: 'post',
            parameters: params,
            onSuccess: function(transport) {
                var response = transport.responseText.evalJSON();
                if (response) {
                    Element.toggle($('import_processing'));
                    Element.toggle($('import_done'));
                    var result = '';
                    for (var type in response) {
                        if (in_array(type, checkedImport)) {
                            result += '<tr><td class="label">' + type + '</td><td class="center">' + response[type]['total'] + '</td><td class="center">' + response[type]['imported'] + '</td><td class="center">'+(parseInt(response[type]['total'])-parseInt(response[type]['imported']))+'</td></tr>';
                        }
                    }
                    if (result) {
                        var results = '<table class="data" cellspacing="0"><thead>';
                        results += '<tr class="headings"><th>Name</th><th>Total Records</th><th>Total Imported Rrecords</th><th>Not Imported Records</th></tr></thead>';
                        results += '<tbody>'+result+'</tbody>';
                        results += '</table>';
                        $('result_statistic').update(results);
                    }
                }
            },
            onFailure: function() {
                // TODO: handle error
                alert('Error!');
            },
            onComplete: function() {
                $('loading-mask').toggle();
            }
        }
    );
});

Event.observe($('check_import'), 'click', function(){
    var url = '<?php echo $this->getUrl('*/*/run', array('id'=>$this->getOscId())) ?>';
    var store = $('store_list');
    new Ajax.Request('<?php echo $this->getUrl('*/*/checkStore', array('id'=>$this->getOscId())) ?>',
        {
            method: 'post',
            onSuccess: function(transport) {
                var response = transport.responseText;
                if (response) {
                    if (response == 'error') {
                        $('show_errors').update('Connection error! Please check db configuration!');
                        Element.show($('error_messages'));                       
                    } else {
                        showForm(response);
                        Element.hide($('check_import').parentNode);
                        Element.show($('run_import').parentNode);
                                    
                    }
                    return false;
                }
            },
            onFailure: function() {
                // TODO: handle error
                alert('Error!');
            }
        }
    );
    return false;
});

Event.observe($('website_code'), 'change', function() {
    var url = '<?php echo $this->getUrl('*/*/checkWebsiteCode', array('id'=>$this->getOscId())) ?>';
    var websiteCode = $('website_code').value;
    var errorWebsiteCode = $('error-for-website_code');
    Element.hide(errorWebsiteCode);
    if (websiteCode.length < 2) {
        errorWebsiteCode.update('Please input at least two characters');
        Element.show(errorWebsiteCode);
        return false;
    }
    
    new Ajax.Request(url, 
        { 
            method: 'post',
            parameters: 'website_code='+websiteCode,
            onSuccess: function(transport) {
                var response = transport.responseText;
                if (response == 'true') {
                    var errorWebsiteCode = $('error-for-website_code');
                    errorWebsiteCode.update('Website code ' + websiteCode + ' existed, please input again!');
                    Element.show(errorWebsiteCode);
                }
            }
        }
    );
});

function showForm(o)
{
    if (o != undefined) {
        
        $('store_list').update(o);
        Element.show($('required_information'));
    }
}

// check item in array
function in_array(search_term,arrayobj){
    var i = arrayobj.length;
    if (i > 0) {
        do {
            if (arrayobj[i] === search_term){
                return true;
            }
        } while (i--);
    }
    return false;
}


