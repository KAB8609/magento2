<?if(!$this->getScriptIncluded() && $this->getCanDisplayContainer()):?>
<script type="text/javascript" src="<?=$this->getSkinUrl('js/giftmessage.js')?>"></script>
<?$this->setScriptIncluded(true);?>
<?endif;?>
<?if($this->getCanDisplayContainer()):?>
<div id="<?=$this->getId()?>">
<?endif;?>
<?switch ($this->getType()):?>
<?case 'item':?>
    <a class="listen-for-click" href="#">
        <?if($this->hasGiftMessage()):?>
        <?=$this->__('Edit')?>
        <?else:?>
        <?=$this->__('Add')?>
        <?endif;?>
    </a>
    <?break;?>
<?case 'order_item':?>
    <a class="listen-for-click" href="#">
        <?if($this->hasGiftMessage()):?>
        <?=$this->__('Edit')?>
        <?else:?>
        <?=$this->__('Add')?>
        <?endif;?>
    </a>
    <?break;?>
<?case 'main':?>
        <?if($this->hasGiftMessage()):?>
            <?if($_giftMessage=$this->getMessage()):?>
            <span class="field-row">
                <label><?=$this->__('From')?></label>
                <?=$this->htmlEscape($_giftMessage->getSender())?>
            </span>
            <span class="field-row">
                <label><?=$this->__('To')?></label>
                <?=$this->htmlEscape($_giftMessage->getRecipient())?>
            </span>
            <span class="field-row">
                <label><?=$this->__('Message')?></label>
                <pre  class="left"><?=$this->htmlEscape($_giftMessage->getMessage())?></pre>
            </span>
            <?endif;?>
        <?=$this->getWidgetButtonHtml($this->__('Edit'), 'edit')?>
        <?else:?>
        <?=$this->getWidgetButtonHtml($this->__('Add'), 'add')?>
        <?endif;?>
    <?break;?>
<?case 'order':?>
        <?if($this->hasGiftMessage()):?>
            <?if($_giftMessage=$this->getMessage()):?>

            <span class="field-row">
                <label><?=$this->__('From')?></label>
                <?=$this->htmlEscape($_giftMessage->getSender())?>
            </span>
            <span class="field-row">
                <label><?=$this->__('To')?></label>
                <?=$this->htmlEscape($_giftMessage->getRecipient())?>
            </span>
            <span class="field-row">
                <label><?=$this->__('Message')?></label>
                <pre class="left"><?=$this->htmlEscape($_giftMessage->getMessage())?></pre>
            </span>

            <?endif;?>
        <?=$this->getWidgetButtonHtml($this->__('Edit'), 'edit')?>
        <?else:?>
        <?=$this->getWidgetButtonHtml($this->__('Add'), 'add')?>
        <?endif;?>
    <?break;?>
<?endswitch?>
<?if($this->getCanDisplayContainer()):?>
</div>
<script type="text/javascript">
