    <div class="header-top">
         <span>
             <img src="<?php echo $this->getSkinUrl('images/logo-large.gif', array('_area' => 'adminhtml', '_package' => 'default')) ?>"
                  alt="<?php echo $this->__('Magento Logo') ?>" class="logo"/>
         </span>
    </div>
