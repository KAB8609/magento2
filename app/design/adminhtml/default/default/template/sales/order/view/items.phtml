                    <td class="giftmessage-single-item"><?=$this->renderInfoColumn($_item)?></td>
                    <td><?=$_item->getStatus()?></td>
                    <td class="price"><?=$this->getOrder()->formatPrice($_item->getOriginalPrice())?></td>
                    <td class="price"><?=$this->getOrder()->formatPrice($_item->getPrice())?></td>
                    <td><?=$this->getQtyHtml($_item)?></td>
                    <td class="price"><?=$this->getOrder()->formatPrice($_item->getDiscountAmount())?></td>
                    <td class="price"><?=$this->getOrder()->formatPrice($_item->getTaxAmount())?></td>
