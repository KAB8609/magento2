        <thead>
            <tr class="headings">
                <th><?=Mage::helper('sales')->__('SKU')?></th>
                <th><?=Mage::helper('sales')->__('Product Name')?></th>
                <th><?=Mage::helper('sales')->__('Item Status')?></th>
                <th><?=Mage::helper('sales')->__('Original Price')?></th>
                <th><?=Mage::helper('sales')->__('Price')?></th>
