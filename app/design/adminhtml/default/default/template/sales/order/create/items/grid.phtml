<?$_items = $this->getItems()?>
<?if (empty($_items)):?>
    <div class="a-center"><?=$this->__('No ordered items')?></div>
<?else:?>
    <div id="order:items_grid">
        <div class="grid">
            <table cellspacing="0" class="data" id="invoice_items_grid_table">
                <col width="70"/>
                <col width="80"/>
                <col/>
                <col width="90"/>
                <col width="50"/>
                <col width="100"/>
                <col width="150"/>
                <thead>
                    <tr class="headings">
                        <th class="no-link"><nobr><?=$this->__('Product ID')?></nobr></th>
                        <th class="no-link"><nobr><?=$this->__('SKU')?></nobr></th>
                        <th class="no-link"><nobr><?=$this->__('Product Name')?></nobr></th>
                        <th class="no-link"><nobr><?=$this->__('Price')?></nobr></th>
                        <th class="no-link"><nobr><?=$this->__('Qty')?></nobr></th>
                        <th class="no-link"><nobr><?=$this->__('Subtotal')?></nobr></th>
                        <th class="no-link"><nobr><?=$this->__('Action')?></nobr></th>
                    </tr>
                </thead>
                <tbody>
                    <?foreach ($_items as $_item):?>
                        <tr>
                            <td class="a-center"><?=$_item->getProductId()?></td>
                            <td><?=$_item->getSku()?></td>
                            <td><?=$_item->getName()?></td>
                            <td><nobr><?=$this->formatPrice($_item->getPrice())?></nobr></td>
                            <td><input name="item[<?=$_item->getId()?>][qty]" class="input-text item-qty" value="<?=$_item->getQty()*1?>" maxlength="12"/></td>
                            <td><nobr><?=$this->formatPrice($_item->getRowTotal())?></nobr></td>
                            <td><nobr>
                                <select name="item[<?=$_item->getId()?>][action]" style="width:135px">
                                    <option value=""></option>
                                    <option value="remove"><?=$this->__('Remove')?></option>
                                    <option value="cart"><?=$this->__('Move to Shopping Cart')?></option>
                                    <option value="wishlist"><?=$this->__('Move to Wishlist')?></option>
                                </select>
                            </nobr></td>
                        </tr>
                    <?endforeach;?>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3" class="a-left">
                            <?=$this->__('Total %d product(s)', count($_items))?>
                        </td>
                        <td colspan="2" class="a-right">
                            <?=$this->__('Subtotal:')?>
                        </td>
                        <td colspan="2">
                            <strong><?=$this->formatPrice($this->getSubtotal())?></strong>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
        <div class="a-right"><?=$this->getButtonHtml($this->__('Update Items'),'order.itemsUpdate()');?></div>
        <script type="text/javascript">order.itemsOnchangeBind()</script>
    </div>
<?endif;?>