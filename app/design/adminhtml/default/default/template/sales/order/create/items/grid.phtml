<?$_items = $this->getItems()?>
<?if (empty($_items)):?>
    <div class="a-center"><?=$this->__('No ordered items')?></div>
<?else:?>
    <div id="order:items_grid">
        <div class="grid">
            <table cellspacing="0" class="data" id="invoice_items_grid_table">
                <col width="70"/>
                <col width="80"/>
                <col/>
                <col width="90"/>
                <col width="50"/>
                <col width="100"/>
                <col width="220"/>
                <thead>
                    <tr class="headings">
                        <th class="no-link"><nobr><?=__('Product ID')?></nobr></th>
                        <th class="no-link"><nobr><?=__('SKU')?></nobr></th>
                        <th class="no-link"><nobr><?=__('Product Name')?></nobr></th>
                        <th class="no-link"><nobr><?=__('Price')?></nobr></th>
                        <th class="no-link"><nobr><?=__('Qty')?></nobr></th>
                        <th class="no-link"><nobr><?=__('Subtotal')?></nobr></th>
                        <th class="no-link">&nbsp;</th>
                    </tr>
                </thead>
                <tbody>
                    <?foreach ($_items as $_item):?>
                        <tr>
                            <td class="a-center"><?=$_item->getProductId()?></td>
                            <td><?=$_item->getSku()?></td>
                            <td><?=$_item->getName()?></td>
                            <td><nobr><?=$this->formatPrice($_item->getPrice())?></nobr></td>
                            <td><input id="qty:<?=$_item->getId()?>" name="qty[<?=$_item->getId()?>]" class="input-text item-qty" value="<?=$_item->getQty()*1?>" /></td>
                            <td><nobr><?=$this->formatPrice($_item->getRowTotal())?></nobr></td>
                            <td><nobr>
                                <a href="#" onclick="order.removeQuoteItem(<?=$_item->getId()?>);return false;">
                                    <?=__('Remove Item')?>
                                </a>
                                |
                                <?=__('Move Item to:')?>
                                <select onchange="order.moveQuoteItem(<?=$_item->getId()?>,this.options[this.selectedIndex].value)">
                                    <option value=""></option>
                                    <option value="cart"><?=__('Shopping Cart')?></option>
                                    <option value="wishlist"><?=__('Wishlist')?></option>
                                </select>
                            </nobr></td>
                        </tr>
                    <?endforeach;?>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3" class="a-left">
                            <?=$this->__('Added: %d product(s)', count($_items))?>
                            <!--a href="#" onclick="order.itemsUpdate()"><?=__('Update')?></a-->
                            <?//=$this->getButtonHtml(__('Update Qty'),'order.itemsUpdate()');?>
                        </td>
                        <td colspan="2" class="a-right">
                            <?=__('Subtotal:')?>
                        </td>
                        <td colspan="2">
                            <strong><?=$this->formatPrice($this->getSubtotal())?></strong>
                            <?//=$this->__('Subtotal: <strong>%s</strong>', $this->formatPrice($this->getSubtotal()))?>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
        <div class="a-right"><?=$this->getButtonHtml(__('Update Qty'),'order.itemsUpdate()');?></div>
    </div>
<?endif;?>