<?$_source  = $this->getSource()?>
<?$this->setPriceDataObject($_source)?>
<?$_currency= $this->getCurrency()?>
<?if ($_source):?>
<table cellspacing="0" width="100%">
    <col/>
    <col width="100"/>
    <tfoot>
        <tr>
            <td class="label">
                <strong>
                <?if ($this->getGrandTotalTitle()):?>
                    <?=$this->getGrandTotalTitle()?>
                <?else:?>
                    <?=Mage::helper('sales')->__('Grand Total')?>
                <?endif;?>
                </strong>
            </td>
            <td class="emph" align="right">
                <?=$this->displayPriceAttribute('grand_total', true)?>
            </td>
        </tr>
        <?if ($this->getCanDisplayTotalPaid()):?>
        <tr>
            <td class="label">
                <strong><?=Mage::helper('sales')->__('Total Paid')?></strong>
            </td>
            <td class="emph" align="right">
                <?=$this->displayPriceAttribute('total_paid', true)?>
            </td>
        </tr>
        <?endif;?>
        <?if ($this->getCanDisplayTotalRefunded()):?>
        <tr>
            <td class="label">
                <strong><?=Mage::helper('sales')->__('Total Refunded')?></strong>
            </td>
            <td class="emph" align="right">
                <?=$this->displayPriceAttribute('total_refunded', true)?>
            </td>
        </tr>
        <?endif;?>
        <?if ($this->getCanDisplayTotalDue()):?>
        <tr>
            <td class="label">
                <strong><?=Mage::helper('sales')->__('Total Due', true)?></strong>
            </td>
            <td class="emph" align="right">
                <?=$this->displayPriceAttribute('total_due', true)?>
            </td>
        </tr>
        <?endif;?>
    </tfoot>
    <tbody>
        <?if ((float) $_source->getSubtotal()):?>
        <tr>
            <td><?=Mage::helper('sales')->__('Subtotal')?></td>
            <td align="right"><?=$this->displayPriceAttribute('subtotal')?></td>
        </tr>
        <?endif;?>
        <?if ((float) $_source->getTaxAmount()):?>
        <tr>
            <td><?=Mage::helper('sales')->__('Tax')?></td>
            <td align="right"><?=$this->displayPriceAttribute('tax_amount')?></td>
        </tr>
        <?endif;?>

        <?if ((float) $_source->getShippingAmount() || $_source->getShippingDescription()):?>
        <tr>
            <td><?=Mage::helper('sales')->__('Shipping &amp; Handling')?></td>
            <td align="right"><?=$this->displayPriceAttribute('shipping_amount')?></td>
        </tr>
        <?endif;?>
        <?if ((float) $_source->getDiscountAmount()):?>
        <tr>
            <td>
                <?if ($_source->getCouponCode()):?>
                    <?=Mage::helper('sales')->__('Discount (%s)', $_source->getCouponCode())?>
                <?else:?>
                    <?=Mage::helper('sales')->__('Discount')?>
                <?endif;?>
            </td>
            <td align="right"><?=$this->displayPriceAttribute('discount_amount')?></td>
        </tr>
        <?endif;?>

        <?if ((float) $_source->getGiftcertAmount()):?>
        <tr>
            <td><?=Mage::helper('sales')->__('Gift Certificate')?></td>
            <td align="right"><?=$this->displayPriceAttribute('giftcert_amount')?></td>
        </tr>
        <?endif;?>

        <?if ((float) $_source->getAdjustmentPositive()):?>
        <tr>
            <td><?=Mage::helper('sales')->__('Adjustment Refund')?></td>
            <td align="right"><?=$this->displayPriceAttribute('adjustment_positive')?></td>
        </tr>
        <?endif;?>

        <?if ((float) $_source->getAdjustmentNegative()):?>
        <tr>
            <td><?=Mage::helper('sales')->__('Adjustment Fee')?></td>
            <td align="right"><?=$this->displayPriceAttribute('adjustment_negative')?></td>
        </tr>
        <?endif;?>
    </tbody>
</table>
<?endif;?>