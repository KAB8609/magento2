<div class="entry-edit" id="order_history_block">
    <fieldset>
        <?foreach ($this->getFullHistory() as $_history):?>
        <ul>
            <li>
                <strong><?=$this->helper('core')->formatDate($_history->getCreatedAt(), 'medium')?></strong>
                <?=$this->helper('core')->formatTime($_history->getCreatedAt(), 'medium')?>
                |
                <?if($_history instanceof Mage_Sales_Model_Order_Status_History):?>
                    <?=$_history->getStatusLabel()?>
                    <?if($_history->getComment()):?>
                        <br/><?=$_history->getComment()?>
                    <?endif;?>
                <?elseif ($_history instanceof Mage_Sales_Model_Order_Creditmemo):?>
                    <?=$this->__('Creditmemo #%s created', $_history->getIncrementId())?>
                <?elseif ($_history instanceof Mage_Sales_Model_Order_Shipment):?>
                    <?=$this->__('Shipment #%s created', $_history->getIncrementId())?>
                <?elseif ($_history instanceof Mage_Sales_Model_Order_Invoice):?>
                    <?=$this->__('Invoice #%s created', $_history->getIncrementId())?>
                <?elseif ($_history instanceof Mage_Sales_Model_Order_Shipment_Track ):?>
                    <?=$this->__('Tracking number %s for %s assigned', $_history->getNumber(), $_history->getTitle())?>
                <?else:?>
                    <?=print_r($_history->getData(), true)?>
                    <?=get_class($_history)?>
                <?endif;?>
            </li>
        </ul>
        <?endforeach;?>
    </fieldset>
</div>