<?$_source  = $this->getSource()?>
<?$_currency= $this->getCurrency()?>
<?if ($_source && $_currency):?>
<table cellspacing="0" width="100%">
    <col/>
    <col width="100"/>
    <tfoot>
        <tr>
            <td class="label">
                <strong><?=Mage::helper('sales')->__('Grand Total')?></strong>
            </td>
            <td class="emph" align="right">
                <strong><?=$_currency->format($_source->getGrandTotal())?></strong>
            </td>
        </tr>
    </tfoot>
    <tbody>
        <tr>
            <td><?=Mage::helper('sales')->__('Subtotal')?></td>
            <td align="right"><?=$_currency->format($_source->getSubtotal())?></td>
        </tr>

        <?if ((float) $_source->getTaxAmount()):?>
        <tr>
            <td><?=Mage::helper('sales')->__('Tax')?></td>
            <td align="right"><?=$_currency->format($_source->getTaxAmount())?></td>
        </tr>
        <?endif;?>
        <?if ((float) $_source->getDiscountAmount()):?>
        <tr>
            <td><?=Mage::helper('sales')->__('Discount')?></td>
            <td align="right"><?=$_currency->format(-$_source->getDiscountAmount())?></td>
        </tr>
        <?endif;?>
        <tr>
            <td><?=Mage::helper('sales')->__('Shipping')?></td>
            <td align="right">
                <input type="text" name="creditmemo[shipping_amount]" value="<?=$_source->getShippingAmount()*1?>" class="input-text" style="width:60px;text-align:right"/>
            </td>
        </tr>
        <tr>
            <td><?=Mage::helper('sales')->__('Restocking Fee')?></td>
            <td align="right">
                <input type="text" name="creditmemo[restocking_fee]" value="<?=$_source->getRestockingFee()*1?>" class="input-text" style="width:60px;text-align:right"/>
            </td>
        </tr>
    </tbody>
</table>
<?endif;?>