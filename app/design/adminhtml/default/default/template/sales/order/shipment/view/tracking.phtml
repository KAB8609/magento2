<span class="field-row" id="shipment_tracking_info">
<table cellpadding="0" cellspacing="0" width="100%">
    <tr>
        <td><label id="tracking_number"><?=Mage::helper('sales')->__('Tracking Number')?></label></td>
        <td width="100%">
            <?if($_tracks = $this->getShipment()->getAllTracks()):?>
            <?foreach ($_tracks as $_track):?>
                <a href="#" onclick="submitAndReloadArea($('shipment_tracking_info_response_<?=$_track->getId()?>'), '<?=$this->getTrackInfoUrl($_track)?>');return false">
                    <?=$_track->getNumber()?>
                </a>
                [<?=$this->getCarrierTitle($_track->getCarrierCode())?>]
                <a href="#" onclick="submitAndReloadArea($('shipment_tracking_info').parentNode, '<?=$this->getRemoveUrl($_track)?>'); return false;">
                    <?=Mage::helper('sales')->__('Delete')?>
                </a>
                <p><span id="shipment_tracking_info_response_<?=$_track->getId()?>"></span></p>
            <?endforeach;?>
            <?endif;?>
            <select name="carrier" class="select" style="width:90px;">
                <?foreach ($this->getCarriers() as $_code=>$_name):?>
                <option value="<?=$_code?>"><?=$_name?></option>
                <?endforeach;?>
            </select>
            <input class="input-text" type="text" id="tracking_number" name="number" value="" style="width:70px;"/>
            <?=$this->getSaveButtonHtml()?>
        </td>
    </tr>
</table>
</span>