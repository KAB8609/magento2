<script type="text/javascript">
//<![CDATA[
<?php if(($block = $this->getLayout()->getBlock('banner_salesrule_grid')) && ($_gridJsObject=$block->getJsObjectName())): ?>

    var bannerSalesRule = $H(<?php echo $this->getBannersSalesRuleJson() ?>);
    $('banner_sales_rules').value = bannerSalesRule.toQueryString();

    function registerBannerSalesRule(grid, element, checked)
    {
        if(checked){
            bannerSalesRule.set(element.value, element.value);
        }
        else{
            bannerSalesRule.unset(element.value);
        }
        $('banner_sales_rules').value = bannerSalesRule.toQueryString();
        grid.reloadParams = {'selected_salesrules[]':bannerSalesRule.keys()};
    }

    function bannerSalesRuleRowClick(grid, event)
    {
        var trElement = Event.findElement(event, 'tr');
        var isInput   = Event.element(event).tagName == 'INPUT';
        if(trElement){
            var checkbox = Element.getElementsBySelector(trElement, 'input');
            if(checkbox[0]){
                var checked = isInput ? checkbox[0].checked : !checkbox[0].checked;
                <?php echo $_gridJsObject ?>.setCheckboxChecked(checkbox[0], checked);
            }
        }
    }

    <?php echo $_gridJsObject ?>.rowClickCallback       = bannerSalesRuleRowClick;
    <?php echo $_gridJsObject ?>.checkboxCheckCallback  = registerBannerSalesRule;
<?php endif; ?>

