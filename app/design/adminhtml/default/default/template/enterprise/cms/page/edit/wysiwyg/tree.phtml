<div class="categories-side-col">
    <div class="tree-actions">
        <a href="#" onclick="tree.collapseAll(); return false;"><?php echo $this->__('Collapse All'); ?></a>
        <span class="separator">|</span>
        <a href="#" onclick="tree.expandAll(); return false;"><?php echo $this->__('Expand All'); ?></a>
    </div>
</div>

<div id="tree"></div>

<script type="text/javascript">
var tree;
Ext.onReady(function(){
    var Tree = Ext.tree;
    tree = new Tree.TreePanel('tree', {
        animate:true,
        loader: new Tree.TreeLoader({
            dataUrl:'<?php echo $this->getTreeLoaderUrl() ?>'
        }),
        enableDD:false,
        containerScroll: true,
    });

    // set the root node
    var root = new Tree.AsyncTreeNode({
        text: '<?php echo $this->getRootNodeName() ?>',
        draggable:false,
        id:'root'
    });
    tree.setRootNode(root);

    // render the tree
    tree.render();
    root.expand();

    Images.setTree(tree);
    tree.addListener('click', Images.directoryClick.bind(Images));
});
</script>
