            </table>
        </div>
    </div>
</div>

<script type="text/javascript">
function cmsPageEditHierarchyWebRoot() {
    $('website_root_field').value = $('website_root').checked ? 1 : 0;
}
$('website_root').observe('change', cmsPageEditHierarchyWebRoot);
if ($('website_root_field').value == "1") {
    $('website_root').checked = true;
}
</script>