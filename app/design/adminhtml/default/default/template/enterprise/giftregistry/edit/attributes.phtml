<div class="entry-edit custom-options attribute-custom-options">
<div class="entry-edit-head">
    <h4><?php echo $this->getFormTitle() ?></h4>
    <div class="right"><?php echo $this->getAddButtonHtml() ?></div>
</div>

<div class="box">
<div id="attribute_container"></div>

<?php echo $this->getTemplatesHtml() ?>

<script type="text/javascript">
//<![CDATA[
var attributeTemplate =
    '<div class="option-box" id="option_{{id}}">'+
    '<table id="attribute_{{id}}" class="option-header" cellpadding="0" cellspacing="0">'+
    '<thead>'+
        '<tr>'+
            '<th><?php echo Mage::helper('enterprise_giftregistry')->__('Code') ?> <span class="required">*</span></th>'+
            '<th><?php echo Mage::helper('enterprise_giftregistry')->__('Input Type') ?> <span class="required">*</span></th>'+
            '<th><?php echo Mage::helper('enterprise_giftregistry')->__('Attribute Group') ?> <span class="required">*</span></th>'+
            '<th><?php echo Mage::helper('enterprise_giftregistry')->__('Label') ?> <span class="required">*</span></th>'+
            '<th><?php echo Mage::helper('enterprise_giftregistry')->__('Sort Order') ?></th>'+
            '<th class="a-right"><?php echo $this->jsQuoteEscape($this->getDeleteButtonHtml()) ?></th>'+
        '</tr>'+
    '<tr>'+
        '<td><input type="text" class="required-entry input-text global-scope" id="attribute_{{id}}_code" name="attributes[{{id}}][code]" value="{{code}}"></td>'+
        '<td><?php echo $this->getTypeSelectHtml() ?></td>'+
        '<td><?php echo $this->getGroupSelectHtml() ?></td>'+
        '<td><input type="text" class="required-entry input-text" id="attribute_{{id}}_label" name="attributes[{{id}}][label]" value="{{label}}">{{checkbox_scope}}</td>'+
        '<td><input type="text" class="input-text global-scope" id="attribute_{{id}}_sort_order" name="attributes[{{id}}][sort_order]" value="{{sort_order}}"></td>'+
        '<td><input type="hidden" id="attribute_{{id}}_is_deleted" name="attributes[{{id}}][is_deleted]"><input type="hidden" class="hidden-code" id="attribute_{{id}}_hidden_code" name="attributes[{{id}}][code]" value="{{code}}" disabled="disabled"></td>'+
    '</tr>'+
    '</table></div>';

var attributeOption = {
    div : $('attribute_container'),
    templateSyntax : /(^|.|\r|\n)({{(\w+)}})/,
    templateText : attributeTemplate,
    attributeId : 0,
    add : function(data) {

        if(data.id == undefined){
            data = {};
            this.attributeId++;
            data.id  = this.attributeId;
        } else {
            this.attributeId = data.id;
        }

        this.template = new Template(this.templateText, this.templateSyntax);
        Element.insert(this.div, {'after':this.template.evaluate(data)});

        if (data.type) {
            $A($('attribute_'+data.id+'_type').options).each(function(option){
                if (option.value==data.type) option.selected = true;
            });
        }
        if (data.group) {
            $A($('attribute_'+data.id+'_group').options).each(function(option){
                if (option.value==data.group) option.selected = true;
            });
        }

        if (data.checkbox_scope) {
            if ($('attribute_'+data.id+'_label') && data.label_disabled) {
                $('attribute_'+data.id+'_label').disable();
            }
        }

        this.bindRemoveButtons();
        attributeOptionType.bindSelectInputType();
    },
    remove : function(event){
        var element = $(Event.findElement(event, 'div'));
        if (element) {
            $('attribute_'+element.readAttribute('id').sub('option_','')+'_'+'is_deleted').value = '1';
            element.addClassName('no-display');
            element.addClassName('ignore-validate');
            element.hide();
        }
    },
    bindRemoveButtons : function(){
        var buttons = $$('div.attribute-custom-options .delete-attribute-option');
        for(var i=0;i<buttons.length;i++){
            if(!$(buttons[i]).binded){
                $(buttons[i]).binded = true;
                Event.observe(buttons[i], 'click', this.remove.bind(this));
            }
        }
        var inputs = $$('div.attribute-custom-options button', 'div.attribute-custom-options input', 'div.attribute-custom-options select');
        inputs.each(function(el) { Event.observe(el, 'change', el.setHasChanges.bind(el));  } )
    }
}

var attributeOptionType = {
    templateSyntax : /(^|.|\r|\n)({{(\w+)}})/,
    loadStepTwo : function(event){
        var element = $(Event.findElement(event, 'select'));
        var type = element.getValue();
        var template = this.getOptionTemplate(type);

        data = {};
        data.id = element.readAttribute('id').sub('attribute_', '').sub('_type', '');
        data.type = type;

        $$('#option_'+data.id+' .grid').each(function(el){
            $(el.readAttribute('id')).remove();
        });

        this.checkStaticType(type, data.id);
        this.insertOptionTemplate(element.readAttribute('id').sub('_type', ''), template, data);

        if (type == 'select') {
            selectOptionType.bindAddButton();
        }
    },
    addDataToValues : function(data){
        var template = this.getOptionTemplate(data.type);
        this.checkStaticType(data.type, data.id);
        if (template) {
            this.insertOptionTemplate($('attribute_'+data.id), template, data);
            if (data.type == 'select') {
                data.items.each(function(value) {
                    selectOptionType.add(value);
                });
                selectOptionType.bindAddButton();
            }
            if (data.type == 'date' || data.type == 'event_date') {
                selectDateType.add(data);
            }
            if (data.type == 'event_region') {
                selectRegionType.add(data);
            }
        }
    },
    getOptionTemplate : function(type){
        var template;
        switch(type){
            case 'select':
                template = OptionTemplateSelect;
                break;
            case 'date':
            case 'event_date':
                template = OptionTemplateDate;
                break;
            case 'event_region':
                template = OptionTemplateRegion;
                break;
            default:
                template = '';
                break;
        }
        return template;
    },
    insertOptionTemplate : function(element, template, data){
        var output = '<div id="attribute_{{id}}_type_'+data.type+'" class="grid">'+template+'</div>';
        this.secondTemplate = new Template(output, this.templateSyntax);
        Element.insert(element, {'after':this.secondTemplate.evaluate(data)});
    },
    checkStaticType : function(type, id){
        codeInput = $('attribute_'+id+'_code');
        hiddenInput = $('attribute_'+id+'_hidden_code');
        if (!type.search('event_')) {
            codeInput.value = type;
            codeInput.disable();

            hiddenInput.value = type;
            hiddenInput.enable();
        } else {
            codeInput.enable();
            hiddenInput.disable();
        }
    },
    bindSelectInputType : function(){
        var types = $$('.attribute-type');
        for(var i=0;i<types.length;i++){
            if(!$(types[i]).binded){
                $(types[i]).binded = true;
                Event.observe(types[i], 'change', function(event){
                    attributeOptionType.loadStepTwo(event);
                });
            }
        }
    }
}

var attributeOptionScope = {
    addScope : function(event){
        var element = $(Event.element(event));
        el = $(element.readAttribute('id').sub('_use_default', ''));

        if (el.disabled) el.enable();
        else el.disable();
    },
    bindScopeCheckbox : function(){
        var checkboxes = $$('.attribute-option-scope-checkbox');
        for (var i=0;i<checkboxes.length;i++) {
            if (!$(checkboxes[i]).binded) {
                $(checkboxes[i]).binded = true;
                Event.observe(checkboxes[i], 'click', this.addScope.bind(this));
            }
        }
    },
    changeInputs : function(){
        $$('.global-scope').each(function(el){el.disable()});
        $$('.hidden-code').each(function(el){el.enable()});
        $$('.scope-item').each(function(el){el.hide()});
    }
}

attributeOption.bindRemoveButtons();

if($('<?php echo $this->getAddButtonId() ?>')){
    Event.observe('<?php echo $this->getAddButtonId() ?>', 'click', attributeOption.add.bind(attributeOption));
}

<?php foreach ($this->getAttributeValues() as $_value): ?>
    attributeOption.add(<?php echo $_value->toJson() ?>);
    attributeOptionType.addDataToValues(<?php echo $_value->toJson() ?>);
<?php endforeach; ?>

attributeOptionScope.bindScopeCheckbox();

<?php if($this->getTypeStoreId()): ?>
    attributeOptionScope.changeInputs();
<?php endif;?>
//]]>
</script>
</div>
</div>
