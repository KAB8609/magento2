/**
 * Sales Order View Items extra info template for gift wrapping items
 *
 * @see Enterprise_GiftWrapping_Block_Adminhtml_Sales_Order_View_Items
 */
?>

<?php $_item = $this->getItem() ?>
<tr>
    <td><?php echo $this->__('Gift Wrapping'); ?> </td>
    <td class="a-center">&nbsp;</td>
    <td class="a-right"><?php echo $this->displayPrices($_item->getGwBaseOriginalPrice(),$_item->getGwOriginalPrice());?></td>
    <td class="a-right">
        <?php if ($this->helper('tax')->displaySalesBothPrices() || $this->helper('tax')->displaySalesPriceExclTax()): ?>
            <span class="price-excl-tax">
                <?php if ($this->helper('tax')->displaySalesBothPrices()): ?>
                    <span class="label"><?php echo $this->__('Excl. Tax'); ?>:</span>
                <?php endif; ?>
                <?php echo $this->displayPrices($_item->getGwBasePrice(), $_item->getGwPrice()); ?>
            </span>
        <?php endif; ?>
        <?php if ($this->helper('tax')->displaySalesBothPrices() || $this->helper('tax')->displaySalesPriceInclTax()): ?>
            <br />
            <span class="price-incl-tax">
                <?php if ($this->helper('tax')->displaySalesBothPrices()): ?>
                    <span class="label"><?php echo $this->__('Incl. Tax'); ?>:</span>
                <?php endif; ?>
                <?php $_incl = $_item->getGwPrice() + $_item->getGwTaxAmount(); ?>
                <?php $_baseIncl = $_item->getGwBasePrice() + $_item->getGwBaseTaxAmount(); ?>
                <?php echo $this->displayPrices($_baseIncl, $_incl) ?>
            </span>
        <?php endif; ?>
    </td>
    <td>&nbsp;</td>
    <td class="a-right"></td>
    <td class="a-right"><?php echo $this->displayPrices($_item->getGwBaseTaxAmount(),$_item->getGwTaxAmount());?></td>
    <td class="a-right">&nbsp;</td>
    <td class="a-right">&nbsp;</td>
    <td class="a-right last">&nbsp;</td>
</tr>
