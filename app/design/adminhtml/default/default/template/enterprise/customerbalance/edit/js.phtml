<script type="text/javascript">

function updateEmailWebsites() {
    emailWebsites = $('_customerbalancetrans_email_store');
    balanceWebsites = $('_customerbalancewebsite');
    selectedWebsite = $('_customerbalancewebsite') ? $('_customerbalancewebsite').value : '<?php echo $this->getCustomerWebsite()?>';
    allowedWebsites = false;
    
    if( emailWebsites ) {
        new Ajax.Request('<?php echo $this->helper('enterprise_customerbalance')->getAllowedEmailWebsitesAjaxUrl();?>'+'website_id/'+selectedWebsite, 
        {
            method: 'get',
            onSuccess: function(transport) {
                allowedWebsites = transport.responseText.evalJSON();
                while(emailWebsites.options.length > 0) {
                    emailWebsites.remove(0);
                }

                for( website in allowedWebsites ) {
                    var objOption = document.createElement("option");
                    if( allowedWebsites[website].website_id ) {
                        objOption.innerHTML = allowedWebsites[website].name;
                        objOption.value = allowedWebsites[website].store_id;
                        emailWebsites.appendChild(objOption);
                    }
                }
            }
        })
        
        new Ajax.Request('<?php echo $this->helper('enterprise_customerbalance')->getWebsiteBaseCurrencyAjaxUrl();?>'+'website_id/'+selectedWebsite, 
        {
            method: 'get',
            onSuccess: function(transport) {
                currency = transport.responseText;
                container = $$('#note_delta small');
                container[0].innerHTML = '<strong>[' + currency + ']</strong>';
            }
        })
    }
}

</script>