<?php if ($this->isFullyPaid()): ?>
<script language="javascript">
    function hideAllPaymentMethods() {
        order.setPaymentMethod('free');
        if ($('order-billing_method')) {
            $('order-billing_method').select('dl').each(function(elem){
                if (elem.className=="payment-methods") {
                    elem.select('dt', 'dd').each(function (e){
                        inp = e.select('input#p_method_free');
                        if (inp.length > 0) {
                            inp[0].checked = true;
                        } else {
                            e.hide();
                        }
                    });
                }
            });
        }
    }
    <?php if ($this->isUsed()): ?>
        hideAllPaymentMethods();
    <?php endif; ?>
</script>
<?php endif; ?>
