<layout>
    <adminhtml_mobile_index>
        <reference name="content">
            <block type="xmlconnect/adminhtml_mobile" name="applications"/>
        </reference>
    </adminhtml_mobile_index>
    <adminhtml_mobile_edit>
        <reference name="left">
            <block type="xmlconnect/adminhtml_mobile_edit_tabs" name="mobile_edit_tabs">
                <block type="xmlconnect/adminhtml_mobile_edit_tab_general" name="mobile_edit_tab_general"/>
                <block type="xmlconnect/adminhtml_mobile_edit_tab_design" name="mobile_edit_tab_design">
                    <block type="xmlconnect/adminhtml_mobile_edit_tab_design_form" name="mobile_edit_tab_design_form" as="edit_form" />
                    <block type="xmlconnect/adminhtml_mobile_edit_tab_design_preview" name="mobile_edit_tab_design_preview" as="app_preview" />
                </block>
                <block type="xmlconnect/adminhtml_mobile_edit_tab_advanced" name="mobile_edit_tab_advanced"/>
                <block type="xmlconnect/adminhtml_mobile_edit_tab_content" name="mobile_edit_tab_content"/>
                <block type="xmlconnect/adminhtml_mobile_edit_tab_payment" name="mobile_edit_tab_payment"/>
                <action method="addTab"><name>general_section</name><block>mobile_edit_tab_general</block></action>
                <action method="addTab"><name>design_section</name><block>mobile_edit_tab_design</block></action>
                <action method="addTab"><name>advanced_section</name><block>mobile_edit_tab_advanced</block></action>
                <action method="addTab"><name>content_section</name><block>mobile_edit_tab_content</block></action>
                <action method="addTab"><name>payment_methods</name><block>mobile_edit_tab_payment</block></action>
<!--             </block>
            <block type="xmlconnect/adminhtml_mobile_edit_submission" name="mobile_edit_submission">
            -->
                <block type="xmlconnect/adminhtml_mobile_edit_tab_submission" name="mobile_edit_tab_submission">
                    <block type="xmlconnect/adminhtml_mobile_edit_tab_submission_history" name="mobile_edit_tab_submission_history"/>
                    <block type="xmlconnect/adminhtml_mobile_edit_tab_submission_resubmit" name="mobile_edit_tab_submission_resubmit" template="xmlconnect/resubmit"/>
                </block>
                <action method="addTab"><name>submission_section</name><block>mobile_edit_tab_submission</block></action>
            </block>
        </reference>
        <reference name="content">
            <block type="xmlconnect/adminhtml_mobile_edit" name="mobile_edit_content"/>
        </reference>
    </adminhtml_mobile_edit>

    <adminhtml_mobile_grid>
        <block type="xmlconnect/adminhtml_mobile_grid" name="mobile_grid" output="toHtml"/>
    </adminhtml_mobile_grid>

    <adminhtml_mobile_save>
        <block type="xmlconnect/adminhtml_mobile_preview" name="preview_iframe" output="toHtml"/>
    </adminhtml_mobile_save>
</layout>
