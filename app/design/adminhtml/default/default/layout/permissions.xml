<layout>
    <!-- add websites multiselect to admin roles edit page -->
    <adminhtml_permissions_role_editrole>
        <reference name="adminhtml.permissions.tab.rolesedit">
            <block type="permissions/permissions_tab_rolesedit_websites" as="websites" template="enterprise/permissions/rolesedit/websites.phtml"/>
        </reference>
    </adminhtml_permissions_role_editrole>

    <adminhtml_system_config_edit>
        <reference name="left">
            <remove name="adminhtml.system.config.switcher"/>
            <block type="permissions/system_config_switcher" name="enterprise.system.config.switcher" template="enterprise/system/config/switcher.phtml" before="-"/>
        </reference>
    </adminhtml_system_config_edit>

    <adminhtml_catalog_product_edit>
        <reference name="left">
            <remove name="store_switcher"/>
            <block type="permissions/store_switcher" name="permissions_store_switcher" template="enterprise/store/switcher.phtml" before="-"></block>
        </reference>
    </adminhtml_catalog_product_edit>

    <adminhtml_catalog_product_new>
        <reference name="left">
            <remove name="store_switcher"/>
            <block type="permissions/store_switcher" name="permissions_store_switcher" template="enterprise/store/switcher.phtml" before="-"></block>
        </reference>
    </adminhtml_catalog_product_new>

    <adminhtml_catalog_product_index>
        <reference name="products_list">
            <remove name="store_switcher"/>
            <block type="permissions/store_switcher" name="permissions_store_switcher" as="store_switcher" template="enterprise/store/switcher.phtml">
                <action method="setUseConfirm"><params>0</params></action>
            </block>
        </reference>
    </adminhtml_catalog_product_index>

    <adminhtml_dashboard_index>
        <reference name="dashboard">
            <remove name="store_switcher"/>
            <block type="permissions/store_switcher" name="permissions_store_switcher" as="store_switcher" template="enterprise/store/switcher.phtml">
                <action method="setUseConfirm"><params>0</params></action>
            </block>
        </reference>
    </adminhtml_dashboard_index>

    <adminhtml_catalog_product_action_attribute_edit>
        <reference name="left">
            <remove name="store_switcher"/>
            <block type="permissions/store_switcher" name="permissions_store_switcher" template="enterprise/store/switcher.phtml" before="-"></block>

<!--            <remove name="attributes_tabs"/>-->
<!--            <block type="adminhtml/catalog_product_edit_action_attribute_tabs" name="permissions_attributes_tabs" as="attributes_tabs">-->
<!--                <block type="adminhtml/catalog_product_edit_action_attribute_tab_attributes" name="tab_attributes"/>-->
<!--                <action method="addTab"><name>attributes</name><block>tab_attributes</block></action>-->
<!--            </block>-->
        </reference>
    </adminhtml_catalog_product_action_attribute_edit>
</layout>
