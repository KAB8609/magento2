<layout>
    <adminhtml_cms_page_index>
        <remove name="cms_page" />
        <reference name="content">
            <block type="enterprise_cms/adminhtml_cms_page" name="enterprise_cms_page" />
        </reference>
    </adminhtml_cms_page_index>

    <adminhtml_cms_page_edit>
        <remove name="cms_page_edit" />
        <reference name="content">
            <block type="enterprise_cms/adminhtml_cms_page_edit" name="enterprise_cms_page_edit" />
        </reference>
        <reference name="cms_page_edit_tabs">
            <action method="addTab">
                <name>revisions</name>
                <block translate="label title" module="enterprise_cms">
                    <class>ajax</class>
                    <label>Revisions</label>
                    <title>Revisions</title>
                </block>
            </action>
            <action method="setTabData"><tab>revisions</tab><key>url</key><value>*/*/revisions</value></action>
            <action method="addTab">
                <name>versions</name>
                <block translate="label title" module="enterprise_cms">
                    <class>ajax</class>
                    <label>Versions</label>
                    <title>Versions</title>
                </block>
            </action>
            <action method="setTabData"><tab>versions</tab><key>url</key><value>*/*/versions</value></action>
        </reference>
    </adminhtml_cms_page_edit>

    <adminhtml_cms_page_revisions>
        <remove name="root" />
        <block type="enterprise_cms/adminhtml_cms_page_edit_tab_revisions"  output="toHtml" name="cms_page_edit_revisions" />
    </adminhtml_cms_page_revisions>

    <adminhtml_cms_page_versions>
        <remove name="root" />
        <block type="enterprise_cms/adminhtml_cms_page_edit_tab_versions"  output="toHtml" name="cms_page_edit_versions" />
    </adminhtml_cms_page_versions>
</layout>
