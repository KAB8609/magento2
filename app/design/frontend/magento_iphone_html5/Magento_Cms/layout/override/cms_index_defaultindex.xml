<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" label="CMS Home Default Page" type="page" parent="cms_page_view">
    <reference name="root">
        <action method="setTemplate">
            <argument name="template" xsi:type="string">1column.phtml</argument>
        </action>
    </reference>
    <reference name="content">
        <block class="Magento\Catalog\Block\Navigation" name="hp_nav" template="navigation/top.phtml"/>
        <block class="Magento\Core\Block\Template" name="default_home_page" template="Magento_Cms::default/home.phtml"/>
    </reference>
</layout>
