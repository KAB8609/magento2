<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="cms_index_defaultindex" translate="label" type="page" parent="cms_page_view">
        <label>CMS Home Default Page</label>
        <reference name="root">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">1column.phtml</argument>
            </action>
        </reference>
        <reference name="content">
            <block class="Magento_Catalog_Block_Navigation" name="hp_nav" template="navigation/top.phtml"/>
            <block class="Magento_Core_Block_Template" name="default_home_page" template="Magento_Cms::default/home.phtml"/>
        </reference>
    </handle>
</layout>
