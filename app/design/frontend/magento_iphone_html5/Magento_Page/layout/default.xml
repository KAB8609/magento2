<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="default">
        <reference name="root">
            <action method="setTemplate">
                <template>1column.phtml</template>
            </action>
        </reference>
        <reference name="head">
            <action method="addCss">
                <file>css/iphone.css</file>
            </action>
            <action method="addCss">
                <file>css/widgets.css</file>
            </action>
            <action method="addCss">
                <file>css/custom.css</file>
            </action>
            <action method="addJs">
                <file>js/iphone.js</file>
            </action>
            <action method="addJs">
                <file>js/dnd.js</file>
            </action>
            <action method="addJs">
                <file>js/modernizr.js</file>
            </action>
            <action method="addMetaTag">
                <name>viewport</name>
                <content>width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no</content>
            </action>
        </reference>
    </handle>
</layout>
