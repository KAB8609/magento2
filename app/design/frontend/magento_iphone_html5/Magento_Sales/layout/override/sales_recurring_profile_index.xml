<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="sales_recurring_profile_index" translate="label" type="page" parent="customer_account_index">
        <label>Recurring Profile</label>
        <update handle="customer_account"/>
        <reference name="root">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">1column.phtml</argument>
            </action>
        </reference>
        <reference name="my.account.wrapper">
            <block class="Magento_Sales_Block_Recurring_Profiles" name="sales.recurring.profiles" template="recurring/profiles.phtml">
                <block class="Magento_Sales_Block_Recurring_Profiles" name="sales.recurring.profiles.grid" as="grid" template="recurring/grid.phtml">
                    <action method="prepareProfilesGrid"/>
                    <action method="setEmptyGridMessage" translate="value">
                        <argument name="value" xsi:type="string">There are no recurring profiles yet.</argument>
                    </action>
                    <action method="setGridHtmlId">
                        <argument name="value" xsi:type="string">recurring_profile_list_view</argument>
                    </action>
                </block>
            </block>
        </reference>
    </handle>
</layout>
