<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="sales_guest_view" translate="label" type="page" parent="default">
        <label>Guest Order View</label>
        <reference name="root">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">1column.phtml</argument>
            </action>
        </reference>
        <reference name="content">
            <block class="Magento_Sales_Block_Order_Info" as="info" name="sales.order.info">
                <block class="Magento_Sales_Block_Order_Info_Buttons" as="buttons" name="sales.order.info.buttons"/>
            </block>
            <block class="Magento_Sales_Block_Order_View" name="sales.order.view" after="sales.order.info">
                <block class="Magento_Sales_Block_Order_Items" name="order_items" template="order/items.phtml">
                    <action method="addItemRender">
                        <argument name="type" xsi:type="string">default</argument>
                        <argument name="block" xsi:type="string">Magento_Catalog_Block_Product_Price</argument>
                        <argument name="template" xsi:type="string">Magento_Sales::order/items/renderer/default.phtml</argument>
                    </action>
                    <action method="addItemRender">
                        <argument name="type" xsi:type="string">grouped</argument>
                        <argument name="block" xsi:type="string">Magento_Sales_Block_Order_Item_Renderer_Grouped</argument>
                        <argument name="template" xsi:type="string">order/items/renderer/default.phtml</argument>
                    </action>
                    <block class="Magento_Sales_Block_Order_Totals" name="order_totals" template="order/totals.phtml">
                        <action method="setLabelProperties">
                            <argument name="value" xsi:type="string">colspan="4" class="a-right"</argument>
                        </action>
                        <action method="setValueProperties">
                            <argument name="value" xsi:type="string">class="last a-right"</argument>
                        </action>
                        <block class="Magento_Tax_Block_Sales_Order_Tax" name="tax" template="order/tax.phtml"/>
                    </block>
                </block>
            </block>
        </reference>
        <reference name="sales.order.info">
            <action method="addLink" translate="label">
                <argument name="name" xsi:type="string">view</argument>
                <argument name="path" xsi:type="string"/>
                <argument name="label" xsi:type="string">Order Information</argument>
            </action>
            <action method="addLink" translate="label">
                <argument name="name" xsi:type="string">invoice</argument>
                <argument name="path" xsi:type="string">*/*/invoice</argument>
                <argument name="label" xsi:type="string">Invoices</argument>
            </action>
            <action method="addLink" translate="label">
                <argument name="name" xsi:type="string">shipment</argument>
                <argument name="path" xsi:type="string">*/*/shipment</argument>
                <argument name="label" xsi:type="string">Shipments</argument>
            </action>
            <action method="addLink" translate="label">
                <argument name="name" xsi:type="string">creditmemo</argument>
                <argument name="path" xsi:type="string">*/*/creditmemo</argument>
                <argument name="label" xsi:type="string">Refunds</argument>
            </action>
        </reference>
    </handle>
</layout>
