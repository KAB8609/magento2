<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle label="Customer My Account Order Invoice View" id="sales_order_invoice" type="page" parent="sales_order_view">
        <update handle="customer_account"/>
        <reference name="my.account.wrapper">
            <block class="Magento_Sales_Block_Order_Info" as="info" name="sales.order.info">
                <block class="Magento_Sales_Block_Order_Info_Buttons" as="buttons" name="sales.order.info.buttons"/>
            </block>
            <block class="Magento_Sales_Block_Order_Invoice" name="sales.order.invoice" after="sales.order.info">
                <block class="Magento_Sales_Block_Order_Invoice_Items" name="invoice_items" template="order/invoice/items.phtml">
                    <action method="addItemRender">
                        <argument name="type" xsi:type="string">default</argument>
                        <argument name="block" xsi:type="string">Magento_Catalog_Block_Product_Price</argument>
                        <argument name="template" xsi:type="string">Magento_Sales::order/invoice/items/renderer/default.phtml</argument>
                    </action>
                    <action method="addItemRender">
                        <argument name="type" xsi:type="string">grouped</argument>
                        <argument name="block" xsi:type="string">Magento_Sales_Block_Order_Item_Renderer_Grouped</argument>
                        <argument name="template" xsi:type="string">order/invoice/items/renderer/default.phtml</argument>
                    </action>
                    <block class="Magento_Sales_Block_Order_Invoice_Totals" name="invoice_totals" template="order/totals.phtml">
                        <action method="setLabelProperties">
                            <argument name="value" xsi:type="string">colspan="4" class="a-right"</argument>
                        </action>
                        <action method="setValueProperties">
                            <argument name="value" xsi:type="string">class="last a-right"</argument>
                        </action>
                        <block class="Magento_Tax_Block_Sales_Order_Tax" name="tax" template="order/tax.phtml"/>
                    </block>
                    <block class="Magento_Sales_Block_Order_Comments" name="invoice_comments" template="order/comments.phtml"/>
                </block>
            </block>
        </reference>
        <update handle="sales_order_info_links"/>
        <container name="additional.product.info" label="Additional Product Info"/>
    </handle>
</layout>
