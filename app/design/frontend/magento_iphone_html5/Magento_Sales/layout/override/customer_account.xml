<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <reference name="customer_account_navigation">
        <action method="addLink">
            <argument name="name" xsi:type="string">billing_agreements</argument>
            <argument name="path" xsi:type="string">sales/billing_agreement/</argument>
            <argument translate="true" name="label" xsi:type="string">Billing Agreements</argument>
        </action>
    </reference>
    <reference name="customer_account_navigation">
        <action method="addLink">
            <argument name="name" xsi:type="string">orders</argument>
            <argument name="path" xsi:type="string">sales/order/history/</argument>
            <argument translate="true" name="label" xsi:type="string">My Orders</argument>
        </action>
    </reference>
    <reference name="left">
        <block class="Magento_Sales_Block_Reorder_Sidebar" name="sale.reorder.sidebar" as="reorder" template="reorder/sidebar.phtml"/>
    </reference>
    <reference name="customer_account_navigation">
        <action method="addLink">
            <argument name="name" xsi:type="string">recurring_profiles</argument>
            <argument name="path" xsi:type="string">sales/recurring_profile/</argument>
            <argument translate="true" name="label" xsi:type="string">Recurring Profiles</argument>
        </action>
    </reference>
</layout>
