<layout version="0.1.0">
    <catalog_product_gallery translate="label" type="page" parent="catalog_product_view">
        <label>Catalog Product Image Gallery Popup</label>
        <reference name="root">
            <action method="setTemplate">
                <template>1column.phtml</template>
            </action>
            <action method="setMyClass">
                <value>product-gallery-view</value>
            </action>
        </reference>
        <reference name="content">
            <block type="Magento_Catalog_Block_Product_Gallery" name="catalog_product_gallery" template="product/gallery.phtml"/>
        </reference>
    </catalog_product_gallery>
</layout>
