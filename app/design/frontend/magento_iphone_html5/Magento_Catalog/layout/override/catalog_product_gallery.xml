<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle label="Catalog Product Image Gallery Popup" id="catalog_product_gallery" type="page" parent="catalog_product_view">
        <reference name="root">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">1column.phtml</argument>
            </action>
            <action method="setMyClass">
                <argument name="value" xsi:type="string">product-gallery-view</argument>
            </action>
        </reference>
        <reference name="content">
            <block class="Magento_Catalog_Block_Product_Gallery" name="catalog_product_gallery" template="product/gallery.phtml"/>
        </reference>
    </handle>
</layout>
