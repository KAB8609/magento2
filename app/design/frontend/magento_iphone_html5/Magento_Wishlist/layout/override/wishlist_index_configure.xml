<layout version="0.1.0">
    <wishlist_index_configure translate="label" type="page" parent="catalog_product_view">
        <label>Configure Wishlist Item</label>
        <reference name="product.info">
            <block type="Magento_Wishlist_Block_Item_Configure" name="product.info.addto" as="addto" template="item/configure/addto.phtml"/>
        </reference>
        <reference name="product.info.options.wrapper.bottom">
            <action method="unsetChild">
                <name>product.info.addto</name>
            </action>
            <action method="append">
                <block>product.info.addto</block>
            </action>
        </reference>
    </wishlist_index_configure>
</layout>
