<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="wishlist_index_configure" translate="label" type="page" parent="catalog_product_view">
        <label>Configure Wishlist Item</label>
        <reference name="product.info">
            <block class="Magento_Wishlist_Block_Item_Configure" name="product.info.addto" as="addto" template="item/configure/addto.phtml"/>
        </reference>
        <reference name="product.info.options.wrapper.bottom">
            <action method="unsetChild">
                <argument name="name" xsi:type="string">product.info.addto</argument>
            </action>
            <action method="append">
                <argument name="block" xsi:type="string">product.info.addto</argument>
            </action>
        </reference>
    </handle>
</layout>
