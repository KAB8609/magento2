<layout version="0.1.0">
    <default>
        <reference name="root">
            <action method="setTemplate">
                <template>1column.phtml</template>
            </action>
        </reference>
        <reference name="head">
            <block type="Mage_Page_Block_Html_Head_Css" name="css-iphone-css">
                <arguments>
                    <file>css/iphone.css</file>
                </arguments>
            </block>
            <block type="Mage_Page_Block_Html_Head_Css" name="css-widgets-css">
                <arguments>
                    <file>css/widgets.css</file>
                </arguments>
            </block>
            <block type="Mage_Page_Block_Html_Head_Css" name="css-custom-css">
                <arguments>
                    <file>css/custom.css</file>
                </arguments>
            </block>
            <block type="Mage_Page_Block_Html_Head_Script" name="js-iphone-js">
                <arguments>
                    <file>js/iphone.js</file>
                </arguments>
            </block>
            <block type="Mage_Page_Block_Html_Head_Script" name="js-dnd-js">
                <arguments>
                    <file>js/dnd.js</file>
                </arguments>
            </block>
            <block type="Mage_Page_Block_Html_Head_Script" name="js-modernizr-js">
                <arguments>
                    <file>js/modernizr.js</file>
                </arguments>
            </block>
        </reference>
    </default>
</layout>
