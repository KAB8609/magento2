<layout version="0.1.0">
    <default>
        <reference name="root">
            <action method="setTemplate">
                <template>1column.phtml</template>
            </action>
        </reference>
        <reference name="head">
            <action method="addCss">
                <file>css/iphone.css</file>
            </action>
            <action method="addCss">
                <file>css/widgets.css</file>
            </action>
            <action method="addCss">
                <file>css/custom.css</file>
            </action>
            <action method="addJs">
                <file>js/iphone.js</file>
            </action>
            <action method="addJs">
                <file>js/dnd.js</file>
            </action>
            <action method="addJs">
                <file>js/modernizr.js</file>
            </action>
        </reference>
    </default>
</layout>
