<layout version="0.1.0">
    <customer_account translate="label" type="page" parent="default">
        <label>Customer My Account (All Pages)</label>
        <reference name="root">
            <action method="setTemplate">
                <template>1column.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <container name="my.account.wrapper" label="My Account Wrapper" htmlTag="div" htmlClass="my-account"/>
        </reference>
        <reference name="left">
            <block type="Mage_Catalog_Block_Product_Compare_Sidebar" name="catalog.compare.sidebar" template="product/compare/sidebar.phtml"/>
        </reference>
        <reference name="top.links">
            <block type="Mage_Page_Block_Links" name="customer-account-navigation" before="-" template="Mage_Customer::account/navigation.phtml">
                <block type="Mage_Page_Block_Link_Current" name="customer-account-navigation-account-link">
                    <arguments translate="label">
                        <label>Account Dashboard</label>
                        <path>customer/account</path>
                    </arguments>
                </block>
                <block type="Mage_Page_Block_Link_Current" name="customer-account-navigation-account-edit-link">
                    <arguments translate="label">
                        <label>Account Information</label>
                        <path>customer/account/edit</path>
                    </arguments>
                </block>
                <block type="Mage_Page_Block_Link_Current" name="customer-account-navigation-address-link">
                    <arguments translate="label">
                        <label>Address Book</label>
                        <path>customer/address</path>
                    </arguments>
                </block>
            </block>
        </reference>
        <remove name="tags_popular"/>
    </customer_account>
</layout>
