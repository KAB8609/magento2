<layout version="0.1.0">
    <review_product_list>
        <reference name="root">
            <action method="setMyClass">
                <value>review-product-page</value>
            </action>
        </reference>
        <reference name="head">
            <action method="removeItem">
                <type>js</type>
                <name>jquery/jqzoom/js/jquery.jqzoom-core-pack.js</name>
            </action>
            <action method="removeItem">
                <type>css</type>
                <name>jquery/jqzoom/css/jquery.jqzoom.css</name>
            </action>
            <action method="addJs">
                <file>varien/product.js</file>
            </action>
            <action method="addJs">
                <file>varien/configurable.js</file>
            </action>
        </reference>
        <remove name="product.info.media"/>
        <remove name="product.info.addto"/>
        <remove name="product.info.addtocart"/>
    </review_product_list>
</layout>
