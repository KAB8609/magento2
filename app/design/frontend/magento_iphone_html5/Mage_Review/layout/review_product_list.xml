<layout version="0.1.0">
    <review_product_list>
        <reference name="root">
            <action method="setMyClass">
                <value>review-product-page</value>
            </action>
        </reference>
        <reference name="head">
            <block type="Mage_Page_Block_Html_Head_Script" name="varien-product-js">
                <arguments>
                    <file>varien/product.js</file>
                </arguments>
            </block>
            <block type="Mage_Page_Block_Html_Head_Script" name="varien-configurable-js">
                <arguments>
                    <file>varien/configurable.js</file>
                </arguments>
            </block>
        </reference>
        <remove name="jquery-jqzoom-js-jquery-jqzoom-core-pack-js"/>
        <remove name="jquery-jqzoom-css-jquery-jqzoom-css"/>
        <remove name="product.info.media"/>
        <remove name="product.info.addto"/>
        <remove name="product.info.addtocart"/>
    </review_product_list>
</layout>
