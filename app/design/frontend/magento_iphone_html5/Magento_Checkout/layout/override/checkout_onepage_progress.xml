<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle label="One Page Checkout Progress" id="checkout_onepage_progress" type="fragment" owner="checkout_onepage_index">
        <block class="Magento_Page_Block_Html" name="root" output="1" template="page_fragment.phtml">
            <block class="Magento_Checkout_Block_Onepage_Progress" name="progress" template="onepage/progress.phtml">
                <block class="Magento_Checkout_Block_Onepage_Payment_Info" name="payment_info">
                    <action method="setInfoTemplate">
                        <argument name="method" xsi:type="string"/>
                        <argument name="template" xsi:type="string"/>
                    </action>
                </block>
            </block>
        </block>
    </handle>
</layout>
