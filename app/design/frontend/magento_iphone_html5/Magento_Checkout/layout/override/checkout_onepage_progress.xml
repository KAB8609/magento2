<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" label="One Page Checkout Progress" type="fragment" owner="checkout_onepage_index">
    <block class="Magento\Page\Block\Html" name="root" output="1" template="page_fragment.phtml">
        <block class="Magento\Checkout\Block\Onepage\Progress" name="progress" template="onepage/progress.phtml">
            <block class="Magento\Checkout\Block\Onepage\Payment\Info" name="payment_info">
                <action method="setInfoTemplate">
                    <argument name="method" xsi:type="string"/>
                    <argument name="template" xsi:type="string"/>
                </action>
            </block>
        </block>
    </block>
</layout>
