<layout version="0.1.0">
    <magento_giftregistry_index_edit translate="label" module="Magento_GiftRegistry" type="page" parent="magento_giftregistry_view_index">
        <label>Customer My Account GiftRegistry Edit</label>
        <update handle="customer_account"/>
        <update handle="page_calendar"/>
        <reference name="customer_account_navigation">
            <action method="setActive">
                <path>magento_giftregistry/index/index</path>
            </action>
        </reference>
        <reference name="my.account.wrapper">
            <block type="Magento_GiftRegistry_Block_Customer_Edit" name="giftregistry_edit" template="edit/edit.phtml">
                <action method="addInputTypeTemplate">
                    <type>text</type>
                    <template>Magento_GiftRegistry::attributes/text.phtml</template>
                </action>
                <action method="addInputTypeTemplate">
                    <type>region</type>
                    <template>Magento_GiftRegistry::attributes/region.phtml</template>
                </action>
                <block type="Magento_GiftRegistry_Block_Customer_Edit_Registry" name="giftregistry_edit_registry" template="edit/registry.phtml"/>
                <block type="Magento_GiftRegistry_Block_Customer_Edit_Registrants" name="giftregistry_edit_registrants" template="edit/registrants.phtml"/>
                <block type="Magento_GiftRegistry_Block_Customer_Address_Edit" name="giftregistry_address_edit" template="address/edit.phtml"/>
            </block>
        </reference>
    </magento_giftregistry_index_edit>
</layout>
