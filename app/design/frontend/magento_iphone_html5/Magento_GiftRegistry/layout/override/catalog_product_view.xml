<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="catalog_product_view">
        <reference name="product.info">
            <block class="Magento_GiftRegistry_Block_Product_View" name="giftregistry.product.view.customize.button">
                <action method="setGiftRegistryTemplate">
                    <blockName>product.info.addtocart.additional</blockName>
                    <template>Magento_GiftRegistry::product/addtocart.phtml</template>
                </action>
                <action method="setGiftRegistryUrl">
                    <blockName>product.info.addtocart.additional</blockName>
                </action>
            </block>
        </reference>
    </handle>
</layout>
