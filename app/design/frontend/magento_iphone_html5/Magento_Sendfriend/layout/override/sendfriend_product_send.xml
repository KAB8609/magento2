<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" label="Catalog Product Email to a Friend" type="page" parent="catalog_product_view">
    <reference name="root">
        <action method="setMyClass">
            <argument name="value" xsi:type="string">send-to-friend</argument>
        </action>
    </reference>
    <reference name="head">
        <block class="Magento\Page\Block\Html\Head\Script" name="varien-product-js">
            <arguments>
                <argument name="file" xsi:type="string">varien/product.js</argument>
            </arguments>
        </block>
    </reference>
    <reference name="content">
        <block class="Magento\Sendfriend\Block\Send" name="sendfriend.send" template="send.phtml"/>
    </reference>
</layout>
