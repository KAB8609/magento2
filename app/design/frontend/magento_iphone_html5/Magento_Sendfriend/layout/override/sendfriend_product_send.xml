<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle label="Catalog Product Email to a Friend" id="sendfriend_product_send" type="page" parent="catalog_product_view">
        <reference name="root">
            <action method="setMyClass">
                <argument name="value" xsi:type="string">send-to-friend</argument>
            </action>
        </reference>
        <reference name="head">
            <action method="addJs">
                <argument name="file" xsi:type="string">varien/product.js</argument>
            </action>
        </reference>
        <reference name="content">
            <block class="Magento\Sendfriend\Block\Send" name="sendfriend.send" template="send.phtml"/>
        </reference>
    </handle>
</layout>
