<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="customer_account_login" translate="label" type="page" parent="customer_account">
        <label>Customer Account Login Form</label>
        <reference name="root">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">1column.phtml</argument>
            </action>
        </reference>
        <reference name="content">
            <block class="Magento_Customer_Block_Form_Login" name="customer_form_login" template="form/login.phtml"/>
        </reference>
    </handle>
</layout>
