<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="customer_account_confirmation" translate="label" type="page" parent="customer_account">
        <label>Customer Account Confirmation</label>
        <reference name="root">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">1column.phtml</argument>
            </action>
            <action method="setHeaderTitle" translate="title">
                <argument name="title" xsi:type="string">Send confirmation link</argument>
            </action>
        </reference>
        <reference name="content">
            <block class="Magento_Core_Block_Template" name="accountConfirmation" template="Magento_Customer::form/confirmation.phtml"/>
        </reference>
    </handle>
</layout>
