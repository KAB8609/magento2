<div class="head">
	<h2><?=__('My Product Reviews')?></h2>
</div>
<?if( $this->getCollection() && $this->count()):?>
    <?=$this->getPagerHtml()?>
        <table class="data-table box-table" cellspacing="0">
        	<col width="60">
        	<col width="100">
        	<col width="80">
        	<col>
        	<col width="100">
        	<tbody>
        	    <?foreach ($this->getCollection() as $_review):?>
                <tr class="odd">
                	<td><?=$this->dateFormat($_review->getCreatedAt())?></td>
                	<td><a href="<?=$this->getProductLink()?>id/<?=$_review->getEntityPkValue()?>"><?=$_review->getName()?></a></td>
                	<td>
                    <?if($_review->getSum()):?>
                        <div class="rating-box">
                            <div class="rating" style="width:<?=( $_review->getSum() / $_review->getCount() )?>%;"></div>
                        </div>
                    <?endif;?>
                    </td>
                	<td><?=$_review->getDetail()?></td>
                	<td class="last a-center"><a href="<?=$this->getReviewLink()?>id/<?=$_review->getId()?>"><?=__('View Details')?></a></td>
                </tr>
                <?endforeach;?>
        	</tbody>
        </table>
	<?=$this->getPagerHtml()?>
<?else:?>
    <center style="border:1px solid #cbdcf1;padding:20px 0 20px 0;"><small><?=__('You have not Product Reviews')?></small></center>
<?endif;?>