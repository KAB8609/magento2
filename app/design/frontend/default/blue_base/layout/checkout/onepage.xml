<layoutUpdate>
    <reference name="root">
        <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
    </reference>
    
    <reference name="left">
        <action method="unsetChildren"></action>
        <block type="checkout/onepage_progress" name="checkout.progress" before="-">
            <action method="setTemplate"><template>checkout/onepage/progress.phtml</template></action>
        </block>
    </reference>

    <reference name="content">
        <block type="checkout/onepage" name="checkout.onepage">
            <action method="setTemplate"><template>checkout/onepage.phtml</template></action>
            <block type="checkout/onepage_login" name="checkout.onepage.login" as="login">
                <action method="setTemplate"><template>checkout/onepage/login.phtml</template></action>
            </block>
            <block type="checkout/onepage_billing" name="checkout.onepage.billing" as="billing">
                <action method="setTemplate"><template>checkout/onepage/billing.phtml</template></action>
            </block>
            <block type="checkout/onepage_shipping" name="checkout.onepage.shipping" as="shipping">
                <action method="setTemplate"><template>checkout/onepage/shipping.phtml</template></action>
            </block>
            <block type="checkout/onepage_shipping_method" name="checkout.onepage.shipping_method" as="shipping_method">
                <action method="setTemplate"><template>checkout/onepage/shipping_method.phtml</template></action>
                <block type="checkout/onepage_shipping_method_available" name="checkout.onepage.shipping_method.available" as="available">
                    <action method="setTemplate"><template>checkout/onepage/shipping_method/available.phtml</template></action>
                </block>
            </block>
            <block type="checkout/onepage_payment" name="checkout.onepage.payment" as="payment">
                <action method="setTemplate"><template>checkout/onepage/payment.phtml</template></action>
                <block type="checkout/onepage_payment_methods" name="checkout.payment.methods" as="methods"/>
            </block>
            <block type="checkout/onepage_review" name="checkout.onepage.review" as="review">
                <action method="setTemplate"><template>checkout/onepage/review.phtml</template></action>
                <block type="checkout/onepage_review_info" name="checkout.onepage.review.info" as="info">
                    <action method="setTemplate"><template>checkout/onepage/review/info.phtml</template></action>
                </block>
            </block>
        </block>
    </reference>
</layoutUpdate>