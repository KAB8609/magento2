<layout version="0.1.0">

<!--
Shopping cart
-->

    <checkout_cart_index>
        <!-- Mage_Paypal -->
        <reference name="checkout.cart.methods">
            <block type="paypal/link_shortcut" name="checkout.cart.methods.paypal_express" template="paypal/link.phtml"/>
        </reference>
    </checkout_cart_index>

<!--
PayPal Express Review page after shortcut link invocation
-->

    <paypal_express_review>
        <!-- Mage_Paypal -->
        <remove name="right"/>
        <remove name="left"/>

        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="paypal/express_review" name="paypal_express_review" template="paypal/express/review.phtml">
                <block type="paypal/express_review_details" name="paypal_express_review_details" as="details" template="paypal/express/review/details.phtml"/>
            </block>
        </reference>
    </paypal_express_review>

<!--
PayPal Express Review details block
-->

    <paypal_express_review_details>
        <!-- Mage_Paypal -->
        <block type="paypal/express_review_details" name="root" output="toHtml" template="paypal/express/review/details.phtml"/>
    </paypal_express_review_details>

    <catalog_product_view>
        <reference name="product.info.extrabuttons">
            <block type="paypal/express_shortcut" name="paypal.partner.shortcut" template="paypal/partner/catalog/product/shortcut.phtml"/>
        </reference>
    </catalog_product_view>
    
    <default>
        <reference name="topCart.extra_actions">
            <block type="paypal/express_shortcut" name="paypal.partner.shortcut" template="paypal/partner/shortcut.phtml"/>
        </reference>
        <reference name="cart_sidebar.extra_actions">
            <block type="paypal/express_shortcut" name="paypal.partner.shortcut" template="paypal/partner/shortcut.phtml"/>
        </reference>
        <reference name="right">
            <block type="paypal/partner_mark" name="paypal.partner.mark" template="paypal/partner/mark.phtml">
                <action method="setData"><key>size</key><value>60x38</value></action>
            </block>
        </reference>
    </default>

</layout>
