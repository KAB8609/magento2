<?php $__helper = $this->helper('catalog/output'); ?>
<?php $_product = $this->getProduct(); ?>
<section role="main">
    <div class="breadcrumbs">
        <ul>
            <li class="home"><a href="#" title="Go to Home Page"><?php echo $this->__('Back') ?></a></li>
            <li class="product"><strong><?php echo $__helper->productAttribute($_product, $_product->getName(), 'name') ?></strong></li>
        </ul>
    </div>
    <div class="product-gallery">
        <span class="next">Next</span>
        <span class="prev">Prev</span>
        <ul>
            <?php foreach ($this->getProduct()->getMediaGalleryImages() as $_image): ?>
                <li>
                    <img src="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'thumbnail', $_image->getFile())->resize(300); ?>" width="300" height="300" alt="<?php echo $this->htmlEscape($_image->getLabel()) ?>" />
                </li>
            <?php endforeach; ?>
        </ul>
    </div>
</section>
