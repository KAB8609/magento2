<layout version="0.1.0">
    <catalog_product_view>
        <reference name="product.info.tabs">
            <action method="addTab" translate="title" module="Mage_Payment">
                <alias>product.info.additional.recurring.schedule</alias>
                <title>Recurring Profile</title>
                <block>Mage_Payment_Block_Catalog_Product_View_Profile</block>
                <template>payment/catalog/product/view/profile/schedule.phtml</template>
            </action>
        </reference>
        <reference name="product.info.options.wrapper">
            <block type="Mage_Payment_Block_Catalog_Product_View_Profile" name="product.info.options.recurring" as="recurring_options" template="catalog/product/view/profile/options.phtml"/>
        </reference>
    </catalog_product_view>
</layout>
