<?xml version="1.0"?>
<layoutUpdate>
    <reference name="head">
       <block type="core/text_tag_css" name="head.css.opcheckout">
           <action method="setHref"><href>css/opcheckout.css</href></action>
       </block>
    </reference>
    
    <reference name="top.links">
        <block type="core/text_list_link" name="top.links.cart">
            <action method="setLink" translate="label"><li/><a>href="{{baseUrl}}checkout/cart/"</a><label>My Cart</label></action>
        </block>
        <block type="core/text_list_link" name="top.links.wishlist">
            <action method="setLink" translate="label"><li/><a>href="{{baseUrl}}wishlist"</a><label>My Wishlist</label></action>
        </block>
        <block type="core/text_list_link" name="top.links.checkout">
            <action method="setLink" translate="label"><li/><a>href="{{baseSecureUrl}}checkout/" class="checkout"</a><label>Checkout</label></action>
        </block>
    </reference>
</layoutUpdate>
