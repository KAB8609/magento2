<layout version="0.1.0">
    <downloadable_customer_index>
        <update handle="customer_account"/>
        <reference name="content">
            <block type="downloadable/customer_order_list" name="customer_order_list" template="downloadable/customer/order/list.phtml">
            </block>
        </reference>
    </downloadable_customer_index>

    <checkout_cart_index>
        <reference name="checkout.cart">
            <action method="addItemRender"><type>downloadable</type><block>checkout/cart_item_renderer</block><template>downloadable/checkout/cart/item/default.phtml</template></action>
        </reference>
    </checkout_cart_index>

    <checkout_onepage_review>
        <reference name="checkout.cart">
            <action method="addItemRender"><type>downloadable</type><block>checkout/cart_item_renderer</block><template>downloadable/checkout/cart/item/default.phtml</template></action>
        </reference>
    </checkout_onepage_review>

    <sales_order_view>
        <reference name="order_items">
            <action method="addItemRender"><type>downloadable</type><block>sales/order_item_renderer_default</block><template>downloadable/sales/order/items/renderer.phtml</template></action>
        </reference>
    </sales_order_view>
    
    <PRODUCT_TYPE_downloadable>
        <reference name="product.info">
            <block type="downloadable/catalog_product_type" name="product.info.downloadable" as="product_type_data" template="downloadable/catalog/product/type.phtml">
                <block type="downloadable/catalog_product_samples" name="product.info.downloadable.samples" as="samples" template="downloadable/catalog/product/samples.phtml"/>
            </block>
        </reference>
        <reference name="product.info.options.wrapper">
            <block type="downloadable/catalog_product_links" name="product.info.options.downloadable" as="options_downloadable" before="-" template="downloadable/catalog/product/links.phtml"/>
        </reference>
    </PRODUCT_TYPE_downloadable>

</layout>