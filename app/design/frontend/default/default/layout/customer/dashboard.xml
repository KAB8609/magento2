<?xml version="1.0"?>
<layoutUpdate>
    <reference name="root">
        <action method="setTemplate"><template>page/dashboard.phtml</template></action>
    </reference>

    <reference name="content">
        <block type="customer/account_dashboard" name="customer_account_dashboard">
            <action method="setTemplate"><template>customer/account/dashboard.phtml</template></action>
            <block type="customer/account_dashboard_hello" name="customer_account_dashboard_hello" as="hello">
                <action method="setTemplate"><template>customer/account/dashboard/hello.phtml</template></action>
            </block>
            <block type="core/template" name="customer_account_dashboard_top" as="top" />
            <block type="customer/account_dashboard_info" name="customer_account_dashboard_info" as="info">
                <action method="setTemplate"><template>customer/account/dashboard/info.phtml</template></action>
            </block>
            <block type="customer/account_dashboard_newsletter" name="customer_account_dashboard_newsletter" as="newsletter">
                <action method="setTemplate"><template>customer/account/dashboard/newsletter.phtml</template></action>
            </block>
            <block type="customer/account_dashboard_address" name="customer_account_dashboard_address" as="address">
                <action method="setTemplate"><template>customer/account/dashboard/address.phtml</template></action>
            </block>
            <block type="core/template" name="customer_account_dashboard_info1" as="info1" />
            <block type="core/template" name="customer_account_dashboard_info2" as="info2" />
        </block>
    </reference>

    <reference name="right">
        <action method="unsetChild"><name>wishlist</name></action>
        <action method="unsetChild"><name>right.poll</name></action>
        <action method="unsetChild"><name>catalog_compare_sidebar</name></action>
        <block type="customer/account_dashboard_sidebar" name="customer_account_dashboard_sidebar">
            <action method="setTemplate"><template>customer/account/dashboard/sidebar.phtml</template></action>
        </block>
    </reference>

</layoutUpdate>
