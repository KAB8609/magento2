/**
 * Downloadable product links
 *
 * @see Mage_Downloadable_Block_Catalog_Product_Links
 */
?>
<?php $_product = $this->getProduct() ?>
<?php $_links = $this->getLinks() ?>
<?php $_allowSeparateLinks = $this->getIsAllowSeparateLinks() ?>
<?php if (count($_links)): ?>
    <dl class="item-options">
        <dt>Links</dt>
    <?php foreach ($_links as $link): ?>
            <dd>
                <a href="<?php echo $link->getUrl() ?>"><?php echo $link->getLabel() ?></a>
                <?php if ($_allowSeparateLinks):?>
                <input type="checkbox" value="<?php echo $this->getId() ?>" <?php if ($link->getIsChecked()):?>checked="checked"<?php endif; ?>>
                <?php endif; ?>
            </dd>
    <?php endforeach; ?>
    </dl>
<?php endif; ?>
