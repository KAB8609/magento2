<?php $_linksPurchasedSeparately = $this->getLinksPurchasedSeparately() ?>
<?php if ($this->getProduct()->isSaleable() && $_linksPurchasedSeparately && $this->hasLinks()):?>
    <dl>
        <?php $_links = $this->getLinks(); ?>
        <?php $_isRequired = $this->getLinkSelectionRequired(); ?>
        <dt><label><?php echo $this->__('Links') ?><?php if ($_isRequired): ?><span class="required">&nbsp;*</span><?php endif; ?></label></dt>
        <dd<?php /* if ($_option->decoratedIsLast){?> class="last"<?php } */ ?>>
            <ul id="downloadable-links-list" class="options-list">
            <?php foreach ($_links as $_link): ?>
                <li>
                    <input type="checkbox" class="checkbox<?php if($this->getLinkSelectionRequired()):?> validate-one-required-by-name<?php endif; ?> product-custom-option" onclick="opConfig.reloadPrice()" name="links[]" id="links_<?php echo $_link->getId() ?>" value="<?php echo $_link->getId() ?>" />
                    <span class="label"><label for="links_<?php echo $_link->getId() ?>"><?php echo $_link->getTitle() ?> <?php echo $this->getFormattedLinkPrice($_link); ?></label></span>
                    <?php if ($_isRequired): ?>
                        <script type="text/javascript">
                            $('links_<?php echo $_link->getId() ?>').advaiceContainer = 'links-<?php echo $_link->getId() ?>-container';
                            $('links_<?php echo $_link->getId() ?>').callbackFunction = 'validateOptionsCallback';
                        </script>
                    <?php endif; ?>
                </li>
            <?php endforeach; ?>
            </ul>

            <?php if ($_isRequired): ?>
                <span id="options-<?php echo $_option->getId() ?>-container"></span>
            <?php endif;?>
        </dd>
    </dl>
    <script type="text/javascript">
        var spConfig = new Product.Config(<?php echo $this->getJsonConfig() ?>);
    </script>
<?php endif;?>
