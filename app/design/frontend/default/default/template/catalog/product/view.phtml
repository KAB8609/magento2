?>
<?=$this->getMessagesBlock()->getGroupedHtml()?>
<?$_product=$this->getProduct()?>
<div class="product-info-box">
    <div class="product-essential">
        <div class="product-img-box">
            <p class="main-product-img">
                <img id="image" src="<?=$_product->getImageUrl()?>" alt="<?=$_product->getName()?>"/>
            </p>
            <div class="image-zoom" id="track_outer">
                <img id="zoom_out" src="<?=$this->getSkinUrl('images/slider_btn_zoom_out.gif')?>" alt="<?=__('Zoom Out')?>" class="btn-zoom-out"/>
                <div id="track">
                    <div id="handle"></div>
                </div>
                <img id="zoom_in" src="<?=$this->getSkinUrl('images/slider_btn_zoom_in.gif')?>" alt="<?=__('Zoom In')?>" class="btn-zoom-in"/>
            </div>
            <script type="text/javascript">
                Event.observe(window, 'load', function() {
                    product_zoom = new Product.Zoom('image', 'track', 'handle', 'zoom_in', 'zoom_out');
                });
            </script>
        <?if ($this->getGalleryImages() && $this->getGalleryImages()->getSize()):?>
            <div class="more-views">
                <h4><?=__('More Views')?></h4>
                <ul>
                <?foreach ($this->getGalleryImages() as $_image):?>
                    <li>
                        <a href="#" onclick="popWin('<?=$this->getGalleryUrl($_image)?>', 'gallery', 'scrollbars=yes,width=300,height=300,resizable=yes');return false;">
                            <img src="<?=$_image->setType(1)->getSourceUrl();?>" width="68" height="68" alt=""/>
                        </a>
                    </li>
                <?endforeach;?>
                </ul>
            </div>
       <?endif;?>
       </div>
       <div class="product-shop">
       <h3 class="product-name"><?=$_product->getName()?></h3>
            <?=$this->getHelper('review/helper')->getSummaryHtml($_product, null, 1)?>
            <form action="<?=$this->getUrl('checkout/cart/add')?>" method="post" id="product_addtocart_form">
            <input type="hidden" name="product" value="<?=$_product->getId()?>"/>
            <input type="hidden" name="related_product" id="related-products-field" value=""/>

            <?if($_product->isSuperConfig()):?>
                <?=$this->getChildHtml('super_config')?>
            <?endif;?>

            <?$_tierPrices = $this->getTierPrices($_product)?>
            <?if(count($_tierPrices)>0):?>
                <div class="product-pricing">
                    <ul class="bare">
                    <?foreach($_tierPrices as $_price):?>
                        <li><?=__('Buy %s for %s each', $_price['price_qty'], $_price['formated_price'])?></li>
                    <?endforeach?>
                    </ul>
                </div>
            <?endif;?>

            <?if($_product->isSuperGroup()):?>
                <?=$this->getChildHtml('super_group')?>
            <?endif;?>

            <?if(!$_product->isSuperGroup()):?>
                <p><small><?=__('Availability: In stock. Ships within 24hours.')?></small></p>
                <?=$this->getHelper('catalog/product')->getPriceHtml($_product)?>
                <?if($_product->isSaleable()):?>
                <fieldset class="add-to-cart-box">
                    <legend><?=__('Add Items to Cart')?></legend>
                    <span class="qty-box"><label for="qty"><?=__('Qty')?>:</label>
                    <input name="qty" type="text" class="input-text qty" id="qty"/></span>
                    <button class="form-button" onclick="productAddToCartForm.submit()"><span><?=__('Add to Cart')?></span></button>
                    <strong><?=__('OR')?></strong>
                </fieldset>
                <?endif;?>
                <div class="add-to-box">
                    <a href="<?=$this->getAddToWishlistUrl($_product)?>"><?=__('Add to Wishlist')?></a><br/>
                    <?if($_compareUrl=$this->getAddToCompareUrl($_product)):?>
                    <a href="<?=$_compareUrl?>"><?=__('Add to Compare')?></a>
                    <?endif;?>
                </div>
            <?else:?>
                <p><small><?=__('Availability: In stock. Ships within 24hours.')?></small></p>
                <?if($_product->isSaleable() && $_product->getSuperGroupProductsLoaded()->getSize()):?>
                <button class="form-button" onclick="productAddToCartForm.submit()"><span><?=__('Add to Cart')?></span></button> <strong><?=__('OR')?></strong>
                &nbsp;&nbsp;
                <?endif;?>
                <a href="<?=$this->getAddToWishlistUrl($_product)?>"><?=__('Add to Wishlist')?></a>
                <?if($_compareUrl=$this->getAddToCompareUrl($_product)):?>
                <span class="pipe">|</span>
                <a href="<?=$_compareUrl?>"><?=__('Add to Compare')?></a>
                <?endif;?>
            <?endif;?>
            </form>
            <script type="text/javascript">
                var productAddToCartForm = new VarienForm('product_addtocart_form');
                productAddToCartForm.submit = function() {
                    if(this.validator.validate()) {
                        this.form.submit();
                    }
                }.bind(productAddToCartForm);
            </script>
            <div class="clear"></div>
            <div class="divider"></div>
           <h4><?=__('Quick Overview')?></h4>
           <div class="short-description"><?=$_product->getShortDescription()?></div>
        </div>
    </div>
        <div class="product-collateral">
        <div class="collateral-box">
            <div class="head">
                <h4><?=__('Product Description')?></h4>
            </div>
            <div class="product-specs"><?=$_product->getDescription()?></div>
        </div>
        <?if($_additional = $this->getAdditionalData()):?>
        <div class="collateral-box attribute-specs">
            <div class="head">
                <h4><?=__('Additional Information')?></h4>
            </div>
            <table cellspacing="0" class="data-table" id="product-attribute-specs-table">
            <?foreach ($_additional as $_data):?>
            <tr>
                <td class="label"><?=$_data['label']?></td>
                <td class="data"><?=$_data['value']?></td>
            </tr>
            <?endforeach;?>
            </table>
            <script type="text/javascript">decorateTable('product-attribute-specs-table')</script>
        </div>
        <?endif;?>
        <?=$this->getChildHtml('upsell_products')?>
        <?=$this->getChildHtml('product_additional_data')?>
    </div>
</div>