?>
<div class="box shop-by">
    <div class="head">
        <span class="corner"></span>
        <h3>Shop by</h3>
    </div>
    <div class="box-container">
        <div class="narrow-by">
            <dl>
            <?$_categories=$this->getCurrentChildCategories()?>
            <?if($_categories->count()):?>
                <dt>Category</dt>
                <dd>
                    <ol>
                    <?foreach ($_categories as $_category):?>
                        <li><a href="<?=$this->getCategoryUrl($_category)?>/"<?if ($this->isCategoryActive($_category)):?> class="active"<?endif?>>
                            <?=$_category->getName()?></a> <?//(=$_node->getProductCount())?>
                        </li>
                    <?endforeach?>
                    </ul>
                </dd>
            <?endif;?>
        </div>
    </div>
</div>
