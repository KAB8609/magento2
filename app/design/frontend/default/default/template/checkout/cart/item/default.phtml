<?php $_item = $this->getItem()?>
<?php $_weeeDisplayType = Mage::helper('weee')->getPriceDisplayType(); ?>
<?php $weeeAmount = Mage::helper('weee')->getAmount($_item->getProduct()); ?>
<?php $rowWeeeAmount = Mage::helper('weee')->getAmount($_item->getProduct())*$_item->getQty(); ?>
<tr>
    <td class="a-center"><a href="<?php echo $this->getDeleteUrl() ?>"><img src="<?php echo $this->getSkinUrl('images/btn_trash.gif') ?>" width="16" height="16" alt="<?php $this->__('Remove item')?>" /></a></td>
    <td><a href="<?php echo $this->getProductUrl() ?>"><img src="<?php echo $this->getProductThumbnail()->resize(75); ?>" alt="<?php echo $this->htmlEscape($this->getProductName()) ?>" width="75" /></a></td>
    <td class="attributes-col">
        <h4 class="title"><a href="<?php echo $this->getProductUrl() ?>"><?php echo $this->getProductName() ?></a></h4>
        <!-- item custom options -->
        <?php if ($_options = $this->getOptionList()):?>
        <dl class="item-options">
            <?php foreach ($_options as $_option) : ?>
            <?php $_formatedOptionValue = $this->getFormatedOptionValue($_option['value']) ?>
            <dt><?php echo $this->htmlEscape($_option['label']) ?></dt>
            <dd<?php if (isset($_formatedOptionValue['full_view'])): ?> class="truncated"<?php endif; ?>><?php echo $_formatedOptionValue['value'] ?>
                <?php if (isset($_formatedOptionValue['full_view'])): ?>
                <div class="truncated_full_value">
                    <dl class="item-options">
                        <dt><?php echo $this->htmlEscape($_option['label']) ?></dt>
                        <dd><?php echo $_formatedOptionValue['full_view'] ?></dd>
                    </dl>
                </div>
                <?php endif; ?>
            </dd>
            <?php endforeach; ?>
        </dl>
        <?php endif;?>
        <!-- / -->

        <?php if ($messages = $this->getMessages()): ?>
        <?php foreach ($messages as $message): ?>
        <div class="shopping-cart-item-message <?php echo $message['type'] ?>">
            * <?php echo $message['text'] ?>
        </div>
        <?php endforeach; ?>
        <?php endif; ?>
    </td>
    <?php if ($this->helper('wishlist')->isAllowInCart()) : ?>
    <td class="a-center">
        <input type="checkbox" value="1" name="cart[<?php echo $_item->getId() ?>][wishlist]" />
    </td>
    <?php endif ?>
    <?php if ($this->helper('tax')->displayCartPriceExclTax() || $this->helper('tax')->displayCartBothPrices()): ?>
    <td class="a-right">
        <?php echo $this->helper('checkout')->formatPrice($_item->getCalculationPrice()) ?>
    </td>
    <?php endif; ?>
    <?php if ($this->helper('tax')->displayCartPriceInclTax() || $this->helper('tax')->displayCartBothPrices()): ?>
    <td class="a-right">
        <?php if ($_weeeDisplayType == 0) { ?>
            <?php echo $this->helper('checkout')->formatPrice($this->helper('checkout')->getPriceInclTax($_item)+$weeeAmount); ?>
        <?php } else if ($_weeeDisplayType == 1) { ?>
            <?php echo $this->helper('checkout')->formatPrice($this->helper('checkout')->getPriceInclTax($_item)+$weeeAmount); ?>
            <br />
            <span class="weee"><small>
            <?php echo $this->helper('checkout')->formatPrice($this->helper('checkout')->getPriceInclTax($_item)); ?>
            +
            <?php echo Mage::helper('core')->currency($weeeAmount,true,true); ?> <?php echo $this->__('of WEEE tax'); ?></small></span>
        <?php } else if ($_weeeDisplayType == 2) { ?>
            <?php echo $this->helper('checkout')->formatPrice($this->helper('checkout')->getPriceInclTax($_item)); ?>
            <br />
            <span class="weee"><small><?php echo $this->__('WEEE tax'); ?>: <?php echo Mage::helper('core')->currency($weeeAmount,true,true); ?></small></span><br />
            <span class="weee"><small><?php echo $this->__('Incl. WEEE tax'); ?>: <?php echo $this->helper('checkout')->formatPrice($this->helper('checkout')->getPriceInclTax($_item)+$weeeAmount); ?></small></span>
        <?php } else if ($_weeeDisplayType == 3) { ?>
            <?php echo $this->helper('checkout')->formatPrice($this->helper('checkout')->getPriceInclTax($_item)); ?>
        <?php } ?>
    </td>
    <?php endif; ?>
    <td class="a-center">
        <input name="cart[<?php echo $_item->getId() ?>][qty]" value="<?php echo $this->getQty() ?>" size="4" class="input-text qty" maxlength="8" />
    </td>
    <?php if ($this->helper('tax')->displayCartPriceExclTax() || $this->helper('tax')->displayCartBothPrices()): ?>
    <td class="a-right">
        <?php echo $this->helper('checkout')->formatPrice($_item->getRowTotal()) ?>
    </td>
    <?php endif; ?>
    <?php if ($this->helper('tax')->displayCartPriceInclTax() || $this->helper('tax')->displayCartBothPrices()): ?>
    <td class="a-right">
        <?php if ($_weeeDisplayType == 0) { ?>
            <?php echo $this->helper('checkout')->formatPrice($this->helper('checkout')->getSubtotalInclTax($_item)+$rowWeeeAmount); ?>
        <?php } else if ($_weeeDisplayType == 1) { ?>
            <?php echo $this->helper('checkout')->formatPrice($this->helper('checkout')->getSubtotalInclTax($_item)+$rowWeeeAmount); ?>
            <br />
            <span class="weee"><small>
            <?php echo $this->helper('checkout')->formatPrice($this->helper('checkout')->getSubtotalInclTax($_item)); ?>
            +
            <?php echo Mage::helper('core')->currency($rowWeeeAmount,true,true); ?> <?php echo $this->__('WEEE tax'); ?></small></span>
        <?php } else if ($_weeeDisplayType == 2) { ?>
            <?php echo $this->helper('checkout')->formatPrice($this->helper('checkout')->getSubtotalInclTax($_item)); ?>
            <br />
            <span class="weee"><small><?php echo $this->__('WEEE tax'); ?>: <?php echo Mage::helper('core')->currency($rowWeeeAmount,true,true); ?></small></span><br />
            <span class="weee"><small><?php echo $this->__('Incl. WEEE tax'); ?>: <?php echo $this->helper('checkout')->formatPrice($this->helper('checkout')->getSubtotalInclTax($_item)+$rowWeeeAmount); ?></small></span>
        <?php } else if ($_weeeDisplayType == 3) { ?>
            <?php echo $this->helper('checkout')->formatPrice($this->helper('checkout')->getSubtotalInclTax($_item)); ?>
        <?php } ?>        
    </td>
    <?php endif; ?>
</tr>