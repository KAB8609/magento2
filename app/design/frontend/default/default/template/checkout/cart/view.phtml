<h1 class="page-heading">Shopping Cart</h1>
<form action="<?=$this->getUrl('checkout/cart/updatePost')?>" method="post">
    <table cellspacing="0" class="data-table">
        <tr>
            <th class="align-left">Product Name</th>
<?if($this->isWishlistActive()):?>            
            <th style="width:60px;" class="align-center">Wishlist</th>
<?endif?>
            <th style="width:50px;" class="align-center">Remove</th>
            <th style="width:70px;" class="align-center">Unit Price</th>
            <th style="width:40px;" class="align-center">Qty</th>
            <th style="width:60px;" class="align-center">Total</th>
        </tr>
        <?foreach($this->getItems() as $item):?>
        <tr>
            <td><a href="<?=$this->getUrl('catalog/product/view/id/'.$item->getProductId())?>"><?=$item->getName()?></a></td>
<?if($this->isWishlistActive()):?>            
            <td class="align-center"><input type="checkbox" value="1" name="cart[<?=$item->getId()?>][wishlist]"/></td>
<?endif?>
            <td class="align-center"><input type="checkbox" value="1" name="cart[<?=$item->getId()?>][remove]"/></td>
            <td class="align-center"><?=$item->getPrice()?></td>
            <td class="align-center"><input name="cart[<?=$item->getId()?>][qty]" value="<?=$item->getQty()?>" size="2" class="input-text qty"/></td>
            <td class="align-right"><?=$item->getRowTotal()?></td>
        </tr>
        <?endforeach?>
				<tfoot>
        <?foreach($this->getTotals() as $total):?>
        <tr>
            <td colspan=<?if($this->isWishlistActive()):?>5<?else:?>4<?endif?> class="align-right"><?=$total->getTitle()?>:</td>
						<td class="align-right" style="<?=$total->getStyle()?>"><?=$total->getValue()?></td>
        </tr>
        <?endforeach?>
				<tr>
					<td colspan=<?if($this->isWishlistActive()):?>6<?else:?>5<?endif?> class="align-right">
						<p><input type="submit" value="Update Cart" class="input-button" name="do"/></p></td>
				</tfoot>
    </table>
</form>
<br/>
<div class="box-shipping-estimate">
	<h2>Estimate</h2>
	<fieldset>
	<form action="<?=$this->getUrl('checkout/cart/estimatePost')?>" method="post">
			<p><label for="estimate_postcode">Zip Code:</label><br/>
			<input class="input-text" name="estimate_postcode" value="<?=$this->getEstimatePostcode()?>" style="width:6em;"/> <input type="submit" value="Estimate" class="input-button" name="do"/></p>
	</form>
	<?if ($this->getEstimateRates()):?>
			<form action="<?=$this->getUrl('checkout/cart/estimateUpdatePost')?>" method="post">
					<table cellspacing="1" width="100%" style="margin-bottom:7px;">
					<?foreach ($this->getEstimateRates() as $rate):?>
						 <?if ($rate->getErrorMessage()):?>
						<tr>
							<td colspan="2">
								<strong class="error-text"><?=$rate->getCarrierTitle()?>: <?=$rate->getErrorMessage()?></strong>
							</td>
						</tr>
								 <?else:?>
						<tr>
							<td style="width:15px;"><input id="estimate_method_<?=$rate->getCode()?>" name="estimate_method" type="radio" value="<?=$rate->getCode()?>" 
							<?if($rate->getCode()===$this->getEstimateMethod())echo"checked"?> /></td>
							<td><label for="estimate_method_<?=$rate->getCode()?>"><?=$rate->getCarrierTitle()?>: <?=$rate->getMethodDescription()?></label>:
								<strong><?=$rate->getPrice()?></strong></td>
						</tr>
						<?endif?>
						<?endforeach?>
					</table>
					<p><input type="submit" value="Update totals" class="input-button" name="do"/></p>
		</form>
		</fieldset>
	<?endif?>
</div>
<div class="box-discounts">
	<h2>Discounts</h2>
	<form action="<?=$this->getUrl('checkout/cart/couponPost')?>" method="post">
		<fieldset>
			<p><label for="coupon_code">Coupon code:</label><br />
			<input class="input-text" id="coupon_code" name="coupon_code" value="<?=$this->getCouponCode()?>" name="do"/><br/><input type="submit" value="Apply" class="input-button" name="do"/> <input type="submit" value="Clear" 
			class="input-button-sub" name="do"/></p>
		</fieldset>
	</form>
	<form action="<?=$this->getUrl('checkout/cart/giftCertPost')?>" method="post">
		<fieldset>
			<p><label for="giftcert_code">Gift certificate:</label><br />
			<input class="input-text" id="giftcert_code" name="giftcert_code" value="<?=$this->getGiftcertCode()?>"/><br/><input type="submit" value="Apply" class="input-button" name="do"/> <input type="submit" value="Clear" class="input-button-sub" name="do"/></p>
		</fieldset>
	</form>
</div>
<div class="clearfix"></div>

<div class="buttons-container">
	<a href="<?=Mage::getBaseUrl()?>" class="float-left">&laquo; Continue Shopping</a>
	<a href="<?=$this->getUrl('checkout')?>"><img src="<?=$this->getSkinUrl('images/btn_checkout.gif')?>" alt="Checkout"/></a>
</div>