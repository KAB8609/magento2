?>
<?php $_item = $this->getItem() ?>
<li>
    <div class="product-images">
        <a href="<?php echo $this->getProductUrl()?>"><img src="<?php echo $this->getProductThumbnail()->resize(50, 50)->setWatermarkSize('30x10'); ?>" alt="<?php echo $this->htmlEscape($this->getProductName()) ?>" width="50" height="50" /></a>
    </div>
    <div class="product-details">
        <a href="<?php echo $this->getDeleteUrl() ?>" onclick="return confirm('<?php echo $this->__('Are you sure you would like to remove this item from the shopping cart?') ?>');" class="widget-btn"><img src="<?php echo $this->getSkinUrl('images/list_remove_btn.gif') ?>" alt="<?php echo $this->__('Remove Product') ?>" /></a>
        <a href="<?php echo $this->getProductUrl() ?>"><?php echo $this->getProductName() ?></a><br />
        <strong><?php echo $this->getQty() ?></strong> x

        <?php if (Mage::helper('weee')->typeOfDisplay($_item, array(0, 1, 4), 'sales')): ?>
            <?php $_excl = ($_item->getCalculationPrice() ? $_item->getCalculationPrice() : $_item->getPrice()) + $_item->getWeeeTaxAppliedAmount(); ?>
            <?php $_incl = $this->helper('checkout')->getPriceInclTax($_item) + $_item->getWeeeTaxAppliedAmount(); ?>

            <?php if ($this->helper('tax')->displayCartPriceInclTax()): $_excl = $_incl; endif; ?>

            <?php echo $this->helper('checkout')->formatPrice($_excl); ?>

            <?php if (Mage::helper('weee')->typeOfDisplay($_item, 1, 'sales') && $_item->getWeeeTaxAppliedAmount()): ?>
                <small>
                <?php foreach (Mage::helper('weee')->getApplied($_item) as $tax): ?>
                    <br /><span class="nobr"><?php echo $tax['title']; ?>: <?php echo Mage::helper('checkout')->formatPrice($tax['amount'],true,true); ?></span>
                <?php endforeach; ?>
                </small>
            <?php elseif (Mage::helper('weee')->typeOfDisplay($_item, 4, 'sales') && $_item->getWeeeTaxAppliedAmount()): ?>
                <small>
                <?php foreach (Mage::helper('weee')->getApplied($_item) as $tax): ?>
                    <br /><span class="nobr"><?php echo $tax['title']; ?>: <?php echo Mage::helper('checkout')->formatPrice($tax['amount_incl_tax'],true,true); ?></span>
                <?php endforeach; ?>
                </small>
            <?php endif; ?>

            <?php if ($this->helper('tax')->displayCartBothPrices() && $_incl != $_excl): ?>
                <br />(<span><?php echo $this->helper('checkout')->formatPrice($_incl); ?></span> <?php echo Mage::helper('tax')->__('Incl. Tax') ?>)
            <?php endif; ?>
        <?php elseif (Mage::helper('weee')->typeOfDisplay($_item, 2, 'sales')): ?>
            <?php if ($this->helper('tax')->displayCartPriceInclTax()): ?>
                <?php $_excl = $this->helper('checkout')->getPriceInclTax($_item) - $_item->getWeeeTaxDisposition(); ?>
                <?php $_incl = $this->helper('checkout')->getPriceInclTax($_item) + $_item->getWeeeTaxAppliedAmount(); ?>
            <?php elseif ($this->helper('tax')->displayCartPriceExclTax()): ?>
                <?php $_excl = $_item->getCalculationPrice() ? $_item->getCalculationPrice() : $_item->getPrice(); ?>
                <?php $_incl = $_excl + $_item->getWeeeTaxAppliedAmount(); ?>
            <?php endif; ?>

            <?php echo $this->helper('checkout')->formatPrice($_excl); ?>
            <?php if ($_item->getWeeeTaxAppliedAmount()): ?>
                <small>
                <?php foreach (Mage::helper('weee')->getApplied($_item) as $tax): ?>
                    <br /><span class="nobr"><?php echo $tax['title']; ?>: <?php echo Mage::helper('checkout')->formatPrice($tax['amount_incl_tax'],true,true); ?></span>
                <?php endforeach; ?>
                </small>
            <?php endif; ?>
            <?php if ($_incl != $_excl): ?>
                <br />(<span><?php echo $this->helper('checkout')->formatPrice($_incl); ?></span> <?php echo Mage::helper('tax')->__('Incl. Tax') ?>)
            <?php endif; ?>
        <?php else: ?>
            <?php $_excl = $_item->getCalculationPrice() ? $_item->getCalculationPrice() : $_item->getPrice(); ?>
            <?php $_incl = $this->helper('checkout')->getPriceInclTax($_item) - $_item->getWeeeTaxDisposition(); ?>

            <?php if ($this->helper('tax')->displayCartPriceInclTax()): $_excl = $_incl; endif; ?>

            <?php echo $this->helper('checkout')->formatPrice($_excl); ?>
            <?php if ($this->helper('tax')->displayCartBothPrices() && $_incl != $_excl): ?>
                <br />(<span><?php echo $this->helper('checkout')->formatPrice($_incl); ?></span> <?php echo Mage::helper('tax')->__('Incl. Tax') ?>)
            <?php endif; ?>
        <?php endif; ?>


        <!-- item custom options -->
        <?php if ($_options = $this->getOptionList()):?>
        <div class="truncated">
          <div class="truncated_full_value">
            <dl class="item-options">
                <?php foreach ($_options as $_option) : ?>
                <dt><?php echo $this->htmlEscape($_option['label']) ?></dt>
                <dd>
                    <?php if (is_array($_option['value'])): ?>
                    <?php echo nl2br(implode("\n", $_option['value'])) ?>
                    <?php else: ?>
                    <?php echo $_option['value'] ?>
                    <?php endif; ?>
                </dd>
                <?php endforeach; ?>
            </dl>
          </div>
        <a href="#" onclick="return false;" class="details"><?php echo $this->__('Details') ?></a>
        </div>
        <?php endif;?>
        <!-- / -->
    </div>
</li>