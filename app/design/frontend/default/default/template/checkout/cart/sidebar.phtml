/**
 * Shoping cart sidebar
 * 
 * @see Mage_Checkout_Block_Cart_Sidebar
 */
?>
<?if($this->getCanDisplayCart()):?>
<div class="box base-mini mini-cart">
	<div class="head">
		<h4><?=__('My Cart')?> <span class="count">- <a href="<?=$this->getUrl('checkout/cart')?>"><?=__('%d item(s)', $this->getItemCollection()->getSize())?></a></span></h4>
		<h5>Last added items</h5>
	</div>
	<?if($this->getItemCollection()->getSize()):?>
	<ol id="cart-sidebar">
	 <?foreach($this->getItemCollection() as $_item):?>
        <li>
			<div class="product-images">
				<a href="<?=$_item->getProduct()->getProductUrl()?>"><img src="<?=$_item->getProduct()->getThumbnailUrl()?>" alt="<?=$_item->getName()?>" width="50"/></a>
			</div>
			<div class="product-details">
				<a href="<?=$this->getRemoveItemUrl($_item)?>" onclick="return confirm('<?=__('Are You sure?')?>');" class="widget-btn"><img src="<?=$this->getSkinUrl('images/list_remove_btn.gif')?>" alt="Remove"/></a>
				<a href="<?=$_item->getProduct()->getProductUrl()?>"><?=$_item->getName()?></a>
				<br/><strong>Qty: <?=1*$_item->getQty()?></strong>
				<?//=$this->getHelper('catalog/product')->getPriceHtml($_item)?>
			</div>
		</li>
	<?endforeach;?>
	</ol>
	<script type="text/javascript">decorateList('cart-sidebar')</script>
	<?else:?>
 	<div class="content"><p><?=__('You have no items in your cart.')?></p></div>
 	<?endif?>


    
    <div class="actions">
        <a href="<?=$this->getUrl('checkout/cart')?>" class="left"><?=__('Go to Cart')?></a>
    <?if($this->getItemCollection()->getSize()):?>
        <button class="form-button" type="button" onclick="setLocation('<?=$this->getUrl('checkout/onepage')?>')"><span><?=__('Checkout')?></span></button><br/>
     <?endif?>
    </div>
</div>
<!-- [ends] .cart-sidebar // -->
<?endif?>