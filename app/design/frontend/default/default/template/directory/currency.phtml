<?
/**
 * Currency switcher
 * 
 * @see Mage_Directory_Block_Currency
 */
?>
<?if($this->getCurrencyCount()):?>
<div class="box currency-switcher">
    <div class="head">
        <h4>Select your currency</h4>
    </div>
        <select name="currency" onchange="changeCurrency(this)">
        <?foreach ($this->getCurrencies() as $_currency):?>
            <option value="<?=$_currency->getCurrencyCode()?>"<?if($_currency->getCurrencyCode()==$this->getCurrentCurrencyCode()):?> selected="selected"<?endif;?>>
                <?=$_currency->getCurrencyName()?> - <?=$_currency->getCurrencyCode()?>
            </option>
        <?endforeach;?>
        </select>
</div>
<script type="text/javascript">
function changeCurrency(sObject){
    if(sObject.value){
        setLocation('<?=$this->getSwitchUrl()?>currency/'+sObject.value+'/');
    }
}
</script>
<?endif;?>