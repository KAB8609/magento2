<div class="account-box">
<?$_orders = $this->getOrders();?>
    <div class="head">
        <h4><?=__('Recent Orders')?></h4>
        <?if( sizeof($_orders->getItems()) > 0 ):?><a href="<?=$baseUrl?>sales/order/history/"><?=__('View All')?></a><?endif;?>
    </div>
<?if( sizeof($_orders->getItems()) > 0 ):?>
    <table cellspacing="0" class="data-table" id="my-orders-table">
        <thead>
            <tr>
                <th><?=__('Order #')?></th>
                <th><?=__('Date')?></th>
                <th><?=__('Ship to')?></th>
                <th><?=__('Order Total')?></th>
                <th><?=__('Status')?></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        <?$_odd = '';?>
			<?foreach ($_orders as $_order):?>
