<? $_order = $this->getOrder() ?>
<div class="page-head button-level">
    <h3><?=__('Order #')?><?=$_order->getRealOrderId()?> - <small><em><?=$_order->getStatus($_order->getStatusId())->getFrontendLabel()?></em></small></h3>
    <?/*<a href="#"><?=__('View Invoices')?></a>*/?>
</div>
<p><strong><?=__('Order Date')?>:</strong> <?=$this->formatDate($_order->getCreatedAt(), 'long')?></p>
<div class="col2-set generic-box">
    <div class="col-1">
        <h4><?=__('Shipping Address')?></h4>
        <address><?=$_order->getShippingAddress()->getFormated(true)?></address>
    </div>
    <div class="col-2">
        <h4><?=__('Shipping Method')?><?/* | <a href="#"><?=__('Track')?></a>*/?></h4>
        <?=$_order->getShippingDescription()?>
    </div>
</div>
<div class="col2-set generic-box">
    <div class="col-1">
        <h4><?=__('Billing Address')?></h4>
        <address><?=$_order->getBillingAddress()->getFormated(true)?></address>
    </div>
    <div class="col-2">
        <h4><?=__('Billing Method')?></h4>
        <?=$this->getPaymentInfoHtml()?>
    </div>
</div>
<h4><?=__('Items Ordered')?></h4>
<table cellspacing="0" class="data-table" id="my-orders-table">
    <thead>
        <tr>
            <th><?=__('Product Name')?></th>
            <th class="a-right"><?=__('Price')?></th>
            <th class="a-center"><?=__('Qty Ordered')?></th>
            <th class="a-center"><?=__('Qty Shipped')?></th>
            <th class="a-right"><?=__('Subtotal')?></th>
        </tr>
    </thead>
    <tbody>
        <?$_items = $_order->getItemsCollection();?>
        <?$_count = $_items->count();?>
        <?$_index = 0;?>
        <?foreach ($_items as $_item):?>
            <tr <?=($_index++ > $_count ? ' class="last"' : '')?>>
            <td><?=$_item->getName()?> </td>
            <td class="a-right nowrap"><?=$_order->getOrderCurrency()->format($_item->getPrice())?> </td>
            <td class="a-center"><?=$_item->getQtyOrdered()*1?> </td>
            <td class="a-center"><?=$_item->getQtyShipped()*1?> </td>
            <td class="last a-right nowrap"><?=$_order->getOrderCurrency()->format($_item->getRowTotal())?> </td>
        <?endforeach;?>
        </tr>
    </tbody>
    <tfoot>
        <tr>
            <td colspan="4" class="a-right"><?=__('Order Subtotal')?></td>
            <td class="last a-right"><?=$_order->getOrderCurrency()->format($_order->getSubtotal())?></td>
        </tr>
        <?if ($_order->getTaxAmount()):?>
            <tr>
                <td colspan="4" class="a-right"><?=__('Tax Amount')?></td>
                <td class="last a-right"><?=$_order->getOrderCurrency()->format($_order->getTaxAmount())?></td>
            </tr>
        <?endif;?>
        <?if ($_order->getShippingAmount()):?>
            <tr>
                <td colspan="4" class="a-right"><?=__('Shipping Amount')?></td>
                <td class="last a-right"><?=$_order->getOrderCurrency()->format($_order->getShippingAmount())?></td>
            </tr>
        <?endif;?>
        <tr>
            <td colspan="4" class="a-right"><?=__('Grand Total')?></td>
            <td class="last a-right"><?=$_order->getOrderCurrency()->format($_order->getGrandTotal())?></td>
        </tr>
    </tfoot>
</table>
<?$_history = $this->getOrder()->getVisibleStatusHistory()?>
<?if (count($_history)):?>
    <div class="clear">&nbsp;</div>
    <h4><?=__('About your order')?></h4>
    <div>
        <dl>
            <?foreach ($_history as $_historyItem):?>
                <dt><?=$this->formatDate($_historyItem->getCreatedAt())?></dt>
                <dd><?=$_historyItem->getComments()?></dd>
            <?endforeach;?>
        </dl>
    </div>
<?endif;?>
