<?$_order = $this->getOrder()?>
<div class="page-head button-level">
    <h2>My Orders - Detail</h2>
    <button class="form-button"><span>Print All Invoices</span></button>
</div>
<h3>Order #<?=$_order->getRealOrderId()?></h3>
<?foreach ($this->getInvoices() as $_invoice):?>
    <div class="divider"></div>
    <div class="head">
        <h3>Invoice #<?=$_invoice->getIncrementId()?></h3>
        <a href="#">Print Invoice</a>
    </div>
    <div class="col2-set">
        <div class="col-1">
            <h4><?=__('Shipping Address')?></h4>
            <?$_shipping = $_invoice->getShippingAddress()?>
            <address><?=$_shipping->getFirstname()?> <?=$_shipping->getLastname()?><br/>
            <?=$_shipping->getCompany()?><br/>
            <?=$_shipping->getStreet()?><br/>
            <?=$_shipping->getCity()?>, <?=$_shipping->getRegion()?> <?=$_shipping->getPostcode()?><br/>
            <strong>T</strong> | <?=$_shipping->getTelephone();
            if ($_shipping->getFax()):?><br /><strong>F</strong> | <?=$_shipping->getFax()?><?endif;?></address>
        </div>
        <div class="col-2">
            <h4><?=__('Billing Address')?></h4>
            <?$_billing = $_invoice->getbillingAddress()?>
            <address><?=$_billing->getFirstname()?> <?=$_billing->getLastname()?><br/>
            <?=$_billing->getCompany()?><br/>
            <?=$_billing->getStreet()?><br/>
            <?=$_billing->getCity()?>, <?=$_billing->getRegion()?> <?=$_billing->getPostcode()?><br/>
            <strong>T</strong> | <?=$_billing->getTelephone();
            if ($_billing->getFax()):?><br /><strong>F</strong> | <?=$_billing->getFax()?><?endif;?></address>
        </div>
    </div>
    <br/>
    <div class="col2-set">
        <div class="col-1">
            <h4><?=__('Shipping Method')?></h4>
            <?=$_order->getShippingMethod()?> <?=$_order->getShippingDescription()?>
        </div>
        <div class="col-2">
            <h4><?=__('Billing Method')?></h4>
            <?$_payment = $_order->getPayment()?>
            <?=$_payment->getMethod()?>: <?=$_payment->getCcType()?> xxxx<?=$_payment->getCcLast4()?>
        </div>
    </div>
    <br/>
    <h4><?=__('Items Ordered')?></h4>
    <table cellspacing="0" class="data-table">
        <thead>
            <tr>
                <th><?=__('Product Name')?></th>
                <th class="a-right"><?=__('Price')?></th>
                <th class="a-center"><?=__('Qty')?></th>
                <th class="a-center"><?=__('Qty Shipped')?></th>
                <th class="a-right"><?=__('Subtotal')?></th>
            </tr>
        </thead>
        <tbody>
            <?$_items = $_invoice->getItemsCollection();?>
            <?$_count = $_items->count();?>
            <?$_index = 0;?>
            <?foreach ($_items as $_item):?>
                <tr<?=($_index++ > $_count ? ' class="last"' : '')?>>
                <td><?=$_item->getProductName()?></td>
                <td class="a-right nowrap"><?=$_order->getOrderCurrency()->format($_item->getPrice()*1)?></td>
                <td class="a-center"><?=$_item->getQty()*1?></td>
                <td class="a-center"><?=$_item->getQty()*1?></td>
                <td class="last a-right nowrap"><?=$_order->getOrderCurrency()->format($_item->getRowTotal()*1)?></td>
            <?endforeach;?>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td colspan="4" class="a-right"><?=__('Order Subtotal')?></td>
                <td class="last a-right"><?=$_order->getOrderCurrency()->format($_invoice->getSubtotal())?></td>
            </tr>
        </tfoot>
    </table>
    <br/>
<?endforeach;?>