<div class="account-box">
	<div class="head">
			<h4><?=__('My Recent Tags')?></h4>
			<a href="<?=$this->getAllTagsUrl()?>"><?=__('View All')?></a>
	</div>
	<ol>
		<?$iterator = 0?>
		<?foreach( $this->getCollection()->getItems() as $_item ):?>
			<li <?if($iterator % 2 == 0):?>class="odd"<?endif;?>>
				<div class="count"><?=++$iterator?></div>
				<div class="content">
					<a href="<?=$_item->getProductUrl()?>"><?=$_item->getName()?></a><br/>
					<strong><?=__('Tags')?>:</strong>
						<?$_i = 0;?>
						<?foreach( $_item->getProductTags() as $_tag ):?>
							<a href="<?=$_tag->getTaggedProductsUrl()?>"><?=$_tag->getName()?></a><?if(++$_i != sizeof($_item->getProductTags()->getItems())):?>,<?endif;?>
						<?endforeach;?>
				</div>
			<li>
		<?endforeach;?>
	</ol>
</div>