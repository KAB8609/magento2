<div class="head">
	<h2><?=__('My Product Reviews')?></h2>
</div>
<?if( $this->getCollection() && $this->getCollection()->getSize()):?>
    <?=$this->getPagerHtml()?>
        <table class="data-table box-table" cellspacing="0">
        	<col width="60">
        	<col width="100">
        	<col width="80">
        	<col>
        	<col width="100">
        	<tbody>
        	    <?foreach ($this->getCollection() as $_review):?>
                <tr class="odd">
                	<td><?=$_review->getCreatedAt()?></td>
                	<td><a href="#">Product name goes here</a></td>
                	<td>
