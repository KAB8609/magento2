<?
/**
 * Pager template
 * 
 * @see Mage_Page_Block_Html_Pager
 */
?>
<?if($this->getCollection()->getSize()):?>
<table class="pager" cellspacing="0">
    <tr>
        <td>
        <?if($this->getLastPageNum()>1):?>
            Items <strong><?=$this->getFirstNum()?></strong>
            to <strong><?=$this->getLastNum()?></strong>
            of <strong><?=$this->getTotalNum()?> total</strong>
        <?else:?>
            <strong><?=$this->getTotalNum()?> Item(s)</strong>
        <?endif;?>
        </td>
        <?if($this->getLastPageNum()>1):?>
        <td>
            <strong>Page:</strong>
            <ol>
            <?if (!$this->isFirstPage()):?>
                <li>
                    <a href="<?=$this->getPreviousPageUrl()?>"><img src="<?=$this->getSkinUrl('images/pager_arrow_left.gif')?>" alt="Previous"/></a>
                </li>
            <?endif?>
            <?foreach ($this->getPages() as $_page):?>
                <?if ($this->isPageCurrent($_page)):?>
                    <li><span class="on"><?=$_page?></span></li>
                <?else:?>
                    <li><a href="<?=$this->getPageUrl($_page)?>"><?=$_page?></a></li>
                <?endif?>
            <?endforeach;;?>
            <?if (!$this->isLastPage()):?>
                <li>
                    <a href="<?=$this->getNextPageUrl()?>"><img src="<?=$this->getSkinUrl('images/pager_arrow_right.gif')?>" alt="Next"/></a>
                </li>
            <?endif?>
            </ol>
        </td>
        <?endif;?>
        <td class="a-right">
            Show <select name="" onchange="setLocation(this.value)">
            <?foreach ($this->getAvailableLimit() as  $_key=>$_limit):?>
                <option value="<?=$this->getLimitUrl($_key)?>"<?if($this->isLimitCurrent($_key)):?> selected<?endif?>>
                    <?=$_limit?>
                </option>
            <?endforeach;?>
            </select> per page
        </td>
    </tr>
</table>
<?endif?>