<?if(!empty($collection) && $collection->getSize()):?>
    <table class="ratings-list" cellspacing="0">
        <tbody>
            <?foreach ($collection as $_rating):?>
                <?if($_rating->getSummary()):?>
                    <tr>
                        <td class="label"><strong><?=__($_rating->getRatingCode())?></strong></td>
                        <td>
                            <div class="rating-box">
                                <div class="rating" style="width:<?=ceil($_rating->getSummary())?>%;"></div>
                            </div>
                        </td>
                    </tr>
                <?endif;?>
            <?endforeach;?>
        </tbody>
    </table>
<?endif;?>