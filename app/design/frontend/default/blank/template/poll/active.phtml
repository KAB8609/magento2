<?php if(isset($poll)) : ?>
<script type="text/javascript">
//<![CDATA[
    function validatePollAnswerIsSelected()
    {
        var options = $$('input.poll_vote');

        for( i in options ) {
            if( options[i].checked == true ) {
                return true;
            }
        }
        return false;
    }
//]]>
</script>
<div class="box">
    <h2 class="box-head"><?php echo $this->__('Community Poll') ?></h2>
    <form id="pollForm" action="<?php echo $action ?>" method="post" onsubmit="return validatePollAnswerIsSelected();">
        <h3><?php echo $poll->getPollTitle(); ?></h3>
        <?php if( $poll_answers ): ?>
        <ol>
            <?php foreach( $poll_answers as $answer ): ?>
            <li>
                <input type="radio" name="vote" class="radio poll_vote" id="vote_<?php echo $answer->getId() ?>" value="<?php echo $answer->getAnswerId() ?>" />
                <label for="vote_<?php echo $answer->getId() ?>"><?php echo $answer->getAnswerTitle() ?></label>
            </li>
            <?php endforeach; ?>
        </ol>
        <?php endif; ?>
        <p class="actions"><button type="submit" class="form-button"><span><?php echo $this->__('Vote') ?></span></button></p>
    </form>
</div>
<?php endif; ?>
