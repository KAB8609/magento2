<?php
/**
 * Shoping cart sidebar
 *
 * @see Mage_Checkout_Block_Cart_Sidebar
 */
?>
<?php if($this->getCanDisplayCart()): ?>
<div class="box">
	<h3><?php echo $this->__('My Cart') ?></h3>
	<?php $_cartQty = $this->getSummaryCount() ?>
	<?php if ($_cartQty>0): ?>
		<p>
			<?php if ($_cartQty==1): ?>
			<?php echo $this->__('There is <a href="%s"><strong>1 item</strong></a> in your cart.', $this->getUrl('checkout/cart')) ?>
			<?php else: ?>
			<?php echo $this->__('There are <a href="%s"><strong>%s items</strong></a> in your cart.', $this->getUrl('checkout/cart'), $_cartQty) ?>
			<?php endif ?>
		</p>
		<p><?php echo $this->__('Cart Subtotal:') ?> <strong><?php echo Mage::helper('core')->currency($this->getSubtotal()) ?></strong></p>
	<?php endif ?>

    <?php $_items = $this->getRecentItems() ?>
    <?php if(count($_items)): ?>
        <p class="actions">
            <button class="form-button" type="button" onclick="setLocation('<?php echo $this->getUrl('checkout/onepage') ?>')"><span><?php echo $this->__('Checkout') ?></span></button>
        </p>
    <?php endif ?>
    <?php if(count($_items)): ?>
    <h4><?php echo $this->__('Recently added item(s)') ?></h4>
    <ol id="cart-sidebar">
    <?php foreach($_items as $_item): ?>
        <li>
            <a class="product-image" href="<?php echo $_item->getProductUrl() ?>"><img src="<?php echo $this->helper('catalog/image')->init($_item->getThumbnailObject(), 'thumbnail')->resize(50, 50)->setWatermarkSize('30x10'); ?>" alt="<?php echo $this->htmlEscape($_item->getProductName()) ?>" width="50" height="50" /></a>
            <div class="product-details">
                <h5><a href="<?php echo $_item->getProductUrl() ?>"><?php echo $_item->getProductName() ?></a></h5>
                <?php echo $_item->getProductDescription() ?>
                <p><strong><?php echo 1*$_item->getQty() ?></strong> x <?php echo Mage::helper('core')->currency($_item->getPrice()) ?></p>
                <a href="<?php echo $this->getRemoveItemUrl($_item) ?>" onclick="return confirm('<?php echo $this->__('Are you sure you would like to remove this item from the shopping cart?') ?>');"><img src="<?php echo $this->getSkinUrl('images/list_remove_btn.gif') ?>" alt="<?php echo $this->__('Remove Product') ?>" /></a>				
            </div>
        </li>
    <?php endforeach; ?>
    </ol>
    <script type="text/javascript">decorateList('cart-sidebar')</script>
    <?php else: ?>
    <p><?php echo $this->__('You have no items in your shopping cart.') ?></p>
    <?php endif ?>
</div>
<!-- [ends] .cart-sidebar // -->
<?php endif ?>
