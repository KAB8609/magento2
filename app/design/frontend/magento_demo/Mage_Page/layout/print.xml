<layout version="0.1.0">
    <print>
        <reference name="head">
            <block type="Mage_Page_Block_Html_Head_Css" name="css-styles-css">
                <arguments>
                    <file>css/styles.css</file>
                </arguments>
            </block>
            <block type="Mage_Page_Block_Html_Head_Css" name="css-styles-ie-css">
                <arguments>
                    <file>css/styles-ie.css</file>
                    <properties>
                        <attributes/>
                        <ie_condition>lt IE 8</ie_condition>
                    </properties>
                </arguments>
            </block>
            <block type="Mage_Page_Block_Html_Head_Css" name="css-print-css">
                <arguments>
                    <file>css/print.css</file>
                    <properties>
                        <attributes>media="print"</attributes>
                    </properties>
                </arguments>
            </block>
        </reference>
    </print>
</layout>
