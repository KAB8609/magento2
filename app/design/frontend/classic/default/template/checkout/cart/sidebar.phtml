<?php 
/**
 * Shoping cart sidebar
 *
 * @see Mage_Checkout_Block_Cart_Sidebar
 */
?>
<?php if($this->getCanDisplayCart()): ?>
<div class="box base-mini mini-cart">
    <div class="head">
        <h4><?php echo $this->__('My Cart - <a href="%s">%d item(s)</a>', $this->getUrl('checkout/cart'), $this->helper('checkout/cart')->getItemCount()) ?></h4>
        <h5><?php echo $this->__('Last added items') ?></h5>
    </div>
    <?php if($this->getItemCollection()->getSize()): ?>
    <ol id="cart-sidebar">
     <?php foreach($this->getItemCollection() as $_item): ?>
        <li>
            <div class="product-images">
                <a href="<?php echo $_item->getProduct()->getProductUrl() ?>"><img src="<?php echo $_item->getProduct()->getThumbnailUrl() ?>" alt="<?php echo $_item->getName() ?>" width="50"/></a>
            </div>
            <div class="product-details">
                <a href="<?php echo $this->getRemoveItemUrl($_item) ?>" onclick="return confirm('<?php echo $this->__('Are you sure you would like to remove this item from the shopping cart?') ?>');" class="widget-btn"><img src="<?php echo $this->getSkinUrl('images/list_remove_btn.gif') ?>" alt="<?php echo $this->__('Remove Product') ?>"/></a>
                <a href="<?php echo $this->helper('checkout')->getQuoteItemProductUrl($_item) ?>"><?php echo $_item->getName() ?></a>
                <br/><strong><?php echo $this->__('Qty') ?>: <?php echo 1*$_item->getQty() ?></strong>
            </div>
        </li>
    <?php endforeach; ?>
    </ol>
    <script type="text/javascript">decorateList('cart-sidebar')</script>
    <?php else: ?>
    <div class="content"><p><?php echo $this->__('You have no items in your cart.') ?></p></div>
    <?php endif ?>
    <div class="actions">
        <a href="<?php echo $this->getUrl('checkout/cart') ?>" class="left"><?php echo $this->__('Go to Cart') ?></a>
    <?php if($this->getItemCollection()->getSize()): ?>
        <button class="form-button" type="button" onclick="setLocation('<?php echo $this->getUrl('checkout/onepage') ?>')"><span><?php echo $this->__('Checkout') ?></span></button><br/>
     <?php endif ?>
    </div>
</div>
<!-- [ends] .cart-sidebar // -->
<?php endif ?>
