<script type="text/javascript">
var Shipping = Class.create();
Shipping.prototype = {
    initialize: function(){
        this.onShippingLoad = this.showShipping.bindAsEventListener(this);
    },

    getShipping: function(){
        $('shipping-method-please-wait').show();
        request = new Ajax.Request('<?php echo $this->helper('shipping')->getTrackingAjaxUrl() ?>',{
            method:     'post',
            parameters: {order_id: <?php echo $_order->getId() ?>},
            onSuccess:  this.onShippingLoad,
            onFailure:  function (){$('shipping').update("<?php echo $this->__('Can\'t get shipping information.') ?>")},
            onComplete: function (transport){$('shipping-method-please-wait').hide()}
        });
    },
    showShipping: function (transport){
        if (transport && transport.responseText){
            $('shipping').update(transport.responseText)
        } else {
            $('shipping').update('<?php echo $this->__('Error in response.') ?>');
        }
    },
}
var shipping = new Shipping();
</script>
