<layout version="0.1.0">
    <default>
        <reference name="top.links">
            <block type="Mage_Customer_Block_Account_Link" name="account_links">
                <action method="addAccountLink">
                    <target>top.links</target>
                    <position>10</position>
                </action>
                <action method="addAuthLink">
                    <target>account.links</target>
                    <position>100</position>
                </action>
                <action method="addRegisterLink" translate="text_before">
                    <target>account.links</target>
                    <position>100</position>
                    <text_before> or </text_before>
                    <text_after>.</text_after>
                </action>
            </block>
        </reference>
        <reference name="account.links">
            <action method="removeLinkByUrl" ifconfig="enterprise_invitation/general/registration_required_invitation">
                <url helper="Mage_Customer_Helper_Data::getRegisterUrl"/>
            </action>
        </reference>
    </default>
</layout>
