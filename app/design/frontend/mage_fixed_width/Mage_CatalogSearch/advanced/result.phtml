<div class="page-title">
    <h1><?php echo $this->__('Catalog Advanced Search') ?></h1>
</div>
<?php echo $this->getMessagesBlock()->getGroupedHtml() ?>
<?php if($this->getResultCount()): ?>
    <p>
        <?php echo $this->helper('Mage_CatalogSearch_Helper_Data')
            ->__('<strong>%d item(s)</strong> were found using the following search criteria', $this->getResultCount()); ?>
    </p>
<?php else: ?>
<ul class="messages">
    <li class="error-msg">
        <ul>
            <li>
               <?php echo $this->helper('Mage_CatalogSearch_Helper_Data')->__('No items were found using the following search criteria.');?> <a href="<?php echo $this->getFormUrl(); ?>"><?php echo $this->helper('Mage_CatalogSearch_Helper_Data')->__('Modify your search'); ?></a>
            </li>
        </ul>
    </li>
</ul>
<?php endif; ?>

<?php $searchCriterias=$this->getSearchCriterias(); ?>
<div class="search-summary">
    <?php foreach (array('left', 'right') as $side): ?>
        <?php if(@$searchCriterias[$side]): ?>
            <ul>
                <?php foreach($searchCriterias[$side] as $criteria): ?>
                    <li><strong><?php echo $this->escapeHtml($this->helper('Mage_Catalog_Helper_Data')->__($criteria['name'])); ?>:</strong> <?php echo $this->escapeHtml($criteria['value']); ?></li>
                <?php endforeach; ?>
            </ul>
        <?php endif; ?>
    <?php endforeach; ?>
</div>
<?php if($this->getResultCount()): ?>
<ul class="messages">
    <li class="note-msg">
        <ul>
            <li>
                <?php echo $this->helper('Mage_CatalogSearch_Helper_Data')->__("Don't see what you're looking for?"); ?>
                <a href="<?php echo $this->getFormUrl(); ?>"><?php echo $this->helper('Mage_CatalogSearch_Helper_Data')->__('Modify your search'); ?></a>
            </li>
        </ul>
    </li>
</ul>
<?php endif; ?>
<?php if($this->getResultCount()): ?>
    <div class="results-view"><?php echo $this->getProductListHtml() ?></div>
<?php endif; ?>
