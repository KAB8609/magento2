/* @var $this Enterprise_Cms_Block_Widget_Pagination */
?>
<div class="pagination">
<?php if ($this->canShowSequance()):?>
    <?php if ($this->canShowPrevious()):?>
    <a class="previous" href="<?php echo $this->getPreviousNode()->getUrl()?>"><?php echo $this->getNodeLabel($this->getPreviousNode(), '&laquo;&laquo;')?></a>
    <?php else:?>
    <span class="previous">&laquo;&laquo;</span>
    <?php endif;?>
<?php endif;?>

<?php if ($this->canShowOuter() && $this->canShowFirst()):?>
    <a class="first" title="<?php echo $this->htmlEscape($this->getFirstNode()->getLabel())?>" href="<?php echo $this->getFirstNode()->getUrl()?>"><?php echo $this->getNodeLabel($this->getFirstNode())?></a> ...
<?php endif;?>

<?php if ($this->canShowPreviousJump()):?>
    <a class="previous_jump" title="<?php echo $this->htmlEscape($this->getPreviousJumpNode()->getLabel())?>" href="<?php echo $this->getPreviousJumpNode()->getUrl()?>"><?php echo $this->getNodeLabel($this->getPreviousJumpNode())?></a> ...
<?php endif;?>

<?php foreach ($this->getNodesInRange() as $node):?>
    <?php if ($node->getIsCurrent()):?>
        <span class="current" title="<?php echo $this->htmlEscape($node->getLabel())?>"><?php echo $this->getNodeLabel($node)?></span>
    <?php else: ?>
        <a title="<?php echo $this->htmlEscape($node->getLabel())?>" href="<?php echo $node->getUrl()?>"><?php echo $this->getNodeLabel($node)?></a>
    <?php endif; ?>
<?php endforeach;?>

<?php if ($this->canShowNextJump()):?>
    ... <a class="next_jump" title="<?php echo $this->htmlEscape($this->getNextJumpNode()->getLabel())?>" href="<?php echo $this->getNextJumpNode()->getUrl()?>"><?php echo $this->getNodeLabel($this->getNextJumpNode())?></a>
<?php endif;?>

<?php if ($this->canShowOuter() && $this->canShowLast()):?>
 ... <a  class="last" title="<?php echo $this->htmlEscape($this->getLastNode()->getLabel())?>" href="<?php echo $this->getLastNode()->getUrl()?>"><?php echo $this->getNodeLabel($this->getLastNode())?></a>
<?php endif;?>

<?php if ($this->canShowSequance()):?>
    <?php if ($this->canShowNext()):?>
    <a class="next" href="<?php echo $this->getNextNode()->getUrl()?>"><?php echo $this->getNodeLabel($this->getNode(), '&raquo;&raquo;')?></a>
    <?php else:?>
    <span class="next">&raquo;&raquo;</span>
    <?php endif;?>
<?php endif;?>
</div>
