<layout version="0.1.0">
    <default>
        <reference name="head">
            <action method="addCss"><file>css/styles.css</file></action>
            <action method="addCss"><file>css/styles-ie.css</file><params/><if>lt IE 8</if></action>
            <action method="addCss"><file>css/print.css</file><params>media="print"</params></action>
        </reference>
    </default>
    <print>
        <reference name="head">
            <action method="addCss"><file>css/styles.css</file></action>
            <action method="addJs"><file>css/styles-ie.css</file><params/><if>lt IE 8</if></action>
            <action method="addCss"><file>css/print.css</file><params>media="print"</params></action>
        </reference>
    </print>

    <restriction_index_stub>
        <reference name="head">
            <action method="addCss"><file>css/styles.css</file></action>
            <action method="addCss"><file>css/styles-ie.css</file><params/><if>lt IE 8</if></action>
            <action method="addCss"><file>css/print.css</file><params>media="print"</params></action>
        </reference>
    </restriction_index_stub>
</layout>
