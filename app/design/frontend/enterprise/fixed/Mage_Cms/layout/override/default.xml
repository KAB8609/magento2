<layout version="0.1.0">
    <default>
        <reference name="header">
            <block type="Mage_Cms_Block_Block" name="header.callout" as="headerCallout">
                <action method="setBlockId">
                    <block_id>header_callout</block_id>
                </action>
            </block>
        </reference>
        <reference name="footer">
            <block type="Mage_Cms_Block_Block" name="cms_footer_links" as="cms_footer_links" after="footer_links">
                <action method="setBlockId">
                    <block_id>footer_links</block_id>
                </action>
            </block>
        </reference>
        <reference name="head">
            <action method="addCss">
                <file>Mage_Cms::widgets.css</file>
            </action>
        </reference>
    </default>
</layout>
