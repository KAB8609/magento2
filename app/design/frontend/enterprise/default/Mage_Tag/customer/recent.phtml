<div class="tags">
    <h2 class="sub-title"><?php echo $this->__('My Recent Tags') ?> <span class="separator">|</span> <a href="<?php echo $this->getAllTagsUrl() ?>"><?php echo $this->__('View All Tags') ?></a></h2>
    <ol id="my_recent_tags">
        <?php $iterator = 0; ?>
        <?php foreach( $this->getCollection()->getItems() as $_item ): ?>
            <li class="item">
                <span class="number"><?php echo ++$iterator ?></span>
                <div class="details">
                    <h3 class="product-name"><a href="<?php echo $_item->getProductUrl() ?>"><?php echo $this->escapeHtml($_item->getName()) ?></a></h3>
                    <p><?php echo $this->__('Tags:') ?> </p>
                        <?php $_i = 0; ?>
                        <?php foreach( $_item->getProductTags() as $_tag ): ?>
                            <a href="<?php echo $_tag->getViewTagUrl() ?>"><?php echo $this->escapeHtml($_tag->getName()) ?></a><?php if(++$_i != sizeof($_item->getProductTags()->getItems())): ?>,<?php endif; ?>
                        <?php endforeach; ?>
                </div>
            </li>
        <?php endforeach; ?>
    </ol>
    <script type="text/javascript">(function($) {$.mage.decorator.list('#my_recent_tags', false);})(jQuery);</script>
</div>
