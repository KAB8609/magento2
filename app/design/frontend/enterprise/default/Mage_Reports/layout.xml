<layout version="0.1.0">
    <default>
        <!-- Mage_Reports -->
        <reference name="right">
            <block type="Mage_Reports_Block_Product_Viewed" name="right.reports.product.viewed" template="product_viewed.phtml" />
            <block type="Mage_Reports_Block_Product_Compared" name="right.reports.product.compared" template="product_compared.phtml" />
        </reference>
        <reference name="head">
            <action method="addCss"><file>Mage_Reports::widgets.css</file></action>
        </reference>
    </default>

    <print>
        <reference name="head">
            <action method="addCss"><file>Mage_Reports::widgets.css</file></action>
        </reference>
    </print>

    <catalog_category_layered_nochildren translate="label">
        <label>Catalog Category (Without Subcategories)</label>
        <remove name="right.reports.product.viewed" />
        <reference name="right">
            <block type="Mage_Reports_Block_Product_Viewed" before="right.permanent.callout" name="left.reports.product.viewed" template="product_viewed.phtml" />
        </reference>
    </catalog_category_layered_nochildren>
</layout>
