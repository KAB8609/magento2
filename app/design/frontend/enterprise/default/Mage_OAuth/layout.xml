<layout version="1.0.0.0">
    <!-- Authorization -->
    <!--Handle for simple pages-->
    <oauth_authorize_head_simple>
        <remove name="js_cookie" />
        <reference name="head">
            <action method="setTemplate">
                <template>oauth/authorize/head-simple.phtml</template>
            </action>
            <block type="Mage_OAuth_Block_Authorize_Style" name="oauth.authorize.style" template="authorize/simple-css.phtml" />
        </reference>
    </oauth_authorize_head_simple>

    <oauth_authorize_index translate="label" type="page" parent="default">
        <label>OAuth authorization for customer</label>
        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <block type="Mage_OAuth_Block_Authorize" name="oauth.authorize.form" template="authorize/form/login.phtml"/>
            <block type="Mage_OAuth_Block_Authorize_Button" name="oauth.authorize.button" template="authorize/button.phtml" />
        </reference>
        <remove name="account.links"/>
        <remove name="top.links"/>
        <remove name="checkout.links"/>
        <remove name="welcome"/>
        <remove name="top.search"/>
        <remove name="top.menu"/>
        <remove name="cart_sidebar"/>
        <remove name="footer"/>
    </oauth_authorize_index>

    <oauth_authorize_simple translate="label" type="page" parent="default">
        <update handle="oauth_authorize_index"/>
        <update handle="oauth_authorize_head_simple"/>
        <reference name="root">
            <action method="setTemplate">
                <template>page/empty.phtml</template>
            </action>
        </reference>
        <remove name="header"/>
        <label>OAuth authorization Pop Up for customer</label>
        <reference name="oauth.authorize.form">
            <action method="setTemplate">
                <template>oauth/authorize/form/login-simple.phtml</template>
            </action>
        </reference>
        <reference name="oauth.authorize.button">
            <action method="setTemplate">
                <template>oauth/authorize/button-simple.phtml</template>
            </action>
        </reference>
    </oauth_authorize_simple>
    <!-- EOF Authorization -->

    <!-- Confirm Authorization -->
    <oauth_authorize_confirm translate="label" type="page" parent="default">
        <label>Confirm OAuth token authorization</label>
        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <block type="Mage_OAuth_Block_Authorize_Button" name="oauth.authorize.confirm" template="authorize/confirm.phtml"/>
        </reference>
        <remove name="account.links"/>
        <remove name="top.links"/>
        <remove name="checkout.links"/>
        <remove name="welcome"/>
        <remove name="top.search"/>
        <remove name="top.menu"/>
        <remove name="cart_sidebar"/>
        <remove name="footer"/>
    </oauth_authorize_confirm>

    <oauth_authorize_confirmsimple translate="label">
        <update handle="oauth_authorize_confirm"/>
        <update handle="oauth_authorize_head_simple"/>
        <reference name="root">
            <action method="setTemplate">
                <template>page/empty.phtml</template>
            </action>
        </reference>
        <remove name="header"/>
        <reference name="oauth.authorize.confirm">
            <action method="setTemplate">
                <template>oauth/authorize/confirm-simple.phtml</template>
            </action>
        </reference>
    </oauth_authorize_confirmsimple>
    <!-- EOF Confirm Authorization -->

    <!-- Reject Authorization -->
    <oauth_authorize_reject translate="label" type="page" parent="default">
        <label>Reject OAuth token authorization</label>
        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <block type="Mage_OAuth_Block_Authorize_Button" name="oauth.authorize.reject" template="authorize/reject.phtml"/>
        </reference>
        <remove name="account.links"/>
        <remove name="top.links"/>
        <remove name="checkout.links"/>
        <remove name="welcome"/>
        <remove name="top.search"/>
        <remove name="top.menu"/>
        <remove name="cart_sidebar"/>
        <remove name="footer"/>
    </oauth_authorize_reject>

    <oauth_authorize_rejectsimple translate="label" type="page" parent="default">
        <update handle="oauth_authorize_reject"/>
        <update handle="oauth_authorize_head_simple"/>
        <reference name="root">
            <action method="setTemplate">
                <template>Mage_Page::empty.phtml</template>
            </action>
        </reference>
        <remove name="header"/>
        <reference name="oauth.authorize.reject">
            <action method="setTemplate">
                <template>oauth/authorize/reject-simple.phtml</template>
            </action>
        </reference>
    </oauth_authorize_rejectsimple>
    <!-- EOF Reject Authorization -->

    <!-- My Applications-->
    <customer_account>
        <reference name="customer_account_navigation">
            <action method="addLink" translate="label" module="Mage_Oauth">
                <name>OAuth Customer Tokens</name>
                <path>oauth/customer_token</path>
                <label>My Applications</label>
            </action>
        </reference>
    </customer_account>

    <oauth_customer_token_index translate="label" type="page" parent="default">
        <label>Customer My Account My OAuth Applications</label>
        <update handle="customer_account"/>
        <reference name="my.account.wrapper">
            <block type="Mage_OAuth_Block_Customer_Token_List" name="oauth_customer_token_list" template="customer/token/list.phtml"/>
        </reference>
    </oauth_customer_token_index>
    <!-- EOF My Applications-->
</layout>
