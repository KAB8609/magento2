        <h1><?php if ($this->helper('Mage_Customer_Helper_Data')->isRegistrationAllowed()): ?>
            <?php echo $this->__('Login or Create an Account') ?>
            <?php else: ?>
            <?php echo $this->__('Login'); ?>
            <?php endif; ?></h1>
    </div>
    <?php echo $this->getMessagesBlock()->getGroupedHtml() ?>
