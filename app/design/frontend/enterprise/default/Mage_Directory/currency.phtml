/**
 * Currency switcher
 *
 * @see Mage_Directory_Block_Currency
 */
?>
<?php if ($this->getCurrencyCount() > 1): ?>
<?php $currencies = $this->getCurrencies(); ?>
<?php $currentCurrencyCode = $this->getCurrentCurrencyCode(); ?>
<div class="switch switcher-currency">
    <label><?php echo $this->__('Currency') ?>:</label>
    <div class="switch-wrapper" id="currencySelect">
        <strong class="current language-<?php echo $this->escapeHtml(Mage::app()->getStore()->getCode()) ?>">
            <?php echo $this->escapeHtml($currentCurrencyCode) ?> - <?php echo @$this->escapeHtml($currencies[$currentCurrencyCode]) ?>
        </strong>
        <span class="switcher-holder">(<span onclick="popUpMenu(this);" class="switcher"><?php echo $this->__('Change')?></span>)</span>
        <ul style="display:none" id="popId-currencySelect">
            <li class="current currency-<?php echo $this->escapeHtml(Mage::app()->getStore()->getCode()) ?>">
                <span><?php echo $this->escapeHtml($currentCurrencyCode) ?>
                <?php if (isset($currencies[$currentCurrencyCode])): ?>
                    - <?php echo $this->escapeHtml($currencies[$currentCurrencyCode]) ?></span>
                <?php endif;?>
            </li>
            <?php foreach ($currencies as $_code => $_name): ?>
                <?php if($_code != $currentCurrencyCode): ?>
                    <li class="currency-<?php echo $_code ?>">
                        <a href="<?php echo $this->getSwitchCurrencyUrl($_code) ?>"><?php echo $_code ?> - <?php echo $_name ?></a>
                    </li>
                <?php endif; ?>
            <?php endforeach; ?>
        </ul>
    </div>
</div>
<?php endif; ?>
