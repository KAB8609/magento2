<script type="text/javascript">
//<![CDATA[
    i=0;
    var recipCount  = 1;
    var maxRecip    = <?php echo $this->getMaxRecipients() ?>;
    function remove_recipient(i){
        $('recipients_name'+i).up(2).remove();
        recipCount--;
        if(recipCount<maxRecip && maxRecip != 0) {
            $('add_recipient_button').show();
            $('max_recipient_message').hide();
        }
        return false;
    }

    function add_recipient(){
        div = $('recipients_options');
        var li_mail = Element.extend(document.createElement("ul"));
        li_mail.addClassName('add-row');
        li_mail.addClassName('form-list');
        li_mail.innerHTML = '<li class="btn-remove"><a href="delete_email" onclick="remove_recipient('+i+'); return false"><img src="<?php echo $this->getSkinUrl('images/list_remove_btn.gif') ?>" alt="<?php echo $this->__('Remove Email') ?>" title="<?php echo $this->__('Remove Email') ?>" /><\/a><\/li>'
        li_mail.innerHTML += '<li><label for="recipients_name'+i+'"><span class="required">*<\/span> <?php echo $this->__('Name:') ?><\/label><div class="input-box"><input name="recipients[name][]" type="text" class="input-text required-entry" id="recipients_name'+i+'" /><\/div><\/li>';
        li_mail.innerHTML += '<li><label for="recipients_email'+i+'"><span class="required">*<\/span> <?php echo $this->__('Email Address:') ?><\/label><div class="input-box"><input name="recipients[email][]" value="" title="<?php echo $this->__('Email Address') ?>" id="recipients_email'+i+'" type="text" class="input-text required-entry validate-email" /><\/div><\/li>';
        i++;
        recipCount++;
        if(recipCount>=maxRecip && maxRecip != 0) {
            $('add_recipient_button').hide();
            $('max_recipient_message').show();
        }

        div.appendChild(li_mail);
    }
//]]>
</script>

<div class="page-title">
    <h2><?php echo $this->__('Email to a Friend') ?></h2>
</div>
<?php echo $this->getMessagesBlock()->getGroupedHtml() ?>
<form action="<?php echo $this->getUrl('*/*/sendmail', array('id'=>$this->getProductId(), 'cat_id'=>$this->getCategoryId())) ?>" method="post" id="product_sendtofriend_form">
    <div class="fieldset">
        <h3><?php echo $this->__('Sender:') ?></h3>
        <ul class="form-list group-select" id="sender_options">
            <li>
                <label for="sender_name"><span class="required">*</span> <?php echo $this->__('Name:') ?></label>
                <div class="input-box">
                    <input name="sender[name]" value="<?php echo $this->htmlEscape($this->getUserName()) ?>" title="<?php echo $this->__('Name') ?>" id="sender_name" type="text" class="input-text required-entry" />
                </div>
            </li>
            <li>
               <label for="sender_email"><span class="required">*</span> <?php echo $this->__('Email:') ?></label>
                <div class="input-box">
                   <input name="sender[email]" value="<?php echo $this->htmlEscape($this->getEmail()) ?>" title="<?php echo $this->__('Email Address') ?>" id="sender_email" type="text" class="input-text required-entry validate-email" />
                </div>
            </li>
            <li>
                <label for="sender_message"><span class="required">*</span> <?php echo $this->__('Message:') ?></label>
                <div class="input-box">
                    <textarea name="sender[message]" class="input-text required-entry" id="sender_message" cols="3" rows="3" style="height:100px;"><?php echo $this->htmlEscape($this->getFormData()->getData('sender/message'))?></textarea>
                </div>
            </li>
        </ul>
    </div>
    <div class="fieldset">
        <h3><?php echo $this->__('Recipient:') ?></h3>
        <ul class="form-list group-select">
            <li>
                <label for="recipients_name"><span class="required">*</span> <?php echo $this->__('Name:') ?></label>
                <div class="input-box">
                    <input name="recipients[name][]" type="text" class="input-text required-entry" id="recipients_name" />
                </div>
            </li>
            <li>
                <label for="recipients_email"><span class="required">*</span> <?php echo $this->__('Email Address:') ?></label>
                <div class="input-box">
                    <input name="recipients[email][]" value="" title="<?php echo $this->__('Email Address') ?>" id="recipients_email" type="text" class="input-text required-entry validate-email" />
                </div>
            </li>
        </ul>
        <div id="recipients_options">
        </div>
        <ul class="form-list">
            <li class="buttons-set">
                <span class="label">
                    <span id="max_recipient_message" style="display:none;">
                        <?php if ($this->getMaxRecipients()): ?>
                          <span><?php echo $this->__('Maximum %d email addresses allowed.', $this->getMaxRecipients()) ?></span>
                        <?php endif; ?>
                    </span>                
                </span>
                <button type="submit" class="button"><span><?php echo $this->__('Send email') ?></span></button>
                <?php if (1 < $this->getMaxRecipients()): ?>
