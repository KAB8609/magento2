<?php if ($this->canShow() && $this->getEvents() && count($this->getEvents())): ?>
    <h3><?php echo Mage::helper('enterprise_customerbalance')->__('Balance History'); ?></h3>
    <table id="customerbalance-history" class="data-table">
        <col />
        <col width="100" />
        <col width="100" />
        <col width="150" />
        <tr>
            <th>
                <?php echo Mage::helper('enterprise_customerbalance')->__('Action'); ?>
            </th>
            <th>
                <?php echo Mage::helper('enterprise_customerbalance')->__('Balance Change'); ?>
            </th>
            <th>
                <?php echo Mage::helper('enterprise_customerbalance')->__('Balance'); ?>
            </th>
            <th>
                <?php echo Mage::helper('enterprise_customerbalance')->__('Date'); ?>
            </th>
        </tr>
        <?php foreach ($this->getEvents() as $event): ?>
        <tr>
            <td>
                <?php echo $this->getActionLabel($event->getAction()); ?>
            </td>
            <td>
                <?php echo Mage::helper('core')->currency($event->getBalanceDelta()); ?>
            </td>
            <td>
                <?php echo Mage::helper('core')->currency($event->getBalanceAmount()); ?>
            </td>
            <td>
                <?php echo Mage::helper('core')->formatDate($event->getUpdatedAt(), 'short', true); ?>
            </td>
        </tr>
        <?php endforeach; ?>
    </table>
    <script type="text/javascript">decorateTable('customerbalance-history')</script>
	<br />
<?php endif; ?>