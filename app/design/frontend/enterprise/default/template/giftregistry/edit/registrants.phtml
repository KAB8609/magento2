<script type="text/javascript">
//<![CDATA[

    liIndex=0;
    var regCount  = 0;
    var maxRegistrant = '<?php echo $this->getMaxRegistrant() ?>';
    var myTemplate = new Template($('template_registrant').innerHTML, /(^|.|\r|\n)({{(\w+)}})/);
    $('template_registrant').remove();
    function removeRegistrant(liIndex){
        $('registrant:firstname'+liIndex).up(2).remove();
        regCount--;
        if(regCount<maxRegistrant && maxRegistrant != 0) {
            $('add_registrant_button').show();
            $('max_registrant_message').hide();
        }
        return false;
    }
    function addRegistrant(){
        ul = $('registrant_options');
        var li_mail = Element.extend(document.createElement("li"));
        // skipping first row
        if (liIndex != 0) {
            li_mail.addClassName('add-row');
        }
        li_mail.addClassName('fields');

        date_template = myTemplate.evaluate({index: liIndex});

        li_mail.innerHTML = date_template;

        liIndex++;
        regCount++;
        if(regCount>=maxRegistrant && maxRegistrant != 0) {
            $('add_registrant_button').hide();
            $('max_registrant_message').show();
        }

        ul.appendChild(li_mail);

        // skipping first row
        if (liIndex == (0 + 1)) {
            $('btn-remove0').hide();
        }
    }
//]]>
</script>
    <div class="fieldset">
        <h2 class="legend"><?php echo $this->__('Registrants Information') ?></h2>
        <ul class="form-list" id="registrant_options">
        </ul>
    </div>

    <div class="buttons-set form-buttons">
        <p class="back-link">
            <span id="max_registrant_message" style="display:none;">
                <?php if ($this->getMaxRegistrant()): ?>
                    <?php echo $this->__('Maximum %d email addresses allowed.', $this->getMaxRegistrant()) ?>
                <?php endif; ?>
            </span>&nbsp;
        </p>
        <?php if (1 < $this->getMaxRegistrant()): ?>
            <button type="button" id="add_registrant_button" onclick="addRegistrant();" class="button"><span><span><?php echo $this->__('Add Registrant') ?></span></span></button>
        <?php endif; ?>
    </div>

