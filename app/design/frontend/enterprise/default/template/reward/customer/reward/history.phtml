<?php if ($this->canShow()): ?>
    <?php echo $this->getPagerHtml() ?>
    <h2 class="table-caption"><?php echo Mage::helper('enterprise_reward')->__('Balance History'); ?></h2>
    <table id="reward-history" class="data-table">
        <col width="1" />
        <col width="1" />
        <col width="1" />
        <col />
        <col width="1" />
        <thead>
            <tr>
                <th><?php echo Mage::helper('enterprise_reward')->__('Date'); ?></th>
                <th><?php echo Mage::helper('enterprise_reward')->__('Points'); ?></th>
                <th><span class="nobr"><?php echo Mage::helper('enterprise_reward')->__('Points Balance'); ?></span></th>
                <th><?php echo Mage::helper('enterprise_reward')->__('Amount'); ?></th>
                <th><?php echo Mage::helper('enterprise_reward')->__('Message'); ?></th>
                <th><span class="nobr"><?php echo Mage::helper('enterprise_reward')->__('Expiration Date'); ?></span></th>
            </tr>
        </thead>
        <tbody>
            <?php foreach($this->getRewardHistory() as $item): ?>
            <tr>
                <td><span class="nobr"><?php echo Mage::helper('core')->formatDate($item->getCreatedAt(), 'short', true); ?></span></td>
                <td><?php echo Mage::helper('enterprise_reward')->formatPointsDelta($item->getPointsDelta()); ?></td>
                <td><?php echo $item->getPointsBalance(); ?></td>
                <td><?php echo Mage::helper('core')->currency($item->getCurrencyAmount()); ?></td>
                <td><?php echo $this->htmlEscape($item->getMessage()); ?></td>
                <td><span class="nobr"><?php echo Mage::helper('core')->formatDate($item->getExpirationDate(), 'short', true); ?></span></td>
            </tr>
            <?php endforeach; ?>
        </tbody>
    </table>
    <script type="text/javascript">decorateTable('reward-history')</script>
    <?php echo $this->getPagerHtml() ?>
<?php endif; ?>
