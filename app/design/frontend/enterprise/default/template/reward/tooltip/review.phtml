/**
 * @see Enterprise_Reward_Block_Tooltip
 */
?>
<?php
    $_action = Enterprise_Reward_Model_Reward::REWARD_ACTION_REVIEW;
?>
<?php if ($this->canShow($_action)): ?>
<?php
    $_currentBalance = $this->getCurrentBalance();
    $_currencyAmount = $this->getCurrencyAmount($_action);
    $_points = $this->getRewardPoints($_action);
    $_limit = $this->getActionRewardLimit($_action);
?>
<div class="clearer"></div>
<div class="reward-message reward-review">
    <div class="reward">
        <?php if ($_currencyAmount): ?>
            <?php echo Mage::helper('enterprise_reward')->__("Submit a Review now and once it is approved by moderator, you will get <strong><span>%s</span> Reward Points</strong> (%s).", $_points, $this->getFormattedAmount($_currencyAmount)) ?>
        <?php else: ?>
            <?php echo Mage::helper('enterprise_reward')->__("Submit a Review now and once it is approved by moderator, you will get <strong><span>%s</span> Reward Points</strong>.", $_points) ?>
        <?php endif; ?>
        <p class="balance">
            <?php if ($_currentBalance): ?>
                <?php echo Mage::helper('enterprise_reward')->__("Your current balance is <span>%s</span> points.", $_currentBalance) ?>
            <?php endif; ?>
            <a href="<?php echo $this->getLandingPageUrl() ?>"><?php echo Mage::helper('enterprise_reward')->__("Learn more") ?></a>
        </p>
        <?php if ($_limit): ?>
            <p class="limit"><?php echo Mage::helper('enterprise_reward')->__("Up to <span>%s</span> Reviews rewarded.", $_limit) ?></p>
        <?php endif; ?>
    </div>
</div>
<?php endif; ?>
