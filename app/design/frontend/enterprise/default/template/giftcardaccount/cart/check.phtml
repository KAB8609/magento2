<?php if ($_card = $this->getCard()): ?>
    <?php if ($_card->getId()): ?>
        <h1><?php echo Mage::helper('enterprise_giftcardaccount')->__("Gift Card '%s'.", $_card->getCode()); ?></h1>
        <?php echo Mage::helper('enterprise_giftcardaccount')->__('Current Balance'); ?>:
        <b><?php echo Mage::helper('core')->currency($_card->getBalance()); ?></b>
        <br />

        <?php if ($_card->getDateExpires()): ?>
            <?php echo Mage::helper('enterprise_giftcardaccount')->__('Expiration Date'); ?>:
            <b><?php echo $this->formatDate($_card->getDateExpires(), 'short'); ?></b>
            <br />
        <?php endif; ?>
    <?php else: ?>
        <?php echo Mage::helper('enterprise_giftcardaccount')->__('Specified Gift Card was not found.'); ?>
    <?php endif; ?>
<?php else: ?>
    <form method="post" id="codeForm">
        <?php echo Mage::helper('enterprise_giftcardaccount')->__('Enter Gift Card code'); ?>:
        <input type="text" class="input-text required-entry" name="code"><br />
        <input type="button" value="<?php echo Mage::helper('enterprise_giftcardaccount')->__('Check'); ?>" onclick="cForm.submit()">
    </form>
    <script>
    var cForm = new VarienForm('codeForm');
    </script>
<?php endif; ?>