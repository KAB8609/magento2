<?php if ($this->isFullyPaidAfterApplication()): ?>
    // save original init and validate Payment methods
    if (!Payment.prototype.beforeGigtCardInit) {
        Payment.prototype.beforeGigtCardInit = Payment.prototype.init;
    }
    if (!Payment.prototype.beforeGigtCardValidate) {
        Payment.prototype.beforeGigtCardValidate = Payment.prototype.validate;
    }

    Payment.prototype.validate = function() {
        return true;
    };

    Payment.prototype.init = function () {
        var elements = Form.getElements(this.form);
        var method = null;
        for (var i=0; i < elements.length; i++) {
            if (elements[i].name == 'payment[method]' && elements[i].value == 'free') {
                elements[i].checked = true;
                method = 'free';
            } else {
                elements[i].disabled = true;
                elements[i].parentNode.hide();
            }
        }
        if (method) this.switchMethod(method);
    };
<?php else: ?>
// restore saved original init and validate Payment methods
if (Payment.prototype.beforeGigtCardInit) {
    Payment.prototype.init = Payment.prototype.beforeGigtCardInit;
    delete Payment.prototype.beforeGigtCardInit;
}
if (Payment.prototype.beforeGigtCardValidate) {
    Payment.prototype.validate = Payment.prototype.beforeGigtCardValidate;
    delete Payment.prototype.beforeGigtCardValidate;
}
<?php endif; ?>
