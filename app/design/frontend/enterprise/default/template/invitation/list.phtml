<div class="page-title">
	<h2><?php echo Mage::helper('invitation')->__('My Invitations'); ?></h2>
</div>
<?php $_invitations = $this->getInvitationList(); ?>

<?php
    $invitations = $_invitations->getData();
    if (!empty($invitations)) :
?>

<table class="data-table" cellpadding="0">
    <col />
    <col width="100" />
    <thead>
        <tr>
            <th>
                <?php echo Mage::helper('invitation')->__('Email'); ?>
            </th>
            <th>
                <?php echo Mage::helper('invitation')->__('Status'); ?>
            </th>
        </tr>
    </thead>
    <tbody>

    <?php foreach ($_invitations as $_invitation): ?>

        <tr>
            <td>
                <?php echo $this->htmlEscape($_invitation->getEmail()); ?>
            </td>
            <td>
                <?php echo $this->helper('invitation')->getInvitationStatusText($_invitation);?>
            </td>
        </tr>
    <?php endforeach; ?>
    </tbody>
</table>
<?php
    else :
?>
<div id="cookie-notice">
    <ul class="messages"><li class="notice-msg">
	    <ul><li><?php echo Mage::helper('invitation')->__('You have not sent invitations yet'); ?></li></ul>
    </li></ul>
</div>
<?php
    endif;
?>
<div class="buttons-set">
    <a href="<?php echo $this->getBackUrl() ?>" class="back-link">&laquo; <?php echo $this->__('Back') ?></a>
</div>