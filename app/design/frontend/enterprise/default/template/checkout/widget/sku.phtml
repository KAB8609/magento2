/**
 * Order by SKU widget template
 *
 * @see Enterprise_Checkout_Block_Widget_Sku
 */
$uniqueSuffix = '_' . $this->helper('core')->getRandomString(20);
$skuFormId = "skuForm{$uniqueSuffix}";
$qtyValidationClasses = 'validate-number validate-greater-than-zero'
    . ' validate-number-range number-range-0.0001-99999999.9999';
?>
<div class="widget widget-sku">
    <div class="block block-sku">
        <?php if (!$this->getIsTitleHidden()): ?>
        <div class="block-title">
            <strong><span><?php echo $this->__('Order by SKU') ?></span></strong>
        </div>
        <?php endif ?>
        <form id="<?php echo $skuFormId; ?>" action="<?php echo $this->getFormAction(); ?>" method="post" <?php if ($this->getIsMultipart()): ?> enctype="multipart/form-data"<?php endif; ?>>
            <div class="block-content">
                <table id="items-table<?php echo $uniqueSuffix; ?>" class="sku-table" cellspacing="0"  cellpadding="0">
                    <colgroup>
                        <col width="60%" />
                        <col width="40%" />
                        <col width="*" />
                    </colgroup>
                    <thead>
                        <tr>
                            <th><?php echo $this->__('SKU') ?></th>
                            <th><?php echo $this->__('Qty') ?></th>
                            <th>&nbsp;</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <td colspan="3" class="a-right">
                                <span href="#" id="add_new_item_button<?php echo $uniqueSuffix; ?>" title="<?php echo $this->__('Add Row') ?>" class="add-row"><?php echo $this->__('Add New Row') ?></span>
                            </td>
                        </tr>
                    </tfoot>
                    <tbody>
                        <tr class="order-row">
                            <td><input type="text" name="items[0<?php echo $uniqueSuffix; ?>][sku]" class="input-text required-entry" maxlength="64" /></td>
                            <td><input type="text" name="items[0<?php echo $uniqueSuffix; ?>][qty]" class="input-text <?php echo $qtyValidationClasses; ?>" value="1" maxlength="13" /></td>
                            <td>&nbsp;</td>
                        </tr>
                    </tbody>
                </table>
                <?php echo $this->getChildHtml(); ?>
                <div class="actions">
                    <button id="sku-submit-button<?php echo $uniqueSuffix; ?>" type="submit" title="<?php echo $this->__('Add to Cart') ?>" class="button"><span><span><?php echo $this->__('Add to Cart') ?></span></span></button>
                </div>
            </div>
        </form>
        <div class="sku-widget-link"><?php echo $this->getLink(); ?></div>
    </div>
</div>

<script type="text/javascript">
//<![CDATA[

if (typeof templateText == 'undefined') {
    var templateText =
        '<tr class="order-row">'+
            '<td><input name="items[{{id}}][sku]" value="" class="input-text required-entry" type="text" /><\/td>' +
            '<td></span><input name="items[{{id}}][qty]" value="1" class="input-text <?php echo $qtyValidationClasses; ?>" type="text" /><\/td>' +
            '<td class="v-middle"><span class="remove-row" title="<?php echo $this->__('Remove Row') ?>"></td>' +
        '<\/tr>';
}

var itemOptions = itemOptions || {};

itemOptions["<?php echo $uniqueSuffix; ?>"] = {
    table: $('items-table<?php echo $uniqueSuffix; ?>').select('tbody')[0],
    templateSyntax: /(^|.|\r|\n)({{(\w+)}})/,
    templateText: templateText,
    itemCount: 1,
    add: function(data) {
        this.template = new Template(this.templateText, this.templateSyntax);
        if (!data.id) {
            data = {};
            data.id  = this.itemCount + '<?php echo $uniqueSuffix; ?>';
        }
        Element.insert(this.table, {bottom: this.template.evaluate(data)});
        this.bindRemoveButtons();
        this.itemCount++;
    },
    remove: function(event) {
        var element = $(Event.findElement(event, 'tr'));
        if (element) {
            element.remove();
        }
    },
    bindRemoveButtons: function() {
        var buttons = $$('#<?php echo $skuFormId; ?> .remove-row');
        for(var i=0; i < buttons.length; i++) {
            if (!$(buttons[i]).binded) {
                $(buttons[i]).binded = true;
                Event.observe(buttons[i], 'click', this.remove.bind(this));
            }
        }
    }

}

document.observe('dom:loaded', function() {
    Event.observe(
        'add_new_item_button<?php echo $uniqueSuffix; ?>',
        'click',
        itemOptions["<?php echo $uniqueSuffix; ?>"].add.bind(itemOptions["<?php echo $uniqueSuffix; ?>"])
    );

    var skuForm = new VarienForm('<?php echo $skuFormId; ?>');
    $('sku-submit-button<?php echo $uniqueSuffix; ?>').onclick = function(e) {
        var skuForm = $('<?php echo $skuFormId; ?>');
        if (typeof skuForm.sku_file != 'undefined' && $(skuForm.sku_file).present()) {
            Event.stop(e);
            skuForm.submit();
        }
    }
});
//]]>
</script>
