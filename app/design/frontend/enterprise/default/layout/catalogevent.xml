<layout version="0.1.0">
    
    <catalog_category_view>
        <reference name="head">
            <action method="addItem"><type>skin_js</type><name>js/enterprise/catalogevent.js</name></action>
        </reference>
        <reference name="top.container">
            <block after="-" name="catalog_category_event" type="enterprise_catalogevent/catalog_category_event" template="catalogevent/catalog/category/event.phtml"/>
        </reference>
    </catalog_category_view>
    
    <catalog_product_view>
        <reference name="head">
            <action method="addItem"><type>skin_js</type><name>js/enterprise/catalogevent.js</name></action>
        </reference>
        <reference name="top.container">
            <block  after="-" name="product_category_event" type="enterprise_catalogevent/catalog_product_event" template="catalogevent/catalog/product/event.phtml"/>
        </reference>
    </catalog_product_view>
    
    <review_product_list>
        <reference name="head">
            <action method="addItem"><type>skin_js</type><name>js/enterprise/catalogevent.js</name></action>
        </reference>
        <reference name="top.container">
            <block  after="-" name="product_category_event" type="enterprise_catalogevent/catalog_product_event" template="catalogevent/catalog/product/event.phtml"/>
        </reference>
    </review_product_list>
    
    <review_product_view>
        <reference name="head">
            <action method="addItem"><type>skin_js</type><name>js/enterprise/catalogevent.js</name></action>
        </reference>
        <reference name="top.container">
            <block  after="-" name="product_category_event" type="enterprise_catalogevent/catalog_product_event" template="catalogevent/catalog/product/event.phtml"/>
        </reference>
    </review_product_view>
    
    <cms_index_index>
        <reference name="head">
            <action method="addItem"><type>skin_js</type><name>js/enterprise/catalogevent.js</name></action>
        </reference>
        <reference name="content">
            <block  after="-" name="event_slider" type="enterprise_catalogevent/event_home" template="catalogevent/home.phtml"/>
        </reference>
    </cms_index_index>
</layout>
