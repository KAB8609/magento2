<layout version="0.1.0">
    <customer_account>
        <reference name="customer_account_navigation">
            <action method="addLink" translate="label" module="enterprise_reward">
                <name>enterprise_reward</name>
                <path>enterprise_reward/customer/info/</path>
                <label>Reward Points</label>
            </action>
        </reference>
    </customer_account>
    
    <enterprise_reward_customer_info>
        <update handle="customer_account"/>
        <reference name="content">
            <block type="enterprise_reward/customer_reward" name="customer.reward" template="reward/customer/reward.phtml">
                <block type="enterprise_reward/customer_reward_balance" name="customer.reward.balance" template="reward/customer/reward/balance.phtml"/>
                <block type="enterprise_reward/customer_reward_history" name="customer.reward.history" template="reward/customer/reward/history.phtml"/>
            </block>
        </reference>
    </enterprise_reward_customer_info>
    
    <checkout_onepage_index>
        <reference name="checkout.onepage.payment.methods_additional">
            <block type="enterprise_reward/checkout_onepage_payment_additional" template="reward/checkout/onepage/payment/additional.phtml" name="reward.points" />
        </reference>
    </checkout_onepage_index>

    <!--checkout_onepage_paymentmethod>
        <reference name="checkout.onepage.payment.methods.scripts">
            <block type="enterprise_reward/checkout_onepage_payment_additional" template="reward/checkout/onepage/payment/additional.phtml" name="reward.points_scripts" />
        </reference>
    </checkout_onepage_paymentmethod-->
</layout>
