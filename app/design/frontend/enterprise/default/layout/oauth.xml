<layout version="1.0.0.0">
    <!-- Authorization -->
    <oauth_authorize_index translate="label">
        <label>OAuth authorization for customer</label>
        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <block type="oauth/authorize" name="oauth.authorize.form" template="oauth/authorize/form/customer/login.phtml"/>
            <block type="oauth/authorize_button" name="oauth.authorize.button" template="oauth/authorize/button.phtml" />
        </reference>
        <remove name="account.links"/>
        <remove name="top.links"/>
        <remove name="checkout.links"/>
        <remove name="welcome"/>
        <remove name="top.search"/>
        <remove name="top.menu"/>
        <remove name="cart_sidebar"/>
        <remove name="footer"/>
    </oauth_authorize_index>
    <oauth_authorize_popup translate="label">
        <update handle="oauth_authorize_index"/>
        <label>OAuth authorization Pop Up for customer</label>
        <reference name="oauth.authorize.form">
            <action method="setTemplate">
                <template>oauth/authorize/form/admin/pop-up.phtml</template>
            </action>
        </reference>
        <reference name="oauth.authorize.button">
            <action method="setTemplate">
                <template>oauth/authorize/button-pop-up.phtml</template>
            </action>
        </reference>
    </oauth_authorize_popup>
    <!-- EOF Authorization -->

    <!-- Confirm Authorization -->
    <oauth_authorize_confirm translate="label">
        <label>Confirm OAuth token authorization</label>
        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <block type="oauth/authorize" name="oauth.authorize.confirm" template="oauth/authorize/confirm.phtml"/>
        </reference>
        <remove name="account.links"/>
        <remove name="top.links"/>
        <remove name="checkout.links"/>
        <remove name="welcome"/>
        <remove name="top.search"/>
        <remove name="top.menu"/>
        <remove name="cart_sidebar"/>
        <remove name="footer"/>
    </oauth_authorize_confirm>
    <!-- EOF Confirm Authorization -->

    <!-- Reject Authorization -->
    <oauth_authorize_reject translate="label">
        <label>Confirm OAuth token authorization</label>
        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <block type="core/template" name="oauth.authorize.reject" template="oauth/authorize/reject.phtml"/>
        </reference>
        <remove name="account.links"/>
        <remove name="top.links"/>
        <remove name="checkout.links"/>
        <remove name="welcome"/>
        <remove name="top.search"/>
        <remove name="top.menu"/>
        <remove name="cart_sidebar"/>
        <remove name="footer"/>
    </oauth_authorize_reject>
    <!-- EOF Reject Authorization -->

    <!-- My Applications-->
    <customer_account>
        <reference name="customer_account_navigation">
            <action method="addLink" translate="label" module="oauth">
                <name>OAuth Customer Tokens</name>
                <path>oauth/customer_token</path>
                <label>My Applications</label>
            </action>
        </reference>
    </customer_account>
    <oauth_customer_token_index translate="label">
        <label>Customer My Account My OAuth Applications</label>
        <update handle="customer_account"/>
        <reference name="my.account.wrapper">
            <block type="oauth/customer_token_list" name="oauth_customer_token_list" template="oauth/customer/token/list.phtml"/>
        </reference>
    </oauth_customer_token_index>
    <!-- EOF My Applications-->
</layout>
