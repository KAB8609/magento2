<layout version="0.1.0">
    <default>
        <reference name="cart_sidebar_links">
            <action method="addLink" translate="label title" module="enterprise_invitation"><label>Invitations</label><url helper="enterprise_invitation/data/getCustomerInvitationUrl" /><title>Invitations</title></action>
        </reference>
    </default>
    
    <invitation_index_index>
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="core/template" name="invitationForm" template="invitation/form.phtml"/>
        </reference>
    </invitation_index_index>

    <invitation_index_list>
        <update handle="customer_account"/>
        
        <reference name="content">
            <block type="enterprise_invitation/customer_list" name="invitations_list" template="invitation/list.phtml"/>
        </reference>
    </invitation_index_list>

    <customer_account>
        <reference name="customer_account_navigation">
            <action method="addLink" translate="label" module="enterprise_invitation"><name>invitations</name><path>invitation/index/list</path><label>Invitations</label></action>
        </reference>
    </customer_account>
    
    <customer_account_create>
        <reference name="content">
            <remove name="customer_form_register" />
            <block type="enterprise_invitation/customer_form_register" name="customer_form_register_invitation" template="customer/form/register.phtml"/>
        </reference>
    </customer_account_create>
</layout>
