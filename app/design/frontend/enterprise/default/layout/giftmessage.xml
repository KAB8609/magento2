<layout version="0.1.0">

<!--
Gift message add/edit form
-->
    <giftmessage_index_edit translate="label">
        <label>Gift Message Edit Form</label>
        <reference name="root">
            <action method="setTemplate"><template>page/popup.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="giftmessage/message_form" name="giftmessage.form" template="giftmessage/form.phtml"/>
        </reference>
    </giftmessage_index_edit>

<!--
Gift message save result
-->
    <giftmessage_index_save translate="label">
        <label>Gift Message Save Result</label>
        <reference name="root">
            <action method="setTemplate"><template>page/popup.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="giftmessage/message_form" name="giftmessage.form" template="giftmessage/form.phtml" >
                <action method="setSaveMode"><mode>save</mode></action>
            </block>
        </reference>
    </giftmessage_index_save>

<!--
Gift message remove result
-->
    <giftmessage_index_remove translate="label">
        <label>Gift Message Removal Result</label>
        <reference name="root">
            <action method="setTemplate"><template>page/popup.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="giftmessage/message_form" name="giftmessage.form" template="giftmessage/form.phtml" >
                <action method="setSaveMode"><mode>remove</mode></action>
            </block>
        </reference>
    </giftmessage_index_remove>

</layout>
