<layout version="0.1.0">
    <default>
        <update handle="page_one_column"/>
        <reference name="head">
            <action method="addCss">
                <file>css/iphone.css</file>
            </action>
            <action method="addCss">
                <file>css/widgets.css</file>
            </action>
            <action method="addCss">
                <file>css/custom.css</file>
            </action>
            <action method="addJs">
                <file>js/iphone.js</file>
            </action>
            <action method="addJs">
                <file>js/dnd.js</file>
            </action>
            <action method="addJs">
                <file>js/modernizr.js</file>
            </action>
            <action method="addMetaTag">
                <name>viewport</name>
                <content>width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no</content>
            </action>
        </reference>
    </default>
</layout>
