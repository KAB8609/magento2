<layout version="0.1.0">
    <print translate="label" module="Mage_Page" type="page">
        <label>All Pages (Print Version)</label>
        <block type="Mage_Page_Block_Html" name="root" output="1" template="print.phtml">
            <block type="Mage_Page_Block_Html_Head" name="head" as="head">
                <action method="addCss">
                    <file>css/styles.css</file>
                </action>
                <action method="addCss">
                    <file>css/styles-ie.css</file>
                    <params/>
                    <if>lt IE 8</if>
                </action>
                <action method="addCss">
                    <file>css/widgets.css</file>
                </action>
                <action method="addCss">
                    <file>css/print.css</file>
                    <params>media="print"</params>
                </action>
                <action method="addJs">
                    <file>lib/ds-sleight.js</file>
                    <params/>
                    <if>lt IE 7</if>
                </action>
            </block>
            <container name="content" as="content" label="Main Content Area (Print Version)"/>
        </block>
        <reference name="head">
            <action method="addJs">
                <file>mage/translate.js</file>
            </action>
        </reference>
    </print>
</layout>
