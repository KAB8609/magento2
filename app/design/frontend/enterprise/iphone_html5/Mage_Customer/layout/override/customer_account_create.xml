<layout version="0.1.0">
    <customer_account_create translate="label" type="page" parent="customer_account">
        <label>Customer Account Registration Form</label>
        <reference name="root">
            <action method="setTemplate">
                <template>1column.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <block type="Mage_Customer_Block_Form_Register" name="customer_form_register" template="form/register.phtml">
                <container name="customer.form.register.fields.before" as="form_fields_before" label="Form Fields Before" htmlTag="div"/>
                <block type="Enterprise_Customer_Block_Form" template="form/userattributes.phtml" name="customer_form_user_attributes">
                    <action method="setFormCode">
                        <code>customer_account_create</code>
                    </action>
                    <action method="setEntityModelClass">
                        <code>Mage_Customer_Model_Customer</code>
                    </action>
                </block>
                <block type="Enterprise_Customer_Block_Form" template="form/userattributes.phtml" name="customer_form_address_user_attributes">
                    <action method="setFormCode">
                        <code>customer_register_address</code>
                    </action>
                    <action method="setEntityModelClass">
                        <code>Mage_Customer_Model_Address</code>
                    </action>
                </block>
            </block>
        </reference>
        <update handle="customer_form_template_handle"/>
    </customer_account_create>
</layout>
