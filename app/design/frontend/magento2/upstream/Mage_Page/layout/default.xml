<layout version="0.1.0">
    <default>
        <!-- Setting theme name to display near the logo -->
        <reference name="logo">
            <action method="setThemeName"><name>Upstream</name></action>
        </reference>
        <reference name="head">
            <action method="addLinkRel"><type>stylesheet</type><href>//fonts.googleapis.com/css?family=Oswald:400,700</href></action>
            <action method="addJs"><file>js/upstream.js</file></action>
        </reference>

        <reference name="header-container">
            <container name="header.panel.wrapper" label="invisible" htmlTag="div" htmlClass="wrapper" before="-" />
        </reference>

        <move element="catalog.topnav" destination="header-container" after="-" />
        <move element="header.panel" destination="header.panel.wrapper" />
        <move element="top.links" destination="header.panel" after="-" />

        <!--to revert parent settings-->
        <remove name="header.links" />
    </default>
</layout>
