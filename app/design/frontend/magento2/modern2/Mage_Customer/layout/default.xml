<layout version="0.1.0">
    <default>
        <reference name="header.panel">
            <reference name="panel.menu">
                <!-- My account -->
                <block type="Mage_Customer_Block_Account_Link">
                    <action method="addAccountLink"><target>panel.menu</target><position>10</position></action>
                </block>
            </reference>

            <!-- Login or register / welcome user -->
            <reference name="navigation.links">
                <action method="setCssClass"><class>customer</class></action>
                <action method="addLinkBlock"><blockName>customer</blockName></action>
                <block type="Mage_Customer_Block_Account_Link">
                    <action method="addAuthLink"><target>navigation.links</target><position>0</position></action>
                    <action method="addRegisterLink" translate="text_before"><target>navigation.links</target><position>100</position><text_before> or </text_before></action>
                </block>
            </reference>
        </reference>
    </default>
</layout>
