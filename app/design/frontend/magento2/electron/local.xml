<!--[if lt IE 9]>
<script src="http://ie7-js.googlecode.com/svn/version/2.1(beta4)/IE9.js"></script>
<![endif]-->
<layout version="0.1.0">
    <default>
        <!-- Setting theme name to display near the logo -->
        <reference name="logo">
            <action method="setThemeName"><name>Electron</name></action>
        </reference>
        <reference name="head">
            <action method="addLinkRel"><rel>stylesheet</rel><href>//fonts.googleapis.com/css?family=Open+Sans:400,700</href></action>
            <action method="addLinkRel"><rel>stylesheet</rel><href>//fonts.googleapis.com/css?family=Tenor+Sans</href></action>
            <action method="addCss"><file>mui/reset.css</file></action>
            <action method="addCss"><file>css/styles.css</file></action>
            <action method="addJs"><file>lib/modernizr.js</file></action>
            <action method="addJs"><file>jquery/jquery.hoverIntent.js</file></action>
            <action method="addJs"><file>js/jquery.dropdowns.js</file></action>
            <action method="addJs"><file>js/theme.js</file></action>
            <action method="addJs"><file>js/tabs.js</file></action>
            <action method="addJs"><file>js/selectivizr-min.js</file><params/><if>lt IE 9</if></action>
        </reference>
        <reference name="page.bottom">
             <container name="place.communication" label="Newsletter Placeholder" htmlTag="div" htmlClass="place communication" />
        </reference>

        <!--<move element="form.subscribe" destination="place.communication" after="-" />-->
        <move element="place.communication" destination="page.bottom" after="-" />
        <move element="external.pagecache.cookie" destination="content.bottom" after="-" />

        <block type="Mage_Page_Block_Html_Header" name="customer">
            <action method="setShowPart"><value>customer</value></action>
        </block>

        <block type="Mage_Catalog_Block_Product_Compare_Sidebar" name="catalog.compare.header" template="Mage_Catalog::product/compare/sidebar.phtml">
            <action method="setIsLink"><link>1</link></action>
        </block>

        <!-- <remove name="tags_popular" /> -->
        <!--<remove name="catalog.compare.sidebar"/>-->
        <!-- <remove name="product_tag_list" /> -->

        <remove name="top.links" />
        <reference name="header.panel">
            <container name="header.login" label="Header Login" htmlTag="div" htmlClass="header login" before="-">
                <block type="Mage_Page_Block_Template_Links" name="account.links">
                    <action method="addLinkBlock"><blockName>customer</blockName></action>
                    <block type="Mage_Customer_Block_Account_Link">
                        <action method="addAuthLink"><target>account.links</target><position>0</position></action>
                        <action method="addRegisterLink" translate="text_before"><target>account.links</target><position>100</position><text_before> or </text_before></action>
                    </block>
                </block>
            </container>
            <block type="Mage_Page_Block_Template_Links" name="panel.menu" after="-">
                <block type="Mage_Customer_Block_Account_Link">
                    <action method="addAccountLink"><target>panel.menu</target><position>10</position></action>
                </block>
                <action method="addLinkBlock"><blockName>catalog.compare.header</blockName></action>
                <block type="Mage_Wishlist_Block_Links" name="wishlist.link" />
                <action method="addLinkBlock"><blockName>wishlist.link</blockName><position>0</position></action>
            </block>
        </reference>

        <reference name="header-container">
            <container name="header.panel.wrapper" label="invisible" htmlTag="div" htmlClass="header panel wrapper" before="-">
            </container>
        </reference>

        <reference name="header">
            <block type="Mage_Page_Block_Template_Links" name="checkout.menu" after="-">
                <block type="Mage_Checkout_Block_Links">
                    <action method="addCheckoutLink"></action>
                </block>
            </block>
        </reference>

        <move element="minicart" destination="header" before="checkout.menu" />
        <move element="catalog.topnav" destination="header" after="-" />
        <move element="store_language" destination="header.panel" before="-" />
        <move element="header.panel" destination="header.panel.wrapper" before="-" />
        <move element="breadcrumbs" destination="main" before="-" />
        <move element="page.main.title" destination="main" after="breadcrumbs" />

    </default>

    <catalog_category_view>
        <reference name="product_list">
            <action method="setPositioned">
                <!-- If position of actions is depend on image size changable in VDE:
                    <value>positions:list-secondary,grid-secondary,list-actions,grid-actions,list-primary,grid-primary</value>
                -->
                <value>positions:list-secondary</value>
            </action>
        </reference>
        <!--<move element="title" destination="product_list" />-->
    </catalog_category_view>

    <catalogsearch_result_index>
        <update handle="page_one_column" />
        <reference name="search_result_list">
            <action method="setPositioned">
                <!-- If position of actions is depend on image size changable in VDE:
                    <value>positions:list-secondary,grid-secondary,list-actions,grid-actions,list-primary,grid-primary</value>
                -->
                <value>positions:list-secondary</value>
            </action>
        </reference>
    </catalogsearch_result_index>

    <checkout_cart_index>
        <remove name="checkout.cart.methods.top" />
    </checkout_cart_index>


    <catalog_product_view>
        <reference name="content">
            <container name="product-info-top" as="product-info-top" label="Product Info Top" htmlTag="div" htmlClass="product info top" before="-" />
            <move element="product.image.thumbs" destination="product.info.media.image" after="product.image.main" />
        </reference>
        <remove name="product.info.sku" />
        <move element="product.info.overview" destination="product.info.details" before="-" as="product_overview" />
        <move element="breadcrumbs" destination="product-info-top" before="-" />
        <move element="product.info.rating" destination="product-info-top" before="breadcrumbs" />
        <move element="page.main.title" destination="content" after="product-info-top" />
        <!-- product.info.rating -->
        <reference name="product.info.overview">
            <action method="setAtLabel" translate="label"><label>none</label></action>
            <action method="addToParentGroup"><group>detailed_info</group></action>
            <action method="setTitle" translate="value"><value>Overview</value></action>
        </reference>

        <reference name="product.info.details" after="-">
            <block type="Mage_Catalog_Block_Product_View_Additional" name="product.info.reviews.tab" as="product_reviews">
                <action method="addToParentGroup"><group>detailed_info</group></action>
                <action method="setTitle" translate="value"><value>Reviews</value></action>
                <block type="Mage_Review_Block_Form" name="product.review.form" as="review_form">
                    <container name="product.review.form.fields.before" as="form_fields_before" label="Review Form Fields Before" htmlTag="div" htmlClass="rewards"/>
                </block>
                <!-- <block type="Mage_Page_Block_Html_Pager" name="product_review_list.toolbar"/> -->
                <!-- <block type="Mage_Core_Block_Template" name="product_review_list.count" template="Mage_Review::product/view/count.phtml"/> -->
                <block type="Mage_Review_Block_Product_View_List" name="product.info.product_additional_data" as="product_additional_data" template="product/view/list.phtml">
                </block>
            </block>
        </reference>

        <move element="product.info.mailto" destination="content" after="product.info.details" />

        <reference name="content.bottom">
            <block type="Mage_Reports_Block_Product_Widget_Viewed" page_size="6" template="Mage_Catalog::product/list/items.phtml">
                <action method="setType"><type>widget-viewed</type></action>
                <action method="setViewMode"><mode>grid</mode></action>
                <action method="setImageType"><image>recently_viewed_products_grid_content_widget</image></action>
            </block>
        </reference>

        <move element="product_tag_list" destination="content.bottom" after="-" as="product_tags" />
        <reference name="product_tag_list">
            <action method="setAtLabel" translate="label"><label>none</label></action>
            <action method="setTitle" translate="value"><value>Tags</value></action>
        </reference>

    </catalog_product_view>

    <catalog_product_view_type_grouped>
        <move element="product.info.addtocart" destination="product.info.form.content" after="-" />
        <move element="product.info.addto" destination="product.info.form.content" after="-" />
        <move element="product.info.extrahint" destination="product.info.form.content" after="product.info.grouped" />
    </catalog_product_view_type_grouped>

    <review_product_list>
        <reference name="root">
            <action method="setTemplate"><template>blank.phtml</template></action>
            <block type="Mage_Review_Block_Product_View" as="content" name="product.redirect" template="redirect.phtml" />
        </reference>
    </review_product_list>

    <print>
        <reference name="head">
            <!-- <action method="addCss"><file>css/print.css</file></action> -->
        </reference>
    </print>

    <catalog_product_compare_index translate="label" type="page" parent="default">
        <label>Catalog Product Compare List</label>
        <update handle="page_one_column" />
        <reference name="page.main.title">
            <action method="setPageTitle" translate="title"><title>Compare Products</title></action>
        </reference>
        <!-- Mage_Catalog -->
    </catalog_product_compare_index>
</layout>
