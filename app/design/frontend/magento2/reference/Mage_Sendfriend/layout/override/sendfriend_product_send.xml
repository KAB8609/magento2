<layout version="0.1.0">
    <sendfriend_product_send translate="label" type="page" parent="catalog_product_view">
        <label>Catalog Product Email to a Friend</label>
        <update handle="page_one_column"/>
        <reference name="page.main.title">
            <action method="setPageTitle" translate="title" module="Mage_Sendfriend">
                <title>Email to a Friend</title>
            </action>
        </reference>
        <reference name="content">
            <block type="Mage_Sendfriend_Block_Send" name="sendfriend.send" template="send.phtml"/>
        </reference>
    </sendfriend_product_send>
</layout>
