<layout version="0.1.0">
    <customer_account_createpassword translate="label" type="page" parent="customer_account">
        <label>Reset a Password</label>
        <reference name="head">
            <action method="setTitle" translate="title">
                <title>Reset a Password</title>
            </action>
        </reference>
        <reference name="root">
            <action method="setTemplate">
                <template>1column.phtml</template>
            </action>
            <action method="setHeaderTitle" translate="title">
                <title>Reset a Password</title>
            </action>
        </reference>
        <reference name="content">
            <block type="Mage_Customer_Block_Account_Resetpassword" name="resetPassword" template="form/resetforgottenpassword.phtml"/>
        </reference>
    </customer_account_createpassword>
</layout>
