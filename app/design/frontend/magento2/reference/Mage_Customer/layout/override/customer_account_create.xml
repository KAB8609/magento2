<layout version="0.1.0">
    <customer_account_create translate="label" type="page" parent="customer_account">
        <label>Customer Account Registration Form</label>
        <reference name="root">
            <action method="setTemplate">
                <template>1column.phtml</template>
            </action>
        </reference>
        <container name="customer.form.register.fields.before" label="Form Fields Before" htmlTag="div" htmlClass="customer-form-before"/>
        <reference name="content">
            <block type="Mage_Customer_Block_Form_Register" name="customer_form_register" template="form/register.phtml">
                <container name="form.additional.info" label="invisible" as="form_additional_info"/>
                <action method="append">
                    <element>customer.form.register.fields.before</element>
                    <alias>form_fields_before</alias>
                </action>
            </block>
        </reference>
    </customer_account_create>
</layout>
