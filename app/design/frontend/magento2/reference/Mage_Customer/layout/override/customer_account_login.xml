<layout version="0.1.0">
    <customer_account_login translate="label" type="page" parent="customer_account">
        <label>Customer Account Login Form</label>
        <reference name="root">
            <action method="setTemplate">
                <template>1column.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <!-- customer.form.login.extra -->
            <container name="customer.login.container" label="Customer Login Container" htmlTag="div" htmlClass="login container">
                <block type="Mage_Customer_Block_Form_Login" name="customer_form_login" template="form/login.phtml">
                    <container name="form.additional.info" label="invisible" as="form_additional_info"/>
                </block>
                <block type="Mage_Customer_Block_Form_Login" name="customer.new" template="newcustomer.phtml"/>
            </container>
        </reference>
    </customer_account_login>
</layout>
