<layout version="0.1.0">
    <checkout_onepage_failure translate="label" type="page" parent="default">
        <label>One Page Checkout Failure</label>
        <update handle="page_one_column"/>
        <reference name="page.main.title">
            <action method="setPageTitle" translate="title" module="Mage_Checkout">
                <title>Your order has been received.</title>
            </action>
        </reference>
        <reference name="content">
            <block type="Mage_Checkout_Block_Onepage_Failure" name="checkout.failure" template="onepage/failure.phtml"/>
        </reference>
    </checkout_onepage_failure>
</layout>
