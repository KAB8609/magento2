<layout version="0.1.0">
    <checkout_onepage_success translate="label" type="page" parent="default">
        <label>One Page Checkout Success</label>
        <update handle="page_one_column"/>
        <reference name="page.main.title">
            <action method="setPageTitle" translate="title">
                <title>Your order has been received.</title>
            </action>
        </reference>
        <reference name="content">
            <block type="Mage_Checkout_Block_Onepage_Success" name="checkout.success" template="success.phtml"/>
        </reference>
    </checkout_onepage_success>
</layout>
