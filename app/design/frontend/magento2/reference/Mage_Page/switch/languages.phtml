?>

<?php if(count($this->getStores())>1): ?>
<div class="switcher language">
    <strong class="label"><?php echo $this->__('Language') ?>:</strong>
    <div class="options">
        <strong class="view-<?php echo $this->escapeHtml(Mage::app()->getStore()->getCode()) ?>">
            <span><?php echo $this->escapeHtml(Mage::app()->getStore()->getName()) ?></span>
        </strong>
        <button type="button" data-toggle="dropdown" class="action switch"><span><?php echo $this->__('Change')?></span></button>
        <ul data-target="dropdown">
            <?php foreach ($this->getStores() as $_lang): ?>
                <?php if($_lang->getId()!=$this->getCurrentStoreId()): ?>
                    <li class="view-<?php echo $this->escapeHtml($_lang->getCode()); ?>">
                        <a href="<?php echo $_lang->getCurrentUrl() ?>"><?php echo $this->escapeHtml($_lang->getName()) ?></a>
                    </li>
                <?php endif; ?>
            <?php endforeach; ?>
        </ul>
    </div>
</div>
<?php endif; ?>

