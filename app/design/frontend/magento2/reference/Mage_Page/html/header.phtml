<?php switch($this->getShowPart()):
    case 'logo': ?>
        <?php /* Temporary tweek to show theme name instead of standard "Magento commerce" title */ ?>
        <?php $storeName = ($this->getLogoAlt() == 'Magento Commerce' && $this->getThemeName()) ? $this->getThemeName() : $this->getLogoAlt();?>
        <?php if ($this->getIsHomePage()):?>
        <strong class="logo">
            <img src="<?php echo $this->getLogoSrc() ?>" alt="<?php echo $this->getLogoAlt() ?>" />
            <?php /*<span><?php echo $storeName ?></span>*/?>
        </strong>
        <?php else:?>
        <a class="logo" href="<?php echo $this->getUrl(''); ?>" title="<?php echo $storeName ?>">
            <img src="<?php echo $this->getLogoSrc() ?>" alt="<?php echo $storeName ?>" />
            <?php /*<span><?php echo $storeName ?></span> */ ?>
        </a>
        <?php endif?>
    <?php break; ?>

    <?php case 'welcome': ?>
        <p class="welcome"><?php echo $this->getWelcome() ?></p>
    <?php break; ?>

    <?php case 'customer': ?>
        <?php if(Mage::getSingleton('Mage_Customer_Model_Session')->isLoggedIn()): ?>
            <li class="customer welcome">
                <a href="#" class="customer link">
                    <span><?php echo $this->getWelcome(); ?></span>
                </a>
                <?php if($this->getChildHtml()):?>
                <menu class="menu">
                    <?php echo $this->getChildHtml();?>
                </menu>
                <?php endif; ?>
            </li>
        <?php endif; ?>
    <?php break; ?>

    <?php case 'other': ?>
        <?php echo $this->getChildHtml(); ?>
    <?php break; ?>

<?php endswitch; ?>
