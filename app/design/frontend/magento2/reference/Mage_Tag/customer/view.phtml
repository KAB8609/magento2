<p class="tag edit">
    <?php echo $this->__('<strong>Tag Name:</strong> %s', $this->escapeHtml($this->getTagInfo()->getName())) ?>
    <a href="#" class="action delete" title="<?php echo $this->__('Delete') ?>" onclick="if(confirm('<?php echo $this->__('Are you sure you want to delete this tag?') ?>')) window.location='<?php echo $this->getTagInfo()->getRemoveTagUrl(); ?>'; return false;"><span><?php echo $this->__('Delete') ?></span></a>
</p>
<div class="toolbar tags"><?php echo $this->getToolbarHtml() ?></div>
<table class="data table tags" id="my-tags-table">
<?php if( sizeof($this->getMyProducts()) > 0 ): ?>
<?php $imageBlock =  $this->getLayout()->createBlock('Mage_Catalog_Block_Product_Image'); ?>
    <tbody>
    <?php $iterator = 0 ?>
    <?php foreach($this->getMyProducts() as $_product): ?>
        <tr>
            <td class="col photo">
                <a href="<?php echo $_product->getProductUrl(); ?>" title="<?php echo $this->escapeHtml($_product->getName()) ?>" class="product photo">
                    <!-- customer_account_my_tags_tag_view -->
                    <?php echo $imageBlock->init($_product, 'customer_account_my_tags_tag_view')->toHtml() ?>
                </a>
            </td>
            <td class="col item">
                <div class="product details">
                    <strong class="product name"><a href="<?php echo $_product->getProductUrl() ?>"><?php echo $this->escapeHtml($_product->getName()) ?></a></strong>
                    <?php echo $this->getReviewsSummaryHtml($_product, 'short') ?>
                    <?php echo $this->getPriceHtml($_product) ?>
                    <div class="product description"><?php echo $this->escapeHtml($_product->getDescription()) ?></div>
                </div>
            </td>
            <td class="col actions">
                <div class="item actions">
                    <?php if($_product->isSaleable()): ?>
                        <button type="button" title="<?php echo $this->__('Add to Cart') ?>" class="action tocart" onclick="setLocation('<?php echo $this->getUrl('checkout/cart/add',array('product'=>$_product->getId())) ?>')"><span><?php echo $this->__('Add to Cart') ?></span></button>
                    <?php endif; ?>
                    <?php if ($this->helper('Mage_Wishlist_Helper_Data')->isAllow()) : ?>
                    <div class="addto links">
                        <a href="<?php echo $this->getUrl('wishlist/index/add',array('product'=>$_product->getId())) ?>" class="action towishlist"><span><?php echo $this->__('Add to Wishlist') ?></span></a>
                    </div>
                    <?php endif; ?>
                </div>
            </td>
        </tr>
    <?php endforeach; ?>
    </tbody>
<?php else: ?>
    <tbody class="empty">
        <tr>
            <td>
                <?php echo $this->__("Unable to find any products tagged with '%s' in the current store", $this->escapeHtml($this->getTagInfo()->getName()) ) ?>
            </td>
        </tr>
    </tbody>
<?php endif; ?>
</table>
<div class="toolbar tags bottom"><?php echo $this->getToolbarHtml() ?></div>
<div class="actions">
    <div class="secondary">
        <a class="action back" href="<?php echo $this->getUrl('*/*/')?>"><span><?php echo $this->__('Back to Tags List')?></span></a>
    </div>
</div>
