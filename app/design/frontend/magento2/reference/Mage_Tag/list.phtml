<div class="block product tags">
    <div class="title">
        <strong><?php echo $this->__('Product Tags'); ?></strong>
    </div>
    <div class="content">
        <?php echo $this->getChildHtml('list_before')?>
        <?php if($this->getCount()): ?>
        <strong class="subtitle"><?php echo $this->__('Other people marked this product with these tags:') ?></strong>
            <ul class="product tags items">
                <?php echo $this->renderTags('<li class="item"><a href="%1$s">%2$s</a><span class="amount">%3$s</span></li>') ?>
