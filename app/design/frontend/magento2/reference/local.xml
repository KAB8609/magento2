<script src="http://ie7-js.googlecode.com/svn/version/2.1(beta4)/IE9.js"></script>
<![endif]-->
<layout version="0.1.0">
    <default>
        <!-- Setting theme name to display near the logo -->
        <reference name="logo">
            <action method="setThemeName"><name>plushe</name></action>
        </reference>
        <reference name="head">
            <action method="addCss"><file>mui/reset.css</file></action>
<!--             <action method="addCss"><file>mui/base.css</file></action>
<action method="addCss"><file>mui/elements.css</file></action>
<action method="addCss"><file>mui/form.css</file></action>
<action method="addCss"><file>mui/components.css</file></action>
<action method="addCss"><file>mui/utils.css</file></action> -->
            <!-- <action method="addLinkRel"><rel>stylesheet</rel><href>//magento2.loc/app/design/frontend/magento2/reference/css/styles.css</href></action> -->
            <action method="addCss"><file>css/styles.css</file></action>
            <action method="addJs"><file>js/head.js</file></action>
            <action method="addJs"><file>jquery/jquery.hoverIntent.js</file></action>
            <action method="addJs"><file>js/jquery.dropdowns.js</file></action>
            <action method="addJs"><file>js/theme.js</file></action>
            <action method="addJs"><file>js/tabs.js</file></action>
            <action method="addJs"><file>js/selectivizr-min.js</file><params/><if>lt IE 9</if></action>
        </reference>

        <move element="external.pagecache.cookie" destination="content.bottom" after="-" />

        <block type="Mage_Page_Block_Html_Header" name="customer">
            <action method="setShowPart"><value>customer</value></action>
        </block>

        <block type="Mage_Catalog_Block_Product_Compare_Sidebar" name="catalog.compare.header" template="Mage_Catalog::product/compare/block.phtml">
            <action method="setIsLink"><link>1</link></action>
        </block>

        <!-- <remove name="tags_popular" /> -->
        <remove name="catalog.compare.sidebar"/>
        <!-- <remove name="product_tag_list" /> -->

        <remove name="checkout_cart_link" />
        <reference name="header">
            <block type="Mage_Page_Block_Template_Links" name="header.links" after="minicart" as="header-links">
                <action method="addLinkBlock"><blockName>catalog.compare.header</blockName></action>
                <action method="addLinkBlock"><blockName>customer</blockName></action>
                <!-- <action method="addLinkBlock"><blockName>catalog.compare.sidebar</blockName></action> -->
                <block type="Mage_Customer_Block_Account_Link" name="customer.links">
                    <action method="addLogInLink"><target>header.links</target><position>100</position></action>
                </block>
                <!-- <action method="addLinkBlock"><blockName>customer</blockName></action> -->
            </block>
        </reference>
        <move element="top.links" destination="customer" />
        <reference name="catalog.topnav">
            <action method="setColumnsLimit"><limit>1</limit></action>
        </reference>
    </default>

    <catalog_category_view>
        <reference name="product_list">
            <action method="setPositioned">
                <!-- If position of actions is depend on image size changable in VDE:
                    <value>positions:list-secondary,grid-secondary,list-actions,grid-actions,list-primary,grid-primary</value>
                -->
                <value>positions:list-secondary</value>
            </action>
        </reference>
    </catalog_category_view>

    <catalogsearch_result_index>
        <reference name="search_result_list">
            <action method="setPositioned">
                <!-- If position of actions is depend on image size changable in VDE:
                    <value>positions:list-secondary,grid-secondary,list-actions,grid-actions,list-primary,grid-primary</value>
                -->
                <value>positions:list-secondary</value>
            </action>
        </reference>
    </catalogsearch_result_index>

    <checkout_cart_index>
        <remove name="checkout.cart.methods.top" />
    </checkout_cart_index>


    <catalog_product_view>
        <move element="page.main.title" destination="product.info.main" before="-" />
        <remove name="product.info.sku" />
        <move element="product.info.overview" destination="product.info.details" before="-" as="product_overview" />
        <reference name="product.info.overview">
            <action method="setAtLabel" translate="label"><label>none</label></action>
            <action method="addToParentGroup"><group>detailed_info</group></action>
            <action method="setTitle" translate="value"><value>Overview</value></action>
        </reference>

        <move element="product_tag_list" destination="product.info.details" after="-" as="product_tags" />
        <reference name="product_tag_list">
            <action method="setAtLabel" translate="label"><label>none</label></action>
            <action method="addToParentGroup"><group>detailed_info</group></action>
            <action method="setTitle" translate="value"><value>Tags</value></action>
        </reference>

        <reference name="product.info.details" after="-">
            <block type="Mage_Catalog_Block_Product_View_Additional" name="product.info.reviews.tab" as="product_reviews">
                <action method="addToParentGroup"><group>detailed_info</group></action>
                <action method="setTitle" translate="value"><value>Reviews</value></action>
                <block type="Mage_Review_Block_Form" name="product.review.form" as="review_form">
                    <container name="product.review.form.fields.before" as="form_fields_before" label="Review Form Fields Before" htmlTag="div" htmlClass="rewards"/>
                </block>
                <!-- <block type="Mage_Page_Block_Html_Pager" name="product_review_list.toolbar"/> -->
                <!-- <block type="Mage_Core_Block_Template" name="product_review_list.count" template="Mage_Review::product/view/count.phtml"/> -->
                <block type="Mage_Review_Block_Product_View_List" name="product.info.product_additional_data" as="product_additional_data" template="product/view/list.phtml">
                </block>
            </block>
        </reference>
        <reference name="content.bottom">
            <block type="Mage_Reports_Block_Product_Widget_Viewed" name="product.viewed.products" page_size="6" template="Mage_Catalog::product/list/items.phtml">
                <action method="setType"><type>widget-viewed</type></action>
                <action method="setViewMode"><mode>grid</mode></action>
                <action method="setImageType"><image>recently_viewed_products_grid_content_widget</image></action>
            </block>
        </reference>
    </catalog_product_view>

    <review_product_list>
        <reference name="root">
            <action method="setTemplate"><template>blank.phtml</template></action>
            <block type="Mage_Review_Block_Product_View" as="content" name="product.redirect" template="redirect.phtml" />
        </reference>
    </review_product_list>

    <customer_account>
        <reference name="customer_account_navigation">
            <!-- <action method="removeLink" translate="label"><name>tags</name></action> -->
        </reference>

        <reference name="customer_account_navigation">
            <action method="removeLink" translate="label"><name>downloadable_products</name></action>
        </reference>
        <reference name="customer_account_navigation">
            <action method="removeLink" translate="label"><name>recurring_profiles</name></action>
        </reference>
        <reference name="customer_account_navigation">
            <action method="removeLink" translate="label"><name>OAuth Customer Tokens</name></action>
        </reference>
    </customer_account>

    <print>
        <reference name="head">
            <!-- <action method="addCss"><file>css/print.css</file></action> -->
        </reference>
    </print>

    <catalog_product_compare_index translate="label" type="page" parent="default">
        <label>Catalog Product Compare List</label>
        <update handle="page_one_column" />
        <reference name="page.main.title">
            <action method="setPageTitle" translate="title"><title>Compare Products</title></action>
        </reference>
        <!-- Mage_Catalog -->
    </catalog_product_compare_index>
</layout>
