        <div class="title">
            <strong><?php echo $this->__('Refund #%1', $_creditmemo->getIncrementId()) ?></strong>
        </div>

        <div class="block order shipping address">
        <?php if (!$_order->getIsVirtual()): ?>
            <div class="title">
                <strong><?php echo $this->__('Shipping Address') ?></strong>
            </div>
            <div class="content">
                <?php $_shipping = $_creditmemo->getShippingAddress() ?>
                <address><?php echo $_shipping->format('html') ?></address>
            </div>
        </div>

        <div class="block order billing address">
        <?php endif; ?>
            <div class="title">
                <strong><?php echo $this->__('Billing Address') ?></strong>
            </div>
            <div class="content">
                <?php $_billing = $_creditmemo->getbillingAddress() ?>
                <address><?php echo $_order->getBillingAddress()->format('html') ?></address>
            </div>
        </div>

        <?php if (!$_order->getIsVirtual()): ?>
        <div class="block order shipping method">
            <div class="title">
                <strong><?php echo $this->__('Shipping Method') ?></strong>
            </div>
            <div class="content">
                <?php echo $this->escapeHtml($_order->getShippingDescription()) ?>
            </div>
        </div>
        <?php endif; ?>
