<layout version="0.1.0">
    
    <centinel_authenticate_redirect>
        <block type="core/template" name="root" output="toHtml" template="centinel/authenticate/redirect.phtml"/>
    </centinel_authenticate_redirect>
    
    <centinel_authenticate_result>
        <block type="core/template" name="root" output="toHtml" template="centinel/authenticate/result.phtml"/>
    </centinel_authenticate_result>
    
    <checkout_multishipping_overview>
        <reference name="checkout_overview">
            <block type="centinel/authenticate" as="centinel_interface" name="centinel_interface" template="centinel/authenticate.phtml"/>
        </reference>
    </checkout_multishipping_overview>
    
    <checkout_onepage_savepayment>
        <reference name="root">
            <block type="centinel/authenticate" as="centinel_interface" name="centinel_interface" template="centinel/authenticate.phtml"/>
        </reference>
    </checkout_onepage_savepayment>
    
</layout>
