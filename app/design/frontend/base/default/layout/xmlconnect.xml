<layout version="0.1.0">
    <default>
    </default>
<!--
Default layout, loads most of the pages
-->
    <xmlconnect_index_index>
        <block type="xmlconnect/home" name="xmlconnect.home" output="toHtml"/>
    </xmlconnect_index_index>

    <xmlconnect_index_category>
        <block type="xmlconnect/category" name="xmlconnect.category" output="toHtml">
            <block type="xmlconnect/category_info" name="xmlconnect_categoryinfo" output=""/>
        </block>
    </xmlconnect_index_category>

    <xmlconnect_index_product>
        <block type="xmlconnect/product" name="xmlconnect.product" output="toHtml">
            <block type="xmlconnect/product_related" name="xmlconnect_productrelated" output=""/>
        </block>
    </xmlconnect_index_product>

    <xmlconnect_index_options>
        <block type="xmlconnect/product_options" name="xmlconnect.product.options" output="toHtml">
            <action method="addRenderer"><type>simple</type><renderer>xmlconnect/product_options_simple</renderer></action>
            <action method="addRenderer"><type>configurable</type><renderer>xmlconnect/product_options_configurable</renderer></action>
            <action method="addRenderer"><type>bundle</type><renderer>xmlconnect/product_options_bundle</renderer></action>
            <action method="addRenderer"><type>grouped</type><renderer>xmlconnect/product_options_grouped</renderer></action>
        </block>
    </xmlconnect_index_options>

    <xmlconnect_index_gallery>
        <block type="xmlconnect/product_gallery" name="xmlconnect.gallery" output="toHtml"/>
    </xmlconnect_index_gallery>

    <xmlconnect_index_filters>
        <block type="xmlconnect/filters" name="xmlconnect.filters" output="toHtml"/>
    </xmlconnect_index_filters>

    <xmlconnect_index_review>
        <block type="xmlconnect/review" name="xmlconnect.review" output="toHtml"/>
    </xmlconnect_index_review>

    <xmlconnect_index_reviews>
        <block type="xmlconnect/review_list" name="xmlconnect.reviews" output="toHtml"/>
    </xmlconnect_index_reviews>

    <xmlconnect_search_index>
        <block type="xmlconnect/search" name="xmlconnect.search" output="toHtml"/>
    </xmlconnect_search_index>

     <xmlconnect_search_suggest>
        <block type="xmlconnect/search_suggest" name="xmlconnect.search.suggest" output="toHtml"/>
    </xmlconnect_search_suggest>

    <xmlconnect_index_shoppingcart>
        <block type="xmlconnect/cart" name="xmlconnect.cart" output="toHtml">
            <action method="addItemRender"><type>simple</type><block>checkout/cart_item_renderer</block><template>checkout/cart/item/default.phtml</template></action>
            <action method="addItemRender"><type>configurable</type><block>checkout/cart_item_renderer_configurable</block><template>checkout/cart/item/default.phtml</template></action>
            <action method="addItemRender"><type>bundle</type><block>bundle/checkout_cart_item_renderer</block><template>checkout/cart/item/default.phtml</template></action>
            <action method="addItemRender"><type>grouped</type><block>checkout/cart_item_renderer_grouped</block><template>checkout/cart/item/default.phtml</template></action>

            <block type="xmlconnect/cart_crosssell" name="xmlconnect.cart.crosssell" as="crosssell"/>
        </block>
    </xmlconnect_index_shoppingcart>

</layout>
