<?php
    $cards = $this->getCards();
    $showCount = count($cards) > 1;
?>

<div>
<?php foreach ($cards as $key => $card): ?>
    <?php if ($showCount): ?>
        <b><?php echo sprintf($this->__('Credit Card %s'), $key + 1); ?></b><br>
    <?php endif;?>

    <div <?php if ($showCount):?> style="padding:5px 0px 10px 20px"<?php endif;?>>
    <table>
        <tbody>
        <?php foreach ($card as $info):?>
        <tr>
            <td><?php echo $info['label']; ?>:</td>
            <td><?php echo $info['value']; ?></td>
        </tr>
        <?php endforeach; ?>
        </tbody>
    </table>
    </div>
<?php endforeach; ?>
</div>
