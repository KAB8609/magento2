<?php if ($this->isItPartialAuthorization()): ?>
    <ul class="form-list" id="payment_form_<?php echo $this->getMethodCode() ?>_before" style="display:none;">
        <?php echo $this->getChildHtml('cards') ?>
    </ul>
    <script type="text/javascript">
    //<![CDATA[
    var cancelButtonId = 'payment-button-cancel';
    //searching for previous cancel button
    var buttonContainer = $('payment-buttons-container');
    if (buttonContainer) {
        buttonContainer.select('button').each(function(element){
            if (element.id == cancelButtonId) {
                cancelButton = element;
            } else {
                continueButton = element;
            }
        });
    }

    if (continueButton && !cancelButton) {
        var cancelButton = continueButton.cloneNode(true);
        cancelButton.id = cancelButtonId;
        cancelButton.innerHTML = '<span><span><?php echo $this->__('Cancel') ?></span></span>';
        cancelButton.onclick = false;
        Event.observe(cancelButton, 'click', cancelPaymentAuthorizations);

        Element.insert(continueButton, {'after': cancelButton});
    }

    function cancelPaymentAuthorizations(event){
        if (!confirm('<?php echo $this->getCancelConfirmationMessage() ?>')) {
            return;
        }
        $('cancel-please-wait').show();
        new Ajax.Request('<?php echo $this->getCancelUrl() ?>', {
            onSuccess : function(transport) {
                $('cancel-please-wait').hide();
                try{
                    response = eval('(' + transport.responseText + ')');
                } catch (e) {
                    response = {};
                }
                if (response.success) {
                    $(cancelButtonId).remove();
                    $('checkout-payment-method-load').update(response.update_html);
                } else {
                    var msg = response.error_message;
                    if (msg) {
                        alert(msg);
                    }
                }
            }
        });
    }
    //]]>
    </script>
    <span id="cancel-please-wait" class="please-wait" style="display:none">
        <img src="<?php echo $this->getSkinUrl('images/opc-ajax-loader.gif') ?>" alt="" class="v-middle" /> <?php echo $this->__('Porcessing...') ?>
    </span>
<?php endif;?>
