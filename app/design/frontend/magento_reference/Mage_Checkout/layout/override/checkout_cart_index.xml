<layout version="0.1.0">
    <checkout_cart_index translate="label" type="page" parent="default">
        <label>Shopping Cart</label>
        <reference name="root">
            <action method="setTemplate">
                <template>1column.phtml</template>
            </action>
        </reference>
        <reference name="page.main.title">
            <block type="Mage_Checkout_Block_Cart" name="checkout.cart.methods.top" before="-">
                <action method="setCartTemplate">
                    <value>cart/methods.phtml</value>
                </action>
                <action method="setEmptyTemplate">
                    <value/>
                </action>
                <action method="chooseTemplate"/>
                <container name="checkout.cart.top_methods" as="top_methods" label="Payment Methods Before Checkout Button">
                    <block type="Mage_Checkout_Block_Onepage_Link" name="checkout.cart.methods.onepage.top" template="onepage/link.phtml"/>
                </container>
            </block>
        </reference>
        <reference name="content">
            <container name="checkout.cart.container" label="invisible" htmlTag="div" htmlClass="cart container">
                <block type="Mage_Checkout_Block_Cart" name="checkout.cart">
                    <action method="setCartTemplate">
                        <value>cart.phtml</value>
                    </action>
                    <action method="setEmptyTemplate">
                        <value>cart/noItems.phtml</value>
                    </action>
                    <action method="chooseTemplate"/>
                    <block type="Mage_Checkout_Block_Cart" name="checkout.cart.form" template="cart/form.phtml">
                        <container name="checkout.cart.form.before" as="form_before" label="Shopping Cart Items Before" htmlTag="div" htmlClass="rewards"/>
                        <action method="addItemRender">
                            <type>simple</type>
                            <block>Mage_Checkout_Block_Cart_Item_Renderer</block>
                            <template>cart/item/default.phtml</template>
                        </action>
                        <action method="addItemRender">
                            <type>grouped</type>
                            <block>Mage_Checkout_Block_Cart_Item_Renderer_Grouped</block>
                            <template>cart/item/default.phtml</template>
                        </action>
                        <action method="addItemRender">
                            <type>configurable</type>
                            <block>Mage_Checkout_Block_Cart_Item_Renderer_Configurable</block>
                            <template>cart/item/default.phtml</template>
                        </action>
                        <container name="checkout.cart.widget" as="checkout_cart_widget" label="Shopping Cart Items After"/>
                    </block>
                    <container name="cart.summary" label="Cart Summary Container" htmlTag="div" htmlClass="cart summary">
                        <block type="Mage_Core_Block_Text" name="checkout.cart.summary.title" before="-">
                            <action method="setText" translate="text" module="Mage_Checkout">
                                <text>Summary</text>
                            </action>
                            <action method="addText">
                                <tag><![CDATA[<strong class="summary title">]]></tag>
                                <before>1</before>
                            </action>
                            <action method="addText">
                                <tag><![CDATA[</strong>]]></tag>
                            </action>
                        </block>
                        <block type="Mage_Checkout_Block_Cart_Shipping" name="checkout.cart.shipping" as="shipping" after="checkout.cart.summary.title" template="cart/shipping.phtml"/>
                        <block type="Mage_Checkout_Block_Cart_Coupon" name="checkout.cart.coupon" as="coupon" after="checkout.cart.shipping" template="cart/coupon.phtml"/>
                        <block type="Mage_Checkout_Block_Cart_Totals" name="checkout.cart.totals" as="totals" template="cart/totals.phtml"/>
                        <block type="Mage_Checkout_Block_Cart" name="checkout.cart.methods.bottom" template="cart/methods.phtml">
                            <container name="checkout.cart.methods" as="methods" label="Payment Methods After Checkout Button">
                                <block type="Mage_Checkout_Block_Onepage_Link" name="checkout.cart.methods.onepage.bottom" template="onepage/link.phtml"/>
                                <!-- <block type="Mage_Checkout_Block_Multishipping_Link" name="checkout.cart.methods.multishipping" template="multishipping/link.phtml"/> -->
                            </container>
                        </block>
                        <container name="checkout.cart.empty.widget" as="checkout_cart_empty_widget" label="Empty Shopping Cart Content Before"/>
                    </container>
                </block>
            </container>
            <block type="Mage_Checkout_Block_Cart_Crosssell" name="checkout.cart.crosssell" template="Mage_Catalog::product/list/items.phtml" after="-">
                <action method="setType">
                    <type>crosssell</type>
                </action>
            </block>
        </reference>
        <container name="additional.product.info" label="Additional Product Info"/>
    </checkout_cart_index>
</layout>
