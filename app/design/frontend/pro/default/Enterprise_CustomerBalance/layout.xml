<layout version="0.1.0">
    <customer_account>
        <reference name="customer_account_navigation">
            <action method="addLink" translate="label" module="Enterprise_CustomerBalance">
                <name>enterprise_customerbalance</name>
                <path>enterprise_customerbalance/info/</path>
                <label>Store Credit</label>
            </action>
        </reference>
    </customer_account>

    <enterprise_customerbalance_info_index translate="label" module="Enterprise_CustomerBalance">
        <label>Customer My Account Store Credit</label>
        <update handle="customer_account"/>

        <reference name="my.account.wrapper">
            <block type="Mage_Core_Block_Template" name="customerbalance.wrapper" template="Enterprise_CustomerBalance::account/wrapper.phtml" translate="label">
                <label>Store Credit Balance and History Wrapper</label>
                <block type="Enterprise_CustomerBalance_Block_Account_Balance" name="balance" template="account/balance.phtml" before="-" />
                <block type="Enterprise_CustomerBalance_Block_Account_History" name="history" template="account/history.phtml" after="-" />
            </block>
        </reference>
    </enterprise_customerbalance_info_index>

    <checkout_onepage_index>
        <reference name="checkout.onepage.payment.methods_additional">
            <block type="Enterprise_CustomerBalance_Block_Checkout_Onepage_Payment_Additional" template="checkout/onepage/payment/additional.phtml" name="customerbalance" />
        </reference>
    </checkout_onepage_index>

    <checkout_onepage_paymentmethod>
        <reference name="checkout.onepage.payment.methods.scripts">
            <block type="Enterprise_CustomerBalance_Block_Checkout_Onepage_Payment_Additional" template="checkout/onepage/payment/scripts.phtml" name="customerbalance_scripts" />
        </reference>
    </checkout_onepage_paymentmethod>

    <sales_order_view>
        <reference name="order_totals">
            <block type="Enterprise_CustomerBalance_Block_Sales_Order_Customerbalance" name="customerbalance" template="order/customerbalance.phtml" />
            <block type="Enterprise_CustomerBalance_Block_Sales_Order_Customerbalance" name="customerbalance_total_refunded" template="order/customerbalance_refunded.phtml" after="-">
                <action method="setAfterTotal"><value>grand_total</value></action>
            </block>
        </reference>
    </sales_order_view>
    <sales_order_print>
        <reference name="order_totals">
            <block type="Enterprise_CustomerBalance_Block_Sales_Order_Customerbalance" name="customerbalance" template="order/customerbalance.phtml" />
            <block type="Enterprise_CustomerBalance_Block_Sales_Order_Customerbalance" name="customerbalance_total_refunded" template="order/customerbalance_refunded.phtml" after="-">
                <action method="setAfterTotal"><value>grand_total</value></action>
            </block>
        </reference>
    </sales_order_print>
    <sales_email_order_items>
        <reference name="order_totals">
            <block type="Enterprise_CustomerBalance_Block_Sales_Order_Customerbalance" name="customerbalance" template="order/customerbalance.phtml" />
            <block type="Enterprise_CustomerBalance_Block_Sales_Order_Customerbalance" name="customerbalance_total_refunded" template="order/customerbalance_refunded.phtml" after="-">
                <action method="setAfterTotal"><value>grand_total</value></action>
            </block>
        </reference>
    </sales_email_order_items>


    <sales_order_invoice>
        <reference name="invoice_totals">
            <block type="Enterprise_CustomerBalance_Block_Sales_Order_Customerbalance" name="customerbalance" template="order/customerbalance.phtml" />
        </reference>
    </sales_order_invoice>
    <sales_order_printinvoice>
        <reference name="invoice_totals">
            <block type="Enterprise_CustomerBalance_Block_Sales_Order_Customerbalance" name="customerbalance" template="order/customerbalance.phtml" />
        </reference>
    </sales_order_printinvoice>
    <sales_email_order_invoice_items>
        <reference name="invoice_totals">
            <block type="Enterprise_CustomerBalance_Block_Sales_Order_Customerbalance" name="customerbalance" template="order/customerbalance.phtml" />
        </reference>
    </sales_email_order_invoice_items>

    <sales_order_creditmemo>
        <reference name="creditmemo_totals">
            <block type="Enterprise_CustomerBalance_Block_Sales_Order_Customerbalance" name="customerbalance" template="order/customerbalance.phtml" />
            <block type="Enterprise_CustomerBalance_Block_Sales_Order_Customerbalance" name="customerbalance_total_refunded" template="order/customerbalance_refunded.phtml" after="-">
                <action method="setAfterTotal"><value>grand_total</value></action>
            </block>
        </reference>
    </sales_order_creditmemo>
    <sales_order_printcreditmemo>
        <reference name="creditmemo_totals">
            <block type="Enterprise_CustomerBalance_Block_Sales_Order_Customerbalance" name="customerbalance" template="order/customerbalance.phtml" />
            <block type="Enterprise_CustomerBalance_Block_Sales_Order_Customerbalance" name="customerbalance_total_refunded" template="order/customerbalance_refunded.phtml" after="-">
                <action method="setAfterTotal"><value>grand_total</value></action>
            </block>
        </reference>
    </sales_order_printcreditmemo>
    <sales_email_order_creditmemo_items>
        <reference name="creditmemo_totals">
            <block type="Enterprise_CustomerBalance_Block_Sales_Order_Customerbalance" name="customerbalance" template="order/customerbalance.phtml" />
            <block type="Enterprise_CustomerBalance_Block_Sales_Order_Customerbalance" name="customerbalance_total_refunded" template="order/customerbalance_refunded.phtml" after="-">
                <action method="setAfterTotal"><value>grand_total</value></action>
            </block>
        </reference>
    </sales_email_order_creditmemo_items>


    <checkout_multishipping_billing>
        <reference name="payment_methods_before">
            <block type="Enterprise_CustomerBalance_Block_Checkout_Onepage_Payment_Additional" template="checkout/multishipping/payment.phtml" name="customerbalance" />
        </reference>
    </checkout_multishipping_billing>
</layout>
