<layout version="0.1.0">
    <enterprise_invitation_index_send>
        <reference name="invitations.form.form.before">
            <block type="Enterprise_Reward_Block_Tooltip" name="reward.tooltip.invitation" template="tooltip.phtml">
                <action method="initRewardType">
                    <type>Enterprise_Reward_Model_Action_InvitationCustomer</type>
                </action>
                <action method="setWrapperClass">
                    <class>reward-invitation</class>
                </action>
                <action method="setHideBalance">
                    <value>1</value>
                </action>
                <action method="setRewardMessage" translate="message" module="Enterprise_Reward">
                    <message>Send invitation now and earn %s when your invitee registers on our site.</message>
                </action>
                <action method="setRewardQtyLimitationMessage" translate="message" module="Enterprise_Reward">
                    <message>Up to %s invitee registration(s) can be rewarded.</message>
                </action>
            </block>
            <block type="Enterprise_Reward_Block_Tooltip" name="reward.tooltip.invitation.order" template="tooltip.phtml">
                <action method="initRewardType">
                    <type>Enterprise_Reward_Model_Action_InvitationOrder</type>
                </action>
                <action method="setWrapperClass">
                    <class>reward-invitation</class>
                </action>
                <action method="setHideLink">
                    <value>1</value>
                </action>
                <action method="setRewardMessage" translate="message" module="Enterprise_Reward">
                    <message>Earn %s for purchases by your invitees.</message>
                </action>
                <action method="setRewardQtyLimitationMessage" translate="message" module="Enterprise_Reward">
                    <message>Up to %s invitee purchase(s) can be rewarded.</message>
                </action>
            </block>
        </reference>
    </enterprise_invitation_index_send>
</layout>
