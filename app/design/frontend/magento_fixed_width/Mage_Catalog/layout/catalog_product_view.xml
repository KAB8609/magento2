<layout version="0.1.0">
    <catalog_product_view>
        <update handle="page_one_column"/>
        <reference name="head">
            <block type="Mage_Page_Block_Html_Head_Script" name="jquery-jqzoom-js-jquery-jqzoom-core-pack-js">
                <arguments>
                    <file>jquery/jqzoom/js/jquery.jqzoom-core-pack.js</file>
                </arguments>
            </block>
            <block type="Mage_Page_Block_Html_Head_Css" name="jquery-jqzoom-css-jquery-jqzoom-css">
                <arguments>
                    <file>jquery/jqzoom/css/jquery.jqzoom.css</file>
                </arguments>
            </block>
        </reference>
        <remove name="mage-catalog-zoom-css"/>
        <reference name="product.info">
            <block type="Mage_Catalog_Block_Product_View" name="product.tierprices" as="tierprices" template="product/view/tierprices.phtml"/>
        </reference>
        <move element="catalog.product.related" destination="product.info" as="relatedProducts"/>
        <move element="product.clone_prices" destination="product.info.options.wrapper.bottom" after="product.info.addto.additional"/>
        <move element="product.tierprices.additional" destination="product.info.options.wrapper.bottom" after="product.clone_prices"/>
    </catalog_product_view>
</layout>
