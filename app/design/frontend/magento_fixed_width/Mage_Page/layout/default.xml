<layout version="0.1.0">
    <default>
        <reference name="root">
            <container name="breadcrumbs.container" as="breadcrumbsContainer" after="header" label="Breadcrumbs"/>
            <container name="footer.before" as="footer_before" before="footer" label="Page Footer" htmlTag="div" htmlClass="footer-before-container"/>
        </reference>
        <move element="breadcrumbs" destination="breadcrumbs.container"/>
        <reference name="head">
            <block type="Mage_Page_Block_Html_Head_Css" name="css-styles-css">
                <arguments>
                    <file>css/styles.css</file>
                </arguments>
            </block>
            <block type="Mage_Page_Block_Html_Head_Css" name="css-styles-ie-css">
                <arguments>
                    <file>css/styles-ie.css</file>
                    <properties>
                        <attributes/>
                        <ie_condition>lt IE 8</ie_condition>
                    </properties>
                </arguments>
            </block>
            <block type="Mage_Page_Block_Html_Head_Css" name="css-print-css">
                <arguments>
                    <file>css/print.css</file>
                    <properties>
                        <attributes>media="print"</attributes>
                    </properties>
                </arguments>
            </block>
        </reference>
        <reference name="header">
            <block type="Mage_Page_Block_Links" name="account.links" as="accountLinks" before="top.links">
                <arguments>
                    <css_class>links</css_class>
                </arguments>
            </block>
            <block type="Mage_Page_Block_Links" name="checkout.links" as="checkoutLinks" after="top.links">
                <arguments>
                    <css_class>links</css_class>
                </arguments>
            </block>
            <container name="top.switches" as="switches" label="Store Language" after="checkout.links"/>
            <block type="Mage_Page_Block_Html_Welcome" name="welcome" as="welcome" after="top.container"/>
        </reference>
        <move element="store_language" destination="top.switches"/>
        <move element="store_switcher" destination="footer" as="store_switcher" after="-"/>
        <remove name="bottom.container"/>
    </default>
</layout>
