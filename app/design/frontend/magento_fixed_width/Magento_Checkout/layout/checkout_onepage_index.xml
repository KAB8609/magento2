<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <update handle="page_one_column"/>
    <reference name="head">
        <action method="addJs">
            <argument name="file" xsi:type="string">Magento_Checkout::js/opcheckout.js</argument>
        </action>
    </reference>
    <move element="checkout.progress" destination="checkout.onepage" as="checkoutProgress" before="-"/>
    <remove name="checkout.progress.wrapper"/>
    <reference name="checkout.onepage.payment">
        <block class="Magento_Core_Block_Template" name="checkout.onepage.payment.additional" as="additional" after="checkout.payment.methods"/>
        <block class="Magento_Core_Block_Template" name="checkout.onepage.payment.methods_additional" as="methods_additional" after="checkout.onepage.payment.additional"/>
    </reference>
</layout>
