<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <update handle="page_one_column"/>
    <referenceBlock name="head">
        <block class="Magento\Page\Block\Html\Head\Script" name="magento-checkout-js-opcheckout-js">
            <arguments>
                <argument name="file" xsi:type="string">Magento_Checkout::js/opcheckout.js</argument>
            </arguments>
        </block>
    </referenceBlock>
    <move element="checkout.progress" destination="checkout.onepage" as="checkoutProgress" before="-"/>
    <remove name="checkout.progress.wrapper"/>
    <referenceBlock name="checkout.onepage.payment">
        <block class="Magento\View\Block\Template" name="checkout.onepage.payment.additional" as="additional" after="checkout.payment.methods"/>
        <block class="Magento\View\Block\Template" name="checkout.onepage.payment.methods_additional" as="methods_additional" after="checkout.onepage.payment.additional"/>
    </referenceBlock>
</layout>
