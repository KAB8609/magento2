<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <remove name="checkout_page_head_components"/>
    <remove name="my-cart-link"/>
    <move element="onepage-checkout-link" destination="checkout.links"/>
    <move element="cart_sidebar" destination="header" as="topCart"/>
    <referenceBlock name="cart_sidebar">
        <action method="setTemplate">
            <argument name="template" xsi:type="string">cart/cartheader.phtml</argument>
        </action>
    </referenceBlock>
</layout>
