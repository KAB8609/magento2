<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <handle id="default">
        <reference name="account_links">
            <action method="removeAuthLink">
                <argument name="target" xsi:type="string">top.links</argument>
            </action>
            <action method="addAuthLink">
                <argument name="target" xsi:type="string">account.links</argument>
                <argument name="position" xsi:type="string">100</argument>
            </action>
            <action method="addRegisterLink" translate="text_before">
                <argument name="target" xsi:type="string">account.links</argument>
                <argument name="position" xsi:type="string">100</argument>
                <argument name="text_before" xsi:type="string"> or </argument>
                <argument name="text_after" xsi:type="string">.</argument>
            </action>
        </reference>
    </handle>
</layout>
