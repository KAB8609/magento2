<div class="catalog-nav">
    <h2>Shop by Department</h2>
    <div class="category-nav">
        <ul class="categories">
            <?foreach ($categories as $_node):?>
                <li><a href="<?=$baseUrl?>catalog/category/view/id/<?=$_node->getId()?>/" <?if (!empty($currentCategoryId) && $_node->getId()==$currentCategoryId):?> 
								class="active"<?endif?>><?=$_node->getName()?></a></li>
            <?endforeach?>
        </ul>
    </div>
    <?if(!empty($manufacturers)):?>
    <h2>Shop by Brand</h2>
        <select name="manufacturer" onchange="productBy('manufacturer',this)">
            <option>Choose Brand</option>
        <?foreach($manufacturers as $_item):?>
            <option value="<?=$_item['value']?>"><?=$_item['label']?></option>
        <?endforeach?>
        </select>
    <?endif?>
    <?if(!empty($types)):?>
    <h2>Shop by Shoe Type</h2>
        <select name="type" onchange="productBy('type',this)">
            <option>Choose Shoe Type</option>
        <?foreach($types as $_item):?>
            <option value="<?=$_item['value']?>"><?=$_item['label']?></option>
        <?endforeach?>
        </select>
    <?endif?>
</div>
<script type="text/javascript">
function productBy(attribute, element){
    location.href = '<?=$baseUrl?>catalog/search/by/attr/'+attribute+'/value/'+element.value+'/';
}
</script>