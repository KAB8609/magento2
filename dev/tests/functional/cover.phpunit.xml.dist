    <filter>
        <whitelist>
            <directory>../app/code/Mage</directory>
            <exclude>
                <directory>../lib</directory>
                <directory>../app/code/Mage/Admin/Model/Acl/Assert</directory>
                <directory>../app/code/Magento/Adminhtml/Block</directory>
                <directory>../app/code/Magento/Install</directory>
                <directory>../app/code/Magento/Reports</directory>
                <directory>../app/code/Magento/Api/Model/Acl/Assert</directory>
                <directory>../app/code/Magento/Index</directory>
                <directory>../app/code/Mage/Cybersource</directory>
                <file>../app/code/Mage/Captcha/Model/Captcha.php</file>
                <file>../app/code/Magento/Payment/Model/Paygate/Request.php</file>
                <file>../app/code/Magento/Sales/Model/Mysql4/Report/Abstract.php</file>
