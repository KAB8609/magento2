<phpunit bootstrap="./framework/bootstrap.php">
    <testsuites>
        <testsuite name="Javascript Static Code Analysis">
            <file>testsuite/Js/LiveCodeTest.php</file>
        </testsuite>
        <testsuite name="PHP Coding Standard Verification">
            <file>testsuite/Php/LiveCodeTest.php</file>
        </testsuite>
        <testsuite name="Code Integrity Tests">
            <directory>testsuite/Integrity</directory>
        </testsuite>
    </testsuites>
    <php>
        <ini name="date.timezone" value="America/Los_Angeles"/>
        <!--
        * TESTS_JSHINT_PATH specify the path to wsh.js on Windows and jshint-rhino.js on Linux
        * For example, on Windows <const name="TESTS_JSHINT_PATH" value="C:\jshint\env\wsh.js"/>
        * On Linux <const name="TESTS_JSHINT_PATH" value="/var/jshint-rhino.js"/>
        -->
        <const name="TESTS_JSHINT_PATH" value="/path/to/wsh.js/or/jshint-rhino.js"/>
        <!--
        * Options specified here are JSHint global options that apply to all js files.
        * For example eqnull:true will silence JSHint's complain to use === to compare to null
        * File specific options can be included in each js file as /*jshint eqnull:true */ at top of the file.
        * File specific options will overwrite global options specified here.
        * const example
        * On Windows <const name="TESTS_JSHINT_OPTIONS" value="/global:document:true,mage:true /jquery:true /eqnull:true"/>
        * On Linux <const name="TESTS_JSHINT_OPTIONS" value="eqnull=true"/>
        -->
        <const name="TESTS_JSHINT_OPTIONS" value=""/>
    </php>
</phpunit>
