<phpunit bootstrap="./framework/bootstrap.php">
    <testsuites>
        <testsuite name="Javascript Static Code Analysis">
            <file>testsuite/Js/LiveCodeTest.php</file>
        </testsuite>
        <testsuite name="PHP Coding Standard Verification">
            <file>testsuite/Php/LiveCodeTest.php</file>
        </testsuite>
        <testsuite name="Code Integrity Tests">
            <directory>testsuite/Integrity</directory>
        </testsuite>
    </testsuites>
    <php>
        <ini name="date.timezone" value="America/Los_Angeles"/>
        <const name="TESTS_JSHINT_WIN_PATH" value="C:\path\to\wsh.js"/>
        <const name="TESTS_JSHINT_LINUX_PATH" value="/path/to/jshint-rhino.js"/>
        <const name="TESTS_JSHINT_LINUX_OPTIONS" value=""/>
        <const name="TESTS_JSHINT_WIN_OPTIONS"
               value="/global:document:true,mage:true,setTimeout:true,clearTimeout:true,head:true,window:true /jquery:true /eqnull:true"/>
    </php>
</phpunit>
