<config>
    <!--
        Implemented as per current convention
        https://wiki.corp.x.com/display/MDS/Versioning+Strategy+%28Draft%29#VersioningStrategy%28Draft%29-VersioninginSOAP
        IMPORTANT NOTE : baseUrl=/<VER>/url won't work since routing is not updated to handle this versioned URL pattern
        -->
    <service class="Mage_TestModule1_Service_TestInterfaceV1" baseUrl="/V1/testmodule1">
        <rest-route httpMethod="GET" method="item">/:entity_id</rest-route>
        <rest-route httpMethod="GET" method="items"></rest-route>
        <rest-route httpMethod="POST" method="create"></rest-route>
        <rest-route httpMethod="PUT" method="update">/:entity_id</rest-route>
    </service>

    <!-- Do we need to establish relation between extending Services? Do we need to -->
