<layout>
    <block name="root" class="Magento_Core_Block_Template" template="template.phtml">
        <block name="head" class="Magento_Page_Block_Html_Head">
            <action method="safeMethod">
                <argument name="arg" xsi:type="string">1</argument>
            </action>
        </block>
        <block name="custom.safe" class="Namespace_Module_Block_Safe"/>
        <container name="content">
            <block name="custom.not_safe" class="Namespace_Module_Block_NotSafe">
                <action method="setTemplate">
                    <argument name="arg" xsi:type="string">some_template.phtml</argument>
                </action>
            </block>
            <block class="Magento_Page_Block_Safe"/>
        </container>
    </block>
    <reference name="head">
        <action method="safeMethod">
            <argument name="arg" xsi:type="string">1</argument>
        </action>
    </reference>
    <reference name="custom.not_safe">
        <action method="rogueMethod">
            <argument name="block" xsi:type="string">1</argument>
        </action>
    </reference>
</layout>
