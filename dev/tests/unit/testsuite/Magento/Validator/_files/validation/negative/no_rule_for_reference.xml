<validation>
    <entity name="test_entity">
        <rules>
            <rule name="test_rule_constraint">
                <property_constraints>
                    <property name="sku">
                        <constraint class="Magento_Validator_NotEmpty" />
                        <constraint class="Magento_Validator_Alnum" />
                    </property>
                    <property name="name">
                        <constraint class="Magento_Validator_NotEmpty"/>
                        <constraint class="Magento_Validator_StringLenght">
                            <option name="min">
                                <value>10</value>
                            </option>
                            <option name="max">
                                <value>80</value>
                            </option>
                        </constraint>
                    </property>
                </property_constraints>
            </rule>
        </rules>
        <groups>
            <group name="test_group_a">
                <uses>
                    <use rule="test_invalide_rule"/>
                    <use rule="test_rule_constraint"/>
                </uses>
            </group>
            <group name="test_group_b">
                <uses>
                    <use rule="test_rule_constraint"/>
                </uses>
            </group>
        </groups>
    </entity>
</validation>
