<validation>
    <entity name="test_entity">
        <rules>
            <rule name="test_rule_zend">
                <property_constraints>
                    <property name="sku">
                        <constraint class="Zend_Validate_Alnum" />
                    </property>
                </property_constraints>
            </rule>
            <rule name="test_rule_constraint">
                <property_constraints>
                    <property name="sku">
                        <constraint class="Zend_Validate_NotEmpty" />
                    </property>
                </property_constraints>
            </rule>
        </rules>
        <groups>
            <group name="test_group_a">
                <uses>
                    <use rule="test_rule_zend"/>
                    <use rule="test_rule_constraint"/>
                </uses>
            </group>
            <group>
                <uses>
                    <use rule="test_rule_constraint"/>
                </uses>
            </group>
        </groups>
    </entity>
</validation>
