        <action method="addJs">
            <argument name="arg" xsi:type="string">1</argument>
        </action>
    </block>
    <container name="header" label="Header">
        <block name="safe.block" class="Magento\Page\Block\Html\Header"/>
    </container>
    <container name="content" label="Content">
        <block name="custom.not_safe" class="Namespace_Module_Block_NotSafe">
            <action method="setTemplate">
                <argument name="arg" xsi:type="string">some_template.phtml</argument>
            </action>
        </block>
        <block class="Magento\Page\Block\Html" name="content_schedule_block"/>
    </container>
