<layout>
    <handle id="test_layout_update">
        <block class="Magento_Adminhtml_Block_Page" name="root" output="1" template="page.phtml">
            <block class="Magento_Adminhtml_Block_Page_Head" name="head" as="head" template="page/head.phtml">
                <action method="setTitle">
                    <argument xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" translate="true" name="title" xsi:type="string">Magento Admin</argument>
                </action>
                <action method="addJs">
                    <argument xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="file" xsi:type="string">prototype/prototype.js</argument>
                </action>
                <action method="addJs">
                    <argument xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="file" xsi:type="string">prototype/window.js</argument>
                </action>
                <action method="addJs" ifconfig="dev/js/deprecation">
                    <argument xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="file" xsi:type="string">prototype/deprecation.js</argument>
                </action>
                <block class="Magento_Core_Block_Html_Calendar" name="head.calendar" as="calendar" template="page/js/calendar.phtml"/>
            </block>
            <block class="Magento_Adminhtml_Block_Page_Header" name="header" as="header"/>
            <block class="Magento_Backend_Block_Menu" name="menu" as="menu"/>
            <block class="Magento_Core_Block_Messages" name="messages" as="messages"/>
            <block class="Magento_Core_Block_Text" as="no_name"/>
        </block>
        <update handle="layout_test_handle_sample"/>
        <remove name="header"/>
        <remove name="menu"/>
        <remove name="some_element_1"/>
        <remove name="some_element_2"/>
        <reference name="root">
            <action method="setTemplate">
                <argument xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="template" xsi:type="string">popup.phtml</argument>
            </action>
        </reference>
        <reference name="some_element_1"/>
        <block class="Magento_Core_Block_Text_List" name="test.nonexisting.block"/>
        <remove name="test.nonexisting.block"/>
        <reference name="test.nonexisting.block">
            <action method="getSomething"/>
        </reference>
    </handle>
</layout>
