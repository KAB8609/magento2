<widgets xmlns="http://www.magentocommerce.com/widget"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://www.magentocommerce.com/widget
         ../../../../../../../../app/code/Mage/Widget/etc/widget.xsd">
    <widget id="sales_widget_guestform" class="Mage_Sales_Block_Widget_Guest_Form"
            translate="label description" module="Mage_Sales" is_email_compatible="true">
        <label>Orders and Returns</label>
        <description>Orders and Returns Search Form</description>
        <parameter name="title" xsi:type="text" translate="label" visible="false">
            <label>Anchor Custom Title</label>
        </parameter>
        <!-- parameter: option -->
        <parameter name="template" xsi:type="select" visible="false">
            <option name="default" translate="label" value="hierarchy/widget/link/link_block.phtml"
                    selected="true">
                <label>CMS Page Link Block Template</label>
            </option>
            <option name="link_inline" translate="label" value="hierarchy/widget/link/link_inline.phtml">
                <label>CMS Page Link Inline Template</label>
            </option>
        </parameter>
        <!-- parameter source model -->
        <parameter name="link_display" xsi:type="select" translate="label_description" visible="true"
                   sort_order="10" source_model="Mage_Backend_Model_Config_Source_Yesno">
            <label>Display a Link to Loading a Spreadsheet</label>
            <description>Defines whether a link to My Account</description>
        </parameter>
        <!-- parameter: depends -->
        <parameter name="link_text" xsi:type="text" translate="label description value" required="true"
                   visible="true" sort_order="20">
            <label>Link Text</label>
            <description>The text of the link to the My Account &amp;gt; Order by SKU page</description>
            <depends>
                <parameter name="link_display" value="1" />
            </depends>
            <value>Load a list of SKUs</value>
        </parameter>
        <!-- value_renderer -->
        <parameter name="id_path" xsi:type="value_renderer" visible="true" required="true" sort_order="10" translate="label">
            <label>Product</label>
            <renderer class="Mage_Adminhtml_Block_Catalog_Product_Widget_Chooser">
                <data>
                    <button translate="open">
                        <open>Select Product...</open>
                    </button>
                </data>
            </renderer>
        </parameter>
        <!-- container -->
        <container section="left_column" name="left">
            <template name="default" value="default_template" />
        </container>
        <container section="right_column" name="right">
            <template name="default" value="default_template" />
        </container>
    </widget>
</widgets>
