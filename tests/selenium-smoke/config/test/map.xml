<?xml version="1.0" encoding="UTF-8"?>
<map>
    <admin>
        <topmenu>
            <customer>
                <managecustomers>//div[@class="nav-bar"]//a[span="Manage Customers"]</managecustomers>
            </customer>
            <catalog>
                <categories>
                    <managecategories>//div[@class="nav-bar"]//a[span="Manage Categories"]</managecategories>
                </categories>
            </catalog>
            <system>
                <permissions>
                    <users>//li[a/span="Permissions"]//li[a/span="Users"]/a</users>
                </permissions>
                <managestores>
                    <link>
                        <openpage>link=Manage Stores</openpage>
                    </link>                   
                </managestores>
            </system>
        </topmenu>
        <pages>
            <catalog>
                <categories>
                    <managecategories>
						<locators>
							<parentcategory>//div[contains(@class,'tree-holder') ]//a[contains(span,'%s')]</parentcategory>
						</locators>
                        <buttons>
                            <addrootcategory>add_root_category_button</addrootcategory>
                            <addsubcategory>add_subcategory_button</addsubcategory>
                            <savecategory>//button[contains(span,"Save Category")]</savecategory>
                        </buttons>
                        <inputs>
                            <name>group_3name</name>
                        </inputs>
                        <selectors>
                            <isactive>group_3is_active</isactive>
							<isanchor>group_9is_anchor</isanchor>
                        </selectors>
						<tabs>
							<displaysettings>link=Display Settings</displaysettings>
						</tabs>
                        <messages>
                            <categorysaved>//div[@id="messages"]//li[@class="success-msg"]</categorysaved>
                        </messages>
                    </managecategories>
                </categories>
            </catalog>
            <system>
                <permissions>
                    <users>
                        <manageusers>
                            <buttons>
                                <addnewuser>//button[span="Add New User"]</addnewuser>
                            </buttons>
                        </manageusers>
                        <user>
                            <inputs>
                                <username>user_username</username>
                                <firstname>user_firstname</firstname>
                                <lastname>user_lastname</lastname>
                                <email>user_email</email>
                                <password>user_password</password>
                                <confirmation>user_confirmation</confirmation>
                            </inputs>
                            <buttons>
                                <saveuser>//button[span="Save User"]</saveuser>
                            </buttons>
                            <messages>
                                <usersaved>//div[@id="messages"]//li[@class="success-msg"]</usersaved>
                            </messages>
                        </user>
                    </users>
                </permissions>
                <managestores>
                    <createsite>
                        <buttons>
                            <createwebsite>//button[span="Create Website"]</createwebsite>
                            <save>//button[span="Save Website"]</save>
                        </buttons>
                        <inputs>
                            <name>//input[@id='website_name']</name>
                            <code>//input[@id='website_code']</code>
                            <order>//input[@id='website_sort_order']</order>
                        </inputs>
                        <messages>
                            <saved>//li[@class='success-msg']</saved>
                        </messages>
                    </createsite>
                </managestores>
            </system>
            <login>
                <messages>
                    <invalidlogin>Invalid Username or Password.</invalidlogin>
                </messages>
                <images>
                    <mainlogo>//img[@class='logo']</mainlogo>
                </images>
                <fields>
                    <username>//input[@id='username']</username>
                    <password>//input[@id='login']</password>
                </fields>
                <buttons>
                    <loginbutton>//input[@title='Login']</loginbutton>
                </buttons>
            </login>
        </pages>
    </admin>
</map>
