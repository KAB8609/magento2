{

    protected $_admincategoryhelper ;

    // Place Test Data here...
    protected $_baseurl;
    protected $_username;
    protected $_password;
    protected $_parentdirname;
    protected $_dirname;


  function setUp()
  {
    $this->setBrowser("*chrome");
    $this->setBrowserUrl("http://kq.varien.com/");

    $this->_admincategoryhelper = new AdminCategoryHelper($this);

    // Get test parameters....
    //
    $this->_baseurl = "http://kq.varien.com/enterprise/1.8.0.0/index.php/control/index/";
    $this->_username = "admin";
    $this->_password = "123123q";
    $this->_parentdirname = "Default Category";
    $this->_dirname = "SL Category";
  }

  function setVerificationErrors($error) {
        array_push($this->verificationErrors, $error);
  }

  function testMyTestCase()
  {
          $this->_admincategoryhelper->doLogin( $this->_baseurl, $this->_username, $this->_password);
          $this->_admincategoryhelper->addCategory( $this->_parentdirname,$this->_dirname);
          sleep(5);
  }
