<?xml version="1.0" encoding="UTF-8"?>
<pages>
    <sales>
        <orders>
            <manage_orders>
                <buttons>
                    <create_order>//button[span='Create New Order']</create_order>
                    <order_search>//button[span='Search']</order_search>
                </buttons>
                <input>
                    <order_number>filter_real_order_id</order_number>
                </input>
                <page_elements>
                    <order_status>//table[@id='sales_order_grid_table']//*[contains(text(),'%s')]/following-sibling::*[7]</order_status>
                </page_elements>
                <locators>
                    <select_order>//table[@id='sales_order_grid_table']//td[contains(text(),'%s')]</select_order>
                </locators>
            </manage_orders>
            <edit_order>
                <buttons>
                    <create_invoce>//button[span='Invoice']</create_invoce>
                    <create_ship>//button[span='Ship']</create_ship>
                    <reorder>//button[span='Reorder']</reorder>
                    <create_memo>//button[span='Credit Memo']</create_memo>
                </buttons>
                <messages>
                    <invoice_created>//li[@class='success-msg']//*[contains(text(),'The invoice has been created.')]</invoice_created>
                    <ship_created>//li[@class='success-msg']//*[contains(text(),'The shipment has been created.')]</ship_created>
                    <c_memo_created>//li[@class='success-msg']//*[contains(text(),'The credit memo has been created.')]</c_memo_created>
                </messages>
                <page_elements>
                    <order_number>//div[@class='content-header']//h3</order_number>
                </page_elements>
            </edit_order>
            <create_order>
                <buttons>
                    <add_product>//button[span='Add Products']</add_product>
                    <product_search>//div[@id='sales_order_create_search_grid']//button[span='Search']</product_search>
                    <add_product_confirm>//button[span='Add Selected Product(s) to Order']</add_product_confirm>
                    <sumbit_order>//button[span='Submit Order']</sumbit_order>
                </buttons>
                <input>
                    <search_by_product_sku>filter_sku</search_by_product_sku>
                </input>
                <messages>
                    <order_created>//li[@class='success-msg']//*[contains(text(),'The order has been created.')]</order_created>
                    <order_not_created>//li[@class='error-msg']</order_not_created>
                    <verify_req_field>//div[@class='validation-advice']</verify_req_field>
                    <verify_shipping>//div[@id='order-shipping_method']//div[@class='fieldset']/strong</verify_shipping>
                </messages>
                <page_elements>
                    <order_page>//div[@id='order-data' and contains(@style,'')]</order_page>
                    <product_search_grid>//*[@id='sales_order_create_search_grid_table']</product_search_grid>
                </page_elements>
                <locators>
                    <select_product>//table[@id="sales_order_create_search_grid_table"]//td</select_product>
                    <get_shipping>link=Get shipping methods and rates</get_shipping>
                </locators>
                                        <!-- related pages-->
            <salect_user_for_order>
                <buttons>
                    <user_search>//button[span='Search']</user_search>
                </buttons>
                <inputs>
                    <search_by_user_email>filter_email</search_by_user_email>
                    <search_by_store_view_name>filter_store_name</search_by_store_view_name>
                </inputs>
                <locators>
                    <select_user>//table[@id="sales_order_create_customer_grid_table"]//td[contains(text(),'%s')]</select_user>
                </locators>
            </salect_user_for_order>
            <select_sore_view_for_order>
                <page_elements>
                    <loaded_store_view>//div[@id='order-store-selector' and contains(@style,'')]</loaded_store_view>
                </page_elements>
                <locators>
                    <select_store_view>//label[text()='%s']</select_store_view>
                </locators>
            </select_sore_view_for_order>
                                        <!-- related pages-->
            </create_order>
            <create_invoice>
                <buttons>
                    <sumbit_invoice>//button[span='Submit Invoice']</sumbit_invoice>
                </buttons>
            </create_invoice>
            <create_shippment>
                <buttons>
                    <sumbit_ship>//button[span='Submit Shipment']</sumbit_ship>
                </buttons>
            </create_shippment>
            <create_credit_memo>
                <buttons>
                    <sumbit_memo>//button[span='Refund Offline']</sumbit_memo>
                </buttons>
            </create_credit_memo>
        </orders>
    </sales>
    <catalog>
        <attributes>
            <manage_attribute_sets>
                <locators>
                    <open_set>//td[contains(text(),'%s')]</open_set>
                </locators>
                <buttons>
                    <add_set>//button[span="Add New Set"]</add_set>
                    <search>//button[span="Search"]</search>
                    <reset_search>//button[span="Reset Filter"]</reset_search>
                </buttons>
                <input>
                    <search_by_name>filter_set_name</search_by_name>
                </input>
                <messages>
                    <set_deleted>//li[@class='success-msg']//*[contains(text(),'The attribute set has been removed.')]</set_deleted>
                </messages>
            </manage_attribute_sets>
            <create_attribute_set>
                <buttons>
                    <save_set>//button[span="Save Attribute Set"]</save_set>
                </buttons>
                <input>
                    <set_name>attribute_set_name</set_name>
                    <based_on>skeleton_set</based_on>
                </input>
                <messages>
                    <set_saved>//li[@class='success-msg']//*[contains(text(),'The attribute set has been saved.')]</set_saved>
                    <set_not_saved>//li[@class="error-msg"]</set_not_saved>
                </messages>
            </create_attribute_set>
            <edit_atrribute_set>
                <buttons>
                    <delete_set>//button[span="Delete Attribute Set"]</delete_set>
                </buttons>
            </edit_atrribute_set>
        </attributes>
        <categories>
            <managecategories>
                <locators>
                    <parentcategory>//div[contains(@class,'tree-holder') ]//a[contains(span,'%s')]</parentcategory>
                </locators>
                <buttons>
                    <addrootcategory>add_root_category_button</addrootcategory>
                    <addsubcategory>add_subcategory_button</addsubcategory>
                    <savecategory>//button[contains(span,"Save Category")]</savecategory>
                    <delete_category>//button[contains(span,"Delete Category")]</delete_category>
                </buttons>
                <inputs>
                    <name>group_3name</name>
                </inputs>
                <selectors>
                    <isactive>group_3is_active</isactive>
                    <isanchor>group_9is_anchor</isanchor>
                    <storeswitcher>store_switcher</storeswitcher>
                </selectors>
                <tabs>
                    <displaysettings>link=Display Settings</displaysettings>
                </tabs>
                <messages>
                    <categorysaved>//div[@id="messages"]//li[@class="success-msg"]</categorysaved>
                </messages>
            </managecategories>
            <manageproducts>
                <buttons>
                    <addproduct>//button[span="Add Product"]</addproduct>
                    <addproductcontinue>//button[span="Continue"]</addproductcontinue>
                </buttons>
                                        <!-- related pages-->
                <product>
                    <inputs>
                        <name>name</name>
                        <description>description</description>
                        <short_description>short_description</short_description>
                        <sku>sku</sku>
                        <weight>weight</weight>
                        <price>price</price>
                        <inventory_qty>inventory_qty</inventory_qty>
                        <website>//*[text()='%s']</website>
                        <category>//div[@id='product-categories']//a[contains(span,'%s')]</category>
                    </inputs>
                    <selectors>
                        <status>status</status>
                        <tax_class>tax_class_id</tax_class>
                        <inventory_stock_availability>inventory_stock_availability</inventory_stock_availability>
                    </selectors>
                    <tabs>
                        <price>link=Prices</price>
                        <inventory>link=Inventory</inventory>
                        <websites>link=Websites</websites>
                        <categories>//a[@id='product_info_tabs_categories']/span</categories>
                    </tabs>
                    <buttons>
                        <save>//button[span="Save"]</save>
                    </buttons>
                    <messages>
                        <productsaved>//div[@id="messages"]//li[@class="success-msg"]</productsaved>
                        <skumustbeunique>//*[@id='advice-validate-ajax-sku']</skumustbeunique>
                    </messages>
                </product>
            </manageproducts>
        </categories>
    </catalog>
    <system>
        <permissions>
            <users>
                <manage_users>
                    <buttons>
                        <add_new_user>//button[span="Add New User"]</add_new_user>
                        <reset_filter>//button[span="Reset Filter"]</reset_filter>
                        <search>//button[span="Search"]</search>
                    </buttons>
                    <filters>
                            <user_name>//input[@id='filter_username']</user_name>
                    </filters>
                    <elements>
                            <user_table>//table[@id='permissionsUserGrid_table']</user_table>
                            <heading>//table[@id='permissionsUserGrid_table']//tr[contains(@class,'heading')]</heading>
                            <body>//table[@id='permissionsUserGrid_table']//tbody</body>
                    </elements>
                </manage_users>
                <user>
                    <inputs>
                        <user_name>user_username</user_name>
                        <first_name>user_firstname</first_name>
                        <last_name>user_lastname</last_name>
                        <email>user_email</email>
                        <password>user_password</password>
                        <confirmation>user_confirmation</confirmation>
                    </inputs>
                    <buttons>
                        <save>//button[span="Save User"]</save>
                        <delete>//button[span="Delete User"]</delete>
                    </buttons>
                </user>
            </users>
        </permissions>
        <scope>
            <manage_stores>
                <buttons>
                    <create_web_site>//button[span="Create Website"]</create_web_site>
                    <create_web_store>//button[span="Create Store"]</create_web_store>
                    <create_store_view>//button[span="Create Store View"]</create_store_view>
                    <reset_filter>//button[span="Reset Filter"]</reset_filter>
                    <search>//button[span="Search"]</search>
                </buttons>
                <filters>
                     <site_name>//input[@id='filter_website_title']</site_name>
                     <store_name>//input[@id='filter_group_title']</store_name>
                     <store_view_name>//input[@id='filter_store_title']</store_view_name>
                </filters>
                <elements>
                    <store_table>//table[@id='storeGrid_table']</store_table>
                    <body>//table[@id='storeGrid_table']</body>
                    <no_records>No records found.</no_records>
                </elements>
            </manage_stores>
            <site>
                <buttons>
                    <save>//button[span="Save Website"]</save>
                    <delete>//button[span="Delete Website"]</delete>
                    <back>//button[span="Back"]</back>
                </buttons>
                <inputs>
                    <name>//input[@id='website_name']</name>
                    <code>//input[@id='website_code']</code>
                    <order>//input[@id='website_sort_order']</order>
                </inputs>
                <elements>
                    <website_name_value>//input[@id='website_name' and @value='%s']</website_name_value>
                    <website_code_value>//input[@id='website_code' and @value='%s']</website_code_value>
                </elements>
            </site>
            <store>
                <buttons>
                    <save>//button[span="Save Store"]</save>
                    <delete>//button[span="Delete Store"]</delete>
                    <back>//button[span="Back"]</back>
                </buttons>
                <inputs>
                    <name>group_name</name>
                </inputs>
                <selectors>
                    <site>//select[@id='group_website_id']</site>
                    <root_category>//select[@id='group_root_category_id']</root_category>
                </selectors>
                <elements>
                    <website_name_value>//input[@id='website_name' and @value='%s']</website_name_value>
                    <website_code_value>//input[@id='website_code' and @value='%s']</website_code_value>
                </elements>
            </store>

            <create_backup>
                <selectors>
                    <create_backup>//select[@id='store_create_backup']</create_backup>
                </selectors>
            </create_backup>
        </scope>
    </system>
    <login>
        <messages>
            <invalidlogin>Invalid Username or Password.</invalidlogin>
        </messages>
        <images>
            <mainlogo>//img[@class='logo']</mainlogo>
        </images>
        <fields>
            <username>//input[@id='username']</username>
            <password>//input[@id='login']</password>
