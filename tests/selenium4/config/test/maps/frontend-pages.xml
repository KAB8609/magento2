<?xml version="1.0" encoding="UTF-8"?>
<pages>
    <home>
        <links>
            <myAccount>link=My Account</myAccount>
        </links>
    </home>
    <login>
        <buttons>
            <register>//button[contains(span,"Register")]</register>
            <login>//button[contains(span,"Login")]</login>
        </buttons>
    </login>
    <category>
        <links>
            <subCategory>//a[contains(span,'%s')]</subCategory>
            <productImg>//a[contains(@class,'product-image') and contains(@title,'%s') and contains(@href,'%s')]</productImg>
            <productName>//*[contains(@class,'product-name')]/a[contains(text(),'%s')]</productName>
        </links>
        <elements>
            <categoryTitle>//div[contains(@class,'page-title') and contains(@class,'category-title')]//*[contains(text(),'%s')]</categoryTitle>
        </elements>
    </category>
    <register>
        <inputs>
            <firstName>firstname</firstName>
            <lastName>lastname</lastName>
            <email>email_address</email>
            <signUpForNewsletter>is_subscribed</signUpForNewsletter>
            <password>password</password>
            <confirmation>confirmation</confirmation>
        </inputs>
        <buttons>
            <register>//button[contains(span,"Register")]</register>
            <submit>//button[contains(span,"Submit")]</submit>
            <login>//button[contains(span,"Login")]</login>
        </buttons>
        <messages>
            <customerRegistered>//*[contains(@class,"messages")]//li[@class="success-msg"]</customerRegistered>
            <alreadyExists>There is already an account with this email address</alreadyExists>
        </messages>
    </register>
    <product>
        <inputs>
            <qty>qty</qty>
        </inputs>
        <buttons>
            <addToCart>//button[contains(span,'Add to Cart')]</addToCart>
        </buttons>
        <elements>
            <productImage>//*[contains(@class,'product-image')]//img</productImage>
            <breadcrumb>//div[contains(@class,'breadcrumbs')]//li[contains(@class,'product')]//*[contains(text(),'%s')]</breadcrumb>
            <name>//*[contains(@class,'product-name')]//*[text()='%s']</name>
            <price>//*[contains(@class,'price-box')]//span[starts-with(@class,'price')]</price>
        </elements>
    </product>
    <shoppingCart>
        <buttons>
            <proceedToCheckout>//button[contains(span,'Proceed to Checkout')]</proceedToCheckout>
        </buttons>
        <links>
            <multipleShippingCheckout>//a[contains(text(),'Checkout with Multiple Addresses')]</multipleShippingCheckout>
        </links>
    </shoppingCart>
    <onePageCheckout>
        <tabs>
            <checkoutMethod>
                <inputs>
                    <asGuest>//input[@id='login:guest']</asGuest>
                    <register>//input[@id='login:register']</register>
                    <loginEmail>//input[@id='login-email']</loginEmail>
                    <password>//input[@id='login-password']</password>
                </inputs>
                <buttons>
                    <continue>//button[contains(span,'Continue')]</continue>
                    <login>//button[contains(span,'Login')]</login>
                </buttons>
            </checkoutMethod>
            <billingAddress>
                <inputs>
                    <firstName>billing:firstname</firstName>
                    <lastName>billing:lastname</lastName>
                    <company>billing:company</company>
                    <email>billing:email</email>
                    <street1>billing:street1</street1>
                    <street2>billing:street2</street2>
                    <city>billing:city</city>
                    <postcode>billing:postcode</postcode>
                    <telephone>billing:telephone</telephone>
                    <fax>billing:fax</fax>
                    <use_for_shipping>billing:use_for_shipping_yes</use_for_shipping>
                    <not_use_for_shipping>billing:use_for_shipping_no</not_use_for_shipping>
                    <password>billing:customer_password</password>
                    <confirm>billing:confirm_password</confirm>
                </inputs>
                <selectors>
                    <region>billing:region_id</region>
                    <country>billing:country_id</country>
                    <address>//select[@id='billing-address-select']</address>
                </selectors>
                <buttons>
                    <continue>//li[@id='opc-billing']//button[contains(span,'Continue')]</continue>
                </buttons>
                <elements>
                    <pleaseWait>billing-please-wait</pleaseWait>
                    <tabLoaded>//li[@id='opc-billing' and contains(@class,"allow") and contains (@class,'active')]</tabLoaded>
                </elements>
            </billingAddress>
            <shippingAddress>
                <elements>
                        <pleaseWait>shipping-please-wait</pleaseWait>
                </elements>
            </shippingAddress>
            <shippingMethod>
                <inputs>
                        <freeShipping>s_method_freeshipping_freeshipping</freeShipping>
                        <flatrate>s_method_flatrate_flatrate</flatrate>
                </inputs>
                <buttons>
                        <continue>//li[@id='opc-shipping_method']//button[contains(span,'Continue')]</continue>
                </buttons>
                <elements>
                        <pleaseWait>shipping-method-please-wait</pleaseWait>
                </elements>
            </shippingMethod>
            <paymentInfo>
                <inputs>
                    <check>p_method_checkmo</check>
                </inputs>
                <buttons>
                    <continue>//li[@id='opc-payment']//button[contains(span,'Continue')]</continue>
                </buttons>
                <elements>
                    <pleaseWait>payment-please-wait</pleaseWait>
                </elements>
            </paymentInfo>
            <orderReview>
                <buttons>
                    <placeOrder>//li[@id='opc-review']//button[contains(span,'Place Order')]</placeOrder>
                </buttons>
                <elements>
                        <pleaseWait>review-please-wait</pleaseWait>
                </elements>
            </orderReview>
            <orderPlaced>
                <links>
                    <orderID>//p[contains(text(),'Your order')]/a</orderID>
                </links>
            </orderPlaced>
        </tabs>
        <messages>
            <orderPlaced>//*[contains(text(),'Your order has been received')]</orderPlaced>
        </messages>
    </onePageCheckout>
    <multiShippingCheckout>
        <checkoutMethod>
                <inputs>
                        <email>//input[@id='email']</email>
                        <password>//input[@id='pass']</password>
                </inputs>
                <buttons>
                        <register>//button[contains(span,'Register')]</register>
                        <login>//button[contains(span,'Login')]</login>
                </buttons>
        </checkoutMethod>
        <createAccount>
                <inputs>
                        <firstName>firstname</firstName>
                        <lastName>lastname</lastName>
                        <company>company</company>
                        <email>email_address</email>
                        <street1>street_1</street1>
                        <street2>street_2</street2>
                        <city>city</city>
                        <postcode>zip</postcode>
                        <telephone>telephone</telephone>
                        <fax>fax</fax>
                        <use_for_shipping>use_for_shipping_yes</use_for_shipping>
                        <not_use_for_shipping>use_for_shipping_no</not_use_for_shipping>
                        <password>password</password>
                        <confirm>confirmation</confirm>
                </inputs>
                <selectors>
                        <region>region_id</region>
                        <country>country</country>
                </selectors>
                <buttons>
                        <submit>//button[contains(span,'Submit')]</submit>
                </buttons>
                <messages>
                        <alreadyExists>//li[contains(@class,'error-msg')]//*[contains(text(),'There is already an account with this email address. ')]</alreadyExists>
                        <success>//*[contains(@class,'messages')]//*[contains(@class,'success-msg')]</success>
                </messages>
        </createAccount>
        <tabs>
            <selectAddresses>
                <buttons>
                    <continue>//button[contains(span,'Continue to Shipping Information')]</continue>
                    <enterNewAddress>//button[contains(span,'Enter a New Address')]</enterNewAddress>
                </buttons>
                <elements>
                    <firstShippingAddress>//table[@id='multiship-addresses-table']//tbody/tr[contains(@class,'first odd')]//td[starts-with(select/@id,'ship')]/select</firstShippingAddress>
                    <lastShippingAddress>//table[@id='multiship-addresses-table']//tbody/tr[contains(@class,'last even')]//td[starts-with(select/@id,'ship')]/select</lastShippingAddress>
                </elements>
            </selectAddresses>
            <createShippingAddress>
                <inputs>
                    <firstName>firstname</firstName>
                    <lastName>lastname</lastName>
                    <company>company</company>
                    <email>email_address</email>
                    <street1>street_1</street1>
                    <street2>street_2</street2>
                    <city>city</city>
                    <postcode>zip</postcode>
                    <telephone>telephone</telephone>
                    <fax>fax</fax>
                    <primary_billing>primary_billing</primary_billing>
                    <primary_shipping>primary_shipping</primary_shipping>
                </inputs>
                <selectors>
                    <region>region_id</region>
                    <country>country</country>
                </selectors>
                <buttons>
                    <saveAddress>//button[contains(span,'Save Address')]</saveAddress>
                </buttons>
                <messages>
                    <success>//*[contains(@class,'messages')]//*[contains(@class,'success-msg')]</success>
                </messages>
            </createShippingAddress>
            <shippingInformation>
                <buttons>
                    <continue>//button[contains(span,'Continue to Billing Information')]</continue>
                </buttons>
                <elements>
                    <addressPane>//fieldset[contains(@class,'multiple-checkout')]//div[contains(@class,'col2-set')]</addressPane>
                </elements>
            </shippingInformation>
            <billingInformation>
                <inputs>
                    <check>p_method_checkmo</check>
                </inputs>
                <buttons>
                    <continue>//button[contains(span,'Continue to Review Your Order')]</continue>
                </buttons>
            </billingInformation>
            <placeOrder>
                <buttons>
                    <placeOrder>//button[contains(span,'Place Order')]</placeOrder>
                </buttons>
            </placeOrder>
            <orderSuccess>
                <messages>
                    <orderSuccess>//*[contains(text(),'Thank you for your purchase!')]</orderSuccess>
                </messages>
            </orderSuccess>
        </tabs>
    </multiShippingCheckout>
</pages>
