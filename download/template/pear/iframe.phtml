<a name="pear_iframe"></a>
<iframe id="pear_iframe" name="pear_iframe" src="<?php echo $this->url('empty') ?>" style="display:none; width:100%; height:500px;" frameborder="no"></iframe>

<script type="text/javascript">
function disableInputs(flag)
{
    parent.$$('input, select, button').each(function(el){ el.disabled = flag });
}

function onSubmit()
{
    $('pear_iframe').style.display = '';
    location.href = '#pear_iframe';
}

function onSuccess()
{
    var div = $('pear_iframe_success');
    if (div) {
        top.location.href = top.location.href.replace(/#.*$/, '')+'#pear_iframe_result';
        div.style.display = '';
    }
}

function onFailure()
{
    var div = $('pear_iframe_failure'); 
    if (div) { 
        top.location.href = top.location.href.replace(/#.*$/, '')+'#pear_iframe_result';
        div.style.display = '';
    }
}
</script>
